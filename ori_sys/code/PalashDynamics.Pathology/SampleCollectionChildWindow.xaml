<controls:ChildWindow x:Class="PalashDynamics.Pathology.SampleCollectionChildWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:CustomCombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
           Width="350" Height="200" 
           Title="Sample Collection">
    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </controls:ChildWindow.Resources>

    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>                
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Sample No. :" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="txtSampleNo" Grid.Column="1" Margin="5" TextChanged="txtSampleNo_TextChanged" KeyDown="txtSampleNo_KeyDown" />
            <TextBlock Grid.Row="1" Text="Out Sourced :" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
            <CheckBox x:Name="chkIsOutSourced" Grid.Row="1" Grid.Column="1" Margin="5" HorizontalAlignment="Left" VerticalAlignment="Center" Click="chkIsOutSourced_Click"/>
            <TextBlock x:Name="tblAgencyName" Visibility="Collapsed" Grid.Row="2" Text="Agency Name :" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
            <!--<TextBox Visibility="Collapsed" x:Name="txtAgencyName" Grid.Row="2" Grid.Column="1" Margin="5"/>-->
            <CustomCombo:AutoCompleteComboBox Visibility="Collapsed" x:Name="txtAgencyName" Grid.Row="2" Grid.Column="1" Margin="5" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID"></CustomCombo:AutoCompleteComboBox>
            <TextBlock Grid.Row="3" Text="Quantity :" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="txtQuantity" TextAlignment="Right" Grid.Row="3" Grid.Column="1" Margin="5" TextChanged="txtQuantity_TextChanged" KeyDown="txtQuantity_KeyDown"/>
            <TextBlock Text="ml" Grid.Row="3" Grid.Column="2" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" ></TextBlock>
        </Grid>

        <StackPanel Grid.Row="3" x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
        <StackPanel x:Name="SaveCommandPanel" Orientation="Horizontal"  Margin="0,0,0,0">
            <ToggleButton  x:Name="cmdSave"  Grid.Row="4" Content="OK" MinWidth="50" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch"  Visibility="Visible" Style="{StaticResource ToggleButtonStyle}" Click="cmdSave_Click"  TabIndex="24"/>
            <ToggleButton  x:Name="cmdClose"  Grid.Row="4" Content="Close" MinWidth="50" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch"  Visibility="Visible"  Style="{StaticResource ToggleButtonStyle}" Click="cmdClose_Click"  TabIndex="25"/>
        </StackPanel>
        </StackPanel>
    </Grid>
</controls:ChildWindow>