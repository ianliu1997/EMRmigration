<controls:ChildWindow x:Class="PalashDynamics.Pathology.PathologyForms.SampleCollectionTimeChildWindow"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
  xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
  xmlns:CustomCombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
  xmlns:Localization="clr-namespace:PalashDynamic.Localization;assembly=PalashDynamic.Localization"
  xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"
  xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox" 
     Width="auto" Height="auto"      xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit" Loaded="SampleCollectionTimeChildWindow_Loaded">
    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Localization:Localized x:Key="locResource"></Localization:Localized>
        </ResourceDictionary>

    </controls:ChildWindow.Resources>

    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>

            </Grid.ColumnDefinitions>
            <TextBlock x:Name="lblsampleCollectionDate" Text="Sample Collection Date :" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>
            <TextBlock x:Name="lblSampleCollectionTime" Grid.Row="1" Text="Sample Collection Time :" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>

            <TextBlock x:Name="lblSampleDispatchDate" Grid.Row="2" Text="Sample Dispatch Date :" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>
            <TextBlock x:Name="lblSampleDispatchTime" Grid.Row="3" Text="Sample Dispatch Time :" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>

            <TextBlock x:Name="lblSampleReceiveDate" Grid.Row="4" Text="Sample Receipt Date :" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>
            <TextBlock x:Name="lblSampleReceiveTime" Grid.Row="5" Text="Sample Receipt Time :" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>

            <TextBlock x:Name="lblSampleAcceptDate" Grid.Row="6" Text="Sample Acceptance Date :" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>
            <TextBlock x:Name="lblSampleAcceptTime" Grid.Row="7" Text="Sample Acceptance Time :" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>

            <!--<TextBlock x:Name="lblSampleRejectDate" Grid.Row="6" Text="Sample Reject Date :" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>
            <TextBlock x:Name="lblSampleRejectTime" Grid.Row="7" Text="Sample Reject Time :" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>-->

            <!--added by rohini dated 4/2/16 as per disscuion with nilesh sir for sample collection-->

            <TextBlock x:Name="lblStatus" Grid.Row="11" Text="Sample Status :" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4"/>
            <TextBlock x:Name="lblGestation" Grid.Row="12" Text="Gestational Age :" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>

            <TextBlock x:Name="lblCollnCenter" Grid.Row="13" Text="Sample Collection Center :" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>
            <TextBlock x:Name="lblCollectedBy" Grid.Row="14" Text="Sample Collected By :" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>

            <!--//-->

            <!--added by rohini dated 5/2/16 as per disscuion with nilesh sir for sample Dispatch-->
            <TextBlock x:Name="lblDispatchTo" Grid.Row="16" Text="Dispatched To :" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4"/>
            <TextBlock x:Name="lblDispatchBy" Grid.Row="17" Text="Dispatched By :" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>
              <!--//-->

            <!--added by rohini dated 5/2/16 as per disscuion with nilesh sir for sample Accept-->
            <TextBlock x:Name="lblAcceptedBy" Grid.Row="18" Text="Accepted By :" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4"/>
            <TextBlock x:Name="lblRemark" Grid.Row="20"  Text="Remark :" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>
            <TextBlock x:Name="lblReceivedBy" Grid.Row="22"  Text="Received By :" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>
            <!--//-->

            <TextBlock x:Name="lblRejectionRemark" Visibility="Collapsed" Grid.Row="8" Grid.Column="0" Text="Sample Rejection Remark:" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5"/>
            <TextBox x:Name="txtRejectionRemark" Visibility="Collapsed" Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" Height="80" VerticalAlignment="Stretch" VerticalContentAlignment="Top" TextWrapping="Wrap" AcceptsReturn="True"/>

            <CheckBox x:Name="chkSendSMS" Grid.Row="10" Grid.Column="0" Click="chkSendSMS_Click" Visibility="Collapsed">Send SMS</CheckBox>
            <CheckBox x:Name="chkSendEmail" Grid.Row="10" Grid.Column="1" Click="chkSendEmail_Click" Visibility="Collapsed">Send Email</CheckBox>

            <controls:DatePicker Margin="0,0,15,2"  Name="dtpSampColleDate" Grid.Column="1"  IsEnabled="False"/>
            <toolkit:TimePicker Margin="2,3,15,1" Name="dtpSampCollTime" Grid.Column="1" Grid.Row="1" IsEnabled="False"/>

            <controls:DatePicker Margin="0,0,15,2" Name="dtpDispatchDate" Grid.Column="1" Grid.Row="2" IsEnabled="False"/>
            <toolkit:TimePicker Margin="2,0,15,4" Name="dtpDispatchTime" Grid.Column="1" Grid.Row="3" IsEnabled="False"/>

            <controls:DatePicker Margin="2,1,15,1" Name="dtpSampReceDate" Grid.Column="1" Grid.Row="4" IsEnabled="False"/>
            <toolkit:TimePicker Margin="2,0,15,4" Name="dtpSampReceTime" Grid.Column="1" Grid.Row="5" IsEnabled="False"/>

            <controls:DatePicker Margin="2,1,15,1" Name="dtpSampAcceptDate" Grid.Column="1" Grid.Row="6" IsEnabled="False"/>
            <toolkit:TimePicker Margin="2,0,15,4" Name="dtpSampAcceptTime" Grid.Column="1" Grid.Row="7" IsEnabled="False"/>

            <!--added by rohini dated 4/2/16 as per disscuion with nilesh sir for sample collection-->
            <inputcombo:AutoCompleteComboBox  Grid.Row="11" Grid.Column="1" Margin="2,0,30,4" x:Name="CmbStatus"  SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID"  HorizontalAlignment="Stretch" SelectionChanged="CmbStatus_SelectionChanged" ></inputcombo:AutoCompleteComboBox >
            <TextBox Width="50"  Grid.Row="11" Grid.Column="2" x:Name="txtStatus"  Text="{Binding FastingStatusHrs,Mode=TwoWay}"  MaxLength="2"  HorizontalAlignment="Left" VerticalAlignment="Center" TextChanged="txtStatus_TextChanged"></TextBox>
            <TextBlock x:Name="lblStatus2" Margin="2,0,4,4" Grid.Row="11" Grid.Column="2" Text="Fasting Hrs" HorizontalAlignment="Right" VerticalAlignment="Center" />
            <TextBox  Grid.Row="12" Grid.Column="1" TextChanged="txtStatus_TextChanged" Width="70" x:Name="txtGestation" Margin="2,0,15,4" Text="{Binding Gestation,Mode=TwoWay}"  MaxLength="2"   HorizontalAlignment="Left" VerticalAlignment="Center"></TextBox>
            <TextBlock x:Name="lblStatus1" Grid.Row="12" Grid.Column="2" Text="Wks" HorizontalAlignment="Left" VerticalAlignment="Center"  Margin="2,0,15,4"/>
            <inputcombo:AutoCompleteComboBox  Grid.Row="13" Grid.Column="1" Margin="2,0,15,4" x:Name="CmbCollnCenter"  SelectedItemBinding="{Binding MasterListItem, Mode=TwoWay}" SelectedValuePath="ID"  HorizontalAlignment="Stretch" SelectionChanged="CmbCollnCenter_SelectionChanged" ></inputcombo:AutoCompleteComboBox >
            <TextBox  Grid.Row="13" Width="120" Grid.Column="2" x:Name="txtCollnCenter" Text="{Binding CollectionCenter,Mode=TwoWay}"  MaxLength="100"   HorizontalAlignment="Stretch" VerticalAlignment="Center"></TextBox>
            <TextBox IsEnabled="False" Grid.Row="14" Grid.Column="1" x:Name="txtSampleBy" Margin="2,0,15,4"  MaxLength="100" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></TextBox>
            <!--Text="{Binding SampleCollectedBy,Mode=TwoWay}" LostFocus="txtFirstName_LostFocus"  KeyDown="TextName_KeyDown" TextChanged="txtName_TextChanged"-->
            <!--//-->


            <!--added by rohini dated 5/2/16 as per disscuion with nilesh sir for sample Dispatch-->
            <inputcombo:AutoCompleteComboBox  Grid.Row="16" Grid.Column="1" Margin="2,0,15,4" x:Name="CmbDispatchTo"  SelectedItemBinding="{Binding MasterListItem, Mode=TwoWay}" SelectedValuePath="ID"  HorizontalAlignment="Stretch" ></inputcombo:AutoCompleteComboBox >
            <TextBox  IsEnabled="False" HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Row="17" Grid.Column="1" x:Name="txtDispatchBy" Margin="2,0,15,4"   MaxLength="100"  ></TextBox>
            <!--Text="{Binding DispatchBy,Mode=TwoWay}" KeyDown="TextName_KeyDown" LostFocus="txtDispatchBy_LostFocus" TextChanged="txtName_TextChanged"-->
            <!--//-->


            <!--added by rohini dated 5/2/16 as per disscuion with nilesh sir for sample ACCEPT-->
            <TextBox IsEnabled="False" Grid.Row="18" Grid.Column="1" x:Name="txtAcceptedBy" Margin="2,0,15,4"   MaxLength="100" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></TextBox>
            <!--Text="{Binding Description,Mode=TwoWay}"KeyDown="TextName_KeyDown" LostFocus="txtAcceptedBy_LostFocus" TextChanged="txtName_TextChanged"-->
            <TextBox  IsEnabled="False" Grid.Row="22" Grid.Column="1" x:Name="txtReceivedBy" Margin="2,0,15,4"   MaxLength="100" HorizontalAlignment="Stretch" VerticalAlignment="Center" KeyDown="TextName_KeyDown" LostFocus="txtReceivedBy_LostFocus" TextChanged="txtName_TextChanged"></TextBox> <!--Text="{Binding Description,Mode=TwoWay}"-->
            <!--<inputcombo:AutoCompleteComboBox   Margin="2,0,30,4" x:Name="CmbAcceptedBy"  SelectedItemBinding="{Binding MasterListItem, Mode=TwoWay}" SelectedValuePath="ID"  HorizontalAlignment="Stretch" ></inputcombo:AutoCompleteComboBox >-->
            <CheckBox IsEnabled="False" x:Name="rbAccepted"  Margin="5,0,0,0" Grid.Row="19" Grid.Column="1" Content="Accepted" IsChecked="true" Checked="rbAccepted_Checked" ></CheckBox>
            <!--<RadioButton x:Name="rbRejected" Margin="5,0,0,0" Grid.Row="19" Grid.Column="1"  Content="Rejected" Checked="optBoth_Checked"></RadioButton>-->                         
            <CheckBox x:Name="chkSubOptimal" Content="Sub Optimal" Margin="4" Grid.Row="19"  Grid.Column="2" IsChecked="{Binding IsCultureSenTest,Mode=TwoWay}"/>
            <TextBox Width="100" MinWidth="200"   Grid.Row="20" AcceptsReturn="True"  Grid.ColumnSpan="2"  Grid.Column="1" Height="80"  x:Name="txtAcceptRemark" Margin="2,0,30,4" Text="{Binding AcceptRemark,Mode=TwoWay}"  MaxLength="100"  HorizontalAlignment="Left" VerticalAlignment="Center"></TextBox>         
            <CheckBox x:Name="chkResendSample" Content="Resend For New Sample" Grid.ColumnSpan="2" Grid.Row="21"  Grid.Column="0" Margin="4" IsChecked="{Binding IsResendSample,Mode=TwoWay}"/>           
            <!--//-->
            
            <TextBlock Grid.Row="5" Visibility="Collapsed" Text="{Binding lblOutSourced,Source={StaticResource locResource}}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="12,5,5,5"/>
            <CheckBox x:Name="chkIsOutSourced" Visibility="Collapsed" Grid.Row="4" Grid.Column="1" Margin="0,0,31,2" HorizontalAlignment="Left" VerticalAlignment="Center" Click="chkIsOutSourced_Click"/>
            <TextBlock x:Name="tblAgency" Visibility="Collapsed" Grid.Row="5" Text="{Binding lblAgencyName,Source={StaticResource locResource}}" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="12,5,5,5"/>
            <CustomCombo:AutoCompleteComboBox Visibility="Collapsed" x:Name="txtAgencyName" Grid.Row="5" Grid.Column="1" Margin="0,0,31,2" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID"></CustomCombo:AutoCompleteComboBox>
            <TextBlock Text="{Binding lblSampleCollectionCenter,Source={StaticResource locResource}}" Visibility="Collapsed" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5" Grid.Row="6" Grid.Column="0"/>
            <TextBox x:Name="txtCollCenter" Grid.Row="6" Grid.Column="1" MaxLength="149" Margin="0,1,2,1" Visibility="Collapsed" ></TextBox>

        </Grid>
        <controlsToolkit:DockPanel Grid.Row="1" x:Name="docFooter" controlsToolkit:DockPanel.Dock="Bottom" >
            <controlsToolkit:DockPanel Margin="2" controlsToolkit:DockPanel.Dock="Top">
                <StackPanel x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                    <StackPanel x:Name="SaveCommandPanel" Orientation="Horizontal"  Margin="0,0,0,0">
                        <ToggleButton  x:Name="cmdSave" Content="Ok"  Grid.Row="4" MinWidth="50" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch"  Visibility="Visible" Style="{StaticResource ToggleButtonStyle}" Click="cmdSave_Click"  TabIndex="24"/> <!--Content="{Binding btnOK,Source={StaticResource locResource}}"-->
                        <ToggleButton  x:Name="cmdClose" Content="Cancel" Grid.Row="4"  MinWidth="50" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch"  Visibility="Visible"  Style="{StaticResource ToggleButtonStyle}" Click="cmdClose_Click"  TabIndex="25"/>  <!--Content="{Binding CmdClose,Source={StaticResource locResource}}"-->
                    </StackPanel>
                </StackPanel>
            </controlsToolkit:DockPanel>
        </controlsToolkit:DockPanel>
    </Grid>
</controls:ChildWindow>
