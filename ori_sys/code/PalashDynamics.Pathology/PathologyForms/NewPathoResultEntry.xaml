                                                <Image Source="/PalashDynamics;component/Icons/brown.png"  Height="13" Width="13" ></Image>
                                            </ToggleButton>

                                        </Grid>
                                    </StackPanel>
                                </Grp:GroupBox>
                                <Border x:Name="Buttons" Grid.Row="0" Grid.Column="2" VerticalAlignment="Bottom">
