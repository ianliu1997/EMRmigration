<controls:ChildWindow x:Class="PalashDynamics.Pathology.PathologyForms.NewBarcodeForm"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="300" Height="200" 
           Title="Barcode" Loaded="ChildWindow_Loaded">

    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:ChildWindow.Resources>

    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid x:Name="Area" Margin="2" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition ></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Visibility="Collapsed"  VerticalAlignment="Top" HorizontalAlignment="Right" Text="Print Format" Margin="4" Grid.Row="0" Grid.Column="0"></TextBlock>
                <RadioButton Visibility="Collapsed"  x:Name="rbSingle" Grid.Row="0" Grid.Column="1" Content="Single"   Click="rbSingle_Click" Margin="4" IsChecked="True"></RadioButton>
                <RadioButton Visibility="Collapsed"  x:Name="rbDouble" Content="Double" Grid.Row="0" Grid.Column="2" Click="rbDouble_Click" Margin="4"></RadioButton>
            </Grid>
            <Grid x:Name="PrintArea" Margin="2" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition ></ColumnDefinition>
                </Grid.ColumnDefinitions>

                <StackPanel x:Name="PrintBarcodeArea" Grid.Row="0" Grid.Column="0" Height="auto" Width="auto" Margin="2,0,0,0">
                    <TextBlock x:Name="MyTextName" Width="170" FontWeight="Bold"  Height="9" Grid.Row="1" Grid.Column="1" Margin="0,0,0,5" TextAlignment="Center"  FontSize="8"/>
                    <TextBlock Visibility="Collapsed" x:Name="MyTextGN_AG" Width="170" FontWeight="Bold" Height="9" Grid.Row="1" Grid.Column="1" TextAlignment="Center"  FontSize="8"/>
                    <Canvas x:Name="MyCanvas" Width="140" Height="42" Grid.Row="0"  HorizontalAlignment="Center"  Margin="0,0,0,2" Grid.Column="1"  Visibility="Visible" />
                    <TextBlock x:Name="MyText" Width="170"  FontWeight="Bold" Text="1234" Grid.Row="1" Grid.Column="1"  TextAlignment="Center"  FontSize="8" TextWrapping="Wrap"  />
                    <TextBlock Visibility="Collapsed" x:Name="MyTextDate" Width="170" Height="9" FontWeight="Bold"  Text="1234" Grid.Row="2" Grid.Column="1"  TextAlignment="Center" FontSize="8"/>
                </StackPanel>

                <StackPanel Visibility="Collapsed" x:Name="PrintBarcodeArea2" Grid.Row="0" Grid.Column="1" Height="auto" Width="auto" Margin="30,0,0,0">
                    <TextBlock x:Name="MyTextName1" Width="170" FontWeight="Bold"  Height="11" Grid.Row="1" Grid.Column="1" Margin="0,0,0,5" TextAlignment="Center"  FontSize="8"/>
                    <TextBlock Visibility="Collapsed"  x:Name="MyTextGN_AG1" Width="170" FontWeight="Bold" Height="11" Grid.Row="1" Grid.Column="1" TextAlignment="Center"  FontSize="8"/>
                    <Canvas x:Name="MyCanvas2" Width="140" Height="42" Grid.Row="0"  HorizontalAlignment="Left"  Margin="15,0,0,2" Grid.Column="1"  Visibility="Visible"/>
                    <TextBlock x:Name="MyText1" Width="170" Height="11" FontWeight="Bold" Text="1234" Grid.Row="1" Grid.Column="1"  TextAlignment="Center"  FontSize="8"/>
                    <TextBlock Visibility="Collapsed" x:Name="MyTextDate1" Width="170" Height="11" FontWeight="Bold"  Text="1234" Grid.Row="2" Grid.Column="1"  TextAlignment="Center"  FontSize="8"/>
                </StackPanel>
            </Grid>
        </Grid>
        <StackPanel Grid.Row="3" x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
            <StackPanel x:Name="SaveCommandPanel" Orientation="Horizontal"  Margin="0,0,0,0">
                <ToggleButton  x:Name="OKButton"  Grid.Row="4" Content="Print" MinWidth="50" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch"  Visibility="Visible" Style="{StaticResource ToggleButtonStyle}" Click="OKButton_Click" TabIndex="7" />
                <ToggleButton  x:Name="CancelButton"  Grid.Row="4" Content="Cancel" MinWidth="50" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch"  Visibility="Visible"  Style="{StaticResource ToggleButtonStyle}" Click="CancelButton_Click" TabIndex="8"/>
            </StackPanel>
        </StackPanel>

    </Grid>
</controls:ChildWindow>