                                                        <CheckBox x:Name="chkIrregularDiet"  Grid.Row="1" Margin="4" Content="Irregular Diet" HorizontalAlignment="Left" IsChecked="{Binding }" Grid.Column="1" />
                                                        <CheckBox x:Name="chkExertion"  Grid.Row="1" Margin="4" Content="Exertion" HorizontalAlignment="Left" IsChecked="{Binding }" Grid.Column="2" />
                                                        <CheckBox x:Name="chkCrowdedPlace"  Grid.Row="1" Margin="4" Content="Crowded Place" HorizontalAlignment="Left" IsChecked="{Binding }" Grid.Column="3" />
                                                        <CheckBox x:Name="chkteaCoffee"  Grid.Row="2" Margin="4" Content="Strong tea/Coffee" HorizontalAlignment="Left" IsChecked="{Binding }" Grid.Column="0" />
                                                        <CheckBox x:Name="chkheavyObject"  Grid.Row="2" Margin="4" Content="Lifting Heavy Object" HorizontalAlignment="Left" IsChecked="{Binding }" Grid.Column="1" />

                                                    </Grid>
                                                </GroupBox:GroupBox>

                                                <GroupBox:GroupBox x:Name="CSuggestion" Grid.Row="1" Header="Consult Your Doctor" Margin="4" Width="Auto" Height="Auto" HorizontalAlignment="Stretch">
                                                    <Grid >

                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                            <ColumnDefinition ></ColumnDefinition>
                                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock   VerticalAlignment="Center" Grid.Column="0" Grid.Row="0"  Margin="4" Text="Consult" HorizontalAlignment="Left"></TextBlock>
                                                        <!--<CustomCombo:AutoCompleteComboBox x:Name="cmbconsult"   MinimumPrefixLength="0" MinimumPopulateDelay="200" SelectedItemBinding="{Binding MasterListItem, Mode=TwoWay}" SelectedValuePath="ID" DataContext="{Binding}" Style="{StaticResource DataGridAutoCompleteTemplate1}" HorizontalAlignment="Stretch"  Margin="4" VerticalAlignment="Center" Grid.Row="0" Grid.Column="1" LostFocus="cmbconsult_LostFocus"  KeyDown="cmbconsult_KeyDown"></CustomCombo:AutoCompleteComboBox>-->
                                                        <CustomCombo:AutoCompleteComboBox  Margin="4" x:Name="cmbconsult"   Grid.Row="0" Grid.Column="1"  VerticalAlignment="Center" SelectedItemBinding="{Binding  MasterListItem, Mode=TwoWay}" SelectedValuePath="ID"  HorizontalAlignment="Stretch"  ></CustomCombo:AutoCompleteComboBox>
                                                        <TextBlock   VerticalAlignment="Center" Grid.Column="0" Grid.Row="1"  Margin="4" Text="Remark" HorizontalAlignment="Left"></TextBlock>

                                                        <TextBox x:Name="txtSuggestionRemark" Text="{Binding Remark, Mode=TwoWay}" VerticalScrollBarVisibility="Visible" Grid.RowSpan="3" Grid.ColumnSpan="3" Grid.Row="1"  Grid.Column="1" Margin="4"   />
                                                        <StackPanel Grid.Row="0" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Bottom"   toolkit:DockPanel.Dock="Top" x:Name="AddsuggestionPanel" Orientation="Horizontal"  Margin="2"  >
                                                            <ToggleButton  x:Name="AddSuggestionButton"   Content="Add" Margin="4"  Background="#000000" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="AddSuggestionButton_Click" Width="70" HorizontalAlignment="Right" />
                                                        </StackPanel>
                                                    </Grid>
                                                </GroupBox:GroupBox>

                                                <GroupBox:GroupBox x:Name="PSuggestion" Grid.Row="2" Header="Preparation For Delivery" Margin="4" Width="Auto" Height="Auto" HorizontalAlignment="Stretch">
                                                    <Grid >
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"/>
                                                        </Grid.RowDefinitions>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition >
                                                            </ColumnDefinition>
                                                            <ColumnDefinition >
                                                            </ColumnDefinition>
                                                        </Grid.ColumnDefinitions>
                                                        <CheckBox x:Name="chkBag"  Grid.Row="0" Margin="4" Content="Make a Bag of Cloths of Mother and Baby" HorizontalAlignment="Left" IsChecked="{Binding }" Grid.Column="0" />
                                                        <CheckBox x:Name="chkSheet"  Grid.Row="0" Margin="4" Content="Sheets,Toiletaries" HorizontalAlignment="Left" IsChecked="{Binding }" Grid.Column="1" />
                                                        <CheckBox x:Name="chkIsClosed" Content="Is Closed"  FontWeight="ExtraBlack" Foreground="Red" Grid.Row="0" Grid.Column="3" HorizontalAlignment="Right" Click="chkIsClosed_Click" />
                                                    </Grid>
                                                </GroupBox:GroupBox>
                                                <CheckBox x:Name="chkSuggestion" Content="Freeze"  FontWeight="ExtraBlack" Foreground="Red" Grid.Row="3"  HorizontalAlignment="Right" IsChecked="{Binding Isfreezed}" Click="chkSuggestion_Click" />
                                            </Grid>
                                        </Border>
                                    </toolkit:DockPanel>
                                </toolkit:DockPanel>
                            </controlsToolkit:DockPanel>
                        </controls:TabItem>
                    </controls:TabControl>

                </Grid>
                <!-- END BACK- PANNEL . . .-->

                <!-- FRONT PANNEL . . .-->
                <Grid  x:Name="grdFrontPanel" Grid.Row="0" Visibility="Visible">
                    <controls:TabControl Grid.Row="0" Padding="0"  x:Name="tabControlFront" Margin="4" >
                        <controls:TabItem x:Name="TabANCList" Visibility="Visible" Style="{StaticResource TabItemStyle}"  Padding="0" Margin="0" Header="List of ANC">
                            <controlsToolkit:DockPanel LastChildFill="True">
                                <controlsToolkit:DockPanel  controlsToolkit:DockPanel.Dock="Bottom">

                                </controlsToolkit:DockPanel>
                                <controlsToolkit:DockPanel controlsToolkit:DockPanel.Dock="Top">
                                    <controlsToolkit:DockPanel LastChildFill="True">
                                        <controlsToolkit:DockPanel controlsToolkit:DockPanel.Dock="Bottom">
                                            <data:DataPager x:Name="dataGrid2PagerANC" controlsToolkit:DockPanel.Dock="Bottom" DisplayMode="FirstLastPreviousNextNumeric"   Source="{Binding}" NumericButtonCount="10" AutoEllipsis="False" IsTotalItemCountFixed="True" />
                                        </controlsToolkit:DockPanel>
                                        <controlsToolkit:DockPanel controlsToolkit:DockPanel.Dock="Top">
                                            <data:DataGrid IsReadOnly="True" SelectionMode="Single" x:Name="dgANCList" ItemsSource="{Binding}"  AutoGenerateColumns="False" SelectionChanged="dgANCList_SelectionChanged"  SelectedIndex="0">

                                                <data:DataGrid.Columns>
                                                    <data:DataGridTemplateColumn>
                                                        <data:DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <Button x:Name="cmdViewANC" Click="cmdViewANC_Click" Content="View"></Button>
                                                            </DataTemplate>
                                                        </data:DataGridTemplateColumn.CellTemplate>
                                                    </data:DataGridTemplateColumn>
                                                    <data:DataGridTextColumn Binding="{Binding ANC_Code}" Header="ANC Code" />
                                                    <data:DataGridTextColumn Binding="{Binding Date,Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}" Header="ANC Start Date" />
                                                    <data:DataGridTextColumn Binding="{Binding LMPDate,Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}" Header="LMP Date" />
                                                    <data:DataGridTextColumn Binding="{Binding EDDDate,Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}" Header="EDD Date" />
                                                    <data:DataGridTemplateColumn Header="IsClosed">
                                                        <data:DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <CheckBox IsChecked="{Binding Path=IsClosed,Mode=TwoWay}"  VerticalAlignment="Center" HorizontalAlignment="Center" Width="Auto"  IsEnabled="False"></CheckBox>
                                                            </DataTemplate>
                                                        </data:DataGridTemplateColumn.CellTemplate>
                                                    </data:DataGridTemplateColumn>
                                                    <data:DataGridTemplateColumn>
                                                        <data:DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <HyperlinkButton Background="White"  VerticalAlignment="Center" Padding="5,0,5,0" IsTabStop="False" Click="btnPrint_Click"   x:Name="btnPrint" ToolTipService.ToolTip="InProgress" >
                                                                    <Image  Height="16" Stretch="Fill" Source="/PalashDynamics;component/Icons/Print_32.png"   />
                                                                </HyperlinkButton>
                                                            </DataTemplate>
                                                        </data:DataGridTemplateColumn.CellTemplate>
                                                    </data:DataGridTemplateColumn>
                                                </data:DataGrid.Columns>
                                            </data:DataGrid>
                                        </controlsToolkit:DockPanel>
                                    </controlsToolkit:DockPanel>
                                </controlsToolkit:DockPanel>
                            </controlsToolkit:DockPanel>
                        </controls:TabItem>
                    </controls:TabControl>
                </Grid>

            </Grid>
        </toolkit:DockPanel>
    </Grid>
</UserControl>
