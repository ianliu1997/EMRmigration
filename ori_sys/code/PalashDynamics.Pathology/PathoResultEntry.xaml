                                                        <ContentControl VerticalAlignment="Center" FontSize="12" Content="Test Details" Margin="-1" Style="{StaticResource Header}"     HorizontalAlignment="Stretch" />
                                                    </Border>
                                                    <Grid>
                                                        <data:DataGrid x:Name="dgTestList" AutoGenerateColumns="False" ItemsSource="{Binding}" VerticalScrollBarVisibility="Visible" Margin="0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"  TabIndex="12" CanUserSortColumns="False" >
                                                            <data:DataGrid.Columns>
                                                                <!--<data:DataGridTextColumn Binding="{Binding PathoTestName}"  Header="Test"   IsReadOnly="True"></data:DataGridTextColumn>-->
                                                                <!--<data:DataGridTextColumn Binding="{Binding PathoSubTestName}"  Header="Sub Test"  IsReadOnly="True"></data:DataGridTextColumn>-->
                                                                <data:DataGridTextColumn Binding="{Binding ParameterName}"  Header="Parameter"  IsReadOnly="True"></data:DataGridTextColumn>
                                                                <data:DataGridTextColumn Binding="{Binding Category}"  Header="Category"  IsReadOnly="True"></data:DataGridTextColumn>

                                                                <data:DataGridTextColumn Binding="{Binding ResultValue}"  Header="Result Value"  ></data:DataGridTextColumn>
                                                                <data:DataGridTextColumn Binding="{Binding DefaultValue}"  Header="DefaultValue"  IsReadOnly="True"></data:DataGridTextColumn>
                                                                <data:DataGridTextColumn Binding="{Binding NormalRange}"  Header="Normal Range"  IsReadOnly="True"></data:DataGridTextColumn>
                                                                <data:DataGridTemplateColumn>
                                                                    <data:DataGridTemplateColumn.CellTemplate>

