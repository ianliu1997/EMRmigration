                                        <TextBlock Text="Reffered By" Grid.Row="0" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4"></TextBlock>
                                        <input:AutoCompleteBox Grid.Row="0" Grid.Column="3"  x:Name="txtReferenceDoctor" Text="{Binding ReferredBy, Mode=TwoWay}" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" TabIndex="10" GotFocus="txtReferenceDoctor_GotFocus"/>

                                        <TextBlock Text="Sample Collection Time" Grid.Row="0" Grid.Column="4" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4,10,4,4"></TextBlock>
                                        <inputToolkit:TimePicker x:Name="tpCollectionTime" Value="{Binding SampleCollectionTime, Mode=TwoWay}" Grid.Row="0" Grid.Column="5" Margin="4" TabIndex="25" IsEnabled="False"  />

                                        <TextBlock Text="Pathologist" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4"></TextBlock>
                                        <inputcombo:AutoCompleteComboBox x:Name="cmbPathologist1"  ItemsSource="{Binding}" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID"   Grid.Row="1" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="4" TabIndex="6"></inputcombo:AutoCompleteComboBox>

                                        <TextBlock Text="Pathologist 2" Grid.Row="1" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4" Visibility="Collapsed"></TextBlock>
                                        <inputcombo:AutoCompleteComboBox x:Name="cmbPathologist2"  Grid.Row="1" Grid.Column="3" ItemsSource="{Binding}" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID"   HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="4" TabIndex="6"  Visibility="Collapsed"></inputcombo:AutoCompleteComboBox>

                                        <TextBlock Text="Pathologist 3" Grid.Row="1" Grid.Column="4" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4"  Visibility="Collapsed"></TextBlock>
