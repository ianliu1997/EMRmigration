                                                    <inputcombo:AutoCompleteComboBox  x:Name="cmbUploadStatus" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" VerticalAlignment="Center" Width="100" Margin="2,5,2,2" TabIndex="0"></inputcombo:AutoCompleteComboBox>
                                                </StackPanel>
                                            </GroupBox:GroupBox>
                                            <GroupBox:GroupBox Grid.Column="6" Height="Auto" Width="Auto" Margin="4,4,4,4" Header="Delivery Status" Grid.RowSpan="2">
