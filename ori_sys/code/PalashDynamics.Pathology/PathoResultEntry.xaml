                                            <GroupBox:GroupBox Grid.Column="4" Height="Auto" Width="Auto" Margin="4,4,4,4" Header="Sample Type" Grid.RowSpan="2">
                                                <StackPanel Orientation="Horizontal" Margin="5,-11,0,0">
                                                    <inputcombo:AutoCompleteComboBox  x:Name="cmbSampleType" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" VerticalAlignment="Center" Width="100" Margin="2,5,2,2" TabIndex="0"></inputcombo:AutoCompleteComboBox>
                                                </StackPanel>
                                            </GroupBox:GroupBox>
                                                <GroupBox:GroupBox Grid.Column="5" Height="Auto" Width="Auto" Margin="4,4,4,4" Header="Upload Status" Grid.RowSpan="2">
