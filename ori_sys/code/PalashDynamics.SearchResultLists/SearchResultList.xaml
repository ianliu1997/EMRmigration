<UserControl xmlns:my="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"  xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"  x:Class="PalashDynamics.SearchResultLists.SearchResultLists"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"              
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"               
    mc:Ignorable="d"  Loaded="UserControl_Loaded">
   <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
                
            </ResourceDictionary.MergedDictionaries>
            <ControlTemplate x:Key="FilledContentControlTemplate" TargetType="ContentControl">
                <Grid>
                    <ContentPresenter />
                </Grid>
            </ControlTemplate>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>            
            <ColumnDefinition ></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition  Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <!--<TextBlock  Grid.Column="0" Text="List of Tests" Margin="0"></TextBlock>-->
        <!--<StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Stretch" >
            <Grid HorizontalAlignment="Stretch" Width="100">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Grid.Row="0" Text="Search" Margin="4" x:Name="txblSearch"/>
                <my:AutoCompleteComboBox Grid.Column="1" Margin="4" x:Name="cmbSearch" HorizontalAlignment="Stretch" SelectionChanged="cmbSearch_SelectionChanged" />
            </Grid>
          
        </StackPanel>-->
        <TextBlock Grid.Column="0" Grid.Row="1" Text="Search"  x:Name="txblSearch"/>
        <!--<my:AutoCompleteComboBox Grid.Column="1" Grid.Row="1" Margin="4" x:Name="cmbSearch" HorizontalAlignment="Stretch" SelectionChanged="cmbSearch_SelectionChanged" />-->
        <!--<my:AutoCompleteComboBox Grid.Column="0" Grid.Row="1" Margin="4" x:Name="cmbSearch" HorizontalAlignment="Stretch" SelectionChanged="cmbSearch_SelectionChanged"  />-->


        <Button  x:Name="cmdAdd" Click="cmdAdd_Click"  Grid.Column="2" Grid.Row="1" ToolTipService.ToolTip="Search"  HorizontalAlignment="Left" >
            <Image Source="/PalashDynamics;component/Icons/xmag.png" Margin="2" Width="20" ></Image>
        </Button>
        <!--<ToggleButton  Margin="4"  Content="Search"  x:Name="cmdAdd" Click="cmdAdd_Click" Grid.Column="2" Grid.Row="1" ></ToggleButton>-->
        <TextBox Grid.Column="1" Grid.Row="1" Margin="4" x:Name="cmbSearch" HorizontalAlignment="Stretch"/>

        <Grid Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition ></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition ></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition ></RowDefinition>
            </Grid.RowDefinitions>
            <toolkit:DockPanel  Grid.Column="0" Grid.Row="0" Grid.RowSpan="6" LastChildFill="True">
                <sdk:DataPager x:Name="dataGrid2Pager" toolkit:DockPanel.Dock="Bottom" 
                                                        DisplayMode="FirstLastPreviousNext"  IsEnabled="True"                       
                                                        Source="{Binding}" 
                                                        AutoEllipsis="False" IsTotalItemCountFixed="True"  />
                <sdk:DataGrid  x:Name="dgSearch1" ItemsSource="{Binding}" AutoGenerateColumns="False"   Margin="4" HorizontalAlignment="Stretch" LoadingRow="dgSearch1_LoadingRow" >
                    <sdk:DataGrid.Columns>
                        <sdk:DataGridTemplateColumn >
                            <sdk:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox HorizontalAlignment="Center" Margin="4"  Checked="ChkdgSearch1_Checked"  Unchecked="ChkdgSearch1_UnChecked" IsChecked ="{Binding isChecked,Mode=TwoWay}"></CheckBox>

                                </DataTemplate>
                            </sdk:DataGridTemplateColumn.CellTemplate>

                        </sdk:DataGridTemplateColumn>
                        <sdk:DataGridTextColumn IsReadOnly="True"  Binding="{Binding Description}" x:Name="colDescription"  />

                    </sdk:DataGrid.Columns>
                </sdk:DataGrid>
            </toolkit:DockPanel>



            <!--<StackPanel  Grid.Column="1" Orientation="Vertical" Margin="4" VerticalAlignment="Center" HorizontalAlignment="Stretch" Grid.Row="2">-->
            <ToggleButton Grid.Row="1" Grid.Column="1"  Margin="4"  Content=">>" x:Name="cmdAddAll" Click="cmdAddAll_Click"  Width="25" Height="20" VerticalAlignment="Center" Visibility="Collapsed"></ToggleButton>
            <ToggleButton  Grid.Row="2"  Grid.Column="1" Margin="4"  Content=">" x:Name="cmdAdd1" Click="cmdAdd1_Click"  Width="25" Height="20" VerticalAlignment="Center"></ToggleButton>
            <ToggleButton  Grid.Row="3"  Grid.Column="1" Margin="4"  Content="&lt;" x:Name="cmdRemove" Click="cmdRemove_Click"  Width="25" Height="20" VerticalAlignment="Center"></ToggleButton>
            <ToggleButton  Grid.Row="4"  Grid.Column="1" Margin="4"  Content="&lt;&lt;" x:Name="cmdRemoveAll" Click="cmdRemoveAll_Click"  Width="25" Height="20" VerticalAlignment="Center"  Visibility="Collapsed"></ToggleButton>
            <!--</StackPanel>-->

            <sdk:DataGrid  x:Name="dgSearch2" ItemsSource="{Binding}" AutoGenerateColumns="False" Grid.Row="0" Grid.RowSpan="6" Grid.Column="2" Margin="4" HorizontalAlignment="Stretch">
                <sdk:DataGrid.Columns>
                    <sdk:DataGridTemplateColumn >
                        <sdk:DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox HorizontalAlignment="Center" Margin="4" IsEnabled="{Binding IsDefault}" Checked="dgSearch2ChkBox_Checked"  Unchecked="dgSearch2ChkBox_UnChecked"></CheckBox>

                            </DataTemplate>
                        </sdk:DataGridTemplateColumn.CellTemplate>

                    </sdk:DataGridTemplateColumn>
                    <sdk:DataGridTextColumn IsReadOnly="True"  Binding="{Binding Description}" x:Name="ColDg2Description"  />

                </sdk:DataGrid.Columns>
            </sdk:DataGrid>
        </Grid>
    </Grid>
</UserControl>
