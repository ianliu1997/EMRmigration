                                <TextBlock Foreground="Red" Name="FemaleAlert" VerticalAlignment="Center" TextAlignment="Left" Text="{Binding Alerts}" Margin="4" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="6" Height="14"></TextBlock>
