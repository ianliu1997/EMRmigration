                                            <data:DataGrid  SelectionMode="Single" x:Name="dgVitrificationDetilsGrid" ItemsSource="{Binding}"  AutoGenerateColumns="False" IsReadOnly="True" MaxHeight="100">
                                            <data:DataGrid.Columns>
                                                    <data:DataGridTextColumn Width="80" Binding="{Binding VitrificationNo}" Header="Collection No"/>
                                                    <data:DataGridTextColumn  Width="80" Binding="{Binding Volume}" Header="Volume (ml)"/>
                                                    <data:DataGridTextColumn Width="80" Binding="{Binding SpermCount}" Header="Count (Million)" />
                                                    <data:DataGridTextColumn Width="80" Binding="{Binding Motillity}" Header="Motality (%)" />
