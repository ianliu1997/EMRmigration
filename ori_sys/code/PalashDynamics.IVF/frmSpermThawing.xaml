                            <ToggleButton x:Name="cmdSave"  Content="Save" Background="#000000" Margin="4" HorizontalAlignment="Right" Style="{StaticResource ToggleButtonStyle}" Click="cmdSave_Click"></ToggleButton>
                            <ToggleButton x:Name="cmdCancel"  Content="Cancel" Background="#000000" Margin="4" HorizontalAlignment="Right" Style="{StaticResource ToggleButtonStyle}" Click="cmdCancel_Click"></ToggleButton>
                        </StackPanel>
                    </Border>
                </controlsToolkit:DockPanel>
                <Border controlsToolkit:DockPanel.Dock="Top"  BorderBrush="{StaticResource TabControlDarkerBorder}" BorderThickness="1" CornerRadius="3,3,0,0" Margin="2,2,2,2" Background="Transparent">
