<controls:ChildWindow x:Class="PalashDynamics.IVF.TherpyExecution.frmAddEvent"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:data="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"       
           xmlns:dataInput="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data.Input"                      
           Width="400" Height="300" 
           Title="frmAddEvent">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <data:DataGrid IsReadOnly="True" SelectionMode="Single" x:Name="dgChangeCouple" ItemsSource="{Binding}"  AutoGenerateColumns="False" SelectionChanged="dgChangeCouple_SelectionChanged"  SelectedIndex="0">
            <data:DataGrid.Columns>
                <data:DataGridTextColumn Header="Id" Visibility="Collapsed" Binding="{Binding MRNo}"></data:DataGridTextColumn>
                <!--<data:DataGridTextColumn Header=" " Binding="{Binding MRNo}"/>-->
                <!--<data:DataGridCheckBoxColumn Header="Select"  ></data:DataGridCheckBoxColumn>-->
                <data:DataGridTemplateColumn Header="Select" IsReadOnly="True">
                    <data:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox Margin="4"  x:Name="chkIsSelected"  IsChecked="{Binding IsDefault,Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" Click="chkIsSelected_Click"></CheckBox >
                        </DataTemplate>
                    </data:DataGridTemplateColumn.CellTemplate>
                </data:DataGridTemplateColumn>
                <data:DataGridTextColumn Header="Events" Binding="{Binding MRNo}" />
            </data:DataGrid.Columns>
        </data:DataGrid>

        <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,0,0" Grid.Row="1" />
        <Button x:Name="OKButton" Content="OK" Click="OKButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,79,0" Grid.Row="1" />
    </Grid>
</controls:ChildWindow>