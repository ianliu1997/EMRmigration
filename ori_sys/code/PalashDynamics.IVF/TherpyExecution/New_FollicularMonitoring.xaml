<controls:ChildWindow xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"  x:Class="PalashDynamics.IVF.TherpyExecution.New_FollicularMonitoring"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
            xmlns:controlsToolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
            xmlns:inputToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit"  
            xmlns:data="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"       
            xmlns:dataInput="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data.Input"
            xmlns:input="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
            xmlns:local="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters"
            xmlns:Grp="clr-namespace:Groupbox;assembly=Groupbox"
            xmlns:liquid="clr-namespace:Liquid;assembly=Liquid"
           Title="FollicularMonitoring">

    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:DateTimeConverter x:Key="DateConverter" />
            <local:DateTimeToAgePart x:Key="DateTimeToAgePart"></local:DateTimeToAgePart>
        </ResourceDictionary>
    </controls:ChildWindow.Resources>

    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <!--<RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />-->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Text="Date" Margin="4"></TextBlock>
            <controls:DatePicker SelectedDate="{Binding Date,Mode=TwoWay}" VerticalAlignment="Center" Grid.Column="1" Margin="4" x:Name="dtpFollicularDate"></controls:DatePicker>
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="2" Text="Time" Margin="4"></TextBlock>
            <inputToolkit:TimePicker Value="{Binding Date,Mode=TwoWay}" VerticalAlignment="Center" Grid.Column="3" Margin="4" x:Name="txtTime"></inputToolkit:TimePicker>
            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Text="Attending Physician" Grid.Column="0" Grid.Row="1" Margin="4"></TextBlock>

            <input:AutoCompleteComboBox  Grid.Column="1" Grid.Row="1" VerticalAlignment="Center"
                                                x:Name="cmbPhysician"
                                                IsTextCompletionEnabled="False"
                                                MinimumPrefixLength="0"
                                                MinimumPopulateDelay="200"
                                                Margin="2" 
                                                SelectedValuePath="ID"
                                                />

            <TextBlock Grid.Column="0" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Right" Text="Notes"  Margin="4"></TextBlock>
            <TextBox Text="{Binding FollicularNotes,Mode=TwoWay}" Grid.Column="1" Grid.Row="2"  Grid.ColumnSpan="3" VerticalAlignment="Center" Height="40" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" TextWrapping="Wrap"   Margin="4"></TextBox>
            <StackPanel Orientation="Horizontal" Grid.Column="0" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Right">
                <Image Source="../Icons/attachment.JPG"  MouseLeftButtonDown="Image_MouseLeftButtonDown"></Image>
                <TextBlock Grid.Column="0" Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Right" Text="Attachment"  Margin="4"></TextBlock>
            </StackPanel>
            <TextBox x:Name="txtFN" IsReadOnly="True"  Grid.Column="1" Grid.Row="3"  Grid.ColumnSpan="2" VerticalAlignment="Center"  Text="{Binding AttachmentPath,Mode=TwoWay}" Margin="4"></TextBox>
            <Button x:Name="CmdBrowse"  Content="Browse" Grid.Column="3" Grid.Row="3" Margin="4" Click="CmdBrowse_Click"></Button>

            <TextBlock Grid.Column="0" Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Right" Text="Endometrium thickness"  Margin="4"></TextBlock>
            <TextBox x:Name="txtEndometriumThickness" Text="{Binding EndometriumThickness,Mode=TwoWay}" Grid.Column="1" Grid.Row="4"   VerticalAlignment="Center"     Margin="4"  MaxLength="50"></TextBox>
            <TextBlock Grid.Column="2" Grid.Row="4" VerticalAlignment="Center" HorizontalAlignment="Left" Text="mm"  Margin="4"></TextBlock>

            <TextBlock Grid.Row="5" VerticalAlignment="Top" HorizontalAlignment="Right" Text="Follicular Size" Visibility="Collapsed"  Margin="0,4,4,0"></TextBlock>
            <StackPanel Grid.Column="1" Grid.Row="5" Grid.ColumnSpan="3" Grid.RowSpan="2">
                <data:DataGrid Height="Auto" Grid.Row="0" x:Name="dgOveryDetails" AutoGenerateColumns="False" ItemsSource="{Binding}" VerticalScrollBarVisibility="Visible" IsReadOnly="False" Margin="0,0,0,0" HorizontalAlignment="Stretch" TabIndex="2" Width="605">
                    <data:DataGrid.Columns>
                        
                        <data:DataGridTextColumn IsReadOnly="True" Header="No. of Follicular " Width="Auto"  Binding="{Binding ServiceName, Mode=TwoWay}" />
                        <data:DataGridTextColumn IsReadOnly="True" Header="Size" Width="Auto"  Binding="{Binding ServiceRate, Mode=TwoWay}" />
                        
                        <!--<data:DataGridTemplateColumn Header="Share Amount" >
                            <data:DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>
                                    <TextBox x:Name="txtDoctorShareAmount" Text="{Binding DoctorShareAmount,Mode=TwoWay,StringFormat=0.00}"  IsEnabled="False"  TextAlignment="Right" Margin="4" HorizontalAlignment="Stretch" TabIndex="2"></TextBox>
                                </DataTemplate>
                            </data:DataGridTemplateColumn.CellEditingTemplate>
                        </data:DataGridTemplateColumn>

                        <data:DataGridTextColumn IsReadOnly="False" Binding="{Binding DoctorSharePercentage, Mode=TwoWay}" Header="Share Percentage">
                            <data:DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="TextAlignment" Value="Right"/>
                                </Style>
                            </data:DataGridTextColumn.ElementStyle>
                        </data:DataGridTextColumn>

                       
