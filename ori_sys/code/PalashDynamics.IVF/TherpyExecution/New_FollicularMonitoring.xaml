                        <data:DataGridTextColumn IsReadOnly="True" Header="Modality Name" Width="Auto"  Binding="{Binding Modality, Mode=TwoWay}" />-->
                    </data:DataGrid.Columns>
                </data:DataGrid>

                <StackPanel >
                <Grp:GroupBox Header="Overy Deatils" >
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height=" Auto"></RowDefinition>
                                <RowDefinition Height=" Auto"></RowDefinition>
                                <RowDefinition Height=" Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Overy" Width="60" Margin="2"></TextBlock>
                            <TextBox x:Name="txtOvery" Text="{Binding DistanceFromFundus,Mode=TwoWay}" Grid.Column="1" Grid.Row="0" Width="124"></TextBox>
                            <TextBlock Grid.Row="1" Grid.Column="0" Text="No. of Follicullar" Width="100" Margin="2" ></TextBlock>
                            <liquid:NumericUpDownPlus Width="124" Margin="0,2,0,2" Min="0" Max="500" Grid.Row="1" Grid.Column="1" />
                            <TextBlock Grid.Row="2" Grid.Column="0" Text="Size" Width="60" Margin="2"></TextBlock>
                            <TextBox x:Name="txtFollicularSize" Text="{Binding DistanceFromFundus,Mode=TwoWay}" Grid.Column="1" Grid.Row="2" Width="124"></TextBox>


                        </Grid>
                    </Grp:GroupBox>
            </StackPanel>
            </StackPanel>

        </Grid>

