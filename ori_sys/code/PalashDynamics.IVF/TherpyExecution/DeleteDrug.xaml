<controls:ChildWindow x:Class="PalashDynamics.IVF.TherpyExecution.DeleteDrug"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:data="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"       
           Width="400" Height="300" 
           Title="DeleteDrug">
 
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <data:DataGrid IsReadOnly="True" SelectionMode="Single" x:Name="dgDeleteDrug" ItemsSource="{Binding}"  AutoGenerateColumns="False"  SelectedIndex="0">
            <data:DataGrid.Columns>

                <data:DataGridTextColumn Header="Drug Name" Width="Auto" Binding="{Binding Drug}"></data:DataGridTextColumn>
                <data:DataGridTemplateColumn >
                    <data:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <HyperlinkButton VerticalAlignment="Center"  HorizontalAlignment="Center" FontFamily="Webdings" Content="r"  Padding="5,0,5,0" IsTabStop="False"   x:Name="cmdDeleteDrug" ToolTipService.ToolTip="Delete" Click="cmdDeleteDrug_Click"></HyperlinkButton>
                        </DataTemplate>
                    </data:DataGridTemplateColumn.CellTemplate>
                </data:DataGridTemplateColumn>


            </data:DataGrid.Columns>
        </data:DataGrid>

        <Button x:Name="CloseButton" Content="Close" Click="CloseButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,0,0" Grid.Row="1" />
        <!--<Button x:Name="OKButton" Content="OK" Click="OKButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,79,0" Grid.Row="1" />-->
    </Grid>
</controls:ChildWindow>