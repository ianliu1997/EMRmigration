<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:SLToolKit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.ToolKit"
    xmlns:local="clr-namespace:PalashDynamics.IVF"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    mc:Ignorable="d" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:System_Windows_Controls_Primitives="clr-namespace:System.Windows.Controls.Primitives;assembly=System.Windows.Controls" 
    xmlns:System_Windows_Controls_Primitives1="clr-namespace:System.Windows.Controls.Primitives;assembly=System.Windows.Controls.Data" 
    xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"    
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"     
    xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"     
    xmlns:basics="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    xmlns:CustomCombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
    xmlns:vsm="clr-namespace:System.Windows;assembly=System.Windows">

 
    <Style TargetType="local:FileUploadRepeterControlItem">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:FileUploadRepeterControlItem">
                    <Grid  Margin="0" HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition />
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>                        
                        <HyperlinkButton x:Name="View" IsTabStop="False" Width="50" Grid.Column="0" VerticalAlignment="Center" Margin="2">
                            <TextBlock TextAlignment="Left" Text="Preview"/>
                        </HyperlinkButton>
                        <TextBox Grid.Column="1" Margin="2,2,4,2" Text="{Binding FileName,Mode=TwoWay}" MinWidth="100" x:Name="FileName" IsEnabled="False"></TextBox>
                        <Button Grid.Column="2" Margin="2,2,4,2" Content="Browse" MinWidth="50" x:Name="Browse"></Button>                        
                        <HyperlinkButton x:Name="CmdAddRemove" IsTabStop="False" Width="45" Grid.Column="3"  TargetName="{Binding Command}" VerticalAlignment="Center" Margin="2">
                            <TextBlock TextAlignment="Left" Text="{Binding Command}"/>
                        </HyperlinkButton>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="local:IVFTreatmentPlanRepeterControlItem">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:IVFTreatmentPlanRepeterControlItem">
                    <Grid  Margin="0" HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>                            
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="90"/>
                            <!--<ColumnDefinition Width="60"/>-->
                            <ColumnDefinition Width="0"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="53"/>
                            <ColumnDefinition Width="113"/>
                            <!--<ColumnDefinition Width="100"/>-->
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>

                        <TextBox Grid.Column="0"  Margin="2,2,4,2" Text="{Binding SerialOccyteNo,Mode=TwoWay}" MaxLength="250" x:Name="txtOocyteNO"/>                        
                        <CustomCombo:AutoCompleteComboBox Grid.Column="1" Margin="2,2,4,2" ItemsSource="{Binding CumulusSource}" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" x:Name="cmbCumulus" />
                        <CustomCombo:AutoCompleteComboBox Grid.Column="2" Margin="2,2,4,2" ItemsSource="{Binding GradeSource}" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" x:Name="cmbGrade" />
                        <!--<StackPanel Grid.Column="3" Margin="2,2,4,2" Orientation="Vertical" >
                            <ToggleButton x:Name="btnDetail" Content="Detail" Background="#000000" ToolTipService.ToolTip="Oocyte Details">                                
                            </ToggleButton>
                        </StackPanel>-->
                        <HyperlinkButton x:Name="CmdMediaDetails" IsTabStop="False" Grid.Column="4" VerticalAlignment="Center" Margin="2">
                            <TextBlock TextAlignment="Left" Text="Media Details"/>
                        </HyperlinkButton>
                        <CustomCombo:AutoCompleteComboBox Grid.Column="5"  Margin="2,2,4,2" ItemsSource="{Binding MOISource}" x:Name="cmbMOI" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" />
                        <TextBox Grid.Column="6"  Margin="2,2,4,2" Text="{Binding Score,Mode=TwoWay}" MaxLength="250" x:Name="txtScore"/>
                        <CheckBox Grid.Column="7" HorizontalAlignment="Center"  VerticalAlignment="Center" Margin="2,2,4,2" IsChecked="{Binding ProceedToDay,Mode=TwoWay}" x:Name="chkProceedToDay" Visibility="Collapsed"/>
                        
                        
                        <CustomCombo:AutoCompleteComboBox Grid.Column="7"  Margin="2,2,4,2" ItemsSource="{Binding PlanSource}" x:Name="cmbPlan" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" />
                        
                        <StackPanel Grid.Column="8" Orientation="Horizontal">
                            <HyperlinkButton x:Name="cmdView" VerticalAlignment="Center" Margin="2">
                                <TextBlock TextAlignment="Left" Text="Preview"/>
                            </HyperlinkButton>
                            <TextBox Margin="4" Text="{Binding FileName,Mode=TwoWay}" Width="100"  x:Name="txtFileName"/>
                            <ToggleButton x:Name="cmdBrowse"  Content="Browse"  Margin="4" HorizontalAlignment="Right"></ToggleButton>

                        </StackPanel>
                        
                        <HyperlinkButton x:Name="CmdAddRemove" IsTabStop="False" Grid.Column="9"  TargetName="{Binding Command}" VerticalAlignment="Center" Margin="2">
                            <TextBlock TextAlignment="Left" Text="{Binding Command}"/>
                        </HyperlinkButton>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style TargetType="local:ICSITreatmentPlanRepeterControlItem">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="local:ICSITreatmentPlanRepeterControlItem">
                    <Grid  Margin="0" HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>                            
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="100"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="110"/>
                            <ColumnDefinition Width="113"/>
                            <!--<ColumnDefinition Width="100"/>-->
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="60"/>
                            
                        </Grid.ColumnDefinitions>

                        <TextBox x:Name="txtOocyteNO" Grid.Column="0"  Margin="2,2,4,2" Text="{Binding OocyteNO,Mode=TwoWay}" MaxLength="250" />
                        <TextBox x:Name="txtMBD" Grid.Column="1"  Margin="2,2,4,2" Text="{Binding MBD,Mode=TwoWay}" MaxLength="250" />
                        <CustomCombo:AutoCompleteComboBox x:Name="cmbDOS" Grid.Column="2" Margin="2,2,4,2" ItemsSource="{Binding DOSSource}" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID"  />
                        <TextBox x:Name="txtComment" Grid.Column="3"  Margin="2,2,4,2" Text="{Binding Comment,Mode=TwoWay}" MaxLength="250" />
                        <CustomCombo:AutoCompleteComboBox  x:Name="cmbPIC" Grid.Column="4" Margin="2,2,4,2" ItemsSource="{Binding PICSource}" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID"/>                        
                        <HyperlinkButton x:Name="CmdMediaDetails" IsTabStop="False" Grid.Column="5" VerticalAlignment="Center" Margin="2">
                            <TextBlock TextAlignment="Left" Text="Media Details"/>
                        </HyperlinkButton>
                        <TextBox x:Name="txtIC" Grid.Column="6" Margin="2,2,4,2" Text="{Binding IC,Mode=TwoWay}" MaxLength="250" />
                        <CheckBox Grid.Column="7" HorizontalAlignment="Center" Margin="2,2,4,2" IsChecked="{Binding ProceedToDay,Mode=TwoWay}" x:Name="chkProceedToDay" Visibility="Collapsed"/>
                        <CustomCombo:AutoCompleteComboBox Grid.Column="7"  Margin="2,2,4,2" ItemsSource="{Binding PlanSource}" x:Name="cmbPlan" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" />

                        <StackPanel Grid.Column="8" Orientation="Horizontal">
                        <HyperlinkButton x:Name="cmdView" VerticalAlignment="Center" Margin="2">
                            <TextBlock TextAlignment="Left" Text="Preview"/>
                        </HyperlinkButton>
                        <TextBox Margin="4" Text="{Binding FileName,Mode=TwoWay}" Width="100"  x:Name="txtFileName"/>
                        <ToggleButton x:Name="cmdBrowse"  Content="Browse"  Margin="4" HorizontalAlignment="Right"></ToggleButton>

                        </StackPanel>


                        <HyperlinkButton x:Name="CmdAddRemove" IsTabStop="False" Grid.Column="9"  TargetName="{Binding Command}" VerticalAlignment="Center" Margin="2">
                            <TextBlock TextAlignment="Left" Text="{Binding Command}"/>
                        </HyperlinkButton>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>
