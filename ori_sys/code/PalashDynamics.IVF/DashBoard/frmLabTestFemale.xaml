<controls:ChildWindow x:Class="PalashDynamics.IVF.DashBoard.frmLabTestFemale"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"   
                              xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
        xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
        xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit" 
        xmlns:blacklight="clr-namespace:Blacklight.Silverlight.Controls;assembly=Blacklight.Silverlight.Controls"
        xmlns:local="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters"        
        Width="1000" Height="600" 
        xmlns:inputToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit"
        xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
        xmlns:Grp ="clr-namespace:Groupbox;assembly=Groupbox"
        xmlns:Common="clr-namespace:DataDrivenApplication"    
        Loaded="ChildWindow_Loaded"
                      xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"  
        Title="Female Investigation (Name:- )">
    
    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
                <ResourceDictionary Source="Themes/Generic1.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:DateTimeConverter x:Key="DateConverter" />
            <local:DateTimeToAgePart x:Key="DateTimeToAgePart"></local:DateTimeToAgePart>
            <ControlTemplate x:Key="FilledContentControlTemplate" TargetType="ContentControl">
                <Grid>
                    <ContentPresenter />
                </Grid>
            </ControlTemplate>
            <SolidColorBrush x:Key="Heading" Color="#FF0F3C64"/>
        </ResourceDictionary>
    </controls:ChildWindow.Resources>
    <Grid Background="White">
        <toolkit:DockPanel x:Name="MainDock" LastChildFill="True" Grid.Row="1">
            <toolkit:DockPanel x:Name="Bottom" toolkit:DockPanel.Dock="Bottom" Margin="5">
                <StackPanel x:Name="FooterBackPanel" Orientation="Horizontal"    Margin="2" HorizontalAlignment="Right" Background="Transparent">
                    <StackPanel x:Name="SaveCommandPanelBackPanel" Orientation="Horizontal"  Margin="0,0,0,0">
                        <ToggleButton x:Name="CmdNew" Visibility="Collapsed" Content="New" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Click="CmdNew_Click"/>
                        <ToggleButton x:Name="CmdSave" Content="Save" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Click="CmdSave_Click" />
                        <ToggleButton x:Name="CmdCancel"  Content="Cancel" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Click="CmdCancel_Click"/>
                    </StackPanel>
                </StackPanel>
            </toolkit:DockPanel>


            <Grid x:Name="PageContainer">
                

                <Grid  Height="AUTO" Width="auto" x:Name="BackPanel" Visibility="Visible" Grid.Row="1">
                    <toolkit:DockPanel x:Name="Content" toolkit:DockPanel.Dock="top" LastChildFill="true"  >
                        <Border  BorderBrush="{StaticResource TabControlDarkerBorder}"    BorderThickness="1" CornerRadius="3,3,0,0" Margin="4,4,4,4"  Background="Transparent">

                            <toolkit:DockPanel toolkit:DockPanel.Dock="Top">
                                <toolkit:DockPanel x:Name="docHeader" toolkit:DockPanel.Dock="Top" HorizontalAlignment="Stretch">
                                    <Border  BorderBrush="{StaticResource TabControlDarkerBorder}" toolkit:DockPanel.Dock="Top"   Margin="0,-1,0,0" BorderThickness="1" CornerRadius="0,0,3,3" Background="Transparent">
                                        <!-- <GroupBox:GroupBox  Header="Block Master Details" Margin="4" Width="Auto" Height="Auto" Grid.Row="0" HorizontalAlignment="Stretch">-->
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="250"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <Grid x:Name="ResultEntrryBack" Grid.Row="0">

                                                <toolkit:DockPanel x:Name="docListBack">
                                                    <toolkit:DockPanel LastChildFill="True" toolkit:DockPanel.Dock="Top">
                                                        <StackPanel toolkit:DockPanel.Dock="Top" Margin="0,4,0,0">
                                                            <Border  BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0"  Background="Transparent">
                                                                <ContentControl VerticalAlignment="Center" FontSize="12" Content="List Of Test Result" Margin="-1" Style="{StaticResource Header}"     HorizontalAlignment="Stretch" />
                                                            </Border>
                                                        </StackPanel>
                                                    </toolkit:DockPanel>
                                                    <toolkit:DockPanel LastChildFill="True">

                                                        <sdk:DataPager x:Name="dataGrid2PagerBack" toolkit:DockPanel.Dock="Bottom" 
                                                        DisplayMode="FirstLastPreviousNext"  IsEnabled="True"                       
                                                        Source="{Binding}" 
                                                        AutoEllipsis="False" IsTotalItemCountFixed="False"  />

                                                        <sdk:DataGrid  x:Name="grdResultEntryBack" VerticalAlignment="Stretch" ItemsSource="{Binding}" AutoGenerateColumns="False" IsReadOnly="True" ScrollViewer.VerticalScrollBarVisibility="Visible" SelectionChanged="grdResultEntryBack_SelectedChanged">
                                                            <sdk:DataGrid.Columns>
                                                                <sdk:DataGridTemplateColumn Header="Modify">
                                                                    <sdk:DataGridTemplateColumn.CellTemplate>
                                                                        <DataTemplate>
                                                                            <HyperlinkButton VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="hlbModify" Content="Modify" Click="hlbModify_ClickBack" Width="Auto"></HyperlinkButton>
                                                                        </DataTemplate>
                                                                    </sdk:DataGridTemplateColumn.CellTemplate>
                                                                </sdk:DataGridTemplateColumn>
                                                                <sdk:DataGridTextColumn IsReadOnly="True" Header="Parameter Name" Binding="{Binding ParameterName}" Width="150" />
                                                                <sdk:DataGridTextColumn IsReadOnly="True" Header="Parameter Unit" Binding="{Binding ParameterUnitName}" Width="150" />
                                                                <sdk:DataGridTextColumn IsReadOnly="True"  Header="Lab Name"  Binding="{Binding LabName}" Width="200"/>
                                                                <sdk:DataGridTextColumn IsReadOnly="True" Header="Date" Binding="{Binding sDate}" Width="200"/>
                                                                <sdk:DataGridTextColumn IsReadOnly="True" Header="Ellapsed Time" Binding="{Binding EllapsedTime}" Width="100" />
                                                                <sdk:DataGridTextColumn IsReadOnly="True"  Header="Value"  Binding="{Binding ResultValue}" Width="200"/>
                                                                <sdk:DataGridTextColumn IsReadOnly="True" Header="Result" Binding="{Binding ResultTypeName}" Width="200"/>
                                                                <sdk:DataGridTextColumn IsReadOnly="True" Header="Notes" Binding="{Binding Note}" Width="100" />
                                                                <!--<sdk:DataGridTextColumn IsReadOnly="True"  Header="Attachment"  Binding="{Binding AttachmentFileName}" Width="200"/>-->
                                                                <sdk:DataGridTemplateColumn Header="Attachment" Visibility="Visible">
                                                                    <sdk:DataGridTemplateColumn.CellTemplate>
                                                                        <DataTemplate>
                                                                            <HyperlinkButton VerticalAlignment="Center" HorizontalAlignment="Center" Content="{Binding AttachmentFileName}" x:Name="ViewImagBack" Click="ViewImage_ClickBack" Width="Auto"></HyperlinkButton>
                                                                        </DataTemplate>
                                                                    </sdk:DataGridTemplateColumn.CellTemplate>
                                                                </sdk:DataGridTemplateColumn>
                                                                <sdk:DataGridTemplateColumn Header="Delete">
                                                                    <sdk:DataGridTemplateColumn.CellTemplate>
                                                                        <DataTemplate>
                                                                            <HyperlinkButton VerticalAlignment="Center"  HorizontalAlignment="Center" FontFamily="Webdings" Content="r"  Padding="5,0,5,0" IsTabStop="False"   x:Name="cmdDeleteServiceBack" ToolTipService.ToolTip="Delete" Click="cmdDeleteServiceBack_Click"></HyperlinkButton>
                                                                        </DataTemplate>
                                                                    </sdk:DataGridTemplateColumn.CellTemplate>
                                                                </sdk:DataGridTemplateColumn>

                                                            </sdk:DataGrid.Columns>
                                                        </sdk:DataGrid>

                                                    </toolkit:DockPanel>
                                                </toolkit:DockPanel>

                                            </Grid>


                                            <Grid x:Name="grdBackPanel" Grid.Row="1">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock  Grid.Row="0" Grid.Column="0" Text="Category" Margin="4" VerticalAlignment="Center"></TextBlock>
                                                <inputcombo:AutoCompleteComboBox TabIndex="1"  Grid.Row="0"  HorizontalAlignment="Stretch" Grid.Column="1" Margin="4" x:Name="cmbCategory"  SelectedItemBinding="{Binding Description, Mode=TwoWay}" SelectedValuePath="ID" SelectionChanged="cmbCategory_SelectionChanged_1"></inputcombo:AutoCompleteComboBox >

                                                <TextBlock Text="Test" Grid.Row="0" Grid.Column="2" Margin="4" VerticalAlignment="Center"></TextBlock>
                                                <inputcombo:AutoCompleteComboBox TabIndex="2" Grid.Row="0"  HorizontalAlignment="Stretch" Grid.Column="3" Margin="4" x:Name="cmbTest"  SelectedItemBinding="{Binding MasterListItem, Mode=TwoWay}" SelectedValuePath="ID" SelectionChanged="cmbTest_SelectionChanged_1"></inputcombo:AutoCompleteComboBox >

                                                <TextBlock  Grid.Row="1" Grid.Column="0" Text="Parameter" Margin="4" VerticalAlignment="Center"></TextBlock>
                                                <inputcombo:AutoCompleteComboBox TabIndex="3"  Grid.Row="1" Grid.Column="1"  HorizontalAlignment="Stretch" Margin="4" x:Name="cmbParameter"   SelectedItemBinding="{Binding Description, Mode=TwoWay}" SelectedValuePath="ParamSTID" SelectionChanged="cmbParameter_SelectionChanged_1"></inputcombo:AutoCompleteComboBox >

                                                <TextBlock  Grid.Row="1" Grid.Column="2" Text="Parameter Unit" Margin="4" VerticalAlignment="Center"></TextBlock>
                                                <inputcombo:AutoCompleteComboBox TabIndex="4"  Grid.Row="1" Grid.Column="3"  HorizontalAlignment="Stretch" Margin="4" x:Name="cmbUnit"   SelectedItemBinding="{Binding Description, Mode=TwoWay}" SelectedValuePath="ID"></inputcombo:AutoCompleteComboBox >

                                                <TextBlock Text="Lab" Grid.Row="3" Grid.Column="2" Margin="4" VerticalAlignment="Center"></TextBlock>
                                                <inputcombo:AutoCompleteComboBox TabIndex="8" Grid.Row="3" Grid.Column="3" Margin="4" x:Name="cmbLab"  HorizontalAlignment="Stretch"  SelectedItemBinding="{Binding MasterListItem, Mode=TwoWay}" SelectedValuePath="ID" ></inputcombo:AutoCompleteComboBox >

                                                <TextBlock Text="Date" Margin="2" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center"></TextBlock>
                                                <controls:DatePicker TabIndex="5" SelectedDate="{Binding Date,Mode=TwoWay}"  x:Name="ProcDate" Margin="2"  HorizontalAlignment="Stretch" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" />

                                                <TextBlock Text="Time" Margin="2" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center"></TextBlock>
                                                <inputToolkit:TimePicker TabIndex="6" Margin="2" Grid.Row="2"  Grid.Column="3" Value="{Binding Time,Mode=TwoWay}"  HorizontalAlignment="Stretch"  x:Name="ProcTime" VerticalAlignment="Center"/>

                                                <TextBlock  Grid.Row="3" Grid.Column="0" Text="Value" Margin="4" VerticalAlignment="Center"  HorizontalAlignment="Left"></TextBlock> 
                                                <TextBox TabIndex="7"  Grid.Row="3" Grid.Column="1" x:Name="txtValue" Margin="4" Text="{Binding Description,Mode=TwoWay}"  MaxLength="6"  HorizontalAlignment="Stretch" LostFocus="txtStoreCode_LostFocus" TextAlignment="Right" TextChanged="txtValue_TextChanged" KeyDown="txtValue_KeyDown"></TextBox>

                                                <!--<TextBlock  Grid.Row="4" Grid.Column="0" Text="Result Type" Margin="4" VerticalAlignment="Center"></TextBlock>-->
                                                <inputcombo:AutoCompleteComboBox TabIndex="9" Grid.Row="3" Grid.Column="1" Margin="4" Visibility="Collapsed" x:Name="cmbValueType"  SelectedItemBinding="{Binding HelpValue, Mode=TwoWay}"  HorizontalAlignment="Stretch" SelectedValuePath="HelpValueID"></inputcombo:AutoCompleteComboBox >

                                                <TextBlock  Grid.Row="4" Grid.Column="0" Text="Result Type" Margin="4" VerticalAlignment="Center"></TextBlock>
                                                <inputcombo:AutoCompleteComboBox TabIndex="9" Grid.Row="4" Grid.Column="1" Margin="4" x:Name="cmbResultType" SelectedItemBinding="{Binding MasterListItem, Mode=TwoWay}" SelectedValuePath="ID" HorizontalAlignment="Stretch"></inputcombo:AutoCompleteComboBox >

                                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Grid.Column="2" Grid.Row="4" >
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                        </Grid.ColumnDefinitions>
                                                        <Image Grid.Column="0" Source="/PalashDynamics;component/Icons/attachment.JPG" MouseLeftButtonDown="Image_MouseLeftButtonDown" Visibility="Visible"></Image>
                                                        <TextBlock Grid.Column="1"  HorizontalAlignment="Right" VerticalAlignment="Center"  Text="Attachment" Margin="4" ></TextBlock>
                                                    </Grid>
                                                </StackPanel>
                                                <TextBox x:Name="txtFN" IsReadOnly="True" Grid.Column="3" Grid.Row="4" VerticalAlignment="Center"  Text="{Binding AttachmentFileName,Mode=TwoWay}" Margin="4"></TextBox>
                                                <Button x:Name="CmdBrowse" Content="Browse" TabIndex="10" Grid.Column="4" Grid.Row="4" Margin="4" Click="CmdBrowse_Click"></Button>
                                                <TextBlock  Grid.Row="5" Grid.Column="0" Text="Notes" Margin="4" VerticalAlignment="Center"></TextBlock>
                                                <!--commented by rohinee-->
                                                <!--<TextBox  Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3" Grid.RowSpan="2" x:Name="txtNotes" Margin="4" Text="{Binding Description,Mode=TwoWay}"  MaxLength="1000"  HorizontalAlignment="Stretch" LostFocus="txtStoreCode_LostFocus" Height="50" VerticalScrollBarVisibility="Visible" TextWrapping="Wrap" AcceptsReturn="True"></TextBox>-->
                                                <TextBox  Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3" Grid.RowSpan="2" x:Name="txtNotes" Margin="4" Text="{Binding Description,Mode=TwoWay}"  MaxLength="1000"  HorizontalAlignment="Stretch" Height="50" VerticalScrollBarVisibility="Visible" TextWrapping="Wrap" AcceptsReturn="True"></TextBox>

                                            </Grid>
                                        </Grid>
                                    </Border>
                                </toolkit:DockPanel>
                            </toolkit:DockPanel>
                        </Border>
                    </toolkit:DockPanel>
                </Grid>
            </Grid>
        </toolkit:DockPanel>
    </Grid>

</controls:ChildWindow>