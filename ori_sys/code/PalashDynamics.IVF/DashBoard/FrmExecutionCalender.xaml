<controls:ChildWindow xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"  x:Class="PalashDynamics.IVF.DashBoard.FrmExecutionCalender"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="570" Height="590" 
                       xmlns:local="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters"               
    xmlns:Converter="clr-namespace:PalashDynamics.IVF;assembly=PalashDynamics.IVF"
                       xmlns:controlsToolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
           Title="FrmExecutionCalender" FontFamily="Portable User Interface" FontStretch="Condensed" Foreground="Black" OpacityMask="Black" Background="#FF381010" xmlns:my="clr-namespace:System;assembly=mscorlib"
             Loaded="ChildWindow_Loaded">
    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:DateTimeConverter x:Key="DateConverter" />
            <local:DateTimeToAgePart x:Key="DateTimeToAgePart"></local:DateTimeToAgePart>
        </ResourceDictionary>
    </controls:ChildWindow.Resources>
    <Grid x:Name="LayoutRoot" Background="White" Margin="2" ShowGridLines="False">
        <controlsToolkit:DockPanel controlsToolkit:DockPanel.Dock="Bottom" >
            <controlsToolkit:DockPanel LastChildFill="True">
                <controlsToolkit:DockPanel controlsToolkit:DockPanel.Dock="Bottom">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" >
                        <TextBlock x:Name="RemarkLabel" VerticalAlignment="Center" Foreground="Red" FontWeight="Normal"  HorizontalAlignment="Right" Grid.Column="0" Grid.Row="0" Text="**Use Ctrl Key for multiple Date Selection" Margin="4" Visibility="Collapsed"></TextBlock>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" >
                        <ToggleButton  x:Name="cmdSave"  Content="OK" Background="#000000" Margin="4"  Style="{StaticResource ToggleButtonStyle}" Click="cmdSave_Click" ></ToggleButton>
                        <ToggleButton x:Name="cmdCancel"  Content="Cancel" Background="#000000" Margin="4" HorizontalAlignment="Right" Style="{StaticResource ToggleButtonStyle}" Click="cmdCancel_Click"></ToggleButton>
                    </StackPanel>
                </controlsToolkit:DockPanel>
                <controlsToolkit:DockPanel ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Auto" >
                    <Grid >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>

                        </Grid.RowDefinitions>
                        <sdk:Calendar x:Name="ExeCal" Grid.Row="0" HorizontalAlignment="Left" VerticalAlignment="Top" HorizontalContentAlignment="Stretch" Margin="6" VerticalContentAlignment="Top" OpacityMask="Black" FontWeight="Normal" Foreground="#FF0C797F" Opacity="1" Visibility="Visible" SelectionMode="MultipleRange" IsTodayHighlighted="True">

                            <sdk:Calendar.Background>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FFD3DEE8" Offset="0" />
                                    <GradientStop Color="#FFD3DEE8" Offset="0.16" />
                                    <GradientStop Color="#FFFCFCFD" Offset="0.161" />
                                    <GradientStop Color="White" Offset="1" />
                                    <GradientStop Color="#FFD3DEE8" Offset="0.844" />
                                </LinearGradientBrush>
                            </sdk:Calendar.Background>
                            <sdk:Calendar.BorderBrush>
                                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                    <GradientStop Color="#FFA3AEB9" Offset="0" />
                                    <GradientStop Color="#FF8399A9" Offset="1" />
                                    <GradientStop Color="#FF718597" Offset="0.095" />
                                    <GradientStop Color="#FF021020" Offset="1" />
                                    <GradientStop Color="#FF738799" Offset="0" />
                                    <GradientStop Color="#FF018E9F" Offset="0.547" />
                                </LinearGradientBrush>
                            </sdk:Calendar.BorderBrush>
                            <sdk:Calendar.RenderTransform>
                                <ScaleTransform   ScaleX="3" ScaleY="3"   />
                            </sdk:Calendar.RenderTransform>
                        </sdk:Calendar>
                    </Grid>
                </controlsToolkit:DockPanel>

            </controlsToolkit:DockPanel>
        </controlsToolkit:DockPanel>
    </Grid>
    <sdk:ChildWindow.BorderBrush>
        <LinearGradientBrush EndPoint="1,0.5" StartPoint="0,0.5">
            <GradientStop Color="Black" Offset="0" />
            <GradientStop Color="White" Offset="1" />
            <GradientStop Color="#FF7A7F7F" Offset="0.5" />
        </LinearGradientBrush>
    </sdk:ChildWindow.BorderBrush>
</controls:ChildWindow>
