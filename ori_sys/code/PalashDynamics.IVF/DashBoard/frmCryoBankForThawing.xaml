                                        <data:DataGrid.Columns>

                                            <data:DataGridTemplateColumn Header="Select">
                                                <data:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <CheckBox x:Name="chkOocyte"  IsChecked="{Binding SelectOocyte,Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" Width="Auto" Click="chkOocyte_Click" IsEnabled="{Binding IsCheckRefreeze,Mode=TwoWay}"></CheckBox>
