<controls:ChildWindow x:Class="PalashDynamics.IVF.DashBoard.frmCryoBankForThawing"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"
           xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
           xmlns:blacklight="clr-namespace:Blacklight.Silverlight.Controls;assembly=Blacklight.Silverlight.Controls"
           xmlns:local="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters"   
           xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
           xmlns:my="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"   
           xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data" 
           xmlns:liquid="clr-namespace:Liquid;assembly=Liquid"           
           Loaded="UserControl_Loaded" Height="Auto" 
           Title="Cryo Bank">

    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:ChildWindow.Resources>

    <Grid x:Name="Root" Background="White">
        <my:DockPanel x:Name="MainDockPanel">

            <my:DockPanel Grid.Row="0" LastChildFill="True" Margin="4" my:DockPanel.Dock="Top">
                <Grid Width="Auto"  Margin="0" my:DockPanel.Dock="Top" DataContext="{Binding BizActionObject}" Visibility="Collapsed">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition />
                        <ColumnDefinition  Width="Auto"/>
                        <ColumnDefinition />
                        <!--added by rohini-->
                        <ColumnDefinition  Width="Auto"/>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <!-- <RowDefinition Height="Auto"/>-->
                        <!--<RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>-->
                    </Grid.RowDefinitions>

                    <TextBlock x:Name="chkPatientName"  VerticalAlignment="Center" Grid.Column="0" Grid.Row="0"  Margin="4" Text="First Name" HorizontalAlignment="Right" Visibility="Collapsed"></TextBlock>
                    <TextBox TabIndex="0" x:Name="txtFirstName" Text="{Binding FirstName,Mode=TwoWay}"  Grid.Row="0"  Grid.Column="1" Margin="4" LostFocus="txtFirstName_LostFocus" MaxLength="50" Visibility="Collapsed"/>

                    <TextBlock Grid.Column="2" Grid.Row="0"  Margin="4" Text="Middle Name" VerticalAlignment="Center" HorizontalAlignment="Right" Visibility="Collapsed"></TextBlock>
                    <TextBox TabIndex="1" x:Name="txtMiddleName" Text="{Binding MiddleName,Mode=TwoWay}"  Grid.Row="0"  Grid.Column="3" Margin="4" LostFocus="txtMiddleName_LostFocus"  MaxLength="50" Visibility="Collapsed"/>

                    <TextBlock Grid.Column="4" Grid.Row="0"  Margin="4" Text="Last Name" VerticalAlignment="Center" HorizontalAlignment="Right" Visibility="Collapsed"></TextBlock>
                    <TextBox TabIndex="2" x:Name="txtLastName" Text="{Binding LastName,Mode=TwoWay}"  Grid.Row="0"  Grid.Column="5" Margin="4" LostFocus="txtLastName_LostFocus" MaxLength="50" Visibility="Collapsed"/>

                    <TextBlock Grid.Column="0" Grid.Row="1"  Margin="4" Text="Family Name" VerticalAlignment="Center" HorizontalAlignment="Right" Visibility="Collapsed"></TextBlock>
                    <TextBox TabIndex="3" x:Name="txtFamilyName" Text="{Binding FamilyName,Mode=TwoWay}"  Grid.Row="1"  Grid.Column="1" Margin="4"  LostFocus="txtFamilyName_LostFocus" Visibility="Collapsed" MaxLength="50" />

                    <TextBlock Grid.Column="0" Grid.Row="1" x:Name="Donor"  Margin="4" Text="Donor Code" VerticalAlignment="Center" HorizontalAlignment="Right" Visibility="Collapsed"></TextBlock>
                    <TextBox TabIndex="3" x:Name="txtDonorCode" Text="{Binding DonorCode,Mode=TwoWay}"  Grid.Row="1"  Grid.Column="1" Margin="4"   MaxLength="50" Visibility="Collapsed"/>

                    <TextBlock Grid.Column="0" Grid.Row="1" x:Name="Straw"  Margin="4" Text="Straw" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                    <inputcombo:AutoCompleteComboBox  x:Name="cmbStraw"  Grid.Column="1" Grid.Row="1"  Margin="4" VerticalAlignment="Center"  ItemsSource="{Binding}" HorizontalAlignment="Stretch"  SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID"  ></inputcombo:AutoCompleteComboBox>

                    <TextBlock Grid.Column="2" Grid.Row="1" x:Name="GobletColor"  Margin="4" Text="Goblet Color" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                    <inputcombo:AutoCompleteComboBox  x:Name="cmbGobletColor"  Grid.Column="3" Grid.Row="1"  Margin="4" VerticalAlignment="Center"  ItemsSource="{Binding}" HorizontalAlignment="Stretch"  SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID"  ></inputcombo:AutoCompleteComboBox>

                    <TextBlock Grid.Column="4" Grid.Row="1" x:Name="CryoCode"  Margin="4" Text="Code" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                    <TextBox TabIndex="3" x:Name="txtCryoCode" Text="{Binding CryoCode,Mode=TwoWay}"  Grid.Row="1"  Grid.Column="5" Margin="4"   MaxLength="50" />

                    <TextBlock Grid.Column="6" Grid.Row="1" x:Name="TabColor"  Margin="4" Text="Tab Color" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                    <inputcombo:AutoCompleteComboBox  x:Name="cmbTabColor"  Grid.Column="7" Grid.Row="1"  Margin="4" VerticalAlignment="Center"  ItemsSource="{Binding}" HorizontalAlignment="Stretch"  SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID"  ></inputcombo:AutoCompleteComboBox>

                    <!--added by rohinee dated 17/12/2015-->
                    <TextBlock Grid.Column="0" Grid.Row="2" x:Name="Canister"  Margin="4" Text="Canister" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                    <inputcombo:AutoCompleteComboBox  x:Name="cmbCanisterNo"  Grid.Column="1" Grid.Row="2"  Margin="4" VerticalAlignment="Center"  ItemsSource="{Binding}" HorizontalAlignment="Stretch"  SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID"  ></inputcombo:AutoCompleteComboBox>


                    <TextBlock Grid.Column="2" Grid.Row="2" x:Name="Tank"  Margin="4" Text="Tank" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                    <inputcombo:AutoCompleteComboBox  x:Name="cmbTank"  Grid.Column="3" Grid.Row="2"  Margin="4" VerticalAlignment="Center"  ItemsSource="{Binding}" HorizontalAlignment="Stretch"  SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID"  ></inputcombo:AutoCompleteComboBox>



                    <!--//-->
                    <TextBlock x:Name="chkMrno"  VerticalAlignment="Center" Grid.Column="6" Grid.Row="0"  Margin="4" Text="MR. No." HorizontalAlignment="Right" Visibility="Collapsed"></TextBlock>
                    <TextBox TabIndex="4" x:Name="txtMrno" Text="{Binding MRNo,Mode=TwoWay}"  Grid.Row="0"   Grid.Column="7"   Margin="4"  MaxLength="30" Visibility="Collapsed"/>

                    <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="Cane" Grid.Row="1"  Grid.Column="0" Margin="4" Visibility="Collapsed"/>
                    <inputcombo:AutoCompleteComboBox   x:Name="cmbCane" SelectedValuePath="ID" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" Grid.Row="1" Grid.Column="1"  Margin="4"   HorizontalAlignment="Stretch" TabIndex="5" IsEnabled="True" Visibility="Collapsed"/>

                    <TextBlock Grid.Column="2" Grid.Row="3" Text="Contact No"  Margin="4" Visibility="Collapsed"  HorizontalAlignment="Right" VerticalAlignment="Center"></TextBlock>
                    <TextBox Grid.Column="3" TabIndex="8" Grid.Row="3" x:Name="txtContactNo" Visibility="Collapsed"  Margin="4" Text="{Binding ContactNo, Mode=TwoWay}" MaxLength="15"></TextBox>

                    <TextBlock Grid.Column="0" Grid.Row="2" Visibility="Collapsed"  Margin="4" Text="Freezing From Date " VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                    <controls:DatePicker TabIndex="10" SelectedDate="{Binding FromDate,Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" Style="{StaticResource DatePickerStyle}" x:Name="dtpFromDate" Margin="4" Grid.Row="2" Grid.Column="1" Visibility="Collapsed" />
                    <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="To Date" Grid.Row="2" Grid.Column="2"  Margin="4" Visibility="Collapsed" />
                    <controls:DatePicker TabIndex="11" SelectedDate="{Binding ToDate,Mode=TwoWay}"  x:Name="dtpToDate" Margin="4" Grid.Row="2" Grid.Column="3" Visibility="Collapsed" />

