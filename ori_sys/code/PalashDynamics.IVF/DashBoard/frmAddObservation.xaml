                                                    <TextBlock Text="Date " Grid.Row="1" Grid.Column="0"  Margin="4" VerticalAlignment="Center" ></TextBlock>
                                                    <controls:DatePicker  Grid.Row="1" Grid.Column="1"    Margin="4"  x:Name="dtDate" TabIndex="6" IsEnabled="False"></controls:DatePicker>

                                                    <TextBlock Text="Time " Grid.Row="1" Grid.Column="2"  Margin="4" VerticalAlignment="Center" ></TextBlock>
