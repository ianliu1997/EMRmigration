                                    <ToggleButton.Content>
                                        <Path x:Name="BtnArrow" Height="4" Width="8" Stretch="Uniform" Data="F1 M 301.14,-189.041L 311.57,-189.041L 306.355,-182.942L 301.14,-189.041 Z " 
                                          Margin="0,0,6,0" HorizontalAlignment="Right">
                                            <Path.Fill>
                                                <SolidColorBrush x:Name="BtnArrowColor" Color="#FF333333"/>
                                            </Path.Fill>
                                        </Path>
                                    </ToggleButton.Content>
                                </ToggleButton>
                                <Popup x:Name="Popup">
                                    <Border x:Name="PopupBorder" HorizontalAlignment="Stretch" Opacity="0.0" BorderThickness="0" CornerRadius="3">
                                        <Border.RenderTransform>
                                            <TranslateTransform X="2" Y="2" />
                                        </Border.RenderTransform>
                                        <Border.Background>
                                            <SolidColorBrush Color="#11000000" />
                                        </Border.Background>
                                        <Border HorizontalAlignment="Stretch" BorderThickness="0" CornerRadius="3">
                                            <Border.Background>
                                                <SolidColorBrush Color="#11000000" />
                                            </Border.Background>
                                            <Border.RenderTransform>
                                                <TransformGroup>
                                                    <ScaleTransform />
                                                    <SkewTransform />
                                                    <RotateTransform />
                                                    <TranslateTransform X="-1" Y="-1" />
                                                </TransformGroup>
                                            </Border.RenderTransform>
                                            <Border HorizontalAlignment="Stretch" Opacity="1.0" Padding="1" BorderThickness="1" BorderBrush="{TemplateBinding BorderBrush}" CornerRadius="3">
                                                <Border.RenderTransform>
                                                    <TransformGroup>
                                                        <ScaleTransform />
                                                        <SkewTransform />
                                                        <RotateTransform />
                                                        <TranslateTransform X="-2" Y="-2" />
                                                    </TransformGroup>
                                                </Border.RenderTransform>
                                                <Border.Background>
                                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                                        <GradientStop Color="#FFDDDDDD" Offset="0"/>
                                                        <GradientStop Color="#AADDDDDD" Offset="1"/>
                                                    </LinearGradientBrush>
                                                </Border.Background>
                                                <dgAdapter:DataGridSelectionAdapter Width="auto" x:Name="SelectionAdapter" AutoGenerateColumns="False" IsReadOnly="True">
                                                    <dgAdapter:DataGridSelectionAdapter.Columns>
                                                        <data:DataGridTemplateColumn>
                                                            <data:DataGridTemplateColumn.CellTemplate>
                                                                <DataTemplate >
                                                                    <ListBoxItem Content="{Binding Description}" ToolTipService.ToolTip="{Binding Name}" >
                                                                    </ListBoxItem>
                                                                </DataTemplate>
                                                            </data:DataGridTemplateColumn.CellTemplate>
                                                        </data:DataGridTemplateColumn>

                                                        <!--<data:DataGridTemplateColumn>
                                                            <data:DataGridTemplateColumn.CellTemplate>
                                                                <DataTemplate >
                                                                    <CheckBox x:Name="chkMultipleDoctors" IsChecked="{Binding Status, Mode=TwoWay}" ></CheckBox>
                                                                </DataTemplate>
                                                            </data:DataGridTemplateColumn.CellTemplate>
                                                        </data:DataGridTemplateColumn>-->
                                                        <!--<data:DataGridTextColumn IsReadOnly="True" Width="Auto"  Binding="{Binding Description, Mode=TwoWay}" />-->
                                                    </dgAdapter:DataGridSelectionAdapter.Columns>
                                                </dgAdapter:DataGridSelectionAdapter>
                                            </Border>
                                        </Border>
                                    </Border>
                                </Popup>
                            </Grid>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>


        </Grid.Resources>

        <Border  Margin="0" Padding="1,1,1,1" BorderThickness="1" BorderBrush="#FF885A2C" CornerRadius="3,3,3,3" Opacity="1" Background="White">
            <Grid x:Name="DisplayArea">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                </Grid.RowDefinitions>



                <Border BorderBrush="PaleGreen" Grid.Row="0" BorderThickness="0" Background="Transparent">

                    <controlsToolkit:DockPanel LastChildFill="True" Margin="4" >
                        <Border BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" controlsToolkit:DockPanel.Dock="Bottom" BorderThickness="1" CornerRadius="3,3,3,3" Background="Transparent">
                            <StackPanel Grid.Row="3" x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                                <StackPanel x:Name="SaveCommandPanel" Orientation="Horizontal"  Margin="0,0,0,0" Height="25" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                                    <CheckBox x:Name="chkFreeze" IsChecked="{Binding Isfreezed, Mode=TwoWay}" Content="Finalize" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="1"  FontWeight="ExtraBlack" Foreground="Red" Grid.Row="8" Grid.Column="2"    TabIndex="22"></CheckBox>

                                    <ToggleButton x:Name="cmdNew"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="cmdSave_Click" TabIndex="23">
                                        <StackPanel Orientation="Horizontal" >
                                            <Common:XamlCheckmark Width="10" Height="10" Margin="0,0,5,0"/>
                                            <TextBlock Text="Save" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </ToggleButton>
                                    <ToggleButton x:Name="cmdPGD" Content="PGD"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}"  Click="cmdPGD_Click" TabIndex="3" Visibility="Collapsed">
                                    </ToggleButton>
                                    <ToggleButton x:Name="CmdClose"  Grid.Row="4" MinWidth="50" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="CmdClose_Click" TabIndex="24" >
                                        <StackPanel Orientation="Horizontal" >
                                            <Common:XamlCross Width="10" Height="10" Margin="0,0,5,0"/>
                                            <TextBlock Text="Close" TextWrapping="Wrap"/>
                                        </StackPanel>
                                    </ToggleButton>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        <Border BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" BorderThickness="1" CornerRadius="3,3,3,3" Background="Transparent">
                            <ScrollViewer VerticalScrollBarVisibility="Visible">
                                <controlsToolkit:DockPanel LastChildFill="True" Margin="4">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid Grid.Row="0" Grid.Column="0" >
                                            <Border BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" BorderThickness="1" CornerRadius="3,3,3,3" Background="Transparent">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>

                                                    <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="4">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition />
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition />
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition />
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="Observation Date " Grid.Row="0" Grid.Column="0"  Margin="4" VerticalAlignment="Center" ></TextBlock>
                                                        <controls:DatePicker  Grid.Row="0" Grid.Column="1"    Margin="4"  x:Name="dtObservationDate" TabIndex="1" LostFocus="dtObservationDate_LostFocus"></controls:DatePicker>

                                                        <TextBlock Text="Observation Time " Grid.Row="0" Grid.Column="2"  Margin="4" VerticalAlignment="Center" ></TextBlock>
                                                        <inputToolkit:TimePicker Margin="4"  Grid.Row="0" Grid.Column="3"  x:Name="dtObservationTime" TabIndex="2" LostFocus="dtObservationDate_LostFocus"></inputToolkit:TimePicker>

                                                        <TextBlock Text="Cell No " Grid.Row="0" Grid.Column="4"  Margin="4" VerticalAlignment="Center" ></TextBlock>
                                                        <inputcombo:AutoCompleteComboBox Grid.Column="5" Grid.Row="0" x:Name="cmbCellNo" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" VerticalAlignment="Center"   Margin="4" ></inputcombo:AutoCompleteComboBox>

                                                    </Grid>

                                                    <TextBlock Text="Embroyologist" Margin="2" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" ></TextBlock>
                                                    <CustomCombo:AutoCompleteComboBox   x:Name="cmbEmbroyologist" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" VerticalAlignment="Center" HorizontalAlignment="Stretch"  Margin="4"  Grid.Row="1" Grid.Column="1 "  TabIndex="8"/>

                                                    <TextBlock Text="Witnessed Embroyologist" Margin="2" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" ></TextBlock>
                                                    <CustomCombo:AutoCompleteComboBox   x:Name="cmbWitnessedEmbroyologist" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" VerticalAlignment="Center" HorizontalAlignment="Stretch"  Margin="4"  Grid.Row="1" Grid.Column="4"  TabIndex="8"/>

                                                    <!--for isthambul-->
                                                    <TextBlock Text="Observation Day " Grid.Row="2" Grid.Column="0"  Margin="4" VerticalAlignment="Center" Visibility="Collapsed" x:Name="lblObservationDay"></TextBlock>
                                                    <CustomCombo:AutoCompleteComboBox  Style="{StaticResource DataGridAutoCompleteTemplate}"  HorizontalAlignment="Stretch" Visibility="Collapsed" x:Name="cmbObservationDay" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" VerticalAlignment="Center"  Margin="4"  Grid.Row="2" Grid.Column="1" TabIndex="4" IsEnabled="False"></CustomCombo:AutoCompleteComboBox>



                                                    <TextBlock Text="Cell Stage " Grid.Row="2" Grid.Column="0"  Margin="4" VerticalAlignment="Center"  x:Name="lblCellStage"></TextBlock>
                                                    <TextBox   Text="{Binding CellStage,Mode=TwoWay}" x:Name="txtCellStage" Grid.Column="1" Grid.Row="2" Margin="4" MaxLength="100" TabIndex="3"></TextBox>

                                                    <TextBlock Text="Embryo Compacted" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" x:Name="lblEmbryocompacted"></TextBlock>
                                                    <StackPanel  Grid.Row="2" Grid.Column="3" Orientation="Horizontal" x:Name="spEmbryoCompacted">
                                                        <RadioButton x:Name="rdoYes" Content="Yes" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4" Click="rdoYes_Click" ></RadioButton>
                                                        <RadioButton x:Name="rdoNo" Content="No" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4" Click="rdoNo_Click"></RadioButton>
                                                    </StackPanel>




                                                    <TextBlock Text="Grade " Grid.Row="2" Grid.Column="2"  Margin="4" VerticalAlignment="Center" x:Name="lblGrade4" Visibility="Collapsed"></TextBlock>
                                                    <CustomCombo:AutoCompleteComboBox  Style="{StaticResource DataGridAutoCompleteTemplate}"  HorizontalAlignment="Stretch"  x:Name="cmbGrade4" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" VerticalAlignment="Center"  Margin="4"  Grid.Row="2" Grid.Column="3" TabIndex="4" Visibility="Collapsed"></CustomCombo:AutoCompleteComboBox>


                                                    <TextBlock Text="Stage of Development Grade " Grid.Row="2" Grid.Column="2"  Margin="4" VerticalAlignment="Center" x:Name="lblStageofDevelopmentGrade" Visibility="Collapsed"></TextBlock>
                                                    <CustomCombo:AutoCompleteComboBox  Style="{StaticResource DataGridAutoCompleteTemplate}"  HorizontalAlignment="Stretch"  x:Name="cmbStageofDevelopmentGrade" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" VerticalAlignment="Center"  Margin="4"  Grid.Row="2" Grid.Column="3" TabIndex="4" Visibility="Collapsed"></CustomCombo:AutoCompleteComboBox>

                                                    <TextBlock Text="Inner Cell Mass (ICM) Grade " Grid.Row="3" Grid.Column="0"  Margin="4" VerticalAlignment="Center" x:Name="lblInnerCellMassGrade" Visibility="Collapsed"></TextBlock>
                                                    <CustomCombo:AutoCompleteComboBox  Style="{StaticResource DataGridAutoCompleteTemplate}"  HorizontalAlignment="Stretch"  x:Name="cmbInnerCellMassGrade" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" VerticalAlignment="Center"  Margin="4"  Grid.Row="3" Grid.Column="1" TabIndex="4" Visibility="Collapsed"></CustomCombo:AutoCompleteComboBox>

                                                    <TextBlock Text="Trophoectoderm Grade " Grid.Row="3" Grid.Column="2"  Margin="4" VerticalAlignment="Center" x:Name="lblTrophoectodermGrade" Visibility="Collapsed"></TextBlock>
                                                    <CustomCombo:AutoCompleteComboBox  Style="{StaticResource DataGridAutoCompleteTemplate}"  HorizontalAlignment="Stretch"  x:Name="cmbTrophoectodermGrade" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" VerticalAlignment="Center"  Margin="4"  Grid.Row="3" Grid.Column="3" TabIndex="4" Visibility="Collapsed"></CustomCombo:AutoCompleteComboBox>

                                                    <CheckBox x:Name="chkAssistedHatching" Content="Assisted Hatching" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="4" Grid.Row="4" Grid.Column="0"  IsChecked="{Binding AssistedHatching,Mode=TwoWay}"  TabIndex="5"  Click="chkAssistedHatching_Click" Visibility="Collapsed"></CheckBox>

                                                    <TextBlock Text="Grade " Grid.Row="5" Grid.Column="0"  Margin="4" VerticalAlignment="Center" x:Name="lblGrade3" Visibility="Collapsed"></TextBlock>
                                                    <CustomCombo:AutoCompleteComboBox  Style="{StaticResource DataGridAutoCompleteTemplate}"  HorizontalAlignment="Stretch"  x:Name="cmbGrade3" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" VerticalAlignment="Center"  Margin="4"  Grid.Row="5" Grid.Column="1" TabIndex="4" Visibility="Collapsed"></CustomCombo:AutoCompleteComboBox>


                                                    <TextBlock Text="Grade " Grid.Row="5" Grid.Column="0"  Margin="4" VerticalAlignment="Center" x:Name="lblGrade2"></TextBlock>
                                                    <CustomCombo:AutoCompleteComboBox  Style="{StaticResource DataGridAutoCompleteTemplate}"  HorizontalAlignment="Stretch"  x:Name="cmbGrade2" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" VerticalAlignment="Center"  Margin="4"  Grid.Row="5" Grid.Column="1" TabIndex="4" SelectionChanged="cmbGrade2_SelectionChanged"></CustomCombo:AutoCompleteComboBox>

                                                    <TextBlock Text="Fragmentation" HorizontalAlignment="Left" Grid.Row="5" Grid.Column="2"  VerticalAlignment="Center" x:Name="lblFragmentation"></TextBlock>
                                                    <inputcombo:AutoCompleteComboBox  x:Name="cmbFragmentation" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" VerticalAlignment="Center" MinWidth="100" Margin="2"  Grid.Row="5" Grid.Column="3"  TabIndex="4" IsEnabled="False"></inputcombo:AutoCompleteComboBox>



                                                </Grid>

                                            </Border>
                                        </Grid>


                                        <Grid Grid.Row="1" Grid.Column="0" x:Name="GrpBiopsy" Visibility="Collapsed">
                                            <Border BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" BorderThickness="1" CornerRadius="3,3,3,3" Background="Transparent">
                                                <Grid>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition />
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>

