                                                                                <CheckBox VerticalAlignment="Center" IsChecked="{Binding IsFetalHeart,Mode=TwoWay}" x:Name="ChkFetalHeartSurrogate2" Click="ChkFetalHeartSurrogate2_Click" HorizontalAlignment="Center" ></CheckBox>
                                                                            </Grid>
                                                                        </DataTemplate>
                                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                                </data:DataGridTemplateColumn>

                                                                <data:DataGridTemplateColumn Header="Result">
                                                                    <data:DataGridTemplateColumn.CellTemplate >
                                                                        <DataTemplate>
                                                                            <Grid >
                                                                                <CustomCombo:AutoCompleteComboBox TabIndex="17" VerticalAlignment="Center" x:Name="cmbResult" ItemsSource="{Binding OutcomeResultListVO}" SelectedItem="{Binding selectedResultList,Mode=TwoWay}" SelectedValue="{Binding selectedResultList.ID}" Text="" />
                                                                            </Grid>
                                                                        </DataTemplate>
                                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                                </data:DataGridTemplateColumn>

                                                                <data:DataGridTemplateColumn Header="Pregnancy">
                                                                    <data:DataGridTemplateColumn.CellTemplate>
                                                                        <DataTemplate>
                                                                            <Grid>
                                                                                <CustomCombo:AutoCompleteComboBox TabIndex="17" VerticalAlignment="Center" x:Name="cmbPregancy" ItemsSource="{Binding OutcomePregnancyListVO}" SelectedItem="{Binding selectedPregnancyList,Mode=TwoWay}" SelectedValue="{Binding selectedPregnancyList.ID}" Text=""  />
                                                                            </Grid>
                                                                        </DataTemplate>
                                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                                </data:DataGridTemplateColumn>

                                                                <data:DataGridTemplateColumn Header="Congenital Abnormality">
                                                                    <data:DataGridTemplateColumn.CellTemplate>
                                                                        <DataTemplate>
                                                                            <Grid>
                                                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                                                    <RadioButton Margin="2" Content="Yes" IsChecked="{Binding CongenitalAbnormalityYes,Mode=TwoWay}" x:Name="CongenitalAbnormalitySurrogate2Yes" Click="CongenitalAbnormalitySurrogate2Yes_Click"></RadioButton>
                                                                                    <RadioButton Margin="2" Content="No"  IsChecked="{Binding CongenitalAbnormalityNo,Mode=TwoWay}" x:Name="CongenitalAbnormalitySurrogate2No" Click="CongenitalAbnormalitySurrogate2No_Click"></RadioButton>
                                                                                </StackPanel>
                                                                            </Grid>
                                                                        </DataTemplate>
                                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                                </data:DataGridTemplateColumn>

                                                                <data:DataGridTemplateColumn Header="Remarks" >
                                                                    <data:DataGridTemplateColumn.CellTemplate>
                                                                        <DataTemplate>
                                                                            <Grid>
                                                                                <TextBox x:Name="txtCongenitalAbnormality" Width="250" TextWrapping="Wrap" ScrollViewer.VerticalScrollBarVisibility="Visible" AcceptsReturn="True" VerticalAlignment="Center"  Height="28"  Text="{Binding CongenitalAbnormalityReason,Mode=TwoWay}" IsEnabled="{Binding Status}"></TextBox>
                                                                            </Grid>
                                                                        </DataTemplate>
                                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                                </data:DataGridTemplateColumn>
                                                            </data:DataGrid.Columns>
                                                        </data:DataGrid>
                                                    </Grid>
                                                    <!--<Grid Grid.Row="3" Name="PregnacncyAchievedGridSurrogate2" Visibility="Collapsed">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>
                                                    <TextBlock Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Right" Text="Pregnancy Achieved" Margin="4"></TextBlock>
                                                    <CustomCombo:AutoCompleteComboBox  Grid.Column="1" Grid.Row="0"  Width="130" x:Name="cmbPregnancyAchievedSurrogate2" HorizontalAlignment="Left"  SelectedItemBinding="{Binding MasterListItem, Mode=TwoWay}" SelectedValuePath="ID"  VerticalAlignment="Center" Text="" Margin="4" IsEnabled="False" />
                                                </Grid>-->
                                                </Grid>
                                            </layoutToolkit:AccordionItem>
                                        </layoutToolkit:Accordion>

                                        <CheckBox Grid.ColumnSpan="2" Grid.Row="1" IsThreeState="False" IsChecked="{Binding IsFreeze,Mode=TwoWay}" x:Name="chkIsFreeze" Content="Finalise" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Click="chkIsFreeze_Click"></CheckBox>



                                    </Grid>

                                </Border>

                                <Grid Grid.Row="6">
                                    <CheckBox IsThreeState="False" IsChecked="{Binding IsClosed,Mode=TwoWay}" Grid.Row="0" x:Name="chkIsclosed" Content="Is Closed" VerticalAlignment="Center" Margin="4" Click="chkIsclosed_Click"></CheckBox>
                                </Grid>
                            </Grid>

                            <StackPanel  Orientation="Horizontal"  Margin="0,0,0,0" HorizontalAlignment="Right" Grid.Row="1" Grid.Column="1">
                                <controlsToolkit:DockPanel controlsToolkit:DockPanel.Dock="Bottom" HorizontalAlignment="Right" VerticalAlignment="Center" >
                                    <Border BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="3" controlsToolkit:DockPanel.Dock="Bottom" BorderThickness="1" CornerRadius="3,3,3,3" Background="Transparent">
                                        <StackPanel  Orientation="Horizontal" VerticalAlignment="Center"   Margin="3" HorizontalAlignment="Right" Background="Transparent">
                                            <StackPanel  Orientation="Horizontal"  Margin="0,0,0,0">
                                                <ToggleButton x:Name="cmdSaveOut"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="cmdSave_Click" TabIndex="3">
                                                    <StackPanel Orientation="Horizontal" >
                                                        <Common:XamlCheckmark Width="10" Height="10" Margin="0,0,5,0"/>
                                                        <TextBlock Text="Save" TextWrapping="Wrap"/>
                                                    </StackPanel>
                                                </ToggleButton>
                                            </StackPanel>
                                        </StackPanel>
                                    </Border>
                                </controlsToolkit:DockPanel>
                            </StackPanel>
                        </Grid>
                    </controlsToolkit:DockPanel>
                </controlsToolkit:DockPanel>
            </controlsToolkit:DockPanel>
        </controlsToolkit:DockPanel>
    </Grid>
</UserControl>
