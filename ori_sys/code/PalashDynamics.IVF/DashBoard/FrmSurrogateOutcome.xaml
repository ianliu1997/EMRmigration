                                                <StackPanel x:Name="Stack3" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="1" Orientation="Horizontal">
                                                    <TextBlock  VerticalAlignment="Center" HorizontalAlignment="Right" Text="No. Of Sacs Observed" Margin="4"></TextBlock>
                                                    <TextBox Width="120" VerticalAlignment="Center"  Text="{Binding NoOfSacs,Mode=TwoWay}" x:Name="txtNoOfSacs" Margin="4" TextChanged="txtNoOfSacs_TextChanged"  KeyDown="txtNoOfSacs_KeyDown" ></TextBox>
                                                    <TextBlock VerticalAlignment="Center" Text="Observation Date" Margin="4"></TextBlock>
                                                    <controls:DatePicker  HorizontalAlignment="Left"   VerticalAlignment="Center"  Margin="4" x:Name="dtObservationDate"></controls:DatePicker>
                                                    <TextBlock  VerticalAlignment="Center" HorizontalAlignment="Right" Text="Remark" Margin="4"></TextBlock>
                                                    <TextBox Width="200" VerticalAlignment="Center"  Text="{Binding SacRemark,Mode=TwoWay}" x:Name="txtSacRemark" Margin="4" ></TextBox>
                                                    <StackPanel Orientation="Horizontal" x:Name="PregnacncyAchievedGrid" Visibility="Collapsed">
                                                        <TextBlock Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Right" Text="Pregnancy Achieved" Margin="4"></TextBlock>
