                                        <TextBox  Grid.Column="2"  Grid.Row="4" VerticalAlignment="Center" Margin="4"  x:Name="txtHomoNativeNormalForms" TextAlignment="Left"  TextChanged="txtText_TextChanged" KeyDown="txtText_KeyDown"></TextBox>
