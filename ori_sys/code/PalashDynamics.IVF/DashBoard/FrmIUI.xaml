                                        <TextBox  Grid.Column="2"  Grid.Row="5" VerticalAlignment="Center" Margin="4"  x:Name="txtHomoNativeTotalNoOfSperms" TextAlignment="Left"  TextChanged="txtText_TextChanged" KeyDown="txtText_KeyDown"></TextBox>
