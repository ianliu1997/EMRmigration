                                        <TextBox  Grid.Column="4"  Grid.Row="5" VerticalAlignment="Center" Margin="4"  x:Name="txtHomoAfterPrepTotalNoOfSperms" TextAlignment="Left"  TextChanged="txtText_TextChanged" KeyDown="txtText_KeyDown"></TextBox>

                                    </Grid>
                                </grb:GroupBox>

                                <grb:GroupBox  Header="_"  Grid.Row="2"  Margin="4">
                                    <Grid >
                                        <Grid.RowDefinitions>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
