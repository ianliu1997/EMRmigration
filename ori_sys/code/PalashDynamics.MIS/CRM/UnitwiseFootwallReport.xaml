<UserControl x:Class="PalashDynamics.MIS.CRM.UnitwiseFootwallReport"
             xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit" 
           xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"   
    xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"  
    xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"   
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="UserControl_Loaded"   xmlns:Grp="clr-namespace:Groupbox;assembly=Groupbox"
xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"             
  Height="Auto" Width="600"            
   >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
         
        </ResourceDictionary>
    </UserControl.Resources>

    
    <Grid>
        
        <Border BorderBrush="{StaticResource TabControlDarkerBorder}" Margin="4" BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
           
            <toolkit:DockPanel LastChildFill="True" VerticalAlignment="Stretch">
                <Border  controlsToolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}" BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                    <ContentControl VerticalAlignment="Top" Grid.ColumnSpan="4" FontSize="12" Content="UNIT WISE FOOTFALL REPORT" Margin="-1" Style="{StaticResource Header}" HorizontalAlignment="Stretch"/>
                </Border>
                <toolkit:DockPanel toolkit:DockPanel.Dock="Bottom" Margin="4">
                    <StackPanel x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">

                        <StackPanel Orientation="Horizontal"  Margin="1" HorizontalAlignment="Right"  >

                            <ToggleButton x:Name="cmdPrint" Content="Print"   Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible"  Click="cmdPrint_Click"  ></ToggleButton>

                            <ToggleButton Content="Cancel" x:Name="cmdCancel" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}"     Click="cmdCancel_Click"      ></ToggleButton>
                        </StackPanel>
                    </StackPanel>
                  
                </toolkit:DockPanel >
                <toolkit:DockPanel toolkit:DockPanel.Dock="Top" Margin="4" VerticalAlignment="Stretch">
                   
                    <Grp:GroupBox Header="Search Criteria" Margin="4" VerticalAlignment="Stretch">
                    <Grid x:Name="LayoutRoot" Background="White" VerticalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                            </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" ></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                            <ColumnDefinition ></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                          
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="FromDate" Text="From Date" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" ></TextBlock>
                        <sdk:DatePicker x:Name="dtpFromDate" Grid.ColumnSpan="2" Grid.Column="1" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></sdk:DatePicker>
                        <TextBlock x:Name="ToDate" Text="To Date" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Column="3" ></TextBlock>
                        <sdk:DatePicker x:Name="dtpToDate" Grid.Column="4" Grid.ColumnSpan="2" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></sdk:DatePicker>
                        <TextBlock x:Name="LoyaltyCard" Text="Loyalty Card" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Column="3" Grid.Row="2" Visibility="Collapsed" ></TextBlock>
                        <inputcombo:AutoCompleteComboBox x:Name="cmbLoyaltyCard"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="4" Grid.ColumnSpan="2" Grid.Row="2" Margin="4" Visibility="Collapsed" ></inputcombo:AutoCompleteComboBox>
                        
                        <TextBlock x:Name="Clinic" Text="Clinic" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Column="0" Grid.Row="1" ></TextBlock>
                        <inputcombo:AutoCompleteComboBox x:Name="cmbClinic"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="1" Margin="4"  ></inputcombo:AutoCompleteComboBox>
                            <TextBlock x:Name="VisitCount" Visibility="Collapsed"  Text="Visit Count" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Column="0" Grid.Row="2" ></TextBlock>
                        <TextBox x:Name="txtVisitCount" Visibility="Collapsed" Margin="4" Grid.Column="1" Grid.ColumnSpan="2" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Stretch"></TextBox>
                        <CheckBox Grid.Row="3" Margin="4" Grid.Column="0" HorizontalAlignment="Right" Content="Export to Excel" x:Name="chkExporttoExcel" Visibility="Collapsed"></CheckBox>

                        </Grid>
                    </Grp:GroupBox>
                </toolkit:DockPanel>

            </toolkit:DockPanel>

        </Border>
    </Grid>
    

</UserControl>
