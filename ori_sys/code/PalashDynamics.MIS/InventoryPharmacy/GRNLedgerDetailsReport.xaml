<UserControl xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"  xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"  
             x:Class="PalashDynamics.MIS.InventoryPharmacy.GRNLedgerDetailsReport"
    xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Grp="clr-namespace:Groupbox;assembly=Groupbox"
             xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" Loaded="UserControl_Loaded"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Height="180" Width="400">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot" Background="White">
        <Border BorderBrush="{StaticResource TabControlDarkerBorder}" Margin="4"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
            <controlsToolkit:DockPanel LastChildFill="True">
                <Border  controlsToolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}" BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                    <ContentControl VerticalAlignment="Top" Grid.ColumnSpan="4" FontSize="12" Content="GRN LEDGER REPORT" Margin="-1" Style="{StaticResource Header}" HorizontalAlignment="Stretch"/>
                </Border>
                <!--<Border BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" controlsToolkit:DockPanel.Dock="Bottom" BorderThickness="1" CornerRadius="3,3,3,3" Background="Transparent" >-->
                <StackPanel x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent" controlsToolkit:DockPanel.Dock="Bottom">
                    <StackPanel Orientation="Horizontal"  Margin="1" HorizontalAlignment="Right"  >
                        <ToggleButton Content="Print" x:Name="cmdPrint" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}"  Click="cmdPrint_Click_1"  TabIndex="6"></ToggleButton>
                        <ToggleButton Content="Cancel" x:Name="cmdCancel" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}"  TabIndex="9" Click="cmdCancel_Click"></ToggleButton>
                    </StackPanel>
                </StackPanel>
                <!--</Border>-->



                <controlsToolkit:DockPanel x:Name="docList" LastChildFill="True">

                    <controlsToolkit:DockPanel x:Name="DockTop" controlsToolkit:DockPanel.Dock="Top" HorizontalAlignment="Stretch">

                        <Grid x:Name="LayoutRoot2" Background="White" Margin="4" HorizontalAlignment="Stretch"  >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition ></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition ></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>

                            </Grid.ColumnDefinitions>

                            <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="4" Text="From Date"  Grid.Row="0" Grid.Column="0"/>
                            <sdk:DatePicker x:Name="dtpFromDate"  Grid.Column="1" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></sdk:DatePicker>

                            <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="4" Text="To Date"  Grid.Row="0" Grid.Column="2"/>
                            <sdk:DatePicker x:Name="dtpToDate"  Grid.Column="3" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></sdk:DatePicker>
                            <TextBlock x:Name="Clinic" Text="Clinic" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Row="1" Grid.Column="0" ></TextBlock>
                            <inputcombo:AutoCompleteComboBox   x:Name="cmbClinic" SelectedValuePath="ID" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" Grid.Row="1" Grid.Column="1"  Margin="4"   HorizontalAlignment="Stretch" TabIndex="2"  />

                            <TextBlock Visibility="Collapsed" x:Name="Store" Text="Store" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Column="2" Grid.Row="1" ></TextBlock>
                            <inputcombo:AutoCompleteComboBox Visibility="Collapsed"  x:Name="cmbStore" SelectedItemBinding="{Binding clsStoreVO, Mode=OneWay}" SelectedValuePath="ID" VerticalAlignment="Center"   Grid.Column= "3" Grid.Row="1" Margin="4" Grid.ColumnSpan="2" ></inputcombo:AutoCompleteComboBox>

                            <TextBlock Text="GRN No." VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Column="2" Grid.Row="1" ></TextBlock>
                            <TextBox x:Name="txtMrNo" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Stretch" Grid.Column="3" Grid.Row="1" />
                            
                            <CheckBox x:Name="chkIsExcel" Grid.Column="3" Grid.Row="2" Content="Export to Excel" Margin="4" VerticalAlignment="Center"/>
                        </Grid>
                    </controlsToolkit:DockPanel>
                </controlsToolkit:DockPanel>
            </controlsToolkit:DockPanel>
        </Border>


    </Grid>
</UserControl>