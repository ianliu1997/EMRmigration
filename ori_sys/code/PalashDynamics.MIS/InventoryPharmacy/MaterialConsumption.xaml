<UserControl x:Class="PalashDynamics.MIS.InventoryPharmacy.MaterialConsumption" xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
   xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"               
    xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Grp="clr-namespace:Groupbox;assembly=Groupbox"
             xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" Loaded="UserControl_Loaded"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Height="230" Width="450" >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Border BorderBrush="{StaticResource TabControlDarkerBorder}" Margin="4"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
            <toolkit:DockPanel LastChildFill="True">
                <Border  controlsToolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}" BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                    <ContentControl VerticalAlignment="Top" Grid.ColumnSpan="4" FontSize="12" Content="Material Consumption" Margin="-1" Style="{StaticResource Header}" HorizontalAlignment="Stretch"/>
                </Border>
                <toolkit:DockPanel toolkit:DockPanel.Dock="Bottom" Margin="4">

                    <StackPanel x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                        <StackPanel Orientation="Horizontal"  Margin="1" HorizontalAlignment="Right"  >
                            <ToggleButton x:Name="cmdPrint" Content="Print"   Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="cmdPrint_Click" ></ToggleButton>
                            <ToggleButton Content="Cancel" x:Name="cmdCancel" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Checked="cmdCancel_Checked"></ToggleButton>
                        </StackPanel>
                    </StackPanel>


                </toolkit:DockPanel >
                <toolkit:DockPanel toolkit:DockPanel.Dock="Top" Margin="4">
                    <Grp:GroupBox Header="Search Criteria" Margin="4">
                        <Grid x:Name="LayoutRoot" Background="White">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>

                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" ></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition Width="auto"></ColumnDefinition>
                                <ColumnDefinition ></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>

                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="FromDate" Text="From Date" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" ></TextBlock>
                            <sdk:DatePicker x:Name="dtpFromDate" Grid.ColumnSpan="2" Grid.Column="1" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></sdk:DatePicker>
                            <TextBlock x:Name="ToDate" Text="To Date" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Column="3" ></TextBlock>
                            <sdk:DatePicker x:Name="dtpToDate" Grid.Column="4" Grid.ColumnSpan="2" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></sdk:DatePicker>
                            <TextBlock x:Name="Clinic" Text="Clinic" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Row="1" ></TextBlock>
                            <inputcombo:AutoCompleteComboBox   x:Name="cmbClinic" SelectedValuePath="ID" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" Grid.Row="1" Grid.Column="1"  Margin="4"  Grid.ColumnSpan="2"   HorizontalAlignment="Stretch" TabIndex="2" SelectionChanged="cmbClinic_SelectionChanged" />

                            <TextBlock x:Name="Store" Text="Store" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Column="3" Grid.Row="1" ></TextBlock>
                            <inputcombo:AutoCompleteComboBox x:Name="cmbStore" SelectedValuePath="StoreID" SelectedItemBinding="{Binding clsStoreVO, Mode=OneWay}" Grid.Row="1" Grid.Column="4"  Margin="4" Grid.ColumnSpan="2"   HorizontalAlignment="Stretch" TabIndex="2" />

                            <TextBlock x:Name="MRNo" Text="MRN" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Column="0" Grid.Row="2" ></TextBlock>
                            <TextBox Grid.Row="2" Grid.Column="1" Margin="4,0,0,6" HorizontalAlignment="Left" x:Name="txtMRNO"  MaxLength="20" Grid.ColumnSpan="2" Width="111" Height="50"></TextBox>
                            
                            <TextBlock x:Name="PName" Text="Patient First Name" VerticalAlignment="Center" Margin="0,12,4,30" HorizontalAlignment="Right" Grid.Column="3" Grid.Row="2" Height="14"></TextBlock>
                            <TextBox Grid.Row="2" Grid.Column="4" Margin="4,0,0,30" HorizontalAlignment="Left" x:Name="txtPName"  MaxLength="20" Grid.ColumnSpan="2" Width="113" Height="26"></TextBox>
                            <CheckBox Content="Export To Excel" Grid.Column="4" Grid.ColumnSpan="2" Grid.Row="2" Height="20" HorizontalAlignment="Left" Margin="5,30,0,0" Name="chkIsExcel" VerticalAlignment="Top" Width="106" />
                        </Grid>
                    </Grp:GroupBox>
                </toolkit:DockPanel>

            </toolkit:DockPanel>

        </Border>
    </Grid>
</UserControl>
