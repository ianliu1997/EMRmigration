<UserControl x:Class="PalashDynamics.MIS.InventoryPharmacy.IndentReceiveandIssueReport"
   xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"  xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
   xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"  
   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Grp="clr-namespace:Groupbox;assembly=Groupbox"
             xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox" 
   xmlns:d="http://schemas.microsoft.com/expression/blend/2008" Loaded="UserControl_Loaded"
   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
   Height="250" Width="450">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Border BorderBrush="{StaticResource TabControlDarkerBorder}" Margin="4"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
            <toolkit:DockPanel LastChildFill="True">
                <Border  controlsToolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}" BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                    <ContentControl VerticalAlignment="Top"  FontSize="12" Content="INDENT RECEIVE AND ISSUE REPORT" Margin="-1" Style="{StaticResource Header}" HorizontalAlignment="Stretch"/>
                </Border>
                <toolkit:DockPanel toolkit:DockPanel.Dock="Bottom" Margin="4">

                    <StackPanel x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">

                        <StackPanel Orientation="Horizontal"  Margin="1" HorizontalAlignment="Right"  >

                            <ToggleButton x:Name="cmdPrint" Content="Print"   Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="cmdPrint_Click" ></ToggleButton>

                            <ToggleButton Content="Cancel" x:Name="cmdCancel" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Checked="cmdCancel_Checked"></ToggleButton>
                        </StackPanel>
                    </StackPanel>


                </toolkit:DockPanel >
                <toolkit:DockPanel toolkit:DockPanel.Dock="Top" Margin="4">
                    <Grp:GroupBox Header="Search Criteria" Margin="4">
                        <Grid x:Name="LayoutRoot" Background="White">
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition ></RowDefinition>
                                <RowDefinition ></RowDefinition>
                                
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition Width="auto"></ColumnDefinition>
                                <ColumnDefinition ></ColumnDefinition>

                            </Grid.ColumnDefinitions>
                            <TextBlock Margin="4" x:Name="FromDate" Text="From Date" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="0" Grid.Row="0"></TextBlock>
                            <sdk:DatePicker Margin="4" x:Name="dtpFromDate" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></sdk:DatePicker>
                            <TextBlock Margin="4" x:Name="ToDate" Text="To Date" VerticalAlignment="Center"  HorizontalAlignment="Right" Grid.Column="2" Grid.Row="0" ></TextBlock>
                            <sdk:DatePicker Margin="4" x:Name="dtpToDate" Grid.Column="3" Grid.Row="0"  HorizontalAlignment="Stretch" VerticalAlignment="Center" ></sdk:DatePicker>

                            <TextBlock Margin="4" x:Name="Clinic" Text="Clinic" VerticalAlignment="Center"  Grid.Column="0" Grid.Row="1"   HorizontalAlignment="Right"></TextBlock>
                            <inputcombo:AutoCompleteComboBox Margin="4" x:Name="cmbClinic"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1"  SelectionChanged="cmbClinic_SelectionChanged"></inputcombo:AutoCompleteComboBox>
                            
                            <TextBlock Margin="4" x:Name="Store" Text="From Store" VerticalAlignment="Center" Grid.Row="1" Grid.Column= "2"  HorizontalAlignment="Right"></TextBlock>
                            <inputcombo:AutoCompleteComboBox  HorizontalAlignment="Stretch"  x:Name="cmbStore" SelectedItemBinding="{Binding clsStoreVO, Mode=OneWay}" SelectedValuePath="ID" VerticalAlignment="Center"   Grid.Column= "3" Grid.Row="1" Margin="4">
                            </inputcombo:AutoCompleteComboBox>
                            <!--<inputcombo:AutoCompleteComboBox Margin="4" x:Name="cmbStore"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column= "3" Grid.Row="1"  ></inputcombo:AutoCompleteComboBox>-->

                            <RadioButton x:Name="Indent" Content="Indent" Margin="4" GroupName="Doc"   Grid.Row="2" Grid.Column= "1" IsChecked="True"></RadioButton>
                            <RadioButton x:Name="Direct" Content="Direct" Margin="4" GroupName="Doc"   Grid.Row="2" Grid.Column= "2"></RadioButton>

                            <CheckBox Margin="4" x:Name="chkExcel" Content="Export To Excel" Grid.Row="4" Grid.Column="1"></CheckBox>
                        </Grid>
                    </Grp:GroupBox>
                </toolkit:DockPanel>

            </toolkit:DockPanel>

        </Border>
    </Grid>
</UserControl>
