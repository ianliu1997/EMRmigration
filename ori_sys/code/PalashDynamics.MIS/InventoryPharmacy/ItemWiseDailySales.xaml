<UserControl xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"  xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"  x:Class="PalashDynamics.MIS.InventoryPharmacy.ItemWiseDailySales"
    xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
    xmlns:Grp="clr-namespace:Groupbox;assembly=Groupbox" Loaded="UserControl_Loaded"
    mc:Ignorable="d"
   Height="280" Width="450" >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Height="Auto" Width="Auto">
        <Border BorderBrush="{StaticResource TabControlDarkerBorder}" Margin="4"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
            <toolkit:DockPanel LastChildFill="True">
                <Border  controlsToolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}" BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                    <ContentControl VerticalAlignment="Top" Grid.ColumnSpan="4" FontSize="12" Content="Item wise Sales Report" Margin="-1" Style="{StaticResource Header}" HorizontalAlignment="Stretch"/>
                </Border>
                <toolkit:DockPanel toolkit:DockPanel.Dock="Bottom" Margin="4">

                    <StackPanel x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">

                        <StackPanel Orientation="Horizontal"  Margin="1" HorizontalAlignment="Right"  >

                            <CheckBox Margin="4" x:Name="chkExcel" Content="Export To Excel" Grid.Row="8" Grid.ColumnSpan="3" Grid.Column="4"></CheckBox>
                            <ToggleButton x:Name="cmdPrint" Content="Print"   Background="#000000" Margin="5,0,0,0" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible"  Click="cmdPrint_Click"  ></ToggleButton>

                            <ToggleButton Content="Cancel" x:Name="cmdCancel" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Checked="cmdCancel_Checked"></ToggleButton>
                        </StackPanel>
                    </StackPanel>


                </toolkit:DockPanel >
                <toolkit:DockPanel toolkit:DockPanel.Dock="Top" Margin="4">
                    <Grp:GroupBox Header="Search Criteria" Margin="4">
                        <Grid x:Name="LayoutRoot" Background="White">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition ></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" ></ColumnDefinition>
                                <ColumnDefinition Width="74*"></ColumnDefinition>
                                <ColumnDefinition Width="52"></ColumnDefinition>
                                <ColumnDefinition Width="21" />
                                <ColumnDefinition Width="auto"></ColumnDefinition>
                                <ColumnDefinition Width="74*"></ColumnDefinition>
                                <ColumnDefinition Width="73*"></ColumnDefinition>

                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="FromDate" Text="From Date" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" ></TextBlock>
                            <sdk:DatePicker x:Name="dtpFromDate" Grid.ColumnSpan="3" Grid.Column="1" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></sdk:DatePicker>
                            <TextBlock x:Name="ToDate" Text="To Date" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Column="4" ></TextBlock>
                            <sdk:DatePicker x:Name="dtpToDate" Grid.Column="5" Grid.ColumnSpan="2" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></sdk:DatePicker>
                            <!--add new changes here.-->
                            <!--Added By Pallavi-->
                            
                            <TextBlock x:Name="Clinic" Text="Clinic" VerticalAlignment="Center" Margin="4" Grid.Row="1"   HorizontalAlignment="Right"></TextBlock>
                            <inputcombo:AutoCompleteComboBox x:Name="cmbClinic"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="1"  Grid.Row="1" Margin="4" Grid.ColumnSpan="3" SelectionChanged="cmbClinic_SelectionChanged"></inputcombo:AutoCompleteComboBox>
                            <TextBlock x:Name="Store" Text="Store" VerticalAlignment="Center" Margin="4" Grid.Row="1" Grid.Column= "4"  HorizontalAlignment="Right"></TextBlock>
                            <inputcombo:AutoCompleteComboBox x:Name="cmbStore"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column= "5" Grid.Row="1" Margin="4" Grid.ColumnSpan="2" SelectionChanged="cmbStore_SelectionChanged"></inputcombo:AutoCompleteComboBox>
                            
                            <!---->
                            <TextBlock x:Name="ItemGroup" Visibility="Visible" Text="Item Group" VerticalAlignment="Center" Grid.Row="3" Grid.Column="0" Margin="4" HorizontalAlignment="Right" ></TextBlock>
                            <inputcombo:AutoCompleteComboBox Margin="4" Visibility="Visible" x:Name="cmbSelectItemGroup" SelectedItemBinding="{Binding EmailDescription, Mode=OneWay}"  SelectedValuePath="ID" SelectionChanged="cmbSelectItemGroup_SelectionChanged" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" HorizontalAlignment="Stretch" VerticalAlignment="Center"></inputcombo:AutoCompleteComboBox>

                            <TextBlock x:Name="ItemCategory" Text="Item Category" Visibility="Visible" VerticalAlignment="Center" Grid.Row="3" Grid.Column="4" Margin="4" HorizontalAlignment="Right" ></TextBlock>
                            <inputcombo:AutoCompleteComboBox Margin="4" Visibility="Visible" x:Name="cmbSelectItemCategory" SelectedItemBinding="{Binding EmailDescription, Mode=OneWay}"  SelectedValuePath="ID" SelectionChanged="cmbSelectItemCategory_SelectionChanged" Grid.Row="3" Grid.Column="5" Grid.ColumnSpan="5"  HorizontalAlignment="Stretch" VerticalAlignment="Center"></inputcombo:AutoCompleteComboBox>
                            
                            <CheckBox Margin="10" x:Name="chkIsPackage" Content="Package Sales Show" Grid.Row="6" Grid.ColumnSpan="4" Grid.Column="1"></CheckBox>
                            
                            <TextBlock x:Name="ItemDispensing" Visibility="Collapsed" Text="Item Dispensing" VerticalAlignment="Center" Grid.Row="4" Grid.Column="0" Margin="4" HorizontalAlignment="Right" ></TextBlock>
                            <inputcombo:AutoCompleteComboBox Margin="4" Visibility="Collapsed" x:Name="cmbSelectItemDispensing" SelectedItemBinding="{Binding EmailDescription, Mode=OneWay}"  SelectedValuePath="ID" SelectionChanged="cmbSelectItemDispensing_SelectionChanged" Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="5" HorizontalAlignment="Stretch" VerticalAlignment="Center"></inputcombo:AutoCompleteComboBox>

                            <TextBlock x:Name="TherClass" Text="Theraputic Class" Visibility="Collapsed" VerticalAlignment="Center" Grid.Row="5" Grid.Column="0" Margin="4" HorizontalAlignment="Right" ></TextBlock>
                            <inputcombo:AutoCompleteComboBox Margin="4" Visibility="Collapsed" x:Name="cmbSelectTherClass" SelectedItemBinding="{Binding EmailDescription, Mode=OneWay}"  SelectedValuePath="ID" SelectionChanged="cmbSelectTherClass_SelectionChanged" Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="5"  HorizontalAlignment="Stretch" VerticalAlignment="Center"></inputcombo:AutoCompleteComboBox>

                            <TextBlock x:Name="MoleculeName" Visibility="Collapsed" Text="Molecule Name" VerticalAlignment="Center" Grid.Row="6" Grid.Column="0" Margin="4" HorizontalAlignment="Right" ></TextBlock>
                            <inputcombo:AutoCompleteComboBox Margin="4" Visibility="Collapsed" x:Name="cmbSelectMoleculeName" SelectedItemBinding="{Binding EmailDescription, Mode=OneWay}"  SelectedValuePath="ID" SelectionChanged="cmbSelectMoleculeName_SelectionChanged" Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="5"  HorizontalAlignment="Stretch" VerticalAlignment="Center"></inputcombo:AutoCompleteComboBox>

                            <!--End of new changes-->
                            
                            <!--<CheckBox x:Name="chkAllStores"  Margin="4" Grid.ColumnSpan="2" Grid.Column="1" Grid.Row="7" Content="Select All"  Visibility="Visible" Checked="chkAllStores_Checked" Unchecked="chkAllStores_Unchecked"   ></CheckBox>-->
                            <!--<TextBlock Visibility="Collapsed" x:Name="Item" Margin="4" Text="Item" VerticalAlignment="Center"   HorizontalAlignment="Right" Grid.Row="7"></TextBlock>-->

                            <inputcombo:AutoCompleteComboBox Visibility="Collapsed" x:Name="cmbItem"  SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="5" Margin="4" SelectionChanged="cmbItem_SelectionChanged"></inputcombo:AutoCompleteComboBox>
                            <ToggleButton Visibility="Collapsed" x:Name="cmdAdd" Margin="4" Content="Add"   Background="#000000"  HorizontalAlignment="Left" Style="{StaticResource ToggleButtonStyle}" Grid.Row="7" Grid.Column="6" Click="cmdAdd_Click" ></ToggleButton>

                            <TextBlock Grid.Column="4" Grid.Row="2" Text="Doctor" Margin="1" HorizontalAlignment="Right" VerticalAlignment="Center"></TextBlock>
                            <inputcombo:AutoCompleteComboBox HorizontalAlignment="Stretch"  TabIndex="14" Margin="4" Grid.ColumnSpan="3" Grid.Column="5" Grid.Row="2"  x:Name="cmbDoctor"  SelectedValuePath="ID" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" ></inputcombo:AutoCompleteComboBox>


                            

                            <sdk:DataGrid Visibility="Collapsed" x:Name="lstItems" ItemsSource="{Binding}" VerticalScrollBarVisibility="Auto" AutoGenerateColumns="False"   Grid.ColumnSpan="6" Grid.Row="9" Grid.Column="1" Width="auto"   Height="auto" Margin="4">
                                <sdk:DataGrid.Columns>
                                    <sdk:DataGridTemplateColumn>
                                        <sdk:DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate >
                                                <CheckBox x:Name="chkStores" IsChecked="{Binding IsSelected, Mode=TwoWay}"  Unchecked="chkStores_Unchecked_1" ></CheckBox>
                                                
                                            </DataTemplate>
                                        </sdk:DataGridTemplateColumn.CellTemplate>
                                    </sdk:DataGridTemplateColumn>
                                    <sdk:DataGridTextColumn Binding="{Binding ItemName, Mode=OneWay}" Header="Item Name" IsReadOnly="True"/>
                                </sdk:DataGrid.Columns>
                            </sdk:DataGrid>

                            <TextBlock x:Name="Item"  Text="Item" VerticalAlignment="Top"  Margin="4" HorizontalAlignment="Right" Grid.Column="0" Grid.Row="2" ></TextBlock>
                            <TextBox x:Name="txtItemName" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="3" VerticalAlignment="Stretch" Margin="4"/>
                            
                        </Grid>
                    </Grp:GroupBox>
                </toolkit:DockPanel>

            </toolkit:DockPanel>

        </Border>
    </Grid>
</UserControl>
<!-- IsChecked="{Binding Status,Mode=TwoWay}"    <CheckBox Margin="10,2,10,2"  x:Name="chkStatus" IsChecked="{Binding Status,Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" ></CheckBox >-->