<UserControl xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"  xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"  x:Class="PalashDynamics.MIS.InventoryPharmacy.GRNReportWithoutItem"
    xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
              xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
    mc:Ignorable="d" xmlns:Grp="clr-namespace:Groupbox;assembly=Groupbox" Loaded="UserControl_Loaded"
   Height="240" Width="500">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <Border BorderBrush="{StaticResource TabControlDarkerBorder}" Margin="4"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
            <toolkit:DockPanel LastChildFill="True">
                <Border  controlsToolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}" BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                    <ContentControl VerticalAlignment="Top" Grid.ColumnSpan="4" FontSize="12" Content="GOODS RECEIVED NOTE REPORT" Margin="-1" Style="{StaticResource Header}" HorizontalAlignment="Stretch"/>
                </Border>
                <toolkit:DockPanel toolkit:DockPanel.Dock="Bottom" Margin="4">

                    <StackPanel x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">

                        <StackPanel Orientation="Horizontal"  Margin="1" HorizontalAlignment="Right"  >

                            <ToggleButton x:Name="cmdPrint" Content="Print"   Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible"  Click="cmdPrint_Click"  ></ToggleButton>

                            <ToggleButton Content="Cancel" x:Name="cmdCancel" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Checked="cmdCancel_Checked"></ToggleButton>
                        </StackPanel>
                    </StackPanel>


                </toolkit:DockPanel >
                <toolkit:DockPanel toolkit:DockPanel.Dock="Top" Margin="4">
                    <Grp:GroupBox Header="Search Criteria" Margin="4">
                        <Grid x:Name="LayoutRoot" Background="White">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" ></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition Width="auto"></ColumnDefinition>
                                <ColumnDefinition ></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="0" x:Name="FromDate" Text="From Date" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" ></TextBlock>
                            <sdk:DatePicker x:Name="dtpFromDate" Grid.Row="0" Grid.Column="1" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></sdk:DatePicker>
                            <TextBlock x:Name="ToDate" Text="To Date" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Row="0" Grid.Column="2" ></TextBlock>
                            <sdk:DatePicker x:Name="dtpToDate" Grid.Row="0" Grid.Column="3" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></sdk:DatePicker>
                            <TextBlock x:Name="Clinic" Text="Clinic" VerticalAlignment="Center" Margin="4" Grid.Row="1" Grid.Column="0"   HorizontalAlignment="Right"></TextBlock>
                            <inputcombo:AutoCompleteComboBox x:Name="cmbClinic"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" Margin="4"  SelectionChanged="cmbClinic_SelectionChanged"></inputcombo:AutoCompleteComboBox>

                            <TextBlock x:Name="Store" Text="Store" VerticalAlignment="Center" Margin="4" Grid.Row="1" Grid.Column="2"  HorizontalAlignment="Right"></TextBlock>
                            <!--<inputcombo:AutoCompleteComboBox x:Name="cmbStore"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="4" Grid.Row="1" Grid.Column="3" SelectionChanged="cmbStore_SelectionChanged"></inputcombo:AutoCompleteComboBox>-->
                            <inputcombo:AutoCompleteComboBox  x:Name="cmbStore" SelectedItemBinding="{Binding clsStoreVO, Mode=OneWay}" SelectedValuePath="ID" VerticalAlignment="Center"   Grid.Column= "4" Grid.Row="1" Margin="4" Grid.ColumnSpan="2" SelectionChanged="cmbStore_SelectionChanged"></inputcombo:AutoCompleteComboBox>

                            <TextBlock x:Name="Supplier" Text="Supplier" VerticalAlignment="Center" Margin="4" Grid.Row="2" Grid.Column="0"   HorizontalAlignment="Right"></TextBlock>
                            <inputcombo:AutoCompleteComboBox x:Name="cmbSupplier"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Row="2" Grid.Column="1" Margin="4"  SelectionChanged="cmbSupplier_SelectionChanged"></inputcombo:AutoCompleteComboBox>
                            <CheckBox Margin="4" x:Name="chkExcel" Content="Export To Excel" Grid.Row="4" Grid.Column="1"></CheckBox>
                            <!--<TextBlock x:Name="Item" Text="Item" VerticalAlignment="Top"  Margin="4" HorizontalAlignment="Right" Grid.Column="0" Grid.Row="3" ></TextBlock>
                            <ToggleButton x:Name="cmdAdd" Content="Add"   Background="#000000" Margin="4" HorizontalAlignment="Right" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible"  Grid.Row="3" Grid.Column="5" Click="cmdAdd_Click" ></ToggleButton>
                            <inputcombo:AutoCompleteComboBox x:Name="cmbItem"  SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="4" Margin="4" SelectionChanged="cmbItem_SelectionChanged"></inputcombo:AutoCompleteComboBox>
                            <sdk:DataGrid x:Name="lstItems" ItemsSource="{Binding}" VerticalScrollBarVisibility="Auto" AutoGenerateColumns="False"   Grid.ColumnSpan="5" Grid.RowSpan="3"   Grid.Row="4" Grid.Column="1" Width="auto"   Height="auto">
                                <sdk:DataGrid.Columns>
                                    <sdk:DataGridTemplateColumn Header="Select">
                                        <sdk:DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate >
                                                <CheckBox x:Name="chkStores" IsChecked="{Binding IsSelected, Mode=TwoWay}" HorizontalAlignment="Center" VerticalAlignment="Center" Unchecked="chkStores_Unchecked"     ></CheckBox>

                                            </DataTemplate>
                                        </sdk:DataGridTemplateColumn.CellTemplate>
                                    </sdk:DataGridTemplateColumn>
                                    <sdk:DataGridTextColumn Binding="{Binding ItemName, Mode=OneWay}" Header="Item Name" IsReadOnly="True"/>
                                </sdk:DataGrid.Columns>
                            </sdk:DataGrid>-->

                        </Grid>
                    </Grp:GroupBox>
                </toolkit:DockPanel>

            </toolkit:DockPanel>

        </Border>
    </Grid>
</UserControl>
