<UserControl x:Class="PalashDynamics.MIS.Operation_Theatre.OTReports"
     xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Border HorizontalAlignment="Stretch" BorderThickness="2" Margin="8,8,8,8" CornerRadius="0,0,3,3" Background="Transparent">
        <toolkit:DockPanel LastChildFill="True" >
            <toolkit:DockPanel  x:Name="Links" toolkit:DockPanel.Dock="Top">
                <Grid toolkit:DockPanel.Dock="Top">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition ></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <HyperlinkButton Grid.Row="0" Visibility="Visible"  Grid.Column="0" Content="OT BOOKING LIST" x:Name="hlOtBookingList" Click ="hlOtBookingList_Click"   Margin="2"    />
                    <HyperlinkButton Grid.Row="1" Visibility="Visible"  Grid.Column="0" Content="CANCELLED OT BOOKING LIST" x:Name="hlCancelledOTBookingList" Margin="2" Click="hlCancelledOTBookingList_Click"  />
                </Grid>
            </toolkit:DockPanel>
            <toolkit:DockPanel Visibility="Collapsed" toolkit:DockPanel.Dock="Top" x:Name="content_control">
                <ContentControl x:Name="content"  ></ContentControl>
            </toolkit:DockPanel>
        </toolkit:DockPanel>
    </Border>
</UserControl>
