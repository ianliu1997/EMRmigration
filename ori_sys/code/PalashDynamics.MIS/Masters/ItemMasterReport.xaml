<UserControl x:Class="PalashDynamics.MIS.Masters.ItemMasterReport"
     xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit" 
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"  
    xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"   
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="UserControl_Loaded"  xmlns:Grp="clr-namespace:Groupbox;assembly=Groupbox"
xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"             
  Height="Auto" Width="600">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>
    <!--<Grid x:Name="LayoutRoot" Background="White">

    </Grid>-->
    <Grid>

        <Border BorderBrush="{StaticResource TabControlDarkerBorder}" Margin="4" BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">

            <toolkit:DockPanel LastChildFill="True" VerticalAlignment="Stretch">
                <Border  controlsToolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}" BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                    <ContentControl VerticalAlignment="Top" Grid.ColumnSpan="4" FontSize="12" Content="ITEM MASTER REPORT" Margin="-1" Style="{StaticResource Header}" HorizontalAlignment="Stretch"/>
                </Border>
                <toolkit:DockPanel toolkit:DockPanel.Dock="Bottom" Margin="4">
                    <StackPanel x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">

                        <StackPanel Orientation="Horizontal"  Margin="1" HorizontalAlignment="Right"  >

                            <ToggleButton x:Name="cmdPrint" Content="Print"   Background="#000000" Margin="5,0,0,0" TabIndex="13" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible"  Click="cmdPrint_Click"  ToolTipService.ToolTip="Print"  ></ToggleButton>

                            <ToggleButton Content="Cancel" x:Name="cmdCancel" Background="#000000" Margin="5,0,0,0" TabIndex="14" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}"     Click="cmdCancel_Click" ToolTipService.ToolTip="Cancel" ></ToggleButton>
                        </StackPanel>
                    </StackPanel>

                </toolkit:DockPanel >
                <toolkit:DockPanel toolkit:DockPanel.Dock="Top" Margin="4" VerticalAlignment="Stretch">

                    <Grp:GroupBox Header="Search Criteria" Margin="4" VerticalAlignment="Stretch">
                        <Grid x:Name="LayoutRoot" Background="White" VerticalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" ></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition Width="Auto" ></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition  Width="Auto"></ColumnDefinition>

                            </Grid.ColumnDefinitions>

                            <!--<TextBlock x:Name="Doctortype" Text="Doctor Type" Grid.Row="0" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Column="0" Visibility="Visible"></TextBlock>
                            <inputcombo:AutoCompleteComboBox x:Name="cmbDoctorType"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="1" Grid.Row="0" Margin="4"  ></inputcombo:AutoCompleteComboBox>
                            <TextBlock x:Name="DoctorCategory" Text="Category" Grid.Row="0" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Column="2" Visibility="Visible"></TextBlock>
                            <inputcombo:AutoCompleteComboBox x:Name="cmbDoctorCategory"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="3" Grid.Row="0" Margin="4"  ></inputcombo:AutoCompleteComboBox>
                            <TextBlock x:Name="DoctorSpcialization" Text="Spcialization" Grid.Row="1" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Column="0" Visibility="Visible"></TextBlock>
                            <inputcombo:AutoCompleteComboBox x:Name="cmbDoctorSpcialization"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" Margin="4"  ></inputcombo:AutoCompleteComboBox>
                            <TextBlock x:Name="DoctorEducation" Text="Education" Grid.Row="1" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Column="2" Visibility="Visible"></TextBlock>
                            <TextBox x:Name="txtEducation" Grid.Row="1"  Grid.Column="3"  VerticalAlignment="Center" Margin="4"></TextBox>
                            <TextBlock x:Name="ToDate" Text="To Date" Grid.Row="0" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Column="2" Visibility="Collapsed"></TextBlock>
                            <sdk:DatePicker x:Name="dtpToDate" Grid.Row="0" Grid.Column="3"  Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" Visibility="Collapsed" ></sdk:DatePicker>-->
                            <TextBlock Text="Item Name" Margin="4" HorizontalAlignment="Right" Grid.Row="2" Grid.Column="0"></TextBlock>
                            <TextBox x:Name="txtItemName" Margin="4" Grid.Column="1" MaxLength="50" TabIndex="2" Grid.Row="2"  HorizontalAlignment="Stretch" Text="{Binding ItemName, Mode=TwoWay}"  ToolTipService.ToolTip="Please Eneter Item Name" ></TextBox>
                            <TextBlock Text="Molecule Name" Margin="4" HorizontalAlignment="Right" Grid.Row="2" Grid.Column="2"></TextBlock>
                            <inputcombo:AutoCompleteComboBox x:Name="cboMoleculeName" TabIndex="3" Grid.Row="2" Grid.Column="3" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID"  Margin="4" HorizontalAlignment="Stretch"  ToolTipService.ToolTip="Please Select Molecule Name" ></inputcombo:AutoCompleteComboBox>
                            <TextBlock Text="Item Group" Margin="4" HorizontalAlignment="Right" Grid.Row="4" Grid.Column="0"></TextBlock>
                            <inputcombo:AutoCompleteComboBox x:Name="cboItemGroup" TabIndex="4" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" SelectionChanged="cboItemGroup_SelectionChanged"     Grid.Row="4" Grid.Column="1"  Margin="4" HorizontalAlignment="Stretch"  ToolTipService.ToolTip="Please Select Item Group"></inputcombo:AutoCompleteComboBox>
                            <TextBlock Text="Item Category" Margin="4" HorizontalAlignment="Right" Grid.Row="4" Grid.Column="2"></TextBlock>
                            <inputcombo:AutoCompleteComboBox x:Name="cboItemCategory" TabIndex="5" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}"  SelectedValuePath="ID" Grid.Row="4" Grid.Column="3"  Margin="4" HorizontalAlignment="Stretch" ToolTipService.ToolTip="Please Select Item Category"></inputcombo:AutoCompleteComboBox>
                            <TextBlock Text="Dispensing Type" Margin="4" HorizontalAlignment="Right" Grid.Row="5" Grid.Column="0"></TextBlock>
                            <inputcombo:AutoCompleteComboBox x:Name="cboDispensingType" TabIndex="6" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}"  SelectedValuePath="ID"    Grid.Row="5" Grid.Column="1"  Margin="4" HorizontalAlignment="Stretch" ToolTipService.ToolTip="Please Select Dispensing Type"></inputcombo:AutoCompleteComboBox>
                            <TextBlock Text="Storage Type" Margin="4" HorizontalAlignment="Right" Grid.Row="5" Grid.Column="2"></TextBlock>
                            <Grid  Grid.Row="5" Grid.Column="3" Grid.ColumnSpan="4" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition ></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <inputcombo:AutoCompleteComboBox x:Name="cboStoreageType" TabIndex="7"  SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}"   SelectedValuePath="ID"  Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Margin="4" HorizontalAlignment="Stretch"  ToolTipService.ToolTip="Please Select Storage Type"></inputcombo:AutoCompleteComboBox>
                                
                            </Grid>
                            <TextBlock Text="Pregnancy Class" Margin="4" HorizontalAlignment="Right" Grid.Row="6" Grid.Column="0"></TextBlock>
                            <inputcombo:AutoCompleteComboBox x:Name="cbopregClass" TabIndex="9" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" Grid.Row="6" Grid.Column="1"  Margin="4" HorizontalAlignment="Stretch"  ToolTipService.ToolTip="Please Select Pregnancy Class"></inputcombo:AutoCompleteComboBox>
                            <TextBlock Text="Therapeutic Class" Margin="4" HorizontalAlignment="Right" Grid.Row="6" Grid.Column="2"></TextBlock>
                            <inputcombo:AutoCompleteComboBox x:Name="cboTheraClass" TabIndex="10"  SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" Grid.Row="6" Grid.Column="3"  Margin="4" HorizontalAlignment="Stretch" ToolTipService.ToolTip="Please Select Therapeutic Class"></inputcombo:AutoCompleteComboBox>
                            <TextBlock Text="Manufactured By" Margin="4" HorizontalAlignment="Right" Grid.Row="8" Grid.Column="0"></TextBlock>
                            <inputcombo:AutoCompleteComboBox x:Name="cboMfg" TabIndex="11" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}"  SelectedValuePath="ID"   Grid.Row="8" Grid.Column="1" Grid.ColumnSpan="3" Margin="4" HorizontalAlignment="Stretch" ToolTipService.ToolTip="Please Select Manufactured By"></inputcombo:AutoCompleteComboBox>
                            <CheckBox x:Name="chkExcel" Content="Export To Excel" Grid.Row="9" TabIndex="12" Grid.Column ="0"  ToolTipService.ToolTip="Please Check Export To Excel"></CheckBox>
                        </Grid>
                    </Grp:GroupBox>
                </toolkit:DockPanel>

            </toolkit:DockPanel>

        </Border>
    </Grid>
</UserControl>
