<UserControl x:Class="PalashDynamics.MIS.Masters.RegistrationReport"
     xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit" 
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"     
    xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"   
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:Controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit" 
    xmlns:Grp="clr-namespace:Groupbox;assembly=Groupbox"  
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Loaded="UserControl_Loaded" 
    xmlns:dataInput="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data.Input"
    xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
    xmlns:CustomCombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
    Height="Auto" Width="1100" >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </UserControl.Resources>
    <!--<Grid x:Name="LayoutRoot" Background="White">

    </Grid>-->
    <Grid>

        <Border BorderBrush="{StaticResource TabControlDarkerBorder}" Margin="4" BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">

            <toolkit:DockPanel LastChildFill="True" VerticalAlignment="Stretch">
                <Border  toolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}" BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                    <ContentControl VerticalAlignment="Top" Grid.ColumnSpan="4" FontSize="12" Content="REGISTRATION REPORT" Margin="-1" Style="{StaticResource Header}" HorizontalAlignment="Stretch"/>
                </Border>
                <toolkit:DockPanel toolkit:DockPanel.Dock="Bottom" Margin="4">
                    <StackPanel x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">

                        <StackPanel Orientation="Horizontal"  Margin="1" HorizontalAlignment="Right"  >

                            <ToggleButton x:Name="cmdPrint" Content="Print"   Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible"  Click="cmdPrint_Click" TabIndex="32" ></ToggleButton>

                            <ToggleButton Content="Cancel" x:Name="cmdCancel" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Click="cmdCancel_Click_1" TabIndex="33"></ToggleButton>
                        </StackPanel>
                    </StackPanel>

                </toolkit:DockPanel >
                <toolkit:DockPanel toolkit:DockPanel.Dock="Top" Margin="4" VerticalAlignment="Stretch">

                    <Grp:GroupBox Header="Search Criteria" Margin="4" VerticalAlignment="Stretch">
                        <Grid x:Name="LayoutRoot" Background="White" VerticalAlignment="Stretch">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" ></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition Width="Auto" ></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition  Width="Auto"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition  Width="Auto"></ColumnDefinition>
                                <ColumnDefinition></ColumnDefinition>

                            </Grid.ColumnDefinitions>

                            <TextBlock x:Name="FromDate" Grid.Row="0" Grid.Column="0" Text="From Date" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Visibility="Visible"></TextBlock>
                            <sdk:DatePicker x:Name="dtpFromDate" Grid.Row="0" Grid.Column="1" Margin="4" HorizontalAlignment="Stretch" Visibility="Visible" VerticalAlignment="Center" TabIndex="1"  ></sdk:DatePicker>
                            <TextBlock x:Name="TODate" Grid.Row="0" Grid.Column="2" Text="To Date" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Visibility="Visible"></TextBlock>
                            <sdk:DatePicker x:Name="dtpTODate" Grid.Row="0" Grid.Column="3" Margin="4" HorizontalAlignment="Stretch" Visibility="Visible" VerticalAlignment="Center" TabIndex="2"  ></sdk:DatePicker>
                            <TextBlock x:Name="Registrationtype" Text="Registration Type" Grid.Row="0" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Column="4" Visibility="Visible"></TextBlock>
                            <inputcombo:AutoCompleteComboBox x:Name="cmbRegistrationType"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="5" Grid.Row="0" Margin="4" TabIndex="3"   ></inputcombo:AutoCompleteComboBox>

                            <TextBlock x:Name="RefFrom" Text="Reference From" Grid.Row="0" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Column="6" Visibility="Visible"></TextBlock>
                            <inputcombo:AutoCompleteComboBox x:Name="cmbReferenceFrom"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="7" Grid.Row="0" Margin="4" TabIndex="4"  ></inputcombo:AutoCompleteComboBox>
                            <TextBlock x:Name="RefDoctor" Text="Doctor" Grid.Row="1" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Column="0" Visibility="Visible"></TextBlock>
                            <inputcombo:AutoCompleteComboBox x:Name="cmbRefDoctor"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" Margin="4" TabIndex="5"   ></inputcombo:AutoCompleteComboBox>
                            <TextBlock x:Name="BloodGroup" Text="Blood Group" Grid.Row="1" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Column="2" Visibility="Visible"></TextBlock>
                            <inputcombo:AutoCompleteComboBox x:Name="cmbBloodGroup"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="3" Grid.Row="1" Margin="4" TabIndex="6"  ></inputcombo:AutoCompleteComboBox>
                            <TextBlock x:Name="DOB" Visibility="Collapsed" Grid.Row="1" Grid.Column="4" Text="DOB" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" ></TextBlock>
                            <sdk:DatePicker x:Name="dtpDOB" Grid.Row="1" Grid.Column="5" Margin="4" HorizontalAlignment="Stretch" Visibility="Collapsed" VerticalAlignment="Center" ></sdk:DatePicker>
                            <TextBlock x:Name="Age" Visibility="Visible" Grid.Row="1" Grid.Column="4" Text="Age" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" ></TextBlock>
                            <Grid Grid.Row="1" Grid.Column="5">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"  ></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition Width="Auto" ></ColumnDefinition>
                                    <ColumnDefinition ></ColumnDefinition>
                                   
                                </Grid.ColumnDefinitions>
                                <TextBlock  Visibility="Visible" Grid.Row="0" Grid.Column="0" Text="From" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" ></TextBlock>
                                <TextBox  Grid.Row="0" Grid.Column="1"   Margin="4"      x:Name="txtFromAge" VerticalAlignment="Center" MaxLength="3" KeyDown="txtFromAge_KeyDown"  LostFocus="txtFromAge_LostFocus" TabIndex="7" ></TextBox>
                                <TextBlock  Visibility="Visible" Grid.Row="0" Grid.Column="2" Text="To" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" ></TextBlock>
                                <TextBox  Grid.Row="0" Grid.Column="3"   Margin="4"      x:Name="txtToAge" VerticalAlignment="Center" MaxLength="3" KeyDown="txtFromAge_KeyDown"  LostFocus="txtFromAge_LostFocus" TabIndex="8" ></TextBox>
                            </Grid>
                            
                            
                            
                            
                            <TextBlock x:Name="Education" Text="Education" Grid.Row="1" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Column="6" Visibility="Visible"></TextBlock>
                            <inputcombo:AutoCompleteComboBox x:Name="cmbEducation"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="7" Grid.Row="1" Margin="4"  TabIndex="9" ></inputcombo:AutoCompleteComboBox>
                            <TextBlock x:Name="MaritalStatus" Text="Marital Status" Grid.Row="2" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Column="0" Visibility="Visible"></TextBlock>
                            <inputcombo:AutoCompleteComboBox x:Name="cmbMaritalStatus"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="1" Grid.Row="2" Margin="4" TabIndex="10"  ></inputcombo:AutoCompleteComboBox>
                            <TextBlock x:Name="Marriageanni" Grid.Row="2" Grid.Column="2" Text="Marriage Anniversary" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Visibility="Visible"></TextBlock>
                            <sdk:DatePicker x:Name="dtpMarriageAnniversary" Grid.Row="2" Grid.Column="3" Margin="4" HorizontalAlignment="Stretch" Visibility="Visible" VerticalAlignment="Center" TabIndex="11"  ></sdk:DatePicker>
                           
                            <TextBlock x:Name="Occupation" Text="Occupation" Grid.Row="2" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Column="4" Visibility="Visible"></TextBlock>
                            <inputcombo:AutoCompleteComboBox x:Name="cmbOccupation"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="5" Grid.Row="2" Margin="4" TabIndex="12"  ></inputcombo:AutoCompleteComboBox>
                            <TextBlock x:Name="Idproof" Text="Id Proof" Grid.Row="2" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Column="6" Visibility="Visible"></TextBlock>
                            <inputcombo:AutoCompleteComboBox x:Name="cmbIdProof"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="7" Grid.Row="2" Margin="4" TabIndex="13"  ></inputcombo:AutoCompleteComboBox>
                            <TextBlock x:Name="SpecialRegistration" Text="Special Registration" Grid.Row="3" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Column="0" Visibility="Visible"></TextBlock>
                            <inputcombo:AutoCompleteComboBox x:Name="cmbSpecialRegistration"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="1" Grid.Row="3" Margin="4" TabIndex="14"  ></inputcombo:AutoCompleteComboBox>
                            <TextBlock x:Name="Religion" Text="Religion" Grid.Row="3" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Column="2" Visibility="Visible"></TextBlock>
                            <inputcombo:AutoCompleteComboBox x:Name="cmbReligion"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="3" Grid.Row="3" Margin="4" TabIndex="15"  ></inputcombo:AutoCompleteComboBox>
                            <TextBlock x:Name="Gender" Text="Gender" Grid.Row="3" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Column="4" Visibility="Visible"></TextBlock>
                            <inputcombo:AutoCompleteComboBox x:Name="cmbGender"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="5" Grid.Row="3" Margin="4" TabIndex="16"  ></inputcombo:AutoCompleteComboBox>
                            <TextBlock x:Name="PreferredLanguage" Text="Preferred Language" Grid.Row="3" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Column="6" Visibility="Visible"></TextBlock>
                            <inputcombo:AutoCompleteComboBox x:Name="cmbPreferredLanguage"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="7" Grid.Row="3" Margin="4"  TabIndex="17" ></inputcombo:AutoCompleteComboBox>
                            <TextBlock x:Name="TreatmentRequired" Text="Treatment Required" Grid.Row="5" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Column="0" Visibility="Visible"></TextBlock>
                            <inputcombo:AutoCompleteComboBox x:Name="cmbTreatmentRequired"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="1" Grid.Row="5" Margin="4" TabIndex="18"  ></inputcombo:AutoCompleteComboBox>
                            <TextBlock x:Name="Nationality" Text="Nationality" Grid.Row="5" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Column="2" Visibility="Visible"></TextBlock>
                            <inputcombo:AutoCompleteComboBox x:Name="cmbNationality"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="3" Grid.Row="5" Margin="4" TabIndex="19"   ></inputcombo:AutoCompleteComboBox>
                            <TextBlock x:Name="Country" Text="Country" Grid.Row="5" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Column="4" Visibility="Visible"></TextBlock>
                            <inputcombo:AutoCompleteComboBox x:Name="cmbCountry"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="5" Grid.Row="5" Margin="4" TabIndex="20"   SelectionChanged="cmbCountry_SelectionChanged"></inputcombo:AutoCompleteComboBox>
                            <TextBlock x:Name="State" Text="State" Grid.Row="5" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Column="6" Visibility="Visible"></TextBlock>
                            <inputcombo:AutoCompleteComboBox x:Name="cmbState"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="7" Grid.Row="5" Margin="4" SelectionChanged="cmbState_SelectionChanged" TabIndex="21" ></inputcombo:AutoCompleteComboBox>
                            <TextBlock x:Name="City" Text="City" Grid.Row="6" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Column="0" Visibility="Visible"></TextBlock>
                            <inputcombo:AutoCompleteComboBox x:Name="cmbCity"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="1" Grid.Row="6" Margin="4" SelectionChanged="cmbCity_SelectionChanged" TabIndex="22" ></inputcombo:AutoCompleteComboBox>
                            <TextBlock x:Name="Area" Text="Area" Grid.Row="6" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Column="2" Visibility="Visible"></TextBlock>
                            <inputcombo:AutoCompleteComboBox x:Name="cmbArea"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="3" Grid.Row="6" Margin="4" TabIndex="23"  ></inputcombo:AutoCompleteComboBox>
                            <CheckBox x:Name="DocumentAttached" VerticalAlignment="Center" Margin="4" Grid.Column="5"  Grid.Row="6" Content="Document Attach" Click="DocumentAttached_Click"  TabIndex="25"></CheckBox>
                            <CheckBox x:Name="NoDocumentAttached" VerticalAlignment="Center" Margin="4" Grid.Column="4"  Grid.Row="6" Content="Document Not Attach" Click="NoDocumentAttached_Click"  TabIndex="24"></CheckBox>
                            <CheckBox x:Name="PhotoAttached" VerticalAlignment="Center" Margin="4" Grid.Column="7"  Grid.Row="6" Content="Photo Attach" Click="PhotoAttached_Click"  TabIndex="27"></CheckBox>
                            <CheckBox x:Name="NoPhotoAttached" VerticalAlignment="Center" Margin="4" Grid.Column="6"  Grid.Row="6" Content="Photo Not Attach" Click="NoPhotoAttached_Click"  TabIndex="26"></CheckBox>
                            <!--<TextBlock x:Name="DoctorEducation" Text="Education" Grid.Row="1" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Column="2" Visibility="Visible"></TextBlock>
                            <TextBox x:Name="txtEducation" Grid.Row="1"  Grid.Column="3"  VerticalAlignment="Center" Margin="4"></TextBox>-->
                           


                            <TextBlock x:Name="Clinic" Visibility="Visible" Text="Clinic" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Grid.Column="0" Grid.Row="7" ></TextBlock>
                            <inputcombo:AutoCompleteComboBox x:Name="cmbClinic" Visibility="Visible"   HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="1" Grid.Row="7" Margin="4" TabIndex="27"></inputcombo:AutoCompleteComboBox>

                            <CheckBox x:Name="chkExcel" Content="Export To Excel" Grid.Column="4" Grid.Row="8" HorizontalAlignment="Left" VerticalAlignment="Center"  TabIndex="31"></CheckBox>
                            
                            <!--added by rohini dated 24/12/2015 for issue tracker issues-->
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Text="MRN" Grid.Row="7" Grid.Column="2" Margin="4" ></TextBlock>
                            <TextBox Grid.Row="7" Grid.Column="3" Margin="4" Text="{Binding MRNo, Mode=TwoWay}" x:Name="txtMRNO"  MaxLength="20"  TabIndex="28" ></TextBox>
                            <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Text="Mobile Number" Margin="4" Grid.Row="7" Grid.Column="4"></TextBlock>
                            <TextBox Grid.Column="5"  Grid.Row="7" x:Name="txtMobile"  Margin="4" Text="{Binding ContactNo, Mode=TwoWay}" MaxLength="10"  TabIndex="29"></TextBox>
                            <TextBlock   VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="7" Grid.Column="6"  Margin="4,10,4,4" Text="Patient Category " />
                            <inputcombo:AutoCompleteComboBox x:Name="cmbPatientCategory"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Row="7" Grid.Column="7" Margin="4"  TabIndex="30"></inputcombo:AutoCompleteComboBox>

                            <TextBlock   HorizontalAlignment="Right"  VerticalAlignment="Center" Text="Marketing Executives"  Grid.Row="8" Grid.Column="0" Margin="4" />
                            <inputcombo:AutoCompleteComboBox x:Name="cmbMarketingExecutives" Grid.Row="8" Grid.Column="1"  Margin="4" TabIndex="31" ></inputcombo:AutoCompleteComboBox>


                            <TextBlock Text="Camp" Grid.Row="8" Grid.Column="2" Margin="4" VerticalAlignment="Center" HorizontalAlignment="Right" ></TextBlock>
                            <CustomCombo:AutoCompleteComboBox x:Name="cmbCampDetail"  Grid.Row="8" Grid.Column="3"   Margin="4" VerticalAlignment="Center"   SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" TabIndex="4" ></CustomCombo:AutoCompleteComboBox>


                        </Grid>
                    </Grp:GroupBox>
                </toolkit:DockPanel>

            </toolkit:DockPanel>

        </Border>
    </Grid>

</UserControl>
