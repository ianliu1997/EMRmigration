<UserControl x:Class="PalashDynamics.Forms.Home.HomeFollowUp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"                  
    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
    xmlns:my1="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"  
    xmlns:my="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit" 
    xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"  
    xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit" 
    xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
    xmlns:Converter="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters"
    xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls" 
    xmlns:blacklight="clr-namespace:Blacklight.Silverlight.Controls;assembly=Blacklight.Silverlight.Controls"
    xmlns:ChartToolkit="clr-namespace:System.Windows.Controls.DataVisualization.Charting;assembly=System.Windows.Controls.DataVisualization.Toolkit"         
    Loaded="frmFollowUp_Loaded"  Height="Auto" Width="Auto">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Converter:ToggleBooleanValueConverter x:Key="NegateValueConverter"/>
            <Converter:DateTimeConverter x:Key="DateConverter"></Converter:DateTimeConverter>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot" Margin="2" Background="White" Width="Auto">
        <Grid >

            <controlsToolkit:DockPanel x:Name="docFollowUp"  LastChildFill="True" Grid.Row="0" controlsToolkit:DockPanel.Dock="Top">
                <controlsToolkit:DockPanel x:Name="docHeader" controlsToolkit:DockPanel.Dock="Top">

                    <Border controlsToolkit:DockPanel.Dock= "Top"  BorderBrush="#FF788678"   Width="auto" Height="auto" BorderThickness="1" CornerRadius="3,3,3,3"  Margin="2">
                        <Grid Margin="0" controlsToolkit:DockPanel.Dock="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="208*"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="111*" />
                                <ColumnDefinition Width="65*"/>
                                <ColumnDefinition Width="27*" />
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="21*" />
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock Grid.Row="0" Grid.Column="4" Text="First Name"  VerticalAlignment="Center" Margin="4,4,0,4" HorizontalAlignment="Right" ></TextBlock>
                            <TextBox x:Name="txtFirstName" TabIndex="3" Grid.Row="0" Grid.Column="5" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center"  KeyDown="txtFirstName_KeyDown"></TextBox>

                            <TextBlock Text="MRNO" Grid.Row="1" Grid.Column="6" VerticalAlignment="Center" Margin="4,4,0,4" HorizontalAlignment="Right" ></TextBlock>
                            <!--<controls:DatePicker x:Name="dtpToDate" Grid.Column="5" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></controls:DatePicker>-->
                            <TextBox x:Name="txtMiddleName" MaxLength="25" TabIndex="8" Grid.Row="1" Grid.Column="7" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center"  KeyDown="txtMrno_KeyDown" ></TextBox>

                            <TextBlock Text="Last Name" Grid.Row="0" Grid.Column="6" VerticalAlignment="Center" Margin="4,4,0,4" HorizontalAlignment="Right" ></TextBlock>
                            <!--<controls:DatePicker x:Name="dtpToDate" Grid.Column="5" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></controls:DatePicker>-->
                            <TextBox x:Name="txtLastName" Grid.Row="0" TabIndex="4" Grid.Column="7" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center"  KeyDown="txtLastName_KeyDown"></TextBox>
                            <TextBlock  HorizontalAlignment="Right" VerticalAlignment="Center" Text="From Date" Grid.Row="0" Grid.Column="0"  Margin="4" />
                            <controls:DatePicker   x:Name="dtpFollowUpSummaryFrom" Margin="4" Grid.Row="0" Grid.Column="1" SelectedDateChanged="dtpFollowUpSummaryFrom_SelectedDateChanged" HorizontalAlignment="Stretch"  TabIndex="1"/>

                            <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="To Date" Grid.Row="0" Grid.Column="2"  Margin="4" />
                            <controls:DatePicker   x:Name="dtpFollowUpSummaryTo" Margin="4" Grid.Row="0" Grid.Column="3" SelectedDateChanged="dtpFollowUpSummaryTo_SelectedDateChanged" HorizontalAlignment="Stretch" TabIndex="2"/>

                            <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="Clinic" Grid.Row="1"  Grid.Column="0" Margin="4" />
                            <inputcombo:AutoCompleteComboBox   x:Name="cmbUnitFollowUpSummary" SelectedValuePath="ID" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" Grid.Row="1" Grid.Column="1"  Margin="4"   SelectionChanged="cmbUnitFollowUpSummary_SelectionChanged" HorizontalAlignment="Stretch" TabIndex="5" IsEnabled="True" />

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Contact No."  VerticalAlignment="Center" Margin="4,4,0,4" HorizontalAlignment="Right" ></TextBlock>
                            <TextBox x:Name="txtContactNo" TabIndex="9" Grid.Row="3" Grid.Column="1" Margin="4" MaxLength="15" HorizontalAlignment="Stretch" VerticalAlignment="Center"  KeyDown="txtFirstName_KeyDown"></TextBox>

                            <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="Department"  Grid.Row="1" Grid.Column="2" Margin="4" />
                            <inputcombo:AutoCompleteComboBox x:Name="cmbDepartmentFollowUpSummary" SelectedValuePath="ID" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" Grid.Row="1" Grid.Column="3"  Margin="4"  SelectionChanged="cmbDepartmentFollowUpSummary_SelectionChanged" HorizontalAlignment="Stretch" TabIndex="6"/>

                            <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="Doctor"  Grid.Row="1" Grid.Column="4" Margin="4" />
                            <inputcombo:AutoCompleteComboBox x:Name="cmbDoctorFollowUpSummary" SelectedValuePath="ID" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}"  Grid.Row="1" Grid.Column="5"  Margin="4" SelectionChanged="cmbDoctorFollowUpSummary_SelectionChanged" HorizontalAlignment="Stretch" TabIndex="7"/>

                            <TextBlock Visibility="Collapsed" HorizontalAlignment="Right" VerticalAlignment="Center" Text="Appointment Status"  Grid.Row="3" Grid.Column="2" Margin="4"  />
                            <inputcombo:AutoCompleteComboBox x:Name="cmbAppointmentStat" Visibility="Collapsed" SelectedValuePath="ID" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}"  Grid.Row="3" Grid.Column="3"  Margin="4"  HorizontalAlignment="Stretch" TabIndex="10"/>
                            <!--SelectionChanged="cmbAppointStatus_SelectionChanged"-->
                            
                            <TextBlock Visibility="Collapsed" HorizontalAlignment="Right" VerticalAlignment="Center" Text="Appointment Type"  Grid.Row="3" Grid.Column="4" Margin="4" />
                            <inputcombo:AutoCompleteComboBox x:Name="cmbAppointmentType" Visibility="Collapsed" SelectedValuePath="ID" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}"  Grid.Row="3" Grid.Column="5"  Margin="4"  HorizontalAlignment="Stretch" TabIndex="11"/>
                            <!--SelectionChanged="cmbAppointStatus_SelectionChanged"-->
                            <TextBlock Visibility="Collapsed" HorizontalAlignment="Right" VerticalAlignment="Center" Text="Special Registration" Grid.Row="3"  Grid.Column="6" Margin="4" />
                            <inputcombo:AutoCompleteComboBox   x:Name="cmbSpRegistration" Visibility="Collapsed" SelectedValuePath="ID" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" Grid.Row="3" Grid.Column="7"  Margin="4" HorizontalAlignment="Stretch" TabIndex="12" IsEnabled="True" />

                            <Button x:Name="btnSearchCriteria" HorizontalAlignment="left" VerticalAlignment="Center" Grid.Row="3" Grid.Column="2"  ToolTipService.ToolTip="Find Appointment" Click="btnSearchCriteria_Click" TabIndex="13">
                                <Button.Content>
                                    <Image Source="/PalashDynamics;component/Icons/xmag.png" Margin="2" Width="20" ></Image>
                                </Button.Content>
                            </Button>

                            <ToggleButton TabIndex="14" x:Name="FollowupReport"  Grid.Row="3" Grid.Column="3"  HorizontalAlignment="left" VerticalAlignment="Center"  Background="#000000"  Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="FollowupReport_Click"   ToolTipService.ToolTip="Print Followup Report" Height="30" Margin="0,1" Width="48">
                                <ToggleButton.Content>
                                    <Image Source="/PalashDynamics;component/Icons/patient_details.jpg" Width="20" Margin="2"  ></Image>
                                </ToggleButton.Content>
                            </ToggleButton>
                        </Grid>
                    </Border>
                </controlsToolkit:DockPanel>
                <!--<data:DataPager x:Name="dgDataPager" controlsToolkit:DockPanel.Dock="Bottom" 
                                                        DisplayMode="FirstLastPreviousNext"  IsEnabled="True"                       
                                                        Source="{Binding}" 
                                                        AutoEllipsis="False" IsTotalItemCountFixed="False"  />-->
                <data:DataPager x:Name="dgDataPager" toolkit:DockPanel.Dock="Bottom"
                                                DisplayMode="FirstLastPreviousNext" IsEnabled="True" 
                                                Source="{Binding}" 
                                                AutoEllipsis="False" IsTotalItemCountFixed="True"/>
                <Border BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" controlsToolkit:DockPanel.Dock="Bottom" BorderThickness="1" CornerRadius="3,3,3,3" Background="Transparent" >
                    <StackPanel x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                        <StackPanel Orientation="Horizontal"  Margin="1" HorizontalAlignment="Right"  >
                            <ToggleButton x:Name="cmdBookAppoinment"  Content="Book Appoinment" MinWidth="200" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="cmdBookAppoinment_Click" ></ToggleButton>
                        </StackPanel>
                    </StackPanel>
                </Border>
                <controlsToolkit:DockPanel x:Name="docFollowUpList2" >
                    <Border BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="0,0,0,0" BorderThickness="1" CornerRadius="0,0,3,3" Background="Transparent">
                        <data:DataGrid Name="dgFollowUpList" Margin="2" VerticalScrollBarVisibility="Visible" AutoGenerateColumns="False" ItemsSource="{Binding}" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch" CanUserSortColumns="True" IsReadOnly="True" TabIndex="14">
                            <data:DataGrid.Columns>
                                <data:DataGridTemplateColumn Header="View">
                                    <data:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <HyperlinkButton Content="View"  VerticalAlignment="Center" x:Name="hlFollowUp"  Click="hlFollowUp_Click" ></HyperlinkButton>
                                        </DataTemplate>
                                    </data:DataGridTemplateColumn.CellTemplate>
                                </data:DataGridTemplateColumn>
                                <data:DataGridTextColumn  Binding="{Binding FollowUpDate,Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}" Header="Follow Up Date" />
                                <data:DataGridTextColumn Binding="{Binding VisitDate,Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}" Header="Visit Date" />
                                <data:DataGridTextColumn Binding="{Binding OPDNo}" Header="OPD NO"/>
                                <!--<data:DataGridTextColumn Binding="{Binding FromTime,Converter={StaticResource DateConverter},ConverterParameter='hh:mm tt'}" Header="From Time" />-->
                                <!--<data:DataGridTextColumn Binding="{Binding ToTime,Converter={StaticResource DateConverter},ConverterParameter='hh:mm tt'}" Header="To Time" />-->
                                <data:DataGridTextColumn  Binding="{Binding MrNo}" Header="MR No." />
                                <data:DataGridTextColumn  Binding="{Binding PatientName}" Header="Patient Name" Width="150"/>
                                <data:DataGridTextColumn  Binding="{Binding ContactNo1}" Header="Mobile No." />
                                <data:DataGridTextColumn  Binding="{Binding Email}" Header="Email" />
                                <!--<data:DataGridTextColumn  Binding="{Binding ResidenceNo}" Header="Residence No."/>-->
                                <data:DataGridTextColumn  Binding="{Binding DoctorName}" Header="Doctor"/>
                                <data:DataGridTextColumn  Binding="{Binding Description}" Header="Department" />
                                <data:DataGridTextColumn  Binding="{Binding AppointmentReason}" Header="Reason" />
                                <data:DataGridTextColumn Binding="{Binding Remark}" Header="Remark" />
                                <!--<data:DataGridTextColumn Binding="{Binding SpecialRegistration }" Header="Special Registration " />-->

                                <!--<data:DataGridTextColumn Binding="{Binding AppointmentStatusNew }" Header="Appointment Status" />-->
                                <!--<data:DataGridTextColumn Binding="{Binding MarkVisitStatus }" Header="Appointment Type " />-->
                                <data:DataGridTextColumn Binding="{Binding createdByName }" Header="Created By" />
                                <data:DataGridTextColumn  Binding="{Binding AddedDateTime ,Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}" Header="Created Date" /> 

                                <!--<data:DataGridTemplateColumn Header="Mark Visit">
                                    <data:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox x:Name="chkPatient" IsChecked="{Binding Path=VisitMark,Mode=TwoWay}" IsEnabled="{Binding VisitMark,Converter={StaticResource NegateValueConverter}}"  TabIndex="12"  Click="chkPatient_Click" VerticalAlignment="Center" HorizontalAlignment="Center" Width="Auto" ></CheckBox>
                                        </DataTemplate>
                                    </data:DataGridTemplateColumn.CellTemplate>
                                </data:DataGridTemplateColumn>-->
                                <!--<data:DataGridCheckBoxColumn  Binding="{Binding VisitMark}" Header="Visit Mark" />-->



                                <!--<data:DataGridCheckBoxColumn  Binding="{Binding IsCancelled}" Header="IsCancelled" />
                                    <data:DataGridCheckBoxColumn  Binding="{Binding IsResheduled}" Header="IsResheduled" />-->

                                <!--<data:DataGridTextColumn  Binding="{Binding Arrived}" Header="Arrived" />
                                            <data:DataGridTextColumn  Binding="{Binding Seen}" Header="Seen" />
                                            <data:DataGridTextColumn  Binding="{Binding VisitId}" Header="VisitId" />-->
                            </data:DataGrid.Columns>
                        </data:DataGrid>
                    </Border>

                </controlsToolkit:DockPanel>
            </controlsToolkit:DockPanel>
        </Grid>
    </Grid>

</UserControl>
