                                <data:DataGrid.Columns>
                                    <!--<data:DataGridTextColumn  Binding="{Binding AppointmentDate,Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}" Header="Appointment Date" />-->
