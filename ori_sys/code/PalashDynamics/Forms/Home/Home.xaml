    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
            <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Converter:DateTimeConverter x:Key="DateConverter"></Converter:DateTimeConverter>
        </ResourceDictionary>
        
        
    </UserControl.Resources>
    <Grid x:Name="Root">
        <Grid x:Name="LayoutRoot" Background="WhiteSmoke" >
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <blacklight:DragDockPanelHost x:Name="DragPanelContainer" >
             
                    <blacklight:DragDockPanel x:Name="ScheduleForETOPU" Margin="5"  Style="{StaticResource DragDockPanelStyle}" Maximized="ScheduleForETOPU_Maximized" Minimized="ScheduleForETOPU_Minimized">
                    <Grid  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <!--<StackPanel Orientation="Horizontal">-->
                        <TextBlock FontSize="12" Foreground="Black" Margin="5, 2, 0, 0"   IsHitTestVisible="False">Schedule For ET and OPU :</TextBlock>
                        <toolkit:DockPanel Grid.Row="1">
                            <sdk:DataPager x:Name="DataPagerAlerts"  toolkit:DockPanel.Dock="Bottom"
                                            NumericButtonCount="10" AutoEllipsis="False" 
                                             PageSize="{Binding PageSize}"
                                            DisplayMode="FirstLastPreviousNext"
                                            IsEnabled="True"
                                            IsTotalItemCountFixed="True"
                                            Source="{Binding DataList}"
                                             />                            
                                <sdk:DataGrid x:Name="grdAlerts" IsReadOnly="True" SelectionMode="Single"  ItemsSource="{Binding TherapyList}"  AutoGenerateColumns="False" SelectionChanged="grdAlerts_SelectionChanged">
                                <sdk:DataGrid.Columns>
                                    <sdk:DataGridTextColumn IsReadOnly="True" Header="Procedure" Binding="{Binding Procedure}" />
                                    <sdk:DataGridTextColumn Binding="{Binding TherapyDate,Mode=OneWay,Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}"  Header="Date" />
                                   <sdk:DataGridTextColumn IsReadOnly="True" Header="MR. No." Binding="{Binding MrNo}" />
                                    <sdk:DataGridTemplateColumn IsReadOnly="True" Header="Name" Width="150" SortMemberPath="FirstName">
                                        <sdk:DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                                    <TextBlock VerticalAlignment="Center" Text="{Binding FirstName}" Margin="4,0,4,0"></TextBlock>
                                                    <TextBlock VerticalAlignment="Center" Text="{Binding MiddleName}" Margin="0,0,4,0"></TextBlock>
                                                    <TextBlock VerticalAlignment="Center" Text="{Binding LastName}"></TextBlock>
                                                </StackPanel>
                                            </DataTemplate>
                                        </sdk:DataGridTemplateColumn.CellTemplate>
                                    </sdk:DataGridTemplateColumn>
                                    <sdk:DataGridTextColumn IsReadOnly="True" Header="Mobile No." Binding="{Binding ContactNo1}" />
                                </sdk:DataGrid.Columns>
                            </sdk:DataGrid>
                        </toolkit:DockPanel>
                            <!--<TextBlock FontSize="12" x:Name="lblGraphSummary" Text="{Binding TotalCollection, Mode=OneWay}" Foreground="Black" Margin="5, 2, 0, 0" IsHitTestVisible="False"></TextBlock>-->
                        <!--</StackPanel>-->
                        
                        <!--<ChartToolkit:Chart Grid.Row="1"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch">-->
