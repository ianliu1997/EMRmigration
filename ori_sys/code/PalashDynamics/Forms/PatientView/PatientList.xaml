<UserControl xmlns:my="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"  
             xmlns:input="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input"  
             xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"  
             xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit" 
             xmlns:water="clr-namespace:PalashDynamics;assembly=PalashDynamics.WaterMarkTextBox"
             xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"
             xmlns:CustomCombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
             x:Class="CIMS.Forms.PatientList"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters" 
             xmlns:layoutToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Layout.Toolkit"
                xmlns:Converter="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters" 
              
             >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:DateTimeConverter x:Key="DateConverter" />
            <Converter:ToggleBooleanValueConverter x:Key="VisiblilityConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="Root">
        <my:DockPanel LastChildFill="True" Margin="4">
            <Grid Width="Auto"  Margin="0" my:DockPanel.Dock="Top" DataContext="{Binding BizActionObject}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition  Width="Auto"/>
                    <ColumnDefinition />
                    <ColumnDefinition  Width="Auto"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <!--<TextBlock Text="Patient Type" Margin="4" VerticalAlignment="Center"  HorizontalAlignment="Right"></TextBlock>
                <CustomCombo:AutoCompleteComboBox  x:Name="cmbPatientType"   Grid.Row="0" Grid.Column="1"   Margin="1" VerticalAlignment="Center" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" HorizontalAlignment="Stretch" ></CustomCombo:AutoCompleteComboBox>-->
                
                <TextBlock x:Name="chkPatientName"  VerticalAlignment="Center" Grid.Column="4" Grid.Row="0"  Margin="4" Text="First Name" HorizontalAlignment="Right"></TextBlock>
                <TextBox TabIndex="2" x:Name="txtFirstName" Text="{Binding FirstName,Mode=TwoWay}"  Grid.Row="0"  Grid.Column="5" Margin="4" LostFocus="txtFirstName_LostFocus" MaxLength="50" TextChanged="txtFirstName_TextChanged" KeyDown="txtFirstName_KeyDown" KeyUp="txtMrno_KeyUp" />

                <TextBlock Grid.Column="2" Grid.Row="1"  Margin="4" Text="Middle Name" VerticalAlignment="Center" HorizontalAlignment="Right" Visibility="Collapsed"></TextBlock>
                <TextBox TabIndex="1" x:Name="txtMiddleName" Text="{Binding MiddleName,Mode=TwoWay}"  Grid.Row="1"  Grid.Column="3" Margin="4" Visibility="Collapsed" LostFocus="txtMiddleName_LostFocus" KeyUp="txtMrno_KeyUp" MaxLength="50" />
                
                <TextBlock Grid.Column="6" Grid.Row="0"  Margin="4" Text="Last Name" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                <TextBox TabIndex="3" x:Name="txtLastName" Text="{Binding LastName,Mode=TwoWay}"  Grid.Row="0"  Grid.Column="7" Margin="4" LostFocus="txtLastName_LostFocus" MaxLength="50" TextChanged="txtFirstName_TextChanged" KeyDown="txtFirstName_KeyDown" KeyUp="txtMrno_KeyUp"/>

                <TextBlock Grid.Column="0" Grid.Row="2"  Margin="4" Text="Family Name" VerticalAlignment="Center" HorizontalAlignment="Right" Visibility="Collapsed"></TextBlock>
                <TextBox TabIndex="3" x:Name="txtFamilyName" Text="{Binding FamilyName,Mode=TwoWay}"  Grid.Row="2"  Grid.Column="1" Margin="4"  LostFocus="txtFamilyName_LostFocus" MaxLength="50" Visibility="Collapsed" />

                <TextBlock x:Name="chkMrno"  VerticalAlignment="Center" Grid.Column="2" Grid.Row="0"  Margin="4" Text="MRN" HorizontalAlignment="Right"></TextBlock>
                <TextBox TabIndex="1" x:Name="txtMrno" Text="{Binding MRNo,Mode=TwoWay}"  Grid.Row="0"   Grid.Column="3"   Margin="4"  MaxLength="30" KeyUp="txtMrno_KeyUp"/>

                <TextBlock VerticalAlignment="Center" Grid.Column="4" Grid.Row="2"  Margin="4" Text="OPD No." HorizontalAlignment="Right" Visibility="Collapsed"></TextBlock>
                <TextBox TabIndex="5" x:Name="txtOPDNo" Text="{Binding OPDNo,Mode=TwoWay}"  Grid.Row="2"   Grid.Column="5"   Margin="4" MaxLength="30" Visibility="Collapsed" />
               
                <CheckBox TabIndex="6" VerticalAlignment="Center" IsChecked="{Binding Path=IsLoyaltyMember,Mode=TwoWay}" Grid.Column="0" Grid.Row="3"  Margin="2,4" Content="Loyalty Program "  HorizontalAlignment="Right" x:Name="chkLoyaltyMember" Visibility="Collapsed" />
                <CustomCombo:AutoCompleteComboBox TabIndex="7" Margin="4" x:Name="cmbLoyaltyProgram"   Grid.Row="3" Grid.Column="1"  VerticalAlignment="Center" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" HorizontalAlignment="Stretch" Visibility="Collapsed" ></CustomCombo:AutoCompleteComboBox>
                
                <TextBlock Grid.Column="0" Grid.Row="1" Text="Contact No"  Margin="4" HorizontalAlignment="Right" VerticalAlignment="Center"></TextBlock>
                <TextBox Grid.Column="1" TabIndex="4" Grid.Row="1" x:Name="txtContactNo"  Margin="4" Text="{Binding ContactNo, Mode=TwoWay}" MaxLength="15" TextChanged="txtContactNo_TextChanged" KeyDown="txtContactNo_KeyDown" KeyUp="txtMrno_KeyUp" ></TextBox> <!--KeyUp="txtContactNo_KeyUp"-->
                <!--<water:WaterMarkTextbox Grid.Column="1" WaterMark="Contact Number" TabIndex="8" Grid.Row="2" x:Name="txtContactNo"  Margin="4" Text="{Binding ContactNo, Mode=TwoWay}" KeyUp="txtContactNo_KeyUp"></water:WaterMarkTextbox>-->

                <TextBlock Text="ID Proof"  Grid.Row="1" Grid.Column="2"  Margin="4" HorizontalAlignment="Right" VerticalAlignment="Center"></TextBlock>
                <Grid  Grid.Row="1" Grid.Column="3">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <CustomCombo:AutoCompleteComboBox TabIndex="5"  Grid.Column="0" Margin="4"   x:Name="cmbIdentity" VerticalAlignment="Center" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" SelectionChanged="cmbIdentity_SelectionChanged" ></CustomCombo:AutoCompleteComboBox>
                    <TextBox x:Name="txtIdentityNumber" Text="{Binding IdentityNumber, Mode=TwoWay}"  Margin="4" Grid.Column="1"  HorizontalAlignment="Stretch"   TextAlignment="Right"  MaxLength="16" TabIndex="6" IsEnabled="False" KeyUp="txtMrno_KeyUp"/>
                </Grid>
                <TextBlock Text="Universal ID"  Grid.Row="2" Grid.Column="4"  Margin="4" HorizontalAlignment="Right" VerticalAlignment="Center" Visibility="Collapsed"></TextBlock>
                <TextBox Grid.Column="5" TabIndex="9" Grid.Row="2" x:Name="txtCivilID"  Margin="4" Text="{Binding CivilID, Mode=TwoWay}"  MaxLength="50" KeyDown="txtCivilID_KeyUp" Visibility="Collapsed"></TextBox>

                <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="Clinic" Grid.Row="0" Grid.Column="0"  Margin="4" />
                <CustomCombo:AutoCompleteComboBox TabIndex="0" x:Name="cmbClinic"   Grid.Row="0" Grid.Column="1"    Margin="1" VerticalAlignment="Center" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" HorizontalAlignment="Stretch" SelectionChanged="cmbClinic_SelectionChanged" ></CustomCombo:AutoCompleteComboBox>
              
                <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="Registration Type" Grid.Row="3" Grid.Column="2"  Margin="4" Visibility="Collapsed" />
                <CustomCombo:AutoCompleteComboBox TabIndex="7" Margin="4" x:Name="cmbRegisttype"   Grid.Row="3" Grid.Column="3" Visibility="Collapsed"   VerticalAlignment="Center" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" HorizontalAlignment="Stretch"  SelectionChanged="cmbRegisttype_SelectionChanged"></CustomCombo:AutoCompleteComboBox>

                <!--<CheckBox TabIndex="6" VerticalAlignment="Center" IsChecked="{Binding Path=IncludeSpouse,Mode=TwoWay}" Grid.Column="0" Grid.Row="4"  Margin="4" Content="Spouse "  HorizontalAlignment="Right" x:Name="chkSpouse" />-->

                <!--<TextBlock x:Name="chkMrdate"  VerticalAlignment="Center" Grid.Column="1" Grid.Row="4"  Margin="4" Text="Registration Date :" HorizontalAlignment="Right"></TextBlock>-->
                <!--added by neena -->
                <TextBlock Grid.Column="0" Grid.Row="5" Text="Donor Code" Visibility="Visible"  Margin="4" HorizontalAlignment="Right" VerticalAlignment="Center"></TextBlock>
                <TextBox Grid.Column="1" TabIndex="8" Grid.Row="5" x:Name="txtDonarCode" Visibility="Visible"  Margin="4" Text="{Binding DonarCode, Mode=TwoWay}" MaxLength="200" KeyUp="txtMrno_KeyUp"></TextBox>             


                <RadioButton TabIndex="8" VerticalAlignment="Center" IsChecked="{Binding Path=RegistrationWise,Mode=TwoWay}" Grid.Column="3" Grid.Row="4"  Margin="4" Content="Registration Date :"  HorizontalAlignment="Right" x:Name="chkRegistration" Click="chkRadioButton_Click" />
                <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="From Date" Grid.Row="4" Grid.Column="4"  Margin="4" />
               
                <controls:DatePicker TabIndex="9" SelectedDate="{Binding FromDate,Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}" Style="{StaticResource DatePickerStyle}" x:Name="dtpFromDate" Margin="4" Grid.Row="4" Grid.Column="5" SelectedDateChanged="dtpFromDate_SelectedDateChanged"  />
                <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="To Date" Grid.Row="4" Grid.Column="6"  Margin="4" />
                
                <controls:DatePicker TabIndex="10" SelectedDate="{Binding ToDate,Mode=TwoWay}"  x:Name="dtpToDate" Margin="4" Grid.Row="4" Grid.Column="7" SelectedDateChanged="dtpToDate_SelectedDateChanged" />


                <TextBlock x:Name="chkDonorcode" Visibility="Collapsed"  VerticalAlignment="Center" Grid.Column="0" Grid.Row="5"  Margin="4" Text="Donor Code" HorizontalAlignment="Right"></TextBlock>
                <TextBox TabIndex="1" x:Name="txtDonorCode" Visibility="Collapsed" Text="{Binding DonarCode,Mode=TwoWay}"  Grid.Row="5"   Grid.Column="1"   Margin="4"  MaxLength="30" KeyUp="txtDonorCode_KeyUp"/>


                <RadioButton TabIndex="11" VerticalAlignment="Center" IsChecked="{Binding Path=VisitWise,Mode=TwoWay}" Grid.Column="3" Grid.Row="5"  Margin="4" Content="Visit Date :"  HorizontalAlignment="Right" x:Name="chkVisit" Click="chkRadioButton_Click" />
                <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="From Date" Grid.Row="5" Grid.Column="4"  Margin="4" />
                <controls:DatePicker TabIndex="12" SelectedDate="{Binding VisitFromDate,Mode=TwoWay}"  x:Name="dtpVisitFromDate" Style="{StaticResource DatePickerStyle}" Margin="4" Grid.Row="5" Grid.Column="5" SelectedDateChanged="dtpVisitFromDate_SelectedDateChanged" />
              
                <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="To Date" Grid.Row="5" Grid.Column="6"  Margin="4" />
                <controls:DatePicker TabIndex="13" SelectedDate="{Binding VisitToDate,Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"  x:Name="dtpVisitToDate" Margin="4" Grid.Row="5" Grid.Column="7" SelectedDateChanged="dtpVisitToDate_SelectedDateChanged" />

                <TextBlock Grid.Column="0" Grid.Row="4" Text="Old Registration No"   Margin="4" HorizontalAlignment="Right" VerticalAlignment="Center"></TextBlock>
                <TextBox Grid.Column="1" TabIndex="14" Grid.Row="4" x:Name="txtOldRegistrationNo"  Margin="4" Text="{Binding OldRegistrationNo, Mode=TwoWay}" MaxLength="50" KeyUp="txtMrno_KeyUp"></TextBox>

                <RadioButton TabIndex="12" VerticalAlignment="Center" IsChecked="{Binding Path=AdmissionWise,Mode=TwoWay}" Grid.Column="1" Grid.Row="6"  Margin="4" Content="Admission Date :"  HorizontalAlignment="Right" x:Name="chkAdmission" Click="chkRadioButton_Click" Visibility="Collapsed" />
                <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="From Date" Grid.Row="6" Grid.Column="2"  Margin="4"  Visibility="Collapsed" />
                <controls:DatePicker TabIndex="13" SelectedDate="{Binding AdmissionFromDate,Mode=TwoWay}"  x:Name="dtpAdmissionFromDate" Style="{StaticResource DatePickerStyle}" Margin="4" Grid.Row="6" Grid.Column="3"  Visibility="Collapsed" />
                <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="To Date" Grid.Row="6" Grid.Column="4"  Margin="4"  Visibility="Collapsed" />
                <controls:DatePicker TabIndex="14" SelectedDate="{Binding AdmissionToDate,Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"  x:Name="dtpAdmissionToDate" Margin="4" Grid.Row="6" Grid.Column="5"  Visibility="Collapsed" />

                <RadioButton TabIndex="12" VerticalAlignment="Center" IsChecked="{Binding Path=DOBWise,Mode=TwoWay}" Grid.Column="3" Grid.Row="7"  Margin="4" Content="Birth Date :"  HorizontalAlignment="Right" x:Name="chkDOB" Click="chkRadioButton_Click" Visibility="Visible" />
                <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="From Date" Grid.Row="7" Grid.Column="4"  Margin="4"  Visibility="Visible" />
                <controls:DatePicker TabIndex="13" SelectedDate="{Binding DOBFromDate,Mode=TwoWay}"  x:Name="dtpDOBFromDate" Style="{StaticResource DatePickerStyle}" Margin="4" Grid.Row="7" Grid.Column="5"  Visibility="Visible" />
                <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="To Date" Grid.Row="7" Grid.Column="6"  Margin="4"  Visibility="Visible" />
                <controls:DatePicker TabIndex="14" SelectedDate="{Binding DOBToDate,Mode=TwoWay, NotifyOnValidationError=True, ValidatesOnExceptions=True}"  x:Name="dtpDOBToDate" Margin="4" Grid.Row="7" Grid.Column="7"  Visibility="Visible" />

                <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="Special Registration" Grid.Row="1"  Grid.Column="4" Margin="4" />
                <CustomCombo:AutoCompleteComboBox   x:Name="cmbSpRegistration" SelectedValuePath="ID" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" Grid.Row="1" Grid.Column="5"  Margin="4" HorizontalAlignment="Stretch" TabIndex="7" IsEnabled="True" />

                <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="Registerd From" Grid.Row="1"  Grid.Column="6" Margin="4" />
                <CustomCombo:AutoCompleteComboBox   x:Name="cmbRegType" SelectedValuePath="ID" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" Grid.Row="1" Grid.Column="7"  Margin="4" HorizontalAlignment="Stretch" TabIndex="7" IsEnabled="True" />
                <!--<StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="5"  my:DockPanel.Dock="Top" Orientation="Horizontal"  Margin="2" HorizontalAlignment="Stretch">-->
                    <layoutToolkit:Accordion TabIndex="15" Grid.Row="8" Grid.ColumnSpan="5" x:Name="acc" Margin="2" SelectionMode="ZeroOrOne" SelectionChanged="acc_SelectionChanged" HorizontalAlignment="Stretch" Visibility="Collapsed">
                    <layoutToolkit:AccordionItem Header="Advance Filters" Background="AliceBlue" Foreground="DarkBlue" Selected="AccordionItem_Selected" HorizontalAlignment="Stretch" Visibility="Collapsed">
                            <Grid Margin="2" HorizontalAlignment="Stretch">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto" ></RowDefinition>
                                    <RowDefinition Height="auto" ></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                                <TextBlock  Grid.Column="0" Grid.Row="0" Text="Country" Margin="1" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
                                <input:AutoCompleteBox TabIndex="15" Margin="1"   Grid.Column="1" Grid.Row="0" Text="{Binding Country, Mode=TwoWay}" Width="80" x:Name="txtCountry" LostFocus="txtCountry_LostFocus" HorizontalAlignment="Stretch"></input:AutoCompleteBox>
                                <TextBlock Grid.Column="2" Grid.Row="0" Text="State" Margin="1" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
                                <input:AutoCompleteBox TabIndex="16" Margin="1" Grid.Column="3" Grid.Row="0"  Text="{Binding State, Mode=TwoWay}"  Width="80" x:Name="txtState" LostFocus="txtState_LostFocus" HorizontalAlignment="Stretch"></input:AutoCompleteBox>
                                <TextBlock Grid.Column="4" Grid.Row="0" Text="City" Margin="1" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
                                <input:AutoCompleteBox TabIndex="17" Margin="1" Grid.Column="5" Grid.Row="0" Text="{Binding City, Mode=TwoWay}"  Width="80" x:Name="txtCity" LostFocus="txtCity_LostFocus" HorizontalAlignment="Stretch" ></input:AutoCompleteBox>
                                <TextBlock Grid.Column="6" Grid.Row="0" Text="Pincode" Margin="1" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
                                <input:AutoCompleteBox TabIndex="18" Margin="1" Grid.Row="0"  Grid.Column="7"  Text="{Binding Pincode, Mode=TwoWay}"  Width="80"  x:Name="txtPinCode" KeyDown="txtAutocompleteNumber_KeyDown" TextChanged="txtAutocompleteNumber_TextChanged" LostFocus="txtPinCode_LostFocus" HorizontalAlignment="Stretch"></input:AutoCompleteBox>
                                <TextBlock Grid.Column="8" Grid.Row="0" Text="Gender" Margin="1" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
                                <CustomCombo:AutoCompleteComboBox TabIndex="19" x:Name="cmbGender"   Grid.Row="0" Grid.Column="9"   Width="80" Margin="1" VerticalAlignment="Center" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" LostFocus="cmbGender_LostFocus" HorizontalAlignment="Stretch" ></CustomCombo:AutoCompleteComboBox>
                                <!--<TextBlock Grid.Column="10" Grid.Row="0" Text="Clinic" Margin="1" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
                                <CustomCombo:AutoCompleteComboBox TabIndex="19" x:Name="cmbClinic"   Grid.Row="0" Grid.Column="11"   Width="80" Margin="1" VerticalAlignment="Center" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" HorizontalAlignment="Stretch" ></CustomCombo:AutoCompleteComboBox>-->

                           
                        </Grid>
                        </layoutToolkit:AccordionItem>
                    </layoutToolkit:Accordion>
                  
                <!--</StackPanel>-->
                <StackPanel Grid.Row="8" Grid.Column="5" HorizontalAlignment="Right" VerticalAlignment="Bottom" Grid.ColumnSpan="3"  my:DockPanel.Dock="Top" x:Name="SaveCommandPanel" Orientation="Horizontal"  Margin="2"  >
                    <ToggleButton TabIndex="14" x:Name="SearchButton" ToolTipService.ToolTip="Search Patient"   Background="#000000" Margin="2,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="PatientSearchButton_Click" Checked="SearchButton_Checked" KeyUp="SearchButton_KeyUp" Width="70" >
                        <ToggleButton.Content>
                            <Image Source="/PalashDynamics;component/Icons/xmag.png" Margin="2" Width="20" ></Image>
                        </ToggleButton.Content>
                    </ToggleButton>
                    <ToggleButton TabIndex="15" x:Name="CancelButton"  Content="Refresh" MinWidth="45" Background="#000000" Margin="2,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible"  Click="CancelButton_Click" Width="70" />
                    <ToggleButton TabIndex="22" x:Name="PrintCardButton"   Content="Print Card" MinWidth="45"  Background="#000000" Margin="2,0,0,1" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Collapsed" Click="PrintCardButton_Click" Width="70"   />
                    <ToggleButton TabIndex="22" x:Name="PatientFile"   Content="Patient File" MinWidth="55"  Background="#000000" Margin="2,0,0,1" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Collapsed" Click="PatientFile_Click" Width="80"   />
                    <!--<ToggleButton TabIndex="16" x:Name="PatientBarcode"   Content="Barcode" MinWidth="45"  Background="#000000" Margin="2,0,0,1" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="PatientBarcode_Click" Width="70"   />-->
                    <ToggleButton TabIndex="17" x:Name="AttachDoc"      Background="#000000" Margin="2,0,0,1" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="AttachDoc_Click"   ToolTipService.ToolTip="Attach Document"  >
                        <ToggleButton.Content>
                            <Image Source="/PalashDynamics;component/Icons/Attachment-white.png" Width="20" Margin="1"  ></Image>
                        </ToggleButton.Content>
                    </ToggleButton>
                    <ToggleButton TabIndex="18" x:Name="RegistrationReport"      Background="#000000" Margin="2,0,0,1" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="RegistrationReport_Click"   ToolTipService.ToolTip="Print Registration Report"  >
                        <ToggleButton.Content>
                            <Image Source="/PalashDynamics;component/Icons/patient_details.jpg" Width="20" Margin="1"  ></Image>
                        </ToggleButton.Content>
                    </ToggleButton>
<ToggleButton x:Name="cmdPatientBillHistory" Content="Patient Bill History" MinWidth="130" Background="#000000" Margin="2,0,0,0" HorizontalAlignment="Right" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible"  Click="cmdPatientBillHistory_Click" />
<ToggleButton x:Name="cmdPrintBarcode" Content="Print Barcode" MinWidth="100" Background="#000000" Margin="2,0,0,0" HorizontalAlignment="Right" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible"  Click="cmdPrintBarcode_Click" />
                </StackPanel>
            </Grid >
            <Grid Height="Auto" Width="Auto" my:DockPanel.Dock="Bottom">
                <my:DockPanel LastChildFill="True" Grid.Row="0">
                    <data:DataPager TabIndex="20" x:Name="peopleDataPager" my:DockPanel.Dock="Bottom"
                        Grid.Row="1"
                        PageSize="{Binding PageSize}"
                        DisplayMode="FirstLastPreviousNext"
                        IsEnabled="True"
                        IsTotalItemCountFixed="True"
                        Source="{Binding DataList}"  />
                    <data:DataGrid Height="Auto" Width="Auto" Grid.Row="0" ItemsSource="{Binding DataList}"  x:Name="dataGrid2"  AutoGenerateColumns="False" SelectionChanged="dataGrid2_SelectionChanged">
                        <data:DataGrid.Columns>
                            <data:DataGridTemplateColumn Header="" IsReadOnly="True" >
                                <data:DataGridTemplateColumn.CellTemplate  >
                                    <DataTemplate >
                                        <Image ToolTipService.ToolTip="Document Attached" VerticalAlignment="Center" Width="30" Height="18" Margin="4"  Source="{Binding Path=AttachedImage}"    HorizontalAlignment="Center" Visibility="{Binding IsDocAttached, Converter={StaticResource VisiblilityConverter}}" >

                                        </Image>
                                    </DataTemplate>
                                </data:DataGridTemplateColumn.CellTemplate>
                            </data:DataGridTemplateColumn>
                            <data:DataGridTextColumn IsReadOnly="True" Header="MR. No." Binding="{Binding MRNo}" />
                            <data:DataGridTemplateColumn IsReadOnly="True" Header="Name" Width="150" SortMemberPath="FirstName">
                                <data:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                            <TextBlock VerticalAlignment="Center" Text="{Binding FirstName}" Margin="4,0,4,0"></TextBlock>
                                            <TextBlock VerticalAlignment="Center" Text="{Binding MiddleName}" Margin="0,0,4,0"></TextBlock>
                                            <TextBlock VerticalAlignment="Center" Text="{Binding LastName}"></TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </data:DataGridTemplateColumn.CellTemplate>
                            </data:DataGridTemplateColumn>
                            <data:DataGridTextColumn IsReadOnly="True" Header="Date Of Birth" Width="100"  Binding="{Binding DateOfBirth,Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}"/>
                            <data:DataGridTextColumn IsReadOnly="True" Header="Baby Birth Weight" Width="125" Binding="{Binding BabyWeight}"/>
                            <data:DataGridTextColumn IsReadOnly="True" Header="Registration Date" Binding="{Binding RegistrationDate,Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}"/>
                            <!--<data:DataGridTextColumn IsReadOnly="True" Header="Address" Width="170" Binding="{Binding Address}"/>-->
                            <data:DataGridTextColumn IsReadOnly="True" Header="Mobile No" Width="100" Binding="{Binding ContactNO1}"/>
                            <data:DataGridTextColumn IsReadOnly="True" Header="Email" Width="100" Binding="{Binding Email}"/>
                            <data:DataGridTextColumn IsReadOnly="True" Header="Gender" Width="100" Binding="{Binding Gender}"/>
                            <data:DataGridTextColumn IsReadOnly="True" Header="Marital Status" Width="100" Binding="{Binding MaritalStatus}"/>
                            <data:DataGridTextColumn IsReadOnly="True" Header="Identity Type" Width="100" Binding="{Binding IdentityType}"/>
                            <data:DataGridTextColumn IsReadOnly="True" Header="Identity Number" Width="100" Binding="{Binding IdentityNumber}"/>
                            <data:DataGridTextColumn IsReadOnly="True" Header="Remark" Width="100" Binding="{Binding RemarkForPatientType}" Visibility="Collapsed"/>
                            <data:DataGridTextColumn IsReadOnly="True" Header="Special Registration" Binding="{Binding SpecialRegName}" />
                            <data:DataGridTextColumn IsReadOnly="True" Header="Registered From" Width="110" Binding="{Binding RegistrationType}"/>
                            <data:DataGridTextColumn IsReadOnly="True" Header="Universal ID" Width="100" Binding="{Binding UniversalID}" Visibility="Collapsed"/>

                            <data:DataGridTextColumn IsReadOnly="True" Header="Old Registration No" Width="100" Binding="{Binding OldRegistrationNo}" />

                            <data:DataGridTextColumn IsReadOnly="True" Visibility="Visible" Header="Donor Code" Width="100" Binding="{Binding DonarCode}" /> 
                            
                            <data:DataGridTemplateColumn Visibility="Collapsed">
                                <data:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
