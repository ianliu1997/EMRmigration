<controls:ChildWindow  x:Class="PalashDynamics.BarcodeFormNew"
                    xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Barcode" Loaded="ChildWindow_Loaded"
    Width="500" Height="400"  >

    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition ></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <RadioButton Content="Test Tube" Grid.Column="0" x:Name="RdoTestTube" IsChecked="True" GroupName="radio1" Click="RadioButton_Click" ></RadioButton>
            <RadioButton Content="File small" Grid.Column="1" x:Name="RdoFileSmall" GroupName="radio1" Click="RadioButton_Click" ></RadioButton>
            <RadioButton Content="File Large" Grid.Column="2" x:Name="RdoFileLarge" GroupName="radio1" Click="RadioButton_Click" ></RadioButton>
        </Grid>
        <Grid Margin="2" Grid.Row="1">
        <Grid x:Name="PrintTestTube" Margin="2" Visibility="Visible" >
<!--added by akshay-->
                <Grid.RowDefinitions >
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                    <!--closed by akshay-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
            </Grid.ColumnDefinitions>

                <StackPanel x:Name="PrintBarcodeTestTubeArea1" Grid.Row="0" Grid.Column="0" Height="auto" Width="auto" Margin="2,0,0,0">
                <!--<TextBlock x:Name="MyText3" Width="170" FontWeight="Bold" Text="Sanctus Healthcare Pvt. Ltd." Height="11" Grid.Row="1" Grid.Column="1"    TextAlignment="Center"  FontSize="9"/>-->
                    <TextBlock x:Name="MyText0" Width="170" FontWeight="Bold"  Height="11" Grid.Row="1" FontFamily="Verdana" Grid.Column="1"  TextAlignment="Left"  FontSize="9"/>
                    <TextBlock x:Name="MyText1" Width="170" FontWeight="Bold" Height="11" Grid.Row="1" FontFamily="Verdana" Grid.Column="1" TextAlignment="Left"  FontSize="9"/>
                    <TextBlock x:Name="MyText2" Width="170"   Height="11" Grid.Row="1" FontFamily="Verdana" Grid.Column="1" TextAlignment="Left"  FontSize="8"/>
                    <TextBlock x:Name="MyText9" Width="170"  Text="IVF" FontFamily="Verdana"  Height="11" Grid.Row="1" Grid.Column="1" TextAlignment="Left"  FontSize="8"/>
                <Canvas x:Name="MyCanvas"  Width="140" Height="32" Grid.Row="0" Canvas.Left="1" HorizontalAlignment="Right"  Margin="15,0,0,0" Grid.Column="1"  Visibility="Visible">
                </Canvas>
                    <TextBlock x:Name="MyText3" Width="140" Height="11"  Text="1234" FontFamily="Verdana" Grid.Row="1" Grid.Column="1"  TextAlignment="Right"  FontSize="6"/>
            </StackPanel>

                <StackPanel x:Name="PrintBarcodeTestTubeArea2" Grid.Row="1" Grid.Column="0" Height="auto" Width="auto" Margin="30,0,0,0">
                <!--<TextBlock x:Name="MyText3" Width="170" FontWeight="Bold" Text="Sanctus Healthcare Pvt. Ltd." Height="11" Grid.Row="1" Grid.Column="1"    TextAlignment="Center"  FontSize="9"/>-->
                    <TextBlock x:Name="MyText02" Width="170" FontWeight="Bold" FontFamily="Verdana"  Height="11" Grid.Row="1" Grid.Column="1" TextAlignment="Left"  FontSize="9"/>
                    <TextBlock x:Name="MyText12" Width="170" FontWeight="Bold" FontFamily="Verdana" Height="11" Grid.Row="1" Grid.Column="1" TextAlignment="Left"  FontSize="9"/>
                    <TextBlock x:Name="MyText22" Width="170"  FontFamily="Verdana" Height="11" Grid.Row="1" Grid.Column="1" TextAlignment="Left"  FontSize="8"/>
                    <TextBlock x:Name="MyText10" Width="170" Text="IVF"   FontFamily="Verdana" Height="11" Grid.Row="1" Grid.Column="1" TextAlignment="Left"  FontSize="8"/>
                    <Canvas x:Name="MyCanvas2" Width="140" Height="32" Grid.Row="0" Canvas.Left="1"  HorizontalAlignment="Right"  Margin="15,0,0,0" Grid.Column="1"  Visibility="Visible">
                </Canvas>
                    <TextBlock x:Name="MyText32" Width="140" Height="11"  Text="1234" Grid.Row="1" FontFamily="Verdana" Grid.Column="1"  TextAlignment="Right"  FontSize="6"/>
            </StackPanel>

        </Grid>
            <Grid x:Name="PrintFileSmall" Margin="2" Visibility="Collapsed" >

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition ></ColumnDefinition>
                    <ColumnDefinition ></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <StackPanel x:Name="PrintBarcodeFileSmallArea" Grid.Row="0" Grid.Column="0" Height="auto" Width="auto" Margin="2,0,0,0">
                    <!--<TextBlock x:Name="MyText3" Width="170" FontWeight="Bold" Text="Sanctus Healthcare Pvt. Ltd." Height="11" Grid.Row="1" Grid.Column="1"    TextAlignment="Center"  FontSize="9"/>-->
                    <TextBlock x:Name="MyText03" Width="280" FontWeight="Bold"  FontFamily="Verdana" Height="16" Grid.Row="1" Grid.Column="1" TextAlignment="Left"  FontSize="14"/>
                    <TextBlock x:Name="MyText13" Width="280" FontWeight="Medium" FontFamily="Verdana" Height="16" Grid.Row="1" Grid.Column="1" TextAlignment="Left"  FontSize="14"/>
                    <TextBlock x:Name="MyText23" Width="280" FontWeight="Medium" FontFamily="Verdana" Height="16" Grid.Row="1" Grid.Column="1" TextAlignment="Left"  FontSize="14"/>
                    <TextBlock x:Name="MyText43" Width="280" FontWeight="Medium" FontFamily="Verdana" Height="16" Grid.Row="1" Grid.Column="1" TextAlignment="Left"  FontSize="12"/>

                    
                </StackPanel>

                <StackPanel Orientation="Horizontal" Height="auto" Width="auto" Grid.Row="1" Grid.Column="0">
                    <Canvas x:Name="MyCanvas3" Width="140" Height="62" Grid.Row="0"  HorizontalAlignment="Right"  Margin="4,0,0,2" Grid.Column="1"  Visibility="Visible">
                    </Canvas>
                    <!--<Canvas x:Name="MyCanvas4" Width="80" Height="70" Grid.Row="0"  HorizontalAlignment="Left" VerticalAlignment="Center"   Margin="0,0,0,2" Grid.Column="1"  Visibility="Visible">-->
                    <!--<Image Source="Icons/IVFNewLogo.png" Width="80"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4,0,0,0" Height="40" Grid.Row="3" Grid.Column="0"></Image>-->
                    <!--</Canvas>-->
                </StackPanel>
                <Image Source="Icons/IVFNewLogo.png" Width="80"  HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4,0,0,0" Height="40" Grid.Row="1" Grid.Column="1"></Image>
                <TextBlock x:Name="MyText33" Grid.Row="2" Grid.Column="0" Width="140" FontFamily="Verdana" Margin="4,0,0,2" Height="13" FontWeight="Bold" Text="1234" HorizontalAlignment="Left" TextAlignment="Right"  FontSize="10"/>
                
            </Grid>

            <Grid x:Name="PrintFileLarge" Margin="2" Visibility="Collapsed" >

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition ></ColumnDefinition>
                   
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <StackPanel x:Name="PrintBarcodeFileLargeArea" Grid.Row="0" Grid.Column="0" Height="auto" Width="auto" Margin="2,0,0,0">
                    <!--<TextBlock x:Name="MyText3" Width="170" FontWeight="Bold" Text="Sanctus Healthcare Pvt. Ltd." Height="11" Grid.Row="1" Grid.Column="1"    TextAlignment="Center"  FontSize="9"/>-->
                    <TextBlock x:Name="MyText04" Width="300" FontWeight="Bold"  Height="17" FontFamily="Verdana" Grid.Row="1" Grid.Column="1" TextAlignment="Left"  FontSize="14"/>
                    <TextBlock x:Name="MyText14" Width="300" FontWeight="Medium" Height="17" Grid.Row="1" FontFamily="Verdana" Grid.Column="1" TextAlignment="Left"  FontSize="14"/>
                    <TextBlock x:Name="MyText24" Width="300" FontWeight="Medium"  Height="17" Grid.Row="1" FontFamily="Verdana" Grid.Column="1" TextAlignment="Left"  FontSize="14"/>
                    <TextBlock x:Name="MyText44" Width="300" FontWeight="Medium"  Height="17" Grid.Row="1" FontFamily="Verdana" Grid.Column="1" TextAlignment="Left"  FontSize="12"/>
                    <StackPanel Orientation="Horizontal"  Height="auto" Width="auto" Grid.Row="1" Grid.Column="0">
                        <Canvas x:Name="MyCanvas5" Width="140" Height="72" Grid.Row="0"  HorizontalAlignment="Right"  Margin="4,0,0,2" Grid.Column="1"  Visibility="Visible">
                        </Canvas>
                        <!--<Canvas x:Name="MyCanvas6" Width="85" Height="70" Grid.Row="0"  HorizontalAlignment="Left" VerticalAlignment="Center"   Margin="0,0,0,2" Grid.Column="1"  Visibility="Visible">-->
                        <!--<Image Source="Icons/IVFNewLogo.png" Width="80" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4,0,0,0" Height="40" Grid.Row="3" Grid.Column="0"></Image>-->
                        <!--</Canvas>-->
                    </StackPanel>

                    <TextBlock x:Name="MyText34" Width="140" Height="13" FontWeight="Bold" Text="1234" FontFamily="Verdana" HorizontalAlignment="Left" Grid.Row="2" Grid.Column="0" Margin="4,0,0,2"  TextAlignment="Right"  FontSize="10"/>
                   
                </StackPanel>
                <Image Source="Icons/IVFNewLogo.png" Width="80" HorizontalAlignment="Center" VerticalAlignment="Center" Height="40" Grid.Row="0" Grid.Column="1"></Image>
            </Grid>

        </Grid>
        <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,0,0" Grid.Row="2" />
        <Button x:Name="OKButton" Content="Print" Click="OKButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,79,0" Grid.Row="2" />
    </Grid>
</controls:ChildWindow>
