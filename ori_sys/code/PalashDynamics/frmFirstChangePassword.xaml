<controls:ChildWindow xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"  x:Class="CIMS.Forms.frmFirstChangePassword"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox" 
           Width="400" Height="430" 
           Title="Change Password" Background="White" HasCloseButton="False" Loaded="ChildWindow_Loaded">
    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        
    </controls:ChildWindow.Resources>
    <Grid x:Name="LayoutRoot" Margin="1" Background="White">

        <toolkit:DockPanel LastChildFill="True" toolkit:DockPanel.Dock="Top" Margin="1">
            <Border BorderBrush="{StaticResource TabControlDarkerBorder}" BorderThickness="1" CornerRadius="0,0,3,3" Background="Transparent">
                <Border  Height="auto" Width="auto" Margin="4" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="0,0,3,3" Background="Transparent">
                    <Border  Height="auto"  Width="auto" BorderBrush="{StaticResource TabControlDarkerBorder}"  BorderThickness="1" CornerRadius="0,0,1,1" Background="Transparent">
                        <Grid Margin="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto"/>
                             
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition />
                                <RowDefinition Height="Auto"/>
                             
                            </Grid.RowDefinitions>

                            <TextBlock   VerticalAlignment="Center" Text="Login Name" Grid.Row="0" Grid.Column="0"  Margin="4" />
                            <TextBox  x:Name="txtLoginName" Text="{Binding LoginName,Mode=TwoWay,ValidatesOnExceptions=True, NotifyOnValidationError=True}" IsReadOnly="True"  Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3"  Margin="4" TabIndex="1"/>
                            <!--IsReadOnly="True"-->

                            <!--<TextBlock   VerticalAlignment="Center" Text="Password" Grid.Row="1" Grid.Column="0"  Margin="4" />
                            <PasswordBox  x:Name="txtOldPassword" Password="{Binding OldPassword,Mode=TwoWay,ValidatesOnExceptions=true, NotifyOnValidationError=true}" Style="{StaticResource PswRequiredField}" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"  Margin="4"/>-->

                            <TextBlock   VerticalAlignment="Center" Text="New Password" Grid.Row="2" Grid.Column="0"  Margin="4" />
                            <PasswordBox x:Name="txtNewPassword" Password="{Binding Password,Mode=TwoWay,ValidatesOnExceptions=true, NotifyOnValidationError=true}"  Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3"  Margin="4" TabIndex="2"/>

                            <TextBlock   VerticalAlignment="Center" Text="Confirm New Password"  Grid.Row="3" Grid.Column="0"  Margin="4" />
                            <PasswordBox x:Name="txtConfirmNewPassword" LostFocus="txtConfirmNewPassword_LostFocus" Password="{Binding ConfirmPassword,Mode=TwoWay,ValidatesOnExceptions=true, NotifyOnValidationError=true}"  Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3"  Margin="4" TabIndex="3"/>

                            <TextBlock   VerticalAlignment="Center" Text="Security Question" Grid.Row="4" Grid.Column="0"  Margin="4" />
                            <!--<TextBox  x:Name="txtSecreteQuestion" Text="{Binding SecreteQuestion,Mode=TwoWay,ValidatesOnExceptions=True, NotifyOnValidationError=True}" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3"  Margin="4"/>-->
                            <inputcombo:AutoCompleteComboBox  x:Name="cmbSecretQtn"  Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" Margin="4"  VerticalAlignment="Center"  HorizontalAlignment="Stretch"  TabIndex="4" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID"></inputcombo:AutoCompleteComboBox>
                            
                            <TextBlock   VerticalAlignment="Center" Text="Security Answer"  Grid.Row="5" Grid.Column="0"  Margin="4" />
                            <PasswordBox x:Name="txtSecreteAnswer" Password="{Binding SecreteAnswer,Mode=TwoWay,ValidatesOnExceptions=true, NotifyOnValidationError=true}" Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="3"  Margin="4" TabIndex="5"/>

                           
                                <!--<Border BorderBrush="#FF37210B" BorderThickness="1" Background="#FF2D355C" />-->
                            <StackPanel Background="#FF2D355C" Grid.Row="7" Grid.Column="0" Grid.ColumnSpan="7" Margin="0,5">
                                <TextBlock  x:Name="SampleHeader" Margin="2,2,2,2" Text="Configure Dashboard" VerticalAlignment="Center" HorizontalAlignment="Stretch" Foreground="White"  FontWeight="Bold" FontSize="12"  />

                            </StackPanel>
                            <Border Margin="4" Grid.Row="8" Grid.ColumnSpan="7">
                                <Grid>
                                    <ListBox x:Name="lstItems"  ItemsSource="{Binding DashBoardList}" HorizontalAlignment="Stretch"  Margin="0">
                                        <ListBox.ItemTemplate>
                                            <DataTemplate>
                                                <StackPanel Orientation="Horizontal" x:Name="stack1">
                                                    <CheckBox x:Name="DashboardChecked" IsChecked="{Binding Status, Mode=TwoWay}"></CheckBox>
                                                    <TextBlock Text="{Binding Description}"></TextBlock>
                                                </StackPanel>
                                            </DataTemplate>
                                        </ListBox.ItemTemplate>
                                    </ListBox>
                                </Grid>
                            </Border>

                            <!--<ListBox  Grid.Row="8" Grid.ColumnSpan="7"  Margin="0" >
                                <ListBox.Items >
                                    <ListBoxItem>
                                        <ListBoxItem.Content>
                                            <CheckBox x:Name="chkRecentPatient"   Content="Recent Patients"></CheckBox>
                                        </ListBoxItem.Content>
                                    </ListBoxItem>
                                    <ListBoxItem>
                                        <ListBoxItem.Content>
                                            <CheckBox Content="Appointments"></CheckBox>
                                        </ListBoxItem.Content>
                                    </ListBoxItem>
                                    <ListBoxItem>
                                        <ListBoxItem.Content>
                                            <CheckBox Content="Daily Collection"></CheckBox>
                                        </ListBoxItem.Content>
                                    </ListBoxItem>
                                    <ListBoxItem>
                                        <ListBoxItem.Content>
                                            <CheckBox Content="Alerts"></CheckBox>
                                        </ListBoxItem.Content>
                                    </ListBoxItem>
                                    <ListBoxItem>
                                        <ListBoxItem.Content>
                                            <CheckBox Content="Patient Queue"></CheckBox>
                                        </ListBoxItem.Content>
                                    </ListBoxItem>
                                    <ListBoxItem>
                                        <ListBoxItem.Content>
                                            <CheckBox Content="Reminders"></CheckBox>
                                        </ListBoxItem.Content>
                                    </ListBoxItem>
                                </ListBox.Items>
                            </ListBox>-->
                           
                             <!--<StackPanel Orientation="Horizontal" Grid.Row="9" Grid.ColumnSpan="7" Margin="5" HorizontalAlignment="Right">
                                <Button Content="OK" Width="70" Height="25" Click="OKButton_Click"  Margin="2,4,4,4" ></Button>
                                <Button Content="Cancel" Width="70" Height="25" Margin="2,4,4,4" Click="CancelButton_Click"></Button>
                            </StackPanel>-->

                            <StackPanel Grid.Row="9" x:Name="Footer" Orientation="Horizontal" Grid.ColumnSpan="7"  VerticalAlignment="Center"   Margin="0,5,5,3" HorizontalAlignment="Right" Background="Transparent">
                                <StackPanel x:Name="SaveCommandPanel" Orientation="Horizontal"  Margin="0,0,0,0">
                                    <ToggleButton x:Name="CmdOK" Height="25" Grid.Row="4" Content="OK" MinWidth="50"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="OKButton_Click" />
                                    <!--<ToggleButton x:Name="CmdCancele"  Height="25" Grid.Row="4" Content="Cancel" MinWidth="50" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="CancelButton_Click" />-->
                                </StackPanel>
                            </StackPanel>
                            <!--<ComboBox Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="4" Grid.RowSpan="2" Height="23" HorizontalAlignment="Left" Margin="7,5,0,0" Name="comboBox1" VerticalAlignment="Top" Width="207" />-->
                           
                        </Grid>
                    </Border>
                </Border>
            </Border>
        </toolkit:DockPanel>
    </Grid>
</controls:ChildWindow>