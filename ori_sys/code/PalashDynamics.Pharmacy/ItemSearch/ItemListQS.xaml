<controls:ChildWindow x:Class="PalashDynamics.Pharmacy.ItemSearch.ItemListQS"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:my="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"
           xmlns:input="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input"
           xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"  
           xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"
           xmlns:CustomCombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
           xmlns:Localization="clr-namespace:PalashDynamic.Localization;assembly=PalashDynamic.Localization"
           xmlns:local="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters" 
           xmlns:Grp="clr-namespace:Groupbox;assembly=Groupbox"  
           Width="900" Height="500" 
           Title="Item Search">

    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Localization:Localized x:Key="locResource"></Localization:Localized>
            <local:DateTimeConverter x:Key="DateConverter" />
        </ResourceDictionary>
    </controls:ChildWindow.Resources>


    <Grid x:Name="Root">
        <!--Auto combo grid view-->

        <!--Auto combo grid view-->
        <my:DockPanel LastChildFill="True" Margin="4">

            <Grid Width="Auto"  Margin="0" my:DockPanel.Dock="Top" DataContext="{Binding BizActionObject}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition  Width="Auto"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>

                </Grid.RowDefinitions>


                <TextBlock Grid.Column="0" Grid.Row="0"  Margin="4" Text="{Binding lblItemName,Source={StaticResource locResource}}" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                <TextBox TabIndex="0" x:Name="txtItemName" Text="{Binding ItemName,Mode=TwoWay}"  Grid.Row="0"  Grid.Column="1" Margin="4" MaxLength="50" LostFocus="txtItemName_LostFocus" />

                <TextBlock Grid.Column="2" Grid.Row="0"  Margin="4" Text="{Binding lblBrandName,Source={StaticResource locResource}}" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                <TextBox TabIndex="1" x:Name="txtBrandName" Text="{Binding BrandName,Mode=TwoWay}"  Grid.Row="0"  Grid.Column="3" Margin="4" MaxLength="50" LostFocus ="txtBrandName_LostFocus" />

                <TextBlock VerticalAlignment="Center" Grid.Column="4" Grid.Row="0"  Margin="4" Text="{Binding lblItemCode,Source={StaticResource locResource}}" HorizontalAlignment="Right"></TextBlock>
                <TextBox TabIndex="2" x:Name="txtItemCode" Text="{Binding ItemCode,Mode=TwoWay}"  Grid.Row="0"  Grid.Column="5" Margin="4" MaxLength="50" LostFocus="txtItemCode_LostFocus" />

                <TextBlock VerticalAlignment="Center" Grid.Column="0" Grid.Row="1"  Margin="4" Text="{Binding lblStore,Source={StaticResource locResource}}" HorizontalAlignment="Right"></TextBlock>
                <CustomCombo:AutoCompleteComboBox Width ="auto"  TabIndex="3" Grid.Row="1" Grid.Column="1" Margin="4" x:Name="cmbStore" VerticalAlignment="Center" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" SelectionChanged="cmbStore_SelectionChanged"></CustomCombo:AutoCompleteComboBox>

                <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="{Binding lblMolecule,Source={StaticResource locResource}}"  Grid.Column="2" Grid.Row="1"  Margin="4" />
                <CustomCombo:AutoCompleteComboBox x:Name="cmbMolecule" SelectedValuePath="ID" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}"  Grid.Column="3" Grid.Row="1"  Margin="4"  HorizontalAlignment="Stretch" TabIndex="4" />
                <!--SelectionChanged="cmbMolecule_SelectionChanged"-->

                <StackPanel Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="1"  my:DockPanel.Dock="Top" x:Name="ItemFooter" Orientation="Horizontal" VerticalAlignment="Bottom"   Margin="10,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                    <StackPanel x:Name="SearchCommandPanel" Orientation="Horizontal"  Margin="1" HorizontalAlignment="Stretch">
                        <ToggleButton TabIndex="4" x:Name="SearchButton"   Content="{Binding btnSearch,Source={StaticResource locResource}}" MinWidth="50"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="ItemSearchButton_Click"  />
                        <!--<ToggleButton TabIndex="5" x:Name="CancelButton"  Content="Refresh" MinWidth="50" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible"  Click="CancelButton_Click" />-->
                    </StackPanel>
                </StackPanel>
                <CheckBox x:Name="chkSelectAll" Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="2" Content="Select All Items" VerticalAlignment="Center" Margin="4" Click="chkSelectAll_Click" Visibility="Collapsed" HorizontalAlignment="Right" FlowDirection="RightToLeft"></CheckBox>


            </Grid >

            <Border BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" controlsToolkit:DockPanel.Dock="Bottom" BorderThickness="0" CornerRadius="3,3,3,3" Background="Transparent">

                <StackPanel Grid.Row="3" x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                    <StackPanel x:Name="SaveCommandPanel" Orientation="Horizontal"  Margin="0,0,0,0">
                        <ToggleButton TabIndex="8" x:Name="OkButton"  Grid.Row="4" Content="{Binding btnOK,Source={StaticResource locResource}}" MinWidth="50"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="OKButton_Click" />
                        <ToggleButton TabIndex="9" x:Name="cmdCancelButton"  Grid.Row="4" Content="{Binding btnCancel,Source={StaticResource locResource}}" MinWidth="50" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="CancelButton_Click" />
                    </StackPanel>
                </StackPanel>
            </Border>


            <my:DockPanel LastChildFill="True" >

                <my:DockPanel LastChildFill="True" my:DockPanel.Dock="Top" >

                    <my:DockPanel LastChildFill="True" >
                        <Grp:GroupBox x:Name="gbIndentItem" Height="200" Width="430"  Header="Item List" Margin="2" my:DockPanel.Dock="Top"  >
                            <Grid Height="Auto" Width="Auto" x:Name="ItemContainer" VerticalAlignment="Stretch">

                                <my:DockPanel LastChildFill="True">

                                    <data:DataPager TabIndex="20" x:Name="peopleDataPager" my:DockPanel.Dock="Bottom"
                        Grid.Row="1"
                        PageSize="{Binding PageSize}"
                        DisplayMode="FirstLastPreviousNext"
                        IsEnabled="True"
                        IsTotalItemCountFixed="True"
                        Source="{Binding DataList}"  />
                                    <data:DataGrid TabIndex="6"  Height="Auto" Width="Auto" Grid.Row="0" ItemsSource="{Binding DataList}"  x:Name="dataGrid2"  AutoGenerateColumns="False" SelectionChanged="dataGrid2_SelectionChanged" CanUserSortColumns="False" LoadingRow="dataGrid2_LoadingRow">
                                        <data:DataGrid.Columns>
                                            <data:DataGridTemplateColumn >
                                                <!--<data:DataGridTemplateColumn.Header>
                                        
                                    </data:DataGridTemplateColumn.Header>-->


                                                <data:DataGridTemplateColumn.CellTemplate >
                                                    <DataTemplate >
                                                        <!--<CheckBox Margin="10,2,10,2"  x:Name="chkStatus"  Click="UpdateUserStatus_Click" IsChecked="{Binding UserGeneralDetailVO.Status,Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" ></CheckBox >-->
                                                        <CheckBox Margin="10,2,10,2"  x:Name="chkItemStatus" IsTabStop="True" Click="AddItem_Click" IsChecked="{Binding Status,Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" ></CheckBox >
                                                    </DataTemplate>
                                                </data:DataGridTemplateColumn.CellTemplate>
                                            </data:DataGridTemplateColumn>
                                            <!--By Anjali-->

                                            <data:DataGridTemplateColumn Header="Suspended" IsReadOnly="True" Visibility="Collapsed" >
                                                <data:DataGridTemplateColumn.CellTemplate >
                                                    <DataTemplate >
                                                        <CheckBox Margin="10,2,10,2"  x:Name="chkItemBlocked" IsTabStop="True" IsChecked="{Binding IsItemBlock,Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" IsEnabled="False"  ></CheckBox >
                                                    </DataTemplate>
                                                </data:DataGridTemplateColumn.CellTemplate>
                                            </data:DataGridTemplateColumn>

                                            <!--      -->



                                            <data:DataGridTextColumn IsReadOnly="True" Header="Item Code"  Binding="{Binding ItemCode}" />
                                            <data:DataGridTextColumn IsReadOnly="True" Header="Item Name"   Binding="{Binding ItemName}"/>
                                            <data:DataGridTextColumn IsReadOnly="True" Header="Brand Name"  Binding="{Binding BrandName}"/>
                                            <data:DataGridTextColumn IsReadOnly="True" Header="Purchase Tax %"  Binding="{Binding TotalPerchaseTaxPercent, StringFormat=0.00,Mode=OneWay}">
                                                <data:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </data:DataGridTextColumn.ElementStyle>
                                            </data:DataGridTextColumn>
                                            <data:DataGridTextColumn IsReadOnly="True" Header="Sales Tax %"  Binding="{Binding TotalSalesTaxPercent, StringFormat=0.00,Mode=OneWay}">
                                                <data:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </data:DataGridTextColumn.ElementStyle>
                                            </data:DataGridTextColumn>
                                            <data:DataGridTextColumn Visibility="Collapsed"  Binding="{Binding DiscountOnSale, StringFormat=0.00,Mode=OneWay}">
                                                <data:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </data:DataGridTextColumn.ElementStyle>
                                            </data:DataGridTextColumn>

                                            <data:DataGridTextColumn IsReadOnly="True"   Header="Assign Supplier"  Binding="{Binding AssignSupplier}" Visibility ="Collapsed" />

                                        </data:DataGrid.Columns>
                                    </data:DataGrid>
                                </my:DockPanel>
                            </Grid>

                        </Grp:GroupBox>
                    </my:DockPanel>
                    <my:DockPanel LastChildFill="True" >
                        <Grp:GroupBox x:Name="gbItemBatch" Height="200" Width="430" Header="Item Batch List" Margin="2" my:DockPanel.Dock="Top">
                            <my:DockPanel LastChildFill="True"  >
                                <Grid Height="auto" Width="Auto" x:Name="BatchContainer" >
                                    <my:DockPanel LastChildFill="True">
                                        <!--<Border Margin="0" controlsToolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                                            <ContentControl  FontSize="11" Content="Batch Details" Margin="0" Style="{StaticResource Header}"/>
                                        </Border>-->
                                        <data:DataPager TabIndex="20" x:Name="ItemBatchDataPager" my:DockPanel.Dock="Bottom"
                        Grid.Row="1"
                        PageSize="{Binding BatchPageSize}"
                        DisplayMode="FirstLastPreviousNext"
                        IsEnabled="True"
                        IsTotalItemCountFixed="True"
                        Source="{Binding BatchList}"  />
                                        <data:DataGrid TabIndex="7" Height="Auto" Width="Auto" Grid.Row="0" ItemsSource="{Binding BatchList}"  x:Name="dgItemBatches"  AutoGenerateColumns="False" SelectionChanged="dgItemBatches_SelectionChanged" CanUserSortColumns="False" >
                                            <data:DataGrid.Columns>
                                                <data:DataGridTemplateColumn >
                                                    <data:DataGridTemplateColumn.CellTemplate >
                                                        <DataTemplate >
                                                            <CheckBox Margin="10,2,10,2"  x:Name="chkBatchStatus" IsTabStop="True" Click="AddBatch_Click" IsChecked="{Binding Status,Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" ></CheckBox >
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                </data:DataGridTemplateColumn>
                                                <data:DataGridTextColumn IsReadOnly="True" Header="Date" Binding="{Binding Date,Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}" />
                                                <data:DataGridTextColumn IsReadOnly="True" Header="Batch Code" Binding="{Binding BatchCode}" />
                                                <data:DataGridTextColumn IsReadOnly="True" Header="Batch ID" Binding="{Binding BatchID}" Visibility="Collapsed"/>
                                                <data:DataGridTextColumn IsReadOnly="True" Header="Available Quantity" Binding="{Binding AvailableStock, StringFormat=0.00,Mode=OneWay}">
                                                    <data:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>
                                                <data:DataGridTextColumn IsReadOnly="True" Header="Purchase Rate" Width="100"  Binding="{Binding PurchaseRate, StringFormat=0.00,Mode=OneWay}">
                                                    <data:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>
                                                <data:DataGridTextColumn IsReadOnly="True" Header="MRP" Width="100"  Binding="{Binding MRP, StringFormat=0.00,Mode=OneWay}">
                                                    <data:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>
                                                <data:DataGridTextColumn IsReadOnly="True" Header="Expiry Date" Binding="{Binding ExpiryDate,Converter={StaticResource DateConverter},ConverterParameter={StaticResource ExpiryDateDisplayFormat}}" />
                                            </data:DataGrid.Columns>
                                        </data:DataGrid>

                                    </my:DockPanel>
                                </Grid>
                            </my:DockPanel>
                        </Grp:GroupBox>
                    </my:DockPanel>

                </my:DockPanel>

                <my:DockPanel LastChildFill="True" >
                    <Grp:GroupBox x:Name="gbSelectedItem" Header="Selected Item" Margin="2" >
                        <Grid>


                            <data:DataGrid  x:Name="dgSelectedItemList" ScrollViewer.HorizontalScrollBarVisibility="auto" ScrollViewer.VerticalScrollBarVisibility="auto" AutoGenerateColumns="False"  AlternatingRowBackground="Silver" VerticalAlignment="Stretch"  Margin="4" CanUserSortColumns="False" ItemsSource="{Binding ItemBatchList}">
                                <data:DataGrid.Columns>
                                    <data:DataGridTemplateColumn>
                                        <data:DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox HorizontalAlignment="Center"  VerticalAlignment="Center" IsChecked="{Binding Status,Mode=TwoWay}" Click="CheckBox1_Click" ></CheckBox>
                                            </DataTemplate>
                                        </data:DataGridTemplateColumn.CellTemplate>
                                    </data:DataGridTemplateColumn>
                                    <data:DataGridTextColumn IsReadOnly="True"  Header="Item Code"  Binding="{Binding ItemCode,Mode=TwoWay}"></data:DataGridTextColumn>
                                    <data:DataGridTextColumn  IsReadOnly="True"  Header="Item Name"  Binding="{Binding ItemName,Mode=TwoWay}"></data:DataGridTextColumn>
                                    <data:DataGridTextColumn IsReadOnly="True"  Header="Batch Code"  Binding="{Binding BatchCode,Mode=TwoWay}"></data:DataGridTextColumn>
                                    <data:DataGridTextColumn IsReadOnly="True" Header="Batch ID" Binding="{Binding BatchID}" />
                                    <data:DataGridTextColumn IsReadOnly="True" Header="Expiry Date"  Binding="{Binding ExpiryDate,Mode=TwoWay,Converter={StaticResource DateConverter},ConverterParameter={StaticResource ExpiryDateDisplayFormat}}"></data:DataGridTextColumn>
                                    <data:DataGridTextColumn IsReadOnly="True" Header="Available Stock"  Binding="{Binding AvailableStock,StringFormat=0.00,Mode=TwoWay}">
                                        <data:DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Right"/>
                                            </Style>
                                        </data:DataGridTextColumn.ElementStyle>
                                    </data:DataGridTextColumn>

                                    <data:DataGridTextColumn  IsReadOnly="True" Header="MRP"  Binding="{Binding MRP,Mode=TwoWay,StringFormat=0.00}">
                                        <data:DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Right"/>
                                            </Style>
                                        </data:DataGridTextColumn.ElementStyle>
                                    </data:DataGridTextColumn>
                                    <data:DataGridTextColumn  IsReadOnly="True" Header="Cost Price"  Binding="{Binding PurchaseRate,StringFormat=0.00,Mode=TwoWay}">
                                        <data:DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Right"/>
                                            </Style>
                                        </data:DataGridTextColumn.ElementStyle>
                                    </data:DataGridTextColumn>
                                    <data:DataGridTextColumn IsReadOnly="True" Header="Purchase Tax %"  Binding="{Binding TotalPerchaseTaxPercent, StringFormat=0.00,Mode=OneWay}">
                                        <data:DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Right"/>
                                            </Style>
                                        </data:DataGridTextColumn.ElementStyle>
                                    </data:DataGridTextColumn>
                                    <data:DataGridTextColumn IsReadOnly="True" Header="Sales Tax %"  Binding="{Binding TotalSalesTaxPercent, StringFormat=0.00,Mode=OneWay}">
                                        <data:DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Right"/>
                                            </Style>
                                        </data:DataGridTextColumn.ElementStyle>
                                    </data:DataGridTextColumn>

                                    <data:DataGridTextColumn Visibility="Collapsed"  Binding="{Binding DiscountOnSale, StringFormat=0.00,Mode=OneWay}">
                                        <data:DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Right"/>
                                            </Style>
                                        </data:DataGridTextColumn.ElementStyle>
                                    </data:DataGridTextColumn>

                                    <data:DataGridTextColumn IsReadOnly="True"   Header="Assign Supplier"  Binding="{Binding AssignSupplier}" Visibility ="Collapsed" />
                                    <!--<data:DataGridTextColumn IsReadOnly="True" Header="Total Amt"  Binding="{Binding ItemTotalAmount,Mode=TwoWay}"></data:DataGridTextColumn>-->
                                    <!--<data:DataGridTextColumn IsReadOnly="True" Header="Unverified Stock"  Binding="{Binding UnverifiedStock,Mode=TwoWay}"></data:DataGridTextColumn>-->
                                    <!--<data:DataGridTextColumn IsReadOnly="True" Header="VAT Per"  Binding="{Binding ItemVATPercentage,Mode=TwoWay}"></data:DataGridTextColumn>
                                <data:DataGridTextColumn IsReadOnly="True" Header="VAT Amt"  Binding="{Binding ItemVATAmount,Mode=TwoWay}"></data:DataGridTextColumn>
                                <data:DataGridTextColumn IsReadOnly="True" Header="Conversion"  Binding="{Binding ConversionFactor,Mode=TwoWay}"></data:DataGridTextColumn>
                                <data:DataGridTextColumn IsReadOnly="True" Header="Net Pay Before VAT Amt"  Binding="{Binding NetPayBeforeVATAmount,Mode=TwoWay}"></data:DataGridTextColumn>-->
                                    <!--<data:DataGridTextColumn IsReadOnly="True" Header="VAT Inclusive"  Binding="{Binding VATInclusive,Mode=TwoWay}"></data:DataGridTextColumn>
                                    <data:DataGridTextColumn IsReadOnly="True" Header="Total For VAT"  Binding="{Binding TtoalForVAT,Mode=TwoWay}"></data:DataGridTextColumn>-->

                                </data:DataGrid.Columns>
                            </data:DataGrid>
                        </Grid>


                    </Grp:GroupBox>
                </my:DockPanel>
            </my:DockPanel>



        </my:DockPanel>
    </Grid>
    
</controls:ChildWindow>