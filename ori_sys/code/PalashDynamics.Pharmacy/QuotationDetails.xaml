<UserControl xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"  xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"  x:Class="PalashDynamics.Pharmacy.QuotationDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
    mc:Ignorable="d" Loaded="UserControl_Loaded"  
              xmlns:Grp="clr-namespace:Groupbox;assembly=Groupbox"
              xmlns:local="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters"
    Width="Auto" Height="Auto">


    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:DateTimeConverter x:Key="DateConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <toolkit:DockPanel x:Name="MainDockPanel" LastChildFill="True">
            <toolkit:DockPanel x:Name="DockButtons" toolkit:DockPanel.Dock="Bottom">
                <StackPanel x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">

                    <StackPanel Orientation="Horizontal"  Margin="1" HorizontalAlignment="Right"  >

                        <ToggleButton x:Name="cmdNew" Content="New"   Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible"  Click="cmdNew_Click"  ></ToggleButton>
                        <ToggleButton x:Name="cmdSave" Content="Save" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Click="cmdSave_Click"  ></ToggleButton>
                        <ToggleButton Content="Cancel" x:Name="cmdCancel" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Click="cmdCancel_Click"         ></ToggleButton>
                    </StackPanel>
                </StackPanel>
            </toolkit:DockPanel>
            <toolkit:DockPanel x:Name="DockGrids" toolkit:DockPanel.Dock="Top" >
                <Grid>
                    <!--<Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>-->

                    <Grid x:Name="FrontPanel" Visibility="Visible">
                        <Border  BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                            <toolkit:DockPanel x:Name="DockFrontPanel" LastChildFill="True">
                                <toolkit:DockPanel toolkit:DockPanel.Dock="Top">
                                    <Grp:GroupBox Margin="4"  Header="Search Quotations">
                                        <Grid >
                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>
                                                <RowDefinition></RowDefinition>
                                            </Grid.RowDefinitions>

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="Auto"/>

                                                <!--<ColumnDefinition/>-->
                                            </Grid.ColumnDefinitions>


                                            <TextBlock Text="From Date" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="4"></TextBlock>
                                            <sdk:DatePicker x:Name="dtpFromDate" Grid.Column="1" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectedDate="{Binding FromDate, Mode=TwoWay}" ></sdk:DatePicker>

                                            <TextBlock Text="To Date" HorizontalAlignment="Right" Grid.Column="2" VerticalAlignment="Center" Margin="4"></TextBlock>
                                            <sdk:DatePicker x:Name="dtpToDate" Grid.Column="3" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectedDate="{Binding ToDate, Mode=TwoWay}"></sdk:DatePicker>


                                            <TextBlock Text="Store" Grid.Column="0" HorizontalAlignment="Right" Grid.Row="1" VerticalAlignment="Center" Margin="4"></TextBlock>
                                            <inputcombo:AutoCompleteComboBox x:Name="cmbSearchStore"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" Margin="4"  ></inputcombo:AutoCompleteComboBox>
                                            <!--<TextBox x:Name="txtSearchCriteria" Height="24" Text="" Margin="0,0,4,4" Grid.Column="3"/>-->
                                            <TextBlock Text="Supplier" HorizontalAlignment="Right" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" Margin="4"></TextBlock>
                                            <inputcombo:AutoCompleteComboBox x:Name="cmbSupplierSearch"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="3" Grid.Row="1" Margin="4"  ></inputcombo:AutoCompleteComboBox>



                                            <Button Grid.Column="4"  Grid.Row="1" x:Name="cmdSearch" Margin="4"   ToolTipService.ToolTip="Search Quotation" Click="cmdSearch_Click" >
                                                <Image Source="/PalashDynamics;component/Icons/Search_b.JPG" Margin="4,0,4,4" Width="20" ></Image>
                                            </Button>

                                        </Grid>
                                    </Grp:GroupBox>
                                </toolkit:DockPanel>


                                <toolkit:DockPanel toolkit:DockPanel.Dock="Top"  LastChildFill="True" >
                                    <sdk:DataPager x:Name="datapager"  DisplayMode="FirstLastPreviousNext"  toolkit:DockPanel.Dock="Bottom"   Source="{Binding}" NumericButtonCount="10" AutoEllipsis="False" IsTotalItemCountFixed="False"  />
                                    <Border  toolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                                        <ContentControl VerticalAlignment="Center" FontSize="12" Content="Quotation List" Margin="-1" Style="{StaticResource Header}"     HorizontalAlignment="Stretch" />
                                    </Border>
                                    <sdk:DataGrid  x:Name="dgQuotationList" Margin="0,0,0,1" Height="80" VerticalScrollBarVisibility="Visible"   ItemsSource="{Binding}" SelectionChanged="dgQuotationList_SelectionChanged"  AutoGenerateColumns="False"  IsReadOnly="True">
                                        <sdk:DataGrid.Columns >

                                            <sdk:DataGridTextColumn Binding="{Binding QuotationNo, Mode=OneWay}" Header="Quotation No." IsReadOnly="True"/>
                                            <sdk:DataGridTextColumn Binding="{Binding Date,Mode=OneWay, Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}"  Header="Quotation Date" IsReadOnly="True" />
                                            <sdk:DataGridTextColumn Binding="{Binding ID,Mode=OneWay}"  Visibility="Collapsed"   />
                                            <sdk:DataGridTextColumn Binding="{Binding Supplier,Mode=OneWay}" Header="Supplier"   />
                                            <sdk:DataGridTextColumn Binding="{Binding ValidityDate,Mode=OneWay, Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}"  Header="Expiry Date" IsReadOnly="True" />
                                            <sdk:DataGridTextColumn Binding="{Binding QuotationFrom,Mode=OneWay}" Header="Quotation From"   />
                                            <sdk:DataGridTemplateColumn Header="Attachment">
                                                <sdk:DataGridTemplateColumn.CellEditingTemplate>
                                                    <DataTemplate>
                                                        <HyperlinkButton Width="200" x:Name="hpyrlinkFileView" Content="Attachment" Click="AttachDoc_Click" ></HyperlinkButton>
                                                        <!--<CheckBox x:Name="Freez" VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding Freezed,Mode=TwoWay}" IsEnabled='False' ></CheckBox>-->
                                                    </DataTemplate>
                                                </sdk:DataGridTemplateColumn.CellEditingTemplate>
                                            </sdk:DataGridTemplateColumn>


                                        </sdk:DataGrid.Columns>
                                    </sdk:DataGrid>

                                </toolkit:DockPanel>
                                <toolkit:DockPanel  toolkit:DockPanel.Dock="Top" LastChildFill="True" >
                                    <Border  toolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                                        <ContentControl VerticalAlignment="Center" FontSize="12" Content="Quotation Details" Margin="-1" Style="{StaticResource Header}"     HorizontalAlignment="Stretch" />
                                    </Border>
                                    <sdk:DataGrid x:Name="grdQuotation" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"  Margin="0"  ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Visible"    AutoGenerateColumns="false"  IsReadOnly="True" CanUserSortColumns="False">
                                        <sdk:DataGrid.Columns>
                                            <sdk:DataGridTextColumn IsReadOnly="True"  Header="Item Code" Width="100"  Binding="{Binding ItemCode,Mode=OneWay}">
                                            </sdk:DataGridTextColumn>
                                            <sdk:DataGridTextColumn IsReadOnly="True"  Header="Item Name" Width="100"  Binding="{Binding ItemName,Mode=OneWay}">
                                            </sdk:DataGridTextColumn>

                                            <sdk:DataGridTextColumn IsReadOnly="True"  Header="Quantity" Width="100"  Binding="{Binding Quantity,Mode=OneWay,StringFormat=0.00}">
                                                <sdk:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </sdk:DataGridTextColumn.ElementStyle>
                                            </sdk:DataGridTextColumn>

                                            <sdk:DataGridTextColumn    Binding="{Binding PUM}" Header="Purchase UOM" />
                                            
                                            <sdk:DataGridTextColumn IsReadOnly="True"  Header="Cost Price" Width="100" Binding="{Binding Rate,Mode=OneWay,StringFormat=0.00}">
                                                <sdk:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </sdk:DataGridTextColumn.ElementStyle>
                                            </sdk:DataGridTextColumn>
                                            <sdk:DataGridTextColumn IsReadOnly="True" Header="Amount" Width="100"  Binding="{Binding Amount,Mode=OneWay,StringFormat=0.00}">
                                                <sdk:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </sdk:DataGridTextColumn.ElementStyle>
                                            </sdk:DataGridTextColumn>
                                            <sdk:DataGridTextColumn IsReadOnly="True" Header="Concession%" Width="100" Binding="{Binding ConcessionPercent,Mode=OneWay,StringFormat=0.00}">
                                                <sdk:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </sdk:DataGridTextColumn.ElementStyle>
                                            </sdk:DataGridTextColumn>
                                            <sdk:DataGridTextColumn IsReadOnly="True" Header="Concession Amount" Width="Auto"  Binding="{Binding ConcessionAmount,Mode=OneWay,StringFormat=0.00}">
                                                <sdk:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </sdk:DataGridTextColumn.ElementStyle>
                                            </sdk:DataGridTextColumn>

                                            <sdk:DataGridTextColumn IsReadOnly="True"  Header="Excise%" Width="100"  Binding="{Binding ExcisePercent,Mode=OneWay,StringFormat=0.00}">
                                                <sdk:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </sdk:DataGridTextColumn.ElementStyle>
                                            </sdk:DataGridTextColumn>
                                            <sdk:DataGridTextColumn IsReadOnly="True" Header="Excise Amount" Width="105"  Binding="{Binding ExciseAmount,Mode=OneWay,StringFormat=0.00}">
                                                <sdk:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </sdk:DataGridTextColumn.ElementStyle>
                                            </sdk:DataGridTextColumn>



                                            <sdk:DataGridTextColumn IsReadOnly="True"  Header="Tax%" Width="100"  Binding="{Binding TAXPercent,Mode=OneWay,StringFormat=0.00}">
                                                <sdk:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </sdk:DataGridTextColumn.ElementStyle>
                                            </sdk:DataGridTextColumn>
                                            <sdk:DataGridTextColumn IsReadOnly="True" Header="Tax Amount" Width="100"  Binding="{Binding TAXAmount,Mode=OneWay,StringFormat=0.00}">
                                                <sdk:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </sdk:DataGridTextColumn.ElementStyle>
                                            </sdk:DataGridTextColumn>
                                            <sdk:DataGridTextColumn IsReadOnly="True" Header="Net Amount" Width="100"  Binding="{Binding NetAmount,Mode=OneWay,StringFormat=0.00}">
                                                <sdk:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </sdk:DataGridTextColumn.ElementStyle>
                                            </sdk:DataGridTextColumn>
                                            <sdk:DataGridTextColumn  IsReadOnly="True" Header="Specification" Width="100"  Binding="{Binding Specification,Mode=OneWay}">
                                            </sdk:DataGridTextColumn>

                                            

                                        </sdk:DataGrid.Columns>
                                    </sdk:DataGrid>

                                </toolkit:DockPanel>


                            </toolkit:DockPanel>
                        </Border>

                    </Grid>
                    <Grid x:Name="BackPanel" Grid.Row="1" Visibility="Collapsed">
                        <Border  BorderBrush="{StaticResource TabControlDarkerBorder}" Margin="4"  BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                            <toolkit:DockPanel x:Name="DocKBackPanel" Margin="4" LastChildFill="True">
                                <toolkit:DockPanel toolkit:DockPanel.Dock="Top" Margin="4">
                                    <Grp:GroupBox   Header="Search">
                                        <Grid >
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto"></RowDefinition>
                                                <RowDefinition Height="auto"></RowDefinition>


                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto"></ColumnDefinition>
                                                <ColumnDefinition ></ColumnDefinition>
                                                <ColumnDefinition Width="auto"></ColumnDefinition>
                                                <ColumnDefinition  ></ColumnDefinition>
                                                <ColumnDefinition Width="auto"></ColumnDefinition>
                                                <ColumnDefinition ></ColumnDefinition>
                                                <ColumnDefinition  ></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <ToggleButton x:Name="cmdEnquiry"   Grid.Row="0"  HorizontalAlignment="Left" Grid.Column="4" Content="Search Enquiry" Width="120"   Background="#000000" Margin="4"  Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="cmdEnquiry_Click"  ></ToggleButton>
                                            
                                            <TextBlock Text="Store" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" Margin="4"></TextBlock>
                                            <inputcombo:AutoCompleteComboBox x:Name="cmbstore"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="1" Grid.Row="0" Margin="4" SelectedItemBinding="{Binding clsStoreVO, Mode=TwoWay}" SelectedValuePath="StoreId" SelectionChanged="cmbstore_SelectionChanged" ></inputcombo:AutoCompleteComboBox>
                                            <TextBlock Text="Supplier" Grid.Column="2" Grid.Row="0" VerticalAlignment="Center" Margin="4"></TextBlock>
                                            <inputcombo:AutoCompleteComboBox x:Name="cmbSupplier"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="3" Grid.Row="0" Margin="4"  SelectedItemBinding="{Binding MasterListItem, Mode=TwoWay}" SelectedValuePath="Id"></inputcombo:AutoCompleteComboBox>
                                            

                                        </Grid>
                                    </Grp:GroupBox>                     
                                </toolkit:DockPanel>

                                <toolkit:DockPanel toolkit:DockPanel.Dock="Top" Margin="4">
                                    <Border  BorderBrush="{StaticResource TabControlDarkerBorder}" Margin="4"  BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto"></ColumnDefinition>
                                                <ColumnDefinition ></ColumnDefinition>
                                                <ColumnDefinition Width="auto"></ColumnDefinition>
                                                <ColumnDefinition  ></ColumnDefinition>
                                                <ColumnDefinition Width="auto"></ColumnDefinition>
                                                <ColumnDefinition ></ColumnDefinition>
                                                <ColumnDefinition  ></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Text="Quotation Lead Time(In Days)" Grid.Column="0" Grid.Row="1" Margin="5,6,5,3" HorizontalAlignment="Stretch"></TextBlock>
                                            <TextBox x:Name="txtLeadTime" Margin="4" Grid.Row="1" Grid.Column="1" MaxLength="2" HorizontalAlignment="Stretch" VerticalAlignment="Center" TextChanged="txtExpirationdays_TextChanged" KeyDown="txtNumber_KeyDown" ></TextBox>
                                            <TextBlock Text="Quotation Expiry Date" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" Margin="4"></TextBlock>
                                            <sdk:DatePicker x:Name="dtpValidity" Grid.Column="3" Grid.Row="1" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectedDate="{Binding ValidityDate, Mode=TwoWay}" ></sdk:DatePicker>
                                            <TextBlock Text="Quotation Date" Grid.Column="4" VerticalAlignment="Center" Margin="4"></TextBlock>
                                            <sdk:DatePicker x:Name="dtpFromDate1" Grid.Column="5" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectedDate="{Binding Date, Mode=TwoWay}" IsEnabled="False" ></sdk:DatePicker>
                                        </Grid>
                                    </Border>
                                </toolkit:DockPanel>
                                <toolkit:DockPanel toolkit:DockPanel.Dock="Bottom" >
                                    <Border BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto"></RowDefinition>
                                                <RowDefinition Height="auto"></RowDefinition>
                                                <RowDefinition Height="auto"></RowDefinition>
                                               
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                               
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock x:Name="TotalConcession" Margin="4" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="0" Text="Total Concession"></TextBlock>
                                            <TextBox x:Name="txtTotalConcession" Margin="4" Grid.Row="1" Grid.Column="1" IsReadOnly="True" Text="{Binding TotalConcession,Mode=OneWay,StringFormat=0.00}" TextAlignment="Right" ></TextBox>
                                            
                                            <TextBlock x:Name="Remarks" Margin="4" Grid.Row="2" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="0" Text="Remarks"></TextBlock>
                                            <TextBox x:Name="txtRemarks" TextWrapping="Wrap" AcceptsReturn="True" Height="50" MaxLength="500" Margin="4" Grid.Row="2" Grid.Column="1" VerticalScrollBarVisibility="Visible" Grid.ColumnSpan="4" Text="{Binding Remarks,Mode=TwoWay}" ></TextBox>
                                            
                                            <TextBlock x:Name="TotalAmount" Margin="4" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="2" Text="Total Amount" ></TextBlock>
                                            <TextBox x:Name="txtTotalAmount" Margin="4"  Grid.Row="0" Grid.Column="3" IsReadOnly="True" Text="{Binding TotalAmount,Mode=TwoWay,StringFormat=0.00}" TextAlignment="Right" ></TextBox>
                                            
                                            <TextBlock x:Name="NetAmount" Margin="4" Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="2" Text="Total Net Amount"></TextBlock>
                                            <TextBox x:Name="txtNETAmount" Margin="4" Grid.Row="1" Grid.Column="6" IsReadOnly="True" Text="{Binding TotalNet,Mode=TwoWay,StringFormat=0.00}" TextAlignment="Right"></TextBox>
                                            
                                            <TextBlock x:Name="Other" Margin="4" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="0" Text="Other" TextAlignment="Right"></TextBlock>
                                            <TextBox x:Name="txtOther" Margin="4" Grid.Row="0" Grid.Column="1"  Text="{Binding Other,Mode=OneWay,StringFormat='N'}" ></TextBox>

                                        </Grid>

                                    </Border>
                                </toolkit:DockPanel>
                            
                                <toolkit:DockPanel toolkit:DockPanel.Dock="Bottom" Margin="4">
                                    <sdk:DataGrid  x:Name="dggrdTermsandCondition" Height="70"  VerticalAlignment="Stretch" ItemsSource="{Binding}" AutoGenerateColumns="False" ScrollViewer.VerticalScrollBarVisibility="Visible" SelectionMode="Extended" IsReadOnly="True" CanUserSortColumns="False">
                                        <sdk:DataGrid.Columns>


                                            <sdk:DataGridTemplateColumn Header="Select">
                                                <sdk:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <CheckBox HorizontalAlignment="Center" Margin="4" IsChecked="{Binding Path=IsCheckedStatus,Mode=TwoWay}" ></CheckBox>
                                                    </DataTemplate>
                                                </sdk:DataGridTemplateColumn.CellTemplate>
                                            </sdk:DataGridTemplateColumn>

                                            <sdk:DataGridTextColumn Binding="{Binding TermsCondition, Mode=TwoWay}" Header="Terms and Conditions"  IsReadOnly="False"/>

                                            <sdk:DataGridTemplateColumn Header="Remarks" >
                                                <sdk:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <TextBox Width="400" MaxLength="500" Text="{Binding Remarks, Mode=TwoWay}" ></TextBox>
                                                    </DataTemplate>
                                                </sdk:DataGridTemplateColumn.CellTemplate>
                                                
                                                
                                            </sdk:DataGridTemplateColumn>
                                            
                                                  <sdk:DataGridTextColumn Binding="{Binding TermsConditionID, Mode=TwoWay}"  Visibility="Collapsed" />
                                        </sdk:DataGrid.Columns>


                                    </sdk:DataGrid>
                                </toolkit:DockPanel>
                                <toolkit:DockPanel  toolkit:DockPanel.Dock="Bottom"  x:Name="AddingDock" >
                                    <Grid Height="auto" Width="auto">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"></ColumnDefinition>
                                            <!--<ColumnDefinition Width="auto"></ColumnDefinition>
                                            <ColumnDefinition Width="auto"></ColumnDefinition>
                                            <ColumnDefinition Width="auto"></ColumnDefinition>
                                            <ColumnDefinition ></ColumnDefinition>-->
                                        </Grid.ColumnDefinitions>
                                        
                                        <ToggleButton  x:Name="cmdAddItem"  Content="Add Item" Width="120" Background="#000000" Margin="5,3,5,3" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="lnkAddItems_Click"  />
                                        <!--<HyperlinkButton x:Name="lnkAddItems"    FontSize="12" Content="Add Items" VerticalAlignment="Center" Margin="20,4"  Foreground="DarkBlue" Click="lnkAddItems_Click"  ></HyperlinkButton>-->
                                       
                                    </Grid>

                                </toolkit:DockPanel>
                                <toolkit:DockPanel  toolkit:DockPanel.Dock="Top" Margin="4">
                                    <Border  toolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                                        <ContentControl VerticalAlignment="Center" FontSize="12" Content="Quotation Details" Margin="-1" Style="{StaticResource Header}"     HorizontalAlignment="Stretch" />
                                    </Border>
                                    <sdk:DataGrid x:Name="grdQuotationdetails" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"    ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Visible"   AutoGenerateColumns="false" CellEditEnded="grdQuotationdetails_CellEditEnded" CanUserSortColumns="False">
                                        <sdk:DataGrid.Columns>
                                            <sdk:DataGridTextColumn  Header="Item Code" Width="100"  Binding="{Binding ItemCode,Mode=OneWay}" IsReadOnly="True">
                                            </sdk:DataGridTextColumn>
                                            <sdk:DataGridTextColumn  Header="Item Name" Width="100"  Binding="{Binding ItemName,Mode=OneWay}" IsReadOnly="True">
                                            </sdk:DataGridTextColumn>

                                            <sdk:DataGridTextColumn  Header="Quantity" Width="100"  Binding="{Binding Quantity,Mode=TwoWay,StringFormat=0.00}" MaxWidth="100">
                                                <sdk:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </sdk:DataGridTextColumn.ElementStyle>
                                            </sdk:DataGridTextColumn>

                                            <sdk:DataGridTextColumn  IsReadOnly="True"  Binding="{Binding PUM}" Header="Purchase UOM" />
                                            
                                            <sdk:DataGridTextColumn  Header="Cost Price" Width="100" Binding="{Binding Rate,StringFormat=0.00}">
                                                <sdk:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </sdk:DataGridTextColumn.ElementStyle>
                                            </sdk:DataGridTextColumn>

                                            <sdk:DataGridTextColumn IsReadOnly="True"  Header="Amount" Width="100"  Binding="{Binding Amount,Mode=OneWay,StringFormat=0.00}">
                                                <sdk:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </sdk:DataGridTextColumn.ElementStyle>
                                            </sdk:DataGridTextColumn>
                                            <sdk:DataGridTextColumn  Header="Excise%" Width="100" Binding="{Binding ExcisePercent,Mode=TwoWay,StringFormat=0.00}">
                                                <sdk:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </sdk:DataGridTextColumn.ElementStyle>
                                            </sdk:DataGridTextColumn>
                                            <sdk:DataGridTextColumn IsReadOnly="True" Header="Excise Amount" Width="100"  Binding="{Binding ExciseAmount,Mode=TwoWay,StringFormat=0.00}">
                                                <sdk:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </sdk:DataGridTextColumn.ElementStyle>
                                            </sdk:DataGridTextColumn>
                                            <sdk:DataGridTextColumn  Header="TAX %" Width="100"  Binding="{Binding TAXPercent,Mode=TwoWay,StringFormat=0.00}">
                                                <sdk:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </sdk:DataGridTextColumn.ElementStyle>
                                            </sdk:DataGridTextColumn>
                                            <sdk:DataGridTextColumn IsReadOnly="True"  Header="TAX Amount" Width="100"  Binding="{Binding TAXAmount,Mode=TwoWay,StringFormat=0.00}">
                                                <sdk:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </sdk:DataGridTextColumn.ElementStyle>
                                            </sdk:DataGridTextColumn>

