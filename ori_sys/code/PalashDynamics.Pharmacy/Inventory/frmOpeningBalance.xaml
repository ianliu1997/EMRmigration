                                                        <data:DataGridTextColumn.ElementStyle>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="TextAlignment" Value="Right"/>
                                                            </Style>
                                                        </data:DataGridTextColumn.ElementStyle>
                                                    </data:DataGridTextColumn>-->

                                                    <!--Cell-8-->
                                                    <data:DataGridTextColumn Binding="{Binding Quantity, StringFormat=0.00, Mode=TwoWay}" Header="Total Quantity" IsReadOnly="True">
                                                        <data:DataGridTextColumn.ElementStyle>
                                                            <Style TargetType="TextBlock">
                                                                <Setter Property="TextAlignment" Value="Right"/>
                                                            </Style>
                                                        </data:DataGridTextColumn.ElementStyle>
                                                    </data:DataGridTextColumn>


                                                    <!--Cell-9-->
                                                    <data:DataGridTextColumn   Binding="{Binding Rate, StringFormat=0.00, Mode=TwoWay}" Header="CP">
                                                        <data:DataGridTextColumn.ElementStyle>
