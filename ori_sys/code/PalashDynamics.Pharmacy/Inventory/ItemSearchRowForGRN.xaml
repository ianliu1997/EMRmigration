<UserControl x:Class="PalashDynamics.Pharmacy.ItemSearch.ItemSearchRowForGRN"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
               xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
              xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls" 
    mc:Ignorable="d"
    Height="Auto"  Width="Auto"
                xmlns:local="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters"   >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
               
            </ResourceDictionary.MergedDictionaries>
            <local:DateTimeConverter x:Key="DateConverter" />
            <local:DateTimeToAgePart x:Key="DateTimeToAgePart"></local:DateTimeToAgePart>
        </ResourceDictionary>
    </UserControl.Resources>


    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" ></RowDefinition>
            <RowDefinition Height="Auto" ></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition  ></ColumnDefinition>
            <ColumnDefinition ></ColumnDefinition>
            <ColumnDefinition ></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition ></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="Code"   Grid.Row="0" Grid.Column="0" Margin="4" ></TextBlock>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="Name" Grid.Row="0" Grid.Column="1" Margin="4" ></TextBlock>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="Batch"  Grid.Row="0" Grid.Column="2" Margin="4" ></TextBlock>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="Exp. Date" Grid.Row="0" Grid.Column="3" Margin="4" ></TextBlock>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="MRP" Grid.Row="0" Grid.Column="4" Margin="4" ></TextBlock>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="Pur. Rate" Grid.Row="0" Grid.Column="5" Margin="4" ></TextBlock>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="Quantity" Grid.Row="0" Grid.Column="6" Margin="4" ></TextBlock>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="Free Qty" Grid.Row="0" Grid.Column="7" Margin="4" ></TextBlock>

        <sdk:AutoCompleteBox x:Name="cmbItemCode"  Grid.Row="1" Grid.Column="0" ItemsSource="{Binding}" Margin="4"   FilterMode="StartsWith" FlowDirection="LeftToRight"  ValueMemberPath="Code" LostFocus="cmbItemCode_LostFocus" KeyUp="cmbItemCode_KeyUp">
            <sdk:AutoCompleteBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" ></ColumnDefinition>
                            <ColumnDefinition Width="250"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Text="{Binding Path=Code,Mode=OneWay}" Margin="4"  Grid.Column="0"></TextBlock>
                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Text="{Binding Path=Description,Mode=OneWay}" Margin="4"  Grid.Column="1"></TextBlock>
                    </Grid>
                </DataTemplate>
            </sdk:AutoCompleteBox.ItemTemplate>
        </sdk:AutoCompleteBox>

        <sdk:AutoCompleteBox x:Name="cmbItemName"  Grid.Row="1" Grid.Column="1" ItemsSource="{Binding}" Margin="4" FilterMode="StartsWith"  ValueMemberPath="Description" KeyUp="cmbItemName_KeyUp" >
            <sdk:AutoCompleteBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" ></ColumnDefinition>
                            <ColumnDefinition Width="250"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <!--<TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Text="{Binding Path=Code,Mode=OneWay}" Margin="4"  Grid.Column="0"></TextBlock>-->
                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Text="{Binding Path=Description,Mode=OneWay}" Margin="4"  Grid.Column="1"></TextBlock>
                    </Grid>
                </DataTemplate>
            </sdk:AutoCompleteBox.ItemTemplate>
        </sdk:AutoCompleteBox>


        <sdk:AutoCompleteBox x:Name="cmbItemBatch"  Grid.Row="1" Grid.Column="2" Margin="4" TabIndex="6" FilterMode="StartsWith"  ValueMemberPath="BatchCode" KeyUp="cmbItemBatch_KeyUp" KeyDown="cmbItemBatch_KeyDown">
            <sdk:AutoCompleteBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="200" ></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Text="{Binding Path=BatchCode,Mode=OneWay}" Margin="4"  Grid.Column="0"></TextBlock>
                    </Grid>
                </DataTemplate>
            </sdk:AutoCompleteBox.ItemTemplate>
        </sdk:AutoCompleteBox>

        <controls:DatePicker x:Name="dtpExpDate" IsEnabled="{Binding IsEnabledQueue}" Grid.Row="1" Grid.Column="3" Height="25"  KeyUp="dtpExpDate_KeyUp" Margin="4" HorizontalAlignment="Stretch" SelectedDateChanged="dtpExpDate_SelectedDateChanged"  /> <!--Style="{StaticResource DatePickerStyle}"-->
        <TextBox Grid.Row="1" Grid.Column="4" Margin="4"   x:Name="txtMRP" Text="0"  HorizontalAlignment="Stretch"  MaxLength="7" KeyUp="txtMRP_KeyUp" KeyDown="txtMRP_KeyDown"></TextBox>
        <TextBox Grid.Row="1" Grid.Column="5" Margin="4"   x:Name="txtPurchaseRate" Text="0"  HorizontalAlignment="Stretch"   MaxLength="7" KeyUp="txtPurchaseRate_KeyUp" KeyDown="txtPurchaseRate_KeyDown"></TextBox>
        <TextBox Grid.Row="1" Grid.Column="6" Margin="4"   x:Name="txtQuantity" Text="0"  HorizontalAlignment="Stretch"   MaxLength="7"  KeyUp="txtQuantity_KeyUp" KeyDown="txtQuantity_KeyDown"></TextBox>
        <TextBox Grid.Row="1" Grid.Column="7" Margin="4"   x:Name="txtFreeQuantity" Text="0"  HorizontalAlignment="Stretch"   MaxLength="7" KeyUp="txtFreeQuantity_KeyUp" KeyDown="txtFreeQuantity_KeyDown"></TextBox>
    </Grid>

</UserControl>
