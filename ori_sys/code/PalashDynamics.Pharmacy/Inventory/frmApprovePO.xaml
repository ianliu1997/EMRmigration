<UserControl x:Class="PalashDynamics.Pharmacy.Inventory.frmApprovePO"
   
   xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"  
    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"   
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
    xmlns:input="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input"
    xmlns:Grp="clr-namespace:Groupbox;assembly=Groupbox"
    xmlns:CustomCombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
    xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"
    xmlns:dgAdapter="clr-namespace:PalashDynamics.DataGridSelectionAdapter"
    xmlns:WMT="clr-namespace:PalashDynamics;assembly=PalashDynamics.WaterMarkTextBox" Loaded="UserControl_Loaded"
    xmlns:local="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters"
    Height="auto" Width="auto">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:DateTimeConverter x:Key="DateConverter" />
            <local:VisiblilityConverter x:Key="VisiblilityConverter"/>
            <local:ToggleBooleanValueConverter x:Key="NegateValueConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>

        <toolkit:DockPanel x:Name="MainDockPanel" LastChildFill="True">
            <toolkit:DockPanel x:Name="DockButtons" toolkit:DockPanel.Dock="Bottom">
                <StackPanel x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">

                    <StackPanel Orientation="Horizontal"  Margin="1" HorizontalAlignment="Right"  >
                        <ToggleButton x:Name="cmdPrint" Content="Print PO" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Click="cmdPrint_Click"></ToggleButton>
                        <ToggleButton x:Name="cmdApprove" Content="Approve" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Width="90" Click="cmdPOApprove_Click" Visibility="Collapsed"></ToggleButton>
                        <ToggleButton x:Name="CmdChangeApprove" Content="Verify And Approve" Background="#000000" Width="140" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}"  Click="CmdChangeAndApprove_Click" Visibility="Collapsed" />
                        <ToggleButton x:Name="cmdNew" Content="New"   Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Collapsed" Click="cmdNew_Click"></ToggleButton>
                        <ToggleButton x:Name="cmdSave" Content="Save" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="cmdSave_Click"></ToggleButton>
                        <ToggleButton Content="Cancel" x:Name="cmdCancel" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Click="cmdCancel_Click"></ToggleButton>

                        <!--<ToggleButton x:Name="cmdNew" Content="New"   Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="cmdNew_Click"></ToggleButton>
                        <ToggleButton x:Name="cmdSave" Content="Save" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Click="cmdSave_Click"></ToggleButton>
                        <ToggleButton Content="Cancel" x:Name="cmdCancel" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Click="cmdCancel_Click"></ToggleButton>-->

                    </StackPanel>
                </StackPanel>
            </toolkit:DockPanel>
            <toolkit:DockPanel x:Name="DockGrids" toolkit:DockPanel.Dock="Top">
                <Grid>

                    <Grid x:Name="FrontPanel">
                        <Border  BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                            <toolkit:DockPanel x:Name="DockFrontPanel" LastChildFill="True">
                                <toolkit:DockPanel toolkit:DockPanel.Dock="Top">
                                    <Grp:GroupBox Margin="4"  Header="Search Purchase Order">
                                        <Grid >
                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>
                                                <RowDefinition></RowDefinition>
                                            </Grid.RowDefinitions>

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition/>
                                                <ColumnDefinition Width="Auto"/>

                                            </Grid.ColumnDefinitions>


                                            <TextBlock Text="From Date" Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="4"></TextBlock>
                                            <sdk:DatePicker x:Name="dtpFromDate" Grid.Column="1" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center"  ></sdk:DatePicker>

                                            <TextBlock Text="To Date" HorizontalAlignment="Right" Grid.Column="2" VerticalAlignment="Center" Margin="4"></TextBlock>
                                            <sdk:DatePicker x:Name="dtpToDate" Grid.Column="3" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></sdk:DatePicker>


                                            <TextBlock Text="Purchase No." HorizontalAlignment="Right" Grid.Column="4" Grid.Row="0" VerticalAlignment="Center" Margin="4"></TextBlock>
                                            <TextBox HorizontalAlignment="Stretch" x:Name="txtPONO" Grid.Column="5" Grid.Row="0" VerticalAlignment="Center" Margin="4" KeyUp="txtPO_KeyUp" ></TextBox>

                                            <TextBlock Text="Store" Grid.Column="0" HorizontalAlignment="Right" Grid.Row="1" VerticalAlignment="Center" Margin="4"></TextBlock>
                                            <inputcombo:AutoCompleteComboBox x:Name="cmbStore"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" Margin="4" SelectionChanged="cmbStore_SelectionChanged"></inputcombo:AutoCompleteComboBox>



                                            <TextBlock Text="Supplier" HorizontalAlignment="Right" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" Margin="4"></TextBlock>
                                            <inputcombo:AutoCompleteComboBox x:Name="cmbSupplier"  HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="3" Grid.Row="1" Margin="4" SelectionChanged="cmbSupplier_SelectionChanged" ></inputcombo:AutoCompleteComboBox>


                                            <Grp:GroupBox Header="Criteria" Margin="2" Grid.Row="1" Grid.Column="4" Width="Auto">
                                                <Grid >
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"></RowDefinition>
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                    </Grid.ColumnDefinitions>
                                                    <RadioButton x:Name="rdbUnApproved" Click="rdbUnApproved_Click" Content="UnApproved" Margin="2" Grid.Row="0" Grid.Column="0" IsChecked="True"></RadioButton>
                                                    <RadioButton x:Name="rdbApproved" Click="rdbApproved_Click" Content="Approved" Margin="2" Grid.Row="0" Grid.Column="1" ></RadioButton>
                                                    <RadioButton x:Name="chkCancelPO" Click="chkCancelPO_Click" Content="Close \ Cancel PO" Margin="2" Grid.Row="0" Grid.Column="2"></RadioButton>
                                                </Grid>
                                            </Grp:GroupBox>
                                            <!--<CheckBox Margin="4" Content="Close \ Cancel PO" x:Name="chkCancelPO" Grid.Row="1" Grid.Column="4" VerticalAlignment="Center" Click="chkCancelPO_Click"></CheckBox>-->
                                            <Button Grid.Column="6"  Grid.Row="1" x:Name="cmdSearch" Margin="4" Click="cmdSearch_Click" ToolTipService.ToolTip="Search PO" >
                                                <Image Source="/PalashDynamics;component/Icons/Search_b.JPG" Margin="4,0,4,4" Width="20" ></Image>
                                            </Button>

                                        </Grid>
                                    </Grp:GroupBox>
                                </toolkit:DockPanel>


                                <toolkit:DockPanel toolkit:DockPanel.Dock="Top"  LastChildFill="True" >
                                    <sdk:DataPager x:Name="datapager"  DisplayMode="FirstLastPreviousNext" toolkit:DockPanel.Dock="Bottom"   Source="{Binding}" NumericButtonCount="10" AutoEllipsis="False" IsTotalItemCountFixed="False"  />
                                    <Border  toolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                                        <ContentControl VerticalAlignment="Center" FontSize="12" Content="PO List" Margin="-1" Style="{StaticResource Header}"     HorizontalAlignment="Stretch" />
                                    </Border>
                                    <sdk:DataGrid  x:Name="dgPOList" Margin="0,0,0,1" Height="130" VerticalScrollBarVisibility="Visible"   ItemsSource="{Binding}"  AutoGenerateColumns="False" SelectionChanged="dgPOList_SelectionChanged" CanUserSortColumns="False">
                                        <sdk:DataGrid.Columns>
                                            <sdk:DataGridTemplateColumn Width="0">
                                                <sdk:DataGridTemplateColumn.CellEditingTemplate>
                                                    <DataTemplate>
                                                        <HyperlinkButton x:Name="Update"  TabIndex="0" Padding="5,0,5,0"  Content="View" VerticalAlignment="Center" Click="Update_Click" Width="0"  Visibility="Collapsed" ></HyperlinkButton>
                                                    </DataTemplate>
                                                </sdk:DataGridTemplateColumn.CellEditingTemplate>
                                            </sdk:DataGridTemplateColumn>
                                            <sdk:DataGridTextColumn Binding="{Binding PONO, Mode=OneWay}" Header="PO Number" IsReadOnly="True"/>
                                            <sdk:DataGridTextColumn Binding="{Binding Date,Mode=OneWay, Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}"   Header="PO Date" IsReadOnly="True" />
                                            <sdk:DataGridTextColumn IsReadOnly="True" Binding="{Binding ID,Mode=OneWay}" Visibility="Collapsed"  />
                                            <sdk:DataGridTextColumn IsReadOnly="True" Header="Supplier Name"  Binding="{Binding SupplierName,Mode=OneWay}"   />
                                            <sdk:DataGridTextColumn Binding="{Binding GRNNowithDate,Mode=OneWay}"  Header="GRN No. - Date" Visibility="Visible"  IsReadOnly="True" />
                                            <sdk:DataGridTextColumn Binding="{Binding IndentNowithDate,Mode=OneWay}"  Header="Purchase Requisition No. - Date" Visibility="Visible"  IsReadOnly="True" />
                                            <sdk:DataGridTextColumn IsReadOnly="True" Header="Type"  Binding="{Binding Type,Mode=OneWay}"   />
                                            <sdk:DataGridTextColumn IsReadOnly="True" Header="Delivery Location" Binding="{Binding DeliveryLocation}"></sdk:DataGridTextColumn>
                                            <sdk:DataGridTemplateColumn Header="Freeze PO">
                                                <sdk:DataGridTemplateColumn.CellEditingTemplate>
                                                    <DataTemplate>
                                                        <CheckBox x:Name="Freez" VerticalAlignment="Center" HorizontalAlignment="Center" IsChecked="{Binding Freezed,Mode=TwoWay}" IsEnabled="{Binding  IsEnabledFreezed,Mode=TwoWay}"  Click="Freez_Click"></CheckBox>
                                                    </DataTemplate>
                                                </sdk:DataGridTemplateColumn.CellEditingTemplate>
                                            </sdk:DataGridTemplateColumn>
                                            <sdk:DataGridCheckBoxColumn IsReadOnly="True" Header="Approved"  Binding="{Binding IsApproveded,Mode=OneWay}"   />
                                            <sdk:DataGridTextColumn IsReadOnly="True" Header="Approve Level 1 Details"  Binding="{Binding ApprovedLvl1Details,Mode=OneWay}"   />
                                            <sdk:DataGridTextColumn IsReadOnly="True" Header="Approve Level 2 Details"  Binding="{Binding ApprovedLvl2Details,Mode=OneWay}"   />
                                            <sdk:DataGridTextColumn Visibility="Collapsed"  Binding="{Binding StoreID,Mode=OneWay}"   />
                                            <sdk:DataGridTextColumn Visibility="Collapsed"  Binding="{Binding SupplierID,Mode=OneWay}"   />
                                            <sdk:DataGridTextColumn Visibility="Collapsed"  Binding="{Binding IndentID,Mode=OneWay}"   />
                                            <sdk:DataGridTextColumn Visibility="Collapsed"  Binding="{Binding EnquiryID,Mode=OneWay}"   />
                                            <sdk:DataGridTextColumn Visibility="Collapsed"  Binding="{Binding DeliveryDuration,Mode=OneWay}"   />
                                            <sdk:DataGridTextColumn Visibility="Collapsed"  Binding="{Binding PaymentMode,Mode=OneWay}"   />
                                            <sdk:DataGridTextColumn Visibility="Collapsed"  Binding="{Binding PaymentTerm,Mode=OneWay}"   />
                                            <sdk:DataGridTextColumn Visibility="Collapsed"  Binding="{Binding Guarantee_Warrantee,Mode=OneWay}"   />
                                            <sdk:DataGridTextColumn Visibility="Collapsed"  Binding="{Binding Schedule,Mode=OneWay}"   />
                                            <sdk:DataGridTextColumn Visibility="Collapsed"  Binding="{Binding TotalAmount,Mode=OneWay}"   />
                                            <sdk:DataGridTextColumn Visibility="Collapsed"  Binding="{Binding TotalDiscount,Mode=OneWay}"   />
                                            <sdk:DataGridTextColumn Visibility="Collapsed"  Binding="{Binding TotalVat,Mode=OneWay}"   />
                                            <sdk:DataGridTextColumn Visibility="Collapsed"  Binding="{Binding TotalNetAmount,Mode=OneWay}"   />
                                            <sdk:DataGridTextColumn Visibility="Collapsed"  Binding="{Binding Freezed,Mode=OneWay}"   />

                                            <sdk:DataGridTemplateColumn Header="Cancel PO">
                                                <sdk:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <HyperlinkButton VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Webdings" Content="r" Foreground="Red"  Padding="5,0,5,0" IsTabStop="False"   x:Name="cmdDeleteFreeService" FontSize="15" Click="cmdDeleteFreeService_Click"></HyperlinkButton>
                                                    </DataTemplate>
                                                </sdk:DataGridTemplateColumn.CellTemplate>
                                            </sdk:DataGridTemplateColumn>
                                        </sdk:DataGrid.Columns>
                                    </sdk:DataGrid>

                                </toolkit:DockPanel>
                                <toolkit:DockPanel  toolkit:DockPanel.Dock="Top" >
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Border Grid.Row="0" toolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                                            <ContentControl VerticalAlignment="Center" FontSize="12" Content="PO Details" Margin="-1" Style="{StaticResource Header}"     HorizontalAlignment="Stretch" />
                                        </Border>
                                        <sdk:DataGrid Grid.Row="1" x:Name="grdpo" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"  Margin="0"  ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Visible"   AutoGenerateColumns="false">
                                            <sdk:DataGrid.Columns>
                                                <sdk:DataGridTextColumn  IsReadOnly="True" Header="Item Code" Width="100"  Binding="{Binding ItemCode,Mode=OneWay}">
                                                </sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn IsReadOnly="True"  Header="Item Name" Width="100"  Binding="{Binding ItemName,Mode=OneWay}">
                                                </sdk:DataGridTextColumn>
                                                <!--<sdk:DataGridTextColumn  Header="Purchase UOM" IsReadOnly="True"  Width="100" Binding="{Binding PUM,Mode=OneWay}">
                                            </sdk:DataGridTextColumn>-->
                                                <sdk:DataGridTextColumn  Header="Purchase UOM" IsReadOnly="True"  Width="100" Binding="{Binding TransUOM,Mode=OneWay}">
                                                </sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn IsReadOnly="True"    Header="PO Purchase Quantity" Width="150"  Binding="{Binding Quantity, StringFormat=0.00,Mode=OneWay}">
                                                    <sdk:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </sdk:DataGridTextColumn.ElementStyle>
                                                </sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn IsReadOnly="True"  Header="Purchase Cost Price" Width="100" Binding="{Binding Rate, StringFormat=0.00,Mode=OneWay}">
                                                    <sdk:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </sdk:DataGridTextColumn.ElementStyle>
                                                </sdk:DataGridTextColumn>
                                                <!--<data:DataGridTextColumn Binding="{Binding CostRate,StringFormat=0.00, Mode=OneWay}" Header="Cost Amount" IsReadOnly="True"/>-->
                                                <sdk:DataGridTextColumn IsReadOnly="True"  Header="Cost Amount" Width="100"  Binding="{Binding CostRate,StringFormat=0.00, Mode=OneWay}" Visibility="Visible">
                                                    <sdk:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </sdk:DataGridTextColumn.ElementStyle>
                                                </sdk:DataGridTextColumn>

                                                <sdk:DataGridTextColumn IsReadOnly="True"  Header="Purchase M.R.P" Width="110"  Binding="{Binding MRP,StringFormat=0.00, Mode=OneWay}" Visibility="Visible">
                                                    <sdk:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </sdk:DataGridTextColumn.ElementStyle>
                                                </sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn IsReadOnly="True" Header="Amount" Width="100"  Binding="{Binding Amount, StringFormat=0.00,Mode=OneWay}">
                                                    <sdk:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </sdk:DataGridTextColumn.ElementStyle>
                                                </sdk:DataGridTextColumn>

                                                <sdk:DataGridTextColumn IsReadOnly="True"  Header="Discount %" Width="100" Binding="{Binding DiscountPercent, StringFormat=0.00,Mode=OneWay}">
                                                    <sdk:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </sdk:DataGridTextColumn.ElementStyle>
                                                </sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn IsReadOnly="True"  Header="Discount Amount" Width="Auto"  Binding="{Binding DiscountAmount, StringFormat=0.00,Mode=OneWay}">
                                                    <sdk:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </sdk:DataGridTextColumn.ElementStyle>
                                                </sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn IsReadOnly="True"  Header="VAT%" Width="100"  Binding="{Binding VATPercent, StringFormat=0.00,Mode=OneWay}">
                                                    <sdk:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </sdk:DataGridTextColumn.ElementStyle>
                                                </sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn IsReadOnly="True"  Header="VAT Amount" Width="100"  Binding="{Binding VATAmount, StringFormat=0.00,Mode=OneWay}">
                                                    <sdk:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </sdk:DataGridTextColumn.ElementStyle>
                                                </sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn IsReadOnly="True"  Header="Net Amount" Width="100"  Binding="{Binding NetAmount, StringFormat=0.00,Mode=OneWay}">
                                                    <sdk:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </sdk:DataGridTextColumn.ElementStyle>
                                                </sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn IsReadOnly="True"   Header="Specification" Width="100"  Binding="{Binding Specification,Mode=OneWay}">
                                                </sdk:DataGridTextColumn>

                                                <sdk:DataGridTextColumn IsReadOnly="True"    Header="Available Stock" Width="150"  Binding="{Binding TotalBatchAvailableStock, StringFormat=0.00,Mode=OneWay}">
                                                    <sdk:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </sdk:DataGridTextColumn.ElementStyle>
                                                </sdk:DataGridTextColumn>

                                                <sdk:DataGridTextColumn IsReadOnly="True"   Header="Stock UOM"   Binding="{Binding StockUOM,Mode=OneWay}">
                                                </sdk:DataGridTextColumn>

                                            </sdk:DataGrid.Columns>
                                        </sdk:DataGrid>
                                        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                            <TextBlock HorizontalAlignment="Right" Text="Total PO" VerticalAlignment="Center" Margin="1,0,1,0"></TextBlock>
                                            <TextBox x:Name="txtTotalCountRecords" TextAlignment="Right" VerticalAlignment="Center" IsReadOnly="True"  Margin="1,0,4,4" Width="70" ></TextBox>
                                        </StackPanel>
                                    </Grid>
                                </toolkit:DockPanel>


                            </toolkit:DockPanel>
                        </Border>

                    </Grid>

                    <Grid x:Name="BackPanel" Visibility="Collapsed" Grid.Row="1">
                        <Border  BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                            <toolkit:DockPanel x:Name="DocKBackPanel" Margin="4" LastChildFill="True">
                                <!--This toolkit holds the Search Panel-->
                                <toolkit:DockPanel toolkit:DockPanel.Dock="Top" Margin="4">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*"></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                            <!--<ColumnDefinition ></ColumnDefinition>-->
                                        </Grid.ColumnDefinitions>


                                        <Grp:GroupBox Margin="4"  Header="Purchase Order Details" Grid.Column="0" HorizontalAlignment="Stretch">
                                            <Grid >
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="auto"></RowDefinition>
                                                    <RowDefinition Height="auto"></RowDefinition>
                                                    <RowDefinition Height="auto"></RowDefinition>
                                                    <RowDefinition Height="auto"></RowDefinition>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                                    <ColumnDefinition ></ColumnDefinition>
                                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                                    <ColumnDefinition ></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Text="Date" VerticalAlignment="Center"  Margin="4" Grid.Column="0" Grid.Row="0" HorizontalAlignment="Right"></TextBlock>
                                                <sdk:DatePicker x:Name="dtpDate" Grid.Row="0" Grid.Column="1" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectedDate="{Binding Date, Mode=TwoWay}" ></sdk:DatePicker>

                                                <TextBlock Text="Store" VerticalAlignment="Center" Margin="4" Grid.Column="2" Grid.Row="0" HorizontalAlignment="Right"></TextBlock>
                                                <inputcombo:AutoCompleteComboBox x:Name="cboStore"  Grid.Row="0"  Grid.Column="3"  Margin="4" HorizontalAlignment="Stretch" SelectionChanged="cboStore_SelectionChanged" ></inputcombo:AutoCompleteComboBox>

                                                <TextBlock Text="Supplier" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="0" Grid.Row="1" Width="auto" Height="auto" Margin="4" ></TextBlock>
                                                <inputcombo:AutoCompleteComboBox x:Name="cboSupplier"  Grid.Row="1"  Grid.Column="1"  Margin="4" HorizontalAlignment="Stretch" SelectionChanged="cboSupplier_SelectionChanged" ></inputcombo:AutoCompleteComboBox>

                                                <TextBlock Text="Payment Mode" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="2" Grid.Row="1" Width="auto" Height="auto" Margin="4" ></TextBlock>
                                                <inputcombo:AutoCompleteComboBox x:Name="cmbModeofPayment" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" Grid.Row="1"  Grid.Column="3" SelectedValuePath="ID" Margin="4" HorizontalAlignment="Stretch" ></inputcombo:AutoCompleteComboBox>

                                                <TextBlock Text="Delivery" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="4" Grid.Column="2" Grid.Row="2"></TextBlock>
                                                <inputcombo:AutoCompleteComboBox x:Name="cboDelivery"   Grid.Row="2" Grid.Column="3"  Margin="4" HorizontalAlignment="Stretch"></inputcombo:AutoCompleteComboBox>

                                                <TextBlock Text="Payment Terms" HorizontalAlignment="Right" VerticalAlignment="Center" Width="auto" Height="auto" Margin="4" Grid.Column="0" Grid.Row="2"></TextBlock>
                                                <inputcombo:AutoCompleteComboBox x:Name="cboTOP"  Grid.Row="2"  Grid.Column="1"   Margin="4" HorizontalAlignment="Stretch"></inputcombo:AutoCompleteComboBox>


                                                <TextBlock Text="Delivery Duration" HorizontalAlignment="Right" VerticalAlignment="Center" Width="auto" Height="auto" Margin="4" Grid.Column="0" Grid.Row="3"></TextBlock>
                                                <inputcombo:AutoCompleteComboBox x:Name="cmbDeliveryDays"  Grid.Row="3"  Grid.Column="1"   Margin="4" HorizontalAlignment="Stretch"></inputcombo:AutoCompleteComboBox>

                                                <!--<ToggleButton x:Name="cmdQuotation" Visibility="Collapsed" Grid.Row="0" Grid.Column="3"   Content="Quotation"   Background="#000000" Margin="4" HorizontalAlignment="left" Style="{StaticResource ToggleButtonStyle}"  Click="cmdQuotation_Click" ></ToggleButton>-->
                                            </Grid>
                                        </Grp:GroupBox>

                                        <Grp:GroupBox Margin="4"  Header="Payment Mode" Visibility="Collapsed" Grid.Column="1" HorizontalAlignment="Stretch">
                                            <Grid >
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="auto"></RowDefinition>
                                                    <RowDefinition Height="auto"></RowDefinition>
                                                    <RowDefinition Height="auto"></RowDefinition>
                                                </Grid.RowDefinitions>


                                                <!--<TextBlock Text="Mode Of Payment" VerticalAlignment="Center" HorizontalAlignment="Right" Width="auto" Height="auto" Margin="4" Grid.Column="0" Grid.Row="0"></TextBlock>-->


                                                <RadioButton Grid.Row="0" Margin="4" GroupName="PaymentMode" x:Name="rdbCash" Content="Cash" ></RadioButton>
                                                <RadioButton Grid.Row="1" Margin="4" GroupName="PaymentMode" x:Name="rdbCheque" Content="Cheque" ></RadioButton>
                                                <RadioButton Grid.Row="2" Margin="4" GroupName="PaymentMode" x:Name="rdbAccountTransfer" Content="Account Transfer" ></RadioButton>





                                            </Grid>
                                        </Grp:GroupBox>

                                        <Grp:GroupBox Margin="4"  Header="Get Items" Grid.Column="1" HorizontalAlignment="Stretch">
                                            <Grid >
