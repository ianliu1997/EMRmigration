                                        <data:DataGrid x:Name="grdStoreIndent" Margin="4" ItemsSource="{Binding}" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Visible"  AlternatingRowBackground="Silver" HorizontalAlignment="Stretch"  AutoGenerateColumns="false" CanUserSortColumns="False" >
