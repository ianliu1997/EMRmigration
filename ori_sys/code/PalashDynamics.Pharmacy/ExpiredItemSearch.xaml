<controls:ChildWindow xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"  x:Class="PalashDynamics.Pharmacy.ExpiredItemSearch"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:Grp="clr-namespace:Groupbox;assembly=Groupbox" 
           xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"
           xmlns:local="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters"
           xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"            
           Width ="850" Height="550"
           Title="Item Search" Closed="ChildWindow_Closed">

    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:DateTimeConverter x:Key="DateConverter" />
        </ResourceDictionary>
    </controls:ChildWindow.Resources>


    <toolkit:DockPanel toolkit:DockPanel.Dock="Top" Background="White">
        <Border BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Margin="4,4,4,4"  Background="Transparent">
            <toolkit:DockPanel toolkit:DockPanel.Dock="Top" >

                <toolkit:DockPanel toolkit:DockPanel.Dock="Bottom">
                    <StackPanel x:Name="FooterBackPanel" Orientation="Horizontal"    Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                        <StackPanel x:Name="SaveCommandPanelBackPanel" Orientation="Horizontal"  Margin="0,0,0,0">
                            <ToggleButton x:Name="OKButton" Click="OKButton_Click"  Content="OK"   Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible"  />
                            <ToggleButton x:Name="CloseButton" Click="CancelButton_Click"  Content="Close"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible"   />
                        </StackPanel>
                    </StackPanel>
                </toolkit:DockPanel>
                <toolkit:DockPanel toolkit:DockPanel.Dock="Top" LastChildFill="True">
                    <toolkit:DockPanel toolkit:DockPanel.Dock="Top">
                        <Border BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Margin="4,4,4,4"  Background="Transparent">
                            <toolkit:DockPanel toolkit:DockPanel.Dock="Top">
                                <Grid x:Name="LayoutRoot1" Width="auto" Height="auto">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"></RowDefinition>
                                        <RowDefinition Height="auto"></RowDefinition>
                                        <RowDefinition Height="auto"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition ></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock x:Name="lblFromDate" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right"></TextBlock>
                                    <controls:DatePicker Grid.Row="0" Grid.Column="1" x:Name="dtpFromDate"  Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></controls:DatePicker>

                                    <TextBlock x:Name="lblToDate"  Grid.Column="2" Grid.Row="0" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right"></TextBlock>
                                    <controls:DatePicker x:Name="dtpToDate" Grid.Row="0" Grid.Column="3" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></controls:DatePicker>

                                    <TextBlock Grid.Row="0" Grid.Column="4" Text="Store" Margin="4" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                                    <inputcombo:AutoCompleteComboBox  SelectedItemBinding="{Binding clsStoreVO, Mode=OneWay}" SelectedValuePath="StoreId" Margin="4"  Grid.Row="0" Grid.Column="5" x:Name="cmbStore" ></inputcombo:AutoCompleteComboBox>

                                    <!--<TextBlock Visibility="Collapsed" Grid.Row="1" Grid.Column="0" Text="Supplier" Margin="4" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                                    <inputcombo:AutoCompleteComboBox Visibility="Collapsed" x:Name="cmbSupplier"   Grid.Row="1"  Grid.Column="1"  Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectedItemBinding="{Binding MasterListItem, Mode=TwoWay}" SelectedValuePath="ID" ></inputcombo:AutoCompleteComboBox>-->

                                    <TextBlock Text="Received No." Grid.Column="0" Grid.Row="1" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right"></TextBlock>
                                    <TextBox Text="" x:Name="txtReceivedNo" Margin="4" Grid.Column="1" Grid.Row="1" VerticalAlignment="Center"></TextBox>

                                    <TextBlock Text="Item Name" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right"></TextBlock>
                                    <TextBox Text="" x:Name="txtItemName" Margin="4" Grid.Column="3" Grid.Row="1" VerticalAlignment="Center"></TextBox>

                                    <TextBlock Text="Batch Code" Grid.Column="4" Grid.Row="1" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right"></TextBlock>
                                    <TextBox Text="" x:Name="txtBatchCode" Margin="4" Grid.Column="5" Grid.Row="1" VerticalAlignment="Center"></TextBox>

                                    <ToggleButton x:Name="cmdSearch" Grid.Column="6" Grid.Row="1" Content="Search" Height="20"   Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="cmdSearch_Click" />

                                </Grid>
                            </toolkit:DockPanel>
                        </Border>
                    </toolkit:DockPanel>

                    <toolkit:DockPanel toolkit:DockPanel.Dock="Top" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Grid Height="210" Width="Auto" x:Name="ItemContainer" VerticalAlignment="Stretch" >
                            <toolkit:DockPanel LastChildFill="True">
                                <Border Margin="0" toolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                                    <ContentControl  FontSize="11" Content="Items" Margin="0" Style="{StaticResource Header}"/>
                                </Border>
                                <data:DataPager TabIndex="20" x:Name="dataPager" toolkit:DockPanel.Dock="Bottom"
                                    Grid.Row="1"
                                    PageSize="{Binding PageSize}"
                                    DisplayMode="FirstLastPreviousNext"
                                    IsEnabled="True"
                                    IsTotalItemCountFixed="True"
                                    Source="{Binding DataList}"  />
                                <data:DataGrid  x:Name="dgexpItem" Margin="0,0,0,1" ItemsSource="{Binding}"  AutoGenerateColumns="False" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto" CanUserSortColumns="False">
                                    <data:DataGrid.Columns >
                                        <data:DataGridTemplateColumn Header="Select" >
                                            <data:DataGridTemplateColumn.CellTemplate >
                                                <DataTemplate >
                                                    <CheckBox Margin="10,2,10,2"  x:Name="chkSelectItem" IsTabStop="True" Click="chkSelectItem_Click" IsChecked="{Binding Status,Mode=OneTime}" VerticalAlignment="Center" HorizontalAlignment="Center" ></CheckBox >
                                                </DataTemplate>
                                            </data:DataGridTemplateColumn.CellTemplate>
                                        </data:DataGridTemplateColumn>
                                        <data:DataGridTextColumn Binding="{Binding BatchExpiryDate,Converter={StaticResource DateConverter},ConverterParameter={StaticResource ExpiryDateDisplayFormat}}"  Header="Expiry Date" IsReadOnly="True"/>
                                        <data:DataGridTextColumn Binding="{Binding ReceivedNo, Mode=OneWay}" Header="Received Number" IsReadOnly="True"/>
                                        <data:DataGridTextColumn Binding="{Binding ReceivedDate,Mode=OneWay,Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}"  Header="Received Date" IsReadOnly="True" />
                                        <data:DataGridTextColumn Binding="{Binding ItemName, Mode=OneWay}" Header="Item Name" IsReadOnly="True"/>
                                        <data:DataGridTextColumn Binding="{Binding ItemCode, Mode=OneWay}" Header="Item Code" IsReadOnly="True"/>
                                        <data:DataGridTextColumn Binding="{Binding BatchCode, Mode=OneWay}" Header="Batch Code" IsReadOnly="True"/>
                                        <data:DataGridTextColumn IsReadOnly="True" Header="Received Quantity"  Binding="{Binding ReceivedQty,Mode=OneWay}">
                                            <data:DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="TextAlignment" Value="Right"/>
                                                </Style>
                                            </data:DataGridTextColumn.ElementStyle>
                                        </data:DataGridTextColumn>
                                        <data:DataGridTextColumn Binding="{Binding ReceivedQtyUOM, Mode=OneWay}" Header="UOM" IsReadOnly="True"/>

                                        <data:DataGridTextColumn Binding="{Binding MainRate,Mode=OneWay, StringFormat=0.00}"  Header="Base Rate" IsReadOnly="True" Visibility="Visible">
                                            <data:DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="TextAlignment" Value="Right"/>
                                                </Style>
                                            </data:DataGridTextColumn.ElementStyle>
                                        </data:DataGridTextColumn>

                                        <data:DataGridTextColumn Binding="{Binding MainMRP,Mode=OneWay, StringFormat=0.00}"  Header="Base MRP" IsReadOnly="True" Visibility="Visible">
                                            <data:DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="TextAlignment" Value="Right"/>
                                                </Style>
                                            </data:DataGridTextColumn.ElementStyle>
                                        </data:DataGridTextColumn>

                                    </data:DataGrid.Columns>
                                </data:DataGrid>
                            </toolkit:DockPanel>
                        </Grid>
                    </toolkit:DockPanel>

                    <toolkit:DockPanel LastChildFill="True" toolkit:DockPanel.Dock="Bottom">
                        <Grid Height="auto" Width="Auto" x:Name="BatchContainer" >
                            <toolkit:DockPanel LastChildFill="True">
                                <Border Margin="0" toolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                                    <ContentControl  FontSize="11" Content="Selected Items" Margin="0" Style="{StaticResource Header}"/>
                                </Border>
                                <data:DataGrid  toolkit:DockPanel.Dock="Bottom" x:Name="dgSelectedItems" Margin="0,0,0,1"  ItemsSource="{Binding}"  AutoGenerateColumns="False" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto" CanUserSortColumns="False">
                                    <data:DataGrid.Columns >
                                        <data:DataGridTemplateColumn Header="Select">
                                            <data:DataGridTemplateColumn.CellTemplate >
                                                <DataTemplate >
                                                    <CheckBox Margin="10,2,10,2"  x:Name="chkSelectedItems" IsTabStop="True" Click="chkSelectedItems_Click" IsChecked="True" VerticalAlignment="Center" HorizontalAlignment="Center" ></CheckBox >
                                                </DataTemplate>
                                            </data:DataGridTemplateColumn.CellTemplate>
                                        </data:DataGridTemplateColumn>
                                        <data:DataGridTextColumn Binding="{Binding BatchExpiryDate,Converter={StaticResource DateConverter},ConverterParameter={StaticResource ExpiryDateDisplayFormat}}"  Header="Expiry Date" IsReadOnly="True"/>
                                        <data:DataGridTextColumn Binding="{Binding ReceivedNo, Mode=OneWay}" Header="Received Number" IsReadOnly="True"/>
                                        <data:DataGridTextColumn Binding="{Binding ItemName, Mode=OneWay}" Header="Item Name" IsReadOnly="True"/>
                                        <data:DataGridTextColumn Binding="{Binding ItemCode, Mode=OneWay}" Header="Item Code" IsReadOnly="True"/>

                                        <data:DataGridTextColumn IsReadOnly="True" Header="Received Quantity"  Binding="{Binding ReceivedQty,Mode=OneWay}">
                                            <data:DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="TextAlignment" Value="Right"/>
                                                </Style>
                                            </data:DataGridTextColumn.ElementStyle>
                                        </data:DataGridTextColumn>
                                        <data:DataGridTextColumn Binding="{Binding ReceivedQtyUOM, Mode=OneWay}" Header="UOM" IsReadOnly="True"/>

                                        <data:DataGridTextColumn Binding="{Binding MainRate,Mode=OneWay, StringFormat=0.00}"  Header="Base Rate" IsReadOnly="True" Visibility="Visible">
                                            <data:DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="TextAlignment" Value="Right"/>
                                                </Style>
                                            </data:DataGridTextColumn.ElementStyle>
                                        </data:DataGridTextColumn>

                                        <data:DataGridTextColumn Binding="{Binding MainMRP,Mode=OneWay, StringFormat=0.00}"  Header="Base MRP" IsReadOnly="True" Visibility="Visible">
                                            <data:DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="TextAlignment" Value="Right"/>
                                                </Style>
                                            </data:DataGridTextColumn.ElementStyle>
                                        </data:DataGridTextColumn>


                                    </data:DataGrid.Columns>
                                </data:DataGrid>

                            </toolkit:DockPanel>
                        </Grid>
                    </toolkit:DockPanel>
                </toolkit:DockPanel>
            </toolkit:DockPanel>
        </Border>
    </toolkit:DockPanel>
</controls:ChildWindow>