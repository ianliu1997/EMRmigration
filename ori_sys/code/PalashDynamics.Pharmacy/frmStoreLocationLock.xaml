<UserControl x:Class="PalashDynamics.Pharmacy.frmStoreLocationLock"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"  
        xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"  
        xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"
        xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"  
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:WMT="clr-namespace:PalashDynamics;assembly=PalashDynamics.WaterMarkTextBox"
        xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
        xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
        xmlns:Grp="clr-namespace:Groupbox;assembly=Groupbox"
        xmlns:local="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters"
        Width="Auto" Height="Auto"  Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:DateTimeConverter x:Key="DateConverter" />
            <local:ToggleBooleanValueConverter x:Key="NegateValueConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <toolkit:DockPanel x:Name="MainDock" LastChildFill="True">
            <toolkit:DockPanel x:Name="Bottom" toolkit:DockPanel.Dock="Bottom" Margin="5">
                <StackPanel x:Name="FooterBackPanel" Orientation="Horizontal"    Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                    <StackPanel x:Name="SaveCommandPanelBackPanel" Orientation="Horizontal"  Margin="0,0,0,0">
                        <ToggleButton x:Name="CmdPrint"  Content="Print"   Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Click="CmdPrint_Click" Visibility="Collapsed"  ToolTipService.ToolTip="Print"/>
                        <ToggleButton x:Name="CmdNew"  Content="New"   Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Click="CmdNew_Click"   ToolTipService.ToolTip="New"/>
                        <ToggleButton x:Name="CmdUnlock" Visibility="Collapsed" Content="Revoke" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}"  ToolTipService.ToolTip="UnBlock" Click="CmdUnlock_Click"/>
                        <ToggleButton x:Name="CmdSave" Content="Suspend" IsEnabled="False"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Click="CmdSave_Click"  ToolTipService.ToolTip="Save"/>
                        <ToggleButton x:Name="CmdModify" Content="Modify" IsEnabled="False"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}"  ToolTipService.ToolTip="Modify" Click="CmdModify_Click"/>
                        <ToggleButton x:Name="CmdCancel"  Content="Cancel" IsEnabled="False"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Click="CmdCancel_Click"  ToolTipService.ToolTip="Cancel"/>
                    </StackPanel>
                </StackPanel>
            </toolkit:DockPanel>


            <Grid>
                <Grid Height="AUTO" Visibility="Visible" Width="auto" x:Name="FrontPanel" Grid.Row="0">
                    <controlsToolkit:DockPanel x:Name="docContent" controlsToolkit:DockPanel.Dock="Top" LastChildFill="True">
                        <Border BorderBrush="{StaticResource TabControlDarkerBorder}" BorderThickness="1" CornerRadius="3,3,0,0" Margin="4,4,4,4" Background="Transparent">
                            <controlsToolkit:DockPanel controlsToolkit:DockPanel.Dock="Top">
                                <controlsToolkit:DockPanel x:Name="docHeader1" controlsToolkit:DockPanel.Dock="Top">
                                    <Grid Width="Auto"  Margin="0" controlsToolkit:DockPanel.Dock="Top" DataContext="{Binding BizActionObject}">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grp:GroupBox Header="Search" Margin="2" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition ></RowDefinition>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                    <ColumnDefinition ></ColumnDefinition>
                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                    <ColumnDefinition ></ColumnDefinition>
                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                    <ColumnDefinition ></ColumnDefinition>
                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                    <ColumnDefinition ></ColumnDefinition>
                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Column="0" Text="From Date" Margin="4"  VerticalAlignment="Center"/>
                                                <controls:DatePicker x:Name="dtpFromDate" Margin="4" ToolTipService.ToolTip="From Date"  Grid.Column="1" VerticalAlignment="Center"/>

                                                <TextBlock Grid.Column="2" Text="To Date" Margin="4" VerticalAlignment="Center"/>
                                                <controls:DatePicker x:Name="dtpToDate" Margin="4" ToolTipService.ToolTip="To Date"  Grid.Column="3" VerticalAlignment="Center"/>

                                                <TextBlock Grid.Row="0" Grid.Column="4" Text="Store Name" Margin="2"  VerticalAlignment="Center"></TextBlock>
                                                <inputcombo:AutoCompleteComboBox  x:Name="cmbStoreName" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" VerticalAlignment="Center"  Margin="2"  Grid.Row="0" Grid.Column="5"  ToolTipService.ToolTip="Please Select Store"></inputcombo:AutoCompleteComboBox>

                                                <TextBlock Grid.Row="0" Grid.Column="6" Text="Remark" Margin="2" VerticalAlignment="Center" ></TextBlock>
                                                <TextBox x:Name="txtRemarkFront" VerticalAlignment="Center" MaxLength="150" IsEnabled="True"  Margin="4"   Grid.Row="0" Grid.Column="7" KeyDown="txtRemarkFront_KeyDown"  ToolTipService.ToolTip="Please Enter Remark"></TextBox>

                                                <StackPanel HorizontalAlignment="Left" VerticalAlignment="Bottom" Grid.Row="0" Grid.Column="8" Margin="0"   Orientation="Horizontal">
                                                    <Button  x:Name="SearchButton" Margin="4" ToolTipService.ToolTip="Search Suspend Request" Click="SearchButton_Click">
                                                        <Image Source="/PalashDynamics;component/Icons/Search_b.JPG" Margin="4" Width="20" ></Image>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                        </Grp:GroupBox>
                                    </Grid >
                                </controlsToolkit:DockPanel>

                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <controlsToolkit:DockPanel x:Name="doStoreList" controlsToolkit:DockPanel.Dock="Top" >
                                        <Border controlsToolkit:DockPanel.Dock="Top"  BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0"  Background="Transparent">
                                            <ContentControl VerticalAlignment="Center" FontSize="12" Content="Suspend Request List" Margin="2,4,2,0" Style="{StaticResource Header}"     HorizontalAlignment="Stretch" />
                                        </Border>
                                        <data:DataPager x:Name="DataPager" controlsToolkit:DockPanel.Dock="Bottom" 
                                                    DisplayMode="FirstLastPreviousNext"  IsEnabled="True"                       
                                                    Source="{Binding}" 
                                                    AutoEllipsis="False" IsTotalItemCountFixed="True"  />
                                        <data:DataGrid x:Name="dgStoreList" AutoGenerateColumns="False" ItemsSource="{Binding MasterList}" VerticalScrollBarVisibility="Visible" IsReadOnly="True" Margin="2" HorizontalAlignment="Stretch" SelectionChanged="dgStoreList_SelectionChanged" >
                                            <data:DataGrid.Columns>
                                                <data:DataGridTemplateColumn>
                                                    <data:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <HyperlinkButton VerticalAlignment="Center"  Content="View"  Padding="5,0,5,0"  x:Name="ViewStore" Click="ViewStore_Click"></HyperlinkButton>
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                </data:DataGridTemplateColumn>
                                                <!--<data:DataGridTextColumn Binding="{Binding Date,Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}" Header="ddedDate" IsReadOnly="True" ></data:DataGridTextColumn>-->
                                                <data:DataGridTextColumn IsReadOnly="True" Binding="{Binding RequestNo}" Header="Suspend Request No."></data:DataGridTextColumn>
                                                <data:DataGridTextColumn IsReadOnly="True" Binding="{Binding AddedDateTime,Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}" Header="Date"></data:DataGridTextColumn>
                                                <data:DataGridTextColumn IsReadOnly="True" Binding="{Binding StoreName}" Header="Store Name"></data:DataGridTextColumn>
                                                <data:DataGridTextColumn IsReadOnly="True" Binding="{Binding Remark}" Header="Remark"></data:DataGridTextColumn>
                                                
                                                <data:DataGridTemplateColumn IsReadOnly="True"  Header="Freeze">
                                                    <data:DataGridTemplateColumn.CellTemplate >
                                                        <DataTemplate >
                                                            <CheckBox IsChecked="{Binding IsFreeze}" VerticalAlignment="Center" HorizontalAlignment="Center" IsEnabled="False"></CheckBox >
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                </data:DataGridTemplateColumn>
                                                <data:DataGridTemplateColumn IsReadOnly="True"  Header="Suspend">
                                                    <data:DataGridTemplateColumn.CellTemplate >
                                                        <DataTemplate >
                                                            <CheckBox Margin="10,2,10,2" IsChecked="{Binding IsBlock}" VerticalAlignment="Center" HorizontalAlignment="Center" IsEnabled="False"></CheckBox >
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                </data:DataGridTemplateColumn>
                                                <data:DataGridTextColumn Visibility="Collapsed" Binding="{Binding LockDate,Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}" Header="Suspend Date" IsReadOnly="True" ></data:DataGridTextColumn>
                                                <data:DataGridTemplateColumn Visibility="Visible" Header="Revoke">
                                                    <data:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <HyperlinkButton VerticalAlignment="Center" IsEnabled="{Binding IsBlock}"  Content="Revoke"  Padding="5,0,5,0"  x:Name="Revoke" Click="Revoke_Click"></HyperlinkButton>
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                </data:DataGridTemplateColumn>
                                                <data:DataGridTextColumn Binding="{Binding ReleaseDate,Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}" Header="Revoke Date" IsReadOnly="True" ></data:DataGridTextColumn>
                                                <data:DataGridTextColumn IsReadOnly="True" Binding="{Binding AddedByname}" Header="Added User"></data:DataGridTextColumn>
                                                <data:DataGridTemplateColumn Header="Print">
                                                    <data:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <HyperlinkButton IsEnabled="{Binding IsFreeze}" Background="White"  VerticalAlignment="Center" Padding="5,0,5,0" IsTabStop="False" Click="hlkPrint_Click"   x:Name="hlkPrint" >
                                                                <Image  Height="16" Stretch="Fill" Source="/PalashDynamics;component/Icons/Print_32.png"    />
                                                            </HyperlinkButton>
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                </data:DataGridTemplateColumn>
                                                
                                            </data:DataGrid.Columns>
                                        </data:DataGrid>
                                    </controlsToolkit:DockPanel>

                                    <controlsToolkit:DockPanel x:Name="docTest" Grid.Row="1">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                                <RowDefinition></RowDefinition>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Border Grid.Row="0" controlsToolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                                                <ContentControl VerticalAlignment="Center" FontSize="12" Content="Suspend Request Details" Margin="2,1" Style="{StaticResource Header}"     HorizontalAlignment="Stretch" />
                                            </Border>
                                            <data:DataGrid Grid.Row="1" x:Name="dgStoreDetailList" Margin="4" ItemsSource="{Binding MasterListDetails}" IsReadOnly="True"  AutoGenerateColumns="False" VerticalScrollBarVisibility="Visible" >
                                                <data:DataGrid.Columns>
                                                    <data:DataGridTextColumn IsReadOnly="True"  Binding="{Binding StoreName }" Header="Store Name" Visibility="Collapsed"></data:DataGridTextColumn>
                                                    <data:DataGridTextColumn IsReadOnly="True"  Binding="{Binding Rackname }" Header="Rack Name"></data:DataGridTextColumn>
                                                    <data:DataGridTextColumn IsReadOnly="True"  Binding="{Binding Shelfname }" Header="Shelf Name"></data:DataGridTextColumn>
                                                    <data:DataGridTextColumn IsReadOnly="True"  Binding="{Binding Containername }" Header="Bin Name"></data:DataGridTextColumn>
                                                    <data:DataGridTextColumn IsReadOnly="True"  Binding="{Binding ItemName }" Header="Item Name"></data:DataGridTextColumn>
                                                    <data:DataGridTextColumn IsReadOnly="True"  Binding="{Binding BlockType }" Header="Suspend Type"></data:DataGridTextColumn>
                                                    <data:DataGridTextColumn Visibility="Collapsed" Binding="{Binding LockDate,Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}" Header="Suspend Date" IsReadOnly="True" ></data:DataGridTextColumn>
                                                    <data:DataGridTextColumn Visibility="Collapsed" Binding="{Binding ReleaseDate,Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}" Header="Revoke Date" IsReadOnly="True" ></data:DataGridTextColumn>
                                                    <data:DataGridTemplateColumn IsReadOnly="True"  Header="Suspend">
                                                        <data:DataGridTemplateColumn.CellTemplate >
                                                            <DataTemplate >
                                                                <CheckBox Margin="10,2,10,2" IsChecked="{Binding IsBlock}" VerticalAlignment="Center" HorizontalAlignment="Center" IsEnabled="False"></CheckBox >
                                                            </DataTemplate>
                                                        </data:DataGridTemplateColumn.CellTemplate>
                                                    </data:DataGridTemplateColumn>
                                                    <data:DataGridTemplateColumn Header="Revoke" Visibility="Collapsed">
                                                        <data:DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <HyperlinkButton VerticalAlignment="Center" IsEnabled="{Binding IsBlock}"   Content="Revoke"  Padding="5,0,5,0"  x:Name="RevokeDetails" Click="RevokeDetails_Click"></HyperlinkButton>
                                                            </DataTemplate>
                                                        </data:DataGridTemplateColumn.CellTemplate>
                                                    </data:DataGridTemplateColumn>
                                                </data:DataGrid.Columns>
                                            </data:DataGrid>
                                            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                                                <TextBlock HorizontalAlignment="Right" Text="Total Suspend Request's" VerticalAlignment="Center" Margin="1,0,1,0"></TextBlock>
                                                <TextBox x:Name="txtTotalCountRecords" TextAlignment="Right" VerticalAlignment="Center" IsReadOnly="True" Margin="1,0,4,4" Width="70" ></TextBox>
                                            </StackPanel>
                                        </Grid>
                                    </controlsToolkit:DockPanel>
                                </Grid>
                            </controlsToolkit:DockPanel>
                        </Border>
                    </controlsToolkit:DockPanel>
                </Grid>

                <Grid Grid.Row="1" Height="AUTO" Visibility="Collapsed" Width="auto" x:Name="BackPanel" >
                    <toolkit:DockPanel toolkit:DockPanel.Dock="top" LastChildFill="true"  >
                        <Border BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Margin="4,4,4,4"  Background="Transparent">
                            <toolkit:DockPanel toolkit:DockPanel.Dock="Top" >

                                <controlsToolkit:DockPanel x:Name="docHeader" controlsToolkit:DockPanel.Dock="Top">
                                    <Grid Width="Auto"  Margin="0" controlsToolkit:DockPanel.Dock="Top" DataContext="{Binding BizActionObject}">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition ></ColumnDefinition>
                                        </Grid.ColumnDefinitions>

                                        <Grp:GroupBox Header="Store Selection" Margin="2" Grid.Row="0" Grid.Column="0">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition></RowDefinition>
                                                    <RowDefinition></RowDefinition>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <TextBlock  HorizontalAlignment="Right" VerticalAlignment="Center" Text="Suspend Date" Grid.Row="0" Grid.Column="0"  Margin="4" />
                                                <controls:DatePicker IsEnabled="False"  x:Name="dtpLockDate" Margin="4" Grid.Row="0" Grid.Column="1"  HorizontalAlignment="Stretch"  TabIndex="0" ToolTipService.ToolTip="Please Enter Lock Date" />
                                                <TextBlock Grid.Row="0" Grid.Column="2" Text="Store" Margin="4" VerticalAlignment="Center"></TextBlock>
                                                <inputcombo:AutoCompleteComboBox HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectedItemBinding="{Binding clsStoreVO, Mode=TwoWay}" SelectedValuePath="StoreId" SelectionChanged="cmbStoreNameBack_SelectionChanged" Margin="2"  Grid.Row="0" Grid.Column="3"   x:Name="cmbStoreNameBack"   ></inputcombo:AutoCompleteComboBox>
                                                <!--<inputcombo:AutoCompleteComboBox  x:Name="cmbStoreNameBack" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectionChanged="cmbStoreNameBack_SelectionChanged" SelectedValuePath="ID" VerticalAlignment="Center"  Margin="2"  Grid.Row="0" Grid.Column="3"   ToolTipService.ToolTip="Select Store"></inputcombo:AutoCompleteComboBox>-->
                                                <TextBlock Grid.Row="0" Grid.Column="4" Text="Suspend Type" Margin="4" VerticalAlignment="Center"></TextBlock>
                                                <inputcombo:AutoCompleteComboBox  x:Name="cmbBlockType" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectionChanged="cmbBlockType_SelectionChanged" SelectedValuePath="ID" VerticalAlignment="Center"  Margin="2"  Grid.Row="0" Grid.Column="5"   ToolTipService.ToolTip="Select Suspend Type"></inputcombo:AutoCompleteComboBox>
                                                
                                            </Grid>
                                        </Grp:GroupBox>

                                        <Grp:GroupBox Visibility="Visible" x:Name="grpRackShelfBinSelection" Header="Rack/Shelf/Bin Selection" Margin="2" Grid.Row="1" Grid.Column="0">
                                            <Grid>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"></RowDefinition>
                                                    <RowDefinition Height="Auto"></RowDefinition>
                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                    <ColumnDefinition></ColumnDefinition>
                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Grid.Row="0" Grid.Column="0" Text="Rack" Margin="4" VerticalAlignment="Center" HorizontalAlignment="Left"></TextBlock>
                                                <inputcombo:AutoCompleteComboBox  x:Name="cmbRackNameback" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectionChanged="cmbRackNameback_SelectionChanged" SelectedValuePath="ID" VerticalAlignment="Center"  Margin="2"  Grid.Row="0" Grid.Column="1"   ToolTipService.ToolTip="Please Select Rack"></inputcombo:AutoCompleteComboBox>

                                                <TextBlock Grid.Row="0" Grid.Column="2" Text="Shelf" Margin="4" VerticalAlignment="Center"></TextBlock>
                                                <inputcombo:AutoCompleteComboBox  x:Name="cmbShelfNameback" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectionChanged="cmbShelfNameback_SelectionChanged" SelectedValuePath="ID" VerticalAlignment="Center"  Margin="2"  Grid.Row="0" Grid.Column="3"   ToolTipService.ToolTip="Please Select Shelf"></inputcombo:AutoCompleteComboBox>
                                                <TextBlock Grid.Row="0" Grid.Column="4" Text="Bin" Margin="4" VerticalAlignment="Center"></TextBlock>
                                                <inputcombo:AutoCompleteComboBox  x:Name="cmbBinNameback" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" VerticalAlignment="Center"  Margin="2"  Grid.Row="0" Grid.Column="5"   ToolTipService.ToolTip="Please Select Bin"></inputcombo:AutoCompleteComboBox>
                                                <ToggleButton x:Name="lnkAddStor"  Content="Add"     Background="#000000" Margin="2" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Grid.Column="6" Grid.Row="0" IsEnabled="{Binding IsFreezed,Converter={StaticResource NegateValueConverter}}" Click="lnkAddStor_Click"   ToolTipService.ToolTip="Add Store"/>
                                                <!--<CheckBox x:Name="chkIsItem" Content="IsItem" Grid.Column="0" Grid.Row="2"  VerticalAlignment="Center"  HorizontalAlignment="Left"></CheckBox>-->
                                            </Grid>
                                        </Grp:GroupBox>
                                        <Grp:GroupBox Visibility="Visible" x:Name="grpItemSelection" Header="Item Selection" Margin="2" Grid.Row="2" Grid.Column="0">
                                            <ToggleButton x:Name="cmdAddItems"  Content="Add Items"     Background="#000000" Margin="2" HorizontalAlignment="Left" Style="{StaticResource ToggleButtonStyle}" Grid.Row="0" Click="cmdAddItems_Click"   ToolTipService.ToolTip="Add Items"/>
                                        </Grp:GroupBox>




                                    </Grid >

                                </controlsToolkit:DockPanel>

                                <toolkit:DockPanel toolkit:DockPanel.Dock="Bottom">
                                    <Grid Height="auto" Width="auto">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="auto"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                            <ColumnDefinition Width="auto"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock x:Name="Remark" Margin="4" Text="Remark" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="0" Grid.Column="0"></TextBlock>
                                        <TextBox x:Name="txtRemark" Grid.Column="1"  Margin="4"  AcceptsReturn="True" VerticalScrollBarVisibility="Visible" MaxLength="150" Width="600" HorizontalAlignment="Left" TextWrapping="Wrap"   ToolTipService.ToolTip="Please Enter Remark"></TextBox>
                                        <CheckBox x:Name="chkFreez" Content="Freeze"  Margin="4" FontWeight="ExtraBlack" Foreground="Red"  Grid.Column="4" Grid.Row="1"  VerticalAlignment="Center"  HorizontalAlignment="Right" IsChecked="{Binding IsFreezed, Mode=TwoWay}" ToolTipService.ToolTip="Please Check Freeze" IsEnabled="{Binding IsFreezed,Converter={StaticResource NegateValueConverter}}"></CheckBox>
                                    </Grid>
                                </toolkit:DockPanel>
                                <toolkit:DockPanel toolkit:DockPanel.Dock="Bottom">
                                    <data:DataGrid x:Name="grdStoreListback" Margin="4" ItemsSource="{Binding}" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible" HorizontalAlignment="Stretch"  AutoGenerateColumns="false" CanUserSortColumns="False" >
                                        <data:DataGrid.Columns>
                                            <data:DataGridTextColumn  Header="Store Name"  Binding="{Binding StoreName}" IsReadOnly="True" Visibility="Visible"></data:DataGridTextColumn>
                                            <data:DataGridTextColumn  Header="Rack Name"  Binding="{Binding Rackname}" IsReadOnly="True"></data:DataGridTextColumn>
                                            <data:DataGridTextColumn  Header="Shelf Name"  Binding="{Binding Shelfname}" IsReadOnly="True"></data:DataGridTextColumn>
                                            <data:DataGridTextColumn  Header="Bin Name"  Binding="{Binding Containername}" IsReadOnly="True"></data:DataGridTextColumn>
                                            <data:DataGridTextColumn  Header="Item Name"  Binding="{Binding ItemName}" IsReadOnly="True"></data:DataGridTextColumn>
                                            <data:DataGridTextColumn  Header="Suspend Type"  Binding="{Binding BlockType}" IsReadOnly="True"></data:DataGridTextColumn>
                                            <data:DataGridTemplateColumn Header="Delete">
                                                <data:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <HyperlinkButton VerticalAlignment="Center" HorizontalAlignment="Center" FontFamily="Webdings" Content="r" Foreground="Red"  Padding="5,0,5,0" IsTabStop="False"   x:Name="cmdCancelSelected" FontSize="15" Click="cmdCancelSelected_Click"></HyperlinkButton>
                                                    </DataTemplate>
                                                </data:DataGridTemplateColumn.CellTemplate>
                                            </data:DataGridTemplateColumn>
                                        </data:DataGrid.Columns>
                                    </data:DataGrid>
                                </toolkit:DockPanel>
                            </toolkit:DockPanel>
                        </Border>
                    </toolkit:DockPanel>
                </Grid>
            </Grid>
        </toolkit:DockPanel>
    </Grid>
</UserControl>
