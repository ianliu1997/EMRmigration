<controls:ChildWindow xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"  x:Class="PalashDynamics.Pharmacy.frmContractsForItems"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                      xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"
           xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"  
           xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit" 
           xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
           xmlns:local="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters"
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:dataInput="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data.Input"
           xmlns:input="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input"
                      xmlns:Grp="clr-namespace:Groupbox;assembly=Groupbox" 
            Width="Auto" Height="500"
           Title="Item Wise Rate Contract" Loaded="ChildWindow_Loaded">
    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:DateTimeConverter x:Key="DateConverter" />
        </ResourceDictionary>
    </controls:ChildWindow.Resources>
    <Grid x:Name="Root">
        <!--Auto combo grid view-->
        <toolkit:DockPanel LastChildFill="True" Margin="4">
            <Border BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" controlsToolkit:DockPanel.Dock="Bottom" BorderThickness="0" CornerRadius="3 ,3,3,3" Background="Transparent">
                <StackPanel Grid.Row="3" x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                    <StackPanel x:Name="SaveCommandPanel" Orientation="Horizontal"  Margin="0,0,0,0">
                        <ToggleButton TabIndex="8" x:Name="cmdOK"  Grid.Row="4" Content="OK" MinWidth="50"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="cmdOK_Click"  />
                        <ToggleButton TabIndex="9" x:Name="cmdCancelButton"  Grid.Row="4" Content="Cancel" MinWidth="50" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="cmdCancelButton_Click" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <Grid Height="auto" Width="Auto" toolkit:DockPanel.Dock="Top">

                <Grid.RowDefinitions >
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Name="lblitemName" Text="Item Name" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" Margin="4" Grid.ColumnSpan="2"></TextBlock>
                <TextBlock Visibility="Collapsed" Text="Actual Quantity : " Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" Margin="4"></TextBlock>
                <TextBox Visibility="Collapsed" Width="150" Margin="100,0,0,0" HorizontalAlignment="Left" Grid.Row="0"  IsReadOnly="True" x:Name="txtIndentQty"></TextBox>
                <TextBlock Text="Supplier : " Grid.Column="0" Grid.Row="1"  VerticalAlignment="Center" Margin="4" Visibility="Collapsed"></TextBlock>
                <inputcombo:AutoCompleteComboBox x:Name="cmbSupplier" Width="150"  Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Center"  Margin="100,0,0,0" SelectionChanged="cmbSupplier_SelectionChanged" Visibility="Collapsed" ></inputcombo:AutoCompleteComboBox>

                <toolkit:DockPanel LastChildFill="True" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2">
                    <Grp:GroupBox x:Name="gbRateContract"  Header="Rate Contracts" Margin="2,10,2,2" >
                        <Border BorderBrush="{StaticResource TabControlDarkerBorder}" BorderThickness="1" CornerRadius="3,3,3,3" Margin="4"  Background="Transparent">
                            <toolkit:DockPanel LastChildFill="True"  >
                                <data:DataGrid x:Name="dgRateContracts" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Visible" SelectionChanged="dgRateContracts_SelectionChanged" toolkit:DockPanel.Dock="Top" IsReadOnly="True" ItemsSource="{Binding}"  AutoGenerateColumns="False" AlternatingRowBackground="Silver" HorizontalAlignment="Stretch"  VerticalAlignment="Stretch"  Margin="4">
                                    <data:DataGrid.Columns>

                                        <sdk:DataGridTextColumn IsReadOnly="True"  Header="Contract Code"  Binding="{Binding ContractCode,Mode=OneWay}"></sdk:DataGridTextColumn>
                                        <sdk:DataGridTextColumn IsReadOnly="True"  Header="Contract Name"  Binding="{Binding ContractDescription,Mode=OneWay}"></sdk:DataGridTextColumn>

                                        <sdk:DataGridTextColumn Visibility="Visible" IsReadOnly="True"    Header="Quantity" Width="100"  Binding="{Binding Quantity, StringFormat=0.00,Mode=OneWay}">
                                            <sdk:DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="TextAlignment" Value="Right"/>
                                                </Style>
                                            </sdk:DataGridTextColumn.ElementStyle>
                                        </sdk:DataGridTextColumn>

                                        <sdk:DataGridTextColumn IsReadOnly="True"  Header="UOM"  Binding="{Binding TransUOM,Mode=OneWay}"></sdk:DataGridTextColumn>

                                        <sdk:DataGridTextColumn IsReadOnly="True"  Header="Purchase Cost Price"  Binding="{Binding Rate, StringFormat=0.00,Mode=OneWay}">
                                            <sdk:DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="TextAlignment" Value="Right"/>
                                                </Style>
                                            </sdk:DataGridTextColumn.ElementStyle>
                                        </sdk:DataGridTextColumn>

                                        <sdk:DataGridTextColumn IsReadOnly="True"  Header="MRP"  Binding="{Binding MRP, StringFormat=0.00,Mode=OneWay}">
                                            <sdk:DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="TextAlignment" Value="Right"/>
                                                </Style>
                                            </sdk:DataGridTextColumn.ElementStyle>
                                        </sdk:DataGridTextColumn>

                                        <sdk:DataGridTextColumn IsReadOnly="True"  Header="Discount %"  Binding="{Binding DiscountPercent, StringFormat=0.00,Mode=OneWay}">
                                            <sdk:DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="TextAlignment" Value="Right"/>
                                                </Style>
                                            </sdk:DataGridTextColumn.ElementStyle>
                                        </sdk:DataGridTextColumn>
                                        <sdk:DataGridTextColumn IsReadOnly="True"  Header="Discount Amount"  Binding="{Binding DiscountAmount, StringFormat=0.00,Mode=OneWay}">
                                            <sdk:DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="TextAlignment" Value="Right"/>
                                                </Style>
                                            </sdk:DataGridTextColumn.ElementStyle>
                                        </sdk:DataGridTextColumn>

                                        <sdk:DataGridTextColumn IsReadOnly="True"  Header="Net Amount"  Binding="{Binding NetAmount, StringFormat=0.00,Mode=OneWay}">
                                            <sdk:DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="TextAlignment" Value="Right"/>
                                                </Style>
                                            </sdk:DataGridTextColumn.ElementStyle>
                                        </sdk:DataGridTextColumn>



                                        <!--<data:DataGridTextColumn Header="Contract Name" IsReadOnly="True"  Binding="{Binding ContractName}" />
                                        <data:DataGridTextColumn Header="Item Name" IsReadOnly="True"  Binding="{Binding ItemName}" />
                                        <data:DataGridTextColumn Header="Unit Purchase Cost" IsReadOnly="True"  Binding="{Binding Rate}" />
                                        <data:DataGridTextColumn Header="Unit MRP" IsReadOnly="True" Binding="{Binding MRP}" />
                                        <data:DataGridTextColumn Visibility="Collapsed" Header="Condition" IsReadOnly="True" MinWidth="70"  Binding="{Binding Condition}"/>
                                        <data:DataGridTextColumn Visibility="Collapsed" Header="Quantity"  IsReadOnly="True" MinWidth="70" Binding="{Binding ContractQuantity }"/>
                                        <data:DataGridTextColumn Visibility="Collapsed" Header="Min Quantity" IsReadOnly="True"  MinWidth="70" Binding="{Binding  MinQuantity}"/>
                                        <data:DataGridTextColumn Visibility="Collapsed" Header="Max Quantity" IsReadOnly="True"  MinWidth="70" Binding="{Binding MaxQuantity}"/>
                                        <data:DataGridTextColumn Visibility="Collapsed" Header="Discount Percent" IsReadOnly="True"  MinWidth="70" Binding="{Binding DiscountPercent}"/>-->
                                    </data:DataGrid.Columns>
                                </data:DataGrid>
                            </toolkit:DockPanel>
                        </Border>
                    </Grp:GroupBox>
                </toolkit:DockPanel>
            </Grid>
        </toolkit:DockPanel>
    </Grid>
</controls:ChildWindow>