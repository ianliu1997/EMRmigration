<controls:ChildWindow xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"  xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"  x:Class="PalashDynamics.Pharmacy.Enquiry_Search.EnquirySearch"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls" Loaded="ChildWindow_Loaded"
           Width="700" Height="500" xmlns:CustomCombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
           xmlns:local="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters"
           Title="Enquiry Search">

    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:DateTimeConverter x:Key="DateConverter" />
            <!--<addressconverter:AddressConverter x:Key="AddressConverter"></addressconverter:AddressConverter>-->
        </ResourceDictionary>
    </controls:ChildWindow.Resources>
    <Grid x:Name="Root">
        <toolkit:DockPanel LastChildFill="True" Margin="4">
            <Grid Width="Auto"  Margin="0" toolkit:DockPanel.Dock="Top" DataContext="{Binding BizActionObject}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition  Width="Auto"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>

                </Grid.RowDefinitions>

                <TextBlock Grid.Column="0" Grid.Row="0"  Margin="4" Text="From Date" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                <controls:DatePicker x:Name="dtpFromDate" Grid.Column="1" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectedDate="{Binding FromDate, Mode=TwoWay}" ></controls:DatePicker>

                <TextBlock Grid.Column="2" Grid.Row="0"  Margin="4" Text="To Date" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                <controls:DatePicker x:Name="dtpToDate" Grid.Column="3" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectedDate="{Binding ToDate, Mode=TwoWay}"></controls:DatePicker>

                <TextBlock VerticalAlignment="Center" Grid.Column="0" Grid.Row="1"  Margin="4" Text="Store" HorizontalAlignment="Right"></TextBlock>
                <CustomCombo:AutoCompleteComboBox  TabIndex="3" Grid.Row="1" Grid.Column="1"  Margin="4" x:Name="cmbstore" VerticalAlignment="Center" SelectedItemBinding="{Binding clsStoreVO, Mode=TwoWay}" SelectedValuePath="StoreId" ></CustomCombo:AutoCompleteComboBox>
                <TextBlock VerticalAlignment="Center" Grid.Column="2" Grid.Row="1"  Margin="4" Text="Supplier" HorizontalAlignment="Right"></TextBlock>
                <CustomCombo:AutoCompleteComboBox  TabIndex="3" Grid.Row="1" Grid.Column="3" Grid.ColumnSpan="2" Margin="4" x:Name="cmbSupplier" VerticalAlignment="Center" SelectedItemBinding="{Binding MasterListItem, Mode=TwoWay}" SelectedValuePath="ID" ></CustomCombo:AutoCompleteComboBox>

                <StackPanel Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="2" toolkit:DockPanel.Dock="Top" x:Name="ItemFooter" Orientation="Horizontal" VerticalAlignment="Bottom"   Margin="10,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                    <StackPanel x:Name="SearchCommandPanel" Orientation="Horizontal"  Margin="1" HorizontalAlignment="Stretch">
                        <ToggleButton TabIndex="4" x:Name="SearchButton"   Content="Search" MinWidth="50"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="SearchButton_Click"   />
                        <ToggleButton TabIndex="5" x:Name="CancelButton"  Content="Refresh" MinWidth="50" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="CancelButton_Click"   />
                    </StackPanel>
                </StackPanel>
            </Grid >
            <Border BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" toolkit:DockPanel.Dock="Bottom" BorderThickness="0" CornerRadius="3,3,3,3" Background="Transparent">

                <StackPanel Grid.Row="3" x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                    <StackPanel x:Name="SaveCommandPanel" Orientation="Horizontal"  Margin="0,0,0,0">
                        <ToggleButton TabIndex="8" x:Name="OkButton" Click="OKButton_Click" Grid.Row="4" Content="Ok" MinWidth="50"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible"  />
                        <ToggleButton TabIndex="9" x:Name="cmdCancelButton"  Grid.Row="4" Content="Cancel" MinWidth="50" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="cmdCancelButton_Click" />
                    </StackPanel>
                </StackPanel>
            </Border>
            <!--<Grid Width="Auto" my:DockPanel.Dock="Bottom" >-->
            <!--<Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>-->

            <toolkit:DockPanel LastChildFill="True" toolkit:DockPanel.Dock="Top">
                <Grid Height="180" Width="Auto" x:Name="ItemContainer" VerticalAlignment="Stretch" >
                    <toolkit:DockPanel LastChildFill="True">
                        <sdk:DataPager Visibility="Collapsed" TabIndex="20" x:Name="datapager" toolkit:DockPanel.Dock="Bottom"
                        Grid.Row="1"
                        PageSize="{Binding PageSize}"
                        DisplayMode="FirstLastPreviousNext"
                        IsEnabled="True"
                        IsTotalItemCountFixed="True"
                        Source="{Binding DataList}"  />
                        <sdk:DataGrid TabIndex="6"  Height="Auto" Width="Auto" Grid.Row="0" ItemsSource="{Binding }" HorizontalScrollBarVisibility="Visible" VerticalScrollBarVisibility="Visible"  x:Name="dgEnquiries" SelectionChanged="dgEnquiries_SelectionChanged"  AutoGenerateColumns="False" >
                            <sdk:DataGrid.Columns>

                                <sdk:DataGridTextColumn IsReadOnly="True" Header="Enquiry No" Width="120"  Binding="{Binding EnquiryNO}" />
                                <sdk:DataGridTextColumn IsReadOnly="True" Header="Enquiry Date" Width="300"  Binding="{Binding Date,Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}"/>
                                <sdk:DataGridTextColumn IsReadOnly="True" Header="Supplier Name" Width="300"  Binding="{Binding Supplier}"/>
                                <sdk:DataGridTextColumn IsReadOnly="True" Visibility="Collapsed" Width="300"  Binding="{Binding EnquiryId}"/>
                                

                            </sdk:DataGrid.Columns>
                        </sdk:DataGrid>

                    </toolkit:DockPanel>
                </Grid>
            </toolkit:DockPanel>

            <toolkit:DockPanel LastChildFill="True" toolkit:DockPanel.Dock="Bottom">
                <Grid Height="auto" Width="Auto" x:Name="BatchContainer" >
                    <toolkit:DockPanel LastChildFill="True">
                        <Border Margin="0" toolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                            <ContentControl  FontSize="11" Content="Enquiry Details" Margin="0" Style="{StaticResource Header}"/>
                        </Border>
                        <sdk:DataPager Visibility="Collapsed" TabIndex="20" x:Name="ItemBatchDataPager" toolkit:DockPanel.Dock="Bottom"
                        Grid.Row="1"
                        PageSize="{Binding PageSize}"
                        DisplayMode="FirstLastPreviousNext"
                        IsEnabled="True"
                        IsTotalItemCountFixed="True"
                        Source="{Binding DataList}"  />
                        <sdk:DataGrid TabIndex="7" Height="Auto" Width="Auto" Grid.Row="0"   x:Name="dgEnquiryItems" HorizontalScrollBarVisibility="Visible"  VerticalScrollBarVisibility="Visible" AutoGenerateColumns="False" CanUserSortColumns="False">
                            <sdk:DataGrid.Columns>
                                <sdk:DataGridTemplateColumn >
                                    <sdk:DataGridTemplateColumn.CellTemplate >
                                        <DataTemplate >
                                            <!--<CheckBox Margin="10,2,10,2"  x:Name="chkStatus"  Click="UpdateUserStatus_Click" IsChecked="{Binding UserGeneralDetailVO.Status,Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" ></CheckBox >-->
                                            <CheckBox Margin="10,2,10,2"  x:Name="chkEnquiryStatus" IsTabStop="True"  IsChecked="{Binding SelectedEnquiry,Mode=TwoWay}" VerticalAlignment="Center" Click="AddItems_Click" HorizontalAlignment="Center" ></CheckBox >
                                        </DataTemplate>
                                    </sdk:DataGridTemplateColumn.CellTemplate>
                                </sdk:DataGridTemplateColumn>

                                <sdk:DataGridTextColumn IsReadOnly="True" Header="Item Code" Binding="{Binding ItemCode}" />
                                <sdk:DataGridTextColumn IsReadOnly="True" Header="Item Name" Binding="{Binding ItemName}" />
                                <sdk:DataGridTextColumn IsReadOnly="True" Header="Quantity" Binding="{Binding Quantity,StringFormat=0.00}">
                                    <sdk:DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextAlignment" Value="Right"/>
                                        </Style>
                                    </sdk:DataGridTextColumn.ElementStyle>
                                </sdk:DataGridTextColumn>
                                <sdk:DataGridTextColumn IsReadOnly="True" Header="UOM" Binding="{Binding UOM}" />
                                <!--<sdk:DataGridTextColumn IsReadOnly="True" Header="Pack Size" Width="100"  Binding="{Binding Remarks}"/>-->
                                


                            </sdk:DataGrid.Columns>
                        </sdk:DataGrid>

                    </toolkit:DockPanel>
                </Grid>
            </toolkit:DockPanel>
            <!--</Grid>-->
        </toolkit:DockPanel>
    </Grid>


</controls:ChildWindow>