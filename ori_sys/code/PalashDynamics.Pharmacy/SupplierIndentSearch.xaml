<controls:ChildWindow x:Class="PalashDynamics.Pharmacy.SupplierIndentSearch"
          xmlns:my="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"  
xmlns:input="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input"  
xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"  
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"  
xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"  
xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"
xmlns:CustomCombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
 xmlns:Grp="clr-namespace:Groupbox;assembly=Groupbox"     
Width="1000" Height="600" 
    
xmlns:local="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters" 
xmlns:layoutToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Layout.Toolkit"
    xmlns:dgAdapter="clr-namespace:PalashDynamics.DataGridSelectionAdapter"
Title="Purchase Requisition Search">
    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:DateTimeConverter x:Key="DateConverter" />
        </ResourceDictionary>
    </controls:ChildWindow.Resources>
    <Grid x:Name="Root" Background="White">

        <!--Auto combo grid view-->
        <my:DockPanel LastChildFill="True" >

            <Grid Width="Auto" x:Name="PurchaseGrid"  Margin="0" my:DockPanel.Dock="Top" DataContext="{Binding BizActionObject}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="Auto" ></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>


                <TextBlock VerticalAlignment="Center" Grid.Column="2" Grid.Row="0"  Margin="4" Text="From Store" HorizontalAlignment="Right"></TextBlock>
                <CustomCombo:AutoCompleteComboBox  SelectedItemBinding="{Binding clsStoreVO, Mode=OneWay}" SelectedValuePath="StoreId" Grid.Row="0" Grid.Column="3" Margin="4"     x:Name="cmbFromIndentStore" ></CustomCombo:AutoCompleteComboBox>

                <TextBlock VerticalAlignment="Center" Grid.Column="4" Grid.Row="0"  Margin="4" Text="To Store" HorizontalAlignment="Right"></TextBlock>
                <CustomCombo:AutoCompleteComboBox SelectedItemBinding="{Binding clsStoreVO, Mode=OneWay}" SelectedValuePath="SupplierId" Grid.Row="0" Grid.Column="5" Margin="4"     x:Name="cmbToIndentStore" ></CustomCombo:AutoCompleteComboBox>

                <TextBlock VerticalAlignment="Center" Grid.Column="2" Grid.Row="1"  Margin="4" Text="To Date" HorizontalAlignment="Right"></TextBlock>
                <sdk:DatePicker x:Name="dtpToDate" Grid.Row="1" Grid.Column="3" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectedDate="{Binding Date, Mode=TwoWay}" ></sdk:DatePicker>

                <TextBlock VerticalAlignment="Center" Grid.Column="0" Grid.Row="1"  Margin="4" Text="From Date" HorizontalAlignment="Right"></TextBlock>
                <sdk:DatePicker x:Name="dtpFromDate" Grid.Row="1" Grid.Column="1" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectedDate="{Binding Date, Mode=TwoWay}" ></sdk:DatePicker>


                <TextBlock VerticalAlignment="Center" Grid.Column="0" Grid.Row="0"  Margin="4" Text="Purchase Requisition Number" HorizontalAlignment="Right"></TextBlock>
                <TextBox x:Name="txtIndentNo" Grid.Column="1" Grid.Row="0"  Margin="4" KeyDown="txtIndentNo_KeyDown"></TextBox>

                <TextBlock VerticalAlignment="Center" Grid.Column="4" Grid.Row="1"  Margin="4" Text="Item Name" HorizontalAlignment="Right"></TextBlock>
                <TextBox x:Name="txtItemName" Grid.Column="5" Grid.Row="1"  Margin="4" KeyDown="txtIndentNo_KeyDown" LostFocus="txtItemName_LostFocus"></TextBox>

                <TextBlock VerticalAlignment="Center" Grid.Column="0" Grid.Row="2"  Margin="4" Text="Supplier" HorizontalAlignment="Right"></TextBlock>
                <CustomCombo:AutoCompleteComboBox SelectionChanged="cboSupplier_SelectionChanged" Grid.Row="2" Grid.ColumnSpan="3"  Grid.Column="1" Margin="4"  SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID"   x:Name="cmbSupplier" ></CustomCombo:AutoCompleteComboBox>

                <ToggleButton x:Name="cmdSearch"  Grid.Row="1" Grid.Column="6" Content="Search" MinWidth="50"  Background="#000000" Margin="4" HorizontalAlignment="Right" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="cmdSearch_Click" />

            </Grid >

            <Border BorderBrush="{StaticResource TabControlDarkerBorder}"  controlsToolkit:DockPanel.Dock="Bottom" BorderThickness="0" CornerRadius="3,3,3,3" Background="Transparent">

                <StackPanel Grid.Row="3" x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                    <StackPanel x:Name="SaveCommandPanel" Orientation="Horizontal"  Margin="0,0,0,0">
                        <ToggleButton TabIndex="8" x:Name="OkButton"  Grid.Row="4" Content="Ok" MinWidth="50"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="OKButton_Click" />
                        <ToggleButton TabIndex="9" x:Name="cmdCancelButton"  Grid.Row="4" Content="Cancel" MinWidth="50" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="CancelButton_Click" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <Border BorderBrush="{StaticResource TabControlDarkerBorder}"  controlsToolkit:DockPanel.Dock="Top" BorderThickness="0" CornerRadius="3,3,3,3" Background="Transparent">
                <Grid my:DockPanel.Dock="Top">

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="1.5*"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <!--<Border BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" controlsToolkit:DockPanel.Dock="Bottom" BorderThickness="0" CornerRadius="3,3,3,3" Background="WhiteSmoke">
                        <StackPanel Orientation="Horizontal" my:DockPanel.Dock="Top" Grid.Row="0" VerticalAlignment="Center"   Margin="0,0,5,0" HorizontalAlignment="Right" Background="Transparent">

                            <ToggleButton x:Name="PART_MaximizeToggle" Checked="PART_MaximizeToggle_Checked" Unchecked="PART_MaximizeToggle_Unchecked" 
                                                    VerticalAlignment="Top" HorizontalAlignment="Right"
                                                    Margin="0,0,0,0" Height="20" Width="20" Cursor="Hand"
                                                    Template="{StaticResource MainMaximiseToggleButtonTemplate}"/>
                        </StackPanel>
                    </Border>-->
                    <Grp:GroupBox x:Name="gbIndentList"   Header="Purchase Requisition List"  my:DockPanel.Dock="Top" Grid.Column="0" Grid.Row="1" >
                        <my:DockPanel LastChildFill="True"  >
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition  ></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                </Grid.RowDefinitions>
                                <StackPanel Orientation="Horizontal" Grid.Row="0">
                                    <RadioButton Visibility="Collapsed" x:Name="chkSupplier" Content="Supplier"  Margin="4" HorizontalAlignment="Left" Click="chkIndent_Click"></RadioButton>
                                    <RadioButton x:Name="chkIndent" Content="Purchase Requisition" IsChecked="True"  Margin="4" HorizontalAlignment="right" Click="chkIndent_Click"></RadioButton>
                                    <RadioButton x:Name="chkItem" Content="Item"  Margin="4" HorizontalAlignment="right" Click="chkIndent_Click"></RadioButton>
                                </StackPanel>




                                <data:DataPager TabIndex="20" x:Name="dgDataPager" my:DockPanel.Dock="Bottom"
                                        PageSize="{Binding }"
                                        DisplayMode="FirstLastPreviousNext"
                                        IsEnabled="True"
                                        IsTotalItemCountFixed="True"
                                        Source="{Binding }" Grid.Row="2" />
                                <data:DataGrid TabIndex="6"  Grid.Row="1"   Width="Auto"  ItemsSource="{Binding}" IsReadOnly="True" x:Name="dgIndentList"  AutoGenerateColumns="False"  CanUserSortColumns="False" VerticalScrollBarVisibility="Auto"  LoadingRow="dgIndentList_LoadingRow">
                                    <data:DataGrid.Columns>
                                        <data:DataGridTemplateColumn Header="Select">
                                            <data:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox  x:Name="chkItemSelect" HorizontalAlignment="Center"   VerticalAlignment="Center" IsChecked="{Binding IsChecked,Mode=TwoWay}" Click="chkItemSelect_Click" ></CheckBox>
                                                </DataTemplate>
                                            </data:DataGridTemplateColumn.CellTemplate>
                                        </data:DataGridTemplateColumn>

                                        <data:DataGridTextColumn  Header="Purchase Requisition Number" Binding="{Binding IndentNumber}" />
                                        <data:DataGridTextColumn  Header="Purchase Requisition Date" Binding="{Binding Date, Mode=OneWay, Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}" />
                                        <data:DataGridTextColumn Visibility="Collapsed"  IsReadOnly="True" Header="ItemID" Width="120"  Binding="{Binding ItemId}" />
                                        <data:DataGridTextColumn IsReadOnly="True" Header="Item Code" Width="120"  Binding="{Binding ItemCode}" />
                                        <data:DataGridTextColumn IsReadOnly="True" Header="Item Name" Width="120"  Binding="{Binding ItemName}"/>
                                        <data:DataGridTextColumn IsReadOnly="True" Header="Supplier" Width="120"  Binding="{Binding Supplier}"/>
                                        <data:DataGridTextColumn IsReadOnly="True" Header="Purchase Requisition Quantity" Width="200"  Binding="{Binding IndentQty,StringFormat=0.00}">
                                            <data:DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="TextAlignment" Value="Right"/>
                                                </Style>
                                            </data:DataGridTextColumn.ElementStyle>
                                        </data:DataGridTextColumn>
                                        <data:DataGridTextColumn IsReadOnly="True" Binding="{Binding TransUOM, Mode=TwoWay}" Header="UOM" Visibility="Visible"/>
                                        <data:DataGridTextColumn IsReadOnly="True" Header="Pending Quantity" Binding="{Binding BalanceQty,StringFormat=0.00}">
                                            <data:DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="TextAlignment" Value="Right"/>
                                                </Style>
                                            </data:DataGridTextColumn.ElementStyle>
                                        </data:DataGridTextColumn>
                                        <data:DataGridTextColumn IsReadOnly="True" Binding="{Binding BaseUOM, Mode=TwoWay}" Header="Base UOM" Visibility="Visible"/>
                                        <data:DataGridTextColumn Visibility="Collapsed"    Binding="{Binding UOM}"/>
                                        <!--<data:DataGridTemplateColumn IsReadOnly="True"  Header="Suspend">
                                            <data:DataGridTemplateColumn.CellTemplate >
                                                <DataTemplate >
                                                    <CheckBox Margin="10,2,10,2" IsChecked="{Binding IsItemBlock}" VerticalAlignment="Center" HorizontalAlignment="Center" IsEnabled="False"></CheckBox >
                                                </DataTemplate>
                                            </data:DataGridTemplateColumn.CellTemplate>
                                        </data:DataGridTemplateColumn>-->
                                        <data:DataGridTextColumn IsReadOnly="True" Header="Final Pending Qty" Binding="{Binding FinalPendindQty,StringFormat=0.00}">
                                            <data:DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="TextAlignment" Value="Right"/>
                                                </Style>
                                            </data:DataGridTextColumn.ElementStyle>
                                        </data:DataGridTextColumn>
                                        <data:DataGridTextColumn IsReadOnly="True" Binding="{Binding BaseUOM, Mode=TwoWay}" Header="UOM" Visibility="Visible"/>

                                        <data:DataGridTextColumn IsReadOnly="True" Header="Available Stock" Binding="{Binding TotalBatchAvailableStock,StringFormat=0.00}">
                                            <data:DataGridTextColumn.ElementStyle>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="TextAlignment" Value="Right"/>
                                                </Style>
                                            </data:DataGridTextColumn.ElementStyle>
                                        </data:DataGridTextColumn>
                                        <data:DataGridTextColumn IsReadOnly="True" Binding="{Binding SUOM, Mode=TwoWay}" Header="Stock UOM" Visibility="Visible"/>
                                    </data:DataGrid.Columns>
                                </data:DataGrid>


                            </Grid>

                        </my:DockPanel>
                    </Grp:GroupBox>
                    <Grp:GroupBox x:Name="gbSelectedItem" Header="Selected Item"  Grid.Row="2" Grid.Column="1"  my:DockPanel.Dock="Bottom" >
                        <!--<my:DockPanel>-->
                        <data:DataGrid  x:Name="dgSelectedItemList" IsReadOnly="True" ScrollViewer.HorizontalScrollBarVisibility="auto" ScrollViewer.VerticalScrollBarVisibility="auto" AutoGenerateColumns="False"  AlternatingRowBackground="Silver" VerticalAlignment="Stretch"  Margin="4"     >
                            <data:DataGrid.Columns>
                                <data:DataGridTemplateColumn Header="Select">
                                    <data:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox HorizontalAlignment="Center" x:Name="chkSelectedItem" VerticalAlignment="Center" IsChecked="{Binding IsChecked,Mode=TwoWay}" Unchecked="chkSelectedItem_UnCheck"></CheckBox>
                                        </DataTemplate>
                                    </data:DataGridTemplateColumn.CellTemplate>
                                </data:DataGridTemplateColumn>
                                <data:DataGridTextColumn IsReadOnly="True"  Header="Item Code"  Binding="{Binding ItemCode}"></data:DataGridTextColumn>
                                <data:DataGridTextColumn  IsReadOnly="True"  Header="Item Name"  Binding="{Binding ItemName}"></data:DataGridTextColumn>
                                <data:DataGridTextColumn IsReadOnly="True"  Header="Purchase Requisition Quantity"  Binding="{Binding IndentQty,StringFormat=0.00}"></data:DataGridTextColumn>
                                <data:DataGridTextColumn IsReadOnly="True" Binding="{Binding TransUOM, Mode=TwoWay}" Header="UOM" Visibility="Visible"/>
                                <data:DataGridTextColumn IsReadOnly="True" Header="Pending Quantity"  Binding="{Binding BalanceQty,StringFormat=0.00}"></data:DataGridTextColumn>
                                <data:DataGridTextColumn IsReadOnly="True" Binding="{Binding BaseUOM, Mode=TwoWay}" Header="Base UOM" Visibility="Visible"/>
                                <data:DataGridTextColumn IsReadOnly="True" Header="MRP"  Binding="{Binding MRP,StringFormat=0.00}"></data:DataGridTextColumn>
                                <data:DataGridTextColumn  IsReadOnly="True" Header="Cost Price"  Binding="{Binding PurchaseRate,StringFormat=0.00}"></data:DataGridTextColumn>
                                <data:DataGridTextColumn IsReadOnly="True" Header="Supplier" Width="120"  Binding="{Binding Supplier}"/>
                            </data:DataGrid.Columns>
                        </data:DataGrid>
                        <!--</my:DockPanel>-->
                    </Grp:GroupBox>
                </Grid>
            </Border>

            <!--<my:DockPanel  my:DockPanel.Dock="Bottom"  >-->

            <!--</my:DockPanel>-->

            <!--<Grp:GroupBox x:Name="gbSelectedItem" Header="Selected Item" Margin="2"  my:DockPanel.Dock="Bottom" >
                <data:DataGrid  x:Name="dgSelectedItemList" ScrollViewer.HorizontalScrollBarVisibility="auto" ScrollViewer.VerticalScrollBarVisibility="auto" AutoGenerateColumns="False"  AlternatingRowBackground="Silver" VerticalAlignment="Stretch"  Margin="4"     >
                    <data:DataGrid.Columns>
                        <data:DataGridTemplateColumn Header="Select">
                            <data:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox HorizontalAlignment="Center" IsEnabled="{Binding IsEnable,Mode=TwoWay}"  VerticalAlignment="Center" IsChecked="{Binding IsChecked,Mode=TwoWay}"></CheckBox>
                                </DataTemplate>
                            </data:DataGridTemplateColumn.CellTemplate>
                        </data:DataGridTemplateColumn>
                        <data:DataGridTextColumn IsReadOnly="True"  Header="Item Code"  Binding="{Binding ItemCode,Mode=TwoWay}"></data:DataGridTextColumn>
                        <data:DataGridTextColumn  IsReadOnly="True"  Header="Item Name"  Binding="{Binding ItemName,Mode=TwoWay}"></data:DataGridTextColumn>
                        <data:DataGridTextColumn IsReadOnly="True"  Header="Batch Code"  Binding="{Binding BatchCode,Mode=TwoWay}"></data:DataGridTextColumn>
                        <data:DataGridTextColumn IsReadOnly="True" Header="Expiry Date"  Binding="{Binding ExpiryDate,Mode=TwoWay,Converter={StaticResource DateConverter},ConverterParameter='dd/MMM/yyyy'}"></data:DataGridTextColumn>
                        <data:DataGridTextColumn IsReadOnly="True" Header="Available Stock"  Binding="{Binding AvailableStock,Mode=TwoWay}"></data:DataGridTextColumn>

                        <data:DataGridTextColumn Visibility="Collapsed"  IsReadOnly="True" Header="MRP"  Binding="{Binding MRP,Mode=TwoWay}"></data:DataGridTextColumn>
                        <data:DataGridTextColumn  IsReadOnly="True" Header="Cost Price"  Binding="{Binding PurchaseRate,Mode=TwoWay}"></data:DataGridTextColumn>

                    </data:DataGrid.Columns>
                </data:DataGrid>

            </Grp:GroupBox>-->

        </my:DockPanel>
    </Grid>
</controls:ChildWindow>