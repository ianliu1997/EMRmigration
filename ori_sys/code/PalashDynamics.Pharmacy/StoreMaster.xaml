                                                <inputcombo:AutoCompleteComboBox  Grid.Row="0" Grid.Column="1" Margin="4" x:Name="CmbClinic" SelectedValue="ID" SelectedValuePath="ID" SelectionChanged="CmbClinic_SelectionChanged"></inputcombo:AutoCompleteComboBox >

                                                <TextBlock Text="Parent Store" Grid.Row="1" Grid.Column="0" Margin="4"></TextBlock>
                                                <inputcombo:AutoCompleteComboBox x:Name="cmbStore" Width ="Auto"  HorizontalAlignment="Stretch" SelectedValuePath="StoreId" SelectedItemBinding="{Binding clsStoreVO, Mode=OneWay}" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" Margin="4"  ></inputcombo:AutoCompleteComboBox>

                                                <TextBlock Text="Cost Center Code" Grid.Row="2" Grid.Column="0" Margin="4"></TextBlock>
                                                <inputcombo:AutoCompleteComboBox x:Name="cmbCostCenterCode" Width ="Auto"  HorizontalAlignment="Stretch" SelectedValuePath="ID" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" VerticalAlignment="Center" Grid.Column="1" Grid.Row="2" Margin="4"  ></inputcombo:AutoCompleteComboBox>

                                                <TextBlock  Grid.Row="3" Grid.Column="0" Text="Code" Margin="4"></TextBlock>
                                                <TextBox  Grid.Row="3" Grid.Column="1" x:Name="txtStoreCode" ToolTipService.ToolTip="Please Enter Code" Text="{Binding Code,Mode=TwoWay}" Margin="4"  MaxLength="20" LostFocus="txtStoreCode_LostFocus"></TextBox>

                                                <TextBlock  Grid.Row="4" Grid.Column="0" Text="Description" Margin="4"></TextBlock>
                                                <TextBox  Grid.Row="4" Grid.Column="1" x:Name="txtStoreName" Margin="4" ToolTipService.ToolTip="Please Enter Description" Text="{Binding StoreName,Mode=TwoWay}"  MaxLength="100" LostFocus="txtStoreCode_LostFocus"></TextBox>

                                                <RadioButton Content="Apply All Items To Store" IsChecked="{Binding IsForAll, Mode=TwoWay}" Grid.Row="5" Grid.Column="1" Height="16" HorizontalAlignment="Left" Margin="4" Name="chkAllItemSelection" Visibility="Collapsed" VerticalAlignment="Center" Click="chkAllItemSelection_Click"/>
                                                <RadioButton Content="Apply To Category Wise Items"  Grid.Row="6" Grid.Column="1" IsChecked="{Binding IsForCategories, Mode=TwoWay}" HorizontalAlignment="Left" Margin="4" Name="chkApplyCatWise" VerticalAlignment="Center" Click="chkApplyCatWise_Click"/>

                                                <TextBlock Text="Category" Grid.Row="7" Grid.Column="0" Margin="4" x:Name="lblCategory" Visibility="Collapsed"></TextBlock>
                                                <CustomCombo:AutoCompleteComboBox x:Name="cboItemCategory" MinimumPrefixLength="0" MinimumPopulateDelay="200" SelectedItemBinding="{Binding MasterListItem, Mode=TwoWay}" SelectedValuePath="ID" DataContext="{Binding}" HorizontalAlignment="Stretch"  Margin="4" VerticalAlignment="Center" Grid.Row="7" Style="{StaticResource DataGridAutoCompleteTemplate1}"  Grid.Column="3"></CustomCombo:AutoCompleteComboBox>
                                                <CheckBox x:Name="ChkIsQuarantineStore" Content="Is Quarantine Store" IsChecked="{Binding IsQuarantineStore, Mode=TwoWay}"  Grid.Row="8" Grid.Column="1" HorizontalAlignment="Left" Margin="4" Click="ChkIsQuarantineStore_Click"></CheckBox>

                                                    <!--<GroupBox:GroupBox Header="Transcation Details" Margin="4" Width="Auto" Height="Auto" Grid.Row="3" HorizontalAlignment="Stretch" Visibility="Collapsed">-->
                                                    <Grid x:Name="TransDetails" Visibility="Collapsed">
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                        </Grid.ColumnDefinitions>
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition Height="Auto"></RowDefinition>
                                                            <RowDefinition Height="Auto"></RowDefinition>
                                                            <RowDefinition Height="Auto"></RowDefinition>
                                                            <RowDefinition Height="Auto"></RowDefinition>
                                                            <RowDefinition Height="Auto"></RowDefinition>
                                                            <RowDefinition Height="Auto"></RowDefinition>
                                                        </Grid.RowDefinitions>

                                                        <CheckBox Content="Opening Balance" IsChecked="{Binding OpeningBalance, Mode=TwoWay}" Grid.Row="0" Grid.Column="0" Height="16" HorizontalAlignment="Left" Margin="4" Name="chkOpeningBalance" VerticalAlignment="Center"/>
                                                        <CheckBox Content="Indent" IsChecked="{Binding Indent, Mode=TwoWay}" Grid.Row="0" Grid.Column="1" Height="16" HorizontalAlignment="Left" Margin="4" Name="chkIndent" VerticalAlignment="Center"/>
                                                        <CheckBox Content="Issue" IsChecked="{Binding Issue, Mode=TwoWay}" Grid.Row="1" Grid.Column="0" Height="16" HorizontalAlignment="Left" Margin="4" Name="chkIssue" VerticalAlignment="Center"/>
                                                        <CheckBox Content="Item Return" IsChecked="{Binding ItemReturn, Mode=TwoWay}" Grid.Row="1" Grid.Column="1" Height="16" HorizontalAlignment="Left" Margin="4" Name="chkItemReturn" VerticalAlignment="Center"/>
                                                        <CheckBox Content="Goods Received Note" IsChecked="{Binding GoodsReceivedNote, Mode=TwoWay}" Grid.Row="2" Grid.Column="0" Height="16" HorizontalAlignment="Left" Margin="4" Name="chkGoodsReceivedNote" VerticalAlignment="Center"/>
                                                        <CheckBox Content="GRN Return" IsChecked="{Binding GRNReturn, Mode=TwoWay}" Grid.Row="2" Grid.Column="1" Height="16" HorizontalAlignment="Left" Margin="4" Name="chkGRNReturn" VerticalAlignment="Center"/>
                                                        <CheckBox Content="Items Sale" IsChecked="{Binding ItemsSale, Mode=TwoWay}" Grid.Row="3" Grid.Column="0" Height="16" HorizontalAlignment="Left" Margin="4" Name="chkItemsSale" VerticalAlignment="Center"/>
                                                        <CheckBox Content="Item Sale Return" IsChecked="{Binding ItemSaleReturn, Mode=TwoWay}" Grid.Row="3" Grid.Column="1" Height="16" HorizontalAlignment="Left" Margin="4" Name="chkItemSaleReturn" VerticalAlignment="Center"/>
                                                        <CheckBox Content="Receive Issue" IsChecked="{Binding ReceiveIssue, Mode=TwoWay}" Grid.Row="4" Grid.Column="0" Height="16" HorizontalAlignment="Left" Margin="4" Name="chkReceiveIssue" VerticalAlignment="Center"/>
                                                        <CheckBox Content="Receive Item Issue" IsChecked="{Binding ReceiveItemReturn, Mode=TwoWay}" Grid.Row="4" Grid.Column="1" Height="16" HorizontalAlignment="Left" Margin="4" Name="chkReceiveItemReturn" VerticalAlignment="Center"/>
                                                        <CheckBox Content="Expiry Item Return" IsChecked="{Binding ExpiryItemReturn, Mode=TwoWay}" Grid.Row="5" Grid.Column="0" Height="16" HorizontalAlignment="Left" Margin="4" Name="chkExpiryItemReturn" VerticalAlignment="Center"/>

                                                    </Grid>
                                                <!--</GroupBox:GroupBox>-->

                                            </Grid>
                                        </GroupBox:GroupBox>

                                        <!--<GroupBox:GroupBox  Header="Transaction Details" Margin="4" Width="Auto" Height="Auto" Grid.Row="1" HorizontalAlignment="Stretch">
                                            
                                        </GroupBox:GroupBox>-->
                                    </Border>
                                </toolkit:DockPanel>


                            </toolkit:DockPanel>
                        </Border>

                    </toolkit:DockPanel>
                </Grid>
            </Grid>
        </toolkit:DockPanel>
    </Grid>
</UserControl>










































