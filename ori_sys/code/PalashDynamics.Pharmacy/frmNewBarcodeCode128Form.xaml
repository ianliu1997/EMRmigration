<controls:ChildWindow x:Class="PalashDynamics.Pharmacy.frmNewBarcodeCode128Form"
          xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:Localization="clr-namespace:PalashDynamic.Localization;assembly=PalashDynamic.Localization"
           Width="400" Height="300" 
           Title="Barcode for Item" HasCloseButton="False">
    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Localization:Localized x:Key="locResource"></Localization:Localized>
        </ResourceDictionary>
    </controls:ChildWindow.Resources>
    <Grid x:Name="LayoutRoot" Margin="2" >
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
            </Grid.ColumnDefinitions>
            
            <StackPanel x:Name="PrintBarcodeArea" Grid.Row="1" Grid.Column="0" Height="110" Width="190">
                <TextBlock x:Name="MyText3" Width="190" FontWeight="Bold" Text="CITY PHARMACY ABBASIYA" Height="11" Grid.Row="1" Grid.Column="1"  TextAlignment="left"  FontSize="8"/>

                <Canvas x:Name="MyCanvas" Width="190" Height="40" Grid.Row="0" Grid.Column="1" Margin="0,3,0,0" HorizontalAlignment="Left" >
                </Canvas>
                <TextBlock x:Name="MyText" Width="190" Height="12" FontWeight="Bold" Text="1234" Grid.Row="1" Grid.Column="1"  TextAlignment="left"  FontSize="9"/>
                <TextBlock x:Name="txtItemName" Width="190" FontWeight="Bold"  Height="10" Grid.Row="1" Grid.Column="1"  TextAlignment="left"  FontSize="8"/>
                <TextBlock x:Name="txtItemPrice" Width="190" Text="111" Height="10" FontWeight="Bold" Grid.Row="1" Grid.Column="1"  TextAlignment="left"  FontSize="8"/>

            </StackPanel>
        </Grid>

        <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,0,0" Grid.Row="1" />
        <Button x:Name="OKButton" Content="Print" Click="OKButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,79,0" Grid.Row="1" />
    </Grid>
</controls:ChildWindow>