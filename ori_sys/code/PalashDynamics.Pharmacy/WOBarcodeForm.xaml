<controls:ChildWindow x:Class="PalashDynamics.Pharmacy.WOBarcodeForm"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="500" Height="300" 
           Title="Barcode" Loaded="ChildWindow_Loaded">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition Height="Auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition ></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <!--<Image x:Name="MyPic" Width="250" Height="50" Grid.Row="0" Grid.Column="1"/>-->

            <StackPanel x:Name="PrintBarcodeArea" Grid.Row="1" Grid.Column="0" Height="110" Width="190">
                <TextBlock x:Name="MyText3" Width="190" FontWeight="Bold" Text="CITY PHARMACY ABBASIYA" Height="11" Grid.Row="1" Grid.Column="1"  TextAlignment="left"  FontSize="8"/>
            
                <TextBlock x:Name="MyText2" Width="190" FontWeight="Bold" Height="14" Grid.Row="1" Grid.Column="1"  TextAlignment="left"  FontSize="10" Visibility="Collapsed"/>
                <Canvas x:Name="MyCanvas" Width="160" Height="26" Grid.Row="0" Grid.Column="1" Margin="0,3,0,0" HorizontalAlignment="Left" >
                </Canvas>
                <TextBlock x:Name="MyText" Width="190" Height="14" FontWeight="Bold" Text="1234" Grid.Row="1" Grid.Column="1"  TextAlignment="left"  FontSize="9"/>
                <TextBlock x:Name="MyText1" Width="190" FontWeight="Bold"  Height="11" Grid.Row="1" Grid.Column="1"  TextAlignment="left"  FontSize="8"/>
                <TextBlock x:Name="MyText4" Width="190" Text="111" Height="11" FontWeight="Bold" Grid.Row="1" Grid.Column="1"  TextAlignment="left"  FontSize="8"/>

            </StackPanel>

        </Grid>

        <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,0,0" Grid.Row="1" />
        <Button x:Name="OKButton" Content="Print" Click="OKButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,79,0" Grid.Row="1" />
    </Grid>
</controls:ChildWindow>