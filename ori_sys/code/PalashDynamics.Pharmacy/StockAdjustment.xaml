<UserControl xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"  
    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"  
     x:Class="PalashDynamics.Pharmacy.StockAdjustment"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Grp="clr-namespace:Groupbox;assembly=Groupbox" 
    xmlns:WMT="clr-namespace:PalashDynamics;assembly=PalashDynamics.WaterMarkTextBox" 
    xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"
    xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
    xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
    xmlns:local="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters" 
    xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit" 
    mc:Ignorable="d" Height="Auto" Width="Auto" >
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:DateTimeConverter x:Key="DateConverter" />

        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Height="auto" Width="auto">
        
        <toolkit:DockPanel x:Name="MainDockPanel" LastChildFill="True">
            <toolkit:DockPanel x:Name="BottomDock" toolkit:DockPanel.Dock="Bottom" LastChildFill="True">
                <StackPanel x:Name="Footer" Orientation="Horizontal"    Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                    <StackPanel x:Name="SaveCommandPanel" Orientation="Horizontal"  Margin="0,0,0,0">
                        <ToggleButton x:Name="CmdPrint" Content="Print" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Click="CmdPrint_Click" />
                        <ToggleButton x:Name="CmdReject" Content="Reject" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Click="CmdReject_Click" />
                        <ToggleButton x:Name="CmdApprove" Content="Approve" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Click="CmdApprove_Click" />
                        <ToggleButton x:Name="CmdNew"  Content="New"   Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="CmdNew_Click" />
                        <ToggleButton x:Name="CmdSave"  Content="Save"   Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="CmdSave_Click" />
                        <ToggleButton x:Name="CmdClose"  Content="Close"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="CmdClose_Click" />
                    </StackPanel>
                </StackPanel>
            </toolkit:DockPanel>

            <Grid x:Name="MainGrid">
                
                <Grid x:Name="FrontPanel" Visibility="Visible" toolkit:DockPanel.Dock="Top" Height="AUTO"  Width="Auto">
                    <Border  toolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4,4,4,4" BorderThickness="1" CornerRadius="0,0,3,3" Background="Transparent">
                    <toolkit:DockPanel  LastChildFill="True" toolkit:DockPanel.Dock="Top">
                        <toolkit:DockPanel  LastChildFill="True" toolkit:DockPanel.Dock="Top">
                            
                            <Grp:GroupBox Header="Stock Adjustment Search" Margin="4">
                            <Grid toolkit:DockPanel.Dock="Bottom">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                    <ColumnDefinition ></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                    <ColumnDefinition ></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                    <ColumnDefinition ></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    
                                </Grid.ColumnDefinitions>
                                
                                    <TextBlock Text="From Date" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="4"></TextBlock>
                                <controls:DatePicker x:Name="dtpFromDate" Grid.Row="0" Grid.Column="1" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center"></controls:DatePicker>

                                <TextBlock Text="To Date" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" Margin="4"></TextBlock>
                                <controls:DatePicker x:Name="dtptoDate" Grid.Row="0" Grid.Column="3" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></controls:DatePicker>

                                <TextBlock Text="Store" Grid.Row="0" Grid.Column="4" VerticalAlignment="Center" Margin="4"></TextBlock>
                                <inputcombo:AutoCompleteComboBox x:Name="cboStoreforFrontPanel"   Grid.Row="0"  Grid.Column="5"  Margin="4" HorizontalAlignment="Stretch" SelectionChanged="cboStore_SelectionChanged_1"></inputcombo:AutoCompleteComboBox>
                                <Button Grid.Column="6" x:Name="cmdSearch" Click="cmdSearch_Click" Margin="4" ToolTipService.ToolTip="Search Stock Adjustment">
                                    <Image Source="/PalashDynamics;component/Icons/Search_b.JPG" Width="20" ></Image>
                                </Button>
                            </Grid>
                            </Grp:GroupBox>
                        </toolkit:DockPanel>
                        <toolkit:DockPanel  LastChildFill="True" toolkit:DockPanel.Dock="Bottom">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Border toolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0"  Background="Transparent">
                                        <ContentControl VerticalAlignment="Center"  FontSize="12" Content="List of Item Stock Adjustment" Margin="-1" Style="{StaticResource Header}"     HorizontalAlignment="Stretch" />
                                    </Border>
                                    <toolkit:DockPanel Grid.Row="1" LastChildFill="True" x:Name="dpItemListBottom1">

                                        <sdk:DataPager x:Name="dataGrid2Pager" toolkit:DockPanel.Dock="Bottom" 
                                                        DisplayMode="FirstLastPreviousNext"  IsEnabled="True"                       
                                                        Source="{Binding}" 
                                                        AutoEllipsis="False" IsTotalItemCountFixed="False"  />
                                        <data:DataGrid   x:Name="dgPhysicalItem" ScrollViewer.HorizontalScrollBarVisibility="auto" ScrollViewer.VerticalScrollBarVisibility="auto" AutoGenerateColumns="False"  AlternatingRowBackground="Silver" VerticalAlignment="Stretch"  Margin="4,4,4,2"  SelectionChanged="dgPhysicalItem_SelectionChanged"  >
                                            <data:DataGrid.Columns>
                                                <data:DataGridTextColumn Binding="{Binding StockAdjustmentNo}" Header="Stock Adjustment No" />
                                                <data:DataGridTextColumn Visibility="Visible" IsReadOnly="True"  Header="Request Date Time"  Binding="{Binding RequestDateTime,Mode=TwoWay,Converter={StaticResource DateConverter},ConverterParameter='dd/MMM/yyyy'}"></data:DataGridTextColumn>
                                                <data:DataGridTextColumn IsReadOnly="True"  Header="Store"  Binding="{Binding Store,Mode=TwoWay}"></data:DataGridTextColumn>
                                                <data:DataGridTextColumn Visibility="Visible"  IsReadOnly="True" Header="Requested By"  Binding="{Binding RequestedByName,Mode=TwoWay}"></data:DataGridTextColumn>

                                                <data:DataGridTemplateColumn Header="From Physical Item Stock">
                                                    <data:DataGridTemplateColumn.CellTemplate >
                                                        <DataTemplate >
                                                            <CheckBox Margin="10,2,10,2" IsChecked="{Binding IsFromPST}" VerticalAlignment="Center" HorizontalAlignment="Center" IsEnabled="False"></CheckBox >
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                </data:DataGridTemplateColumn>
                                                <data:DataGridTemplateColumn Header="Approved">
                                                    <data:DataGridTemplateColumn.CellTemplate >
                                                        <DataTemplate >
                                                            <CheckBox Margin="10,2,10,2" IsChecked="{Binding IsApproved}" VerticalAlignment="Center" HorizontalAlignment="Center" IsEnabled="False"></CheckBox >
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                </data:DataGridTemplateColumn>
                                                <data:DataGridTextColumn Visibility="Visible" IsReadOnly="True"  Header="Approved Date Time"  Binding="{Binding ApprovedDateTime,Mode=TwoWay,Converter={StaticResource DateConverter},ConverterParameter='dd/MMM/yyyy'}"></data:DataGridTextColumn>
                                                <data:DataGridTextColumn Visibility="Visible"  IsReadOnly="True" Header="Approved By"  Binding="{Binding ApprovedByName,Mode=TwoWay}"></data:DataGridTextColumn>
                                                <data:DataGridTemplateColumn Header="Rejected">
                                                    <data:DataGridTemplateColumn.CellTemplate >
                                                        <DataTemplate >
                                                            <CheckBox Margin="10,2,10,2" IsChecked="{Binding IsRejected}" VerticalAlignment="Center" HorizontalAlignment="Center" IsEnabled="False"></CheckBox >
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                </data:DataGridTemplateColumn>
                                            </data:DataGrid.Columns>

                                        </data:DataGrid>

                                    </toolkit:DockPanel>
                                    <toolkit:DockPanel Grid.Row="2" LastChildFill="True" x:Name="dpItemListBottom2">



                                        <!--<sdk:DataPager x:Name="dataGrid2Pager" toolkit:DockPanel.Dock="Bottom" 
                                                        DisplayMode="FirstLastPreviousNext"  IsEnabled="True"                       
                                                        Source="{Binding}" 
                                                        AutoEllipsis="False" IsTotalItemCountFixed="False"  />-->
                                        <data:DataGrid Margin="4,4,4,4" toolkit:DockPanel.Dock="Top" IsReadOnly="True"  Visibility="Visible" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Visible"   AutoGenerateColumns="false" x:Name="dgfrontStockAdj" ItemsSource="{Binding}"  CanUserSortColumns="False">
                                            <data:DataGrid.Columns>
                                                
                                                <data:DataGridTextColumn Visibility="Collapsed" Binding="{Binding DateTime,Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}" Header="Date" />
                                                <!--<data:DataGridTextColumn Binding="{Binding Time}" Header="Time" />-->
                                                <data:DataGridTextColumn Binding="{Binding ItemCode}" Header="Item Code" />
                                                <data:DataGridTextColumn Binding="{Binding ItemName}" Header="Item Name" />
                                                <data:DataGridTextColumn Binding="{Binding BatchCode}" Header="Batch Code"  />
                                                <data:DataGridTextColumn Binding="{Binding Store}" Header="Store"  Visibility="Collapsed" />
                                                <data:DataGridTextColumn Binding="{Binding AvailableStock,StringFormat=0.00}" Header="System Stock" >
                                                    <data:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>
                                                <data:DataGridTextColumn Binding="{Binding AdjustmentQunatitiy,StringFormat=0.00}" Header="Adjustment Quantity" >
                                                    <data:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>

                                                <data:DataGridTextColumn Binding="{Binding ActualQuantity,StringFormat=0.00}" Header="Actual Quantity">
                                                    <data:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>

                                                <data:DataGridTextColumn Binding="{Binding UOM}" Header="UOM" />
                                                <data:DataGridTextColumn Binding="{Binding  stOperationType}" Header="Operation Type" />
                                            </data:DataGrid.Columns>
                                        </data:DataGrid>

                                    </toolkit:DockPanel>
                                </Grid>
                            </toolkit:DockPanel>
                    </toolkit:DockPanel>
                    </Border>
                </Grid>


                <Grid x:Name="BackPanel" Visibility="Collapsed" toolkit:DockPanel.Dock="Top" >

                    <toolkit:DockPanel  >
                        <toolkit:DockPanel toolkit:DockPanel.Dock="Top">
                            
                                <Grp:GroupBox Header="Stock Adjustment Details" Margin="4">
                                <Grid x:Name="LayoutRoot" Background="White" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition ></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition ></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition ></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition ></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <TextBlock x:Name="txtblckStore" Grid.Row="0" Grid.Column="6" Text="Store" Margin="4" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                                    <inputcombo:AutoCompleteComboBox x:Name="cboStore"   Grid.Row="0"  Grid.Column="7"  Margin="4" HorizontalAlignment="Stretch" SelectionChanged="cboStore_SelectionChanged" SelectedItemBinding="{Binding clsStoreVO, Mode=TwoWay}" SelectedValuePath="StoreId"></inputcombo:AutoCompleteComboBox>

                                    <TextBlock x:Name="txtblckClinic" Grid.Row="0" Grid.Column="4" Text="Clinic" Margin="4" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                                    <inputcombo:AutoCompleteComboBox x:Name="cboBackClinic"   Grid.Row="0"  Grid.Column="5"  Margin="4" HorizontalAlignment="Stretch" SelectionChanged="cboBackClinic_SelectionChanged" SelectedItemBinding="{Binding MasterListItem, Mode=TwoWay}" SelectedValuePath="ID"></inputcombo:AutoCompleteComboBox>
                                    
                                    <TextBlock x:Name="SANumber" Text="Stock Adjustment Number" Margin="4" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                                    <TextBox x:Name="txtSANumber" IsReadOnly="True" Grid.Column="1" Grid.Row="0" Margin="4" VerticalAlignment="Center"></TextBox>
                                    <TextBlock Text="Date" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" Margin="4"></TextBlock>
                                    <controls:DatePicker x:Name="dtpDate" Grid.Row="0" Grid.Column="3" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center"></controls:DatePicker>
                                    <ToggleButton x:Name="cmdItems" Click="cmdItems_Click"  Grid.Row="0" Grid.Column="8" HorizontalAlignment="Right"  Content="Get Items"   Background="#000000" Margin="4"  Style="{StaticResource ToggleButtonStyle}" Visibility="Visible"  ></ToggleButton>
                                </Grid>
                                </Grp:GroupBox>
                           
                        </toolkit:DockPanel>
                           
                            <toolkit:DockPanel toolkit:DockPanel.Dock="Bottom"  >
                            <Grid  Background="White" >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                    <ColumnDefinition ></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition ></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                </Grid.RowDefinitions>
                                <ScrollViewer Margin="4,4,4,4" Grid.ColumnSpan="2" Grid.Row="0" Grid.Column="0" Background="Transparent" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" controlsToolkit:ScrollViewerExtensions.IsMouseWheelScrollingEnabled="True">
                                    <data:DataGrid   Visibility="Visible" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"   AutoGenerateColumns="false" x:Name="dgstockadjUpdate" LoadingRow="dgstockadjUpdate_LoadingRow"  SelectionChanged="dgstockadjUpdate_SelectionChanged" CanUserSortColumns="False">
                                        <data:DataGrid.Columns>


                                            <data:DataGridTextColumn Binding="{Binding ItemCode,Mode=TwoWay}" Header="Item Code" IsReadOnly="True" />
                                            <data:DataGridTextColumn Binding="{Binding ItemName,Mode=TwoWay}" Header="Item Name" IsReadOnly="True"/>
                                            <data:DataGridTextColumn Binding="{Binding BatchCode,Mode=TwoWay}" Header="Batch Code"  IsReadOnly="True"/>
                                            <data:DataGridTextColumn Binding="{Binding ExpiryDate,Mode=TwoWay,Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}" Header="Expiry Date" IsReadOnly="True" />
                                            <data:DataGridTextColumn Binding="{Binding AvailableStock,Mode=TwoWay,StringFormat=0.00}" Header="System Stock" IsReadOnly="True">
                                                <data:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </data:DataGridTextColumn.ElementStyle>
                                            </data:DataGridTextColumn>
                                            <data:DataGridTextColumn Binding="{Binding AdjustmentQunatitiy,Mode=TwoWay,StringFormat=0.00}" IsReadOnly="False" Header="Adjustment Quantity" MaxWidth="100">
                                                <data:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </data:DataGridTextColumn.ElementStyle>
                                            </data:DataGridTextColumn>
                                            <data:DataGridTemplateColumn Header="Update Stock">
                                                <data:DataGridTemplateColumn.CellTemplate >
                                                    <DataTemplate >
                                                        <!--<Image Height="20" Margin="4" Source="../Icons/plus-icon.png" MouseLeftButtonUp="Image_MouseLeftButtonUp"></Image>-->
                                                        <StackPanel Orientation="Horizontal">
                                                            <RadioButton Margin="10,2,10,2" Content="Add" x:Name="RdoAdd" IsChecked="{Binding RadioStatusYes,Mode=TwoWay}" ></RadioButton>
                                                            <RadioButton Margin="10,2,10,2" Content="Subtract" x:Name="RdoRemove" IsChecked="{Binding RadioStatusNo,Mode=TwoWay}" ></RadioButton>
                                                        </StackPanel>
                                                    </DataTemplate>
                                                </data:DataGridTemplateColumn.CellTemplate>
                                            </data:DataGridTemplateColumn>

                                            <data:DataGridTemplateColumn Header="UOM">
                                                <data:DataGridTemplateColumn.CellTemplate >
                                                    <DataTemplate>
                                                        <!--<inputcombo:AutoCompleteComboBox Width="100"  x:Name="cmbPUOM" SelectedValue="{Binding SelectedUOM.ID}" SelectedItem="{Binding SelectedUOM,Mode=TwoWay}" ItemsSource="{Binding UOMList}"  Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" GotFocus="cmbPUOM_GotFocus" SelectionChanged="cmbPUOM_SelectionChanged" ></inputcombo:AutoCompleteComboBox>-->
                                                        <HyperlinkButton  Content="{Binding SelectedUOM.Description,Mode=TwoWay}"  Click="HyperlinkButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4"></HyperlinkButton>
                                                    </DataTemplate>
                                                </data:DataGridTemplateColumn.CellTemplate>
                                            </data:DataGridTemplateColumn>

                                            <data:DataGridTextColumn IsReadOnly="True" Binding="{Binding StockingUM, Mode=TwoWay}" Header="S.UOM" />

                                            <data:DataGridTemplateColumn Header="Remarks">
                                                <data:DataGridTemplateColumn.CellTemplate >
                                                    <DataTemplate >
                                                        <TextBox Text="{Binding Remarks,Mode=TwoWay}" Width="250" MaxLength="500"></TextBox>
                                                    </DataTemplate>
                                                </data:DataGridTemplateColumn.CellTemplate>
                                            </data:DataGridTemplateColumn>



                                            <!--Added By Anjali.................................................. -->


                                            <!--<data:DataGridTemplateColumn Header="Transaction UOM">
                                            <data:DataGridTemplateColumn.CellTemplate >
                                                <DataTemplate>
                                                    <inputcombo:AutoCompleteComboBox Width="100"  x:Name="cmbSUM" SelectedValue="{Binding SelectedUOM.ID}" SelectedItem="{Binding SelectedUOM,Mode=TwoWay}" ItemsSource="{Binding UOMList}"  Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" GotFocus="cmbSUM_GotFocus" SelectionChanged="cmbSUM_SelectionChanged" ></inputcombo:AutoCompleteComboBox>
                                                </DataTemplate>
                                            </data:DataGridTemplateColumn.CellTemplate>
                                        </data:DataGridTemplateColumn>-->

                                            <!--<data:DataGridTemplateColumn Header="Transaction UOM" Width="200" >
                                            <data:DataGridTemplateColumn.CellTemplate >
                                                <DataTemplate>
                                                    <TextBlock Text="{Binding SelectedUOM.Description,Mode=TwoWay }" Margin="2" VerticalAlignment="Center" HorizontalAlignment="Stretch" />
                                                </DataTemplate>
                                            </data:DataGridTemplateColumn.CellTemplate>
                                            <data:DataGridTemplateColumn.CellEditingTemplate>
                                                <DataTemplate>
                                                    <inputcombo:AutoCompleteComboBox x:Name="cmbSUM" IsEnabled="True" SelectedValue="{Binding SelectedUOM.ID, Mode=TwoWay}" SelectedItem="{Binding SelectedUOM,Mode=TwoWay}" ItemsSource="{Binding UOMList, Mode=TwoWay}" SelectedValuePath="ID" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" GotFocus="cmbSUM_GotFocus" SelectionChanged="cmbSUM_SelectionChanged">
                                                    </inputcombo:AutoCompleteComboBox>
                                                </DataTemplate>
                                            </data:DataGridTemplateColumn.CellEditingTemplate>
                                        </data:DataGridTemplateColumn>-->







                                            <data:DataGridTextColumn IsReadOnly="True" Binding="{Binding BaseUM, Mode=TwoWay}" Header="B.UOM" Visibility="Collapsed" />


                                            <data:DataGridTextColumn  IsReadOnly="True"  Binding="{Binding BaseConversionFactor, StringFormat=0.00000, Mode=TwoWay}" Header="Base Conversion Factor" Visibility="Collapsed" >
                                                <data:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </data:DataGridTextColumn.ElementStyle>
                                            </data:DataGridTextColumn>


                                            <data:DataGridTextColumn Binding="{Binding BaseQuantity, StringFormat=0.00, Mode=TwoWay}" Header="Base Quantity" Visibility="Collapsed" >
                                                <data:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </data:DataGridTextColumn.ElementStyle>
                                            </data:DataGridTextColumn>

                                            <data:DataGridTextColumn  IsReadOnly="True"  Binding="{Binding ConversionFactor, StringFormat=0.00000, Mode=TwoWay}" Header="Conversion Factor" >
                                                <data:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </data:DataGridTextColumn.ElementStyle>
                                            </data:DataGridTextColumn>


                                            <!--End Region.................................................. -->






                                            <data:DataGridTemplateColumn >
                                                <data:DataGridTemplateColumn.CellTemplate >
                                                    <DataTemplate >
                                                        <HyperlinkButton VerticalAlignment="Center" FontFamily=" Webdings" Content="r"  Padding="5,0,5,0" IsTabStop="False" Click="Remove_Click" Margin="4" ToolTipService.ToolTip="Delete"></HyperlinkButton>

                                                    </DataTemplate>
                                                </data:DataGridTemplateColumn.CellTemplate>
                                            </data:DataGridTemplateColumn>
                                        </data:DataGrid.Columns>
                                    </data:DataGrid>
                                </ScrollViewer>
                                <TextBlock  Text="Remark" Margin="4" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                                <TextBox x:Name="txtRemark"  Grid.Column="1" Grid.Row="1" Margin="4" VerticalAlignment="Center" MaxLength="1000"></TextBox>

                            </Grid>
                            </toolkit:DockPanel>
                    </toolkit:DockPanel>

                </Grid>

            </Grid>

        </toolkit:DockPanel>    

    </Grid>
</UserControl>

   