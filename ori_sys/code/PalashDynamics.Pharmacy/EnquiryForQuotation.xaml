<UserControl xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"  xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"  x:Class="PalashDynamics.Pharmacy.EnquiryForQuotation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
    mc:Ignorable="d"
    Width="Auto" Height="Auto" Loaded="UserControl_Loaded" >


    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot" Background="White">
        <toolkit:DockPanel x:Name="MainDockPanel" LastChildFill="True">
            <toolkit:DockPanel x:Name="BottomDockPanel" toolkit:DockPanel.Dock="Bottom">
                <StackPanel x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                    <StackPanel x:Name="SaveCommandPanel" Orientation="Horizontal"  Margin="0,0,0,0">
                        
                        <ToggleButton x:Name="cmdPrint"   Content="Print"   Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible"  />
                        <ToggleButton x:Name="CmdSave"  Content="Save"   Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible"  />
                        <ToggleButton x:Name="CmdClose"  Content="Close"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible"  />
                        
                    </StackPanel>
                </StackPanel>
            </toolkit:DockPanel>
            
            <toolkit:DockPanel x:Name="DockTop" toolkit:DockPanel.Dock="Top">
                <Border BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Margin="4,4,4,4"  Background="Transparent">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"></ColumnDefinition>
                            <ColumnDefinition Width="2*"></ColumnDefinition>

                        </Grid.ColumnDefinitions>
                   
                            <Grid Grid.Column="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition ></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Supplier" Margin="4" Width="auto" Height="auto" HorizontalAlignment="Right" VerticalAlignment="Top"></TextBlock>
                                <ListBox Grid.Column="1" VerticalAlignment="Stretch" x:Name="lstSuppName" ItemsSource="{Binding}"  Grid.Row="0" HorizontalAlignment="Stretch"  Margin="4" ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Visible">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox x:Name="chkSup" Width="auto" Height="auto" Margin="4" Content="{Binding supname}"></CheckBox>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                       
                  
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition Height="auto"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                    <ColumnDefinition ></ColumnDefinition>
                                        <ColumnDefinition ></ColumnDefinition>
                                
                                    
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Enquiry Date" Grid.Column="0" Height="auto" Margin="4" Width="auto" HorizontalAlignment="Right"></TextBlock>

                                <sdk:DatePicker x:Name="dpDt" Grid.Row="0" Grid.Column="1"  Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Top" ></sdk:DatePicker>
                                <TextBlock Text="Clinic" Grid.Column="0" Height="auto" Margin="4"  Grid.Row="1" HorizontalAlignment="Right"></TextBlock>
                                <inputcombo:AutoCompleteComboBox  x:Name="cboClinic"    Grid.Row="1"  Grid.Column="1"  Margin="4" HorizontalAlignment="Stretch"></inputcombo:AutoCompleteComboBox >
                                <TextBlock Text="Enquiry No" Grid.Column="0" Height="auto" Margin="4"  Grid.Row="2" HorizontalAlignment="Right"></TextBlock>
                                <TextBox x:Name="txtEnNumber"  Margin="4" IsReadOnly="True"  Grid.Row="2" Grid.Column="1" HorizontalAlignment="Stretch"></TextBox>
                                <TextBlock Text="Header" Grid.Column="0"  Margin="4"  Grid.Row="3" HorizontalAlignment="Right"></TextBlock>
                                <TextBox x:Name="txtHeader"   AcceptsReturn="True" Margin="4" VerticalScrollBarVisibility="Visible"   Grid.Row="3" Grid.Column="1" HorizontalAlignment="Stretch" Grid.ColumnSpan="3" ></TextBox>
                            </Grid>
                       

                    </Grid>
                </Border>
            </toolkit:DockPanel>
            <toolkit:DockPanel x:Name="DockBottom" toolkit:DockPanel.Dock="Bottom">
                <Border BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Margin="4,4,4,4"  Background="Transparent">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Terms and Conditions" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="4" Grid.Row="0" Grid.Column="0"></TextBlock>
                        <TextBox Grid.Column="1" Grid.Row="0" Margin="4" AcceptsReturn="True"  VerticalScrollBarVisibility="Visible" HorizontalAlignment="Stretch" ></TextBox>
                        <TextBlock Text="Note" VerticalAlignment="Center" Grid.Row="1" HorizontalAlignment="Right" Margin="4"  Grid.Column="0"></TextBlock>
                        <TextBox Grid.Column="1" Grid.Row="1" AcceptsReturn="True" Margin="4" HorizontalAlignment="Stretch"  VerticalScrollBarVisibility="Visible" ></TextBox>
                    </Grid>
                </Border>
            </toolkit:DockPanel>
            <toolkit:DockPanel x:Name="ContentDockPanel" LastChildFill="True" >
                <Border BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Margin="4,4,4,4"  Background="Transparent">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition ></RowDefinition>
                            <RowDefinition Height="Auto" ></RowDefinition>
                        </Grid.RowDefinitions>


                        <toolkit:DockPanel toolkit:DockPanel.Dock="Bottom" Grid.Row="1">
                                <Border BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Margin="4,4,4,4"  Background="Transparent">
                                    <Grid Margin="4">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" ></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <!--<ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>-->
                                    </Grid.ColumnDefinitions>
                                    <sdk:AutoCompleteBox  Grid.Column="0" x:Name="acbItemName" Background="WhiteSmoke"  Width="150" Height="20"   ></sdk:AutoCompleteBox>
                                    <TextBox x:Name="tbob" Grid.Column="1" Background="WhiteSmoke"  BorderThickness="1" Width="80" Height="20"></TextBox>
                                    <TextBox x:Name="tbBN" Grid.Column="2" Height="20" Background="WhiteSmoke" BorderThickness="1" Width="100"></TextBox>

                                    <TextBox Grid.Column="3" Width="360" Height="20" Background="WhiteSmoke" BorderThickness="1"></TextBox>
                                    <ToggleButton x:Name="CmdAdd"  Grid.Column="6" Height="20" Content="Add"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible"  />

                                </Grid>
                                </Border>
                            </toolkit:DockPanel>
                            <toolkit:DockPanel toolkit:DockPanel.Dock="Top" Grid.Row="0">
                                <sdk:DataGrid x:Name="grdposearch" Width="auto"    Margin="4"  ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Visible"  AlternatingRowBackground="Silver"  VerticalAlignment="Stretch" AutoGenerateColumns="false" HorizontalAlignment="Stretch">
                                    <sdk:DataGrid.Columns>
                                        <sdk:DataGridTextColumn Width="150"  Header="Item Name"  Binding="{Binding ItemName}">
                                        </sdk:DataGridTextColumn>
                                        <sdk:DataGridTextColumn  Header="UOM" Width="80"    Binding="{Binding UOM}">
                                        </sdk:DataGridTextColumn>
                                        <sdk:DataGridTextColumn  Header="Package Size" Width="100" Binding="{Binding PackageSize}">
                                        </sdk:DataGridTextColumn>
                                        <sdk:DataGridTextColumn  Header="Remark" Width="350"  Binding="{Binding Remark}">
                                        </sdk:DataGridTextColumn>

                                    </sdk:DataGrid.Columns>
                                </sdk:DataGrid>
                            </toolkit:DockPanel>
                    </Grid>



                </Border>
            </toolkit:DockPanel>
        </toolkit:DockPanel>
    </Grid>
</UserControl>
