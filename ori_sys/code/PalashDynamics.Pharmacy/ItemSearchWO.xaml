<UserControl x:Class="PalashDynamics.Pharmacy.ItemSearchWO"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
               xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
              xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls" 
    mc:Ignorable="d"
    Height="Auto"  Width="Auto">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>


    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" ></RowDefinition>
            <!--<RowDefinition Height="Auto" ></RowDefinition>-->
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" ></ColumnDefinition>
            <ColumnDefinition ></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition ></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition ></ColumnDefinition>
         
        </Grid.ColumnDefinitions>

        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="Code"   Grid.Row="0" Grid.Column="0" Margin="4" ></TextBlock>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="Name" Grid.Row="0" Grid.Column="2" Margin="4" ></TextBlock>   
        <!--<TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="MRP" Grid.Row="0" Grid.Column="4" Margin="4" ></TextBlock>
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="Pur. Rate" Grid.Row="0" Grid.Column="5" Margin="4" ></TextBlock>-->
        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Text="Quantity" Grid.Row="0" Grid.Column="4" Margin="4" ></TextBlock>  
        <sdk:AutoCompleteBox x:Name="cmbItemCode"  Grid.Row="0" Grid.Column="1" ItemsSource="{Binding}" Margin="4"   FilterMode="StartsWith" FlowDirection="LeftToRight"  ValueMemberPath="Code" LostFocus="cmbItemCode_LostFocus" KeyUp="cmbItemCode_KeyUp">
            <sdk:AutoCompleteBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" ></ColumnDefinition>
                            <ColumnDefinition Width="250"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Text="{Binding Path=Code,Mode=OneWay}" Margin="4"  Grid.Column="0"></TextBlock>
                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Text="{Binding Path=Description,Mode=OneWay}" Margin="4"  Grid.Column="1"></TextBlock>
                    </Grid>
                </DataTemplate>
            </sdk:AutoCompleteBox.ItemTemplate>
        </sdk:AutoCompleteBox>

        <sdk:AutoCompleteBox x:Name="cmbItemName"  Grid.Row="0" Grid.Column="3" ItemsSource="{Binding}" Margin="4" FilterMode="StartsWith"  ValueMemberPath="Description" KeyUp="cmbItemName_KeyUp" >
            <sdk:AutoCompleteBox.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" ></ColumnDefinition>
                            <ColumnDefinition Width="250"></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <!--<TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Text="{Binding Path=Code,Mode=OneWay}" Margin="4"  Grid.Column="0"></TextBlock>-->
                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Text="{Binding Path=Description,Mode=OneWay}" Margin="4"  Grid.Column="1"></TextBlock>
                    </Grid>
                </DataTemplate>
            </sdk:AutoCompleteBox.ItemTemplate>
        </sdk:AutoCompleteBox>


       

     

       
        <TextBox Grid.Row="0" Grid.Column="5" Margin="4"   x:Name="txtQuantity" Text="0"  HorizontalAlignment="Stretch"   MaxLength="7"  KeyUp="txtQuantity_KeyUp" KeyDown="txtQuantity_KeyDown" TextChanged="txtQuantity_TextChanged"></TextBox>
        <TextBox Grid.Row="1" Grid.Column="3" Margin="4"   x:Name="txtMRP" Text="0"  HorizontalAlignment="Stretch"  MaxLength="7" KeyUp="txtMRP_KeyUp" KeyDown="txtMRP_KeyDown" Visibility="Collapsed" ></TextBox>
        <TextBox Grid.Row="1" Grid.Column="4" Margin="4"   x:Name="txtPurchaseRate" Text="0"  HorizontalAlignment="Stretch"   MaxLength="7" KeyUp="txtPurchaseRate_KeyUp" KeyDown="txtPurchaseRate_KeyDown" Visibility="Collapsed"></TextBox>

    </Grid>

</UserControl>
