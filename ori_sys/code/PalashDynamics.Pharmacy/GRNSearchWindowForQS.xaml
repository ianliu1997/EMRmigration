<controls:ChildWindow  x:Class="PalashDynamics.Pharmacy.GRNSearchWindowForQS"
           xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"  
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:Grp="clr-namespace:Groupbox;assembly=Groupbox" 
           xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"
           xmlns:local="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters"
           xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox" 
           xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"            
           Width ="900" Height="550"
           Title="Search GRN Items" Loaded="ChildWindow_Loaded">

    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:DateTimeConverter x:Key="DateConverter" />
        </ResourceDictionary>
    </controls:ChildWindow.Resources>


    <toolkit:DockPanel toolkit:DockPanel.Dock="Top" Background="White">
        <Border BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Margin="4,4,4,4"  Background="Transparent">
            <toolkit:DockPanel toolkit:DockPanel.Dock="Top" >

                <toolkit:DockPanel toolkit:DockPanel.Dock="Bottom">
                    <StackPanel x:Name="FooterBackPanel" Orientation="Horizontal"    Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                        <StackPanel x:Name="SaveCommandPanelBackPanel" Orientation="Horizontal"  Margin="0,0,0,0">
                            <ToggleButton x:Name="OKButton" Click="OKButton_Click"  Content="OK"   Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible"  />
                            <ToggleButton x:Name="CloseButton" Click="CancelButton_Click"  Content="Close"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible"   />
                        </StackPanel>
                    </StackPanel>
                </toolkit:DockPanel>
                <toolkit:DockPanel toolkit:DockPanel.Dock="Top" LastChildFill="True">
                    <toolkit:DockPanel toolkit:DockPanel.Dock="Top">
                        <Border BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Margin="4,4,4,4"  Background="Transparent">
                            <toolkit:DockPanel toolkit:DockPanel.Dock="Top">
                                <Grid x:Name="LayoutRoot1" Width="auto" Height="auto">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="auto"></RowDefinition>
                                        <RowDefinition Height="auto"></RowDefinition>
                                        <RowDefinition Height="auto"></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition ></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="From Date" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right"></TextBlock>
                                    <controls:DatePicker Grid.Row="0" Grid.Column="1" x:Name="dtpGRNFromDate"  Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></controls:DatePicker>

                                    <TextBlock Text="To Date" Grid.Column="2" Grid.Row="0" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right"></TextBlock>
                                    <controls:DatePicker x:Name="dtpGRNToDate" Grid.Row="0" Grid.Column="3" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></controls:DatePicker>

                                    <TextBlock Grid.Row="0" Grid.Column="4" Text="Store" Margin="4" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                                    <inputcombo:AutoCompleteComboBox  SelectedItemBinding="{Binding clsStoreVO, Mode=OneWay}" SelectedValuePath="StoreId" Margin="4"  Grid.Row="0" Grid.Column="5" x:Name="cmbStore" ></inputcombo:AutoCompleteComboBox>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Supplier" Margin="4" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                                    <inputcombo:AutoCompleteComboBox x:Name="cmbSupplier"   Grid.Row="1"  Grid.Column="1"  Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectedItemBinding="{Binding MasterListItem, Mode=TwoWay}" SelectedValuePath="ID" ></inputcombo:AutoCompleteComboBox>

                                    <TextBlock Text="GRN No." Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right"></TextBlock>
                                    <TextBox Text="" x:Name="txtGRNNo" Margin="4" Grid.Column="3" Grid.Row="1" VerticalAlignment="Center"></TextBox>

                                    <TextBlock Text="Item Name" Grid.Column="4" Grid.Row="1" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right"></TextBlock>
                                    <TextBox Text="" x:Name="txtItemName" Margin="4" Grid.Column="5" Grid.Row="1" VerticalAlignment="Center"></TextBox>

                                    <ToggleButton x:Name="cmdSearch" Grid.Column="6" Grid.Row="1" Content="Search" Height="20" Background="#000000" Margin="4" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="cmdSearch_Click" />
                                </Grid>
                            </toolkit:DockPanel>
                        </Border>
                    </toolkit:DockPanel>

                    <toolkit:DockPanel toolkit:DockPanel.Dock="Top" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        <Border BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Margin="4,4,4,4"  Background="Transparent">
                            <Grid Height="210" Width="Auto" x:Name="ItemContainer" VerticalAlignment="Stretch" >
                                <toolkit:DockPanel LastChildFill="True">


                                    <data:DataPager TabIndex="20" x:Name="DataPager" toolkit:DockPanel.Dock="Bottom"
                                    Grid.Row="1"
                                    PageSize="{Binding PageSize}"
                                    DisplayMode="FirstLastPreviousNext"
                                    IsEnabled="True"
                                    IsTotalItemCountFixed="True"
                                    Source="{Binding DataList}"  />
                                    <!--<data:DataPager TabIndex="20" x:Name="DataPager" toolkit:DockPanel.Dock="Bottom"
                                    Grid.Row="1"
                                    PageSize="{Binding PageSize}"
                                    DisplayMode="FirstLastPreviousNext"
                                    IsEnabled="True"
                                    IsTotalItemCountFixed="True"
                                    Source="{Binding DataList}"  />-->
                                    <Border Margin="0" toolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                                        <ContentControl  FontSize="11" Content="GRN Items" Margin="0" Style="{StaticResource Header}"/>
                                    </Border>
                                    <data:DataGrid  x:Name="dgGRNSearchList" Margin="0,0,0,1" ItemsSource="{Binding}"  AutoGenerateColumns="False"  SelectionChanged="dgGRNSearchList_SelectionChanged"  ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto" CanUserSortColumns="False">
                                        <data:DataGrid.Columns >
                                            <data:DataGridTextColumn Binding="{Binding GRNDate,Mode=OneWay,Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}"  Header="Date" IsReadOnly="True" />
                                            <data:DataGridTextColumn Binding="{Binding GRNNo, Mode=OneWay}" Header="GRN No." IsReadOnly="True"/>
                                            <data:DataGridTextColumn Binding="{Binding StoreName,Mode=OneWay}"  Header="Store Name" IsReadOnly="True" />
                                            <data:DataGridTextColumn Binding="{Binding ItemName, Mode=OneWay}" Header="Item Name" IsReadOnly="True"/>
                                            <data:DataGridTextColumn Binding="{Binding ItemCode, Mode=OneWay}" Header="Item Code" IsReadOnly="True"/>
                                            <data:DataGridTextColumn Binding="{Binding SupplierName, Mode=OneWay}" Header="Supplier Name" IsReadOnly="True"/>
                                            <data:DataGridTextColumn IsReadOnly="True" Header="Quantity"  Binding="{Binding Quantity,Mode=OneWay}">
                                                <data:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </data:DataGridTextColumn.ElementStyle>
                                            </data:DataGridTextColumn>
                                            <data:DataGridTextColumn Binding="{Binding TransUOM, Mode=OneWay}" Header="UOM" IsReadOnly="True"/>
                                            <data:DataGridTextColumn Binding="{Binding PendingQuantity, Mode=OneWay,StringFormat=0.00}"  Header="Pending Quanty" IsReadOnly="True" Visibility="Visible">
                                                <data:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </data:DataGridTextColumn.ElementStyle>
                                            </data:DataGridTextColumn>
                                            <data:DataGridTextColumn Binding="{Binding BaseUOM, Mode=OneWay}" Header="UOM" IsReadOnly="True"/>
                                            <data:DataGridTextColumn Binding="{Binding NetAmount,Mode=OneWay, StringFormat=0.000}"  Header="Net Amount" IsReadOnly="True" >
                                                <data:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </data:DataGridTextColumn.ElementStyle>
                                            </data:DataGridTextColumn>

                                            <data:DataGridTemplateColumn IsReadOnly="True"  Header="Free Item" >
                                                <data:DataGridTemplateColumn.CellTemplate >
                                                    <DataTemplate >
                                                        <CheckBox Margin="10,2,10,2" IsChecked="{Binding IsFreeItem}" VerticalAlignment="Center" HorizontalAlignment="Center" IsEnabled="False"></CheckBox >
                                                    </DataTemplate>
                                                </data:DataGridTemplateColumn.CellTemplate>
                                            </data:DataGridTemplateColumn>

                                        </data:DataGrid.Columns>
                                    </data:DataGrid>
                                </toolkit:DockPanel>
                            </Grid>
                        </Border>
                    </toolkit:DockPanel>

                    <toolkit:DockPanel LastChildFill="True" toolkit:DockPanel.Dock="Bottom">
                        <Border BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Margin="4,4,4,4"  Background="Transparent">
                            <Grid >
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition ></ColumnDefinition>
                                    <ColumnDefinition ></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid Height="auto" Width="Auto" x:Name="BatchContainer" Grid.Column="0" >
                                    <toolkit:DockPanel LastChildFill="True">
                                        <Border Margin="0" toolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                                            <ContentControl  FontSize="11" Content="Item Batch List" Margin="0" Style="{StaticResource Header}"/>
                                        </Border>

                                        <data:DataGrid  toolkit:DockPanel.Dock="Bottom" x:Name="dgGRNItemBatches" Margin="0,0,0,1"  ItemsSource="{Binding}"  AutoGenerateColumns="False" ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.HorizontalScrollBarVisibility="Visible" CanUserSortColumns="False" LoadingRow="dgGRNItemBatches_LoadingRow">
                                            <data:DataGrid.Columns >
                                                <data:DataGridTemplateColumn >
                                                    <data:DataGridTemplateColumn.CellTemplate >
                                                        <DataTemplate >
                                                            <CheckBox Margin="10,2,10,2"  x:Name="chkBatchStatus" IsTabStop="True" Click="AddBatch_Click" IsChecked="{Binding Status,Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" ></CheckBox >
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                </data:DataGridTemplateColumn>
                                                <data:DataGridTemplateColumn IsReadOnly="True"  Header="Suspended">
                                                    <data:DataGridTemplateColumn.CellTemplate >
                                                        <DataTemplate >
                                                            <CheckBox Margin="10,2,10,2" IsChecked="{Binding IsItemBlock}" VerticalAlignment="Center" HorizontalAlignment="Center" IsEnabled="False"></CheckBox >
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                </data:DataGridTemplateColumn>
                                                <data:DataGridTextColumn IsReadOnly="True" Header="Date" Binding="{Binding Date,Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}" />
                                                <data:DataGridTextColumn IsReadOnly="True" Header="Batch Code" Binding="{Binding BatchCode}" />
                                                <data:DataGridTextColumn IsReadOnly="True" Header="Available Quantity" Binding="{Binding AvailableStock, StringFormat=0.00,Mode=OneWay}">
                                                    <data:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>
                                                <data:DataGridTextColumn Binding="{Binding StockingUOM, Mode=OneWay}" Header="UOM" IsReadOnly="True"/>

                                                <data:DataGridTextColumn IsReadOnly="True" Header="Purchase Rate" Width="100"  Binding="{Binding PurchaseRate, StringFormat=0.00,Mode=OneWay}">
                                                    <data:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>
                                                <data:DataGridTextColumn IsReadOnly="True" Header="MRP" Width="100"  Binding="{Binding MRP, StringFormat=0.00,Mode=OneWay}">
                                                    <data:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>
                                                <data:DataGridTextColumn IsReadOnly="True" Header="Expiry Date" Binding="{Binding ExpiryDate,Converter={StaticResource DateConverter},ConverterParameter={StaticResource ExpiryDateDisplayFormat}}" />
                                                
                                            </data:DataGrid.Columns>
                                        </data:DataGrid>
                                    </toolkit:DockPanel>
                                </Grid>

                                <Grid Height="auto" Width="Auto"  Grid.Column="1" >
                                    <toolkit:DockPanel LastChildFill="True">
                                        <Border Margin="0" toolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                                            <ContentControl  FontSize="11" Content="Selected Items" Margin="0" Style="{StaticResource Header}"/>
                                        </Border>



                                        <data:DataGrid  toolkit:DockPanel.Dock="Bottom" x:Name="dgSelectedItems" Margin="0,0,0,1"  ItemsSource="{Binding}"  AutoGenerateColumns="False" ScrollViewer.VerticalScrollBarVisibility="Visible" ScrollViewer.HorizontalScrollBarVisibility="Visible" CanUserSortColumns="False">
                                            <data:DataGrid.Columns >
                                                <data:DataGridTemplateColumn >
                                                    <data:DataGridTemplateColumn.CellTemplate >
                                                        <DataTemplate >
                                                            <CheckBox Margin="10,2,10,2"  x:Name="chkGrn" IsTabStop="True" Click="chkGrnDetails_Click" IsChecked="{Binding SelectItem,Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" ></CheckBox >
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                </data:DataGridTemplateColumn>
                                                <data:DataGridTextColumn Binding="{Binding ItemName, Mode=OneWay}" Header="Item Name" IsReadOnly="True"/>
                                                <data:DataGridTextColumn Binding="{Binding BatchCode,Mode=OneWay}"  Header="Batch Code" IsReadOnly="True" />
                                                <data:DataGridTextColumn Binding="{Binding ExpiryDate,Mode=OneWay, Converter={StaticResource DateConverter},ConverterParameter={StaticResource ExpiryDateDisplayFormat}}"  Header="Expiry Date" IsReadOnly="True" />
                                                <data:DataGridTextColumn Binding="{Binding Quantity, Mode=OneWay,StringFormat=0.00}"  Header="Quantity" IsReadOnly="True" >
                                                    <data:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>
                                                <data:DataGridTextColumn Binding="{Binding TransUOM, Mode=OneWay}" Header="UOM" IsReadOnly="True"/>
                                                <data:DataGridTextColumn Binding="{Binding PendingQuantity, Mode=OneWay,StringFormat=0.00}"  Header="Pending Quanty" IsReadOnly="True" Visibility="Visible">
                                                    <data:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>
                                                <data:DataGridTextColumn Binding="{Binding BaseUOM, Mode=OneWay}" Header="UOM" IsReadOnly="True"/>
                                                <data:DataGridTextColumn Binding="{Binding AvailableQuantity, Mode=TwoWay,StringFormat=0.00}"  Header="Available Quantity" IsReadOnly="True" >
                                                    <data:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>
                                                <data:DataGridTextColumn Binding="{Binding AvailableStockUOM, Mode=OneWay}" Header="UOM" IsReadOnly="True"/>
                                                <data:DataGridTextColumn Binding="{Binding Rate,Mode=OneWay, StringFormat=0.000}"  Header="Cost Price" IsReadOnly="True" >
                                                    <data:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>

                                                <data:DataGridTextColumn Binding="{Binding NetAmount,Mode=OneWay, StringFormat=0.000}"  Header="Net Amount" IsReadOnly="True" Visibility="Collapsed">
                                                    <data:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>

                                            </data:DataGrid.Columns>
                                        </data:DataGrid>

                                    </toolkit:DockPanel>
                                </Grid>
                            </Grid>
                        </Border>
                    </toolkit:DockPanel>
                </toolkit:DockPanel>

            </toolkit:DockPanel>
        </Border>
    </toolkit:DockPanel>
</controls:ChildWindow>