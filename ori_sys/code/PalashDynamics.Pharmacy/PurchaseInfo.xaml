<controls:ChildWindow
x:Class="PalashDynamics.Pharmacy.PurchaseInfo"
xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk" 
xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"           
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data" 
xmlns:local="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters"
xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
Width="500" Height="300" 
Title="Last Purchase Price">

    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:DateTimeConverter x:Key="DateConverter" />
        </ResourceDictionary>

    </controls:ChildWindow.Resources>


    <toolkit:DockPanel x:Name="DockMain" toolkit:DockPanel.Dock="Top" LastChildFill="True" Background="White">
    
        <toolkit:DockPanel  x:Name="ButtonDockPanel" toolkit:DockPanel.Dock="Bottom">
            <StackPanel x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                <StackPanel x:Name="SaveCommandPanel" Orientation="Horizontal"  Margin="0,0,0,0">                            
                    <ToggleButton x:Name="CmdClose"  Content="Close"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="CancelButton_Click"  />
                </StackPanel>
            </StackPanel>
        </toolkit:DockPanel>


        <Border  BorderBrush="#FF788678"  toolkit:DockPanel.Dock="Top" Height="auto"  Width="auto" BorderThickness="1" CornerRadius="3,3,3,3"  Margin="4">
            <Grid Background="White" Height="auto" Width="Auto">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition></RowDefinition>
                     
                    </Grid.RowDefinitions>
                    <toolkit:DockPanel LastChildFill="True" Grid.Row="0">
                        <Border Margin="0" toolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                            <ContentControl  FontSize="11" Content="PO Details" Margin="0" Style="{StaticResource Header}"/>
                        </Border>

                        <toolkit:DockPanel Grid.Row="1" toolkit:DockPanel.Dock="Top">
                            <data:DataGrid x:Name="dgPO" AutoGenerateColumns="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" SelectionChanged="dgPO_SelectionChanged">
                                <data:DataGrid.Columns>
                                
                                    <data:DataGridTextColumn IsReadOnly="True" Header="Purchase Rate."  Binding="{Binding BestBaseRate, Mode=OneWay}"></data:DataGridTextColumn>
                                    <data:DataGridTextColumn IsReadOnly="True" Header="Date Of Purchase"  Binding="{Binding PODate,Mode=OneWay, Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}"></data:DataGridTextColumn>
                                    <data:DataGridTextColumn IsReadOnly="True" Header="PO Number"  Binding="{Binding PONO, Mode=OneWay}"></data:DataGridTextColumn>                                    
                                </data:DataGrid.Columns>
                            </data:DataGrid>
                        </toolkit:DockPanel>
                    </toolkit:DockPanel>               
                </Grid>
            </Grid>
        </Border>
    </toolkit:DockPanel>

</controls:ChildWindow>