<controls:ChildWindow xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"  xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"  x:Class="PalashDynamics.Pharmacy.ItemStore"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="600" Height="400"  Loaded="ChildWindow_Loaded"
           xmlns:Grp="clr-namespace:Groupbox;assembly=Groupbox"
                      xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"   
                        xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
           Title="Item Store">
    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:ChildWindow.Resources>
    <Grid>
        <toolkit:DockPanel x:Name="MainDock" LastChildFill="True" toolkit:DockPanel.Dock="Top">
            <Border BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Margin="4,4,4,4"  Background="Transparent">
                <toolkit:DockPanel toolkit:DockPanel.Dock="Top" LastChildFill="True">
                    <toolkit:DockPanel toolkit:DockPanel.Dock="Bottom" Margin="4">
                        <StackPanel x:Name="FooterBackPanel" Orientation="Horizontal"    Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                            <StackPanel x:Name="SaveCommandPanelBackPanel" Orientation="Horizontal"  Margin="0,0,0,0">
                                <ToggleButton x:Name="OKButton" Click="OKButton_Click"  Content="Save"   Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible"  />
                                <ToggleButton x:Name="CloseButton" Click="CancelButton_Click"  Content="Close"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible"   />
                            </StackPanel>
                        </StackPanel>
                    </toolkit:DockPanel>
                    <toolkit:DockPanel toolkit:DockPanel.Dock="Top" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="4">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition ></RowDefinition>
                                <RowDefinition ></RowDefinition>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>

                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" ></ColumnDefinition>
                                <ColumnDefinition ></ColumnDefinition>
                                <ColumnDefinition ></ColumnDefinition>
                                <ColumnDefinition ></ColumnDefinition>
                                <ColumnDefinition Width="auto" ></ColumnDefinition>
                                <ColumnDefinition ></ColumnDefinition>
                                <ColumnDefinition ></ColumnDefinition>
                                <ColumnDefinition ></ColumnDefinition>
                                <!--<ColumnDefinition ></ColumnDefinition>-->
                                <!--<ColumnDefinition ></ColumnDefinition>-->
                            </Grid.ColumnDefinitions>
                            <TextBlock Text="Item Name" Grid.Column="0" Grid.Row="0" Margin="4"></TextBlock>
                            <TextBlock x:Name="lblItemName" Grid.ColumnSpan="7"  VerticalAlignment="Center" HorizontalAlignment="Stretch" Grid.Column="1" Grid.Row="0" Margin="4" AllowDrop="False" TextWrapping="Wrap"></TextBlock>
                            <Grid Grid.Row="4" Grid.Column="1" Grid.RowSpan="4" Grid.ColumnSpan="3" Margin="4">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition ></RowDefinition>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Clinic Name" VerticalAlignment="Center" HorizontalAlignment="Stretch" Grid.Column="0" Grid.Row="0" Margin="4"></TextBlock>
                                <!--<CheckBox x:Name="chkAllClinics" Margin="4" Grid.Row="1" Grid.Column="1" Content="Select All" IsChecked="{Binding CheckedAllTariffs,Mode=TwoWay}" Checked="chkAllStores_Checked"  Unchecked="chkAllStores_Unchecked"   ></CheckBox>-->
                                
                                <!--<ListBox x:Name="lstClinic"   Grid.Row="2" Grid.Column="2" ScrollViewer.VerticalScrollBarVisibility="Visible" Width="auto" SelectionChanged="lstClinic_SelectionChanged">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox x:Name="chkClinic" IsChecked="{Binding status,Mode=TwoWay}" Content="{Binding Description}" Tag="{Binding ID}"  Checked="chkStores_Checked"   Unchecked="chkStores_Unchecked"     ></CheckBox>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>-->

                                <data:DataGrid x:Name="dgClinicList" AutoGenerateColumns="False" ItemsSource="{Binding}" VerticalScrollBarVisibility="Visible" IsReadOnly="True" Margin="4" HorizontalAlignment="Stretch" Grid.Row="3" TabIndex="23" SelectionChanged="dgClinicList_SelectionChanged">
                                    <data:DataGrid.Columns>
                                        <!--<data:DataGridTemplateColumn Header="Select">
                                            <data:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox x:Name="chkClinic"  IsChecked="{Binding Status, Mode=TwoWay}"  VerticalAlignment="Center" HorizontalAlignment="Center" Width="Auto" Click="chkClinic_Click"></CheckBox>
                                                </DataTemplate>
                                            </data:DataGridTemplateColumn.CellTemplate>
                                        </data:DataGridTemplateColumn>-->
                                        <data:DataGridTextColumn Binding="{Binding Description}"  Header="Clinic" ></data:DataGridTextColumn>
                                    </data:DataGrid.Columns>
                                </data:DataGrid>
                            </Grid>
                            <Grid Grid.Row="4" Grid.Column="5" Grid.RowSpan="4" Grid.ColumnSpan="4" >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition  Height="auto"></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Store Name" VerticalAlignment="Center" HorizontalAlignment="Stretch" Grid.Column="0" Grid.Row="0" Margin="4"></TextBlock>
                                <CheckBox x:Name="chkAllStores" Margin="82,4,47,3" Content="Select All" IsChecked="{Binding CheckedAllTariffs,Mode=TwoWay}" Checked="chkAllStores_Checked"  Unchecked="chkAllStores_Unchecked"   ></CheckBox>
                                
                                <data:DataGrid x:Name="dgStoreList" AutoGenerateColumns="False" ItemsSource="{Binding}" VerticalScrollBarVisibility="Visible" IsReadOnly="True" Margin="4" HorizontalAlignment="Stretch" Grid.Row="3" TabIndex="23">
                                    <data:DataGrid.Columns>
                                        <data:DataGridTemplateColumn Header="Select">
                                            <data:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox x:Name="chkStore"  IsChecked="{Binding status, Mode=TwoWay}"  VerticalAlignment="Center" HorizontalAlignment="Center" Width="Auto"  Checked="chkStore_Click" Unchecked="chkStore_Unchecked" ></CheckBox>
                                                </DataTemplate>
                                            </data:DataGridTemplateColumn.CellTemplate>
                                        </data:DataGridTemplateColumn>
                                        <data:DataGridTextColumn Binding="{Binding StoreName}"  Header="Store" ></data:DataGridTextColumn>
                                    </data:DataGrid.Columns>
                                </data:DataGrid>
                                <!--<ListBox x:Name="lstStores"   Grid.Row="2" Grid.Column="2" ScrollViewer.VerticalScrollBarVisibility="Visible" Width="auto" >
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <CheckBox x:Name="chkStore" IsChecked="{Binding status,Mode=TwoWay}" Content="{Binding StoreName}" Tag="{Binding ID}"  Checked="chkStores_Checked"   Unchecked="chkStores_Unchecked"     ></CheckBox>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>-->
                            </Grid>
                        </Grid>
                    </toolkit:DockPanel>
                </toolkit:DockPanel>
            </Border>
        </toolkit:DockPanel>
    </Grid>
        



</controls:ChildWindow>