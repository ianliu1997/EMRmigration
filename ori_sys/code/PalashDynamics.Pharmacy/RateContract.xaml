<UserControl x:Class="PalashDynamics.Pharmacy.RateContract"
 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"  
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Grp="clr-namespace:Groupbox;assembly=Groupbox" 
    xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"
    xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
     xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
     xmlns:converter="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters"
                xmlns:GroupBox="clr-namespace:Groupbox;assembly=Groupbox"        
      xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"  Loaded="UserControl_Loaded"             
             >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <converter:DateTimeConverter x:Key="DateConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid >
        <controlsToolkit:DockPanel LastChildFill="True">
            <Border BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" controlsToolkit:DockPanel.Dock="Bottom" BorderThickness="1" CornerRadius="3,3,3,3" Background="Transparent" >
                <StackPanel x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                    <StackPanel Orientation="Horizontal"  Margin="1" HorizontalAlignment="Right"  >

                        <ToggleButton x:Name="cmdNew" Content="New"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="cmdNew_Click" TabIndex="4"></ToggleButton>
                        <ToggleButton x:Name="cmdSave" Content="Save" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}"  Click="cmdSave_Click" TabIndex="12"></ToggleButton>
                        <ToggleButton Content="Modify" x:Name="cmdModify" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}"  Click="cmdModify_Click" TabIndex="14"></ToggleButton>
                        <ToggleButton Content="Cancel" x:Name="cmdCancel" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}"  Click="cmdCancel_Click" TabIndex="13"></ToggleButton>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Grid x:Name="PageContainer" >

                <Grid Height="AUTO" Visibility="Visible" Width="auto" x:Name="FrontPanel" Grid.Row="0">
                    <controlsToolkit:DockPanel x:Name="docList">
                        <controlsToolkit:DockPanel x:Name="DockTop" controlsToolkit:DockPanel.Dock="Top" HorizontalAlignment="Stretch">
                            <Grid x:Name="LayoutRoot2" Background="White" Margin="4" HorizontalAlignment="Stretch"  >
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition ></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition ></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition ></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>

                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                </Grid.ColumnDefinitions>


                                <TextBlock Text="Contract Start Date" Grid.Column="0" Grid.Row="1" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="4"></TextBlock>
                                <sdk:DatePicker x:Name="dtpFDate" ToolTipService.ToolTip="Please Select From Date" Grid.Column="1" Grid.Row="1"  Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center"></sdk:DatePicker>

                                <TextBlock Text="Contract End Date" HorizontalAlignment="Right" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center" Margin="4"></TextBlock>
                                <sdk:DatePicker x:Name="dtpTDate" ToolTipService.ToolTip="Please Select To Date" Grid.Column="3" Grid.Row="1" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></sdk:DatePicker>

                                <TextBlock Text="Supplier" HorizontalAlignment="Right" Grid.Column="4" Grid.Row="1" VerticalAlignment="Center" Margin="4"></TextBlock>
                                <inputcombo:AutoCompleteComboBox x:Name="cmbFSupplier" ToolTipService.ToolTip="Please Select Supplier" HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="5" Grid.Row="1" Margin="4"  ></inputcombo:AutoCompleteComboBox>


                                <TextBlock Text="Code" Width="Auto" HorizontalAlignment="Left"  Height="auto" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center"  Margin="4"></TextBlock>
                                <TextBox x:Name="txtFCode" ToolTipService.ToolTip="PLease Enter Code" MaxLength="20" Width="Auto" HorizontalAlignment="Stretch"  Height="auto" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center"  Margin="4" KeyDown="txtCode_KeyDown" LostFocus="txtFCode_LostFocus"></TextBox>


                                <TextBlock Text="Description" Width="Auto" HorizontalAlignment="Left" Height="auto" Grid.Column="2" Grid.Row="0" VerticalAlignment="Center"  Margin="4"></TextBlock>
                                <TextBox  x:Name="txtFDescription" ToolTipService.ToolTip="PLease Enter Description" MaxLength="150" Width="Auto" HorizontalAlignment="Stretch"  Height="auto" Grid.Column="3" Grid.Row="0" VerticalAlignment="Center"  Margin="4" LostFocus="txtFDescription_LostFocus" KeyDown="txtCode_KeyDown"></TextBox>

                                <Button x:Name="cmdSearch" Click="cmdSearch_Click" Margin="4" ToolTipService.ToolTip="Search"  Grid.Row="0" Grid.Column="8" TabIndex="3" >
                                    <Image Source="/PalashDynamics;component/Icons/Search_b.JPG" Margin="4,0,4,4" Width="20" ></Image>
                                </Button>
                            </Grid>
                        </controlsToolkit:DockPanel>


                        <controlsToolkit:DockPanel controlsToolkit:DockPanel.Dock="Top"  LastChildFill="True" >
                            <!--<sdk:DataPager x:Name="datapager"  DisplayMode="FirstLastPreviousNext" controlsToolkit:DockPanel.Dock="Bottom" Source="{Binding}" NumericButtonCount="10" AutoEllipsis="False" IsTotalItemCountFixed="False"  />-->

                            <sdk:DataPager x:Name="datapager" controlsToolkit:DockPanel.Dock="Bottom"
                                                DisplayMode="FirstLastPreviousNext" IsEnabled="True" 
                                                Source="{Binding}" 
                                                AutoEllipsis="False" IsTotalItemCountFixed="True"/>

                            <Border  controlsToolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                                <ContentControl VerticalAlignment="Center" FontSize="12" Content="Contract List" Margin="-1" Style="{StaticResource Header}"     HorizontalAlignment="Stretch" />
                            </Border>
                            <sdk:DataGrid  x:Name="dgContract" Margin="0,0,0,1" Height="130" VerticalScrollBarVisibility="Visible"   ItemsSource="{Binding}"  AutoGenerateColumns="False" SelectionChanged="dgContract_SelectionChanged" CanUserSortColumns="False">
                                <sdk:DataGrid.Columns >
                                    <sdk:DataGridTemplateColumn>
                                        <sdk:DataGridTemplateColumn.CellEditingTemplate>
                                            <DataTemplate>
                                                <HyperlinkButton x:Name="Update" TabIndex="0" Padding="5,0,5,0"  Content="View" VerticalAlignment="Center" Click="View_Click"  ></HyperlinkButton>
                                            </DataTemplate>
                                        </sdk:DataGridTemplateColumn.CellEditingTemplate>
                                    </sdk:DataGridTemplateColumn>
                                    <sdk:DataGridTextColumn Binding="{Binding Code, Mode=OneWay}" Header="Code" IsReadOnly="True"/>
                                    <sdk:DataGridTextColumn Binding="{Binding Description, Mode=OneWay}" Header="Description" IsReadOnly="True"/>
                                    <sdk:DataGridTextColumn Binding="{Binding ContractDate,Mode=OneWay, Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}"   Header="Contract Date" IsReadOnly="True" />
                                    <sdk:DataGridTextColumn Visibility="Collapsed" Binding="{Binding ContractValue,Mode=OneWay}"   Header="Contract Value" IsReadOnly="True" />
                                    <sdk:DataGridTextColumn Binding="{Binding FromDate,Mode=OneWay, Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}"   Header="Contract Start Date" IsReadOnly="True" />
                                    <sdk:DataGridTextColumn Binding="{Binding ToDate,Mode=OneWay, Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}"   Header="Contract End Date" IsReadOnly="True" />
                                    <sdk:DataGridTextColumn Binding="{Binding Supplier, Mode=OneWay}" Header="Supplier" IsReadOnly="True"/>
                                    <data:DataGridTemplateColumn IsReadOnly="True" Header="Freezed" >
                                        <data:DataGridTemplateColumn.CellTemplate >
                                            <DataTemplate >
                                                <CheckBox Margin="10,2,10,2" IsEnabled="False" IsChecked="{Binding IsFreeze,Mode=OneWay}" VerticalAlignment="Center" HorizontalAlignment="Center" x:Name="chkFreeze" ></CheckBox >
                                            </DataTemplate>
                                        </data:DataGridTemplateColumn.CellTemplate>
                                    </data:DataGridTemplateColumn>
                                    <sdk:DataGridTextColumn IsReadOnly="True"  Header="Net Amount"  Binding="{Binding ContractValue, StringFormat=0.00,Mode=OneWay}">
                                        <sdk:DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Right"/>
                                            </Style>
                                        </sdk:DataGridTextColumn.ElementStyle>
                                    </sdk:DataGridTextColumn>
                                </sdk:DataGrid.Columns>
                            </sdk:DataGrid>


                        </controlsToolkit:DockPanel>
                        <controlsToolkit:DockPanel  controlsToolkit:DockPanel.Dock="Top" >
                            <Border  controlsToolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                                <ContentControl VerticalAlignment="Center" FontSize="12" Content="Contract Details List" Margin="-1" Style="{StaticResource Header}"     HorizontalAlignment="Stretch" />
                            </Border>
                            <sdk:DataGrid x:Name="dgContractItem" VerticalAlignment="Stretch"  Margin="0"  ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Visible"   AutoGenerateColumns="false">
                                <sdk:DataGrid.Columns>
                                    <sdk:DataGridTextColumn IsReadOnly="True"  Header="Item Code"  Binding="{Binding ItemCode,Mode=OneWay}"></sdk:DataGridTextColumn>
                                    <sdk:DataGridTextColumn IsReadOnly="True"  Header="Item Name"  Binding="{Binding ItemName,Mode=OneWay}"></sdk:DataGridTextColumn>


                                    <sdk:DataGridTextColumn Visibility="Visible" IsReadOnly="True"    Header="Quantity" Width="100"  Binding="{Binding Quantity, StringFormat=0.00,Mode=OneWay}">
                                        <sdk:DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Right"/>
                                            </Style>
                                        </sdk:DataGridTextColumn.ElementStyle>
                                    </sdk:DataGridTextColumn>

                                    <sdk:DataGridTextColumn IsReadOnly="True"  Header="UOM"  Binding="{Binding TransUOM,Mode=OneWay}"></sdk:DataGridTextColumn>

                                    <sdk:DataGridTextColumn IsReadOnly="True"  Header="Purchase Cost Price"  Binding="{Binding Rate, StringFormat=0.00,Mode=OneWay}">
                                        <sdk:DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Right"/>
                                            </Style>
                                        </sdk:DataGridTextColumn.ElementStyle>
                                    </sdk:DataGridTextColumn>

                                    <sdk:DataGridTextColumn IsReadOnly="True"  Header="MRP"  Binding="{Binding MRP, StringFormat=0.00,Mode=OneWay}">
                                        <sdk:DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Right"/>
                                            </Style>
                                        </sdk:DataGridTextColumn.ElementStyle>
                                    </sdk:DataGridTextColumn>


                                    <sdk:DataGridTextColumn IsReadOnly="True"  Header="Discount Amount"  Binding="{Binding DiscountAmount, StringFormat=0.00,Mode=OneWay}">
                                        <sdk:DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Right"/>
                                            </Style>
                                        </sdk:DataGridTextColumn.ElementStyle>
                                    </sdk:DataGridTextColumn>

                                    <sdk:DataGridTextColumn IsReadOnly="True"  Header="Net Amount"  Binding="{Binding NetAmount, StringFormat=0.00,Mode=OneWay}">
                                        <sdk:DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Right"/>
                                            </Style>
                                        </sdk:DataGridTextColumn.ElementStyle>
                                    </sdk:DataGridTextColumn>


                                    <sdk:DataGridTextColumn Visibility="Collapsed" IsReadOnly="True"  Header="Condition" Width="150"  Binding="{Binding SelectedCondition.Description,Mode=OneWay}">
                                    </sdk:DataGridTextColumn>

                                    <sdk:DataGridTextColumn Visibility="Collapsed" IsReadOnly="True"    Header="Min Quantity" Width="100"  Binding="{Binding MinQuantity, StringFormat=0.00,Mode=OneWay}">
                                        <sdk:DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Right"/>
                                            </Style>
                                        </sdk:DataGridTextColumn.ElementStyle>
                                    </sdk:DataGridTextColumn>
                                    <sdk:DataGridTextColumn Visibility="Collapsed" IsReadOnly="True"    Header="Max Quantity" Width="100"  Binding="{Binding MaxQuantity, StringFormat=0.00,Mode=OneWay}">
                                        <sdk:DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Right"/>
                                            </Style>
                                        </sdk:DataGridTextColumn.ElementStyle>
                                    </sdk:DataGridTextColumn>
                                    <data:DataGridTextColumn Visibility="Collapsed" Binding="{Binding DiscountPercent, StringFormat=0.000, Mode=TwoWay}" Header="Discount (%)" >
                                        <data:DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Right"/>
                                            </Style>
                                        </data:DataGridTextColumn.ElementStyle>
                                    </data:DataGridTextColumn>
                                </sdk:DataGrid.Columns>
                            </sdk:DataGrid>
                        </controlsToolkit:DockPanel>
                    </controlsToolkit:DockPanel>
                </Grid>
                <Grid  Height="AUTO" Width="auto" x:Name="BackPanel" Visibility="Collapsed" Grid.Row="1">
                    <controlsToolkit:DockPanel x:Name="Content" controlsToolkit:DockPanel.Dock="top" LastChildFill="true"  >
                        <Border BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Margin="4,4,4,4"  Background="Transparent">
                            <controlsToolkit:DockPanel controlsToolkit:DockPanel.Dock="Top" LastChildFill="True">

                                <controlsToolkit:DockPanel x:Name="docHeader" controlsToolkit:DockPanel.Dock="Top" HorizontalAlignment="Stretch">
                                    <Border controlsToolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="0,-1,0,0" BorderThickness="1" CornerRadius="0,0,3,3" Background="Transparent">
                                        <GroupBox:GroupBox  Header="Contract Details" Margin="4" Width="Auto" Height="Auto" Grid.Row="0" HorizontalAlignment="Stretch">
                                            <Grid x:Name="grdTemplate">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                    <ColumnDefinition ></ColumnDefinition>
                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                    <ColumnDefinition ></ColumnDefinition>
                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                    <ColumnDefinition ></ColumnDefinition>


                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock Text="Code" Width="Auto" HorizontalAlignment="Left"  Height="auto" Grid.Column="0" Grid.Row="0" VerticalAlignment="Center"  Margin="4"></TextBlock>
                                                <TextBox IsReadOnly="True" Text="{Binding Code,Mode=TwoWay}" ToolTipService.ToolTip="Please Enter Code" Width="Auto" x:Name="txtCode" HorizontalAlignment="Stretch"  Height="auto" Grid.Column="1" Grid.Row="0" VerticalAlignment="Center"  Margin="4" MaxLength="20" LostFocus="Code_LostFocus" ></TextBox>


                                                <TextBlock Text="Description" Width="Auto" HorizontalAlignment="Left"  Height="auto" Grid.Column="2" Grid.Row="0" VerticalAlignment="Center"  Margin="4"></TextBlock>
                                                <TextBox Text="{Binding Description,Mode=TwoWay}" x:Name="txtDescription" ToolTipService.ToolTip="Please Enter Description" BorderBrush="Red" Width="Auto" HorizontalAlignment="Stretch"  Height="auto" Grid.Column="3" Grid.Row="0" VerticalAlignment="Center"  Margin="4" MaxLength="150" LostFocus="Description_LostFocus"></TextBox>


                                                <TextBlock Text="Contract Date" Width="Auto" HorizontalAlignment="Left"  Height="auto" Grid.Column="4" Grid.Row="0" VerticalAlignment="Center"  Margin="4"></TextBlock>
                                                <sdk:DatePicker x:Name="dtpContractDate" Grid.Row="0" Grid.Column="5" ToolTipService.ToolTip="Please Select Contract Date" BorderBrush="Red" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectedDate="{Binding ContractDate, Mode=TwoWay}" ></sdk:DatePicker>


                                                <!--<TextBlock Text="Contract Value" Width="auto" Grid.Column="6" Grid.Row="0" Height="auto" VerticalAlignment="Center" x:Name="totamt" Margin="4"></TextBlock>
                                                <TextBox x:Name="txtTotalAmt" IsReadOnly="True" Margin="4" Grid.Column="7" Grid.Row="0" ToolTipService.ToolTip="Please Enter Total Ammount" HorizontalAlignment="Stretch" TextAlignment="Right"   Text="{Binding ContractValue, Mode=TwoWay, StringFormat='N'}" MaxLength="15" ></TextBox>-->


                                                <TextBlock Text="Supplier" Width="Auto" HorizontalAlignment="Left"  Height="auto" Grid.Column="0" Grid.Row="1" VerticalAlignment="Center"  Margin="4"></TextBlock>
                                                <inputcombo:AutoCompleteComboBox x:Name="cmbSupplier"  Grid.Row="1" ToolTipService.ToolTip="Please Select Supplier" BorderBrush="Red" Grid.Column="1"  Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectedItemBinding="{Binding MasterListItem, Mode=TwoWay}" SelectedValuePath="ID"></inputcombo:AutoCompleteComboBox>

                                                <TextBlock Text="Contract Start Date" Width="Auto" HorizontalAlignment="Left"  Height="auto" Grid.Column="2" Grid.Row="1" VerticalAlignment="Center"  Margin="4"></TextBlock>
                                                <sdk:DatePicker x:Name="dtpFromDate" Grid.Row="1" Grid.Column="3" ToolTipService.ToolTip="Please Select Start Date" BorderBrush="Red" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectedDate="{Binding FromDate, Mode=TwoWay}" ></sdk:DatePicker>


                                                <TextBlock Text="Contract End Date" Width="Auto" HorizontalAlignment="Left"  Height="auto" Grid.Column="4" Grid.Row="1" VerticalAlignment="Center"  Margin="4"></TextBlock>
                                                <sdk:DatePicker x:Name="dtpToDate" Grid.Row="1" Grid.Column="5" ToolTipService.ToolTip="Please Select End Date" BorderBrush="Red" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectedDate="{Binding ToDate, Mode=TwoWay}" ></sdk:DatePicker>

                                                <TextBlock Text="Clinic Representative" Width="Auto" HorizontalAlignment="Left"  Height="auto" Grid.Column="0" Grid.Row="2" VerticalAlignment="Center"  Margin="4"></TextBlock>
                                                <inputcombo:AutoCompleteComboBox  x:Name="cmbClinicRepresentative" ToolTipService.ToolTip="Enter Clinic Representative" Grid.Row="2"  Grid.Column="1"  Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectedItemBinding="{Binding MasterListItem, Mode=TwoWay}" SelectedValuePath="ID"></inputcombo:AutoCompleteComboBox>

                                                <TextBlock Visibility="Collapsed" Text="Supplier Representative" Width="Auto" HorizontalAlignment="Left"  Height="auto" Grid.Column="2" Grid.Row="2" VerticalAlignment="Center"  Margin="4"></TextBlock>
                                                <sdk:AutoCompleteBox Visibility="Collapsed" x:Name="cmbSupplierRepresentative" ToolTipService.ToolTip="Enter Supplier Representative" Grid.Row="2"  Grid.Column="3"  Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" Text="{Binding SupplierRepresentative, Mode=TwoWay}"   KeyDown="txtAutocompleteText_KeyDown" TextChanged="txtAutocompleteText_TextChanged"></sdk:AutoCompleteBox>

                                            </Grid>
                                        </GroupBox:GroupBox>
                                    </Border>
                                </controlsToolkit:DockPanel>

                                <controlsToolkit:DockPanel LastChildFill="True">

                                    <controlsToolkit:DockPanel  controlsToolkit:DockPanel.Dock="Bottom" x:Name="AddingDock" >
                                        <Grid Height="auto" Width="auto">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto"></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                                <ColumnDefinition Width="auto"></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                                <RowDefinition Height="Auto"></RowDefinition>
                                                <RowDefinition Height="Auto" x:Name="rowToHide"></RowDefinition>    
                                            </Grid.RowDefinitions>
                                            
                                            <ToggleButton x:Name="lnkAddItems" Grid.Row="0" Content=" Add Items "  Background="#000000" Margin="4" HorizontalAlignment="Right" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Grid.Column="0" Click="lnkAddItems_Click"/>
                                            <CheckBox x:Name="chkFreeze" Grid.Row="0"  Grid.Column="3" Content="Freeze" FontWeight="ExtraBlack" Foreground="Red" IsChecked="{Binding IsFreeze,Mode=TwoWay}" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right"   ></CheckBox>

                                            <TextBlock Text="Net Amount" Width="auto" Grid.Column="0" Grid.Row="1" Height="auto" VerticalAlignment="Center" x:Name="totamt" Margin="4"></TextBlock>
                                            <TextBox x:Name="txtTotalAmt" IsReadOnly="True" Margin="4" Grid.Column="1" Grid.Row="1" ToolTipService.ToolTip="Please Enter Total Ammount" HorizontalAlignment="Stretch" TextAlignment="Right"   Text="{Binding ContractValue, Mode=TwoWay, StringFormat='N'}" MaxLength="15" ></TextBox>


                                            <TextBlock  Text="Remarks" Grid.Row="1" Grid.Column="2"  VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right"   ></TextBlock>
                                            <TextBox  Text="{Binding Remark,Mode=TwoWay}" Grid.Row="1" Grid.Column="3" x:Name="txtRemarks" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Stretch"></TextBox>

                                            <TextBlock x:Name="tbRCReasonForEdit" Text="Reason For Edit" Grid.Row="3" Grid.Column="2"  VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right" Visibility="Collapsed"></TextBlock>
                                            <TextBox x:Name="txtRCReasonForEdit" TextWrapping="Wrap" AcceptsReturn="True" Height="50" MaxHeight="50" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Text="{Binding ReasonForEdit, Mode=TwoWay}" Grid.Row="3" Grid.Column="4" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Stretch" BorderBrush="Red" ToolTipService.ToolTip="Please provide valid reason for edit" Visibility="Collapsed" LostFocus="txtRCReasonForEdit_LostFocus"></TextBox>

                                        </Grid>

                                    </controlsToolkit:DockPanel>


                                    <controlsToolkit:DockPanel controlsToolkit:DockPanel.Dock="Top" VerticalAlignment="Stretch">
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto"></RowDefinition>
                                                <RowDefinition Height="auto"></RowDefinition>
                                            </Grid.RowDefinitions>
                                        </Grid>

                                        <data:DataGrid Grid.Row="0" Margin="4"  Width="auto"  HorizontalAlignment="Stretch"  ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Visible"   AutoGenerateColumns="false" x:Name="dgItems" ItemsSource="{Binding }" CanUserReorderColumns="True" CanUserResizeColumns="True" CanUserSortColumns="False">
                                            <data:DataGrid.Columns>
                                                <data:DataGridTextColumn Binding="{Binding ItemCode}" Header="Item Code" IsReadOnly="True"/>
                                                <data:DataGridTextColumn Binding="{Binding ItemName}" Header="Item Name" IsReadOnly="True"/>
                                                <data:DataGridTextColumn IsReadOnly="True" Header="Manufactured By"   Binding="{Binding ManufactureCompany}"/>
                                                <sdk:DataGridTextColumn  Header="Purchase Quantity" Width="150"  Binding="{Binding Quantity,StringFormat=0.00,Mode=TwoWay}">
                                                    <sdk:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock" x:Name="PackQty">
                                                            <Setter Property="TextAlignment" Value="Right" />
                                                        </Style>
                                                    </sdk:DataGridTextColumn.ElementStyle>
                                                </sdk:DataGridTextColumn>

                                                <data:DataGridTemplateColumn Header="Transaction UOM" >
                                                    <data:DataGridTemplateColumn.CellEditingTemplate>
                                                        <DataTemplate>
                                                            <HyperlinkButton  Content="{Binding SelectedUOM.Description,Mode=TwoWay}"  Click="HyperlinkButton_Click" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="4"></HyperlinkButton>
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellEditingTemplate>
                                                </data:DataGridTemplateColumn>

                                                <data:DataGridTemplateColumn Header="Purchase Cost Price" >
                                                    <data:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding Rate, StringFormat=0.00}" Margin="4" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Right" />
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                    <data:DataGridTemplateColumn.CellEditingTemplate>
                                                        <DataTemplate>
                                                            <TextBox Text="{Binding Rate, StringFormat=0.00, Mode=TwoWay}"  IsReadOnly="{Binding IsMultipleContract}" TextAlignment="Right"/>
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellEditingTemplate>
                                                </data:DataGridTemplateColumn>

                                                <sdk:DataGridTextColumn IsReadOnly="True"  Header="Cost Amount" Width="100"  Binding="{Binding CostRate,StringFormat=0.00, Mode=OneWay}">
                                                    <sdk:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </sdk:DataGridTextColumn.ElementStyle>
                                                </sdk:DataGridTextColumn>

                                                <data:DataGridTemplateColumn Header="M.R.P" >
                                                    <data:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding MRP, StringFormat=0.00}" Margin="4" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Right" />
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                    <data:DataGridTemplateColumn.CellEditingTemplate>
                                                        <DataTemplate>
                                                            <TextBox Text="{Binding MRP, StringFormat=0.00, Mode=TwoWay}"  IsReadOnly="{Binding IsMultipleContract}" TextAlignment="Right"/>
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellEditingTemplate>
