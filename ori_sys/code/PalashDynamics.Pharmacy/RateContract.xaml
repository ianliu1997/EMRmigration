                                                <data:DataGridTextColumn Visibility="Collapsed" IsReadOnly="True"  Binding="{Binding ConversionFactor, StringFormat=0.00, Mode=TwoWay}" Header="Conversion Factor" >
                                                    <data:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>
