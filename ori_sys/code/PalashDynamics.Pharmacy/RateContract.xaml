                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                </data:DataGridTemplateColumn>



                                                <data:DataGridTemplateColumn Header="Min Quantity" Width="100"  Visibility="Collapsed">
                                                    <data:DataGridTemplateColumn.CellTemplate >
                                                        <DataTemplate >
                                                            <TextBox x:Name="txtMinQunatity" TextAlignment="Right" Text="{Binding MinQuantity, Mode=TwoWay}"  Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center"  TextChanged="TextBox_TextChanged" KeyDown="TextBox_KeyDown" />
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                </data:DataGridTemplateColumn>
                                                <data:DataGridTemplateColumn Header="Max Quantity" Width="100"  Visibility="Collapsed">
                                                    <data:DataGridTemplateColumn.CellTemplate >
                                                        <DataTemplate >
                                                            <TextBox x:Name="txtMaxQunatity"  TextAlignment="Right" Text="{Binding MaxQuantity, Mode=TwoWay}"  Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" LostFocus="txtMaxQuantity_LostFocus" TextChanged="TextBox_TextChanged" KeyDown="TextBox_KeyDown" />
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                </data:DataGridTemplateColumn>

