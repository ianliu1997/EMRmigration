                                                    <data:DataGridTextColumn Binding="{Binding ReferredDoctor }" Header="Referred By" IsReadOnly="False"></data:DataGridTextColumn>
                                                    <data:DataGridTextColumn Binding="{Binding VisitNotes}" Header="Clinical Note" Visibility="Collapsed" IsReadOnly="True" ></data:DataGridTextColumn>
