                                                    </data:DataGridTextColumn>

                                                    <data:DataGridTextColumn Binding="{Binding PaidAmount,StringFormat=0.00,Mode=OneWay}" Header="Paid Amount" >
                                                        <data:DataGridTextColumn.ElementStyle>
