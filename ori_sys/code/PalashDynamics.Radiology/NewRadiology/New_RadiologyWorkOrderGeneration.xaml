                                                <ContentControl VerticalAlignment="Center" FontSize="12" Content="List of Test" Margin="-1" Style="{StaticResource Header}"     HorizontalAlignment="Stretch" />
                                            </Border>


                                            <data:DataGrid  x:Name="dgTest" Margin="2" ItemsSource="{Binding}" IsReadOnly="True"  AutoGenerateColumns="False" LoadingRow="dgTest_LoadingRow" SelectionChanged="dgTest_SelectionChanged"  VerticalScrollBarVisibility="Visible" CanUserSortColumns="False">
