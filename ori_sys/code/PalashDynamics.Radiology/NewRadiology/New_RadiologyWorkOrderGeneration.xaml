                            <TextBox x:Name="txtTestCancelled" Height="15" Width="15" Grid.Column="6" Margin="5,5,8,3" IsReadOnly="True" ></TextBox>
                            <TextBlock Text="Cancelled" Grid.Column="7" Margin="1,5,8,5"></TextBlock>
