<controls:ChildWindow x:Class="DataDrivenApplication.DeletionWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:local="clr-namespace:DataDrivenApplication" Style="{StaticResource ChildWindowDefault}"
           xmlns:Common="clr-namespace:DataDrivenApplication"
           Width="400" Height="200" 
           Title="DeletionWindow">
    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/Generic1.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:ChildWindow.Resources>
    <local:Window x:Name="Window" Margin="5" Loaded="Window_Loaded" OnCloseButtonClick="Window_OnCloseButtonClick">
        <Grid Margin="-5" >
            <Border x:Name="Container" BorderBrush="{StaticResource BorderDefault}" BorderThickness="1,1,1,1" CornerRadius="5,5,5,5" Padding="5,5,5,5" Margin="0,8,0,0" >
                <Grid x:Name="LayoutRoot" Margin="0,1,0,1">
                    <StackPanel  Orientation="Horizontal" x:Name="ItemListToolbar" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,0,0">
                        <Button x:Name="CancelButton" x:FieldModifier="public" Style="{StaticResource ButtonDefault}" Foreground="{StaticResource Heading}" FontFamily="Portable User Interface" FontWeight="Bold" Margin="0,0,5,0" Padding="10,3,10,3" TabIndex="3" Click="CancelButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <Common:XamlCross Width="10" Height="10" Margin="0,0,5,0"/>
                                <TextBlock Text="Cancel" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="OkButton" x:FieldModifier="public" Style="{StaticResource ButtonDefault}" Foreground="{StaticResource Heading}" FontFamily="Portable User Interface" FontWeight="Bold" Margin="0,0,0,0" Padding="10,3,10,3" TabIndex="1" Click="OKButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <Common:XamlCheckmark Width="13" Height="13" Margin="0,0,5,0" RenderTransformOrigin="0.5,0.5">
                                </Common:XamlCheckmark>
                                <TextBlock Text="Ok" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Button>

                    </StackPanel>

                    <Border  BorderThickness="1,1,1,1" Margin="0,27,0,0" BorderBrush="{StaticResource BorderDefault}" CornerRadius="5,5,5,5" Background="{StaticResource BackgroundDefault}">
                        <Grid Margin="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>

                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <TextBlock x:Name="txtMessage" FontFamily="Portable User Interface" Margin="10,1,10,1" Foreground="{StaticResource Heading}" FontSize="14" TextWrapping="Wrap" Height="50" Width="300"></TextBlock>
                        </Grid>
                    </Border>
                </Grid>
            </Border>


            <Border HorizontalAlignment="Left" Margin="8,0,0,0" x:Name="ContainerTitle" VerticalAlignment="Top" Background="{StaticResource BackgroundDefault}" BorderBrush="{StaticResource BorderDefault}" BorderThickness="1,1,1,1" CornerRadius="5,5,5,5" RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="0.994"/>
                        <SkewTransform AngleX="-20"/>
                        <RotateTransform/>
                        <TranslateTransform X="3.627" Y="0.063"/>
                    </TransformGroup>
                </Border.RenderTransform>
                <TextBlock x:Name="FormTitle" Text="Deletion Form" FontFamily="Portable User Interface" Margin="10,1,10,1" Foreground="{StaticResource Heading}" FontWeight="Bold"/>
            </Border>
        </Grid>
    </local:Window>
</controls:ChildWindow>