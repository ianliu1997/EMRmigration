<controls:ChildWindow x:Class="DataDrivenApplication.SectionEditor"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
            xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:local="clr-namespace:DataDrivenApplication" Style="{StaticResource ChildWindowDefault}"
           Title="FormEditor" Width="600" xmlns:vsm="clr-namespace:System.Windows;assembly=System.Windows"
           xmlns:Common="clr-namespace:DataDrivenApplication"           >
    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/Generic1.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:ChildWindow.Resources>
    <local:Window x:Name="Window"  OnCloseButtonClick="Window_OnCloseButtonClick" Margin="5">
        <Grid Margin="-5" >
            <Border x:Name="Container" BorderBrush="{StaticResource BorderDefault}" BorderThickness="1,1,1,1" CornerRadius="5,5,5,5" Padding="5,5,5,5" Margin="0,8,0,0" >
                <Grid x:Name="LayoutRoot" Background="White" Margin="0,1,0,1">
                    <StackPanel  Orientation="Horizontal" x:Name="ItemListToolbar" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,0,0">
                        <Button x:Name="DeleteItemButton" x:FieldModifier="public" Style="{StaticResource ButtonDefault}" Foreground="{StaticResource Heading}" FontFamily="Portable User Interface" FontWeight="Bold" Margin="0,0,5,0" Padding="10,3,10,3" TabIndex="3" Click="CancelButton_Click" >
                            <StackPanel Orientation="Horizontal">
                                <Common:XamlCross Width="10" Height="10" Margin="0,0,5,0"/>
                                <TextBlock Text="Cancel" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="AddItemButton" x:FieldModifier="public" Style="{StaticResource ButtonDefault}" Foreground="{StaticResource Heading}" FontFamily="Portable User Interface" FontWeight="Bold" Margin="0,0,0,0" Padding="10,3,10,3" TabIndex="1" Click="AddItemButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <Common:XamlCheckmark Width="13" Height="13" Margin="0,0,5,0" RenderTransformOrigin="0.5,0.5">
                                </Common:XamlCheckmark>
                                <TextBlock Text="Save" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Button>

                    </StackPanel>
                    <Border  BorderThickness="1,1,1,1" Margin="0,27,0,0" BorderBrush="{StaticResource BorderDefault}" CornerRadius="5,5,5,5" Background="{StaticResource BackgroundDefault}">
                        <Grid Margin="2">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Grid.Row="0" Text="Section Name:" TextWrapping="Wrap" Margin="2"/>
                            <TextBox Grid.Column="1" Grid.Row="0" Text="" TextWrapping="Wrap" x:Name="tbTitle" Margin="2" Style="{StaticResource TextBoxDefault}" BorderBrush="{StaticResource BorderDefault}" TabIndex="1"/>
                            <TextBlock Grid.Column="0" Grid.Row="1" Text="Description :" TextWrapping="Wrap" Margin="2"/>
                            <TextBox Grid.Column="1" Grid.Row="1" x:Name="tbDescription" Margin="2"  Height="70"  Style="{StaticResource TextBoxDefault}" BorderBrush="{StaticResource BorderDefault}" TabIndex="2"/>

                            <TextBlock Grid.Column="0" Grid.Row="2" Text="ToolTip :" TextWrapping="Wrap" Margin="2"/>
                            <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Horizontal">
                                <CheckBox IsThreeState="False" x:Name="IsToolTip" Margin="2,2,90,2" Style="{StaticResource CheckBoxDefault}" BorderBrush="{StaticResource BorderDefault}" Checked="IsToolTip_Checked" Unchecked="IsToolTip_Unchecked"/>
                                <TextBlock Text="Container :" Margin="2"/>
                                <ComboBox x:Name="cmbContainer" MinWidth="120" Width="Auto" Margin="2">

                                </ComboBox>
                            </StackPanel>
                            <TextBlock Visibility="Collapsed" x:Name="txtBlockToolTip" Grid.Column="0" Grid.Row="3" Text="ToolTip Text :" TextWrapping="Wrap" Margin="2"/>
                            <TextBox Visibility="Collapsed" AcceptsReturn="True" Height="65" VerticalScrollBarVisibility="Visible" Grid.Column="1" Grid.Row="3" TextWrapping="Wrap" x:Name="tbToolTip" Margin="2" Style="{StaticResource TextBoxDefault}" BorderBrush="{StaticResource BorderDefault}"/>

                            <TextBlock Grid.Column="0" Grid.Row="4" Text="Read Permission :" TextWrapping="Wrap" Margin="2"/>
                            <StackPanel Grid.Column="1" Grid.Row="4" Orientation="Horizontal">
                                <CheckBox x:Name="chkAdminRead" Content="Admin" Margin="5" Unchecked="chkAdminRead_Unchecked" ></CheckBox>
                                <CheckBox x:Name="chkNurseRead" Content="Nurse" Margin="5" Unchecked="chkAdminRead_Unchecked"></CheckBox>
                                <!--<CheckBox x:Name="chkFrontOfficeRead" Content="FrontOffice" Margin="5" Unchecked="chkAdminRead_Unchecked"></CheckBox>-->
                                <CheckBox x:Name="chkDoctorRead" Content="Doctor" Margin="5" Unchecked="chkAdminRead_Unchecked"></CheckBox>
                                <CheckBox x:Name="chkReadAll" Content="Check All" Margin="5" Checked="chkReadAll_Checked" Unchecked="chkReadAll_Unchecked"></CheckBox>
                            </StackPanel>
                            <TextBlock Grid.Column="0" Grid.Row="5" Text="Write Permission :" TextWrapping="Wrap" Margin="2"/>
                            <StackPanel Grid.Column="1" Grid.Row="5" Orientation="Horizontal">
                                <CheckBox x:Name="chkAdminWrite" Content="Admin" Margin="5" Unchecked="chkAdminWrite_Unchecked"></CheckBox>
                                <CheckBox x:Name="chkNurseWrite" Content="Nurse" Margin="5" Unchecked="chkAdminWrite_Unchecked"></CheckBox>
                                <!--<CheckBox x:Name="chkFrontOfficeWrite" Content="FrontOffice" Margin="5" Unchecked="chkAdminWrite_Unchecked"></CheckBox>-->
                                <CheckBox x:Name="chkDoctorWrite" Content="Doctor" Margin="5" Unchecked="chkAdminWrite_Unchecked"></CheckBox>
                                <CheckBox x:Name="chkWriteAll" Content="Check All" Margin="5" Checked="chkWriteAll_Checked" Unchecked="chkWriteAll_Unchecked"></CheckBox>
                            </StackPanel>
                        </Grid>
                    </Border>
                </Grid>
            </Border>


            <Border HorizontalAlignment="Left" Margin="8,0,0,0" x:Name="ContainerTitle" VerticalAlignment="Top" Background="{StaticResource BackgroundDefault}" BorderBrush="{StaticResource BorderDefault}" BorderThickness="1,1,1,1" CornerRadius="5,5,5,5" RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="0.994"/>
                        <SkewTransform AngleX="-20"/>
                        <RotateTransform/>
                        <TranslateTransform X="3.627" Y="0.063"/>
                    </TransformGroup>
                </Border.RenderTransform>
                <TextBlock x:Name="FormTitle" Text="Section Details" FontFamily="Portable User Interface" Margin="10,1,10,1" Foreground="{StaticResource Heading}" FontWeight="Bold"/>
            </Border>
        </Grid>
    </local:Window>
</controls:ChildWindow>