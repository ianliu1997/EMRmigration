<controls:ChildWindow x:Class="DataDrivenApplication.FormEditor"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:local="clr-namespace:DataDrivenApplication" Style="{StaticResource ChildWindowDefault}"
           xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox" 
           Title="FormEditor" Width="auto" xmlns:vsm="clr-namespace:System.Windows;assembly=System.Windows"
           xmlns:Common="clr-namespace:DataDrivenApplication"           >
    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/Generic1.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:ChildWindow.Resources>
    <local:Window x:Name="Window"  OnCloseButtonClick="Window_OnCloseButtonClick" Margin="5">
        <Grid Margin="-5" >
            <Border x:Name="Container" BorderBrush="{StaticResource BorderDefault}" BorderThickness="1,1,1,1" CornerRadius="5,5,5,5" Padding="5,5,5,5" Margin="0,8,0,0" >
                <Grid Margin="0,1,0,1">
                    <Grid x:Name="LayoutRoot" Background="White">
                        <StackPanel  Orientation="Horizontal" x:Name="ItemListToolbar" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,0,0">
                            <Button x:Name="DeleteItemButton" x:FieldModifier="public" Style="{StaticResource ButtonDefault}" Foreground="{StaticResource Heading}" FontFamily="Portable User Interface" FontWeight="Bold" Margin="0,0,5,0" Padding="10,3,10,3" TabIndex="9" Click="CancelButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Common:XamlCross Width="10" Height="10" Margin="0,0,5,0"/>
                                    <TextBlock Text="Cancel" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Button>
                            <Button x:Name="AddItemButton" x:FieldModifier="public" Style="{StaticResource ButtonDefault}" Foreground="{StaticResource Heading}" FontFamily="Portable User Interface" FontWeight="Bold" Margin="0,0,0,0" Padding="10,3,10,3" TabIndex="8" Click="AddItemButton_Click">
                                <StackPanel Orientation="Horizontal">
                                    <Common:XamlCheckmark Width="13" Height="13" Margin="0,0,5,0" RenderTransformOrigin="0.5,0.5">
                                    </Common:XamlCheckmark>
                                    <TextBlock Text="Save" TextWrapping="Wrap"/>
                                </StackPanel>
                            </Button>

                        </StackPanel>

                        <Border  BorderThickness="1,1,1,1" Margin="0,27,0,0" BorderBrush="{StaticResource BorderDefault}" CornerRadius="5,5,5,5" Background="{StaticResource BackgroundDefault}">
                            <Grid Margin="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Grid.Column="0" Grid.Row="0" Text="Form Name :" TextWrapping="Wrap" Margin="2"/>
                                <TextBox Grid.Column="1" Text="" TextWrapping="Wrap" x:Name="tbTitle" Margin="2" Style="{StaticResource TextBoxDefault}" BorderBrush="{StaticResource BorderDefault}" TabIndex="1" Grid.ColumnSpan="2" />
                                <TextBlock Grid.Column="0" Grid.Row="1" Text="Description :" TextWrapping="Wrap" Margin="2"/>
                                <TextBox Grid.Column="1" Grid.Row="1" x:Name="tbDescription" Margin="2"  Height="100"  Style="{StaticResource TextBoxDefault}" BorderBrush="{StaticResource BorderDefault}" TabIndex="2" Grid.ColumnSpan="2" />
                                <TextBlock Grid.Column="0" Grid.Row="2" Text="Protocol File :" TextWrapping="Wrap" Margin="2"/>
                                <TextBox Grid.Column="1" Grid.Row="2" Text="" TextWrapping="Wrap" x:Name="tbProtocol" Margin="2" Style="{StaticResource TextBoxDefault}" BorderBrush="{StaticResource BorderDefault}" TabIndex="3" IsReadOnly="True" Grid.ColumnSpan="2" />
                                <TextBlock Grid.Column="0" Grid.Row="3" Text="Flow Chart File :" TextWrapping="Wrap" Margin="2"/>
                                <TextBox Grid.Column="1" Grid.Row="3" Text="" TextWrapping="Wrap" x:Name="tbFlowChart" Margin="2" Style="{StaticResource TextBoxDefault}" TabIndex="4" BorderBrush="{StaticResource BorderDefault}" IsReadOnly="True" Grid.ColumnSpan="2" />
                                <TextBlock Grid.Column="0" Grid.Row="4" Text="Template Applicable To :" Margin="2"/>
                                
                                <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.ColumnSpan="2" Margin="0,2">                                    
                                    <RadioButton x:Name="optBoth"  Margin="5,0,0,0" Content="Both" IsChecked="true" Checked="optBoth_Checked"></RadioButton>
                                    <RadioButton x:Name="optFemale" Margin="5,0,0,0"  Content="Female" Checked="optFemale_Checked"></RadioButton>
                                    <RadioButton x:Name="optMale"  Margin="5,0,0,0"   Content="Male" Checked="optMale_Checked"></RadioButton>
                                    <RadioButton x:Name="optNotApplicable"  Margin="5,0,0,0"   Content="Not Applicable" Checked="optNotApplicable_Checked"></RadioButton>
                                </StackPanel>
                                <!--by rohini dated 15.1.2016-->
                                <TextBlock Grid.Column="0" Grid.Row="5" Text="Template Type :" Margin="2"/>
                                <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,20,0,1" Grid.RowSpan="2">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>                                          
                                        </Grid.ColumnDefinitions>
                                        <inputcombo:AutoCompleteComboBox x:Name="cmbTempType" VerticalAlignment="Stretch" Width="130" Grid.Row="0" Grid.Column="0" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID"  Margin="4" TabIndex="5" SelectionChanged="cmbTempType_SelectionChanged"></inputcombo:AutoCompleteComboBox>
                                        <inputcombo:AutoCompleteComboBox x:Name="cmbTempSubtype" VerticalAlignment="Stretch" Width="130" Grid.Row="0" Grid.Column="1" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID"  Margin="4" TabIndex="6"></inputcombo:AutoCompleteComboBox>                                       
                                    </Grid>
                                </StackPanel>
                                <TextBlock Grid.Column="0" Grid.Row="6" Text="Applicable To Physical Exam:" Margin="2"/>
                                <StackPanel Grid.Row="6" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,0,2">
                                    <RadioButton x:Name="optYes"  Margin="5,0,0,0" Content="Yes"></RadioButton>
                                    <RadioButton x:Name="optNo" Margin="5,0,0,0"  Content="NO" IsChecked="true"></RadioButton>
                                </StackPanel>
                                <TextBlock Grid.Column="0" Grid.Row="7" Text="Applicable For OT:" Margin="2"/>
                                <StackPanel Grid.Row="7" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="0,0,0,2">
                                    <RadioButton x:Name="optYesOT"  Margin="5,0,0,0" Content="Yes"></RadioButton>
                                    <RadioButton x:Name="optNoOT" Margin="5,0,0,0"  Content="NO" IsChecked="true"></RadioButton>
                                </StackPanel>
                                <Grid Grid.Row="8" Grid.ColumnSpan="3" Background="White"  Margin="10,0,0,0" Height="200" Grid.RowSpan="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Border  BorderBrush="{StaticResource BorderDefault}" BorderThickness="1,1,1,1" CornerRadius="5,5,5,5" Padding="5,5,5,5" Margin="2,8,2,0" >
                                        <Grid Margin="5,15,5,5">
                                            <ScrollViewer Style="{StaticResource ScrollViewerStyle1}" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Auto">
                                                <ListBox x:Name="lstProtocol" SelectionMode="Single" SelectionChanged="lstProtocol_SelectionChanged"></ListBox>
                                            </ScrollViewer>
                                        </Grid>
                                    </Border>
                                    <Border HorizontalAlignment="Left" Margin="8,0,0,0"  VerticalAlignment="Top" Background="{StaticResource BackgroundDefault}" BorderBrush="{StaticResource BorderDefault}" BorderThickness="1,1,1,1" CornerRadius="5,5,5,5" RenderTransformOrigin="0.5,0.5">
                                        <Border.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform ScaleY="0.994"/>
                                                <SkewTransform AngleX="-20"/>
                                                <RotateTransform/>
                                                <TranslateTransform X="3.627" Y="0.063"/>
                                            </TransformGroup>
                                        </Border.RenderTransform>
                                        <TextBlock  Text="Select Protocol Definition" FontFamily="Portable User Interface" Margin="10,1,10,1" Foreground="{StaticResource Heading}" FontWeight="Bold"/>
                                        
                                    </Border>
                                    <Border Grid.Column="1"  BorderBrush="{StaticResource BorderDefault}" BorderThickness="1,1,1,1" CornerRadius="5,5,5,5" Padding="5,5,5,5" Margin="2,8,2,0" >
                                        <Grid Margin="5,15,5,5">
                                            <ScrollViewer Style="{StaticResource ScrollViewerStyle1}" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Auto">
                                                <ListBox x:Name="lstFlowChart" SelectionMode="Single" SelectionChanged="lstFlowChart_SelectionChanged"></ListBox>
                                            </ScrollViewer>
                                        </Grid>
                                    </Border>
                                    <Border Grid.Column="1" HorizontalAlignment="Left" Margin="8,0,0,0"  VerticalAlignment="Top" Background="{StaticResource BackgroundDefault}" BorderBrush="{StaticResource BorderDefault}" BorderThickness="1,1,1,1" CornerRadius="5,5,5,5" RenderTransformOrigin="0.5,0.5">
                                        <Border.RenderTransform>
                                            <TransformGroup>
                                                <ScaleTransform ScaleY="0.994"/>
                                                <SkewTransform AngleX="-20"/>
                                                <RotateTransform/>
                                                <TranslateTransform X="3.627" Y="0.063"/>
                                            </TransformGroup>
                                        </Border.RenderTransform>
                                        <TextBlock Grid.Column="1" Text="Select Flow Chart" FontFamily="Portable User Interface" Margin="10,1,10,1" Foreground="{StaticResource Heading}" FontWeight="Bold"/>
                                    
                                    </Border>
                                    
                                </Grid>
                                <Button x:Name="btnUpload" Grid.Column="2" Grid.Row="10" Height="25" HorizontalAlignment="Right" Content="Upload File" Style="{StaticResource ButtonDefault}" Foreground="{StaticResource Heading}" FontFamily="Portable User Interface"  TabIndex="7" Margin="5,5,5,0" Padding="10,3,10,3" Click="btnUpload_Click"/>

                            </Grid>
                        </Border>
                    </Grid>
                </Grid>
            </Border>


            <Border HorizontalAlignment="Left" Margin="8,0,0,0" x:Name="ContainerTitle" VerticalAlignment="Top" Background="{StaticResource BackgroundDefault}" BorderBrush="{StaticResource BorderDefault}" BorderThickness="1,1,1,1" CornerRadius="5,5,5,5" RenderTransformOrigin="0.5,0.5">
                <Border.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform ScaleY="0.994"/>
                        <SkewTransform AngleX="-20"/>
                        <RotateTransform/>
                        <TranslateTransform X="3.627" Y="0.063"/>
                    </TransformGroup>
                </Border.RenderTransform>
                <TextBlock x:Name="FormTitle" Text="Form Details" FontFamily="Portable User Interface" Margin="10,1,10,1" Foreground="{StaticResource Heading}" FontWeight="Bold"/>
            </Border>
        </Grid>
    </local:Window>
</controls:ChildWindow>