<controls:ChildWindow x:Class="DataDrivenApplication.Forms.frmAttention"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
     
           xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"                      
           Width="400" Height="200" 
           Title="Attention">
    <Grid x:Name="LayoutRoot" Background="White" Margin="2">
        <controlsToolkit:DockPanel LastChildFill="True" controlsToolkit:DockPanel.Dock="Top" Margin="4,0">
            <controlsToolkit:DockPanel x:Name="docFooter" controlsToolkit:DockPanel.Dock="Bottom">
                <controlsToolkit:DockPanel Margin="2" controlsToolkit:DockPanel.Dock="Top">
                    <StackPanel Grid.Row="3" x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                        <StackPanel x:Name="SaveCommandPanel" Orientation="Horizontal"  Margin="1">
                            <ToggleButton x:Name="CmdSave"  Grid.Row="4" Content="OK" MinWidth="50"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch"  Visibility="Visible" Click="OK_Click"  />
                         
                        </StackPanel>
                    </StackPanel>
                </controlsToolkit:DockPanel>
            </controlsToolkit:DockPanel>

            <Grid Margin="5" Height="auto" Width="auto" HorizontalAlignment="Stretch" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition />

                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>              
                </Grid.RowDefinitions>

                <TextBlock VerticalAlignment="Center" Foreground="Red"  FontWeight="Bold" TextAlignment="Left"  HorizontalAlignment="Left" Text="Attention : " Margin="7,11,0,61"></TextBlock>
                <!--<TextBlock Foreground="Red" VerticalAlignment="Center" TextAlignment="Left" Text="{Binding Alerts}" Margin="4" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="6" Height="14" Name="txtAlerts"></TextBlock>-->
                <TextBox Grid.Row="0" Grid.Column="1" Margin="4" Text="{Binding Alterts, Mode=TwoWay}" x:Name="txtAlerts"  HorizontalAlignment="Stretch" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" TextWrapping="Wrap" Height="80" IsReadOnly="True"></TextBox>
            </Grid>
        </controlsToolkit:DockPanel>
    </Grid>
</controls:ChildWindow>