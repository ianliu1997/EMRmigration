<UserControl x:Class="DataDrivenApplication.Forms.PatientEMR"
        xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
        xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit" 
        xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:blacklight="clr-namespace:Blacklight.Silverlight.Controls;assembly=Blacklight.Silverlight.Controls"
        xmlns:local="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters"               
        Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:DateTimeConverter x:Key="DateConverter" />
            <local:DateTimeToAgePart x:Key="DateTimeToAgePart"></local:DateTimeToAgePart>
            <ControlTemplate x:Key="FilledContentControlTemplate" TargetType="ContentControl">
                <Grid>
                    <ContentPresenter />
                </Grid>
            </ControlTemplate>
            <SolidColorBrush x:Key="Heading" Color="#FF0F3C64"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid x:Name="CoupleInfo" Grid.Row="0" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border x:Name="brdFemale" BorderBrush="{StaticResource TabControlDarkerBorder}" BorderThickness="1" CornerRadius="3,3,3,3" Background="Transparent" Margin="4" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Stretch">
                <controlsToolkit:DockPanel LastChildFill="True">
                    <controlsToolkit:DockPanel LastChildFill="True" controlsToolkit:DockPanel.Dock="Left" VerticalAlignment="Top" >
                        <Image Grid.RowSpan="3" Width="50" Source="../Images/female.jpg" Margin="4" x:Name="imgP1" Visibility="Collapsed" ></Image>
                        <Image x:Name="imgPhoto13" Height="250" Width="250" MaxHeight="100" MaxWidth="100" Visibility="Collapsed"></Image>
                    </controlsToolkit:DockPanel>
                    <controlsToolkit:DockPanel LastChildFill="True">
                        <Grid x:Name="Female" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock VerticalAlignment="Center" FontWeight="Bold" TextAlignment="Left"  Grid.Row="0" Grid.Column="0" Text="Name : "  Margin="4"></TextBlock>
                            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="7">
                                <TextBlock  Text="{Binding FirstName}" Margin="4"></TextBlock>
                                <TextBlock  Text="{Binding MiddleName}" Margin="4"></TextBlock>
                                <TextBlock  Text="{Binding LastName}" Margin="4"></TextBlock>
                                <TextBlock  Text="(" Margin="4" ></TextBlock>
                                <TextBlock  Text="{Binding MRNo}" Margin="4" ></TextBlock>
                                <TextBlock  Text=")" Margin="4" ></TextBlock>
                            </StackPanel>


                            <TextBlock VerticalAlignment="Center" TextAlignment="Left"   Text="DOB : " Margin="4" Grid.Row="1" Grid.Column="0" FontWeight="Bold" ></TextBlock>
                            <TextBlock  VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding DateOfBirth,Converter={StaticResource DateConverter},ConverterParameter='dd/MMM/yyyy'}" Margin="4"></TextBlock>
                            <TextBlock  VerticalAlignment="Center" Text="Age(Yrs) : " Margin="4" Grid.Row="1" Grid.Column="4" FontWeight="Bold"></TextBlock>
                            <TextBlock  VerticalAlignment="Center" Grid.Row="1" Grid.Column="5"  Text="{Binding DateOfBirth,Converter={StaticResource DateTimeToAgePart},ConverterParameter='YY'}" Margin="4"></TextBlock>


                            <TextBlock  VerticalAlignment="Center" FontWeight="Bold" TextAlignment="Left"  HorizontalAlignment="Left" Grid.Column="0" Grid.Row="2"  Text="Weight(Kgs) : " Margin="4"></TextBlock>
                            <TextBlock VerticalAlignment="Center" TextAlignment="Left" Grid.Column="1" Grid.Row="2"   Text="{Binding Weight}" Margin="4"></TextBlock>
                            <TextBlock  VerticalAlignment="Center" FontWeight="Bold" TextAlignment="Left"  Grid.Column="2" Grid.Row="2"  Text="Height(cms) : " Margin="4"></TextBlock>
                            <TextBlock VerticalAlignment="Center" TextAlignment="Left" Grid.Column="3" Grid.Row="2"   Text="{Binding Height}" Margin="4"></TextBlock>
                            <TextBlock  VerticalAlignment="Center" FontWeight="Bold" TextAlignment="Left"   Grid.Column="4" Grid.Row="2"  Text="BMI : " Margin="4"></TextBlock>
                            <TextBlock VerticalAlignment="Center" TextAlignment="Left" Grid.Column="5" Grid.Row="2"   Text="{Binding BMI}" Margin="4"  ></TextBlock>
                            <!--<TextBlock  FontWeight="Bold" TextAlignment="Left"  Grid.Column="6" Grid.Row="2"  Text="AMH : " Margin="4"></TextBlock>
                            <TextBlock TextAlignment="Left" Grid.Column="7" Grid.Row="2"   Text="{Binding AMHTestValue}" Margin="4"></TextBlock>-->

                            <TextBlock VerticalAlignment="Center" Foreground="Red"  FontWeight="Bold" TextAlignment="Left"  HorizontalAlignment="Left" Grid.Column="0" Grid.Row="3"  Text="Attention : " Margin="4"></TextBlock>
                            <TextBlock Foreground="Red" VerticalAlignment="Center" TextAlignment="Left" Text="{Binding Alerts}" Margin="4" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="6" Height="14"></TextBlock>
                            <HyperlinkButton VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="7" Grid.Row="3" Content="..." Click="HyperlinkButton_Click_Female" ></HyperlinkButton>
                        </Grid>
                        

                    </controlsToolkit:DockPanel>
                </controlsToolkit:DockPanel>
            </Border >
            <Border x:Name="brdMale"  BorderBrush="{StaticResource TabControlDarkerBorder}" BorderThickness="1" CornerRadius="3,3,3,3" Background="Transparent" Margin="4" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch">
                <controlsToolkit:DockPanel LastChildFill="True" controlsToolkit:DockPanel.Dock="Left">
                    <controlsToolkit:DockPanel LastChildFill="True" controlsToolkit:DockPanel.Dock="Left" VerticalAlignment="Top" >
                        <Image Grid.RowSpan="3" Width="50" Source="../Images/male.jpg" Margin="4" x:Name="imgP2" Visibility="Collapsed" ></Image>
                        <Image x:Name="imgPhoto12" Height="250" Width="250" MaxHeight="100" MaxWidth="100" Visibility="Collapsed"></Image>
                    </controlsToolkit:DockPanel>
                    <controlsToolkit:DockPanel LastChildFill="True">
                        <Grid x:Name="Male" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock VerticalAlignment="Center" FontWeight="Bold" TextAlignment="Left"   Grid.Row="0" Grid.Column="0" Text="Name : "  Margin="4"></TextBlock>
                            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="7">
                                <TextBlock  VerticalAlignment="Center" Text="{Binding FirstName}" Margin="4"></TextBlock>
                                <TextBlock  VerticalAlignment="Center" Text="{Binding MiddleName}" Margin="4"></TextBlock>
                                <TextBlock  VerticalAlignment="Center" Text="{Binding LastName}" Margin="4"></TextBlock>
                                <TextBlock  VerticalAlignment="Center" Text="(" Margin="4" ></TextBlock>
                                <TextBlock  VerticalAlignment="Center" Text="{Binding MRNo}" Margin="4" ></TextBlock>
                                <TextBlock  VerticalAlignment="Center" Text=")" Margin="4" ></TextBlock>
                            </StackPanel>


                            <TextBlock  VerticalAlignment="Center" TextAlignment="Left"   Text="DOB : " Margin="4" Grid.Row="1" Grid.Column="0" FontWeight="Bold" ></TextBlock>
                            <TextBlock  VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding DateOfBirth,Converter={StaticResource DateConverter},ConverterParameter='dd/MMM/yyyy'}" Margin="4"></TextBlock>
                            <TextBlock VerticalAlignment="Center" Text="Age(Yrs) : "  Grid.Row="1" Grid.Column="4" FontWeight="Bold"></TextBlock>
                            <TextBlock  VerticalAlignment="Center" Grid.Row="1" Grid.Column="5"  Text="{Binding DateOfBirth,Converter={StaticResource DateTimeToAgePart},ConverterParameter='YY'}" Margin="4"></TextBlock>


                            <TextBlock  VerticalAlignment="Center" FontWeight="Bold" TextAlignment="Left"  HorizontalAlignment="Left" Grid.Column="0" Grid.Row="2"  Text="Weight(Kgs) : " Margin="4"></TextBlock>
                            <TextBlock VerticalAlignment="Center" TextAlignment="Left" Grid.Column="1" Grid.Row="2"   Text="{Binding Weight}" Margin="4"></TextBlock>
                            <TextBlock  VerticalAlignment="Center" FontWeight="Bold" TextAlignment="Left"  Grid.Column="2" Grid.Row="2"  Text="Height(cms) : " Margin="4"></TextBlock>
                            <TextBlock VerticalAlignment="Center" TextAlignment="Left" Grid.Column="3" Grid.Row="2"   Text="{Binding Height}" Margin="4"></TextBlock>
                            <TextBlock  VerticalAlignment="Center" FontWeight="Bold" TextAlignment="Left"   Grid.Column="4" Grid.Row="2"  Text="BMI : " Margin="4"  ></TextBlock>
                            <TextBlock VerticalAlignment="Center" TextAlignment="Left" Grid.Column="5" Grid.Row="2"   Text="{Binding BMI}" Margin="4"  ></TextBlock>
                            <!--<TextBlock  VerticalAlignment="Center" FontWeight="Bold" TextAlignment="Left"  Grid.Column="6" Grid.Row="2"  Text="AMH : " Margin="4"></TextBlock>
                            <TextBlock VerticalAlignment="Center" TextAlignment="Left" Grid.Column="7" Grid.Row="2"   Text="{Binding AMHTestValue}" Margin="4"></TextBlock>-->

                            <TextBlock VerticalAlignment="Center" Foreground="Red" FontWeight="Bold" TextAlignment="Left"  HorizontalAlignment="Left" Grid.Column="0" Grid.Row="3"  Text="Attention : " Margin="4"></TextBlock>
                            <TextBlock Foreground="Red" VerticalAlignment="Center" TextAlignment="Left" Text="{Binding Alerts}" Margin="4" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="6" Height="13"></TextBlock>
                            <HyperlinkButton VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="7" Grid.Row="3" Content="..." Click="HyperlinkButton_Click_Male" ></HyperlinkButton>
                        </Grid>

                    </controlsToolkit:DockPanel>
                </controlsToolkit:DockPanel>
            </Border>

                    
            

        </Grid>
        
        <Grid x:Name="PatientInfo" Grid.Row="0" Visibility="Collapsed" >
            <Border BorderBrush="{StaticResource TabControlDarkerBorder}" BorderThickness="1" CornerRadius="3,3,3,3" Background="Transparent" Margin="4" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Stretch">
                <controlsToolkit:DockPanel LastChildFill="True" controlsToolkit:DockPanel.Dock="Left">
                    <!--<controlsToolkit:DockPanel LastChildFill="True" controlsToolkit:DockPanel.Dock="Left" VerticalAlignment="Top" >
                        <Image Grid.RowSpan="3" Width="50" Source="../Icons/female.jpg" Margin="4" ></Image>
                    </controlsToolkit:DockPanel>-->
                    <controlsToolkit:DockPanel LastChildFill="True">
                        <Grid x:Name="Patient" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <TextBlock VerticalAlignment="Center" FontWeight="Bold" TextAlignment="Left"   Grid.Row="0" Grid.Column="0" Text="Name : "  Margin="4"></TextBlock>
                            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="7">
                                <TextBlock  VerticalAlignment="Center" Text="{Binding FirstName}" Margin="4"></TextBlock>
                                <TextBlock  VerticalAlignment="Center" Text="{Binding MiddleName}" Margin="4"></TextBlock>
                                <TextBlock  VerticalAlignment="Center" Text="{Binding LastName}" Margin="4"></TextBlock>
                                <TextBlock  VerticalAlignment="Center" Text="(" Margin="4" ></TextBlock>
                                <TextBlock  VerticalAlignment="Center" Text="{Binding MRNo}" Margin="4" ></TextBlock>
                                <TextBlock  VerticalAlignment="Center" Text=")" Margin="4" ></TextBlock>
                            </StackPanel>


                            <TextBlock  VerticalAlignment="Center" TextAlignment="Left"   Text="DOB : " Margin="4" Grid.Row="1" Grid.Column="0" FontWeight="Bold" ></TextBlock>
                            <TextBlock  VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="3" Text="{Binding DateOfBirth,Converter={StaticResource DateConverter},ConverterParameter='dd/MMM/yyyy'}" Margin="4"></TextBlock>
                            <TextBlock VerticalAlignment="Center" Text="Age(Yrs) : "  Grid.Row="1" Grid.Column="4" FontWeight="Bold"></TextBlock>
                            <TextBlock  VerticalAlignment="Center" Grid.Row="1" Grid.Column="5"  Text="{Binding DateOfBirth,Converter={StaticResource DateTimeToAgePart},ConverterParameter='YY'}" Margin="4"></TextBlock>


                            <TextBlock  VerticalAlignment="Center" FontWeight="Bold" TextAlignment="Left"  HorizontalAlignment="Left" Grid.Column="0" Grid.Row="2"  Text="Weight(Kgs) : " Margin="4"></TextBlock>
                            <TextBlock VerticalAlignment="Center" TextAlignment="Left" Grid.Column="1" Grid.Row="2"   Text="{Binding Weight}" Margin="4"></TextBlock>
                            <TextBlock  VerticalAlignment="Center" FontWeight="Bold" TextAlignment="Left"  Grid.Column="2" Grid.Row="2"  Text="Height(cms) : " Margin="4"></TextBlock>
                            <TextBlock VerticalAlignment="Center" TextAlignment="Left" Grid.Column="3" Grid.Row="2"   Text="{Binding Height}" Margin="4"></TextBlock>
                            <TextBlock  VerticalAlignment="Center" FontWeight="Bold" TextAlignment="Left"   Grid.Column="4" Grid.Row="2"  Text="BMI : " Margin="4"  ></TextBlock>
                            <TextBlock VerticalAlignment="Center" TextAlignment="Left" Grid.Column="5" Grid.Row="2"   Text="{Binding BMI,StringFormat=0.00}" Margin="4"  ></TextBlock>
                            <!--<TextBlock  VerticalAlignment="Center" FontWeight="Bold" TextAlignment="Left"  Grid.Column="6" Grid.Row="2"  Text="AMH : " Margin="4"></TextBlock>
                            <TextBlock VerticalAlignment="Center" TextAlignment="Left" Grid.Column="7" Grid.Row="2"   Text="{Binding AMHTestValue}" Margin="4"></TextBlock>-->

                            <TextBlock VerticalAlignment="Center" Foreground="Red" FontWeight="Bold" TextAlignment="Left"  HorizontalAlignment="Left" Grid.Column="0" Grid.Row="3"  Text="Attention : " Margin="4"></TextBlock>
                            <TextBlock Foreground="Red" VerticalAlignment="Center" TextAlignment="Left" Text="{Binding Alerts}" Margin="4" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="6"></TextBlock>
                            <HyperlinkButton VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="7" Grid.Row="3" Content="..."></HyperlinkButton>
                        </Grid>

                    </controlsToolkit:DockPanel>
                </controlsToolkit:DockPanel>
            </Border>
        </Grid>
        
        <controls:TabControl Grid.Row="1" SelectionChanged="PatPersonalInfo_SelectionChanged" Padding="0"  BorderBrush="{StaticResource TabControlDarkerBorder}"  x:Name="PatPersonalInfo" Margin="4,-4,4,4">
            <controls:TabItem x:Name="tabPatGeneralInfo" Style="{StaticResource TabItemStyle}"  Padding="0" Margin="0" Header="Summary" >
                <blacklight:DragDockPanelHost x:Name="DragPanelContainer">
                    <blacklight:DragDockPanel Margin="5" Style="{StaticResource DragDockPanelStyle}" Maximized="DragDockPanel_Maximized" Minimized="DragDockPanel_Minimized">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition/>
                            </Grid.RowDefinitions>
                            <TextBlock FontSize="12" Foreground="Black" Margin="5, 2, 0, 0" IsHitTestVisible="False">Visit Details</TextBlock>
                            <controlsToolkit:DockPanel Grid.Row="1">
                                <data:DataGrid  x:Name="dgComplaintSummary" Margin="2,2,2,0" ItemsSource="{Binding}"  AutoGenerateColumns="False" IsReadOnly="True" >
                                    <data:DataGrid.Columns>
                                        <data:DataGridTextColumn Binding="{Binding ID}"  Header="ID" Visibility="Collapsed"/>
                                        <data:DataGridTemplateColumn>
                                            <data:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <HyperlinkButton VerticalAlignment="Center"  Content="View"  Padding="5,0,5,0"   x:Name="hlbViewExamination" Click="hlbViewExamination_Click" ></HyperlinkButton>
                                                </DataTemplate>
                                            </data:DataGridTemplateColumn.CellTemplate>
                                        </data:DataGridTemplateColumn>
                                        
                                        <!--<data:DataGridTemplateColumn >
                                            <data:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <HyperlinkButton ToolTipService.ToolTip="Print Details" VerticalAlignment="Center" Padding="2" IsTabStop="False" Click="HyperlinkButton_Click_1">
                                                        <Image Source="../Images/xmag.png" Height="25" Width="25"/>
                                                    </HyperlinkButton>
                                                </DataTemplate>
                                            </data:DataGridTemplateColumn.CellTemplate>
                                        </data:DataGridTemplateColumn>-->
                                        <data:DataGridTextColumn Binding="{Binding AddedDateTime,Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}" Header="Date" />
                                        <!--<data:DataGridTextColumn Binding="{Binding Clinic}"  Header="Clinic"/>-->
                                        <data:DataGridTextColumn Binding="{Binding Medical}"  Header="Medical" Visibility="Collapsed"/>
                                        <data:DataGridTextColumn Binding="{Binding Surgical}"  Header="Surgical" Visibility="Collapsed"/>
                                        <data:DataGridTextColumn Binding="{Binding LMPDate}"  Header="LMP Date" Visibility="Collapsed"/>
                                        <data:DataGridTextColumn Binding="{Binding MarriedSince}"  Header="Married Since" Visibility="Collapsed"/>
                                        <data:DataGridTextColumn Binding="{Binding PreviousIUI}"  Header="Previous IUI"  Visibility="Collapsed"/>
                                        <data:DataGridTextColumn Binding="{Binding Uterus}"  Header="Uterus" Visibility="Collapsed"/>
                                        <data:DataGridTextColumn Binding="{Binding Tubes}"  Header="Tubes" Visibility="Collapsed"/>
                                        <data:DataGridTextColumn Binding="{Binding Ovaries}"  Header="Ovaries" Visibility="Collapsed"/>

                                        <data:DataGridTextColumn Binding="{Binding Volume}"  Header="Volume" Visibility="Collapsed"/>
                                        <data:DataGridTextColumn Binding="{Binding TotalSpermCount}"  Header="Total Sperm Count" Visibility="Collapsed"/>
                                        <!--<data:DataGridTextColumn Binding="{Binding DocName}"  Header="Tubes" Visibility="Collapsed"/>
                                        <data:DataGridTextColumn Binding="{Binding DocName}"  Header="Ovaries" Visibility="Collapsed"/>-->
                                        <data:DataGridTextColumn Binding="{Binding DoneBy}"  Header="Doctor" Visibility="Collapsed"/>

                                        <data:DataGridTextColumn Binding="{Binding DocName}"  Header="Doctor" Visibility="Collapsed" />
                                        <data:DataGridTextColumn Binding="{Binding StaffName}"  Header="Staff" Visibility="Collapsed" />
                                        <data:DataGridTextColumn Binding="{Binding DocName}" Header="DoneBy" Visibility="Collapsed"/>
                                        <data:DataGridTemplateColumn>
                                            <data:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <HyperlinkButton Background="White" ToolTipService.ToolTip="Print Details" VerticalAlignment="Center" Padding="5,0,5,0" IsTabStop="False" Click="HyperlinkButton_Click">
                                                        <Image  Height="16" Stretch="Fill" Source="/PalashDynamics;component/Icons/Print_32.png"/>
                                                    </HyperlinkButton>
                                                </DataTemplate>
                                            </data:DataGridTemplateColumn.CellTemplate>
                                        </data:DataGridTemplateColumn>
                                        <!--<data:DataGridTextColumn Binding="{Binding Complaints}"  Header="Chief Complaint" />
                                        <data:DataGridTextColumn Binding="{Binding VisitType}"  Header="Visit Type" />-->
                                    </data:DataGrid.Columns>
                                </data:DataGrid>
                            </controlsToolkit:DockPanel>
                        </Grid>
                    </blacklight:DragDockPanel>
                </blacklight:DragDockPanelHost>
            </controls:TabItem>
            <controls:TabItem  Style="{StaticResource TabItemStyle}" x:Name="tabEMRName" Padding="0" Margin="0" Header="Details" Visibility="Collapsed">
                <ContentControl x:Name="IVFTemplate" Grid.Row="1" Template="{StaticResource FilledContentControlTemplate}"></ContentControl>
            </controls:TabItem>
        </controls:TabControl>
       
        <controlsToolkit:DockPanel x:Name="docFooter" controlsToolkit:DockPanel.Dock="Bottom" Grid.Row="2">
            <controlsToolkit:DockPanel Margin="2" controlsToolkit:DockPanel.Dock="Top">
                <StackPanel Grid.Row="3" x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                    <StackPanel x:Name="SaveCommandPanel" Orientation="Horizontal"  Margin="0,0,0,0">
                        <ToggleButton x:Name="cmdNew" Content="New"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="cmdNew_Click" TabIndex="3"></ToggleButton>
                        <ToggleButton x:Name="CmdClose"  Grid.Row="4" Content="Close" MinWidth="50" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="CmdClose_Click" TabIndex="14" />                        
                    </StackPanel>
                </StackPanel>
            </controlsToolkit:DockPanel>
        </controlsToolkit:DockPanel>

    </Grid>
</UserControl>
