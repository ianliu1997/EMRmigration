<UserControl x:Class="DataDrivenApplication.TemplateDesigner"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    >
    <Grid x:Name="LayoutRoot" Background="White" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">

        <Border x:Name="Container" BorderBrush="{StaticResource BorderDefault}" BorderThickness="1,1,1,1" CornerRadius="5,5,5,5" Padding="5,5,5,5" Margin="0,8,0,0" >
            <Grid Margin="5,15,5,5">
                <StackPanel>
                    <TextBlock Text="Form Name:" TextWrapping="Wrap"/>
                    <TextBox Text="" TextWrapping="Wrap" Width="250" x:Name="tbTitle" Margin="0,0,0,4" Style="{StaticResource TextBoxDefault}" BorderBrush="{StaticResource BorderDefault}" TabIndex="1"/>
                    <TextBlock Text="Description :" TextWrapping="Wrap" Margin="0,0,0,0"/>
                    <TextBox x:Name="tbDescription" Margin="0,0,0,10" Width="250" Height="100"  Style="{StaticResource TextBoxDefault}" BorderBrush="{StaticResource BorderDefault}" TabIndex="2"/>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,10" HorizontalAlignment="Right">
                        <Button x:Name="btnLogin" Click="btnCreateForm_Click" Content="Create Form" Margin="0,0,0,0"  Style="{StaticResource ButtonDefault}" FontWeight="Bold" FontFamily="Portable User Interface" Foreground="{StaticResource Heading}" TabIndex="3" />
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
        <Border HorizontalAlignment="Left" Margin="8,0,0,0" x:Name="ContainerTitle" VerticalAlignment="Top" Background="{StaticResource BackgroundDefault}" BorderBrush="{StaticResource BorderDefault}" BorderThickness="1,1,1,1" CornerRadius="5,5,5,5" RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="0.994"/>
                    <SkewTransform AngleX="-20"/>
                    <RotateTransform/>
                    <TranslateTransform X="3.627" Y="0.063"/>
                </TransformGroup>
            </Border.RenderTransform>
            <TextBlock x:Name="FormTitle" Text="Form Details" FontFamily="Portable User Interface" Margin="10,1,10,1" Foreground="{StaticResource Heading}" FontWeight="Bold"/>
        </Border>
    </Grid>
</UserControl>
