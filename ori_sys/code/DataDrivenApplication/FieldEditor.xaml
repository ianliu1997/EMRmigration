<controls:ChildWindow x:Class="DataDrivenApplication.FieldEditor"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:local="clr-namespace:DataDrivenApplication" Style="{StaticResource ChildWindowDefault}"
           Title="FormEditor" Width="680" Height="650" xmlns:vsm="clr-namespace:System.Windows;assembly=System.Windows"
           xmlns:Common="clr-namespace:DataDrivenApplication"           >
    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Themes/Generic1.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:ChildWindow.Resources>
    <local:Window x:Name="Window"  OnCloseButtonClick="Window_OnCloseButtonClick" Margin="5">
        <Grid Margin="-5" >
            <Border x:Name="Container" BorderBrush="{StaticResource BorderDefault}" BorderThickness="1,1,1,1" CornerRadius="5,5,5,5" Padding="5,5,5,5" Margin="0,8,0,0" >
                <Grid x:Name="LayoutRoot" Margin="0,1,0,1">
                    <StackPanel  Orientation="Horizontal" x:Name="ItemListToolbar" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,0,0,0">
                        <Button x:Name="DeleteItemButton" x:FieldModifier="public" Style="{StaticResource ButtonDefault}" Foreground="{StaticResource Heading}" FontFamily="Portable User Interface" FontWeight="Bold" Margin="0,0,5,0" Padding="10,3,10,3" TabIndex="3" Click="CancelButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <Common:XamlCross Width="10" Height="10" Margin="0,0,5,0"/>
                                <TextBlock Text="Cancel" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Button>
                        <Button x:Name="AddItemButton" x:FieldModifier="public" Style="{StaticResource ButtonDefault}" Foreground="{StaticResource Heading}" FontFamily="Portable User Interface" FontWeight="Bold" Margin="0,0,0,0" Padding="10,3,10,3" TabIndex="1" Click="AddItemButton_Click">
                            <StackPanel Orientation="Horizontal">
                                <Common:XamlCheckmark Width="13" Height="13" Margin="0,0,5,0" RenderTransformOrigin="0.5,0.5">
                                </Common:XamlCheckmark>
                                <TextBlock Text="Save" TextWrapping="Wrap"/>
                            </StackPanel>
                        </Button>

                    </StackPanel>

                    <Border  BorderThickness="1,1,1,1" Margin="0,27,0,0" BorderBrush="{StaticResource BorderDefault}" CornerRadius="5,5,5,5" Background="{StaticResource BackgroundDefault}">
                        <Grid Margin="2" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Grid.Row="0" Text="Title :" TextWrapping="Wrap" Margin="2"/>
                            <TextBox Grid.Column="1" Grid.Row="0" Text="" TextWrapping="Wrap" x:Name="tbTitle" Margin="2" Style="{StaticResource TextBoxDefault}" BorderBrush="{StaticResource BorderDefault}"/>

                            <TextBlock Grid.Column="0" Grid.Row="1" Text="Name :" TextWrapping="Wrap" Margin="2"/>
                            <TextBox Grid.Column="1" Grid.Row="1" Text="" TextWrapping="Wrap" x:Name="tbControlName" Margin="2" Style="{StaticResource TextBoxDefault}" BorderBrush="{StaticResource BorderDefault}"/>
                            
                            <TextBlock Grid.Column="0" Grid.Row="2" Text="Required :" TextWrapping="Wrap" Margin="2"/>
                            <CheckBox IsThreeState="False" Grid.Column="2" Grid.Row="2"  x:Name="IsRequired" Margin="2" Style="{StaticResource CheckBoxDefault}" BorderBrush="{StaticResource BorderDefault}"/>

                            <TextBlock Grid.Column="0" Grid.Row="3" Text="ToolTip :" TextWrapping="Wrap" Margin="2"/>
                            <CheckBox Grid.Column="1" Grid.Row="3" IsThreeState="False" x:Name="IsToolTip" Margin="2" Style="{StaticResource CheckBoxDefault}" BorderBrush="{StaticResource BorderDefault}" Checked="IsToolTip_Checked" Unchecked="IsToolTip_Unchecked"/>
                            

                            <TextBlock Visibility="Collapsed" x:Name="txtBlockToolTip" Grid.Column="0" Grid.Row="4" Text="ToolTip Text :" TextWrapping="Wrap" Margin="2"/>
                            <TextBox Visibility="Collapsed" AcceptsReturn="True" Height="65" VerticalScrollBarVisibility="Visible" Grid.Column="1" Grid.Row="4" TextWrapping="Wrap" x:Name="tbToolTip" Margin="2" Style="{StaticResource TextBoxDefault}" BorderBrush="{StaticResource BorderDefault}"/>

                            <TextBlock Grid.Column="0" Grid.Row="5" Text="Field Type :" TextWrapping="Wrap" Margin="2"/>
                            <ComboBox x:Name="fdType" Grid.Row="5" Grid.Column="1" DisplayMemberPath="Title" Style="{StaticResource ComboBoxDefault}" SelectionChanged="fdType_SelectionChanged" Margin="2"/>

                            <TextBlock Grid.Column="0" Grid.Row="6" Text="Field Settings :" TextWrapping="Wrap" Margin="2" Visibility="Collapsed"/>
                            <Grid x:Name="fdOptions" Grid.Row="6" Grid.Column="1" >
                                <Grid x:Name="HyperlinkDataTypeSetting" Visibility="Collapsed">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <!--<TextBlock x:Name="txtBlockURL" Height="25" Grid.Column="0" Text="URL :" TextWrapping="Wrap" Margin="2,2,2,2"/>-->
                                    <!--<TextBox  Grid.Column="1" TextWrapping="Wrap" x:Name="tbURL" Margin="2,2,2,2" Style="{StaticResource TextBoxDefault}" BorderBrush="{StaticResource BorderDefault}"/>-->
                                    <Grid Grid.Row="0" Background="White"  Margin="10,0,0,0" Height="200">
                                        <Border  BorderBrush="{StaticResource BorderDefault}" BorderThickness="1,1,1,1" CornerRadius="5,5,5,5" Padding="5,5,5,5" Margin="0,8,0,0" >
                                            <Grid Margin="5,15,5,5">
                                                <ScrollViewer Style="{StaticResource ScrollViewerStyle1}" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Auto">
                                                    <ListBox x:Name="lstFiles" SelectionMode="Single" ></ListBox>
                                                </ScrollViewer>
                                            </Grid>
                                        </Border>
                                        <Border HorizontalAlignment="Left" Margin="8,0,0,0"  VerticalAlignment="Top" Background="{StaticResource BackgroundDefault}" BorderBrush="{StaticResource BorderDefault}" BorderThickness="1,1,1,1" CornerRadius="5,5,5,5" RenderTransformOrigin="0.5,0.5">
                                            <Border.RenderTransform>
                                                <TransformGroup>
                                                    <ScaleTransform ScaleY="0.994"/>
                                                    <SkewTransform AngleX="-20"/>
                                                    <RotateTransform/>
                                                    <TranslateTransform X="3.627" Y="0.063"/>
                                                </TransformGroup>
                                            </Border.RenderTransform>
                                            <TextBlock  Text="Select File" FontFamily="Portable User Interface" Margin="10,1,10,1" Foreground="{StaticResource Heading}" FontWeight="Bold"/>
                                        </Border>
                                    </Grid>
                                    <Button x:Name="btnUpload" Grid.Row="1" Height="25" HorizontalAlignment="Left" Content="Upload File" Style="{StaticResource ButtonDefault}" Foreground="{StaticResource Heading}" FontFamily="Portable User Interface"  Margin="5,5,5,0" Padding="10,3,10,3" Click="btnUpload_Click"/>
                                </Grid>
                                <Grid x:Name="TextDataTypeSetting" Visibility="Collapsed">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel x:Name="optTextSettings" Orientation="Horizontal" HorizontalAlignment="Left">
                                        <RadioButton x:Name="rdbSingleLine" Content="Single Line" IsChecked="True" Click="rdbSingleLine_Click"></RadioButton>
                                        <RadioButton x:Name="rdbMultiMultiline" Content="Multi Line" Click="rdbMultiMultiline_Click"></RadioButton>
                                    </StackPanel>
                                    <TextBlock Grid.Column="0" Grid.Row="1" Text="Deafult Text :" TextWrapping="Wrap" Margin="2"/>
                                    <TextBox Grid.Column="1" Grid.Row="1" Text="" TextWrapping="Wrap" x:Name="tbDefaultText" Margin="2" Style="{StaticResource TextBoxDefault}" BorderBrush="{StaticResource BorderDefault}"/>
                                    <TextBox Visibility="Collapsed" AcceptsReturn="True" Height="65" VerticalScrollBarVisibility="Visible" Grid.Column="1" Grid.Row="1" TextWrapping="Wrap" x:Name="tbDefaultMultiText" Margin="2" Style="{StaticResource TextBoxDefault}" BorderBrush="{StaticResource BorderDefault}"/>
                                </Grid>

                                <Grid x:Name="BooleanDataTypeSetting" Visibility="Collapsed">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel x:Name="optBooleanSettings" Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left">
                                        <RadioButton x:Name="rdbCheckBox" Content="Checkbox" IsChecked="True"></RadioButton>
                                        <RadioButton x:Name="rdbYesNo" Content="Yes/No"></RadioButton>
                                    </StackPanel>
                                    <TextBlock Grid.Column="0" Grid.Row="1" Text="Deafult Value :" TextWrapping="Wrap" Margin="2"/>
                                    <StackPanel x:Name="optBooleanSettings1" Grid.Row="1" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Left">
                                        <RadioButton x:Name="rdbTrue" Content="True" ></RadioButton>
                                        <RadioButton x:Name="rdbFalse" Content="False" IsChecked="True"></RadioButton>
                                    </StackPanel>
                                </Grid>
                                <Grid x:Name="DateDataTypeSetting" Visibility="Collapsed">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                                        <TextBlock Text="Default Date :" TextWrapping="Wrap" Margin="2"/>
                                        <CheckBox IsThreeState="False" x:Name="IsDefaultDate" Margin="2" Style="{StaticResource CheckBoxDefault}" BorderBrush="{StaticResource BorderDefault}" Checked="IsDefaultDate_Checked"  Unchecked="IsDefaultDate_Unchecked"/>
                                    </StackPanel>
                                    <StackPanel Visibility="Collapsed" x:Name="optDateSettings" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left">
                                        <TextBlock Text="Deafult Date :" TextWrapping="Wrap" Margin="2"/>
                                        <TextBox  Text="System Date" Margin="2" Style="{StaticResource TextBoxDefault}" BorderBrush="{StaticResource BorderDefault}" IsReadOnly="True"/>
                                        <ComboBox x:Name="cmbDateMode" Margin="2" Style="{StaticResource ComboBoxDefault}" Width="50"></ComboBox>
                                        <TextBox x:Name="tbDateDays" TextAlignment="Right" Width="50" Text="0" Margin="2" Style="{StaticResource TextBoxDefault}" BorderBrush="{StaticResource BorderDefault}" TextChanged="tbDateDays_TextChanged" KeyDown="tbDateDays_KeyDown"/>
                                    </StackPanel>
                                </Grid>
                                <Grid x:Name="ListDataTypeSetting" Visibility="Collapsed">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <TextBox x:Name="fdOptionList"  AcceptsReturn="True" Height="80" VerticalScrollBarVisibility="Visible" Margin="2" Style="{StaticResource TextBoxDefault}" BorderBrush="{StaticResource BorderDefault}" LostFocus="fdOptionList_LostFocus">

                                    </TextBox>
                                    <StackPanel x:Name="optListSettings" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left">
                                        <RadioButton x:Name="rdbSingleChoice" Click="rdbSC1_Click" Content="Single Choice" IsChecked="True"></RadioButton>
                                        <RadioButton x:Name="rdbMultiChoice" Click="rdbSC2_Click" Content="Multiple Choice"></RadioButton>
                                    </StackPanel>
                                    <TextBlock x:Name="rtbCT"  Grid.Row="2" Text="Control Type"></TextBlock>
                                    <StackPanel x:Name="rdbSingleChoiceSettings" Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Left" Visibility="Visible">
                                        <RadioButton x:Name="rdbSC2"  Content="Combo Box" IsChecked="True"></RadioButton>
                                        <!--<RadioButton x:Name="rdbSC1"  Content="Radio Button" ></RadioButton>-->
                                    </StackPanel>
                                    <StackPanel x:Name="rdbSingleChoiceSettings2" Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Left" Visibility="Visible">
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="0" Text="Default Value:" TextWrapping="Wrap" Margin="2"/>
                                        <ComboBox x:Name="listdefaultValue" Width="200" DisplayMemberPath="Title" Margin="2"></ComboBox>
                                        <Button x:Name="clrDefListVal" Content="x" Click="clrDefListVal_Click"></Button>
                                    </StackPanel>
                                </Grid>
                                <Grid x:Name="LookupDataTypeSetting" Visibility="Collapsed">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <!--<TextBox x:Name="fdOptionList"  AcceptsReturn="True" Height="80" VerticalScrollBarVisibility="Visible" Margin="2" Style="{StaticResource TextBoxDefault}" BorderBrush="{StaticResource BorderDefault}" LostFocus="fdOptionList_LostFocus">

                                    </TextBox>-->

                                    <TextBlock x:Name="rtbSource" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="0" Grid.Row="0" Text="Source"></TextBlock>
                                    <ComboBox x:Name="listSelectedSource" Width="200" HorizontalAlignment="Left" Grid.Column="1" DisplayMemberPath="Title" Margin="2"></ComboBox>

                                    <StackPanel x:Name="optLookupSettings" Grid.Column="1" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left">
                                        <RadioButton x:Name="rdbLuSingleChoice"  Content="Single Choice" IsChecked="True" Click="rdbLuSingleChoice_Click"></RadioButton>
                                        <RadioButton x:Name="rdbLuMultiChoice"  Content="Multiple Choice" Click="rdbLuMultiChoice_Click"></RadioButton>
                                    </StackPanel>

                                    <TextBlock x:Name="rtbAltText" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="0" Grid.Row="2" Text="Alternate Text"></TextBlock>
                                    <CheckBox x:Name="chkAltText" IsChecked="False" IsThreeState="False" Grid.Column="1" Grid.Row="2"></CheckBox>
                                    <!--<TextBlock x:Name="rtbLu" Grid.Column="0" Grid.Row="2" Text="Control Type"></TextBlock>
                                    <StackPanel x:Name="rdblookUpSefaultSetting2" Grid.Column="1" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Visibility="Visible">
                                        <ComboBox x:Name="listLudefaultValue" Width="200" DisplayMemberPath="Title" Margin="2"></ComboBox>
                                        <Button x:Name="clrLUDefListVal" Content="x" Click="clrDefLuListVal_Click"></Button>
                                    </StackPanel>-->

                                </Grid>
                                <Grid x:Name="DecimalDataTypeSetting" Visibility="Collapsed">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="0" Grid.Row="0" Text="Unit:" TextWrapping="Wrap" Margin="2"/>
                                    <TextBox Grid.Column="1" Grid.Row="0" Text="" TextWrapping="Wrap" x:Name="tbDecUnit" Margin="2" Style="{StaticResource TextBoxDefault}" BorderBrush="{StaticResource BorderDefault}"/>

                                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="0" Grid.Row="1" Text="Default Value:" TextWrapping="Wrap" Margin="2"/>
                                    <TextBox Grid.Column="1" Grid.Row="1" Text="" TextWrapping="Wrap" x:Name="tbDecDefaultValue" Margin="2" Style="{StaticResource TextBoxDefault}" BorderBrush="{StaticResource BorderDefault}"/>

                                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="0" Grid.Row="2" Text="Minimum Value:" TextWrapping="Wrap" Margin="2"/>
                                    <TextBox Grid.Column="1" Grid.Row="2" Text="" TextWrapping="Wrap" x:Name="tbDecMinVal" Margin="2" Style="{StaticResource TextBoxDefault}" BorderBrush="{StaticResource BorderDefault}"/>

                                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="0" Grid.Row="3" Text="Maximum Value:" TextWrapping="Wrap" Margin="2"/>
                                    <TextBox Grid.Column="1" Grid.Row="3" Text="" TextWrapping="Wrap" x:Name="tbDecMaxVal" Margin="2" Style="{StaticResource TextBoxDefault}" BorderBrush="{StaticResource BorderDefault}"/>
                                </Grid>

                                <Grid x:Name="MedicationDataTypeSetting" Visibility="Collapsed">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="0" Text="Therapeutic Class :" TextWrapping="Wrap" Margin="3"/>
                                    <ComboBox x:Name="listSelectedDrugTypeSource" SelectedItem="{Binding MasterListItem,Mode=OneWay}" SelectedValuePath="ID" HorizontalAlignment="Stretch" DisplayMemberPath="Description" Grid.Column="1" Margin="3" SelectionChanged="listSelectedDrugTypeSource_SelectionChanged"></ComboBox>

                                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="1" Text="Molecule Type :" TextWrapping="Wrap" Margin="3"/>
                                    <ComboBox x:Name="listSelectedMoleculeTypeSource" SelectedItem="{Binding MasterListItem,Mode=OneWay}" SelectedValuePath="ID" HorizontalAlignment="Stretch" DisplayMemberPath="Description" Grid.Column="1" Grid.Row="1" Margin="3" SelectionChanged="listSelectedDrugTypeSource_SelectionChanged"></ComboBox>

                                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="2" Text="Group :" TextWrapping="Wrap" Margin="3"/>
                                    <ComboBox x:Name="listSelectedGroupTypeSource" SelectedItem="{Binding MasterListItem,Mode=OneWay}" SelectedValuePath="ID" HorizontalAlignment="Stretch" DisplayMemberPath="Description" Grid.Column="1" Grid.Row="2" Margin="3" SelectionChanged="listSelectedDrugTypeSource_SelectionChanged"></ComboBox>

                                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="3" Text="Category Type :" TextWrapping="Wrap" Margin="3"/>
                                    <ComboBox x:Name="listSelectedCategoryTypeSource" SelectedItem="{Binding MasterListItem,Mode=OneWay}" SelectedValuePath="ID" HorizontalAlignment="Stretch" DisplayMemberPath="Description" Grid.Column="1" Grid.Row="3" Margin="3" SelectionChanged="listSelectedDrugTypeSource_SelectionChanged"></ComboBox>

                                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="4" Text="Pregnancy Class :" TextWrapping="Wrap" Margin="3"/>
                                    <ComboBox x:Name="listSelectedPregnancyTypeSource" SelectedItem="{Binding MasterListItem,Mode=OneWay}" SelectedValuePath="ID" HorizontalAlignment="Stretch" DisplayMemberPath="Description" Grid.Column="1" Grid.Row="4" Margin="3" SelectionChanged="listSelectedDrugTypeSource_SelectionChanged"></ComboBox>

                                    <Grid x:Name="grdDrugList" Visibility="Collapsed" MinHeight="230" Height="230" Grid.Row="5" Grid.ColumnSpan="2" Margin="2">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition/>
                                        </Grid.RowDefinitions>
                                        <StackPanel  Margin="5" Grid.ColumnSpan="3">
                                            <TextBlock Text="Source Drug List" HorizontalAlignment="Center"/>
                                            <ListBox x:Name="lstSourceDrug" Height="200" DisplayMemberPath="DrugName" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto"  SelectionMode="Multiple" ></ListBox>
                                        </StackPanel>
                                        <StackPanel Grid.Column="2" Margin="5">
                                            <TextBlock x:Name="lblTargetDrug" Text="Target Drug List" HorizontalAlignment="Center"/>
                                            <ListBox x:Name="lstTargetDrug" Height="200" DisplayMemberPath="DrugName" Width="160" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto"  SelectionMode="Multiple"></ListBox>
                                        </StackPanel>
                                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                            <Button x:Name="btnMove" Content="Move >" Height="30" Margin="5" Click="btnMove_Click"></Button>
                                            <Button x:Name="btnMoveAll" Content="Move All >" Height="30" Margin="5" Click="btnMoveAll_Click"></Button>
                                            <Button x:Name="btnRemove" Content="Remove" Height="30" Margin="5" Click="btnRemove_Click"></Button>
                                            <Button x:Name="btnRemoveAll" Content="Remove All" Height="30" Margin="5" Click="btnRemoveAll_Click"></Button>
                                        </StackPanel>


                                    </Grid>

                                </Grid>

                                <Grid x:Name="ListOfCheckBoxesDataTypeSetting" Visibility="Collapsed">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>

                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="0" Text="List Type :" TextWrapping="Wrap" Margin="2"/>
                                    <ComboBox x:Name="listOfCheckBoxesTypeSource" HorizontalAlignment="Left" Grid.Column="1" Margin="2"></ComboBox>
                                </Grid>

                                <Grid x:Name="AutomatedListDataTypeSetting" Visibility="Collapsed">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Left" >
                                        <TextBlock Margin="2,2,2,5" Text="Is Dynamically Loaded:  "></TextBlock>
                                        <CheckBox x:Name="chkIsDynamic" Margin="2,2,2,5" IsChecked="False"></CheckBox>
                                    </StackPanel>
                                    <StackPanel x:Name="optAutoListSettings" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left">
                                        <TextBlock x:Name="tbAutoControlType" Text="Control Type :  " Margin="2,2,2,5"></TextBlock>
                                        <RadioButton x:Name="rdbCombo"  Content="Combo Box" Margin="2,2,2,5" IsChecked="True" Click="rdbCombo_Click"></RadioButton>
                                        <RadioButton x:Name="rdbList"  Content="List Box" Margin="2,2,2,5" Click="rdbList_Click"></RadioButton>
                                        <RadioButton x:Name="rdbCheckList"  Content="Check List Box" Margin="2,2,2,5" Click="rdbCheckList_Click"></RadioButton>
                                    </StackPanel>

                                    <StackPanel x:Name="rdbListSettings" Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Visibility="Collapsed">
                                        <TextBlock x:Name="tbAutoSelectionMode" Margin="2,2,2,5" Text="Selection Mode :  "></TextBlock>
                                        <RadioButton x:Name="rdbSingle" Content="Single" Margin="2,2,2,5" IsChecked="True"></RadioButton>
                                        <RadioButton x:Name="rdbMultiple" Content="Multiple" Margin="2,2,2,5" ></RadioButton>                                        
                                    </StackPanel>
                                    <Grid Grid.Row="3" Margin="2,2,2,5">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="0" Grid.Row="0" Text="Table:" TextWrapping="Wrap" Margin="2"/>
                                        <StackPanel Orientation="Horizontal" Grid.Column="1">
                                        <ComboBox x:Name="listSelectedTableSource" HorizontalAlignment="Left" SelectedItem="{Binding MasterListItem,Mode=OneWay}"  SelectedValuePath="ID" DisplayMemberPath="Description" Margin="2" SelectionChanged="listSelectedTableSource_SelectionChanged"></ComboBox>
                                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Left" Text="Display Member:" TextWrapping="Wrap" Margin="2"/>
                                        <ComboBox x:Name="listTableColumnSource" HorizontalAlignment="Left" SelectedItem="{Binding MasterListItem,Mode=OneWay}"  SelectedValuePath="ID" DisplayMemberPath="Description" Margin="2" SelectionChanged="listTableColumnSource_SelectionChanged"></ComboBox>                                            
                                        </StackPanel>
                                        <Grid x:Name="grdAutoList" Visibility="Collapsed" Height="300" Grid.Row="1" Grid.ColumnSpan="2" Margin="2">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition/>
                                            </Grid.RowDefinitions>
                                            <StackPanel  Margin="5">
                                                <TextBlock Text="Source List" HorizontalAlignment="Center"/>
                                                <ListBox x:Name="lstSourceAuto" Height="250" DisplayMemberPath="Description" Width="160" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto"  SelectionMode="Multiple" ></ListBox>
                                            </StackPanel>
                                            <StackPanel Grid.Column="2" Margin="5">
                                                <TextBlock Text="Target List" HorizontalAlignment="Center"/>
                                                <ListBox x:Name="lstTargetAuto" Height="250" DisplayMemberPath="Description" Width="160" ScrollViewer.VerticalScrollBarVisibility="Auto" ScrollViewer.HorizontalScrollBarVisibility="Auto"  SelectionMode="Multiple"></ListBox>
                                            </StackPanel>
                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <Button x:Name="btnAutoMove" Content="Move >" Height="30" Margin="5" Click="btnAutoMove_Click"></Button>
