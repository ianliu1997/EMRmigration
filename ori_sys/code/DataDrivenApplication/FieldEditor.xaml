                                    <StackPanel x:Name="rdbInvestListSettings" Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Visibility="Collapsed">
                                        <TextBlock x:Name="tbInvestAutoSelectionMode" Margin="2,2,2,5" Text="Selection Mode :  "></TextBlock>
                                        <RadioButton x:Name="rdbInvestSingle" Content="Single" Margin="2,2,2,5" IsChecked="True"></RadioButton>
                                        <RadioButton x:Name="rdbInvestMultiple" Content="Multiple" Margin="2,2,2,5" ></RadioButton>
