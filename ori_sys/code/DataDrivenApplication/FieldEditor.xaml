                                <TextBlock x:Name="lbcTitle" Margin="0,0,10,0" Grid.Column="0" Text="{Binding Title}"></TextBlock>
                                <ComboBox x:Name="lbcCondition" Margin="0,0,10,0" Grid.Column="1" Width="200" DisplayMemberPath="Title"></ComboBox>
                                <Grid x:Name="cValueContainer" Margin="0,0,10,0" Grid.Column="2" Width="200">
