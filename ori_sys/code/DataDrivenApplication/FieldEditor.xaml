                                        <RadioButton x:Name="coptYes" Content="Yes"></RadioButton>
                                        <RadioButton x:Name="coptNo" Content="No"></RadioButton>
                                    </StackPanel>
                                    <TextBox x:Name="cdecREf" Visibility="Collapsed" Margin="2" Style="{StaticResource TextBoxDefault}" TextAlignment="Right" Width="100"></TextBox>
