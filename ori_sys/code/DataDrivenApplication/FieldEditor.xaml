                                                <Button x:Name="btnInvestAutoRemove" Content="Remove" Height="30" Margin="5" Click="btnInvestAutoRemove_Click"></Button>
                                                <Button x:Name="btnInvestAutoRemoveAll" Content="Remove All" Height="30" Margin="5" Click="btnInvestAutoRemoveAll_Click"></Button>
                                            </StackPanel>
