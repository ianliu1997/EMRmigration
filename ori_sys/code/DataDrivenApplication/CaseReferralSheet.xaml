<UserControl x:Class="DataDrivenApplication.CaseReferralSheet"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Width="800" Height="Auto" 
    >
    
    <Grid x:Name="LayoutRoot" Background="White" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Height="Auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0"  Source="Images/BlankImage.png" Height="60" Width="100" Margin="5,5,5,5"/>
            <TextBlock Grid.Column="1" Text="Case Referral Sheet" Margin="5,5,5,5" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" Foreground="#BD4B91"></TextBlock>
            <Image Grid.Column="2"  Source="Images/razi logo.png" Height="60" Width="100" Margin="5,5,5,5"/>                        
        </Grid>
        
        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>                
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition />
                <ColumnDefinition Width="50"/>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.RowSpan="4" Text="Particulars" HorizontalAlignment="Left" VerticalAlignment="Center">
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <!--<ScaleTransform ScaleY="0.994"/>-->
                        <!--<SkewTransform AngleX="-20"/>-->
                        <RotateTransform Angle="-90"/>
                        <TranslateTransform X="10" Y="30"/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
            <TextBlock Grid.Column="0" Text="Name" Margin="50,2,2,2"></TextBlock>
            <TextBox Grid.Column="1" x:Name="TxtName" Grid.ColumnSpan="3" Margin="2,2,2,2" ></TextBox>
            <TextBlock Grid.Column="4" Text="Date" Margin="2,2,2,2"></TextBlock>
            <TextBox Grid.Column="5" x:Name="TxtDate" Margin="2,2,2,2"></TextBox>

            <TextBlock Grid.Column="0" Grid.Row="1" Text="Age" Margin="50,2,2,2"></TextBlock>
            <TextBox Grid.Column="1" Grid.Row="1" x:Name="TxtAge" Margin="2,2,2,2"></TextBox>
            <TextBlock Grid.Column="2" Grid.Row="1" Text="Gender" Margin="2,2,2,2"></TextBlock>
            <TextBox Grid.Column="3" Grid.Row="1" x:Name="TxtGender" Margin="2,2,2,2"></TextBox>
            <TextBlock Grid.Column="4" Grid.Row="1" Grid.RowSpan="2" Text="Clinic Ref No." Margin="2,2,2,2"></TextBlock>
            <TextBox Grid.Column="5" Grid.Row="1" Grid.RowSpan="2" x:Name="TxtClinicRefNo" Margin="2,2,2,2"></TextBox>
            
            <TextBlock Grid.Column="0" Grid.Row="2" Text="Address" Margin="50,2,2,2"></TextBlock>
            <TextBox Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="2" x:Name="TxtAdd" Margin="2,2,2,2"></TextBox>

            <TextBlock Grid.Column="0" Grid.Row="3" Text="Occupation" Margin="50,2,2,2"></TextBlock>
            <TextBox Grid.Column="1" Grid.Row="3" x:Name="TxtOccupation" Grid.ColumnSpan="3" Margin="2,2,2,2"></TextBox>
            <TextBlock Grid.Column="4" Grid.Row="3" Text="Phone" Margin="2,2,2,2"></TextBlock>
            <TextBox Grid.Column="5" Grid.Row="3" x:Name="TxtPhone" Margin="2,2,2,2"></TextBox>
        </Grid>

        <Grid Grid.Row="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>                
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>                
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition />                
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.RowSpan="3" Text="Referral Details" HorizontalAlignment="Left" VerticalAlignment="Center" >
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <!--<ScaleTransform ScaleY="0.994"/>-->
                        <!--<SkewTransform AngleX="-20"/>-->
                        <RotateTransform Angle="-90"/>
                        <TranslateTransform X="10" Y="50"/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
            <TextBlock Grid.Column="0" Text="Referred By" Margin="50,2,2,2"></TextBlock>
            <TextBox Grid.Column="1" x:Name="TxtReferredBy" Margin="2,2,2,2"></TextBox>
            <TextBlock Grid.Column="2" Text="Referred To" Margin="2,2,2,2"></TextBlock>
            <TextBox Grid.Column="3" x:Name="TxtReferredTo" Margin="2,2,2,2"></TextBox>

            <TextBlock Grid.Column="0" Grid.Row="1" Text="Clinic No." Margin="50,2,2,2"></TextBlock>
            <TextBox Grid.Column="1" Grid.Row="1" x:Name="TxtClinicNo1" Margin="2,2,2,2"></TextBox>
            <TextBlock Grid.Column="2" Grid.Row="1" Text="clinic No." Margin="2,2,2,2"></TextBlock>
            <TextBox Grid.Column="3" Grid.Row="1" x:Name="TxtClinicNo2" Margin="2,2,2,2"></TextBox>
            
            <TextBlock Grid.Column="0" Grid.Row="2" Text="Mobile Number" Margin="50,2,2,2"></TextBlock>
            <TextBox Grid.Column="1" Grid.Row="2" x:Name="TxtMobile1" Margin="2,2,2,2"></TextBox>
            <TextBlock Grid.Column="2" Grid.Row="2" Text="Mobile Number" Margin="2,2,2,2"></TextBlock>
            <TextBox Grid.Column="3" Grid.Row="2" x:Name="TxtMobile2" Margin="2,2,2,2"></TextBox>            
        </Grid>
    
        <Grid Grid.Row="3" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Provisional Dignosis " Margin="50,2,2,2" ></TextBlock>
            <TextBox Grid.Column="1" x:Name="TxtProDiag" Margin="2" Foreground="Blue" ></TextBox>
            <TextBlock Grid.Column="2" Text="Chief Complaints " Margin="2" ></TextBlock>
            <TextBox Grid.Column="3" x:Name="TxtChiefComp" Margin="2" Foreground="Blue" ></TextBox>
        </Grid>

        <Grid Grid.Row="4" Margin="10">
            <Grid.ColumnDefinitions>                
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Patient Details" HorizontalAlignment="Left" VerticalAlignment="Center" >
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <!--<ScaleTransform ScaleY="0.994"/>-->
                        <!--<SkewTransform AngleX="-20"/>-->
                        <RotateTransform Angle="-90"/>
                        <TranslateTransform X="10" Y="50"/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
            <TextBlock Grid.Column="0" Text="Summary  reasons for referring the patient" Width="80" TextWrapping="Wrap" VerticalAlignment="Center" Margin="50,2,2,2"></TextBlock>            
            <TextBox Grid.Column="1" x:Name="TxtSummary" Margin="2" MinHeight="120" AcceptsReturn="True"></TextBox>
        </Grid>

        <Grid Grid.Row="5" Margin="10">
            <Grid.ColumnDefinitions>                
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Referral Doctor's Remarks" HorizontalAlignment="Left" VerticalAlignment="Center" >
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <!--<ScaleTransform ScaleY="0.994"/>-->
                        <!--<SkewTransform AngleX="-20"/>-->
                        <RotateTransform Angle="-90"/>
                        <TranslateTransform X="10" Y="85"/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
            <TextBlock Grid.Column="0" Text="Observation and Management" Width="80" TextWrapping="Wrap" VerticalAlignment="Center" Margin="50,2,2,2"></TextBlock>
            <TextBox Grid.Column="1" x:Name="TxtObservation" Margin="2" MinHeight="200" AcceptsReturn="True"></TextBox>
        </Grid>
        
        <TextBlock Grid.Row="6" Text="Signature of the Referred Doctor:" Margin="0,10,150,0" HorizontalAlignment="Right"></TextBlock>
    </Grid>
</UserControl>
