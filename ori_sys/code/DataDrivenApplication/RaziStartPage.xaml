<UserControl xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"  x:Class="DataDrivenApplication.RaziStartPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
>
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Style1.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <ControlTemplate x:Key="FilledContentControlTemplate" TargetType="ContentControl">
                <Grid>
                    <ContentPresenter />
                </Grid>
            </ControlTemplate>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="25"/>
            <RowDefinition/>
            <RowDefinition Height="25"/>
        </Grid.RowDefinitions>
        <VisualStateManager.VisualStateGroups>
            <VisualStateGroup x:Name="Views" >
                <VisualStateGroup.Transitions>
                    <VisualTransition GeneratedDuration="00:00:00.6000000">
                        <VisualTransition.GeneratedEasingFunction>
                            <CircleEase EasingMode="EaseInOut"/>
                        </VisualTransition.GeneratedEasingFunction>
                    </VisualTransition>
                </VisualStateGroup.Transitions>
                <VisualState x:Name="View1">
                    <Storyboard>
                        <DoubleAnimationUsingKeyFrames  BeginTime="00:00:00" Duration="00:00:00.0010000" Storyboard.TargetName="MainRegion" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)">
                            <EasingDoubleKeyFrame KeyTime="00:00:00" Value="-1200"/>
                        </DoubleAnimationUsingKeyFrames>
                        <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Duration="00:00:00.0010000" Storyboard.TargetName="MainRegion" Storyboard.TargetProperty="(UIElement.Opacity)">
                            <EasingDoubleKeyFrame KeyTime="00:00:00" Value="0"/>
                        </DoubleAnimationUsingKeyFrames>
                    </Storyboard>
                </VisualState>
                <VisualState x:Name="View2">
                    <Storyboard>

                        <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Duration="00:00:00.0000000" Storyboard.TargetName="MainRegion" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)">
                            <DiscreteDoubleKeyFrame  KeyTime="00:00:00" Value="0"/>
                        </DoubleAnimationUsingKeyFrames>
                        <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Duration="00:00:00.0010000" Storyboard.TargetName="MainRegion" Storyboard.TargetProperty="(UIElement.Opacity)">
                            <EasingDoubleKeyFrame KeyTime="00:00:00" Value="1"/>
                        </DoubleAnimationUsingKeyFrames>

                    </Storyboard>
                </VisualState>
                <VisualState x:Name="View3">
                    <Storyboard>
                        <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Duration="00:00:00.0010000" Storyboard.TargetName="MainHorizontalStack" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)">
                            <EasingDoubleKeyFrame KeyTime="00:00:00" Value="-2048.5"/>
                        </DoubleAnimationUsingKeyFrames>
                        <DoubleAnimationUsingKeyFrames BeginTime="00:00:00" Duration="00:00:00.0010000" Storyboard.TargetName="View3Content" Storyboard.TargetProperty="(UIElement.Opacity)">
                            <EasingDoubleKeyFrame KeyTime="00:00:00" Value="1"/>
                        </DoubleAnimationUsingKeyFrames>

                    </Storyboard>
                </VisualState>
            </VisualStateGroup>
        </VisualStateManager.VisualStateGroups>
        <Grid>
         
            <Viewbox HorizontalAlignment="Left"  Margin="10,0,0,0" Height="60">
                <Image  Source="Images/logo_shs.png" />
            </Viewbox>
            <TextBlock Text="Clinical Protocol Definition Tool" Margin="100,0,0,0" VerticalAlignment="Center" FontSize="24" Foreground="#BD4B91"></TextBlock>
            <StackPanel Margin="0,1,10,1" Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Right">
                <HyperlinkButton Content="User : "  TargetName="_blank" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5,0,5,0" Foreground="#15639C" />
                <HyperlinkButton Content="Admin"  TargetName="_blank" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5,0,5,0" Foreground="#15639C" />
                <HyperlinkButton Content="|" IsTabStop="False" TargetName="_blank" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5,0,5,0" Foreground="#15639C" />
                <HyperlinkButton Content="Role : "  TargetName="_blank" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5,0,5,0" Foreground="#15639C" />
                <HyperlinkButton Content="Administrator"  TargetName="_blank" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5,0,5,0" Foreground="#15639C" />
                <HyperlinkButton Content="|" IsTabStop="False" TargetName="_blank" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5,0,5,0" Foreground="#15639C" />
                <HyperlinkButton Content="Logout"  TargetName="_blank" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="5,0,5,0" Foreground="#15639C" />
            </StackPanel>
        </Grid>
        <Grid Grid.Row="1">
            <Rectangle x:Name="MainRect" Stroke="#885A2C" StrokeThickness="0"  Opacity="1" RadiusX="0" RadiusY="0"  IsHitTestVisible="False">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0.2,0" EndPoint="0.2,1">
                        <GradientStop Color="#EFC2DE" Offset="0"/>
                        <GradientStop Color="#BD4B91" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
        </Grid>
        <ContentControl x:Name="MainRegion" Grid.Row="2"   Canvas.ZIndex="1" Margin="0"  Template="{StaticResource FilledContentControlTemplate}"  >
            <ContentControl.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </ContentControl.RenderTransform>
        </ContentControl>
        <Grid Grid.Row="3">
            <Rectangle  Stroke="#885A2C" StrokeThickness="0"  Opacity="1" RadiusX="0" RadiusY="0"  IsHitTestVisible="False">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0.2,0" EndPoint="0.2,1">
                        <GradientStop Color="#EFC2DE" Offset="1"/>
                        <GradientStop Color="#BD4B91" Offset="0"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
        </Grid>
    </Grid>
</UserControl>

