<controls:ChildWindow x:Class="OPDModule.ItemList.NewDrugsForPatientPrescription"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"             
            xmlns:my="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"  
            xmlns:input="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input"  
            xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"  
            xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"  
            xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"
            xmlns:CustomCombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"           
            xmlns:local="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters" 
            xmlns:layoutToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Layout.Toolkit"                      
              Width ="900" Height="600"
                        xmlns:radiantq="clr-namespace:CIMS" 
                      xmlns:Grp="clr-namespace:Groupbox;assembly=Groupbox"
            Background="White"  Title="Drugs For Patient Prescription">

    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:DateTimeConverter x:Key="DateConverter" />           
        </ResourceDictionary>
    </controls:ChildWindow.Resources>

    <Grid x:Name="Root">
        <my:DockPanel LastChildFill="True" Margin="4">
            <Grid Width="Auto"  Margin="0" my:DockPanel.Dock="Top" DataContext="{Binding BizActionObject}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition  Width="Auto"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition />
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <TextBlock VerticalAlignment="Center" Grid.Column="0" Grid.Row="0"  Margin="4" Text="Store" HorizontalAlignment="Right"></TextBlock>
                <CustomCombo:AutoCompleteComboBox  TabIndex="3" Grid.Row="0" Grid.Column="1" Margin="4" x:Name="cmbStore" VerticalAlignment="Center" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" IsEnabled="False" ></CustomCombo:AutoCompleteComboBox>

                <ToggleButton x:Name="lnkAddItemsFromPrescription" Content="Get More Visit" Grid.Row="0" Grid.Column="5" Click="MoreVisit_Click"  Background="#000000" Margin="2,4" HorizontalAlignment="Right" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible"  Width="Auto" Height="Auto"></ToggleButton>

                <data:DataGrid Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="6" x:Name="dgPastVisitList" Margin="4" SelectionChanged="dgVisitList_SelectionChanged"  AutoGenerateColumns="False"  ItemsSource="{Binding}" IsReadOnly="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalScrollBarVisibility="Auto"   HorizontalScrollBarVisibility="Auto">
                    <data:DataGrid.Columns>
                        <data:DataGridTemplateColumn Header="Print">
                            <data:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <HyperlinkButton Background="White" ToolTipService.ToolTip="Print Details" VerticalAlignment="Center" Padding="5,0,5,0" IsTabStop="False" Click="printDrugDetails" >
                                        <Image  Height="16" Stretch="Fill" Source="/PalashDynamics;component/Icons/Print_32.png"/>
                                    </HyperlinkButton>
                                </DataTemplate>
                            </data:DataGridTemplateColumn.CellTemplate>
                        </data:DataGridTemplateColumn>
                        <data:DataGridTextColumn Binding="{Binding PastVisitDate}"  Header="Date" />
                        <data:DataGridTextColumn Binding="{Binding PastVisitInTime}" Header="Time"/>
                        <data:DataGridTextColumn Binding="{Binding VisitType}" Header="Visit Type"/>
                        <data:DataGridTextColumn Binding="{Binding Doctor}" Header="Doctor Name" />
                        <data:DataGridTextColumn Binding="{Binding Department}" Header="Department"/>
                        <data:DataGridTextColumn Binding="{Binding Unit}" Header="Clinic"/>
                        <data:DataGridTextColumn Binding="{Binding BalanceAmount}" Header="Balance"/>

                        <data:DataGridTemplateColumn>
                            <data:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <HyperlinkButton VerticalAlignment="Center"  Content="View"  Padding="5,0,5,0" Click="Edit_Click"  x:Name="hlbView"></HyperlinkButton>
                                </DataTemplate>
                            </data:DataGridTemplateColumn.CellTemplate>
                        </data:DataGridTemplateColumn>

                    </data:DataGrid.Columns>
                </data:DataGrid>

            </Grid >
            <Border BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" controlsToolkit:DockPanel.Dock="Bottom" BorderThickness="0" CornerRadius="3,3,3,3" Background="Transparent">

                <StackPanel Grid.Row="3" x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                    <StackPanel x:Name="SaveCommandPanel" Orientation="Horizontal"  Margin="0,0,0,0">
                        <ToggleButton TabIndex="8" x:Name="OkButton"   Grid.Row="4" Content="Ok" MinWidth="50"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}"  Click="OKButton_Click" />
                        <ToggleButton TabIndex="9" x:Name="cmdCancelButton"  Grid.Row="4" Content="Cancel" MinWidth="50" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="CancelButton_Click" />
                    </StackPanel>
                </StackPanel>
            </Border>
            

            <my:DockPanel LastChildFill="True" controlsToolkit:DockPanel.Dock="Top">
              
                <my:DockPanel LastChildFill="True" my:DockPanel.Dock="Top" >

                    <my:DockPanel LastChildFill="True" >
                        <Grp:GroupBox x:Name="gbIndentItem" Height="200" Width="430"  Header="Drug List" Margin="2" my:DockPanel.Dock="Top"  >
                            <Grid Height="Auto" Width="Auto" x:Name="ItemContainer" VerticalAlignment="Stretch">

                                <my:DockPanel LastChildFill="True">
                                    <Border Margin="0" controlsToolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                                        <ContentControl  FontSize="11" Content="Drug Details" Margin="0" Style="{StaticResource Header}"/>
                                    </Border>
                                    <data:DataPager TabIndex="20" x:Name="peopleDataPager" my:DockPanel.Dock="Bottom" Visibility="Collapsed"
                        Grid.Row="1"
                        PageSize="{Binding PageSize}"
                        DisplayMode="FirstLastPreviousNext"
                        IsEnabled="True"
                        IsTotalItemCountFixed="True"
                        Source="{Binding DataList}"  />
                                    <data:DataGrid TabIndex="6"  Height="Auto" Width="Auto" Grid.Row="0" ItemsSource="{Binding DataList}"  x:Name="dataGrid2"  AutoGenerateColumns="False" SelectionChanged="dataGrid2_SelectionChanged" CanUserSortColumns="False" LoadingRow="dataGrid2_LoadingRow">
                                        <data:DataGrid.Columns>
                                            <data:DataGridTemplateColumn >
                                                <data:DataGridTemplateColumn.CellTemplate >
                                                    <DataTemplate >
                                                        
                                                        <CheckBox Visibility="Collapsed"  Margin="10,2,10,2"  x:Name="chkItemStatus" IsTabStop="True" IsChecked="{Binding Status,Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" ></CheckBox >
                                                    </DataTemplate>
                                                </data:DataGridTemplateColumn.CellTemplate>
                                            </data:DataGridTemplateColumn>
                                            <!--By Anjali-->

                                            <data:DataGridTemplateColumn Header="Suspended" IsReadOnly="True"  >
                                                <data:DataGridTemplateColumn.CellTemplate >
                                                    <DataTemplate >
                                                        <CheckBox Margin="10,2,10,2"  x:Name="chkItemBlocked" IsTabStop="True" IsChecked="{Binding IsItemBlock,Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" IsEnabled="False"  ></CheckBox >
                                                    </DataTemplate>
                                                </data:DataGridTemplateColumn.CellTemplate>
                                            </data:DataGridTemplateColumn>

                                            <!--      -->
                                            <data:DataGridTextColumn IsReadOnly="True" Header="Drug ID" Width="100"  Binding="{Binding DrugID}" Visibility="Collapsed" />
                                            <data:DataGridTextColumn IsReadOnly="True" Header="Drug Name" Width="200"  Binding="{Binding DrugName}"/>
                                           
                                            <data:DataGridTextColumn IsReadOnly="True" Header="Drug Quantity" Width="100"  Binding="{Binding Quantity, StringFormat=0.00,Mode=OneWay}">
                                                <data:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>
                                            <data:DataGridTextColumn IsReadOnly="True" Header="Prescribe UOM" Width="200"  Binding="{Binding UOM}"/>

                                           
                                            <data:DataGridTextColumn IsReadOnly="True" Header="Pending Quantity" Width="100"  Binding="{Binding NewPendingQuantity, StringFormat=0.00,Mode=OneWay}">
                                                <data:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </data:DataGridTextColumn.ElementStyle>
                                            </data:DataGridTextColumn>
                                            <data:DataGridTextColumn IsReadOnly="True" Header="Base UOM" Width="200"  Binding="{Binding BaseUMString}"/>
                                            <data:DataGridTextColumn IsReadOnly="True" Header="Frequency" Width="100"  Binding="{Binding Frequency}"/>
                                            <data:DataGridTemplateColumn  Width="Auto" Header="Billed" IsReadOnly="True">
                                                <data:DataGridTemplateColumn.CellTemplate >
                                                    <DataTemplate >
                                                        <Grid>
                                                            <Image x:Name="imgAl" Source="/OPDModule;component/Icons/tick.png" Height="20" Width="20" Visibility="{Binding VisibleBill,  Mode=TwoWay}"></Image>
                                                            <Image x:Name="imgW" Source="/OPDModule;component/Icons/error.png" Height="20" Width="20" Visibility="{Binding collapseBill, Mode=TwoWay}"></Image>
                                                        </Grid>
                                                    </DataTemplate>
                                                </data:DataGridTemplateColumn.CellTemplate>
                                            </data:DataGridTemplateColumn>
                                        </data:DataGrid.Columns>
                                    </data:DataGrid>
                                </my:DockPanel>
                            </Grid>
                        </Grp:GroupBox>
                    </my:DockPanel>

                    <my:DockPanel LastChildFill="True" >
                        <Grp:GroupBox x:Name="gbItemBatch" Height="200" Width="430" Header="Drug Batch List" Margin="2" my:DockPanel.Dock="Top">
                            <my:DockPanel LastChildFill="True"  >
                                <Grid Height="auto" Width="Auto" x:Name="BatchContainer" >
                                    <my:DockPanel LastChildFill="True">
                                        <Border Margin="0" controlsToolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                                            <ContentControl  FontSize="11" Content="Batch Details" Margin="0" Style="{StaticResource Header}"/>
                                        </Border>
                                        <!--<data:DataPager TabIndex="20" x:Name="ItemBatchDataPager" my:DockPanel.Dock="Bottom"
                        Grid.Row="1"
                        PageSize="{Binding PageSize}"
                        DisplayMode="FirstLastPreviousNext"
                        IsEnabled="True"
                        IsTotalItemCountFixed="True"
                        Source="{Binding DataList}"  />-->
                                        <data:DataPager TabIndex="20" x:Name="ItemBatchDataPager" my:DockPanel.Dock="Bottom"
                        Grid.Row="1"
                        PageSize="{Binding BatchPageSize}"
                        DisplayMode="FirstLastPreviousNext"
                        IsEnabled="True"
                        IsTotalItemCountFixed="True"
                        Source="{Binding BatchList}"  />
                                        <data:DataGrid TabIndex="7" Height="Auto" Width="Auto" Grid.Row="0" ItemsSource="{Binding BatchList}"  x:Name="dgItemBatches"  AutoGenerateColumns="False" SelectionChanged="dgItemBatches_SelectionChanged" CanUserSortColumns="False" >
                                            <data:DataGrid.Columns>
                                                <data:DataGridTemplateColumn >
                                                    <data:DataGridTemplateColumn.CellTemplate >
                                                        <DataTemplate >
                                                            
                                                            <CheckBox Margin="10,2,10,2"  x:Name="chkBatchStatus" IsTabStop="True" Click="AddBatch_Click" IsChecked="{Binding Status,Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" ></CheckBox >
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                </data:DataGridTemplateColumn>
                                                <data:DataGridTextColumn IsReadOnly="True" Header="Date" Binding="{Binding Date,Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}" />
                                                <data:DataGridTextColumn IsReadOnly="True" Header="Batch Code" Binding="{Binding BatchCode}" />
                                                <data:DataGridTextColumn IsReadOnly="True" Header="Available Quantity" Binding="{Binding AvailableStock, StringFormat=0.00,Mode=OneWay}">
                                                    <data:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>
                                                <data:DataGridTextColumn IsReadOnly="True" Header="Purchase Rate" Width="100"  Binding="{Binding PurchaseRate, StringFormat=0.00,Mode=OneWay}">
                                                    <data:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>
                                                <data:DataGridTextColumn IsReadOnly="True" Header="MRP" Width="100"  Binding="{Binding MRP, StringFormat=0.00,Mode=OneWay}">
                                                    <data:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>
                                                <data:DataGridTextColumn IsReadOnly="True" Header="Expiry Date" Binding="{Binding ExpiryDate,Converter={StaticResource DateConverter},ConverterParameter={StaticResource ExpiryDateDisplayFormat}}" />
                                            </data:DataGrid.Columns>
                                        </data:DataGrid>
                                    </my:DockPanel>
                                </Grid>
                            </my:DockPanel>
                        </Grp:GroupBox>
                    </my:DockPanel>                    
                </my:DockPanel>                

                <my:DockPanel LastChildFill="True" >
                    <Grp:GroupBox x:Name="gbSelectedItem" Header="Selected Item" Margin="2" >
                        <Grid>


                            <data:DataGrid  x:Name="dgSelectedItemList" ScrollViewer.HorizontalScrollBarVisibility="auto" ScrollViewer.VerticalScrollBarVisibility="auto" AutoGenerateColumns="False"  AlternatingRowBackground="Silver" VerticalAlignment="Stretch"  Margin="4" CanUserSortColumns="False" ItemsSource="{Binding ItemBatchList}">
                                <data:DataGrid.Columns>
                                    <data:DataGridTemplateColumn>
                                        <data:DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox HorizontalAlignment="Center"  VerticalAlignment="Center" IsChecked="{Binding Status,Mode=TwoWay}" Click="CheckBox1_Click" ></CheckBox>
                                            </DataTemplate>
                                        </data:DataGridTemplateColumn.CellTemplate>
                                    </data:DataGridTemplateColumn>
                                    <data:DataGridTextColumn IsReadOnly="True"  Header="Drug Code"  Binding="{Binding PrescribeDrugs.DrugID,Mode=TwoWay}"></data:DataGridTextColumn>
                                    <data:DataGridTextColumn  IsReadOnly="True"  Header="Drug Name"  Binding="{Binding PrescribeDrugs.DrugName,Mode=TwoWay}"></data:DataGridTextColumn>
                                    <data:DataGridTextColumn  IsReadOnly="True"  Header="Frequency"  Binding="{Binding PrescribeDrugs.Frequency,Mode=TwoWay}"></data:DataGridTextColumn>
                                    <data:DataGridTextColumn IsReadOnly="True"  Header="Batch Code"  Binding="{Binding BatchCode,Mode=TwoWay}"></data:DataGridTextColumn>
                                    <data:DataGridTextColumn IsReadOnly="True" Header="Batch ID" Binding="{Binding BatchID}" />
                                    <data:DataGridTextColumn IsReadOnly="True" Header="Expiry Date"  Binding="{Binding ExpiryDate,Mode=TwoWay,Converter={StaticResource DateConverter},ConverterParameter={StaticResource ExpiryDateDisplayFormat}}"></data:DataGridTextColumn>
                                    <data:DataGridTextColumn IsReadOnly="True" Header="Available Stock"  Binding="{Binding AvailableStock,StringFormat=0.00,Mode=TwoWay}">
                                        <data:DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Right"/>
                                            </Style>
                                        </data:DataGridTextColumn.ElementStyle>
                                    </data:DataGridTextColumn>

                                   

                                    <data:DataGridTextColumn  IsReadOnly="True" Header="MRP"  Binding="{Binding MRP,Mode=TwoWay,StringFormat=0.00}">
                                        <data:DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Right"/>
                                            </Style>
                                        </data:DataGridTextColumn.ElementStyle>
                                    </data:DataGridTextColumn>
                                    <data:DataGridTextColumn  IsReadOnly="True" Header="Cost Price"  Binding="{Binding PurchaseRate,StringFormat=0.00,Mode=TwoWay}">
                                        <data:DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Right"/>
                                            </Style>
                                        </data:DataGridTextColumn.ElementStyle>
                                    </data:DataGridTextColumn>
                                    <data:DataGridTextColumn IsReadOnly="True" Header="Purchase Tax %"  Binding="{Binding TotalPerchaseTaxPercent, StringFormat=0.00,Mode=OneWay}">
                                        <data:DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Right"/>
                                            </Style>
                                        </data:DataGridTextColumn.ElementStyle>
                                    </data:DataGridTextColumn>
                                    <data:DataGridTextColumn IsReadOnly="True" Header="Sales Tax %"  Binding="{Binding TotalSalesTaxPercent, StringFormat=0.00,Mode=OneWay}">
                                        <data:DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Right"/>
                                            </Style>
                                        </data:DataGridTextColumn.ElementStyle>
                                    </data:DataGridTextColumn>

                                    <data:DataGridTextColumn Visibility="Collapsed"  Binding="{Binding DiscountOnSale, StringFormat=0.00,Mode=OneWay}">
                                        <data:DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Right"/>
                                            </Style>
                                        </data:DataGridTextColumn.ElementStyle>
                                    </data:DataGridTextColumn>

                                    <data:DataGridTextColumn IsReadOnly="True"   Header="Assign Supplier"  Binding="{Binding AssignSupplier}" Visibility ="Collapsed" />
                                    

                                </data:DataGrid.Columns>
                            </data:DataGrid>
                        </Grid>


                    </Grp:GroupBox>
                </my:DockPanel>
            </my:DockPanel>
        </my:DockPanel>
    </Grid>
</controls:ChildWindow>