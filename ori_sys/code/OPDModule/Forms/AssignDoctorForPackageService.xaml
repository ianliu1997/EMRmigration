<controls:ChildWindow x:Class="OPDModule.Forms.AssignDoctorForPackageService"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
                       xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"                      
                       xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"
           Width="500" Height="500" 
           Title="Assign Doctor" Loaded="ChildWindow_Loaded">
    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </controls:ChildWindow.Resources>
    <Grid >
        <toolkit:DockPanel LastChildFill="True">
            <Border  BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" toolkit:DockPanel.Dock="Bottom" BorderThickness="1" CornerRadius="3,3,3,3" Background="Transparent" >
                <StackPanel x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                    <StackPanel Orientation="Horizontal"  Margin="1" HorizontalAlignment="Right"  >

                        <ToggleButton   Margin="4" Content="Save" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdSave" Click="cmdSave_Click"></ToggleButton>

                        <ToggleButton  Margin="4" Content="Cancel" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdCancel" Click="cmdCancel_Click" Visibility="Collapsed"></ToggleButton>

                    </StackPanel>
                </StackPanel>
            </Border>


            
        <data:DataGrid Grid.Row="1" Margin="4" x:Name="dgServiceList" AutoGenerateColumns="False" ItemsSource="{Binding}"  CanUserSortColumns="False" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
            <data:DataGrid.Columns>
        <data:DataGridTemplateColumn>
                                <data:DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate>
                                        <HyperlinkButton Content="Select Doctor" x:Name="AssignDoctor" Click="AssignDoctor_Click"></HyperlinkButton>
                                    </DataTemplate>
                                </data:DataGridTemplateColumn.CellTemplate>
                            </data:DataGridTemplateColumn>
                    <data:DataGridTextColumn Binding="{Binding Department,Mode=TwoWay}" Header="Department" IsReadOnly="True" />
                    <data:DataGridTextColumn Binding="{Binding ServiceName,Mode=TwoWay}" Header="Service Name" IsReadOnly="True" />
                    <data:DataGridTextColumn Binding="{Binding DoctorName,Mode=TwoWay}" Header="Doctor" IsReadOnly="True" />
                    

                    <!--<data:DataGridTemplateColumn Header="Doctor" >
                    <data:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                                <inputcombo:AutoCompleteComboBox x:Name="cmbDoctor"  SelectedValue="{Binding SelectedDoctor.ID}" SelectedItem="{Binding SelectedDoctor,Mode=TwoWay}" ItemsSource="{Binding Doctor}" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                </inputcombo:AutoCompleteComboBox>
                            </DataTemplate>
                    </data:DataGridTemplateColumn.CellTemplate>
                </data:DataGridTemplateColumn>-->

           

            </data:DataGrid.Columns>
        </data:DataGrid>
        </toolkit:DockPanel>
    </Grid>
</controls:ChildWindow>