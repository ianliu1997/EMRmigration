                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>



                                            </Grid.RowDefinitions>

                                            <TextBlock   HorizontalAlignment="Left"  VerticalAlignment="Center" Text="Date:"  Grid.Row="0" Grid.Column="0" Margin="4" />
                                    <TextBlock   HorizontalAlignment="Left" x:Name="LblDate" Text="{Binding Date,Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}"  VerticalAlignment="Center"   Grid.Row="0" Grid.Column="1" Margin="4" />
