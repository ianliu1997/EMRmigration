                                                            <data:DataGridTemplateColumn.CellTemplate>
                                                                <DataTemplate>
                                                                    <HyperlinkButton VerticalAlignment="Center" HorizontalAlignment="Center"  Content="view"  IsEnabled="{Binding IsEnable,Mode=TwoWay}"  Padding="5,0,5,0" Click="View_Click"  x:Name="hlbView" Height="25"></HyperlinkButton>
                                                                </DataTemplate>
                                                            </data:DataGridTemplateColumn.CellTemplate>
                                                        </data:DataGridTemplateColumn>-->

                                                    <data:DataGridTextColumn Header="Bill Date"  IsReadOnly="True" Binding="{Binding BillDate,Converter={StaticResource DateConverter},ConverterParameter='dd/MM/yyyy'}"></data:DataGridTextColumn>

                                                    <data:DataGridTextColumn Header="Bill No"  IsReadOnly="True" Binding="{Binding BillNo}"></data:DataGridTextColumn>
