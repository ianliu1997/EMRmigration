                                            <controlsToolkit:DockPanel  controlsToolkit:DockPanel.Dock="Top">

                                                <data:DataGrid Margin="1" ItemsSource="{Binding}"  AutoGenerateColumns="False" x:Name="dgCharges" TabIndex="0" IsReadOnly="True" CanUserSortColumns="False" >
                                                    <data:DataGrid.Columns>
                                             

