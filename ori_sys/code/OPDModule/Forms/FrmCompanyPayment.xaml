                                                    <data:DataGridTextColumn Header="MR No" Binding="{Binding MRNo}"></data:DataGridTextColumn>
                                                    <data:DataGridTextColumn Header="Patient Name" Binding="{Binding PatientName1}"></data:DataGridTextColumn>
