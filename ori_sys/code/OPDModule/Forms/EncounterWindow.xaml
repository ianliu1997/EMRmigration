<UserControl xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"  xmlns:inputToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit"  xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"  xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"  x:Class="CIMS.Forms.EncounterWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
                      xmlns:CustomCombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
                       xmlns:Grp="clr-namespace:Groupbox;assembly=Groupbox"
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                    
           Width="auto" Height="auto" KeyDown="ChildWindow_KeyDown" Loaded="ChildWindow_Loaded">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot" DataContext="{Binding}" Background="White" >
        <Grid.RowDefinitions>
            <RowDefinition />

            <RowDefinition Height="Auto"  />
        </Grid.RowDefinitions>

        <!--<Grid.ColumnDefinitions>
            <ColumnDefinition ></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>-->
        <!--<Border  Grid.Row="0" Width="1" Margin="4"  ScrollViewer.VerticalScrollBarVisibility="Visible"  >-->
        <Border  Grid.Row="0" Grid.Column="0" x:Name="mainFormBorder" Margin="4"  BorderBrush="{StaticResource TabControlDarkerBorder}" BorderThickness="1" CornerRadius="0,0,3,3" Background="Transparent" >
            <Grid>
                <!--<Grid.ColumnDefinitions>
                    <ColumnDefinition ></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    
                </Grid.ColumnDefinitions>-->
                <controlsToolkit:DockPanel LastChildFill="True">

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition ></ColumnDefinition>
                            <ColumnDefinition ></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Grid Margin="1" Grid.Column="1" Background="White" controlsToolkit:DockPanel.Dock="Right" VerticalAlignment="Stretch" >
                        <!--<Grid.RowDefinitions>
                            <RowDefinition ></RowDefinition>-->
                            <!--<RowDefinition ></RowDefinition>-->
                        <!--</Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>-->

                        <!--<Border Grid.Row="0"  BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0"  Background="Transparent">
                            <ContentControl VerticalAlignment="Center" FontSize="12" Content="List Of Patient Past Visit" Margin="-1" Style="{StaticResource Header}"     HorizontalAlignment="Stretch" />
                        </Border>-->
                        <data:DataGrid Grid.Column="0" Grid.Row="1" x:Name="dgPastVisitList" Margin="4"  AutoGenerateColumns="False"  ItemsSource="{Binding}" IsReadOnly="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" VerticalScrollBarVisibility="Auto"   HorizontalScrollBarVisibility="Auto">
                            <data:DataGrid.Columns>
                                <data:DataGridTextColumn Binding="{Binding PastVisitDate}"  Header="Date" />
                                <data:DataGridTextColumn Binding="{Binding PastVisitInTime}" Header="Time"/>
                                <data:DataGridTextColumn Binding="{Binding VisitType}" Header="Visit Type"/>
                                <data:DataGridTextColumn Binding="{Binding Doctor}" Header="Doctor Name" />
                                <data:DataGridTextColumn Binding="{Binding Department}" Header="Department"/>
                                <data:DataGridTextColumn Binding="{Binding Unit}" Header="Clinic"/>
                                <data:DataGridTextColumn Binding="{Binding BalanceAmount}" Header="Balance"/>
                            </data:DataGrid.Columns>
                        </data:DataGrid>
                    </Grid>
                    
                    <Grid Margin="1" Grid.Column="0" Background="White" HorizontalAlignment="Stretch" controlsToolkit:DockPanel.Dock="Left">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />

                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition />


                        </Grid.ColumnDefinitions>


                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Text="OPD No." Grid.Row="0" Grid.Column="0" Margin="4" ></TextBlock>
                        <TextBox Grid.Row="0" Grid.Column="1" Margin="4" IsReadOnly="True" x:Name="txtOPDNumber" Text="{Binding OPDNO, Mode=TwoWay}" HorizontalAlignment="Stretch"></TextBox>

                            <!--<TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="Clinic" Grid.Row="0" Grid.Column="2"  Margin="4" />
                            <CustomCombo:AutoCompleteComboBox TabIndex="0" x:Name="cmbClinic"   Grid.Row="0" Grid.Column="3"    Margin="1" VerticalAlignment="Center" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" HorizontalAlignment="Stretch" SelectionChanged="cmbClinic_SelectionChanged" ></CustomCombo:AutoCompleteComboBox>-->

                            <TextBlock Text="Unit" Grid.Row="0" Grid.Column="2" Margin="4" VerticalAlignment="Center" HorizontalAlignment="Right"  ></TextBlock>
                        <TextBox x:Name="txtUnit" IsReadOnly="True" IsTabStop="False"  Grid.Row="0" Grid.Column="3"   Margin="4" VerticalAlignment="Center"  HorizontalAlignment="Stretch" ></TextBox>

                        <TextBlock Text="Date" Grid.Row="1" Grid.Column="0" Margin="4" VerticalAlignment="Center" HorizontalAlignment="Right" ></TextBlock>
                        <controls:DatePicker x:Name="dtpEncDate" SelectedDate="{Binding Date, Mode=TwoWay}"   Grid.Row="1" Grid.Column="1"   Margin="4" VerticalAlignment="Center" IsEnabled="False" IsTabStop="False" HorizontalAlignment="Stretch"></controls:DatePicker>

                        <TextBlock Text="Time" Grid.Row="1" Grid.Column="2" Margin="4" VerticalAlignment="Center" HorizontalAlignment="Right" ></TextBlock>
                        <inputToolkit:TimePicker x:Name="dtpEncTime"  Grid.Row="1" Grid.Column="3"   Margin="4" VerticalAlignment="Center" Value="{Binding Date, Mode=TwoWay}" IsEnabled="False" IsTabStop="False" HorizontalAlignment="Stretch"></inputToolkit:TimePicker>

                            <TextBlock  VerticalAlignment="Center" HorizontalAlignment="Right" Text="Reason of Visit" Margin="4" Grid.Row="2" Grid.Column="0"></TextBlock>
                        <CustomCombo:AutoCompleteComboBox TabIndex="1"  x:Name="cmbVisitType" Grid.Row="2" Grid.Column="1"    Margin="4"  HorizontalAlignment="Stretch"   VerticalAlignment="Center" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" SelectionChanged="cmbVisitType_SelectionChanged" >
                        </CustomCombo:AutoCompleteComboBox>

                        <TextBlock  VerticalAlignment="Center" HorizontalAlignment="Right" Text="Department" Margin="4" Grid.Row="2" Grid.Column="2"></TextBlock>
                            <CustomCombo:AutoCompleteComboBox TabIndex="2" Grid.Row="2" Grid.Column="3"   Margin="4" x:Name="cmbDepartment"  HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID"  SelectionChanged="cmbDepartment_SelectionChanged"  ></CustomCombo:AutoCompleteComboBox>

                        <TextBlock  VerticalAlignment="Center" HorizontalAlignment="Right" Text="Doctor" Margin="4" Grid.Row="3" Grid.Column="0"></TextBlock>
                            <CustomCombo:AutoCompleteComboBox TabIndex="3" Grid.Row="3" Grid.Column="1"   Margin="4"    x:Name="cmbDoctor" VerticalAlignment="Center" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" HorizontalAlignment="Stretch"></CustomCombo:AutoCompleteComboBox>
                     
                        <Button Grid.Column="2"  Width="Auto" HorizontalAlignment="Left" Grid.Row="3" x:Name="CmdDoctorSchedule" Margin="4" ToolTipService.ToolTip="Doctor Schedule" Click="CmdPatientSearch_Click" Visibility="Collapsed">
                            <Button.Content>
                                <Image Height="18" Source="/PalashDynamics;component/Icons/Calendar.png" ></Image>
                            </Button.Content>
                        </Button>

                        <TextBlock  VerticalAlignment="Center" HorizontalAlignment="Right" Text="Cabin" Margin="4" Grid.Row="3" Grid.Column="2"></TextBlock>
                            <CustomCombo:AutoCompleteComboBox TabIndex="4" Grid.Row="3" Grid.Column="3"   Margin="4"  x:Name="cmbCabin" VerticalAlignment="Center" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" HorizontalAlignment="Stretch"></CustomCombo:AutoCompleteComboBox>

                        <TextBlock Text="Remarks" Grid.Row="4" Grid.Column="0" Margin="4" VerticalAlignment="Center" HorizontalAlignment="Right" ></TextBlock>
                            <Grid Margin="4" Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="3" >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition></ColumnDefinition>
                                <ColumnDefinition Width="auto"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                                <TextBox TabIndex="5" x:Name="txtComplaints"  Text="{Binding Complaints, Mode=TwoWay}" VerticalAlignment="Center" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Height="40"  HorizontalAlignment="Stretch"  MaxLength="255" TextWrapping="Wrap"></TextBox>
                                <HyperlinkButton TabIndex="6" x:Name="lnkSearch" Click="lnkSearch_Click"  Content="Search" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center"></HyperlinkButton>
                        </Grid>
                           
                       

                        <TextBlock  VerticalAlignment="Center" HorizontalAlignment="Right" Text="Reference Doctor" Margin="2" Grid.Row="6" Grid.Column="0"></TextBlock>

                        <!--<sdk:AutoCompleteBox Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="3" x:Name="txtReferenceDoctor" Text="{Binding ReferredDoctor, Mode=TwoWay}" Margin="4" HorizontalAlignment="Stretch"  KeyDown="txtAutocompleteText_KeyDown" TextChanged="txtAutocompleteText_TextChanged"/>-->
                            <CustomCombo:AutoCompleteComboBox TabIndex="7" Grid.Row="6" Grid.Column="1"   Margin="4"    x:Name="cmbRefDoctor" VerticalAlignment="Center" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" HorizontalAlignment="Stretch"></CustomCombo:AutoCompleteComboBox>
                            <TextBlock Text="Visit Notes" Grid.Row="7" Grid.Column="0" Margin="4" VerticalAlignment="Center" HorizontalAlignment="Right" ></TextBlock>
                            <TextBox TabIndex="8" x:Name="txtNotes"  Text="{Binding VisitNotes, Mode=TwoWay}"  Grid.Row="7" Grid.Column="1"   Margin="4" VerticalAlignment="Center" AcceptsReturn="True" VerticalScrollBarVisibility="Visible" Height="40"  Grid.ColumnSpan="3"  MaxLength="255" HorizontalAlignment="Stretch" TextWrapping="Wrap"></TextBox>
                    </Grid>
                    </Grid>
                </controlsToolkit:DockPanel>
            </Grid>
        </Border>
        <Border  Grid.Row="1"  x:Name="mainFormBorder2" Margin="4"  BorderBrush="{StaticResource TabControlDarkerBorder}" BorderThickness="1" CornerRadius="0,0,3,3" Background="Transparent" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition ></ColumnDefinition>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                </Grid.ColumnDefinitions>
           
                <StackPanel Grid.Column="0" x:Name="Footer1" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Left" Background="Transparent">
                <TextBlock Text="** Documents Are Not Attached For Selected Patient" x:Name="DocLabel" FontSize="12" Foreground="Red" FontWeight="Bold" Visibility="Collapsed"></TextBlock>
            </StackPanel>
            <StackPanel Grid.Row="1" x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                <StackPanel x:Name="SaveCommandPanel" Orientation="Horizontal"  Margin="0,0,0,0">
                    <ToggleButton x:Name="cmbSaveandAdvanced"  Grid.Row="4" Content="Save and Advance" MinWidth="50"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Collapsed" Click="cmbSaveandAdvanced_Click"  Width="140" />
                    <ToggleButton x:Name="cmbSaveandBill"  Grid.Row="4" Content="Save and Bill" MinWidth="50"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="cmbSaveandBill_Click"  Width="100" />
                    <ToggleButton x:Name="OkButton" TabIndex="9" Grid.Row="4" Content="Save" MinWidth="50"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="OKButton_Click" Checked="OkButton_Checked" KeyUp="OkButton_KeyUp" />
                    <ToggleButton x:Name="CancelButton" TabIndex="10" Grid.Row="4" Content="Close" MinWidth="50" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="CancelButton_Click" Checked="CancelButton_Checked" />
                </StackPanel>
            </StackPanel>
            </Grid>
        </Border>
    </Grid>

</UserControl>

