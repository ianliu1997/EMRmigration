<controls:ChildWindow x:Class="OPDModule.Forms.Conversion"
          
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
                       xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"                      
                       xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"
           Width="300" Height="200" 
           Title="Select UOM" Loaded="ChildWindow_Loaded" >
    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </controls:ChildWindow.Resources>
    <Border  BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" toolkit:DockPanel.Dock="Bottom" BorderThickness="1" CornerRadius="3,3,3,3" Background="Transparent" >
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition ></ColumnDefinition>
        </Grid.ColumnDefinitions>

        
            <toolkit:DockPanel LastChildFill="True" Grid.Row="2" Grid.ColumnSpan="3">
                <Border  BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" toolkit:DockPanel.Dock="Bottom" BorderThickness="1" CornerRadius="3,3,3,3" Background="Transparent" >
                    <StackPanel x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                        <StackPanel Orientation="Horizontal"  Margin="1" HorizontalAlignment="Right"  >

                            <ToggleButton   Margin="4" Content="OK" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdSave" Click="cmdSave_Click"></ToggleButton>

                            <ToggleButton  Margin="4" Content="Close" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdCancel" Click="cmdCancel_Click" ></ToggleButton>

                        </StackPanel>
                    </StackPanel>
                </Border>



            </toolkit:DockPanel>
            <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="UOM"  Grid.Row="0" Grid.Column="0" Margin="4" />
            <inputcombo:AutoCompleteComboBox x:Name="cmbConversion" SelectedValuePath="ID" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}"  Grid.Row="0" Grid.Column="1"  Margin="4" SelectionChanged="cmbConversion_SelectionChanged" HorizontalAlignment="Stretch" TabIndex="4"/>
       
    </Grid>
    </Border>
</controls:ChildWindow>