<controls:ChildWindow x:Class="OPDModule.Forms.PrimarySymptomsSearchWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
                      xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="400" Height="400" 
           Title="Search Primary Symptoms">
    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
          
            <!--<addressconverter:AddressConverter x:Key="AddressConverter"></addressconverter:AddressConverter>-->
        </ResourceDictionary>
    </controls:ChildWindow.Resources>
    <Grid x:Name="LayoutRoot" Margin="2" Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        
        <TextBlock Text="Symptom" Grid.Column="0" VerticalAlignment="Center" Margin="4,4,0,4" HorizontalAlignment="Left" ></TextBlock>
        <TextBox x:Name="txtPrimarySymptom" Grid.Column="1" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center"></TextBox>

        <Button Grid.Column="2" x:Name="cmdSearch" Click="cmdSearch_Click" Margin="4" ToolTipService.ToolTip="Search Symptom">
            <Image Source="/PalashDynamics;component/Icons/Search_b.JPG" Margin="4,0,4,4"  ></Image>
        </Button>


        <data:DataGrid Grid.ColumnSpan="3" Margin="4,4,4,0" Grid.Row="1" ItemsSource="{Binding DataList}"  x:Name="dgList"  AutoGenerateColumns="False" SelectionChanged="dgList_SelectionChanged">
            <data:DataGrid.Columns>
                <data:DataGridTemplateColumn >
                    <data:DataGridTemplateColumn.CellTemplate >
                        <DataTemplate >
                            <!--<CheckBox Margin="10,2,10,2"  x:Name="chkStatus"  Click="UpdateUserStatus_Click" IsChecked="{Binding UserGeneralDetailVO.Status,Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" ></CheckBox >-->
                            <CheckBox Margin="10,2,10,2"  x:Name="chkItemStatus" IsTabStop="True" Click="AddItem_Click" IsChecked="{Binding Status,Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" ></CheckBox >
                        </DataTemplate>
                    </data:DataGridTemplateColumn.CellTemplate>
                </data:DataGridTemplateColumn>
                <data:DataGridTextColumn IsReadOnly="True" Header="Symptom"   Binding="{Binding Description}" />
               
            </data:DataGrid.Columns>
        </data:DataGrid>
        <data:DataPager Margin="4,0,4,4" x:Name="dgDataPager" 
                        Grid.Row="2" Grid.ColumnSpan="3"
                        PageSize="{Binding PageSize}"
                        DisplayMode="FirstLastPreviousNext"
                        IsEnabled="True"
                        IsTotalItemCountFixed="True"
                        Source="{Binding DataList}"  />

        <Border BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" Grid.Row="3" Grid.ColumnSpan="3" BorderThickness="0" CornerRadius="3,3,3,3" Background="Transparent">

            <StackPanel Grid.Row="3" x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                <StackPanel x:Name="SaveCommandPanel" Orientation="Horizontal"  Margin="0,0,0,0">
                    <ToggleButton TabIndex="8" x:Name="OkButton"  Grid.Row="4" Content="Ok" MinWidth="50"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="OKButton_Click" />
                    <ToggleButton TabIndex="9" x:Name="cmdCancelButton"  Grid.Row="4" Content="Cancel" MinWidth="50" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="cmdCancelButton_Click" />
                </StackPanel>
            </StackPanel>
        </Border>

    </Grid>
</controls:ChildWindow>