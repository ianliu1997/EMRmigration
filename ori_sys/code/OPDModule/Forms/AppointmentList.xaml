<UserControl xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit" 
           xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data" 
           x:Class="CIMS.Forms.AppointmentList"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:dataInput="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data.Input"
           xmlns:input="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input"
           xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
           
           xmlns:Converter="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters"
          Loaded="frmAppointmentList_Loaded" 
          Height="Auto" Width="Auto">
         
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Converter:DateTimeConverter x:Key="DateConverter"></Converter:DateTimeConverter>
            <Converter:ToggleBooleanValueConverter x:Key="NegateValueConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>
    
    <Grid x:Name="LayoutRoot" Margin="2" Background="White" Width="Auto">
        <Grid>
            <controls:TabControl Padding="0"  BorderBrush="{StaticResource TabControlDarkerBorder}"  x:Name="AppointmentInfo" Margin="4,-4,4,4" >
                
                <controls:TabItem x:Name="tabAppointmentList" Style="{StaticResource TabItemStyle}"  Padding="0" Margin="0" Header="Appointment List" controlsToolkit:DockPanel.Dock="Top">
                    <controlsToolkit:DockPanel x:Name="docAppointment"  LastChildFill="True" Grid.Row="0" controlsToolkit:DockPanel.Dock="Top">

                        <controlsToolkit:DockPanel x:Name="docFooter" controlsToolkit:DockPanel.Dock="Bottom" >
                            <controlsToolkit:DockPanel Margin="2" controlsToolkit:DockPanel.Dock="Top">
                               
                                <StackPanel Grid.Row="3" x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                                    <StackPanel x:Name="SaveCommandPanel" Orientation="Horizontal"  Margin="0,0,0,0">

                                        
                                        <ToggleButton  x:Name="cmdPrint"  Grid.Row="4" Content="Print"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch"  Visibility="Visible" Style="{StaticResource ToggleButtonStyle}" Click="cmdPrint_Click"  TabIndex="7"/>
                                        <ToggleButton  x:Name="cmdRescAppointment"  Grid.Row="4" Content="Reschedule Appointment" Width="160" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch"  Visibility="Visible" Style="{StaticResource ToggleButtonStyle}" Click="cmdRescAppointment_Click"  TabIndex="7"/>
                                        <ToggleButton  x:Name="cmdCancelAppointment"  Grid.Row="4" Content="Cancel Appointment" Width="150" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch"  Visibility="Visible" Style="{StaticResource ToggleButtonStyle}" Click="cmdCancelAppointment_Click" TabIndex="7"/>
                                        <ToggleButton  x:Name="cmdOK"  Grid.Row="4" Content="OK" MinWidth="50"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch"  Visibility="Collapsed"  Style="{StaticResource ToggleButtonStyle}" Click="cmdOK_Click" TabIndex="8"/>
                                        <ToggleButton x:Name="CmdClose"  Grid.Row="4" Content="Cancel" MinWidth="50" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Collapsed"  Click="CmdClose_Click" TabIndex="9" />
                                    </StackPanel>
                                </StackPanel>
                            </controlsToolkit:DockPanel>

                        </controlsToolkit:DockPanel>

                        <controlsToolkit:DockPanel x:Name="docHeader" controlsToolkit:DockPanel.Dock="Top">

                            <Border controlsToolkit:DockPanel.Dock= "Top"  BorderBrush="#FF788678"   Width="auto" BorderThickness="1" CornerRadius="3,3,3,3"  Margin="4">
                                <Grid Width="Auto"  Margin="0" controlsToolkit:DockPanel.Dock="Top">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition ></ColumnDefinition>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!--<TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="From Date" Grid.Row="0"   Grid.Column="0"  Margin="4" />
                                    <controls:DatePicker x:Name="dtpAppointmentSummaryF"  Grid.Row="0"  Grid.Column="1"  Margin="4" SelectedDateChanged="dtpAppointmentSummary_SelectedDateChanged" HorizontalAlignment="Left"/>

                                    <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="To Date" Grid.Row="0"   Grid.Column="2"  Margin="4" />
                                    <controls:DatePicker x:Name="dtpAppointmentSummaryT"  Grid.Row="0"  Grid.Column="3"  Margin="4" SelectedDateChanged="dtpAppointmentSummary_SelectedDateChanged" HorizontalAlignment="Left" VerticalAlignment="Center"/>-->
                                    <TextBlock Grid.Row="2" Grid.Column="2" Text="First Name"  VerticalAlignment="Center" Margin="4,4,0,4" HorizontalAlignment="Right" ></TextBlock>
                                    <TextBox x:Name="txtFirstName" TabIndex="4" Grid.Row="2" Grid.Column="3" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" LostFocus="txtName_LostFocus" KeyDown="txtFirstName_KeyDown" TextChanged="txtName_TextChanged"></TextBox>

                                    <TextBlock Text="MRN" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="4,4,0,4" HorizontalAlignment="Right" ></TextBlock>
                                    <!--<controls:DatePicker x:Name="dtpToDate" Grid.Column="5" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></controls:DatePicker>-->
                                    <TextBox x:Name="txtMiddleName" TabIndex="5" Grid.Row="2" Grid.Column="1" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" LostFocus="txtName_LostFocus" KeyDown="txtMrno_KeyDown" ></TextBox>

                                    <TextBlock Text="Last Name" Grid.Row="2" Grid.Column="4" VerticalAlignment="Center" Margin="4,4,0,4" HorizontalAlignment="Right" ></TextBlock>
                                    <!--<controls:DatePicker x:Name="dtpToDate" Grid.Column="5" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></controls:DatePicker>-->
                                    <TextBox x:Name="txtLastName" Grid.Row="2" TabIndex="6" Grid.Column="5" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" LostFocus="txtName_LostFocus" KeyDown="txtLastName_KeyDown" TextChanged="txtName_TextChanged"></TextBox>
                                    <TextBlock  HorizontalAlignment="Right" VerticalAlignment="Center" Text="From Date" Grid.Row="0" Grid.Column="0"  Margin="4" />
                                    <controls:DatePicker   x:Name="dtpAppointmentSummaryF" Margin="4" Grid.Row="0" Grid.Column="1" SelectedDateChanged="dtpAppointmentSummary_SelectedDateChanged" HorizontalAlignment="Stretch"  TabIndex="0"/>
                                    <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="To Date" Grid.Row="0" Grid.Column="2"  Margin="4" />
                                    <controls:DatePicker   x:Name="dtpAppointmentSummaryT" Margin="4" Grid.Row="0" Grid.Column="3" SelectedDateChanged="dtpAppointmentSummary_SelectedDateChanged" HorizontalAlignment="Stretch" TabIndex="1"/>

                                    <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="Special Registration" Grid.Row="0"  Grid.Column="4" Margin="4" />
                                    <inputcombo:AutoCompleteComboBox   x:Name="cmbSpRegistration" SelectedValuePath="ID" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" Grid.Row="0" Grid.Column="5"  Margin="4" HorizontalAlignment="Stretch" TabIndex="2" IsEnabled="True" />
                                    
                                    <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="Clinic" Grid.Row="1"  Grid.Column="0" Margin="4" />
                                    <inputcombo:AutoCompleteComboBox   x:Name="cmbUnitAppointmentSummary" SelectedValuePath="ID" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" Grid.Row="1" Grid.Column="1"  Margin="4"   SelectionChanged="cmbUnitAppointmentSummary_SelectionChanged" HorizontalAlignment="Stretch" TabIndex="2" IsEnabled="True" />

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Contact No."  VerticalAlignment="Center" Margin="4,4,0,4" HorizontalAlignment="Right" ></TextBlock>
                                    <TextBox x:Name="txtContactNo" TabIndex="4" Grid.Row="3" Grid.Column="1" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" LostFocus="txtName_LostFocus" KeyDown="txtFirstName_KeyDown" TextChanged="txtCont_TextChanged" MaxLength="15" ></TextBox>

                                    <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="Department"  Grid.Row="1" Grid.Column="2" Margin="4" />
                                    <inputcombo:AutoCompleteComboBox x:Name="cmbDepartmentAppointmentSummary" SelectedValuePath="ID" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" Grid.Row="1" Grid.Column="3"  Margin="4"  SelectionChanged="cmbDepartmentAppointmentSummary_SelectionChanged" HorizontalAlignment="Stretch" TabIndex="3"/>

                                    <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="Doctor"  Grid.Row="1" Grid.Column="4" Margin="4" />
                                    <inputcombo:AutoCompleteComboBox x:Name="cmbDoctorAppointmentSummary" SelectedValuePath="ID" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}"  Grid.Row="1" Grid.Column="5"  Margin="4" SelectionChanged="cmbDoctorAppointmentSummary_SelectionChanged" HorizontalAlignment="Stretch" TabIndex="4"/>

                                    <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="Appointment Status"  Grid.Row="3" Grid.Column="2" Margin="4" />
                                    <inputcombo:AutoCompleteComboBox x:Name="cmbAppointmentStat" SelectedValuePath="ID" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}"  Grid.Row="3" Grid.Column="3"  Margin="4" SelectionChanged="cmbAppointStatus_SelectionChanged" HorizontalAlignment="Stretch" TabIndex="4"/>

                                    <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="Appointment Type"  Grid.Row="3" Grid.Column="4" Margin="4" />
                                    <inputcombo:AutoCompleteComboBox x:Name="cmbAppointmentType" SelectedValuePath="ID" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}"  Grid.Row="3" Grid.Column="5"  Margin="4" SelectionChanged="cmbAppointStatus_SelectionChanged" HorizontalAlignment="Stretch" TabIndex="4"/>
                                    <Button x:Name="btnSearchCriteria" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="3" Grid.Column="7" ToolTipService.ToolTip="Find Appointment" Click="btnSearchCriteria_Click" TabIndex="5">
                                        <Button.Content>
                                             <Image Source="/PalashDynamics;component/Icons/xmag.png" Margin="2" Width="20" ></Image>
                                        </Button.Content>
                                    </Button>

                                </Grid>
                            </Border>
                        </controlsToolkit:DockPanel>
                        <data:DataPager x:Name="dgDataPager" controlsToolkit:DockPanel.Dock="Bottom" 
                                                        DisplayMode="FirstLastPreviousNext"  IsEnabled="True"                       
                                                        Source="{Binding DataList}" 
                                                         PageSize="{Binding PageSize}"
                                                        AutoEllipsis="False" IsTotalItemCountFixed="True"  />

                        <controlsToolkit:DockPanel x:Name="docAppointmentList2" >
                            <Border BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="0,0,0,0" BorderThickness="1" CornerRadius="0,0,3,3" Background="Transparent">
                                <data:DataGrid x:Name="dgAppointmentList" Margin="2"  AutoGenerateColumns="False" ItemsSource="{Binding}"  SelectionChanged="dgAppointmentList_SelectionChanged" IsReadOnly="True" HorizontalAlignment="Stretch" TabIndex="6">
                                    <data:DataGrid.Columns>
                                        <data:DataGridTextColumn  Binding="{Binding AppointmentDate,Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}" Header="Date" />
                                        <data:DataGridTextColumn Binding="{Binding FromTime,Converter={StaticResource DateConverter},ConverterParameter='hh:mm tt'}" Header="From Time" />
                                        <data:DataGridTextColumn Binding="{Binding ToTime,Converter={StaticResource DateConverter},ConverterParameter='hh:mm tt'}" Header="To Time" />
                                        <data:DataGridTextColumn  Binding="{Binding MrNo}" Header="MRN" />
                                        <data:DataGridTextColumn  Binding="{Binding PatientName}" Header="Patient Name" Width="150"/>
                                        <data:DataGridTextColumn  Binding="{Binding MobileNo}" Header="Mobile No." />
                                        <data:DataGridTextColumn  Binding="{Binding ResidenceNo}" Header="Residence No."/>
                                        <data:DataGridTextColumn  Binding="{Binding DoctorName}" Header="Doctor"/>
                                        <data:DataGridTextColumn  Binding="{Binding Description}" Header="Department" />
                                        <data:DataGridTextColumn  Binding="{Binding AppointmentReason}" Header="Reason" />
                                        <data:DataGridTextColumn  Binding="{Binding Reschedule}" Header="Reschedule Reason" /> <!--Ajit 4/10/2016-->
                                        <data:DataGridTextColumn  Binding="{Binding Cancelschedule}" Header="Cancel Reason" />
                                        <!--***-->
                                        <data:DataGridTextColumn Binding="{Binding Remark}" Header="Remark" />
                                        <data:DataGridTextColumn Binding="{Binding SpecialRegistration }" Header="Special Registration " />

                                        <data:DataGridTextColumn Binding="{Binding AppointmentStatusNew }" Header="Appointment Status" />
                                        <data:DataGridTextColumn Binding="{Binding MarkVisitStatus }" Header="Appointment Type " />
                                        <data:DataGridTextColumn Binding="{Binding createdByName }" Header="Created By" />
                                        <data:DataGridTextColumn  Binding="{Binding AddedDateTime ,Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}" Header="Created Date" />
                                        <data:DataGridTextColumn Visibility="Collapsed" Binding="{Binding ModifiedByName }" Header="Last Modified By" />
                                        <data:DataGridTextColumn Visibility="Collapsed" Binding="{Binding UpdatedDateTime,Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}" Header="Last Modified Date" />

                                        <data:DataGridTemplateColumn Header="Mark Visit" Visibility="Visible">
                                            <data:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox x:Name="chkPatient" IsChecked="{Binding Path=VisitMark,Mode=TwoWay}" IsEnabled="{Binding VisitMark,Converter={StaticResource NegateValueConverter}}"   Click="chkPatient_Click" VerticalAlignment="Center" HorizontalAlignment="Center" Width="Auto" ></CheckBox>
                                                </DataTemplate>
                                            </data:DataGridTemplateColumn.CellTemplate>
                                        </data:DataGridTemplateColumn>
                                        <!--<data:DataGridCheckBoxColumn  Binding="{Binding VisitMark}" Header="Visit Mark" />-->



                                        <!--<data:DataGridCheckBoxColumn  Binding="{Binding IsCancelled}" Header="IsCancelled" />
                                    <data:DataGridCheckBoxColumn  Binding="{Binding IsResheduled}" Header="IsResheduled" />-->

                                        <!--<data:DataGridTextColumn  Binding="{Binding Arrived}" Header="Arrived" />
                                            <data:DataGridTextColumn  Binding="{Binding Seen}" Header="Seen" />
                                            <data:DataGridTextColumn  Binding="{Binding VisitId}" Header="VisitId" />-->
                                    </data:DataGrid.Columns>
                                </data:DataGrid>
                            </Border>

                        </controlsToolkit:DockPanel>
                    </controlsToolkit:DockPanel>
                </controls:TabItem>

                <controls:TabItem x:Name="tabAppointmentChart" Style="{StaticResource TabItemStyle}"  Padding="0" Margin="0" Header="AppointmentChart" controlsToolkit:DockPanel.Dock="Top" >

                    <controlsToolkit:DockPanel x:Name="docAppointmentChart"  LastChildFill="True" Grid.Row="0" controlsToolkit:DockPanel.Dock="Top">

                        <controlsToolkit:DockPanel x:Name="docFooter2" controlsToolkit:DockPanel.Dock="Bottom" >
                            <controlsToolkit:DockPanel Margin="2" controlsToolkit:DockPanel.Dock="Top">
                                <StackPanel Grid.Row="3" x:Name="Footer2" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                                    <StackPanel x:Name="SaveCommandPanel2" Orientation="Horizontal"  Margin="0,0,0,0">
                                        <ToggleButton x:Name="CmdClose2"  Grid.Row="4" Content="Close" MinWidth="50" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible"  />
                                    </StackPanel>
                                </StackPanel>
                            </controlsToolkit:DockPanel>
                        </controlsToolkit:DockPanel>


                        <controlsToolkit:DockPanel x:Name="docHeader2" controlsToolkit:DockPanel.Dock="Top">

                            <Border controlsToolkit:DockPanel.Dock= "Top"  BorderBrush="#FF788678"   Width="auto" BorderThickness="1" CornerRadius="3,3,3,3"  Margin="4">
                                <Grid Width="Auto"  Margin="0" controlsToolkit:DockPanel.Dock="Top">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        
                                    </Grid.RowDefinitions>

                                    
                                    <TextBlock  HorizontalAlignment="Right" VerticalAlignment="Center" Text="Date" Grid.Row="0" Grid.Column="0"  Margin="4" />
                                    <controls:DatePicker SelectedDate="{Binding FromDate,Mode=TwoWay}"  x:Name="dtpAppointmentDate" Margin="4" Grid.Row="0" Grid.Column="1" SelectedDateChanged="dtpAppointmentSummary_SelectedDateChanged" HorizontalAlignment="Stretch" />
                                    
                                    <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="Clinic" Grid.Row="0"  Grid.Column="2" Margin="4" />
                                    <inputcombo:AutoCompleteComboBox HorizontalAlignment="Stretch" x:Name="cmbClinic" SelectedValuePath="ID" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" Grid.Row="0" Grid.Column="3"  Margin="4"   SelectionChanged="cmbClinic_SelectionChanged" IsEnabled="True" />
                                    
                                    <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="Department" Grid.Row="0"  Grid.Column="4" Margin="4" />
                                    <inputcombo:AutoCompleteComboBox HorizontalAlignment="Stretch" x:Name="cmbDepartment" SelectedValuePath="ID" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" Grid.Row="0" Grid.Column="5"  Margin="4"  />


                                    <Button x:Name="btnSearchCriteria2" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1" Grid.Column="7" ToolTipService.ToolTip="Find Appointment" Click="btnSearchCriteria_Click">
                                        <Button.Content>
                                            <Image Height="18" Source="/PalashDynamics;component/Icons/xmag.png"></Image>
                                        </Button.Content>
                                    </Button>

                                </Grid>
                            </Border>
                        </controlsToolkit:DockPanel>
                        
                        <controlsToolkit:DockPanel x:Name="docAppointmentChart1" >
                            <Border  BorderBrush="#FF788678"    BorderThickness="1" CornerRadius="5,5,5,5"  Margin="4" >
                                
                            </Border>
                        </controlsToolkit:DockPanel>


                    </controlsToolkit:DockPanel>
                </controls:TabItem>
            </controls:TabControl>
        
        </Grid>
    </Grid>
</UserControl>