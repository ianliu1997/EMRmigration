<controls:ChildWindow x:Class="OPDModule.ItemComparisonWindowForCounterSale"
           xmlns:my="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"  xmlns:input="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input"  xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"  
             xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"  
             xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"
             xmlns:CustomCombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
           Title="Package Rules Comparision"
                      
                        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:Localization="clr-namespace:PalashDynamic.Localization;assembly=PalashDynamic.Localization"
                        xmlns:local="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters" 

                       xmlns:Grp="clr-namespace:Groupbox;assembly=Groupbox" Width="1000" Height="Auto"  >
    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Localization:Localized x:Key="locResource"></Localization:Localized>
            <local:DateTimeConverter x:Key="DateConverter" />
        </ResourceDictionary>
    </controls:ChildWindow.Resources>

    <Grid x:Name="Root">
        <!--Auto combo grid view-->

        <!--Auto combo grid view-->
        <my:DockPanel LastChildFill="True" Margin="4">



            <Border BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" controlsToolkit:DockPanel.Dock="Bottom" BorderThickness="0" CornerRadius="3,3,3,3" Background="Transparent">

                <Grid Height="Auto" Width="Auto" x:Name="BudgetContainer" VerticalAlignment="Stretch">

                    <StackPanel Grid.Row="0" x:Name="Footer1" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Left" Background="Transparent">
                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Text="Total Budget" Grid.Row="0" Grid.Column="0" Margin="4" ></TextBlock>
                        <!--<TextBox Grid.Row="0" Grid.Column="1" Margin="4" Text="{Binding Budget, Mode=TwoWay}" x:Name="txtBudget"  HorizontalAlignment="Stretch"  IsReadOnly="True" Width="150"></TextBox>-->
                        <TextBox Grid.Column="1" Grid.Row="0" x:Name="txtBudget" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="4" IsReadOnly="True" IsTabStop="False" TextAlignment="Right" Width="150"/>
                        <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Text="Consume Budget" Grid.Row="0" Grid.Column="0" Margin="4" Visibility="Collapsed" ></TextBlock>
                        <TextBox Grid.Column="1" Grid.Row="0" x:Name="txtConsumeBudget" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="4" IsReadOnly="True" IsTabStop="False" TextAlignment="Right" Width="150" Visibility="Collapsed"/>
                    </StackPanel>

                    <StackPanel Grid.Row="0" x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                        <StackPanel x:Name="SaveCommandPanel" Orientation="Horizontal"  Margin="0,0,0,0">

                            <ToggleButton TabIndex="8" x:Name="OkButton"  Grid.Row="4" Content="{Binding btnOK,Source={StaticResource locResource}}" MinWidth="50"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="OKButton_Click" />
                            <ToggleButton TabIndex="9" x:Name="cmdCancelButton"  Grid.Row="4" Content="{Binding btnCancel,Source={StaticResource locResource}}" MinWidth="50" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="CancelButton_Click" />
                        </StackPanel>
                    </StackPanel>

                </Grid>
            </Border>


            <my:DockPanel LastChildFill="True" >

                <my:DockPanel LastChildFill="True" my:DockPanel.Dock="Top" >

                    <my:DockPanel LastChildFill="True" >
                        <Grp:GroupBox x:Name="gbIndentItem"  Header="Item List" Margin="2" my:DockPanel.Dock="Top"  >
                            <Grid Height="Auto" Width="Auto" x:Name="ItemContainer" VerticalAlignment="Stretch">

                                <my:DockPanel LastChildFill="True">


                                    <data:DataGrid TabIndex="6"  Height="150" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Visible" Grid.Row="0" ItemsSource="{Binding DataList}"  x:Name="dataGrid2"  AutoGenerateColumns="False"  CanUserSortColumns="False" IsReadOnly="True">
                                        <data:DataGrid.Columns>

                                            <data:DataGridTextColumn IsReadOnly="True" Binding="{Binding ItemID}" Header="ID" />
                                            <data:DataGridTextColumn Binding="{Binding ItemName}" Header="Item Name" />
                                            <data:DataGridTextColumn IsReadOnly="True" Binding="{Binding Manufacture}" Header="Manufacture" />
                                            <!--<data:DataGridTextColumn IsReadOnly="True" Binding="{Binding DrugSchedule}" Header="Drug Schedule" />-->
                                            <data:DataGridTextColumn IsReadOnly="True" Binding="{Binding PregnancyClass}" Header="Pregnancy Class" />
                                            <data:DataGridTextColumn IsReadOnly="True" Binding="{Binding BatchCode}" Header="Batch Code" />
                                            <data:DataGridTextColumn IsReadOnly="True" Binding="{Binding ExpiryDate,  Converter={StaticResource DateConverter},ConverterParameter={StaticResource ExpiryDateDisplayFormat}}" Header="Exp. Date" />
                                            <data:DataGridTextColumn Binding="{Binding Quantity,StringFormat=0.00,Mode=OneWay}" Header="Quantity" >
                                                <data:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </data:DataGridTextColumn.ElementStyle>
                                            </data:DataGridTextColumn>

                                            <data:DataGridTextColumn Binding="{Binding MRP,StringFormat=0.00,Mode=OneWay}" Header="MRP" >
                                                <data:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </data:DataGridTextColumn.ElementStyle>
                                            </data:DataGridTextColumn>

                                            <data:DataGridTextColumn Binding="{Binding ConcessionPercentage,StringFormat=0.00,Mode=OneWay}" Header="Concession (%)" >
                                                <data:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </data:DataGridTextColumn.ElementStyle>
                                            </data:DataGridTextColumn>

                                            <data:DataGridTextColumn Binding="{Binding ConcessionAmount,StringFormat=0.00,Mode=OneWay}" Header="Concession Amt." >
                                                <data:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </data:DataGridTextColumn.ElementStyle>
                                            </data:DataGridTextColumn>

                                            <data:DataGridTextColumn Binding="{Binding Amount,StringFormat=0.00,Mode=OneWay}" Header="Amount" >
                                                <data:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </data:DataGridTextColumn.ElementStyle>
                                            </data:DataGridTextColumn>



                                            <data:DataGridTextColumn Binding="{Binding VATPercent,StringFormat=0.00,Mode=OneWay}" Header="VAT (%)" >
                                                <data:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </data:DataGridTextColumn.ElementStyle>
                                            </data:DataGridTextColumn>
                                            <data:DataGridTextColumn IsReadOnly="True" Binding="{Binding VATAmount,StringFormat=0.00,Mode=OneWay}" Header="VAT Amt." >
                                                <data:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </data:DataGridTextColumn.ElementStyle>
                                            </data:DataGridTextColumn>

                                            <data:DataGridTextColumn IsReadOnly="True" Binding="{Binding NetAmount,StringFormat=0.00,Mode=OneWay}" Header="Net Amt." />
                                            <data:DataGridTemplateColumn Visibility="Collapsed">
                                                <data:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <HyperlinkButton VerticalAlignment="Center" FontFamily="Webdings" Content="r"  Padding="5,0,5,0" IsTabStop="False"  x:Name="cmdDeleteCharges" ToolTipService.ToolTip="Delete"></HyperlinkButton>
                                                    </DataTemplate>
                                                </data:DataGridTemplateColumn.CellTemplate>
                                            </data:DataGridTemplateColumn>
                                            <data:DataGridTextColumn IsReadOnly="True" Binding="{Binding AvailableQuantity,StringFormat=0.00}" Header="Available Quantity" />

                                            <data:DataGridTextColumn IsReadOnly="True" Binding="{Binding PurchaseRate, StringFormat=0.00}" Header="Purchase Rate" >
                                                <data:DataGridTextColumn.ElementStyle>
                                                    <Style TargetType="TextBlock">
                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                    </Style>
                                                </data:DataGridTextColumn.ElementStyle>
                                            </data:DataGridTextColumn>
                                        </data:DataGrid.Columns>
                                    </data:DataGrid>
                                </my:DockPanel>
                            </Grid>

                        </Grp:GroupBox>
                    </my:DockPanel>

                </my:DockPanel>

                <my:DockPanel LastChildFill="True" >
                    <Grp:GroupBox x:Name="gbSelectedItem" Header="Updated Item List" Margin="2" >
                        <Grid>


                            <data:DataGrid  x:Name="dgSelectedItemList"  Height="150" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Visible" AutoGenerateColumns="False"  AlternatingRowBackground="Silver" VerticalAlignment="Stretch"  Margin="4" CanUserSortColumns="False" ItemsSource="{Binding ItemBatchList}" IsReadOnly="True">
                                <data:DataGrid.Columns>

                                    <data:DataGridTextColumn IsReadOnly="True" Binding="{Binding ItemID}" Header="ID" />
                                    <data:DataGridTextColumn Binding="{Binding ItemName}" Header="Item Name" />
                                    <data:DataGridTextColumn IsReadOnly="True" Binding="{Binding Manufacture}" Header="Manufacture" />
                                    <!--<data:DataGridTextColumn IsReadOnly="True" Binding="{Binding DrugSchedule}" Header="Drug Schedule" />-->
                                    <data:DataGridTextColumn IsReadOnly="True" Binding="{Binding PregnancyClass}" Header="Pregnancy Class" />
                                    <data:DataGridTextColumn IsReadOnly="True" Binding="{Binding BatchCode}" Header="Batch Code" />
                                    <data:DataGridTextColumn IsReadOnly="True" Binding="{Binding ExpiryDate,  Converter={StaticResource DateConverter},ConverterParameter={StaticResource ExpiryDateDisplayFormat}}" Header="Exp. Date" />
                                    <data:DataGridTextColumn Binding="{Binding Quantity,StringFormat=0.00,Mode=OneWay}" Header="Quantity" >
                                        <data:DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Right"/>
                                            </Style>
                                        </data:DataGridTextColumn.ElementStyle>
                                    </data:DataGridTextColumn>

                                    <data:DataGridTextColumn Binding="{Binding MRP,StringFormat=0.00,Mode=OneWay}" Header="MRP" >
                                        <data:DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Right"/>
                                            </Style>
                                        </data:DataGridTextColumn.ElementStyle>
                                    </data:DataGridTextColumn>

                                    <data:DataGridTextColumn Binding="{Binding ConcessionPercentage,StringFormat=0.00,Mode=OneWay}" Header="Concession (%)" >
                                        <data:DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Right"/>
                                            </Style>
                                        </data:DataGridTextColumn.ElementStyle>
                                    </data:DataGridTextColumn>

                                    <data:DataGridTextColumn Binding="{Binding ConcessionAmount,StringFormat=0.00,Mode=OneWay}" Header="Concession Amt." >
                                        <data:DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Right"/>
                                            </Style>
                                        </data:DataGridTextColumn.ElementStyle>
                                    </data:DataGridTextColumn>

                                    <data:DataGridTextColumn Binding="{Binding Amount,StringFormat=0.00,Mode=OneWay}" Header="Amount" >
                                        <data:DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Right"/>
                                            </Style>
                                        </data:DataGridTextColumn.ElementStyle>
                                    </data:DataGridTextColumn>



                                    <data:DataGridTextColumn Binding="{Binding VATPercent,StringFormat=0.00,Mode=OneWay}" Header="VAT (%)" >
                                        <data:DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Right"/>
                                            </Style>
                                        </data:DataGridTextColumn.ElementStyle>
                                    </data:DataGridTextColumn>
                                    <data:DataGridTextColumn IsReadOnly="True" Binding="{Binding VATAmount,StringFormat=0.00,Mode=OneWay}" Header="VAT Amt." >
                                        <data:DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Right"/>
                                            </Style>
                                        </data:DataGridTextColumn.ElementStyle>
                                    </data:DataGridTextColumn>

                                    <data:DataGridTextColumn IsReadOnly="True" Binding="{Binding ActualNetAmt,StringFormat=0.00,Mode=OneWay}" Header="Net Amt." />
                                    <data:DataGridTextColumn IsReadOnly="True" Binding="{Binding Budget,StringFormat=0.00,Mode=OneWay}" Header="Item Budget" />
                                    <data:DataGridTextColumn IsReadOnly="True" Binding="{Binding NetAmount,StringFormat=0.00,Mode=OneWay}" Header="Payable Net Amt." />
                                    <data:DataGridTemplateColumn Visibility="Collapsed">
                                        <data:DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <HyperlinkButton VerticalAlignment="Center" FontFamily="Webdings" Content="r"  Padding="5,0,5,0" IsTabStop="False"  x:Name="cmdDeleteCharges" ToolTipService.ToolTip="Delete"></HyperlinkButton>
                                            </DataTemplate>
                                        </data:DataGridTemplateColumn.CellTemplate>
                                    </data:DataGridTemplateColumn>
                                    <data:DataGridTextColumn IsReadOnly="True" Binding="{Binding AvailableQuantity,StringFormat=0.00}" Header="Available Quantity" />

                                    <data:DataGridTextColumn IsReadOnly="True" Binding="{Binding PurchaseRate, StringFormat=0.00}" Header="Purchase Rate" >
                                        <data:DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Right"/>
                                            </Style>
                                        </data:DataGridTextColumn.ElementStyle>
                                    </data:DataGridTextColumn>
                                </data:DataGrid.Columns>
                            </data:DataGrid>
                        </Grid>


                    </Grp:GroupBox>
                </my:DockPanel>
            </my:DockPanel>



        </my:DockPanel>
    </Grid>
</controls:ChildWindow>