<controls:ChildWindow x:Class="PalashDynamics.UserControls.WaitIndicator"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="Auto" Height="Auto" HasCloseButton="False" Title="">
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <!--<TextBlock x:Name="Message" Text="Loading..."></TextBlock>-->
        <ProgressBar x:Name="myProgressbar" Width="400" Height="20" Grid.Row="1" IsIndeterminate="True" />
    </Grid>
</controls:ChildWindow>