<UserControl xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"  
    x:Class="EMR.frmIPDEMRFollowup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
     xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
    xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"  
    xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"
    xmlns:Converter="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters"
    xmlns:Localization="clr-namespace:PalashDynamic.Localization;assembly=PalashDynamic.Localization"
    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
             xmlns:DatePicker="clr-namespace:EMR">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Localization:Localized x:Key="locResource"></Localization:Localized>
            <Converter:DateTimeConverter x:Key="DateConverter"></Converter:DateTimeConverter>
            <Converter:DateTimeConverterGlobal x:Key="DateConverterGlobal"></Converter:DateTimeConverterGlobal>
        </ResourceDictionary>

    </UserControl.Resources>
    <Grid>
        <toolkit:DockPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="4" >

            <Border Grid.Row="0" Grid.Column="0" HorizontalAlignment="Stretch" controlsToolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                <ContentControl VerticalAlignment="Center" x:Name="lblFollowUp" FontSize="12" Content="{Binding lblFollowUp,Source={StaticResource locResource}}" Margin="-1,-1,-1,-1" Style="{StaticResource Header}" HorizontalAlignment="Stretch" />
            </Border>

            <Border BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" toolkit:DockPanel.Dock="Bottom" BorderThickness="1" CornerRadius="3,3,3,3" Background="Transparent" >
                <StackPanel x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                    <StackPanel Orientation="Horizontal" x:Name="spSpecDoctor" Visibility="Collapsed">
                        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="4,0,4,0" Text="{Binding lblSpecialization, Source={StaticResource locResource}}"  Grid.Row="0" Grid.Column="4"/>
                        <inputcombo:AutoCompleteComboBox  x:Name="cmbSpecialization" Margin="4,0,4,0" VerticalAlignment="Center" ItemsSource="{Binding}" HorizontalAlignment="Stretch" SelectedValuePath="Code" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" MinWidth="70" ></inputcombo:AutoCompleteComboBox>
                        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="4,0,4,0" Text="{Binding lblDoctor, Source={StaticResource locResource}}"  Grid.Row="0" Grid.Column="4"/>
                        <inputcombo:AutoCompleteComboBox  x:Name="cmbDoctor" Margin="4,0,4,0" VerticalAlignment="Center" ItemsSource="{Binding}" HorizontalAlignment="Stretch" SelectedValuePath="Code" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" TabIndex="2" MinWidth="70" ></inputcombo:AutoCompleteComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"  Margin="1" HorizontalAlignment="Right"  >

                        <ToggleButton   Margin="5,0,10,0" Content="{Binding btnSave,Source={StaticResource locResource}}" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdSave" Click="cmdSave_Click" Width="auto"></ToggleButton>

                        <ToggleButton  Margin="5,0,0,0" Content="{Binding btnCancel,Source={StaticResource locResource}}" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdCancel" Click="cmdCancel_Click" Width="auto"></ToggleButton>

                    </StackPanel>
                </StackPanel>
            </Border>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto"></RowDefinition>
                    <RowDefinition ></RowDefinition>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="auto"></ColumnDefinition>
                    <ColumnDefinition ></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <sdk:Label Content="{Binding lblAdviceColon,Source={StaticResource locResource}}" Grid.Row="0" x:Name="lblAdvice" Margin="4" Visibility="Collapsed"></sdk:Label>
                <TextBox AcceptsReturn="True" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="4" Grid.Row="0" Grid.Column="1" AllowDrop="True" x:Name="txtFollowUpAdvice" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Visible" Text="{Binding FollowUpAdvice,Mode=TwoWay}" Visibility="Collapsed"></TextBox>
                <sdk:Label Content="{Binding lblFollowUpDateColon,Source={StaticResource locResource}}" Grid.Row="0" x:Name="lblFollowUpAdvice"></sdk:Label>
                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Margin="4">
                    <DatePicker:ReadonlyDatePicker x:Name="dpFollowUpDate" Margin="4">
                    </DatePicker:ReadonlyDatePicker>
                    <ToggleButton Content="{Binding btnScheduleAppointment,Source={StaticResource locResource}}" x:Name="cmdSchedule" Background="#000000" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Click="cmdSchedule_Click" Width="auto" Margin="20,0,4,0" MinHeight="25" Visibility="Collapsed" ></ToggleButton>
                </StackPanel>

                <sdk:Label Content="{Binding lblFollowUpRemarkColon,Source={StaticResource locResource}}" Grid.Row="1" x:Name="lblOther" Margin="4"></sdk:Label>
                <TextBox AcceptsReturn="True" HorizontalAlignment="Stretch" Margin="4" VerticalAlignment="Stretch" Grid.Row="1" Grid.Column="1" AllowDrop="True" x:Name="txtFollowUpRemark" VerticalScrollBarVisibility="Visible" TextWrapping="Wrap" Text="{Binding OtherAllergy,Mode=TwoWay}" MaxLength="1500"></TextBox>
            </Grid>
        </toolkit:DockPanel>
    </Grid>
</UserControl>
