<controls:ChildWindow x:Class="EMR.ComplaintStatus"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
                      xmlns:Localization="clr-namespace:PalashDynamic.Localization;assembly=PalashDynamic.Localization"
           Width="auto" Height="auto" Title="Last Chief Complaint Status" Background="White">
    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Localization:Localized x:Key="locResource"></Localization:Localized>
        </ResourceDictionary>
    </controls:ChildWindow.Resources>

    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock x:Name="txtComplaints" Margin="5"></TextBlock>
        <Border Grid.Row="1"  BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" BorderThickness="1" CornerRadius="3,3,3,3" Background="Transparent" >
            <StackPanel x:Name="spStatus" >
                <RadioButton Content="{Binding lblCured, Source={StaticResource locResource}}" GroupName="CS"></RadioButton>
                <RadioButton Content="{Binding lblPartially, Source={StaticResource locResource}}" GroupName="CS"></RadioButton>
                <RadioButton Content="{Binding lblAsItIs, Source={StaticResource locResource}}" GroupName="CS"></RadioButton>
                <RadioButton Content="{Binding lblMoreVulnerable, Source={StaticResource locResource}}" GroupName="CS"></RadioButton>
            </StackPanel>
        </Border>
        <Border Grid.Row="2"  BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" BorderThickness="1" CornerRadius="3,3,3,3" Background="Transparent" >
            <StackPanel Orientation="Horizontal"  Margin="1" HorizontalAlignment="Right"  >
                <ToggleButton   Margin="5,0,10,0" Content="{Binding btnSave,Source={StaticResource locResource}}" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdSave" Click="OKButton_Click" Width="auto"></ToggleButton>
                <ToggleButton  Margin="5,0,0,0" Content="{Binding btnCancel, Source={StaticResource locResource}}" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdCancel" Click="CancelButton_Click" Width="auto" ></ToggleButton>
            </StackPanel>

        </Border>
    </Grid>
</controls:ChildWindow>