<UserControl x:Class="EMR.frmViewGrowthChart"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <RadioButton Name="rdo02LenghtWeight"  Margin="40,2,50,0" Content="Length and Weight" Visibility="Collapsed" VerticalAlignment="Center" Grid.Row="1" Checked="rdo_Checked"/>
        <RadioButton Name="rdo02HCWeight" Margin="40,2,50,0" Content="HC and Weight"  Visibility="Collapsed" VerticalAlignment="Center" Grid.Row="2" Checked="rdo_Checked" />
        <RadioButton Name="rdo220BMI"  Margin="40,2,50,0" Content="BMI" Visibility="Collapsed" VerticalAlignment="Center" Grid.Row="3" Checked="rdo_Checked" />
        <RadioButton Name="rdo220StratureWeight" Margin="40,2,50,0" Content="Stature and Weight"  Visibility="Collapsed" VerticalAlignment="Center" Grid.Row="4" Checked="rdo220StratureWeight_Checked" />

        <TextBlock Grid.Row="5"  x:Name="tbComments" Text="Comments" Visibility="Collapsed"  FontWeight="Bold" VerticalAlignment="Top"  Margin="40,2,50,0"></TextBlock>
        <TextBox Grid.Row="6"  x:Name="txtComments" MinHeight="23" Visibility="Collapsed" TabIndex="1"  VerticalAlignment="Center" HorizontalAlignment="Stretch"  Margin="40,0,25,0"   IsTabStop="True" MaxLength="21" />
        <StackPanel Grid.Row="7" Orientation="Horizontal">
            <ToggleButton x:Name="OKButton" Content="View" Click="OKButton_Click" HorizontalAlignment="Right" Margin="10,0,5,0" Style="{StaticResource ToggleButtonStyle}" />

            <ToggleButton x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" HorizontalAlignment="Right" Margin="5,0,10,0" Style="{StaticResource ToggleButtonStyle}" />
        </StackPanel>
    </Grid>
</UserControl>