<controls:ChildWindow x:Class="EMR.frmDiagnosisEMRTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"  
           Width="1000" Height="600" 
           xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"      
                      Title="Diagnosis Template" Loaded="ChildWindow_Loaded">
    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Themes/Generic1.xaml"/>
                <!--<ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>-->
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:ChildWindow.Resources>
    <Grid Background="White">
        <toolkit:DockPanel LastChildFill="True">
            <Border  BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" toolkit:DockPanel.Dock="Bottom" BorderThickness="1" CornerRadius="3,3,3,3" Background="Transparent" >
                <StackPanel x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                    <StackPanel Orientation="Horizontal"  Margin="1" HorizontalAlignment="Right"  >
                        <ToggleButton   Margin="4" Content="Ok" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdSave" Click="cmdSave_Click"></ToggleButton>
                        <ToggleButton  Margin="4" Content="Close" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdCancel" Click="cmdCancel_Click" ></ToggleButton>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Border  BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" toolkit:DockPanel.Dock="Top" BorderThickness="1" CornerRadius="3,3,3,3" Background="Transparent" >
                <Grid>
                    <Border Grid.Row="2"  x:Name="GeneralFormForm" BorderBrush="{StaticResource BorderDefault}" BorderThickness="1,1,1,1" CornerRadius="5,5,5,5" Padding="5,5,5,5" Margin="0,0,0,0"   >
                        <!--<ScrollViewer  Style="{StaticResource ScrollViewerStyle1}" VerticalScrollBarVisibility="Visible" HorizontalScrollBarVisibility="Auto" KeyUp="ScrollViewer_KeyUp">-->
                        <ScrollViewer x:Name="scroolForm" Style="{StaticResource ScrollViewerStyle1}" Background="Transparent" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" controlsToolkit:ScrollViewerExtensions.IsMouseWheelScrollingEnabled="True" KeyUp="ScrollViewer_KeyUp">
                            <Grid x:Name="Form" HorizontalAlignment="Stretch">
                            </Grid>
                        </ScrollViewer>
                    </Border>
                </Grid>
            </Border>
        </toolkit:DockPanel>
    </Grid>
</controls:ChildWindow>