<controls:ChildWindow x:Class="EMR.PrintReferralOrder"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"
xmlns:local="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters"  
xmlns:Localization="clr-namespace:PalashDynamic.Localization;assembly=PalashDynamic.Localization">

    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Localization:Localized x:Key="locResource"></Localization:Localized>
            <local:DateTimeConverter x:Key="DateConverter" />
        </ResourceDictionary>
    </controls:ChildWindow.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition ></RowDefinition>
            <RowDefinition Height="Auto" ></RowDefinition>
        </Grid.RowDefinitions>

        <data:DataGrid HorizontalAlignment="Stretch" x:Name="dgReferralList" AutoGenerateColumns="False" ItemsSource="{Binding}" VerticalScrollBarVisibility="Visible" IsReadOnly="True" Margin="0" CanUserSortColumns="False">
            <data:DataGrid.Columns>

                <data:DataGridTextColumn Binding="{Binding Path=Specialization}" Localization:DataGridColumnHelper.HeaderBinding="{Binding lblReferredSpecialization,Source={StaticResource locResource}}" ></data:DataGridTextColumn>
                <data:DataGridTextColumn Binding="{Binding Path=DoctorName}" Localization:DataGridColumnHelper.HeaderBinding="{Binding lblReferredDoctor,Source={StaticResource locResource}}" ></data:DataGridTextColumn>
                <data:DataGridTextColumn Binding="{Binding Path=ReferalSpecialization}" Localization:DataGridColumnHelper.HeaderBinding="{Binding lblReferalSpecialization,Source={StaticResource locResource}}" ></data:DataGridTextColumn>
                <data:DataGridTextColumn Binding="{Binding  ReferalDoctor }" Localization:DataGridColumnHelper.HeaderBinding="{Binding lblReferralDoctor,Source={StaticResource locResource}}" ></data:DataGridTextColumn>
                
                <data:DataGridTemplateColumn>
                    <data:DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <HyperlinkButton Background="White"  VerticalAlignment="Center" Padding="5,0,5,0" IsTabStop="False" Click="btnPrint_Click" x:Name="btnPrint" >
                                <Image  MinHeight="16" Stretch="Fill" Source="/PalashDynamics;component/Icons/Print_32.png"   />
                            </HyperlinkButton>
                        </DataTemplate>
                    </data:DataGridTemplateColumn.CellTemplate>
                </data:DataGridTemplateColumn>
            </data:DataGrid.Columns>
        </data:DataGrid>

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right">
            <ToggleButton x:Name="btnCloseReferral"  Grid.Row="2" Content="{Binding btnClose, Source={StaticResource locResource}}" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Right" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="CancelButton_Click"  />
        </StackPanel>

    </Grid>
</controls:ChildWindow>