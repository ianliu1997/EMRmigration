<controls:ChildWindow x:Class="EMR.PatientLinkFileDeleteWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="400" Height="300" 
           Title="Patient Link File">
    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:ChildWindow.Resources>
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock   Grid.Row="0" TextAlignment="Left" Text="Deletion Reason :" Margin="4" HorizontalAlignment="Left" VerticalAlignment="Center"></TextBlock>
        <TextBox TabIndex="2"  Grid.Row="1" x:Name="txtItemName"  VerticalAlignment="Stretch" Margin="4"  IsTabStop="True" TextAlignment="Left" IsHitTestVisible="True" TextWrapping="Wrap" />
        <ToggleButton x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,0,0" Grid.Row="2"  Style="{StaticResource ToggleButtonStyle}" />
        <ToggleButton x:Name="OKButton" Content="OK" Click="OKButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,79,0" Grid.Row="2"  Style="{StaticResource ToggleButtonStyle}" />
    </Grid>
</controls:ChildWindow>