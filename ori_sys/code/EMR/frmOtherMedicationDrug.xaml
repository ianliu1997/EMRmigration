<controls:ChildWindow x:Class="EMR.frmOtherMedicationDrug"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"
           xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"  
           xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit" 
           xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
           xmlns:local="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters"
           xmlns:dataInput="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data.Input"
           xmlns:input="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input"
           Width="450" Height="250" xmlns:Localization="clr-namespace:PalashDynamic.Localization;assembly=PalashDynamic.Localization">

    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Localization:Localized x:Key="locResource"></Localization:Localized>
        </ResourceDictionary>
    </controls:ChildWindow.Resources>

    <Grid x:Name="LayoutRoot" Margin="2" Background="White">

        <controlsToolkit:DockPanel x:Name="Main"  >
            <controlsToolkit:DockPanel x:Name="docFooter" controlsToolkit:DockPanel.Dock="Bottom" >
                <controlsToolkit:DockPanel Margin="2" controlsToolkit:DockPanel.Dock="Top">

                    <Border Grid.Row="1" Grid.Column="1"  BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" toolkit:DockPanel.Dock="Bottom" BorderThickness="1" CornerRadius="3,3,3,3" Background="Transparent" >
                        <StackPanel x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                            <StackPanel x:Name="Footer1" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">

                                <ToggleButton  x:Name="cmdAdd" Grid.Row="1" Grid.Column="3" TabIndex="2" Content="{Binding btnOK, Source={StaticResource locResource}}"  Background="#000000" Margin="5,0,10,0" HorizontalAlignment="Left"  VerticalAlignment="Center" Style="{StaticResource ToggleButtonStyle}" Click="OKButton_Click" Width="auto" />
                                <ToggleButton  x:Name="cmdCancel"  Grid.Row="1" Grid.Column="3" TabIndex="2" Content="{Binding btnCancel, Source={StaticResource locResource}}"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Left"  VerticalAlignment="Center" Style="{StaticResource ToggleButtonStyle}" Click="CancelButton_Click" Width="auto" />

                            </StackPanel>
                        </StackPanel>
                    </Border>

                </controlsToolkit:DockPanel>
            </controlsToolkit:DockPanel>

            <controlsToolkit:DockPanel x:Name="DiagnosisOrderList1" >
                <controlsToolkit:DockPanel x:Name="DiagnosisList1">

                    <controlsToolkit:DockPanel x:Name="DockTop" controlsToolkit:DockPanel.Dock="Top" HorizontalAlignment="Stretch">
                        <Grid x:Name="LayoutRoot2" Background="White" Margin="4" HorizontalAlignment="Stretch"  >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>

                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition ></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>

                            </Grid.ColumnDefinitions>

                            <TextBlock HorizontalAlignment="Right" x:Name="lblDiagnosisName" VerticalAlignment="Top"  Margin="4" Text="{Binding lblDrugName, Source={StaticResource locResource}}"  Grid.Row="1" Grid.Column="0"/>
                            <TextBox x:Name="txtDiagnosisName" Grid.Row="1" Grid.Column="1" Margin="4" Text="{Binding Drug, Mode=TwoWay}" HorizontalAlignment="Stretch" MaxLength="200" VerticalScrollBarVisibility="Visible" Height="100" TabIndex="1" AcceptsReturn="True" TextWrapping="Wrap" ></TextBox>
                        </Grid>
                    </controlsToolkit:DockPanel>
                </controlsToolkit:DockPanel>

            </controlsToolkit:DockPanel>
        </controlsToolkit:DockPanel>
    </Grid>

</controls:ChildWindow>