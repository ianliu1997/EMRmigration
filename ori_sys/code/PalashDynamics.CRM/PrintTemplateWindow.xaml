<controls:ChildWindow x:Class="PalashDynamics.CRM.PrintTemplateWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
            xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"
           Width="600" Height="200" Style="{StaticResource ChildWindowDefault}"
           Title="Print Template" Background="White">
    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:ChildWindow.Resources>

    <Grid x:Name="LayoutRoot" Margin="2">
        <controlsToolkit:DockPanel x:Name="DocMain" controlsToolkit:DockPanel.Dock="Top" LastChildFill="True">

            <controlsToolkit:DockPanel x:Name="docFooter" controlsToolkit:DockPanel.Dock="Bottom" >
                <controlsToolkit:DockPanel Margin="2" controlsToolkit:DockPanel.Dock="Top">
                    <StackPanel Grid.Row="3" x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                        <StackPanel x:Name="SaveCommandPanel" Orientation="Horizontal"  Margin="0,0,0,0">
                            <ToggleButton  x:Name="cmdPrint"  Grid.Row="4" Content="Print" MinWidth="50" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch"  Visibility="Visible" Style="{StaticResource ToggleButtonStyle}" />
                            <ToggleButton  x:Name="cmdClose"  Grid.Row="4" Content="Close" MinWidth="50" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch"  Visibility="Visible"  Style="{StaticResource ToggleButtonStyle}" Click="cmdClose_Click"/>
                        </StackPanel>
                    </StackPanel>
                </controlsToolkit:DockPanel>
            </controlsToolkit:DockPanel>

            <Border BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Margin="4,4,4,4"  Background="Transparent">
                <controlsToolkit:DockPanel x:Name="docMain" controlsToolkit:DockPanel.Dock="Top">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition ></ColumnDefinition>
                      
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>

                        </Grid.RowDefinitions>
                       
                        <TextBlock Text="Print Date" Grid.Row="0" Grid.Column="0" Margin="4,10,4,4" HorizontalAlignment="Right" VerticalAlignment="Center"></TextBlock>
                        <controls:DatePicker SelectedDate="{Binding FromDate,Mode=TwoWay}"  x:Name="dtpFromDate" Margin="4,10,4,4" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch"   />
                        
                        <TextBlock Text="Card Type" Grid.Row="0" Grid.Column="2" Margin="4,10,4,4" HorizontalAlignment="Right" VerticalAlignment="Center"></TextBlock>
                        <inputcombo:AutoCompleteComboBox x:Name="cmbCardType" Grid.Row="0" Grid.Column="3" Margin="4,10,4,4" HorizontalAlignment="Stretch" VerticalAlignment="Center"></inputcombo:AutoCompleteComboBox>

                        <TextBlock Text="Tariff" Grid.Row="1" Grid.Column="0" Margin="4" HorizontalAlignment="Right" VerticalAlignment="Center"></TextBlock>
                        <inputcombo:AutoCompleteComboBox x:Name="cmbTariff" Grid.Row="1" Grid.Column="1" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center"></inputcombo:AutoCompleteComboBox>

                        <HyperlinkButton Grid.Column="2" Grid.Row="1" Content="New Taiff" Margin="4" VerticalAlignment="Center" x:Name="hlNewTariff" HorizontalAlignment="Stretch"  Click="hlNewTariff_Click"></HyperlinkButton>
                        <HyperlinkButton Grid.Column="0" Grid.Row="2" Content="Charges" Margin="4" VerticalAlignment="Center" x:Name="hlCharges" Click="hlCharges_Click" HorizontalAlignment="Stretch" ></HyperlinkButton>
                        <TextBox x:Name="txtCharges" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Margin="4" IsReadOnly="True" Style="{StaticResource NumericFieldAlignment}"></TextBox>
                    </Grid>



                </controlsToolkit:DockPanel>
            </Border>

        </controlsToolkit:DockPanel>
    </Grid>
</controls:ChildWindow>