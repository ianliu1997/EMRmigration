<UserControl x:Class="PalashDynamics.CRM.CampDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit" 
    xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"  
             
    xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"   
             xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
    xmlns:dataInput="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data.Input"
    xmlns:input="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input"
             xmlns:Grp="clr-namespace:Groupbox;assembly=Groupbox" 
    xmlns:htmlhost="clr-namespace:FreeHtmlHost;assembly=FreeHtmlHost"
    xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox" 
    xmlns:Converter="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters"
             Height="Auto" Width="Auto" Loaded="CampDetails_Loaded">
             

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Converter:DateTimeConverter x:Key="DateConverter"></Converter:DateTimeConverter>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <!--<Grid.RowDefinitions>
            <RowDefinition>

            </RowDefinition>
            <RowDefinition>

            </RowDefinition>
        </Grid.RowDefinitions>-->

        <controlsToolkit:DockPanel LastChildFill="True">

            <Border BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" controlsToolkit:DockPanel.Dock="Bottom" BorderThickness="1" CornerRadius="3,3,3,3" Background="Transparent">
                <StackPanel x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                    <StackPanel Orientation="Horizontal"  Margin="1" HorizontalAlignment="Right"  >
                        <ToggleButton x:Name="cmdNew" Content="New"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="cmdNew_Click" ></ToggleButton>
                        <ToggleButton x:Name="cmdSave" Content="Save" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}"  Click="cmdSave_Click"></ToggleButton>
                        <ToggleButton Content="Modify" x:Name="cmdModify" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}"  Click="cmdModify_Click"></ToggleButton>
                        <ToggleButton Content="Cancel" x:Name="cmdCancel" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}"  Click="cmdCancel_Click"></ToggleButton>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Grid x:Name="PageContainer">

                <Grid Height="AUTO" Visibility="Visible" Width="auto" x:Name="FrontPanel" Grid.Row="0">



                    <toolkit:DockPanel x:Name="DockContent" toolkit:DockPanel.Dock="Top" >
                        <Border BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Margin="4,4,4,4"  Background="Transparent" >
                            <toolkit:DockPanel x:Name="DockMain" toolkit:DockPanel.Dock="Top" LastChildFill="true">

                                <toolkit:DockPanel x:Name="DockTop" toolkit:DockPanel.Dock="Top" HorizontalAlignment="Stretch">
                                    <Grid x:Name="LayoutRoot2" Background="White" Margin="4" HorizontalAlignment="Stretch"  >
                                        <Grid.RowDefinitions>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                            <ColumnDefinition ></ColumnDefinition>
                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                            <ColumnDefinition ></ColumnDefinition>
                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                            <ColumnDefinition ></ColumnDefinition>
                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="4" Text="Camp"  Grid.Row="0" Grid.Column="0"/>
                                        <inputcombo:AutoCompleteComboBox  x:Name="cmbCampName"  Grid.Row="0" Grid.Column="1" Margin="4" VerticalAlignment="Center" ItemsSource="{Binding}" HorizontalAlignment="Stretch" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" TabIndex="0"  ></inputcombo:AutoCompleteComboBox>

                                        <TextBlock  HorizontalAlignment="Right" VerticalAlignment="Center" Text="From Date" Grid.Row="0" Grid.Column="2"  Margin="4" Visibility="Collapsed"/>
                                        <controls:DatePicker SelectedDate="{Binding FromDate,Mode=TwoWay}"  x:Name="dtpSelectFromDate" Margin="4" Grid.Row="0" Grid.Column="3"  HorizontalAlignment="Stretch" TabIndex="1"/>

                                        <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="To Date" Grid.Row="0" Grid.Column="4"  Margin="4" Visibility="Collapsed"/>
                                        <controls:DatePicker SelectedDate="{Binding ToDate,Mode=TwoWay}"  x:Name="dtpSelectToDate" Margin="4" Grid.Row="0" Grid.Column="5"  HorizontalAlignment="Stretch" TabIndex="2"/>

                                        <!--<ToggleButton Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible"  Content="Search"   x:Name="cmdSearch" Click="cmdSearch_Click"  Grid.Row="0" Grid.Column="2" Height="20"></ToggleButton>-->

                                        <Button x:Name="cmdSearch" Click="cmdSearch_Click" Margin="4" ToolTipService.ToolTip="Search Camp Details"  Grid.Row="0" Grid.Column="2" TabIndex="3" >
                                            <Image Source="/PalashDynamics;component/Icons/Search_b.JPG" Margin="4,0,4,4" Width="20" ></Image>
                                        </Button>

                                    </Grid>
                                </toolkit:DockPanel>


                                <Border Grid.Row="0"  toolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0"  Background="Transparent">
                                    <ContentControl VerticalAlignment="Center" FontSize="12" Content="List Of Camp Details" Margin="-1" Style="{StaticResource Header}"     HorizontalAlignment="Stretch" />
                                </Border>
                                <toolkit:DockPanel x:Name="DockMiddle" HorizontalAlignment="Stretch">

                                    <data:DataPager x:Name="dgDataPager" controlsToolkit:DockPanel.Dock="Bottom" 
                                                        DisplayMode="FirstLastPreviousNext"  IsEnabled="True"                       
                                                        Source="{Binding}" 
                                                        AutoEllipsis="False" IsTotalItemCountFixed="False"  />
                                    <data:DataGrid x:Name="dgCampDetailsList" AutoGenerateColumns="False" ItemsSource="{Binding}" VerticalScrollBarVisibility="Visible" IsReadOnly="True" Margin="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TabIndex="4" CanUserSortColumns="False">
                                        <data:DataGrid.Columns >
                                            <data:DataGridTemplateColumn>
                                                <data:DataGridTemplateColumn.CellTemplate>

                                                    <DataTemplate>
                                                        <HyperlinkButton VerticalAlignment="Center"  Content="View"  Padding="5,0,5,0"   x:Name="hlbViewCampDetails" Click="hlbViewCampDetails_Click"></HyperlinkButton>
                                                    </DataTemplate>
                                                </data:DataGridTemplateColumn.CellTemplate>
                                            </data:DataGridTemplateColumn>


                                            <data:DataGridTextColumn Binding="{Binding Description}" Header="Camp" />
                                            <data:DataGridTextColumn Binding="{Binding FromDate,Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}" Header="From Date" />

                                            <data:DataGridTextColumn Binding="{Binding ToDate,Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}" Header="To Date" />
                                            <data:DataGridTextColumn Binding="{Binding City}" Header="City" />
                                            <data:DataGridTextColumn Binding="{Binding Area}" Header="Area" />
                                            <!--<data:DataGridTextColumn Binding="{Binding ServiceName}" Header="ServiceName" />
                                    <data:DataGridTextColumn Binding="{Binding ServiceCode}" Header="ServiceCode" />-->

                                        </data:DataGrid.Columns>
                                    </data:DataGrid>
                                </toolkit:DockPanel>
                            </toolkit:DockPanel>
                        </Border>
                    </toolkit:DockPanel>

                </Grid>

                <Grid  Height="AUTO" Width="auto" x:Name="BackPanel" Visibility="Collapsed" Grid.Row="1">

                    <controlsToolkit:DockPanel x:Name="docMain" controlsToolkit:DockPanel.Dock="Top" LastChildFill="True">


                        <controls:TabControl Padding="0"  BorderBrush="{StaticResource TabControlDarkerBorder}"  x:Name="TabControlMain" Margin="4,-4,4,4" >
                            <controls:TabItem x:Name="tabCampDetails" Style="{StaticResource TabItemStyle}"  Padding="0" Margin="0" Header="Camp Details" controlsToolkit:DockPanel.Dock="Top">
                                <controlsToolkit:DockPanel LastChildFill="True" controlsToolkit:DockPanel.Dock="Top" VerticalAlignment="Stretch">
                                    <controlsToolkit:DockPanel controlsToolkit:DockPanel.Dock="Left" VerticalAlignment="Stretch">

                                        <Grid VerticalAlignment="Stretch">

                                            <Border BorderBrush="{StaticResource TabControlDarkerBorder}" Grid.Row="0"  Margin="4" controlsToolkit:DockPanel.Dock="Bottom" BorderThickness="1" CornerRadius="3,3,3,3" Background="Transparent">
                                                <!--<Grp:GroupBox  Grid.Row="0" Margin="4" Header="" VerticalAlignment="Stretch">-->
                                                <Grid Background="White"   Margin="4" HorizontalAlignment="Stretch">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition />
                                                        <RowDefinition Height="Auto"/>                                                     
                                                     
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition />
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock Text="Camp"  HorizontalAlignment="Right" VerticalAlignment="Center" Margin="4"    Grid.Row="0" Grid.Column="0"/>
                                                    <inputcombo:AutoCompleteComboBox  x:Name="cmbCamp"  Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="3" Margin="4" VerticalAlignment="Center" ItemsSource="{Binding}" HorizontalAlignment="Stretch" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" TabIndex="0"></inputcombo:AutoCompleteComboBox>

                                                    <TextBlock  Text="From Date"  HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="4"  Grid.Row="1" Grid.Column="0"/>
                                                    <controls:DatePicker x:Name="dtpFromDate"  SelectedDate="{Binding FromDate,Mode=TwoWay}"  Grid.Row="1"  Grid.Column="1"  Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" TabIndex="1" SelectedDateChanged="dtpFromDate_SelectedDateChanged"/>

                                                    <TextBlock Text="To Date"  HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="4"  Grid.Row="1" Grid.Column="2"/>
                                                    <controls:DatePicker x:Name="dtpToDate" SelectedDate="{Binding ToDate,Mode=TwoWay}"   Grid.Row="1"  Grid.Column="3"  Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" SelectedDateChanged="dtpToDate_SelectedDateChanged" TabIndex="2"/>

                                                    <TextBlock  Text="City"  HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="4"  Grid.Row="2" Grid.Column="0"/>
                                                    <input:AutoCompleteBox Margin="4" Grid.Row="2" Grid.Column="1" Text="{Binding City, Mode=TwoWay}"  x:Name="txtCity"  LostFocus="txtCity_LostFocus"  KeyDown="Autocomplete_KeyDown"  TextChanged="Autocomplete_TextChanged"  TabIndex="3"></input:AutoCompleteBox>

                                                    <TextBlock  Text="Area"  HorizontalAlignment="Right" VerticalAlignment="Center" Margin="4"  Grid.Row="2" Grid.Column="2"/>
                                                    <input:AutoCompleteBox Margin="4" Grid.Row="2" Grid.Column="3" Text="{Binding Area, Mode=TwoWay}"  x:Name="txtArea" LostFocus="txtArea_LostFocus" TabIndex="4"  KeyDown="Autocomplete_KeyDown"  TextChanged="Autocomplete_TextChanged" ></input:AutoCompleteBox>

                                                    <TextBlock  Text="Valid Days"  HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="4"  Grid.Row="3" Grid.Column="0"/>
                                                    <TextBox x:Name="txtValidDays" Text="{Binding ValidDays, Mode=TwoWay}"   Grid.Row="3"  Grid.Column="1" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" Style="{StaticResource NumericFieldAlignment}"  TextChanged="txtValidDays_TextChanged" KeyDown="txtValidDays_KeyDown" IsReadOnly="True"  TabIndex="5"/>

                                                    <!--<TextBlock  Text="Concession(%)"  HorizontalAlignment="Right" VerticalAlignment="Center" Margin="4"  Grid.Row="3" Grid.Column="2" Visibility="Collapsed"/>
                                                    <TextBox x:Name="txtConcession" Text="{Binding Concession, Mode=TwoWay}"  Grid.Row="3"  Grid.Column="3" Margin="4" Style="{StaticResource NumericFieldAlignment}" Visibility="Collapsed" HorizontalAlignment="Stretch" VerticalAlignment="Center" TextChanged="txtConcession_TextChanged" KeyDown="txtConcession_KeyDown" LostFocus="txtConcession_LostFocus"  TabIndex="6"/>-->

                                                    <TextBlock  Text="Tariff"  HorizontalAlignment="Right"  Margin="4" Height="18" Grid.Row="3" Grid.Column="2" VerticalAlignment="Center"/>
                                                    <inputcombo:AutoCompleteComboBox  x:Name="cmbTariff"  Grid.Row="3" Grid.Column="3"  Margin="4"  VerticalAlignment="Center"  HorizontalAlignment="Stretch"  SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" TabIndex="7" SelectionChanged="cmbTariff_SelectionChanged"></inputcombo:AutoCompleteComboBox>
                                                    <!--<HyperlinkButton Grid.Column="2" Grid.Row="4" Content="New Tariff" Margin="4" VerticalAlignment="Center" x:Name="hlNewTariff" Click="hlNewTariff_Click" HorizontalAlignment="Right" TabIndex="8"></HyperlinkButton>-->

                                                    <TextBlock Text="Reason"  HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="4" Grid.Row="5" Grid.Column="0"/>
                                                    <TextBox x:Name="txReason" Text="{Binding Reason, Mode=TwoWay}"  Grid.Row="5"  Grid.Column="1" Margin="4"   Grid.ColumnSpan="3" AcceptsReturn="True"  VerticalAlignment="Center" VerticalScrollBarVisibility="Visible" HorizontalAlignment="Stretch" MaxLength="255" TabIndex="9" TextWrapping="Wrap" Width="350" Height="50"></TextBox>

                                                    <TextBlock Text="Email Template"  HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="4" Grid.Row="6" Grid.Column="0"/>
                                                    <inputcombo:AutoCompleteComboBox  x:Name="cmbEmail"  Grid.Row="6" Grid.Column="1" Grid.ColumnSpan="2" Margin="4"  VerticalAlignment="Center"  HorizontalAlignment="Stretch"  TabIndex="10" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID"></inputcombo:AutoCompleteComboBox>
                                                    <HyperlinkButton Grid.Column="3" Grid.Row="6" Content="Preview Email Template" Margin="4" VerticalAlignment="Center" x:Name="hblEmail" Click="hblEmail_Click"  HorizontalAlignment="Stretch"  TabIndex="11"></HyperlinkButton>

                                                    <TextBlock Text="Sms Template"  HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="4" Grid.Row="7" Grid.Column="0"/>
                                                    <inputcombo:AutoCompleteComboBox  x:Name="cmbSms"  Grid.Row="7" Grid.Column="1" Grid.ColumnSpan="2" Margin="4"  VerticalAlignment="Center"  HorizontalAlignment="Stretch"  TabIndex="12" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" ></inputcombo:AutoCompleteComboBox>
                                                    <HyperlinkButton Grid.Column="3" Grid.Row="7" Content="Preview Sms Template" Margin="4" VerticalAlignment="Center" x:Name="hblSms" Click="hblSms_Click"  HorizontalAlignment="Stretch" TabIndex="13"></HyperlinkButton>
                                                    <!--<TextBlock Grid.Column="1" Grid.Row="8" Grid.ColumnSpan="3" Text=""></TextBlock>-->
                                                    <HyperlinkButton HorizontalAlignment="Right" Grid.Column="1" Grid.Row="9" Grid.ColumnSpan="3"   Content="View Location Map" Margin="4" VerticalAlignment="Center" x:Name="LocationLink" Click="LocationLink_Click"  Foreground="Blue" TabIndex="14"></HyperlinkButton>

                                                    <TextBlock  Text="Registration Valid Till"  HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="4"  Grid.Row="8"  />
                                                    <controls:DatePicker x:Name="dtpPatientRegistrationValidTillDate"  SelectedDate="{Binding PatientRegistrationValidTillDate,Mode=TwoWay}"  Grid.Row="8"  Grid.Column="1" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" TabIndex="1"/>

                                                </Grid>

                                                <!--</Grp:GroupBox>-->
                                            </Border>

                                        </Grid>
                                    </controlsToolkit:DockPanel>

                                    <controlsToolkit:DockPanel controlsToolkit:DockPanel.Dock="Right">
                                    </controlsToolkit:DockPanel>
                                </controlsToolkit:DockPanel>
                            </controls:TabItem>



                            <!-- Tab 2 -->
                            <controls:TabItem x:Name="tabSelection1" Style="{StaticResource TabItemStyle}"  Padding="0" Margin="0" Header="Camp Service" >



                                <Border  BorderBrush="#FF788678"    BorderThickness="1" CornerRadius="5,5,5,5"  Margin="4" >
                                    <Grid x:Name="LayoutRoot1" >
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Border  BorderBrush="#FF788678"    BorderThickness="1" CornerRadius="5,5,5,5"  Margin="4"  >
                                            <StackPanel>
                                                <HyperlinkButton  Width="Auto" Height="25" x:Name="btnService" Content="Select Service" HorizontalAlignment="Left" FontWeight="Bold" Foreground="#FFA31F1F" Click="btnService_Click" Margin="4" TabIndex="0">
                                                </HyperlinkButton>
                                            </StackPanel>
                                        </Border>
                                        <!--<Border  BorderBrush="#FF788678"    BorderThickness="1" CornerRadius="5,5,5,5"  Margin="5,5,5,5" Grid.Row="1"  Width="Auto" >-->
                                        <controls:TabControl Padding="0"  BorderBrush="{StaticResource TabControlDarkerBorder}" Margin="4,-4,4,4"  x:Name="TabMain" Grid.Row="2" >

                                            <controls:TabItem x:Name="TabFree" Style="{StaticResource TabItemStyle}"  Padding="0" Margin="0" Header="Free Service" >

                                                <StackPanel>
                                                    <Border  BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0"  Background="Transparent" Margin="4">
                                                        <ContentControl VerticalAlignment="Center" FontSize="12" Content="List Of Service" Margin="-1" Style="{StaticResource Header}"     HorizontalAlignment="Stretch" />
                                                    </Border>

                                                    <data:DataGrid x:Name="dgFreeServiceList" AutoGenerateColumns="False" ItemsSource="{Binding}" IsReadOnly="True" CanUserSortColumns="False">
                                                        <data:DataGrid.Columns>
                                                            <data:DataGridTextColumn Binding="{Binding ServiceCode}" Header="Code" />
                                                            <data:DataGridTextColumn Binding="{Binding ServiceName}" Header="Service Name" />
                                                            <data:DataGridTemplateColumn>
                                                                <data:DataGridTemplateColumn.CellTemplate>
                                                                    <DataTemplate>
                                                                        <HyperlinkButton VerticalAlignment="Center" FontFamily="Webdings" Content="r"  Padding="5,0,5,0" IsTabStop="False" Click="cmdDeleteFreeService_Click"  x:Name="cmdDeleteFreeService" ToolTipService.ToolTip="Delete"></HyperlinkButton>
                                                                    </DataTemplate>
                                                                </data:DataGridTemplateColumn.CellTemplate>
                                                            </data:DataGridTemplateColumn>
                                                        </data:DataGrid.Columns>
                                                    </data:DataGrid>
                                                </StackPanel>

                                            </controls:TabItem>


                                            <controls:TabItem  x:Name="TabConcession" Style="{StaticResource TabItemStyle}"  Padding="0" Margin="0" Header="Concession Service" >

                                                <StackPanel>
                                                    <Border  BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0"  Background="Transparent" Margin="4">
                                                        <ContentControl VerticalAlignment="Center" FontSize="12" Content="List Of Service" Margin="-1" Style="{StaticResource Header}"     HorizontalAlignment="Stretch" />
                                                    </Border>

                                                    <data:DataGrid x:Name="dgConServiceList" AutoGenerateColumns="False" ItemsSource="{Binding}" CanUserSortColumns="False" >
                                                        <data:DataGrid.Columns>
                                                            <data:DataGridTextColumn Binding="{Binding ServiceCode,Mode=TwoWay}" Header="Code" IsReadOnly="True" />
                                                            <data:DataGridTextColumn Binding="{Binding ServiceName,Mode=TwoWay}" Header="Service Name" IsReadOnly="True" />
                                                            <data:DataGridTextColumn Binding="{Binding Rate,StringFormat=0.00,Mode=TwoWay}" Header="Rate" IsReadOnly="True">
                                                                <data:DataGridTextColumn.ElementStyle>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                                    </Style>
                                                                </data:DataGridTextColumn.ElementStyle>
                                                            </data:DataGridTextColumn>
                                                            <data:DataGridTextColumn Binding="{Binding ConcessionPercentage,StringFormat=0.00,Mode=TwoWay}" Header="Concession Percentage" IsReadOnly="False">
                                                                <data:DataGridTextColumn.ElementStyle>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                                    </Style>
                                                                </data:DataGridTextColumn.ElementStyle>
                                                            </data:DataGridTextColumn>
                                                            <data:DataGridTextColumn Binding="{Binding ConcessionAmount,StringFormat=0.00,Mode=TwoWay}" Header="Concession Amount" IsReadOnly="False" >
                                                                <data:DataGridTextColumn.ElementStyle>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                                    </Style>
                                                                </data:DataGridTextColumn.ElementStyle>
                                                            </data:DataGridTextColumn>
                                                            <data:DataGridTextColumn Binding="{Binding NetAmount,StringFormat=0.00,Mode=TwoWay}" Header="Net Amount" IsReadOnly="True" >
                                                                <data:DataGridTextColumn.ElementStyle>
                                                                    <Style TargetType="TextBlock">
                                                                        <Setter Property="TextAlignment" Value="Right"/>
                                                                    </Style>
                                                                </data:DataGridTextColumn.ElementStyle>
                                                            </data:DataGridTextColumn>

                                                            <data:DataGridTemplateColumn>
                                                                <data:DataGridTemplateColumn.CellTemplate>
                                                                    <DataTemplate>
                                                                        <HyperlinkButton VerticalAlignment="Center" FontFamily="Webdings" Content="r"  Padding="5,0,5,0" IsTabStop="False" Click="cmdDeleteConcessionService_Click"  x:Name="cmdDeleteConcessionService" ToolTipService.ToolTip="Delete"></HyperlinkButton>
                                                                    </DataTemplate>
                                                                </data:DataGridTemplateColumn.CellTemplate>
                                                            </data:DataGridTemplateColumn>
                                                        </data:DataGrid.Columns>
                                                    </data:DataGrid>
                                                </StackPanel>

                                            </controls:TabItem>


                                            <!--<controls:TabItem  Style="{StaticResource TabItemStyle}"  Padding="0" Margin="0" Header="Concession Service" >

                                        <StackPanel>
                                            <Border  BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0"  Background="Transparent">
                                                <ContentControl VerticalAlignment="Center" FontSize="12" Content="List Service" Margin="4" Style="{StaticResource Header}"     HorizontalAlignment="Stretch" />
                                            </Border>
                                            <data:DataGrid x:Name="dgConServiceList" AutoGenerateColumns="False" ItemsSource="{Binding}" IsReadOnly="True" >
                                                <data:DataGrid.Columns>
                                                    <data:DataGridTextColumn Binding="{Binding Code}" Header="Code" />
                                                    <data:DataGridTextColumn Binding="{Binding ServiceName}" Header="Service Name" />
                                                </data:DataGrid.Columns>
                                            </data:DataGrid>
                                        </StackPanel>

                                    </controls:TabItem>-->

                                        </controls:TabControl>



                                    </Grid>
                                </Border>
                            </controls:TabItem>


                        </controls:TabControl>

                    </controlsToolkit:DockPanel>

                </Grid>
            </Grid>

        </controlsToolkit:DockPanel>
    </Grid>
</UserControl> 

