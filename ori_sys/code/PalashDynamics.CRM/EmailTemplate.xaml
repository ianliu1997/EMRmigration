<controls:ChildWindow x:Class="PalashDynamics.CRM.EmailTemplate"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
            xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"                       
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"
           xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
             xmlns:my="clr-namespace:Liquid;assembly=RichTextEditor"                       
           Style="{StaticResource ChildWindowDefault}" 
                      
           Width="800" Height="500" 
           Title="Email Template" Background="White" Loaded="ChildWindow_Loaded">
    
    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </controls:ChildWindow.Resources>
    
    <Grid x:Name="LayoutRoot" Margin="2">
        <controlsToolkit:DockPanel x:Name="DocMain" controlsToolkit:DockPanel.Dock="Top" LastChildFill="True">
            <controlsToolkit:DockPanel x:Name="docFooter" controlsToolkit:DockPanel.Dock="Bottom" >
                <controlsToolkit:DockPanel Margin="2" controlsToolkit:DockPanel.Dock="Top">

                    <StackPanel Grid.Row="3" x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                        <StackPanel x:Name="SaveCommandPanel" Orientation="Horizontal"  Margin="0,0,0,0">
                            <ToggleButton  x:Name="cmdSend"  Grid.Row="4" Content="Send" MinWidth="50" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch"  Visibility="Visible" Style="{StaticResource ToggleButtonStyle}" Click="cmdSend_Click"/>
                            <ToggleButton  x:Name="cmdClose"  Grid.Row="4" Content="Close" MinWidth="50" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch"  Visibility="Visible"  Style="{StaticResource ToggleButtonStyle}" Click="cmdClose_Click"/>
                        </StackPanel>
                    </StackPanel>
                </controlsToolkit:DockPanel>
            </controlsToolkit:DockPanel>
            
            <controlsToolkit:DockPanel x:Name="DocContent" controlsToolkit:DockPanel.Dock="Top">
                <Border   BorderBrush="#FF788678"   BorderThickness="1" CornerRadius="3,3,3,3" Margin="4,4,4,4">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition Height="200"></RowDefinition>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                            <ColumnDefinition Width="Auto" ></ColumnDefinition>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Select Template" Grid.Row="0" Grid.Column="0" Margin="4,10,4,4" HorizontalAlignment="Right" VerticalAlignment="Center"></TextBlock>
                        <inputcombo:AutoCompleteComboBox x:Name="cmbSelectTemplate" SelectedItemBinding="{Binding EmailDescription, Mode=OneWay}"  SelectedValuePath="ID" SelectionChanged="cmbSelectTemplate_SelectionChanged" Grid.Row="0" Grid.Column="1" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center"></inputcombo:AutoCompleteComboBox>
                        
                        <TextBlock x:Name="Subject" Text="Subject" HorizontalAlignment="Right"  VerticalAlignment="Center" Margin="0,6,6,3" Grid.Row="2" Grid.Column="0"/>
                        <TextBox x:Name="txtSubject" Text ="{Binding Subject,Mode=TwoWay}" HorizontalAlignment="Left" VerticalAlignment="Center" Height="22" Width="200" Grid.Row="2" Grid.Column="1"  Margin="4" AcceptsReturn="True"></TextBox>
                        <TextBlock x:Name="Text" Text="Text" HorizontalAlignment="Right"  VerticalAlignment="Center" Margin="0,13,9,85" Grid.Row="3" Grid.Column="0"/>
                        <my:RichTextEditor Margin="4"  x:Name="richTextEditor" Grid.Column="1" LostFocus="richTextEditor_LostFocus" ScrollViewer.HorizontalScrollBarVisibility="Visible" Grid.Row="3"/>

                        <!--<TextBox x:Name="txtTemplateText" HorizontalAlignment="Left" TextWrapping="Wrap" Text="{Binding Text, Mode=TwoWay}"  VerticalAlignment="Center" Height="105" Width="267" Grid.Row="3" Grid.Column="1"  Margin="0,5,0,4" AcceptsReturn="True" FontFamily="LPK-Marathi" VerticalScrollBarVisibility="Visible"></TextBox>
                        <TextBlock x:Name="txtEmailFormat" Text="Email Format" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,10,6,9" Grid.Row="4" Grid.Column="0" Width="75" />
                        <RadioButton Name="rBtnText" IsChecked="True" Content="Text" Grid.Column="1" Grid.Row="4"  HorizontalAlignment="Left" Margin="5,10,0,0" VerticalAlignment="Top" />
                        <RadioButton  Name="rBtnHTML" Content="HTML" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Left" Margin="61,10,0,0" VerticalAlignment="Top" />-->
                        <TextBlock x:Name="txtAttachments" Text="Attachments" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Right" Margin="0,6,6,3" VerticalAlignment="Top" />
                        <data:DataGrid  x:Name="dgEmailAttachmentList" Grid.Row="5" Grid.Column="1" Margin="4" ItemsSource="{Binding}" AutoGenerateColumns="False" SelectionChanged="dgEmailTemplateList_SelectionChanged" CellEditEnding="dgEmailTemplateList_CellEditEnding" CellEditEnded="dgEmailTemplateList_CellEditEnded">
                            <data:DataGrid.Columns>
                                <data:DataGridTemplateColumn>
                                    <data:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <HyperlinkButton VerticalAlignment="Center"  Content="View"  Padding="5,0,5,0" Click="hlbView_Click" x:Name="hlbEditTemplate"></HyperlinkButton>
                                        </DataTemplate>

                                    </data:DataGridTemplateColumn.CellTemplate>
                                </data:DataGridTemplateColumn>
                                <data:DataGridTextColumn Binding="{Binding AttachmentFileName, Mode=TwoWay}" Header="File Name" IsReadOnly="True"/>
                                <data:DataGridTemplateColumn>
                                    <data:DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <HyperlinkButton VerticalAlignment="Center" FontFamily="Webdings" Content="r"  Padding="5,0,5,0" IsTabStop="False" Click="cmdDeleteItem_Click"  x:Name="cmdDeleteItem" ToolTipService.ToolTip="Delete"></HyperlinkButton>
                                        </DataTemplate>
                                    </data:DataGridTemplateColumn.CellTemplate>
                                </data:DataGridTemplateColumn>
                                <!--<data:DataGridTextColumn Binding="{Binding Description,Mode=TwoWay}" Header="Template Name" IsReadOnly="True"/>-->
                            </data:DataGrid.Columns>

                        </data:DataGrid>

                        <!--<TextBox x:Name="txtFilePath" Visibility="Collapsed" Text ="{Binding AttachmentFileName,Mode=TwoWay}" HorizontalAlignment="Left"  VerticalAlignment="Center"  Height="22" Width="200" Grid.Column="1" Grid.Row="5" Margin="0,24,0,132" />
                        <Button x:Name="cmdView" Visibility="Collapsed" Content="View" Click="cmdView_Click" Grid.Column="1" Grid.Row="5" Height="22" HorizontalAlignment ="Right"  VerticalAlignment="Center" Width="50" Margin="0,24,104,132" />-->



                        <!--<TextBlock Text="English" Grid.Row="1" Grid.Column="0" Margin="4" HorizontalAlignment="Right" VerticalAlignment="Center"></TextBlock>
                        <TextBox x:Name="txtEnglish" Grid.Row="1" Grid.Column="1" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" AcceptsReturn="True" VerticalScrollBarVisibility="Visible"></TextBox>-->                                               
                        <!--<TextBlock Text="Local" Grid.Row="2" Grid.Column="0" Margin="4" HorizontalAlignment="Right" VerticalAlignment="Center"></TextBlock>
                        <TextBox x:Name="txtLocal" Grid.Row="2" Grid.Column="1" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" AcceptsReturn="True" VerticalScrollBarVisibility="Visible"></TextBox>
                        <StackPanel Orientation="Vertical" Grid.Row="3" Grid.ColumnSpan="2" Margin="4">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition ></ColumnDefinition>
                                    <ColumnDefinition ></ColumnDefinition>
                                    <ColumnDefinition ></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                        <CheckBox x:Name="chkEnglish" Content=" English" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="0"  />
                        <CheckBox x:Name="chkLocal" Content="Local"  Margin="4" VerticalAlignment="Center" HorizontalAlignment="Stretch" Grid.Column="1"/>
                        <CheckBox x:Name="chkBoth" Content="Both"  Margin="4" VerticalAlignment="Center" HorizontalAlignment="Stretch"  Grid.Column="2"/>
                            </Grid>
                        </StackPanel>-->

                    </Grid>
                </Border>
            </controlsToolkit:DockPanel>
        </controlsToolkit:DockPanel>
    </Grid>
</controls:ChildWindow>