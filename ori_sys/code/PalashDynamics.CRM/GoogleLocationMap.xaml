<UserControl x:Class="PalashDynamics.CRM.GoogleLocationMap"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:htmlhost="clr-namespace:FreeHtmlHost;assembly=FreeHtmlHost"
   
      Width="600" Height="400" Loaded="UserControl_Loaded">

    <Grid x:Name="LayoutRoot" Width="auto">
        <Grid.RowDefinitions>
            <RowDefinition Height=".15*"></RowDefinition>
            <RowDefinition Height="1.9*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition >
                    
                </ColumnDefinition >
                <ColumnDefinition Width="auto">

                </ColumnDefinition>
                <ColumnDefinition > </ColumnDefinition>
            </Grid.ColumnDefinitions>
            <TextBlock  Text="Address" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right"></TextBlock>
            <TextBox x:Name="txtAddress"  AcceptsReturn="True" Margin="4" VerticalScrollBarVisibility="Visible"  Grid.Column="1"/>
            <Button x:Name="SetPosition" Content="Set Bubble on Google" Click="SetPosition_Click" VerticalAlignment="Center" Grid.Column="2" Margin="4" />
        </Grid>
        <!--<StackPanel Orientation="Horizontal" Margin="4" Visibility="Collapsed">
            <TextBlock Text=" Address: " VerticalAlignment="Center" />
            
            <Button Content="Get Coordinates" Height="23" Name="button1" Width="100" Click="button1_Click" Margin="4" />
            <TextBlock Text=" Latitude: " VerticalAlignment="Center" />
            <TextBox x:Name="txtLat" Text="" Width="80" Height="25" />
            <TextBlock Text=" Longitude: " VerticalAlignment="Center"/>
            <TextBox x:Name="txtLon" Text="" Width="80" Height="25" Margin="0,0,10,0" />
           
        </StackPanel>-->

        <htmlhost:FreeHtmlHost Width="600" x:Name="customHost" HtmlControlTop="50" HtmlControlLeft="10" NavigationUrl="GoogleMap.aspx" Grid.Row="1"/>
