<controls:ChildWindow x:Class="PalashDynamics.CRM.CalculateBillAmount"
         xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
                        xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"
             xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"
             xmlns:Converter="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters"
           Title="Calculate Amount" >


    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Converter:DateTimeToAgePart x:Key="DateTimeToAgePart"></Converter:DateTimeToAgePart>
            <Converter:DateTimeConverter x:Key="DateConverter"></Converter:DateTimeConverter>
            <Converter:ToggleBooleanValueConverter x:Key="NegateValueConverter"/>
            <Converter:VisiblilityConverter x:Key="VisiblilityConverter"/>
            <ControlTemplate x:Key="FilledContentControlTemplate" TargetType="ContentControl">
                <Grid>
                    <ContentPresenter />
                </Grid>
            </ControlTemplate>
        </ResourceDictionary>
    </controls:ChildWindow.Resources>


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="{StaticResource TabControlDarkerBorder}"  controlsToolkit:DockPanel.Dock="Bottom"  CornerRadius="3,3,3,3" Background="Transparent" Margin="4"   BorderThickness="0">
            <controlsToolkit:DockPanel x:Name="MainDockPanel" LastChildFill="True"  Height="Auto" Width="Auto">
                <Border  Margin="4" controlsToolkit:DockPanel.Dock="Bottom" BorderThickness="1" CornerRadius="3,3,3,3" Background="Transparent">
                    <Grid HorizontalAlignment="Right">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="OKButton" Content="OK" Click="OKButton_Click" Width="75" Height="23"  Margin="4" Grid.Row="0" Grid.Column="1"  />
                    </Grid>
                </Border>

                <controlsToolkit:DockPanel controlsToolkit:DockPanel.Dock="Top" LastChildFill="True" >
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Margin="4" HorizontalAlignment="Right"  Grid.Row="0" Grid.Column="0" Text="Bill Amount" ></TextBlock>
                        <TextBox Margin="4"  Grid.Row="0" Grid.Column="1"   IsReadOnly="True" x:Name="txtBillAmt" TextAlignment="Right" Width="150"></TextBox>
                        <TextBlock Margin="4"  HorizontalAlignment="Right" Grid.Row="1" Grid.Column="0"  Text="Cash Recieved"></TextBlock>
                        <TextBox Margin="4" Grid.Row="1" Grid.Column="1" IsReadOnly="False" x:Name="txtCashRecieved" LostFocus="TextBox_LostFocus" SelectionChanged="txtCashRecieved_SelectionChanged" TextAlignment="Right" Width="150"></TextBox>
                        <TextBlock Margin="4" HorizontalAlignment="Right" Grid.Row="2" Grid.Column="0"  Text="Amount To Refund"></TextBlock>
                        <TextBox Margin="4" Grid.Row="2" Grid.Column="1" IsReadOnly="True"  x:Name="txtAmountToRefund" TextAlignment="Right" Width="150"></TextBox>
                    </Grid>

                </controlsToolkit:DockPanel>
            </controlsToolkit:DockPanel>
        </Border>

    </Grid>





    <!--<Grid>
    
        
        <Button x:Name="CancelButton" Content="Cancel" Click="CancelButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,0,0" Grid.Row="1" />
        <Button x:Name="OKButton" Content="OK" Click="OKButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,79,0" Grid.Row="1" />
    
    </Grid>-->
</controls:ChildWindow>