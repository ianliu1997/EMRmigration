<UserControl x:Class="PalashDynamics.Administration.FrmSurrogateAgencyMaster"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
    xmlns:GroupBox="clr-namespace:Groupbox;assembly=Groupbox"   
              xmlns:CustomCombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
   Height="Auto" Width="Auto"
    >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>


    <Grid >


        <toolkit:DockPanel LastChildFill="True">
            <Border  BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" toolkit:DockPanel.Dock="Bottom" BorderThickness="1" CornerRadius="3,3,3,3" Background="Transparent" >
                <StackPanel x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                    <StackPanel Orientation="Horizontal"  Margin="1" HorizontalAlignment="Right"  >
                        <ToggleButton  Margin="4"  Content="New" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdAdd" Click="cmdAdd_Click"></ToggleButton>
                        <ToggleButton   Margin="4" Content="Save" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdSave" Click="cmdSave_Click"></ToggleButton>
                        <ToggleButton   Margin="4"  Content="Modify" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdModify" Click="cmdModify_Click"></ToggleButton>
                        <ToggleButton  Margin="4" Content="Cancel" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdCancel" Click="cmdCancel_Click"></ToggleButton>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Grid x:Name="PageContainer" >

                <Grid Height="AUTO" Visibility="Visible" Width="auto" x:Name="FrontPanel" Grid.Row="0">

                    <toolkit:DockPanel x:Name="docList">

                        <toolkit:DockPanel LastChildFill="True" toolkit:DockPanel.Dock="Top">
                            <Grid toolkit:DockPanel.Dock="Top">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="txtSearchCriteria" Grid.Column="0" Text="Description" Margin="4,10,4,4"/>
                                <TextBox Grid.Column="1" x:Name="txtSearch" Margin="4" MaxLength="100" KeyUp="txtSearch_KeyUp" KeyDown="txtSearch_KeyDown" ToolTipService.ToolTip="Please Enter Description"></TextBox>
                                <Button Grid.Column="2" x:Name="cmdSearch" Click="cmdSearch_Click"   ToolTipService.ToolTip="Search Description"  HorizontalAlignment="Left" >
                                    <Image Source="/PalashDynamics;component/Icons/Search_b.JPG" Margin="4,0,4,0" Width="20" ></Image>
                                </Button>
                            </Grid>

                            <StackPanel toolkit:DockPanel.Dock="Bottom" Margin="0,4,0,0">
                                <Border  BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0"  Background="Transparent">
                                    <ContentControl VerticalAlignment="Center" FontSize="12" Content="List Of Agency Details" Margin="-1" Style="{StaticResource Header}"     HorizontalAlignment="Stretch" />
                                </Border>
                            </StackPanel>
                        </toolkit:DockPanel>
                        <toolkit:DockPanel LastChildFill="True">
                            <sdk:DataPager x:Name="dataGrid2Pager" toolkit:DockPanel.Dock="Bottom"  DisplayMode="FirstLastPreviousNext"  IsEnabled="True"                       
                                                        Source="{Binding}" AutoEllipsis="False"  NumericButtonCount="10" IsTotalItemCountFixed="True"  />
                            <sdk:DataGrid  x:Name="grdAgencyDetails" toolkit:DockPanel.Dock="Top" VerticalAlignment="Stretch" ItemsSource="{Binding}" AutoGenerateColumns="False" CanUserSortColumns="False"  >
                                <sdk:DataGrid.Columns>
                                    <sdk:DataGridTemplateColumn Header="View">
                                        <sdk:DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <HyperlinkButton Margin="4" x:Name="cmdView" Content="View" Click="cmdView_Click" Cursor="Hand"></HyperlinkButton>
                                            </DataTemplate>
                                        </sdk:DataGridTemplateColumn.CellTemplate>
                                    </sdk:DataGridTemplateColumn>
                                    <sdk:DataGridTextColumn IsReadOnly="True" Header="Code" Binding="{Binding Code}" Width="100" />
                                    <sdk:DataGridTextColumn IsReadOnly="True"  Header="Description"  Binding="{Binding Description}" Width="200"/>
                                    <sdk:DataGridTextColumn IsReadOnly="True"  Header="Referral Name"  Binding="{Binding ReferralName}" Width="200"/>
                                    <sdk:DataGridTemplateColumn Header="Status">
                                        <sdk:DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox HorizontalAlignment="Center" Margin="4" IsChecked="{Binding Path=Status}" Checked="CheckBox_Checked" Unchecked="CheckBox_Checked"></CheckBox>
                                            </DataTemplate>
                                        </sdk:DataGridTemplateColumn.CellTemplate>
                                    </sdk:DataGridTemplateColumn>
                                </sdk:DataGrid.Columns>
                            </sdk:DataGrid>

                        </toolkit:DockPanel>
                    </toolkit:DockPanel>

                </Grid>

                <Grid  Height="AUTO" Width="auto" x:Name="BackPanel" Visibility="Collapsed" Grid.Row="1">
                    <toolkit:DockPanel x:Name="Content" toolkit:DockPanel.Dock="top" LastChildFill="true"  >
                        <Border  BorderBrush="{StaticResource TabControlDarkerBorder}"    BorderThickness="1" CornerRadius="3,3,0,0" Margin="4,4,4,4"  Background="Transparent">
                            <toolkit:DockPanel toolkit:DockPanel.Dock="Top">
                                <toolkit:DockPanel x:Name="docHeader" toolkit:DockPanel.Dock="Top" HorizontalAlignment="Stretch">
                                    <Border  BorderBrush="{StaticResource TabControlDarkerBorder}" toolkit:DockPanel.Dock="Top"   Margin="0,-1,0,0" BorderThickness="1" CornerRadius="0,0,3,3" Background="Transparent">
                                        <GroupBox:GroupBox  Header="Agency Details" Margin="4" Width="Auto" Height="Auto" Grid.Row="0" HorizontalAlignment="Stretch">
                                            <Grid x:Name="grdBackPanel">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                    <ColumnDefinition ></ColumnDefinition>
                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                    <ColumnDefinition ></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>

                                                </Grid.RowDefinitions>
                                                <TextBlock  Grid.Row="0" Grid.Column="0" Text="Code" Margin="4" HorizontalAlignment="Right"></TextBlock>
                                                <TextBox  Grid.Row="0" Grid.Column="1" x:Name="txtCode" ToolTipService.ToolTip="Please Enter Code" Text="{Binding Code,Mode=TwoWay}" Margin="4"  MaxLength="50" LostFocus="txtCode_LostFocus"></TextBox>

                                                <TextBlock  Grid.Row="0" Grid.Column="2" Text="Description" Margin="4" HorizontalAlignment="Right"></TextBlock>
                                                <TextBox  Grid.Row="0" Grid.Column="3" x:Name="txtDescription"  ToolTipService.ToolTip="Please Enter Description" Margin="4"  MaxLength="100" Text="{Binding Description,Mode=TwoWay}" LostFocus="txtDescription_LostFocus"></TextBox>

                                                <TextBlock Text="Referral Name" Grid.Row="1" Grid.Column="0" Margin="4" VerticalAlignment="Center" HorizontalAlignment="Left" ></TextBlock>
                                                <CustomCombo:AutoCompleteComboBox x:Name="cmbReferralName" ToolTipService.ToolTip="Please Select Referral Name"  Grid.Row="1" Grid.Column="1"   Margin="4" VerticalAlignment="Center"   SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" ></CustomCombo:AutoCompleteComboBox>
                                              

                                                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Text="Email ID" Grid.Row="1" Grid.Column="2" Margin="4" ></TextBlock>
                                                <TextBox Grid.Row="1" Grid.Column="3" Margin="4" Text="{Binding SourceEmail, Mode=TwoWay}" x:Name="txtSourceEmailID" MaxLength="100" LostFocus="txtSourceEmailID_LostFocus" ToolTipService.ToolTip="Please Enter Email ID" ></TextBox>
                                                
                                                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Text="Contact No." Grid.Row="2" Grid.Column="0" Margin="4" ></TextBlock>
                                                <TextBox Grid.Row="2" Grid.Column="1" Margin="4" Text="{Binding SourceContactNo, Mode=TwoWay}" x:Name="txtSourceContactNo" ToolTipService.ToolTip="Please Enter Contact No." MaxLength="100"  KeyDown="txtSourceContactNo_KeyDown" TextChanged="txtSourceContactNo_TextChanged" ></TextBox>

                                                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Text="Registration No." Grid.Row="2" Grid.Column="2" Margin="4" ></TextBlock>
                                                <TextBox Grid.Row="2" Grid.Column="3" Margin="4" Text="{Binding RegistrationNo, Mode=TwoWay}" x:Name="txtRegistrationNo" MaxLength="100" ToolTipService.ToolTip="Please Enter Registration No."></TextBox>

                                                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Text="Affilated By" Grid.Row="3" Grid.Column="0" Margin="4" ></TextBlock>
                                                <TextBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="3" Margin="4" Text="{Binding AffilatedBy, Mode=TwoWay}" x:Name="txtAffilatedBy" ToolTipService.ToolTip="Please Enter Affilated By" MaxLength="100" ></TextBox>

                                                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Text="Affilated year" Grid.Row="4" Grid.Column="0" Margin="4" ></TextBlock>
                                                <sdk:Calendar  x:Name="Affilatedyear"  Grid.Column="1" Grid.Row="4" Grid.RowSpan="5" ToolTipService.ToolTip="Please Select Affilated year"  SelectedDate="{Binding Affilatedyear, Mode= OneWay}"  HorizontalAlignment="Stretch" VerticalAlignment="Center" DisplayMode="Decade" DisplayModeChanged="DateYear_DisplayModeChanged" />
                                                



                                                <TextBlock VerticalAlignment="Center" HorizontalAlignment="Right" Text="Addresss" Grid.Row="10" Grid.Column="0" Margin="4" ></TextBlock>

                                                <TextBox Margin="4" Grid.Row="10" Grid.Column="1" Text="{Binding SourceAddress, Mode=TwoWay}"  x:Name="txtSourceAddress" ToolTipService.ToolTip="Please Enter Addresss" Grid.ColumnSpan="3" Grid.RowSpan="3" VerticalScrollBarVisibility="Visible" TextWrapping="Wrap" ></TextBox>


                                            </Grid>
                                        </GroupBox:GroupBox>

                                    </Border>
                                </toolkit:DockPanel>


                            </toolkit:DockPanel>
                        </Border>

                    </toolkit:DockPanel>
                </Grid>
            </Grid>
        </toolkit:DockPanel>
    </Grid>
</UserControl>