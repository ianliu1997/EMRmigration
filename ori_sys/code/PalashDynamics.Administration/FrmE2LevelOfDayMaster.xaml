                        <ToggleButton  Margin="4"  Content="New" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdAdd" Click="cmdAdd_Click" TabIndex="4"></ToggleButton>
                        <ToggleButton   Margin="4" Content="Save" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdSave" Click="cmdSave_Click" TabIndex="5"></ToggleButton>
                        <ToggleButton   Margin="4"  Content="Modify" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdModify" Click="cmdModify_Click" TabIndex="6"></ToggleButton>
                        <ToggleButton  Margin="4" Content="Cancel" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdCancel" Click="cmdCancel_Click" TabIndex="7"></ToggleButton>
                        <ToggleButton  Margin="4" Content="Close" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdClose" Visibility="Collapsed" Click="cmdClose_Click" TabIndex="8"></ToggleButton>
                    </StackPanel>
                </StackPanel>

            </Border>

