                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>

                                                <TextBlock  Grid.Row="0" Grid.Column="0" Text="Code" Margin="4"></TextBlock>
                                                <TextBox   Grid.Row="0" Grid.Column="1" x:Name="txtcode" Text="{Binding Code,Mode=TwoWay}" Margin="4"  MaxLength="10" LostFocus="txtcode_LostFocus" TabIndex="2" ToolTipService.ToolTip="Please Enter Code"></TextBox>

                                                <TextBlock  Grid.Row="1" Grid.Column="0" Text="Description" Margin="4"></TextBlock>
                                                <TextBox  Grid.Row="1" Grid.Column="1" x:Name="txtDescription" Text="{Binding Description,Mode=TwoWay}" Margin="4"  MaxLength="2" LostFocus="txtcode_LostFocus" TabIndex="3" ToolTipService.ToolTip="Please Enter Description" KeyDown="txtDescription_KeyDown" TextChanged="txtDescription_TextChanged"></TextBox>

                                            </Grid>
                                        </GroupBox:GroupBox>


                                    </Border>
                                </toolkit:DockPanel>

                            </toolkit:DockPanel>
                        </Border>

                    </toolkit:DockPanel>
                </Grid>
            </Grid>

        </toolkit:DockPanel>
    </Grid>
