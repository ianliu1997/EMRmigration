<UserControl x:Class="PalashDynamics.Administration.ConsentMaster"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"   
    xmlns:c1="http://schemas.componentone.com/winfx/2006/xaml"
    xmlns:Localization="clr-namespace:PalashDynamic.Localization;assembly=PalashDynamic.Localization"        
    xmlns:GroupBox="clr-namespace:Groupbox;assembly=Groupbox">

    <!--xmlns:my="clr-namespace:Liquid;assembly=RichTextEditor"-->

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Localization:Localized x:Key="locResource"></Localization:Localized>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid >
        <toolkit:DockPanel LastChildFill="True">
            <Border  BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" toolkit:DockPanel.Dock="Bottom" BorderThickness="1" CornerRadius="3,3,3,3" Background="Transparent" >
                <StackPanel x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                    <StackPanel Orientation="Horizontal"  Margin="1" HorizontalAlignment="Right"  >
                        <ToggleButton  Margin="4"  Content="{Binding btnNew,Source={StaticResource locResource}}" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdAdd" Click="cmdAdd_Click"></ToggleButton>
                        <ToggleButton   Margin="4" Content="{Binding btnSave,Source={StaticResource locResource}}" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdSave" Click="cmdSave_Click"></ToggleButton>
                        <ToggleButton   Margin="4"  Content="{Binding btnModify,Source={StaticResource locResource}}" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdModify" Click="cmdModify_Click"></ToggleButton>
                        <ToggleButton  Margin="4" Content="{Binding btnCancel,Source={StaticResource locResource}}" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdCancel" Click="cmdCancel_Click"></ToggleButton>
                        <ToggleButton  Margin="4"  Content="{Binding btnPrint,Source={StaticResource locResource}}" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdPrint" Click="cmdPrint_Click"></ToggleButton>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Grid x:Name="PageContainer" >
                <Grid Height="AUTO" Visibility="Visible" Width="auto" x:Name="FrontPanel" Grid.Row="0">
                    <toolkit:DockPanel x:Name="docList">

                        <toolkit:DockPanel x:Name="DockTop" toolkit:DockPanel.Dock="Top" HorizontalAlignment="Stretch">
                            <Grid x:Name="LayoutRoot2" Background="White" Margin="4" HorizontalAlignment="Stretch"  >
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition ></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition ></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                            </Grid>
                        </toolkit:DockPanel>

                        <toolkit:DockPanel LastChildFill="True" toolkit:DockPanel.Dock="Top">
                            <Grid toolkit:DockPanel.Dock="Top">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto" MinWidth="150" MaxWidth="150"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock x:Name="txtSearchCriteria" Grid.Column="0" Text="{Binding lblDescription,Source={StaticResource locResource}}" Margin="4,10,4,4" Width="75"/>
                                <TextBox Grid.Column="1" x:Name="txtSearch" Margin="4" Width="200" MaxLength="45" ></TextBox>

                                <Button Grid.Column="2" x:Name="cmdSearch" Click="cmdSearch_Click"   ToolTipService.ToolTip="{Binding totipSearch,Source={StaticResource locResource}}"  HorizontalAlignment="Left" >
                                    <Image Source="/PalashDynamics;component/Icons/Search_b.JPG" Margin="4,0,4,0" Width="20" ></Image>
                                </Button>
                            </Grid>

                            <StackPanel toolkit:DockPanel.Dock="Top" Margin="0,4,0,0">
                                <Border  BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0"  Background="Transparent">
                                    <ContentControl VerticalAlignment="Center" FontSize="12" Content="{Binding lblListofConsentDetails,Source={StaticResource locResource}}" Margin="-1" Style="{StaticResource Header}"     HorizontalAlignment="Stretch" />
                                </Border>
                            </StackPanel>
                        </toolkit:DockPanel>

                        <toolkit:DockPanel LastChildFill="True">
                            <sdk:DataPager x:Name="dataGrid2Pager" toolkit:DockPanel.Dock="Bottom" 
                                                        DisplayMode="FirstLastPreviousNext"  IsEnabled="True"                       
                                                        Source="{Binding}" 
                                                        AutoEllipsis="False" IsTotalItemCountFixed="False"  />
                            <sdk:DataGrid  x:Name="grdConsentable" VerticalAlignment="Stretch" ItemsSource="{Binding}" AutoGenerateColumns="False" IsReadOnly="True" >
                                <sdk:DataGrid.Columns>
                                    <sdk:DataGridTemplateColumn Header="{Binding grdView,Source={StaticResource locResource}}">
                                        <sdk:DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <HyperlinkButton Margin="4" x:Name="cmdView" Content="{Binding grdView,Source={StaticResource locResource}}" Click="cmdView_Click" Cursor="Hand"></HyperlinkButton>
                                            </DataTemplate>
                                        </sdk:DataGridTemplateColumn.CellTemplate>
                                    </sdk:DataGridTemplateColumn>
                                    <sdk:DataGridTextColumn IsReadOnly="True" Header="{Binding grdCode,Source={StaticResource locResource}}" Binding="{Binding Code}" Width="100" />
                                    <sdk:DataGridTextColumn IsReadOnly="True"  Header="{Binding grdDescription,Source={StaticResource locResource}}"  Binding="{Binding Description}" Width="200"/>

                                    <sdk:DataGridTemplateColumn Header="{Binding grdStatus,Source={StaticResource locResource}}" >
                                        <sdk:DataGridTemplateColumn.CellTemplate >
                                            <DataTemplate>
                                                <CheckBox HorizontalAlignment="Center" Margin="4" IsChecked="{Binding Path=Status}" Checked="CheckBox_Checked"  Unchecked="CheckBox_Checked" IsEnabled="True"></CheckBox>
                                            </DataTemplate>
                                        </sdk:DataGridTemplateColumn.CellTemplate>
                                    </sdk:DataGridTemplateColumn>

                                </sdk:DataGrid.Columns>
                            </sdk:DataGrid>
                        </toolkit:DockPanel>

                    </toolkit:DockPanel>
                </Grid>
                
                <Grid  Height="AUTO" Width="auto" x:Name="BackPanel" Visibility="Collapsed" Grid.Row="1">
                    <toolkit:DockPanel x:Name="Content" toolkit:DockPanel.Dock="top" LastChildFill="true"  >
                        <Border  BorderBrush="{StaticResource TabControlDarkerBorder}"    BorderThickness="1" CornerRadius="3,3,0,0" Margin="4,4,4,4"  Background="Transparent">
                            <toolkit:DockPanel toolkit:DockPanel.Dock="Top">
                                <toolkit:DockPanel x:Name="docHeader" toolkit:DockPanel.Dock="Top" HorizontalAlignment="Stretch">
                                    <Border  BorderBrush="{StaticResource TabControlDarkerBorder}" toolkit:DockPanel.Dock="Top"   Margin="0,-1,0,0" BorderThickness="1" CornerRadius="0,0,3,3" Background="Transparent">
                                        <GroupBox:GroupBox  Header="{Binding grplblConsentDetails,Source={StaticResource locResource}}" Margin="4" Width="Auto" Height="Auto" Grid.Row="0" HorizontalAlignment="Stretch">
                                            <Grid x:Name="grdBackPanel">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                    <ColumnDefinition ></ColumnDefinition>
                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                    <ColumnDefinition ></ColumnDefinition>

                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"></RowDefinition>
                                                    <RowDefinition ></RowDefinition>


                                                </Grid.RowDefinitions>

                                                <TextBlock  VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="0" Grid.Column="0" Text="{Binding lblCode,Source={StaticResource locResource}}" Margin="4"></TextBlock>
                                                <TextBox Grid.Column="1" x:Name="txtStoreCode" Text="{Binding Code,Mode=TwoWay}" Margin="4"  MaxLength="20" LostFocus="txtStoreCode_LostFocus" Grid.ColumnSpan="3" KeyDown="txtcode_KeyDown" ></TextBox>

                                                <TextBlock  VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="1" Grid.Column="0" Text="{Binding lblTemplateName,Source={StaticResource locResource}}" Margin="4"></TextBlock>
                                                <TextBox  Grid.Row="1" Grid.Column="1" x:Name="txtDescription"   Margin="4"  LostFocus="txtDescription_LostFocus"  KeyDown="txtDescription_KeyDown" MaxLength="45"  ></TextBox>

                                                <!-- Added By Ashish Thombre -->
                                                <TextBlock  VerticalAlignment="Center" HorizontalAlignment="Right" Text="{Binding lblContentType,Source={StaticResource locResource}}" Margin="4" Grid.Row="1" Grid.Column="2" Visibility="Collapsed"></TextBlock>
                                                <inputcombo:AutoCompleteComboBox  VerticalAlignment="Center" Margin="4" x:Name="CmbContentType"  SelectedItemBinding="{Binding clsPatientFieldsConfigVO, Mode=TwoWay}" SelectedValuePath="ID" Grid.Row="1" Grid.Column="3" Height="25" Visibility="Collapsed"></inputcombo:AutoCompleteComboBox >
                                                <!--<StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal">
                                                    <TextBlock   Text="Description" Margin="4"></TextBlock>
                                                    <my:RichTextEditor Margin="4,4,20,4"  x:Name="richTextEditor" />
                                                    <TextBlock   Text="Fields" Margin="4"></TextBlock>
                                                    <inputcombo:AutoCompleteComboBox  Grid.Row="1" Grid.Column="1" Margin="4" x:Name="CmbOtTheatre"  SelectedItemBinding="{Binding clsPatientFieldsConfigVO, Mode=TwoWay}" SelectedValuePath="ID"></inputcombo:AutoCompleteComboBox >
                                                </StackPanel>-->

                                                <TextBlock  VerticalAlignment="Center" HorizontalAlignment="Right" Text="{Binding lblFields,Source={StaticResource locResource}}" Margin="4" Grid.Row="2" Grid.Column="0"></TextBlock>
                                                <ToggleButton x:Name="lnkAddItems"  Content="{Binding btnAdd,Source={StaticResource locResource}}"     Background="#000000" Margin="2" HorizontalAlignment="Left" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Grid.Row="2" Grid.Column="3" Click="lnkAddItems_Click"  />
                                                
                                                <inputcombo:AutoCompleteComboBox  VerticalAlignment="Center" Margin="4" x:Name="CmbOtTheatre"  SelectedItemBinding="{Binding clsPatientFieldsConfigVO, Mode=TwoWay}" SelectedValuePath="ID" Grid.Row="2" Grid.Column="1" Height="25" ></inputcombo:AutoCompleteComboBox >
                                                <TextBlock  VerticalAlignment="Top" HorizontalAlignment="Right" Text="{Binding lblDescription,Source={StaticResource locResource}}" Margin="4" Grid.Row="3" Grid.Column="0"></TextBlock>



                                                <!--<my:RichTextEditor Margin="4"  x:Name="richTextEditor" Grid.Column="1" ScrollViewer.HorizontalScrollBarVisibility="Visible" Grid.Row="3" Grid.ColumnSpan="3"/>-->
                                                <Grid Grid.Row="3" Grid.ColumnSpan="3" Grid.Column="1">
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition></ColumnDefinition>
                                                    </Grid.ColumnDefinitions>
                                                    <c1:C1TabControl Grid.Column="0" Margin="4">
                                                        <c1:C1TabItem Header="" Name="richTextBoxTab" c1:C1NagScreen.Nag="True">
                                                            <Grid>
                                                                <Grid.Resources>
                                                                    <DataTemplate x:Name="printTemplate">
                                                                        <Grid Height="{Binding ViewManager.PresenterInfo.Height}" Width="{Binding ViewManager.PresenterInfo.Width}">
                                                                            <c1:C1RichTextPresenter Source="{Binding}" Margin="{Binding ViewManager.PresenterInfo.Padding}" c1:C1NagScreen.Nag="True" />
                                                                        </Grid>
                                                                    </DataTemplate>
                                                                </Grid.Resources>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto" />
                                                                    <RowDefinition />
                                                                </Grid.RowDefinitions>
                                                                <c1:C1RichTextBoxToolbar x:Name="richToolbar" RichTextBox="{Binding ElementName=TextEditor}" Margin="-1,-1,-1,0" c1:C1NagScreen.Nag="True" />
                                                                <c1:C1RichTextBox x:Name="TextEditor" Grid.Row="1" BorderThickness="0" c1:C1NagScreen.Nag="True" />
                                                            </Grid>
                                                        </c1:C1TabItem>
                                                    </c1:C1TabControl>
                                                    <!--<c1:C1TabControl Grid.Column="0">
                                                        <c1:C1TabItem Header="" Name="richTextBoxTab" c1:C1NagScreen.Nag="True">
                                                            <Grid>
                                                                <Grid.Resources>
                                                                    <DataTemplate x:Name="printTemplate">
                                                                        <Grid Height="{Binding ViewManager.PresenterInfo.Height}" Width="{Binding ViewManager.PresenterInfo.Width}">
                                                                            <c1:C1RichTextPresenter Source="{Binding}" Margin="{Binding ViewManager.PresenterInfo.Padding}" c1:C1NagScreen.Nag="True" />
                                                                        </Grid>
                                                                    </DataTemplate>
                                                                </Grid.Resources>
                                                                <Grid.RowDefinitions>
                                                                    <RowDefinition Height="Auto" />
                                                                    <RowDefinition />
                                                                </Grid.RowDefinitions>
                                                                <c1:C1RichTextBoxToolbar x:Name="richToolbar" RichTextBox="{Binding ElementName=richTextBox}" Margin="-1,-1,-1,0" c1:C1NagScreen.Nag="True" />
                                                                <c1:C1RichTextBox x:Name="TextEditor" Grid.Row="1" BorderThickness="0" c1:C1NagScreen.Nag="True" />
                                                            </Grid>
                                                        </c1:C1TabItem>



                                                    </c1:C1TabControl>-->
                                                    
                                                </Grid>
                                                



                                            </Grid>
                                        </GroupBox:GroupBox>
                                    </Border>
                                </toolkit:DockPanel>
                            </toolkit:DockPanel>
                        </Border>
                    </toolkit:DockPanel>
                </Grid>
            </Grid>
        </toolkit:DockPanel>

    </Grid>
</UserControl>
