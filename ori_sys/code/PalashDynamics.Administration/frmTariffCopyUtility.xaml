<controls:ChildWindow x:Class="PalashDynamics.Administration.frmTariffCopyUtility"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"
           xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"
           xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"  
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
           xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit" 
           Loaded="ChildWindow_Loaded" Width="800" Height="500">

    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </controls:ChildWindow.Resources>
    <Grid x:Name="LayoutRoot" Margin="2">
        <Grid>

            <controlsToolkit:DockPanel   Name="docMain" LastChildFill="True" controlsToolkit:DockPanel.Dock= "Top" >

                <controlsToolkit:DockPanel x:Name="docFooter" controlsToolkit:DockPanel.Dock="Bottom" >
                    <controlsToolkit:DockPanel Margin="2" controlsToolkit:DockPanel.Dock="Top">
                        <StackPanel Grid.Row="3" x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                            <StackPanel x:Name="SaveCommandPanel" Orientation="Horizontal"  Margin="0,0,0,0">
                                <ToggleButton  x:Name="cmdAdd"  Grid.Row="4" Content="Add" MinWidth="50" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch"  Visibility="Visible" Style="{StaticResource ToggleButtonStyle}" Click="cmdAdd_Click" TabIndex="7"  />
                                <ToggleButton  x:Name="cmdClose"  Grid.Row="4" Content="Cancel" MinWidth="50" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch"  Visibility="Visible"  Style="{StaticResource ToggleButtonStyle}" Click="cmdClose_Click" TabIndex="8"/>
                            </StackPanel>
                        </StackPanel>
                    </controlsToolkit:DockPanel>
                </controlsToolkit:DockPanel>

                <controlsToolkit:DockPanel x:Name="docTop" controlsToolkit:DockPanel.Dock="Top" LastChildFill="True">
                    <Border BorderBrush="{StaticResource TabControlDarkerBorder}" BorderThickness="1" CornerRadius="3,3,0,0" Margin="4" Background="Transparent" >
                        <controlsToolkit:DockPanel toolkit:DockPanel.Dock="Top">
                            <controlsToolkit:DockPanel x:Name="docHeader2" >
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition ></RowDefinition>
                                    </Grid.RowDefinitions>

                                    <StackPanel x:Name="DoctorStackPanel" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Orientation="Vertical" Margin="4" VerticalAlignment="Center" HorizontalAlignment="Stretch" >

                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>
                                                <RowDefinition></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="auto"></ColumnDefinition>
                                                <ColumnDefinition ></ColumnDefinition>
                                                <ColumnDefinition ></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <StackPanel Grid.Column="2" Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="4">
                                            <RadioButton x:Name="rdbRateInPercent" Content="Rate Percentage Wise" Margin="4" Click="rdbRateInPercent_Click"></RadioButton>
                                                <RadioButton x:Name="rdbRateInAmount" Content="Rate Amount Wise" Margin="4" Click="rdbRateInAmount_Click"></RadioButton>
                                            </StackPanel>
                                            <TextBlock  Grid.Row="0" Grid.Column="0"  Text="Specialization" Margin="4"></TextBlock>
                                            <inputcombo:AutoCompleteComboBox  Grid.Row="0" Grid.Column="1" x:Name="cmbTariff" Margin="4" SelectionChanged="cmbTariff_SelectionChanged"  SelectedValuePath="ID" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" TabIndex="2"></inputcombo:AutoCompleteComboBox>
                                            <CheckBox x:Name="chkApplyToSubSp" Margin="4" VerticalAlignment="Center" Content="Apply To All SubSpecialization" Grid.Row="1" Grid.Column="2" Click="chkApplyToSubSp_Click" IsEnabled="False"></CheckBox>
                                            <TextBlock x:Name="lblRate" Grid.Row="1" Grid.Column="0" Margin="4" VerticalAlignment="Center" Text="Rate" Visibility="Visible"/>
                                            <TextBox x:Name="txtAmountToAllSubSp" Margin="4" Grid.Row="1" Grid.Column="1"  MaxLength="3"  TabIndex="0" TextChanged="txtAmountToAllSubSp_TextChanged" IsEnabled="False"></TextBox>

                                        </Grid>

                                    </StackPanel>

                                    <!--<CheckBox x:Name="rdbAllDoctor"  Content="Apply To All Sub Specialization" Margin="4" Grid.Row="0" Grid.Column="0"  Click="AllDoctorRadioButton_Click_1"></CheckBox>-->
                                    <controlsToolkit:DockPanel   Name="doc4"  Margin="2" Grid.Column="0" Grid.Row="1" >
                                        <Border  controlsToolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                                            <ContentControl VerticalAlignment="Center" FontSize="12" Content="List of Specialization" Margin="-1" Style="{StaticResource Header}"     HorizontalAlignment="Stretch" />
                                        </Border>

                                        <data:DataPager Visibility="Visible" x:Name="dgDataPager" controlsToolkit:DockPanel.Dock="Bottom" 
                                                        IsEnabled="True"                       
                                                        Source="{Binding}" 
                                                        AutoEllipsis="False" IsTotalItemCountFixed="False"  />

                                        <data:DataGrid x:Name="dgSpecializationList" AutoGenerateColumns="False" ItemsSource="{Binding}" VerticalScrollBarVisibility="Visible" IsReadOnly="True" Margin="0" HorizontalAlignment="Stretch" TabIndex="4" CanUserSortColumns="False" SelectionChanged="dgSpecializationList_SelectionChanged">
                                            <data:DataGrid.Columns>
                                                <data:DataGridTextColumn IsReadOnly="True" Binding="{Binding StrGroup}"  Header="Specialization" ></data:DataGridTextColumn>
                                            </data:DataGrid.Columns>
                                        </data:DataGrid>

                                    </controlsToolkit:DockPanel>

                                    <controlsToolkit:DockPanel   Name="doc5"  Margin="2" controlsToolkit:DockPanel.Dock="Right" Grid.Column="1" Grid.Row="1">
                                        <Border  controlsToolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                                            <ContentControl VerticalAlignment="Center" FontSize="12" Content="List of SubSpecialization" Margin="-1" Style="{StaticResource Header}"     HorizontalAlignment="Stretch" />
                                        </Border>
                                        <data:DataGrid x:Name="dgSelectedSubSpecializationList" AutoGenerateColumns="False" ItemsSource="{Binding}" VerticalScrollBarVisibility="Visible" IsReadOnly="True" Margin="0" HorizontalAlignment="Stretch" TabIndex="4" CanUserSortColumns="False" ScrollViewer.VerticalScrollBarVisibility="Auto" SelectionChanged="dgSelectedSubSpecializationList_SelectionChanged">
                                            <data:DataGrid.Columns>
                                                <data:DataGridTemplateColumn Header="Select">
                                                    <data:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <CheckBox x:Name="chkSubSpecialization" IsChecked="{Binding Status,Mode=TwoWay}" VerticalAlignment="Center"  HorizontalAlignment="Center" Width="Auto" Click="chkSubSpecialization_Click"></CheckBox>
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                </data:DataGridTemplateColumn>
                                                <data:DataGridTextColumn IsReadOnly="True" Binding="{Binding SubSpecializationName}"  Header="Sub Specialization" ></data:DataGridTextColumn>

                                                <data:DataGridTemplateColumn Header="Rate">
                                                    <data:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBox x:Name="txtRate" TextAlignment="Right" TextChanged="txtRate_TextChanged" IsReadOnly="True" Text="{Binding SharePercentage, StringFormat=0.00, Mode=TwoWay}" MaxLength="3"></TextBox>
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                </data:DataGridTemplateColumn>

                                            </data:DataGrid.Columns>
                                        </data:DataGrid>

                                    </controlsToolkit:DockPanel>
                                </Grid>
                            </controlsToolkit:DockPanel>
                        </controlsToolkit:DockPanel>
                    </Border>
                </controlsToolkit:DockPanel>
            </controlsToolkit:DockPanel>
        </Grid>
    </Grid>
</controls:ChildWindow>