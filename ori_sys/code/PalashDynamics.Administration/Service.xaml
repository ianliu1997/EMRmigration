                                            <Grid toolkit:DockPanel.Dock="Top">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition></RowDefinition>

                                                </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition />

                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>

                                                <TextBox x:Name="txtSearchCriteria" Height="24" Grid.Column="0" Text="" Margin="4"  />
                                                <TextBlock Text="Specialization" Grid.Column="1"   Margin="4" VerticalAlignment="Center"></TextBlock>
