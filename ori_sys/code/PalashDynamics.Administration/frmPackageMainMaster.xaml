<UserControl x:Class="PalashDynamics.Administration.frmPackageMainMaster"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"  
    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"  
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"    
    xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"
    xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"             
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Grp="clr-namespace:Groupbox;assembly=Groupbox" 
    xmlns:Converter="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters"
    Loaded="UserControl_Loaded"
    xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
    mc:Ignorable="d" Height="auto" Width="auto" ScrollViewer.VerticalScrollBarVisibility="Visible" >


    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Converter:ToggleBooleanValueConverter x:Key="NegateValueConverter"/>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <toolkit:DockPanel x:Name="MainDockPanel11" LastChildFill="True" Margin="-1" >
            <toolkit:DockPanel toolkit:DockPanel.Dock="Bottom">
                <StackPanel x:Name="Footer" Orientation="Horizontal"    Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                    <StackPanel x:Name="SaveCommandPanel" Orientation="Horizontal"  Margin="0,0,0,0">
                        <ToggleButton x:Name="cmdAssignConsent" Content="Assign Consent" Background="#000000" Margin="5,0,0,0" Width="Auto"  HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="cmdAssignConsent_Click"/>
                        <ToggleButton x:Name="cmdAssignTariff" Content="Assign Tariff" Background="#000000" Margin="5,0,0,0" Width="Auto"  HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="cmdAssignTariff_Click"/>
                        <ToggleButton x:Name="cmdPackageDefination"  Content="Package Defination" Width="Auto"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="cmdPackageDefination_Click"    />
                        <ToggleButton x:Name="cmdPackageRelation" Visibility="Collapsed" Content="Package Relation" Width="Auto"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Click="cmdPackageRelation_Click"    />
                        <ToggleButton x:Name="cmdPackageRateClinic" Content="Package Rate Clinic Wise" Width="Auto"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Click="cmdPackageRateClinicwise_Click" Visibility="Collapsed" />
                        <ToggleButton x:Name="cmdNew"  Content="New"   Background="#000000"  Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="CmdNew_Click"    />
                        <ToggleButton x:Name="cmdSave"  Content="Save"   Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="CmdSave_Click"    />
                        <ToggleButton x:Name="cmdModify"  Content="Modify"   Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="CmdModify_Click"    />
                        <ToggleButton x:Name="cmdCancel"   Content="Cancel"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="CmdCancel_Click"  />
                    </StackPanel>
                </StackPanel>
            </toolkit:DockPanel>

            <Grid>
                <!--FrontPanel-->
                <Grid  x:Name="FrontPanel" Grid.Row="0" Visibility="Visible">
                    <toolkit:DockPanel x:Name="DockContent" Margin="4" toolkit:DockPanel.Dock="Top">
                        <Border  toolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition ></RowDefinition>
                                </Grid.RowDefinitions>
                                <ContentControl VerticalAlignment="Center" Grid.ColumnSpan="4" FontSize="12" Content="List of Packages"  Style="{StaticResource Header}"  Margin="-1"    HorizontalAlignment="Stretch" />
                                <toolkit:DockPanel LastChildFill="True" Grid.Row="1">
                                    <toolkit:DockPanel  toolkit:DockPanel.Dock="Top" >
                                        <Grid toolkit:DockPanel.Dock="Top">

                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="Auto"/>

                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="Package Name" Grid.Column="0"   Margin="4" VerticalAlignment="Center"></TextBlock>

                                            <TextBox x:Name="txtSearchCriteria" HorizontalAlignment="Stretch"  Grid.Column="1" Text="" Height="25" Margin="4" MaxLength="100" KeyDown="txtName_KeyDown"/>

                                            <TextBlock Text="Specialization" Grid.Column="2"   Margin="4" VerticalAlignment="Center"></TextBlock>
                                            <inputcombo:AutoCompleteComboBox x:Name="cboSpecialization"      Grid.Row="0" Grid.Column="3" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID"  Margin="4"  VerticalAlignment="Center" HorizontalAlignment="Stretch" SelectionChanged="cboSpecialization_SelectionChanged" ></inputcombo:AutoCompleteComboBox>

                                            <Button x:Name="cmdSearch" Click="cmdSearch_Click" Margin="4" Grid.Column="4"  ToolTipService.ToolTip="Search Package">
                                                <Image Source="Icons/Search_b.JPG" Margin="4,0,4,4" Width="20" ></Image>
                                            </Button>
                                        </Grid>
                                    </toolkit:DockPanel>

                                    <toolkit:DockPanel toolkit:DockPanel.Dock="top" >

                                        <data:DataPager x:Name="dgDataPager" toolkit:DockPanel.Dock="Bottom"
                                                DisplayMode="FirstLastPreviousNext" IsEnabled="True" 
                                                Source="{Binding}" 
                                                AutoEllipsis="False" IsTotalItemCountFixed="True"/>

                                        <data:DataGrid x:Name="grdServices" HorizontalAlignment="Stretch"  Margin="0,0,0,1"  ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Visible"      AutoGenerateColumns="false" VerticalAlignment="Stretch" SelectionChanged="grdServices_SelectionChanged" CanUserSortColumns="False">
                                            <data:DataGrid.Columns>
                                                <data:DataGridTemplateColumn>
                                                    <data:DataGridTemplateColumn.CellEditingTemplate>
                                                        <DataTemplate>
                                                            <HyperlinkButton x:Name="Update" HorizontalAlignment="Center" VerticalAlignment="Center"  Content="View" Click="Update_Click"></HyperlinkButton>
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellEditingTemplate>
                                                </data:DataGridTemplateColumn>
                                                <data:DataGridTextColumn     Header="Code" IsReadOnly="True"  Binding="{Binding ServiceCode}">
                                                </data:DataGridTextColumn>
                                                <data:DataGridTextColumn  Header="Package Name" IsReadOnly="True"  Binding="{Binding ServiceName}"></data:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Visible" Binding="{Binding ShortDescription}" Header ="Short Description" IsReadOnly="True"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Visible" Binding="{Binding LongDescription}" Header ="Long Description" IsReadOnly="True"></sdk:DataGridTextColumn>
                                                <data:DataGridTextColumn Header="Specialization" Visibility="Visible" IsReadOnly="True"   Binding="{Binding SpecializationString}"></data:DataGridTextColumn>
                                                <data:DataGridTextColumn Header="Sub Specialization" Visibility="Visible" IsReadOnly="True"   Binding="{Binding SubSpecializationString}"></data:DataGridTextColumn>
                                                <data:DataGridTextColumn  Header="Rate" Visibility="Visible" IsReadOnly="True" Binding="{Binding Rate,StringFormat=0.00}">
                                                    <data:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>
                                                <data:DataGridTemplateColumn Header="Status" >
                                                    <data:DataGridTemplateColumn.CellEditingTemplate>
                                                        <DataTemplate>
                                                            <CheckBox x:Name="chkStatus" Margin="10,2,10,2" Tag="{Binding ID}" Click="chkStatus_Click" HorizontalAlignment="Center"  IsChecked="{Binding Status,Mode=TwoWay}" VerticalAlignment="Center" ></CheckBox>
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellEditingTemplate>
                                                </data:DataGridTemplateColumn>

                                                <sdk:DataGridTextColumn  Visibility="Collapsed"  Binding="{Binding ID}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed"  Binding="{Binding UnitID}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed" Binding="{Binding ServiceCode}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed"  Binding="{Binding CodeType}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed"  Binding="{Binding Code}"></sdk:DataGridTextColumn>

                                                <sdk:DataGridTextColumn  Visibility="Collapsed"  Binding="{Binding SubSpecialization}"></sdk:DataGridTextColumn>

                                                <sdk:DataGridTextColumn  Visibility="Collapsed"  Binding="{Binding StaffDiscount}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed"  Binding="{Binding StaffDiscountAmount}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed"  Binding="{Binding StaffDiscountPercent}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed" Binding="{Binding StaffDependantDiscount}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed" Binding="{Binding StaffDependantDiscountAmount}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed" Binding="{Binding StaffDependantDiscountPercent}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed"  Binding="{Binding Concession}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed"  Binding="{Binding ConcessionAmount}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed"  Binding="{Binding ConcessionPercent}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed" Binding="{Binding ServiceTax}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed" Binding="{Binding ServiceTaxAmount}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed" Binding="{Binding ServiceTaxPercent}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed"  Binding="{Binding InHouse}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed" Binding="{Binding DoctorShare}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed" Binding="{Binding DoctorSharePercentage}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed"  Binding="{Binding RateEditable}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed" Binding="{Binding DoctorShareAmount}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed" Binding="{Binding MaxRate}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed"  Binding="{Binding MinRate}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed" Binding="{Binding CheckedAllTariffs}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed" Binding="{Binding Status}"></sdk:DataGridTextColumn>

                                                <data:DataGridTemplateColumn Header="Package Freezed" IsReadOnly="True">
                                                    <data:DataGridTemplateColumn.CellTemplate >
                                                        <DataTemplate >
                                                            <CheckBox x:Name="chkFreeze" Margin="10,2,10,2" IsChecked="{Binding IsFreezed,Mode=TwoWay}" IsEnabled="{Binding IsFreezed,Converter={StaticResource NegateValueConverter}}" Click="chkFreeze_Click"  VerticalAlignment="Center" HorizontalAlignment="Center" ></CheckBox >
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                </data:DataGridTemplateColumn>


                                                <!--IsEnabled="{Binding IsFreezed,Converter={StaticResource NegateValueConverter}}"-->
                                                
                                                <!--Tag="{Binding ID}"-->
                                                <data:DataGridTemplateColumn Header="Package Approved" >
                                                    <data:DataGridTemplateColumn.CellEditingTemplate>
                                                        <DataTemplate>
                                                            <CheckBox x:Name="chkApproved" Margin="10,2,10,2" Click="chkApproved_Click" HorizontalAlignment="Center"  IsChecked="{Binding IsApproved,Mode=TwoWay}" VerticalAlignment="Center" ></CheckBox>
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellEditingTemplate>
                                                </data:DataGridTemplateColumn>

                                            </data:DataGrid.Columns>

                                        </data:DataGrid>
                                    </toolkit:DockPanel>
                                </toolkit:DockPanel>
                            </Grid>
                        </Border>
                    </toolkit:DockPanel>
                </Grid>

                <!--BackPanel-->



                <toolkit:DockPanel x:Name="DockContent1" Margin="4" toolkit:DockPanel.Dock="Bottom" LastChildFill="True">
                    <Grid Width="Auto" VerticalAlignment="Top" x:Name="BackPanel" Grid.Column="1" Grid.Row="1" Visibility="Collapsed" >

                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"></RowDefinition>
                            <RowDefinition ></RowDefinition>

                        </Grid.RowDefinitions>

                        <Grp:GroupBox Header="Add New Package" Margin="4" HorizontalAlignment="Stretch"  Width="auto">
                            <Grid Margin="4" Height="auto" Width="auto">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition ></RowDefinition>

                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                    <ColumnDefinition ></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                    <ColumnDefinition ></ColumnDefinition>
                                </Grid.ColumnDefinitions>

                                <TextBlock x:Name="ServiceCode" VerticalAlignment="Center" Text="Package Code" Margin="4" Grid.Column="0" Grid.Row="0" ></TextBlock>
                                <TextBox x:Name="txtServiceCode" Text="{Binding ServiceCode, Mode=TwoWay}" IsEnabled="False"  Grid.Column="1" Grid.Row="0" Margin="4"  HorizontalAlignment="Stretch" MaxLength="50"></TextBox>

                                <!--<TextBox x:Name="txtCode" Grid.Column="4" TabIndex="1" Grid.Row="0" Grid.ColumnSpan="2" Text="{Binding Code, Mode=TwoWay}" Visibility="Collapsed"  Margin="4" HorizontalAlignment="Stretch" MaxLength="20"></TextBox>-->
                                
                                <TextBlock x:Name="Specialisation" VerticalAlignment="Center" Text="Specialization" Margin="4" Grid.Column="0" Grid.Row="1" ></TextBlock>
                                <inputcombo:AutoCompleteComboBox x:Name="cboSpecialization1" TabIndex="1" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" SelectionChanged="cboSpecialization1_SelectionChanged"   Grid.Row="1" Grid.Column="1"  Margin="4" HorizontalAlignment="Stretch"></inputcombo:AutoCompleteComboBox>

                                <TextBlock x:Name="SubSpecialisation" VerticalAlignment="Center" Text="Sub Specialization" Margin="4" Grid.Column="2" Grid.Row="1" ></TextBlock>
                                <inputcombo:AutoCompleteComboBox x:Name="cboSubSpecialization1" TabIndex="2" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" Grid.ColumnSpan="1"   Grid.Row="1" Grid.Column="3"  Margin="4" HorizontalAlignment="Stretch"></inputcombo:AutoCompleteComboBox>

                                <TextBlock x:Name="ServiceName" VerticalAlignment="Center" Text="Package Name" Margin="4" Grid.Column="0" Grid.Row="3" ></TextBlock>
                                <TextBox x:Name="txtServiceName" Text="{Binding ServiceName, Mode=TwoWay}" TabIndex="5" Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="5" Margin="4"  HorizontalAlignment="Stretch" MaxLength="500"></TextBox>

                                <TextBlock x:Name="ServiceRate" VerticalAlignment="Center" Text="Package Rate" LostFocus="ServiceRate_LostFocus" Margin="4" Grid.Column="0" Grid.Row="4" ></TextBlock>
                                <TextBox x:Name="txtServiceRate" Text="{Binding Rate, Mode=TwoWay}" TabIndex="6" Grid.Column="1" Grid.Row="4" MaxLength="20" Margin="4"  HorizontalAlignment="Stretch" TextAlignment="Right" TextChanged="txtServiceRate_TextChanged" KeyDown ="txtServiceRate_KeyDown"  LostFocus="txtServiceRate_LostFocus"></TextBox>

                                <TextBlock   VerticalAlignment="Center"  Grid.Row="4"  Grid.Column="2"  Margin="4" Text="Package Duration" Visibility="Collapsed" />

                                <!--<StackPanel Orientation="Horizontal" Grid.Row="4"  HorizontalAlignment="Stretch" Grid.Column="3" Grid.ColumnSpan="1">-->
                                <Grid  Grid.Row="4"  HorizontalAlignment="Stretch" Grid.Column="3" Grid.ColumnSpan="1"  Visibility="Collapsed" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                        <ColumnDefinition  Width="2*"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>

                                    <TextBox x:Name="txtValidity" HorizontalAlignment="Stretch" Grid.Column="0" MaxLength="3"  TextAlignment="Right" TabIndex="7"   Text="{Binding Validity,Mode=TwoWay}" VerticalAlignment="Center"  Margin="4" TextChanged="TextBox_TextChanged"  KeyDown="TextNameV_KeyDown" LostFocus="txtValidity_LostFocus"></TextBox>
                                    <inputcombo:AutoCompleteComboBox HorizontalAlignment="Stretch"  Grid.Column="1" x:Name="cmbValidity" VerticalAlignment="Center" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID"  Margin="4" TabIndex="8" />
                                </Grid>
                                <!--</StackPanel>-->

                                <TextBlock Text="Package Effective Date" Grid.Row="5" Grid.Column="0" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4"></TextBlock>
                                <controls:DatePicker SelectedDate="{Binding EffectiveDate,Mode=TwoWay}"  x:Name="dtpEffectiveDate" Margin="4" Grid.Row="5" Grid.Column="1" HorizontalAlignment="Stretch"   TabIndex="9"/>

                                <TextBlock Text="Package Expiry Date" Grid.Row="5" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="4"></TextBlock>
                                <controls:DatePicker SelectedDate="{Binding ExpiryDate,Mode=TwoWay}"  x:Name="dtpExpiryDate" Margin="4" Grid.Row="5" Grid.Column="3" HorizontalAlignment="Stretch"  TabIndex="10"/>


                                <CheckBox x:Name="IsPackage" Visibility="Collapsed" Content="Is Package"  IsChecked="{Binding IsPackage,Mode=TwoWay}"  TabIndex="7" Grid.Column="2" Grid.Row="4"  Margin="4"  HorizontalAlignment="Stretch" ></CheckBox>

                                <TextBlock x:Name="ServiceShortDescription" VerticalAlignment="Center" Text="Short Description" Margin="4" Grid.Column="0" Grid.Row="2"></TextBlock>
                                <TextBox x:Name="txtServiceLongDescription" Text="{Binding LongDescription, Mode=TwoWay}" TabIndex="4" Grid.Column="3" Grid.ColumnSpan="1"  Grid.Row="2"  Margin="4"  HorizontalAlignment="Stretch" MaxLength="500"></TextBox>

                                <TextBlock x:Name="LongDescription" Text="Long Description" Margin="4" Grid.Column="2" Grid.Row="2" VerticalAlignment="Center" ></TextBlock>
                                <TextBox x:Name="txtServiceShortDescription"  Text="{Binding ShortDescription, Mode=TwoWay}"  TabIndex="3" Grid.Column="1" Grid.Row="2"  Margin="4"  HorizontalAlignment="Stretch" MaxLength="500"></TextBox>



                            </Grid>

                        </Grp:GroupBox>



                        <Grid Grid.Row="1" Grid.Column="2" Width="Auto" Height="Auto">

                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>

                            <Grp:GroupBox Header="Package Rules" Margin="4" Grid.Column="0" HorizontalAlignment="Stretch"  Width="Auto" Height="Auto">

                                <Grid Grid.Column="0" Visibility="Visible" Margin="4" Width="Auto" Height="Auto">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition  Height="Auto"></RowDefinition>
                                        <RowDefinition  Height="Auto"></RowDefinition>
                                        <RowDefinition  Height="Auto"></RowDefinition>
                                        <RowDefinition  Height="Auto"></RowDefinition>
                                        <RowDefinition  Height="Auto"></RowDefinition>

                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>

                                    </Grid.ColumnDefinitions>

                                    <CheckBox x:Name="chkServiceTax" Margin="4,4,0,0" TabIndex="12" IsChecked="{Binding ServiceTax,Mode=TwoWay}" HorizontalAlignment="Left" Content="Service Tax"   FlowDirection="LeftToRight" Height="24" VerticalAlignment="Top" Click="chkServiceTax_Click" ></CheckBox>
                                    <TextBlock Text="%" Margin="4" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="1" ></TextBlock>

                                    <TextBox Margin="4" x:Name="txtServiceTaxPercentage" TextAlignment="Right"  Width="50" IsEnabled="False" Grid.Column="2"   Text="{Binding ServiceTaxPercent,Mode=TwoWay,StringFormat=0.00}" LostFocus="txtServiceTaxPercentage_LostFocus" TextChanged="txtServiceTaxPercentage_TextChanged" KeyDown="txtServiceTaxPercentage_KeyDown" MaxLength="6"></TextBox>
                                    <TextBlock Text="Amount" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="4" ></TextBlock>
                                    <TextBox Margin="4" TextAlignment="Right"  x:Name="txtServiceTaxAmount" IsEnabled="False" Width="50" Grid.Column="4"   Text="{Binding ServiceTaxAmount,StringFormat=0.00, Mode=TwoWay}" LostFocus="txtServiceTaxAmount_LostFocus" TextChanged="txtServiceTaxAmount_TextChanged" KeyDown="txtServiceTaxAmount_KeyDown"></TextBox>

                                    <CheckBox x:Name="chkStaffDiscount" Click="chkStaffDiscount_Click" TabIndex="8" Margin="4,4,0,4" Grid.Row="1" IsChecked="{Binding StaffDiscount,Mode=TwoWay}"   HorizontalAlignment="Left" FlowDirection="LeftToRight"  Content="Staff Discount" ></CheckBox>
                                    <TextBlock Text="%" Margin="4" HorizontalAlignment="Right" VerticalAlignment="Center"  Grid.Row="1" Grid.Column="1" ></TextBlock>
                                    <TextBox Margin="4" x:Name="txtStaffDiscountPercentage" TextAlignment="Right" Width="50" Grid.Row="1" IsEnabled="False" Grid.Column="2"   Text="{Binding StaffDiscountPercent,Mode=TwoWay,StringFormat=0.00}" LostFocus="txtStaffDiscountPercentage_LostFocus"  TextChanged="txtServiceTaxPercentage_TextChanged" KeyDown="txtServiceTaxPercentage_KeyDown"  MaxLength="6"></TextBox>
                                    <TextBlock Text="Amount" Grid.Row="1" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="4" ></TextBlock>
                                    <TextBox Margin="4" TextAlignment="Right" x:Name="txtStaffDiscountAmount" IsEnabled="False" Width="50" Grid.Row="1" Grid.Column="4"   Text="{Binding StaffDiscountAmount, Mode=TwoWay,StringFormat=0.00}" LostFocus="txtStaffDiscountAmount_LostFocus" TextChanged="txtServiceTaxAmount_TextChanged" KeyDown="txtServiceTaxAmount_KeyDown"></TextBox>

                                    <CheckBox x:Name="chkStaffParentDiscount" Click="chkStaffParentDiscount_Click" Margin="4,4,0,4" TabIndex="9" Grid.Row="2" IsChecked="{Binding StaffDependantDiscount,Mode=TwoWay}"  HorizontalAlignment="Left" FlowDirection="LeftToRight"  Content="Staff Parent Discount" ></CheckBox>
                                    <TextBlock Text="%" Margin="4" HorizontalAlignment="Right" VerticalAlignment="Center"  Grid.Row="2" Grid.Column="1" ></TextBlock>
                                    <TextBox Margin="4" x:Name="txtStaffParentPercentage" TextAlignment="Right" Width="50" Grid.Row="2" IsEnabled="False" Grid.Column="2"   Text="{Binding StaffDependantDiscountPercent,Mode=TwoWay,StringFormat=0.00}" LostFocus="txtStaffParentPercentage_LostFocus" TextChanged="txtServiceTaxPercentage_TextChanged" KeyDown="txtServiceTaxPercentage_KeyDown"  MaxLength="6"></TextBox>
                                    <TextBlock Text="Amount" Grid.Row="2" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="4" ></TextBlock>
                                    <TextBox Margin="4" TextAlignment="Right" x:Name="txtStaffParentAmount" IsEnabled="False" Width="50" Grid.Row="2" Grid.Column="4"   Text="{Binding StaffDependantDiscountAmount, Mode=TwoWay,StringFormat=0.00}" LostFocus="txtStaffParentAmount_LostFocus" TextChanged="txtServiceTaxAmount_TextChanged" KeyDown="txtServiceTaxAmount_KeyDown"></TextBox>

                                    <CheckBox x:Name="chkConcession" Click="chkConcession_Click" Margin="4,4,0,4" FlowDirection="LeftToRight" TabIndex="11" IsChecked="{Binding Concession,Mode=TwoWay}" HorizontalAlignment="Left" Content="Concession" Grid.Row="3"></CheckBox>
                                    <TextBlock Text="%" Margin="4" HorizontalAlignment="Right" VerticalAlignment="Center"  Grid.Row="3" Grid.Column="1" ></TextBlock>
                                    <TextBox Margin="4" x:Name="txtConcessionPercentage" TextAlignment="Right" Width="50" Grid.Row="3" IsEnabled="False" Grid.Column="2"   Text="{Binding ConcessionPercent,Mode=TwoWay,StringFormat=0.00}" LostFocus="txtConcessionPercentage_LostFocus" TextChanged="txtServiceTaxPercentage_TextChanged" KeyDown="txtServiceTaxPercentage_KeyDown" MaxLength="6" ></TextBox>
                                    <TextBlock Text="Amount" Grid.Row="3" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="4" ></TextBlock>
                                    <TextBox Margin="4" TextAlignment="Right" x:Name="txtConcessionAmount" IsEnabled="False" Width="50" Grid.Row="3" Grid.Column="4"   Text="{Binding ConcessionAmount, Mode=TwoWay,StringFormat=0.00}" LostFocus="txtConcessionAmount_LostFocus" TextChanged="txtServiceTaxAmount_TextChanged" KeyDown="txtServiceTaxAmount_KeyDown"></TextBox>

                                    <CheckBox x:Name="chkApplicableToAllDoctors" FlowDirection="LeftToRight" TabIndex="15" IsChecked="{Binding DoctorShare,Mode=TwoWay}"  Margin="4,4,0,4"  HorizontalAlignment="Left" Content="Doctor Share" Grid.Row="4"  Click="chkApplicableToAllDoctors_Click" ></CheckBox>
                                    <TextBlock Text="%" Margin="4" HorizontalAlignment="Right" VerticalAlignment="Center"  Grid.Row="4" Grid.Column="1" ></TextBlock>
