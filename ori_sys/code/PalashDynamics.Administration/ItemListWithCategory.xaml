<controls:ChildWindow x:Class="PalashDynamics.Administration.ItemListWithCategory"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:local="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters" 
           xmlns:my="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"  
           xmlns:input="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input"  
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"  
           xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"  
           xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"
           xmlns:CustomCombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
                      
           Width ="700" Height="600"
           Background="White" Title="ItemListWithCategory" >

    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:DateTimeConverter x:Key="DateConverter" />
            <!--<addressconverter:AddressConverter x:Key="AddressConverter"></addressconverter:AddressConverter>
            xmlns:layoutToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Layout.Toolkit"
            -->
        </ResourceDictionary>
    </controls:ChildWindow.Resources>

    <Grid x:Name="Root">
        <my:DockPanel LastChildFill="True" Margin="4" >
            <Border x:Name="brdItemFilter" Margin="0" controlsToolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                <StackPanel Orientation="Horizontal" Grid.ColumnSpan="2" Margin="4" >
                    <RadioButton x:Name="rdbItems"  Content="Items" Margin="4" IsChecked="True" Click="rdbItems_Click"></RadioButton>
                    <RadioButton x:Name="rdbItemsCategory" Content="Items Category" Margin="4" Click="rdbItemsCategory_Click"></RadioButton>
                    <RadioButton x:Name="rdbItemsGroup" Content="Items Group" Margin="4" Click="rdbItemsGroup_Click"></RadioButton>
                </StackPanel>
            </Border>

            <Grid Width="Auto" x:Name="SearchPanel"  Margin="0" my:DockPanel.Dock="Top" DataContext="{Binding BizActionObject}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition  Width="Auto"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>



                <TextBlock Grid.Column="0" Grid.Row="1"  Margin="4" Text="Item Name" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                <TextBox TabIndex="0" x:Name="txtItemName" Text="{Binding ItemName,Mode=TwoWay}"  Grid.Row="1"  Grid.Column="1" Margin="4" MaxLength="50" LostFocus="txtItemName_LostFocus" />

                <TextBlock Grid.Column="2" Grid.Row="1"  Margin="4" Text="Brand Name" VerticalAlignment="Center" HorizontalAlignment="Right"></TextBlock>
                <TextBox TabIndex="1" x:Name="txtBrandName" Text="{Binding BrandName,Mode=TwoWay}"  Grid.Row="1"  Grid.Column="3" Margin="4" MaxLength="50" LostFocus ="txtBrandName_LostFocus" />

                <TextBlock VerticalAlignment="Center" Grid.Column="4" Grid.Row="1"  Margin="4" Text="Item Code" HorizontalAlignment="Right"></TextBlock>
                <TextBox TabIndex="2" x:Name="txtItemCode" Text="{Binding ItemCode,Mode=TwoWay}"  Grid.Row="1"  Grid.Column="5" Margin="4" MaxLength="50" LostFocus="txtItemCode_LostFocus" />

                <TextBlock x:Name="txtBlkCategory" VerticalAlignment="Center" Grid.Column="0" Grid.Row="2"  Margin="4" Text="Item Category" HorizontalAlignment="Right"></TextBlock>
                <CustomCombo:AutoCompleteComboBox Width ="auto"  TabIndex="3" Grid.Row="2" Grid.Column="1" Margin="4" x:Name="cmbCategory" VerticalAlignment="Center" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" ></CustomCombo:AutoCompleteComboBox>

                <TextBlock x:Name="txtBlkGroup" VerticalAlignment="Center" Grid.Column="2" Grid.Row="2"  Margin="4" Text="Item Group" HorizontalAlignment="Right"></TextBlock>
                <CustomCombo:AutoCompleteComboBox Width ="auto"  TabIndex="3" Grid.Row="2" Grid.Column="3" Margin="4" x:Name="cmbGroup" VerticalAlignment="Center" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" ></CustomCombo:AutoCompleteComboBox>

                <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="Molecule"  Grid.Column="4" Grid.Row="2"  Margin="4" />
                <CustomCombo:AutoCompleteComboBox x:Name="cmbMolecule" SelectedValuePath="ID" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}"  Grid.Column="5" Grid.Row="2"  Margin="4"  HorizontalAlignment="Stretch" TabIndex="4" />
                <!--SelectionChanged="cmbMolecule_SelectionChanged"-->

                <TextBlock x:Name="txtBlkStore" Visibility="Collapsed" VerticalAlignment="Center" Grid.Column="0" Grid.Row="3"  Margin="4" Text="Store" HorizontalAlignment="Right"></TextBlock>
                <CustomCombo:AutoCompleteComboBox Visibility="Collapsed" Width ="auto"  TabIndex="3" Grid.Row="3" Grid.Column="1" Margin="4" x:Name="cmbStore" VerticalAlignment="Center" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" SelectionChanged="cmbStore_SelectionChanged"></CustomCombo:AutoCompleteComboBox>

                <TextBlock Text="Manufactured By" Margin="4" HorizontalAlignment="Right" Grid.Row="3" Grid.Column="0"></TextBlock>
                <CustomCombo:AutoCompleteComboBox x:Name="cboMfg" TabIndex="13" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}"  SelectedValuePath="ID"   Grid.Row="3" Grid.Column="1" Margin="4" HorizontalAlignment="Stretch"></CustomCombo:AutoCompleteComboBox>

                <StackPanel Grid.Row="3" Grid.Column="2" Grid.ColumnSpan="1"  my:DockPanel.Dock="Top" x:Name="ItemFooter" Orientation="Horizontal" VerticalAlignment="Bottom"   HorizontalAlignment="Left" Background="Transparent">
                    <StackPanel x:Name="SearchCommandPanel" Orientation="Horizontal"  HorizontalAlignment="Stretch">
                        <ToggleButton TabIndex="4" x:Name="SearchButton"   Content="Search" MinWidth="50"  Background="#000000" Margin="4" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="ItemSearchButton_Click"  />
                        <!--<ToggleButton TabIndex="5" x:Name="CancelButton"  Content="Refresh" MinWidth="50" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible"  Click="CancelButton_Click" />-->
                    </StackPanel>
                </StackPanel>
                <CheckBox x:Name="chkSelectAll" Grid.Row="3" Grid.Column="4" Grid.ColumnSpan="2" Content="Select All Items" VerticalAlignment="Center" Margin="4" Click="chkSelectAll_Click" Visibility="Collapsed" HorizontalAlignment="Right" FlowDirection="RightToLeft"></CheckBox>
            </Grid >

            <Border BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" controlsToolkit:DockPanel.Dock="Bottom" BorderThickness="0" CornerRadius="3,3,3,3" Background="Transparent">

                <StackPanel Grid.Row="3" x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                    <StackPanel x:Name="SaveCommandPanel" Orientation="Horizontal"  Margin="0,0,0,0">
                        <ToggleButton TabIndex="8" x:Name="OkButton"  Grid.Row="4" Content="Ok" MinWidth="50"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="OKButton_Click" />
                        <ToggleButton TabIndex="9" x:Name="cmdCancelButton"  Grid.Row="4" Content="Cancel" MinWidth="50" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="cmdCancelButton_Click" />
                    </StackPanel>
                </StackPanel>
            </Border>

            <Grid Width="Auto" my:DockPanel.Dock="Bottom" >

                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>

                </Grid.RowDefinitions>

                <my:DockPanel x:Name="ItemContainer" controlsToolkit:DockPanel.Dock="Bottom" Grid.Row="0" Visibility="Collapsed">
                    <Grid Height="auto" Width="Auto"  VerticalAlignment="Stretch" >
                        <my:DockPanel LastChildFill="True">
                            <data:DataPager TabIndex="20" x:Name="peopleDataPager" my:DockPanel.Dock="Bottom"
                        Grid.Row="1"
                        PageSize="{Binding PageSize}"
                        DisplayMode="FirstLastPreviousNext"
                        IsEnabled="True"
                        IsTotalItemCountFixed="True"
                        Source="{Binding DataList}"  />
                            <data:DataGrid TabIndex="6"  Height="Auto" Width="Auto" Grid.Row="0" ItemsSource="{Binding DataList}"  x:Name="dataGrid2"  AutoGenerateColumns="False" SelectionChanged="dataGrid2_SelectionChanged" CanUserSortColumns="False">
                                <data:DataGrid.Columns>
                                    <data:DataGridTemplateColumn >
                                        <!--<data:DataGridTemplateColumn.Header>
                                        
                                    </data:DataGridTemplateColumn.Header>-->


                                        <data:DataGridTemplateColumn.CellTemplate >
                                            <DataTemplate >
                                                <!--<CheckBox Margin="10,2,10,2"  x:Name="chkStatus"  Click="UpdateUserStatus_Click" IsChecked="{Binding UserGeneralDetailVO.Status,Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" ></CheckBox >-->
                                                <CheckBox Margin="10,2,10,2"  x:Name="chkItemStatus" IsTabStop="True" Click="AddItem_Click" IsChecked="{Binding Status,Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" ></CheckBox >
                                            </DataTemplate>
                                        </data:DataGridTemplateColumn.CellTemplate>
                                    </data:DataGridTemplateColumn>
                                    <data:DataGridTextColumn IsReadOnly="True" Header="Item Code"  Binding="{Binding ItemCode}" />
                                    <data:DataGridTextColumn IsReadOnly="True" Header="Item Name"   Binding="{Binding ItemName}"/>
                                    <data:DataGridTextColumn IsReadOnly="True" Header="Item Category"   Binding="{Binding ItemCategoryString}"/>
                                    <data:DataGridTextColumn IsReadOnly="True" Header="Manufactured By"   Binding="{Binding Manufacturer}"/>
                                    <data:DataGridTextColumn IsReadOnly="True" Header="Item Group"   Binding="{Binding ItemGroupString}"/>
                                    <data:DataGridTextColumn x:Name="AvailStock" IsReadOnly="True" Header="Available Stock"   Binding="{Binding AvailableStock}" Visibility="Collapsed"/>
                                    <data:DataGridTextColumn IsReadOnly="True" Header="Brand Name"  Binding="{Binding BrandName}"/>

                                    <!--<data:DataGridTextColumn  Header="Quantity" Binding="{Binding RequiredQuantity,Mode=TwoWay,StringFormat=0.00}"  >
                                    <data:DataGridTextColumn.ElementStyle>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="TextAlignment" Value="Right"/>
                                        </Style>
                                    </data:DataGridTextColumn.ElementStyle>
                                </data:DataGridTextColumn>-->

                                    <data:DataGridTextColumn IsReadOnly="True" Header="Purchase Tax %"  Binding="{Binding TotalPerchaseTaxPercent, StringFormat=0.00,Mode=OneWay}">
                                        <data:DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Right"/>
                                            </Style>
                                        </data:DataGridTextColumn.ElementStyle>
                                    </data:DataGridTextColumn>
                                    <data:DataGridTextColumn IsReadOnly="True" Header="Sales Tax %"  Binding="{Binding TotalSalesTaxPercent, StringFormat=0.00,Mode=OneWay}">
                                        <data:DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Right"/>
                                            </Style>
                                        </data:DataGridTextColumn.ElementStyle>
                                    </data:DataGridTextColumn>
                                    <data:DataGridTextColumn Visibility="Collapsed"  Binding="{Binding DiscountOnSale, StringFormat=0.00,Mode=OneWay}">
                                        <data:DataGridTextColumn.ElementStyle>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="TextAlignment" Value="Right"/>
                                            </Style>
                                        </data:DataGridTextColumn.ElementStyle>
                                    </data:DataGridTextColumn>

                                    <data:DataGridTextColumn IsReadOnly="True"   Header="Assign Supplier"  Binding="{Binding AssignSupplier}" Visibility ="Collapsed" />

                                </data:DataGrid.Columns>
                            </data:DataGrid>

                        </my:DockPanel>
                    </Grid>
                </my:DockPanel>

                <my:DockPanel x:Name="CategoryContainer" controlsToolkit:DockPanel.Dock="Bottom" Grid.Row="0" Visibility="Collapsed">
                    <Grid Height="auto" Width="Auto"  >
                        <my:DockPanel LastChildFill="True">
                            <Border Margin="0" controlsToolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                                <ContentControl  FontSize="11" Content="Category Details" Margin="0" Style="{StaticResource Header}"/>
                            </Border>
                            <data:DataPager TabIndex="20" x:Name="ItemCategoryDataPager" my:DockPanel.Dock="Bottom"
                        Grid.Row="1"
                        PageSize="{Binding BatchPageSize}"
                        DisplayMode="FirstLastPreviousNext"
                        IsEnabled="True"
                        IsTotalItemCountFixed="True"
                        Source="{Binding BatchList}"  />

                            <ScrollViewer Grid.Row="2" Background="Transparent" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" controlsToolkit:ScrollViewerExtensions.IsMouseWheelScrollingEnabled="True">

                                <data:DataGrid TabIndex="7" Height="Auto" Width="Auto" Grid.Row="0" ItemsSource="{Binding BatchList}"  x:Name="dgItemCategories"  AutoGenerateColumns="False" SelectionChanged="dgItemCategories_SelectionChanged" CanUserSortColumns="False" >

                                    <data:DataGrid.Columns>
                                        <data:DataGridTemplateColumn Header="Select">
                                            <data:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox x:Name="chkCategory" VerticalAlignment="Center" HorizontalAlignment="Center" Width="Auto" Click="chkCategory_Click"></CheckBox>
                                                </DataTemplate>
                                            </data:DataGridTemplateColumn.CellTemplate>
                                        </data:DataGridTemplateColumn>
                                        <data:DataGridTextColumn Binding="{Binding Description}"  Header="Category" ></data:DataGridTextColumn>

                                    </data:DataGrid.Columns>

                                </data:DataGrid>

                            </ScrollViewer>

                        </my:DockPanel>
                    </Grid>
                </my:DockPanel>

                <my:DockPanel x:Name="GroupContainer" controlsToolkit:DockPanel.Dock="Bottom" Grid.Row="0" Visibility="Collapsed">
                    <Grid Height="auto" Width="Auto"  >
                        <my:DockPanel LastChildFill="True">
                            <Border Margin="0" controlsToolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                                <ContentControl  FontSize="11" Content="Group Details" Margin="0" Style="{StaticResource Header}"/>
                            </Border>
                            <data:DataPager TabIndex="20" x:Name="ItemGroupDataPager" my:DockPanel.Dock="Bottom"
                        Grid.Row="1"
                        PageSize="{Binding BatchPageSize}"
                        DisplayMode="FirstLastPreviousNext"
                        IsEnabled="True"
                        IsTotalItemCountFixed="True"
                        Source="{Binding BatchList}"  />

                            <ScrollViewer Grid.Row="2" Background="Transparent" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" controlsToolkit:ScrollViewerExtensions.IsMouseWheelScrollingEnabled="True">

                                <data:DataGrid TabIndex="7" Height="Auto" Width="Auto" Grid.Row="0" ItemsSource="{Binding BatchList}"  x:Name="dgItemGroups"  AutoGenerateColumns="False" SelectionChanged="dgItemGroups_SelectionChanged" CanUserSortColumns="False" >

                                    <data:DataGrid.Columns>
                                        <data:DataGridTemplateColumn Header="Select">
                                            <data:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox x:Name="chkGroup" VerticalAlignment="Center" HorizontalAlignment="Center" Width="Auto" Click="chkGroup_Click"></CheckBox>
                                                </DataTemplate>
                                            </data:DataGridTemplateColumn.CellTemplate>
                                        </data:DataGridTemplateColumn>
                                        <data:DataGridTextColumn Binding="{Binding Description}"  Header="Group" ></data:DataGridTextColumn>

                                    </data:DataGrid.Columns>

                                </data:DataGrid>

                            </ScrollViewer>

                        </my:DockPanel>
                    </Grid>
                </my:DockPanel>

            </Grid>
        </my:DockPanel>
    </Grid>

</controls:ChildWindow>