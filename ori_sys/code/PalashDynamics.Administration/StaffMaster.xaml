                                <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="4" Text="Clinic"  Grid.Row="0" Grid.Column="6"/>
                                <inputcombo:AutoCompleteComboBox x:Name="cmbFindClinic" SelectedItemBinding="{Binding MasterListItem, Mode=TwoWay}" SelectedValuePath="ID" Grid.Row="0" Grid.Column="7" ToolTipService.ToolTip="Please Select Clinic" Margin="4" HorizontalAlignment="Stretch"   Height="25" TabIndex="4"></inputcombo:AutoCompleteComboBox>


                                <Button x:Name="cmdSearch" Click="cmdSearch_Click" Margin="4" ToolTipService.ToolTip="Search Employee"  Grid.Row="0" Grid.Column="8" TabIndex="5">
