<UserControl x:Class="PalashDynamics.Administration.frmmachineparameterlink"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"  
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"   
    xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"                
    mc:Ignorable="d" Height="Auto" Width="Auto">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <toolkit:DockPanel LastChildFill="True">
            <Border  BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" toolkit:DockPanel.Dock="Bottom" BorderThickness="1" CornerRadius="3,3,3,3" Background="Transparent" >
                <StackPanel x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                    <StackPanel Orientation="Horizontal"  Margin="1" HorizontalAlignment="Right"  >
                        <ToggleButton  Margin="4"  Content="New" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdAdd" Click="cmdAdd_Click"></ToggleButton>
                        <ToggleButton   Margin="4" Content="Save" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdSave" Click="cmdSave_Click" TabIndex="4"></ToggleButton>
                        <ToggleButton   Margin="4"  Content="Modify" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdModify" Click="cmdModify_Click" TabIndex="5"></ToggleButton>
                        <ToggleButton  Margin="4" Content="Cancel" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdCancel" Click="cmdCancel_Click" TabIndex="6"></ToggleButton>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Grid x:Name="PageContainer">
                <Grid Height="Auto" Width="Auto" Visibility="Visible" Grid.Row="0" x:Name="FrontPanel">
                    <toolkit:DockPanel x:Name="docList">
                        <toolkit:DockPanel LastChildFill="True" toolkit:DockPanel.Dock="Top">
                            <Grid toolkit:DockPanel.Dock="Top">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition />
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!--<TextBlock x:Name="txtSearchCriteria" Grid.Column="0" Text="Description" Margin="4,10,4,4" Width="75"/>
                                <TextBox Grid.Column="1" x:Name="txtDescription" Margin="4" Grid.Row="0" TabIndex="1"></TextBox>-->
                                <TextBlock Text="Machine" Grid.Row="0" Grid.Column="0" Margin="4"></TextBlock>
                                <inputcombo:AutoCompleteComboBox  Grid.Row="0" Grid.Column="1"  Margin="4" x:Name="cmbMachineSearch" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Height="Auto" Width="Auto" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" SelectionChanged="cmbMachineSearch_SelectionChanged" TabIndex="1"></inputcombo:AutoCompleteComboBox >

                                <TextBlock Text="Machine Parameter" Grid.Row="0" Grid.Column="2" Margin="4"></TextBlock>
                                <inputcombo:AutoCompleteComboBox  Grid.Row="0" Grid.Column="3"  Margin="4" x:Name="cmbMachineParameterSearch" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Height="Auto" Width="Auto" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" TabIndex="2"></inputcombo:AutoCompleteComboBox >

                                <TextBlock Text="Parameter" Grid.Row="0" Grid.Column="4" Margin="4"></TextBlock>
                                <inputcombo:AutoCompleteComboBox  Grid.Row="0" Grid.Column="5" Margin="4" x:Name="cmbParameterSearch" Height="Auto" Width="Auto" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" TabIndex="3"></inputcombo:AutoCompleteComboBox >

                                <Button x:Name="cmdSearch" Click="cmdSearch_Click" Margin="4" ToolTipService.ToolTip="Search"  Grid.Row="0" Grid.Column="6" TabIndex="2">
                                    <Image Source="/PalashDynamics;component/Icons/xmag.png" Margin="2" Width="20" ></Image>
                                </Button>
                            </Grid>

                            <StackPanel toolkit:DockPanel.Dock="Top" Margin="0,4,0,0">
                                <Border  BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0"  Background="Transparent">
                                    <ContentControl VerticalAlignment="Center" FontSize="12" Content="List Of Linked Parameters" Margin="-1" Style="{StaticResource Header}" HorizontalAlignment="Stretch" />
                                </Border>
                            </StackPanel>
                        </toolkit:DockPanel>
                        <toolkit:DockPanel LastChildFill="True">
                            <sdk:DataPager x:Name="dataGrid2Pager" toolkit:DockPanel.Dock="Bottom" 
                                                        DisplayMode="FirstLastPreviousNext"  IsEnabled="True"                       
                                                        Source="{Binding}" 
                                                        AutoEllipsis="False" IsTotalItemCountFixed="False"  />
                            <sdk:DataGrid  x:Name="grdMachineParameters" VerticalAlignment="Stretch" ItemsSource="{Binding}" AutoGenerateColumns="False" IsReadOnly="True">
                                <sdk:DataGrid.Columns>
                                    <sdk:DataGridTemplateColumn Header="View">
                                        <sdk:DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <HyperlinkButton Margin="4" x:Name="cmdView" Content="View" Click="cmdView_Click" Cursor="Hand"></HyperlinkButton>
                                            </DataTemplate>
                                        </sdk:DataGridTemplateColumn.CellTemplate>
                                    </sdk:DataGridTemplateColumn>
                                    <sdk:DataGridTextColumn IsReadOnly="True" Header="ID" Binding="{Binding ID}" Visibility="Collapsed"/>
                                    <sdk:DataGridTextColumn IsReadOnly="True" Header="UnitID" Binding="{Binding UnitId}" Visibility="Collapsed"/>
                                    <sdk:DataGridTextColumn IsReadOnly="True" Header="ParameterID" Binding="{Binding ParameterID}" Visibility="Collapsed"/>
                                    <sdk:DataGridTextColumn IsReadOnly="True" Header="MachineParameterId" Binding="{Binding MachineParameterID}" Visibility="Collapsed"/>
                                    <sdk:DataGridTextColumn IsReadOnly="True"  Header="Machine Name" Binding="{Binding MachineName}"/>
                                    <sdk:DataGridTextColumn IsReadOnly="True"  Header="Machine Parameter" Binding="{Binding MachineParameter}"/>                                  
                                    <sdk:DataGridTextColumn IsReadOnly="True"  Header="Parameter" Binding="{Binding ParameterName}"/>
                                    <sdk:DataGridTemplateColumn Header="Freeze">
                                        <sdk:DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox HorizontalAlignment="Center" x:Name="chkFreeze" IsEnabled="False" Margin="4" IsChecked="{Binding Path=Freezed, Mode=TwoWay}"></CheckBox>
                                            </DataTemplate>
                                        </sdk:DataGridTemplateColumn.CellTemplate>
                                    </sdk:DataGridTemplateColumn>
                                    <!--<sdk:DataGridTextColumn IsReadOnly="True" Header="Unit" Binding="{Binding UnitName}" Width="200"/>-->
                                    <sdk:DataGridTemplateColumn Header="Status">
                                        <sdk:DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox HorizontalAlignment="Center" x:Name="chkStatus" Margin="4" IsChecked="{Binding Path=Status, Mode=TwoWay}" Click="chkStatus_Click"></CheckBox>
                                            </DataTemplate>
                                        </sdk:DataGridTemplateColumn.CellTemplate>
                                    </sdk:DataGridTemplateColumn>
                                </sdk:DataGrid.Columns>
                            </sdk:DataGrid>
                        </toolkit:DockPanel>
                    </toolkit:DockPanel>
                </Grid>
                <Grid  Height="AUTO" Width="auto" x:Name="BackPanel" Visibility="Collapsed" Grid.Row="1">
                    <!--<toolkit:DockPanel x:Name="Content" toolkit:DockPanel.Dock="top" LastChildFill="true">-->
                        <!--<Border  BorderBrush="{StaticResource TabControlDarkerBorder}" BorderThickness="1" CornerRadius="3,3,0,0" Margin="4,4,4,4"  Background="Transparent">
                            <toolkit:DockPanel toolkit:DockPanel.Dock="Top">
                                <toolkit:DockPanel x:Name="docHeader" toolkit:DockPanel.Dock="Top" HorizontalAlignment="Stretch">
                                    <Border  BorderBrush="{StaticResource TabControlDarkerBorder}" toolkit:DockPanel.Dock="Top" Margin="0,-1,0,0" BorderThickness="1" CornerRadius="0,0,3,3" Background="Transparent">-->
                                        <Grid x:Name="grdBackPanel">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                <ColumnDefinition ></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                                <RowDefinition Height="Auto"/>
                                            </Grid.RowDefinitions>

                                            <TextBlock Text="Machine Name" Grid.Row="0" Grid.Column="0" Margin="4"></TextBlock>
                                            <inputcombo:AutoCompleteComboBox  Grid.Row="0" Grid.Column="1" Margin="4" x:Name="cmbMachine" SelectedItemBinding="{Binding MasterListItem, Mode=TwoWay}" SelectedValuePath="ID" SelectionChanged="cmbMachine_SelectionChanged" ></inputcombo:AutoCompleteComboBox >

                                            <TextBlock Text="Machine Parameter" Grid.Row="1" Grid.Column="0" Margin="4"></TextBlock>
                                            <inputcombo:AutoCompleteComboBox  Grid.Row="1" Grid.Column="1" Margin="4" x:Name="cmbMachineParameter" SelectedItemBinding="{Binding MasterListItem, Mode=TwoWay}" SelectedValuePath="ID"></inputcombo:AutoCompleteComboBox >

                                            <TextBlock Text="Parameter" Grid.Row="2" Grid.Column="0" Margin="4"></TextBlock>
                                            <inputcombo:AutoCompleteComboBox  Grid.Row="2" Grid.Column="1" Margin="4" x:Name="cmbApplicationParameter" SelectedItemBinding="{Binding MasterListItem, Mode=TwoWay}" SelectedValuePath="ID"></inputcombo:AutoCompleteComboBox >

                                            <CheckBox  Grid.Row="3" Grid.Column="1" Margin="4" IsChecked="{Binding Freezed,Mode=TwoWay}" x:Name="chkIsFreezed">Freeze</CheckBox>
                                        </Grid>
                                    <!--</Border>
                                </toolkit:DockPanel>
                            </toolkit:DockPanel>
                        </Border>-->
                    <!--</toolkit:DockPanel>-->
                </Grid>
            </Grid>

        </toolkit:DockPanel>
    </Grid>

</UserControl>
