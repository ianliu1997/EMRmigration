                        <!--<Border  BorderBrush="{StaticResource TabControlDarkerBorder}" Margin="4,4,4,0"  BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">-->
                            <sdk:TabControl x:Name="tabOPD"  Margin="4" Grid.Row="1">
