                                                <TextBlock Grid.Column="2" Text="Dr"  VerticalAlignment="Center"  Margin="4"  />
                                            <TextBox Grid.Column="3" x:Name="txtTotalOPDSelfBillDr" Text="{Binding TotalOPDSelfBillDR, StringFormat=0.00}"  VerticalAlignment="Center" Margin="4" IsReadOnly="True" IsTabStop="False" TextAlignment="Right" />
                                                <TextBlock Grid.Column="4" Text="Cr"  VerticalAlignment="Center"  Margin="4"  />
                                            <TextBox Grid.Column="5" x:Name="txtTotalOPDSelfBillCr" Text="{Binding TotalOPDSelfBillCR,StringFormat=0.00}"  VerticalAlignment="Center" Margin="4" IsReadOnly="True" IsTabStop="False" TextAlignment="Right"  />
                                            </Grid>
                                            
                                        </Border>
                                    </Grid>
                                </sdk:TabItem>
                                <sdk:TabItem  Header="Refund Of Bill" Style="{StaticResource TabItemStyle}" >
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition Height="Auto"></RowDefinition>

                                        </Grid.RowDefinitions>
