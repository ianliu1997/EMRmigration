    <Grid x:Name="LayoutRoot" Background="White">
        <Border  BorderThickness="0"  BorderBrush="{StaticResource TabControlDarkerBorder}" Margin="4,4,4,0"   CornerRadius="3,3,0,0" Background="Transparent">
