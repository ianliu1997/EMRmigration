<UserControl x:Class="PalashDynamics.Administration.frmRoomMaster"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
    xmlns:Grp="clr-namespace:Groupbox;assembly=Groupbox" 
    xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"             
    Height="Auto" Width="Auto">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid>
        <toolkit:DockPanel LastChildFill="True">
            <Border  BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" toolkit:DockPanel.Dock="Bottom" BorderThickness="1" CornerRadius="3,3,3,3" Background="Transparent" >
                <StackPanel x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                    <StackPanel Orientation="Horizontal"  Margin="1" HorizontalAlignment="Right"  >
                        <ToggleButton  Margin="4"  Content="New" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdAdd" Click="cmdAdd_Click"></ToggleButton>
                        <ToggleButton   Margin="4" Content="Save" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdSave" Click="cmdSave_Click"></ToggleButton>
                        <ToggleButton   Margin="4"  Content="Modify" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdModify" Click="cmdModify_Click"></ToggleButton>
                        <ToggleButton  Margin="4" Content="Cancel" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdCancel" Click="cmdCancel_Click"></ToggleButton>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Grid x:Name="PageContainer">
                <Grid Height="Auto" Width="Auto" Visibility="Visible" Grid.Row="0" x:Name="FrontPanel">
                    <toolkit:DockPanel x:Name="docList">
                        <toolkit:DockPanel LastChildFill="True" toolkit:DockPanel.Dock="Top">
                            <Grid toolkit:DockPanel.Dock="Top">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock x:Name="txtSearchCriteria" Grid.Column="0" VerticalAlignment="Center" Text="Description" Margin="4" />
                                <TextBox Grid.Column="1" x:Name="txtSearch" Margin="4" MaxLength="50" VerticalAlignment="Center" Width="250" KeyDown="txtSearch_KeyDown"></TextBox>
                                <Button Grid.Column="2" x:Name="cmdSearch" Click="cmdSearch_Click"   ToolTipService.ToolTip="Search Room Master"  HorizontalAlignment="Left" >
                                     <Image Source="/PalashDynamics;component/Icons/xmag.png" Margin="2" Width="20" ></Image>
                                </Button>
                            </Grid>

                            <StackPanel toolkit:DockPanel.Dock="Top" Margin="0,4,0,0">
                                <Border  BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0"  Background="Transparent">
                                    <ContentControl VerticalAlignment="Center" FontSize="12" Content="List Of Room Master Details" Margin="-1" Style="{StaticResource Header}"     HorizontalAlignment="Stretch" />
                                </Border>
                            </StackPanel>
                        </toolkit:DockPanel>

                        <toolkit:DockPanel LastChildFill="True">
                            <sdk:DataPager x:Name="dataGrid2Pager" toolkit:DockPanel.Dock="Bottom" 
                                                        DisplayMode="FirstLastPreviousNext"  IsEnabled="True"                       
                                                        Source="{Binding}" 
                                                        AutoEllipsis="False" IsTotalItemCountFixed="False"  />
                            <sdk:DataGrid  x:Name="grRoom" VerticalAlignment="Stretch" ItemsSource="{Binding}" AutoGenerateColumns="False" IsReadOnly="True">
                                <sdk:DataGrid.Columns>
                                    <sdk:DataGridTemplateColumn Header="View">
                                        <sdk:DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <HyperlinkButton Margin="4" x:Name="cmdView" Content="View" Click="cmdView_Click" Cursor="Hand"></HyperlinkButton>
                                            </DataTemplate>
                                        </sdk:DataGridTemplateColumn.CellTemplate>
                                    </sdk:DataGridTemplateColumn>
                                    <sdk:DataGridTextColumn IsReadOnly="True" Header="Code" Binding="{Binding Code}" Width="100" />
                                    <sdk:DataGridTextColumn IsReadOnly="True"  Header="Description"  Binding="{Binding Description}" Width="200"/>
                                    <!--<sdk:DataGridTextColumn IsReadOnly="True" Header="Unit" Binding="{Binding UnitName}" Width="200"/>-->
                                    
                                    <sdk:DataGridTemplateColumn Header="Status">
                                        <sdk:DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <CheckBox Margin="4" x:Name="chkStatus" IsTabStop="True" Click="chkStatus_Click_1" IsChecked="{Binding Path=Status, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center"></CheckBox>
                                            </DataTemplate>
                                        </sdk:DataGridTemplateColumn.CellTemplate>
                                    </sdk:DataGridTemplateColumn>

                                </sdk:DataGrid.Columns>
                            </sdk:DataGrid>
                        </toolkit:DockPanel>
                    </toolkit:DockPanel>
                </Grid>

                <Grid  Height="AUTO" Width="auto" x:Name="BackPanel" Visibility="Collapsed" Grid.Row="1">
                    <toolkit:DockPanel x:Name="Content" toolkit:DockPanel.Dock="top" LastChildFill="true"  >
                        <Border  BorderBrush="{StaticResource TabControlDarkerBorder}"    BorderThickness="1" CornerRadius="3,3,0,0" Margin="4,4,4,4"  Background="Transparent">
                            <toolkit:DockPanel toolkit:DockPanel.Dock="Top">
                                <toolkit:DockPanel x:Name="docHeader" toolkit:DockPanel.Dock="Top" HorizontalAlignment="Stretch">
                                    <Border  BorderBrush="{StaticResource TabControlDarkerBorder}" toolkit:DockPanel.Dock="Top"   Margin="0,-1,0,0" BorderThickness="1" CornerRadius="0,0,3,3" Background="Transparent">
                                        <!--<Grp:GroupBox  Header="Room Master Details" Margin="4" Width="Auto" Height="Auto" Grid.Row="0" HorizontalAlignment="Stretch">-->
                                            <Grid x:Name="grdBackPanel">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                    <ColumnDefinition ></ColumnDefinition>
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>

                                                </Grid.RowDefinitions>

                                                <TextBlock  Grid.Row="0" Grid.Column="0" Text="Code" Margin="4"></TextBlock>
                                                <TextBox  Grid.Row="0" Grid.Column="1" x:Name="txtStoreCode" Text="{Binding Code,Mode=TwoWay}" Margin="4"  MaxLength="10" TabIndex="0" LostFocus="txtStoreCode_LostFocus"></TextBox>

                                                <TextBlock  Grid.Row="1" Grid.Column="0" Text="Description" Margin="4"></TextBlock>
                                                <TextBox  Grid.Row="1" Grid.Column="1" x:Name="txtStoreName" Margin="4" Text="{Binding Description,Mode=TwoWay}"  MaxLength="50" TabIndex="1" LostFocus="txtStoreCode_LostFocus"></TextBox>

                                            <Grp:GroupBox Header="Room Ammenities" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2">
                                                <Grid VerticalAlignment="Stretch">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="auto"></RowDefinition>
                                                        <RowDefinition ></RowDefinition>
                                                    </Grid.RowDefinitions>
                                                    <!--<CheckBox x:Name="chkAllAmmenities" Margin="4" Grid.Row="0" Content="Check All" IsChecked="{Binding CheckedAllTariffs,Mode=TwoWay}" TabIndex="2" Click="chkAllAmmenities_Click"></CheckBox>-->

                                                    <data:DataGrid  x:Name="dgAmmenityList" Grid.Row="1"  Margin="4" ItemsSource="{Binding}" AutoGenerateColumns="False" HorizontalAlignment="Stretch" >
                                                    <data:DataGrid.Columns >
                                                        <data:DataGridTemplateColumn IsReadOnly="True">
                                                            <data:DataGridTemplateColumn.CellTemplate >
                                                                <DataTemplate >
                                                                    <CheckBox Margin="4"  x:Name="chkStatus"  Click="chkStatus_Click" IsChecked="{Binding Status,Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" ></CheckBox >
                                                                </DataTemplate>
                                                            </data:DataGridTemplateColumn.CellTemplate>
                                                        </data:DataGridTemplateColumn>
                                                        <data:DataGridTextColumn Binding="{Binding Description,Mode=TwoWay}"  Header="Ammenity" IsReadOnly="True" />
                                                        
                                                    </data:DataGrid.Columns>
                                                </data:DataGrid>
                                                <!--<Grid VerticalAlignment="Stretch">
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="auto"></RowDefinition>
                                                        <RowDefinition ></RowDefinition>
                                                    </Grid.RowDefinitions>
                                                    <CheckBox x:Name="chkAllAmmenities" Margin="4" Grid.Row="0" Content="Check All" IsChecked="{Binding CheckedAllTariffs,Mode=TwoWay}" TabIndex="2" Click="chkAllAmmenities_Click"></CheckBox>
                                                    <ListBox x:Name="lstAmmenity" Grid.Row="1" ScrollViewer.VerticalScrollBarVisibility="Auto" TabIndex="3" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                                        <ListBox.ItemTemplate>
                                                            <DataTemplate>
                                                                <CheckBox x:Name="chkAmmenities" IsChecked="{Binding Status,Mode=TwoWay}" Content="{Binding Description}" Tag="{Binding ID}" Checked="chkAmmenities_Checked" Unchecked="chkAmmenities_Unchecked"></CheckBox>
                                                            </DataTemplate>
                                                        </ListBox.ItemTemplate>
                                                    </ListBox>
                                                </Grid>-->
                                                </Grid>
                                            </Grp:GroupBox>


                                        </Grid>
                                        <!--</Grp:GroupBox>-->
                                    </Border>
                                </toolkit:DockPanel>
                            </toolkit:DockPanel>
                        </Border>
                    </toolkit:DockPanel>
                </Grid>
            </Grid>
        </toolkit:DockPanel>
    </Grid>
</UserControl>
