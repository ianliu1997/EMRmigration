<UserControl x:Class="PalashDynamics.Administration.frmServiceMasterNew"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"  
    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit" 
    xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"    
    xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"
    xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"             
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:Grp="clr-namespace:Groupbox;assembly=Groupbox"            
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
    mc:Ignorable="d" Height="auto" Width="auto" ScrollViewer.VerticalScrollBarVisibility="Visible"
    Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <toolkit:DockPanel x:Name="MainDockPanel11" LastChildFill="True" Margin="-1" >
            <Border  BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" toolkit:DockPanel.Dock="Bottom" BorderThickness="1" CornerRadius="3,3,3,3" Background="Transparent" >
                <toolkit:DockPanel toolkit:DockPanel.Dock="Bottom">
                    <StackPanel x:Name="Footer" Orientation="Horizontal"    Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                        <StackPanel x:Name="SaveCommandPanel" Orientation="Horizontal"  Margin="0,0,0,0">
                            <StackPanel x:Name="AssignButtons" Orientation="Horizontal"  Margin="0,0,0,0">
                                <ToggleButton x:Name="cmdApplyTax" Content="Apply Tax Linking" Background="#000000" Margin="5,0,0,0" Width="Auto"  HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="cmdApplyTax_Click"/>
                                <ToggleButton x:Name="cmdApplyLevels" Content="Apply Levels" Background="#000000" Margin="5,0,0,0" Width="Auto"  HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="cmdApplyLevels_Click"/>
                                <ToggleButton x:Name="cmdAssignItems" Content="Assign Items" Background="#000000" Margin="5,0,0,0" Width="Auto"  HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Collapsed" Click="cmdAssignItems_Click"/>
                                <ToggleButton x:Name="cmdAssignAgency" Content="Assign Agency" Background="#000000" Margin="5,0,0,0" Width="Auto"  HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Collapsed" Click="cmdAssignAgency_Click"/>
                                <ToggleButton x:Name="cmdAssignTariff" Content="Assign Tariff" Background="#000000" Margin="5,0,0,0" Width="Auto"  HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="cmdAssignTariff_Click"/>
                                <ToggleButton x:Name="cmdAssignPackage" Content="Assign Package" Background="#000000" Margin="5,0,0,0" Width="Auto"  HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Collapsed" Click="cmdAssignPackage_Click"/>
                                <ToggleButton x:Name="cmdDefineClassRate" Content="Define Class Rate" Background="#000000" Margin="5,0,0,0" Width="Auto"  HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Collapsed" Click="cmdDefineClassRate_Click"/>
                            </StackPanel>
                            <ToggleButton x:Name="cmdAssignConsent" Content="Assign Consent" Background="#000000" Margin="5,0,0,0" Width="Auto"  HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="cmdAssignConsent_Click"/>
                            <ToggleButton x:Name="CmdNew"  Content="New"   Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="CmdNew_Click"/>
                            <ToggleButton x:Name="CmdSave"  Content="Save"   Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="CmdSave_Click"/>
                            <ToggleButton x:Name="CmdModify"  Content="Modify"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="CmdModify_Click"/>
                            <ToggleButton x:Name="CmdCancel"   Content="Cancel"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="CmdCancel_Click"/>
                        </StackPanel>
                    </StackPanel>
                </toolkit:DockPanel>
            </Border>

            <Grid>
                <Grid  x:Name="FrontPanel" Grid.Row="0" Visibility="Visible" >
                    <toolkit:DockPanel x:Name="DockContent" Margin="4" toolkit:DockPanel.Dock="Top">
                        <Border  toolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition ></RowDefinition>
                                </Grid.RowDefinitions>
                                <ContentControl VerticalAlignment="Center" Grid.ColumnSpan="4" FontSize="12" Content="List of Services"  Style="{StaticResource Header}"  Margin="-1"    HorizontalAlignment="Stretch" />
                                <toolkit:DockPanel LastChildFill="True" Grid.Row="1">
                                    <toolkit:DockPanel  toolkit:DockPanel.Dock="Top" >
                                        <Grid toolkit:DockPanel.Dock="Top">
                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition />
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition />
                                                <ColumnDefinition  Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <!--TextChanged="txtServiceCode_TextChanged" KeyDown="txtServiceCode_KeyDown"-->
                                            <TextBlock Text="Service Code" Grid.Column="0" Grid.Row="0"   Margin="4" VerticalAlignment="Center"></TextBlock>
                                            <TextBox x:Name="txtServiceCode" Height="24" Grid.Column="1" Grid.Row="0"  MaxLength="50"  Text="" Margin="4" KeyUp="txtServiceCode_KeyUp" />

                                            <TextBlock Text="Service Name" Grid.Column="2" Grid.Row="0" Margin="4" VerticalAlignment="Center"></TextBlock>
                                            <TextBox x:Name="txtServiceName" Height="24" Grid.Column="3" MaxLength="100" Grid.Row="0" Text="" Margin="4" KeyDown="txtServiceName_KeyDown"/>
                                            <!--KeyUp="txtServiceName_KeyUp"-->

                                            <TextBlock Text="Specialization" Grid.Column="4" Margin="4" VerticalAlignment="Center"></TextBlock>
                                            <inputcombo:AutoCompleteComboBox x:Name="cmbSpecialization" Grid.Row="0" Grid.Column="5" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID"  Margin="4"  VerticalAlignment="Center" HorizontalAlignment="Stretch" SelectionChanged="cmbSpecialization_SelectionChanged" ></inputcombo:AutoCompleteComboBox>

                                            <TextBlock Text="Sub Specialization" Grid.Column="7" Margin="4" VerticalAlignment="Center"></TextBlock>
                                            <inputcombo:AutoCompleteComboBox x:Name="cmbSubSpecialization" Grid.Row="0" Grid.Column="8" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID"  Margin="4"  VerticalAlignment="Center" HorizontalAlignment="Stretch" SelectionChanged="cmbSubSpecialization_SelectionChanged"></inputcombo:AutoCompleteComboBox>

                                            <Button x:Name="cmdSearch" Click="cmdSearch_Click" Margin="4" Grid.Column="9"  ToolTipService.ToolTip="Search Service">
                                                <Image Source="Icons/Search_b.JPG" Margin="4,0,4,4" Width="20" ></Image>
                                            </Button>
                                        </Grid>
                                    </toolkit:DockPanel>
                                    <toolkit:DockPanel toolkit:DockPanel.Dock="top" >
                                        <data:DataPager x:Name="dgDataPager" toolkit:DockPanel.Dock="Bottom"
                                                DisplayMode="FirstLastPreviousNext" IsEnabled="True" 
                                                Source="{Binding}" 
                                                AutoEllipsis="False" IsTotalItemCountFixed="True"/>
                                        <data:DataGrid x:Name="grdServices" HorizontalAlignment="Stretch"  Margin="0,0,0,1"  ScrollViewer.HorizontalScrollBarVisibility="Visible" ScrollViewer.VerticalScrollBarVisibility="Visible" AutoGenerateColumns="false" VerticalAlignment="Stretch" SelectedItem="None" SelectionChanged="grdServices_SelectionChanged" CanUserSortColumns="False">
                                            <data:DataGrid.Columns>
                                                <data:DataGridTemplateColumn>
                                                    <data:DataGridTemplateColumn.CellEditingTemplate>
                                                        <DataTemplate>
                                                            <HyperlinkButton x:Name="View" HorizontalAlignment="Center"  Content="View" Click="View_Click"></HyperlinkButton>
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellEditingTemplate>
                                                </data:DataGridTemplateColumn>
                                                <data:DataGridTextColumn     Header="Code" IsReadOnly="True"  Binding="{Binding ServiceCode}">
                                                </data:DataGridTextColumn>
                                                <data:DataGridTextColumn  Header="Service Name" IsReadOnly="True"  Binding="{Binding ServiceName}"></data:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed" Binding="{Binding ShortDescription}" Header ="Short Description"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed" Binding="{Binding LongDescription}" Header ="Long Description"></sdk:DataGridTextColumn>
                                                <data:DataGridTextColumn Header="Specialization" Visibility="Visible" IsReadOnly="True"   Binding="{Binding SpecializationString}"></data:DataGridTextColumn>
                                                <data:DataGridTextColumn Header="Sub Specialization" Visibility="Visible" IsReadOnly="True"   Binding="{Binding SubSpecializationString}"></data:DataGridTextColumn>
                                                <data:DataGridTextColumn  Header="Rate" Visibility="Visible" IsReadOnly="True" Binding="{Binding Rate,StringFormat=0.00}">
                                                    <data:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>
                                                <data:DataGridTemplateColumn Header="Status" >
                                                    <data:DataGridTemplateColumn.CellEditingTemplate>
                                                        <DataTemplate>
                                                            <CheckBox x:Name="chkStatus" Tag="{Binding ID}" Click="chkStatus_Click" HorizontalAlignment="Center"  IsChecked="{Binding Status,Mode=TwoWay}"></CheckBox>
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellEditingTemplate>
                                                </data:DataGridTemplateColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed"  Binding="{Binding ID}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed"  Binding="{Binding UnitID}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed" Binding="{Binding ServiceCode}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed"  Binding="{Binding CodeType}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed"  Binding="{Binding Code}"></sdk:DataGridTextColumn>

                                                <sdk:DataGridTextColumn  Visibility="Collapsed"  Binding="{Binding SubSpecialization}"></sdk:DataGridTextColumn>

                                                <sdk:DataGridTextColumn  Visibility="Collapsed"  Binding="{Binding StaffDiscount}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed"  Binding="{Binding StaffDiscountAmount}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed"  Binding="{Binding StaffDiscountPercent}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed" Binding="{Binding StaffDependantDiscount}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed" Binding="{Binding StaffDependantDiscountAmount}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed" Binding="{Binding StaffDependantDiscountPercent}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed"  Binding="{Binding Concession}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed"  Binding="{Binding ConcessionAmount}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed"  Binding="{Binding ConcessionPercent}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed" Binding="{Binding ServiceTax}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed" Binding="{Binding ServiceTaxAmount}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed" Binding="{Binding ServiceTaxPercent}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed"  Binding="{Binding InHouse}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed" Binding="{Binding DoctorShare}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed" Binding="{Binding DoctorSharePercentage}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed"  Binding="{Binding RateEditable}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed" Binding="{Binding DoctorShareAmount}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed" Binding="{Binding MaxRate}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed"  Binding="{Binding MinRate}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed" Binding="{Binding CheckedAllTariffs}"></sdk:DataGridTextColumn>
                                                <sdk:DataGridTextColumn  Visibility="Collapsed" Binding="{Binding Status}"></sdk:DataGridTextColumn>
                                            </data:DataGrid.Columns>

                                        </data:DataGrid>
                                    </toolkit:DockPanel>
                                </toolkit:DockPanel>
                            </Grid>
                        </Border>
                    </toolkit:DockPanel>
                </Grid>
                <Grid x:Name="BackPanel" Grid.Column="1" Grid.Row="1" Visibility="Collapsed">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto"></RowDefinition>
                            <RowDefinition Height="auto"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grp:GroupBox Header="Service Details" Margin="4" HorizontalAlignment="Stretch" Height="Auto"  Width="Auto">
                            <Grid Margin="4" Height="auto" Width="auto">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                    <ColumnDefinition ></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                    <ColumnDefinition ></ColumnDefinition>
                                    <ColumnDefinition Width="auto"></ColumnDefinition>
                                    <ColumnDefinition ></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <TextBlock x:Name="ServiceCode" VerticalAlignment="Center" Text="Service Code" Margin="4" Grid.Column="0" Grid.Row="0" ></TextBlock>
                                <TextBox x:Name="txtServiceCode1" Text="{Binding ServiceCode, Mode=TwoWay}" IsEnabled="True"  Grid.Column="1" Grid.Row="0" Margin="4" HorizontalAlignment="Stretch" MaxLength="50" IsReadOnly="True"></TextBox>

                                <TextBlock x:Name="CodeType" VerticalAlignment="Center"  Text="Code Type" Margin="4" Grid.Column="2" Grid.Row="0" ></TextBlock>
                                <inputcombo:AutoCompleteComboBox TabIndex="0" x:Name="cboCodeType"  SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID"    Grid.Row="0" Grid.Column="3"  Margin="4" HorizontalAlignment="Stretch" SelectionChanged="cboCodeType_SelectionChanged"></inputcombo:AutoCompleteComboBox>

                                <TextBlock x:Name="lblServiceCodeDtl" VerticalAlignment="Center" HorizontalAlignment="Left"  Text="Code Details" Margin="4" Grid.Column="4" Grid.Row="0" ></TextBlock>
                                <TextBox x:Name="txtCode" Grid.Column="5" TabIndex="1" Grid.Row="0" Text="{Binding CodeDetails, Mode=TwoWay}" Margin="4" HorizontalAlignment="Stretch" MaxLength="20" TextChanged="txtCode_TextChanged"></TextBox>

                                <TextBlock x:Name="Specialisation" VerticalAlignment="Center" Text="Specialization" Margin="4" Grid.Column="0" Grid.Row="1" ></TextBlock>
                                <inputcombo:AutoCompleteComboBox BorderBrush="Red" x:Name="cmbSpecialization1" TabIndex="2" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" SelectionChanged="cmbSpecialization1_SelectionChanged" Grid.Row="1" Grid.Column="1"  Margin="4" HorizontalAlignment="Stretch"></inputcombo:AutoCompleteComboBox>

                                <TextBlock x:Name="SubSpecialisation" VerticalAlignment="Center" Text="Sub Specialization" Margin="4" Grid.Column="2" Grid.Row="1" ></TextBlock>
                                <inputcombo:AutoCompleteComboBox BorderBrush="Red" x:Name="cmbSubSpecialization1" TabIndex="3" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" Grid.Row="1" Grid.Column="3"  Margin="4" HorizontalAlignment="Stretch" SelectionChanged="cmbSubSpecialization1_SelectionChanged"></inputcombo:AutoCompleteComboBox>

                                <TextBlock x:Name="ServiceName" VerticalAlignment="Center" Text="Service Name" Margin="4" Grid.Column="0" Grid.Row="3" ></TextBlock>
                                <TextBox x:Name="txtServiceName1" BorderBrush="Red" Text="{Binding ServiceName, Mode=TwoWay}" TabIndex="6" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="5" Margin="4,31,4,1"  HorizontalAlignment="Stretch" MaxLength="500" TextChanged="txtServiceName1_TextChanged" Grid.RowSpan="2"></TextBox>

                                <CheckBox x:Name="IsFavourite" Visibility="Collapsed" IsChecked="{Binding IsFavourite,Mode=TwoWay}"  TabIndex="7" Grid.Column="0" Grid.Row="5" Margin="4"  HorizontalAlignment="Right" ></CheckBox>
                                <TextBlock x:Name="lblIsFavourite" Visibility="Collapsed" VerticalAlignment="Center" Text="Is Favourite" Margin="4" Grid.Column="1" Grid.Row="5" ></TextBlock>
                                <CheckBox x:Name="ChklnkwithInv" Visibility="Collapsed" IsChecked="{Binding lnkWithInventory,Mode=TwoWay}"  TabIndex="7" Grid.Column="0" Grid.Row="6"  Margin="4"  HorizontalAlignment="Right" ></CheckBox>
                                <TextBlock x:Name="lblChklnkwithInv" Visibility="Collapsed" VerticalAlignment="Center" Text="Link With Inventory" Margin="4" Grid.Column="1" Grid.Row="6" ></TextBlock>

                                <TextBlock x:Name="ServiceShortDescription" VerticalAlignment="Center" Text="Short Description" Margin="4" Grid.Column="0" Grid.Row="2"></TextBlock>
                                <TextBox x:Name="txtServiceShortDescription" BorderBrush="Red"  Text="{Binding ShortDescription, Mode=TwoWay}" TabIndex="4" Grid.Column="1" Grid.Row="2" Margin="4"  HorizontalAlignment="Stretch" MaxLength="500" TextChanged="txtServiceShortDescription_TextChanged" ></TextBox>

                                <TextBlock x:Name="LongDescription" Text="Long Description" Margin="4" Grid.Column="2" Grid.Row="2" HorizontalAlignment="Right" VerticalAlignment="Center" ></TextBlock>
                                <TextBox x:Name="txtServiceLongDescription" BorderBrush="Red" Text="{Binding LongDescription, Mode=TwoWay}" TabIndex="5" Grid.Column="3" Grid.Row="2"  Margin="4"  HorizontalAlignment="Stretch" MaxLength="500" TextChanged="txtServiceLongDescription_TextChanged"></TextBox>

                                <TextBlock x:Name="lblRate" VerticalAlignment="Center" Text="Base Service Rate" Margin="4" Grid.Column="0" Grid.Row="4" ></TextBlock>
                                <TextBox x:Name="txtServiceRate" BorderBrush="Red" Text="{Binding Rate, Mode=TwoWay}" TabIndex="7" Grid.Column="1" Grid.Row="4"  Margin="4"  HorizontalAlignment="Stretch" TextAlignment="Right" LostFocus="txtServiceRate_LostFocus" TextChanged="txtServiceRate_TextChanged" KeyDown="txtServiceRate_KeyDown"></TextBox>

                                <CheckBox x:Name="IsPackage" Content="Is Package"  IsChecked="{Binding IsPackage,Mode=TwoWay}"  Grid.Column="2" Grid.Row="4"  Margin="4"  HorizontalAlignment="Stretch" Visibility="Collapsed" ></CheckBox>

                                <TextBlock x:Name="SACCodeMaster" VerticalAlignment="Center" Text="SAC Code" Margin="4" Grid.Column="4" Grid.Row="1" ></TextBlock>
                                <inputcombo:AutoCompleteComboBox BorderBrush="Red" x:Name="cmbSACCode" TabIndex="3" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" Grid.Row="1" Grid.Column="5"  Margin="4" HorizontalAlignment="Stretch" ></inputcombo:AutoCompleteComboBox>
                            </Grid>
                        </Grp:GroupBox>
                        <Grp:GroupBox Header="Rules" Grid.Row="6" Margin="4" HorizontalAlignment="Stretch" Height="Auto" Width="Auto">
                            <Grid x:Name="grdRules">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Grid Grid.Column="0"  Margin="4" >
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition Height="Auto"></RowDefinition>
                                        <RowDefinition  Height="Auto"></RowDefinition>
                                        <RowDefinition  Height="Auto"></RowDefinition>
                                        <RowDefinition  Height="Auto"></RowDefinition>
                                        <RowDefinition  Height="Auto"></RowDefinition>
                                        <RowDefinition  Height="Auto"></RowDefinition>
                                        <RowDefinition  Height="Auto"></RowDefinition>
                                        <RowDefinition  Height="Auto"></RowDefinition>
                                        <RowDefinition  Height="Auto"></RowDefinition>
                                        <RowDefinition  Height="Auto"></RowDefinition>

                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                        <ColumnDefinition Width="auto"></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <CheckBox x:Name="chkInHouse" FlowDirection="LeftToRight"   Margin="4" TabIndex="14" IsChecked="{Binding InHouse,Mode=TwoWay}" HorizontalAlignment="Left" Content="In House" Grid.Column="0"  Grid.Row="0"></CheckBox>

                                    <CheckBox x:Name="chkServiceTax" Margin="4,4,0,0" TabIndex="12" Grid.Row="1" IsChecked="{Binding ServiceTax,Mode=TwoWay}" HorizontalAlignment="Left" Content="Service Tax"   FlowDirection="LeftToRight" Height="24" VerticalAlignment="Top" Click="chkServiceTax_Click"></CheckBox>
                                    <TextBlock Text="%" Margin="4" HorizontalAlignment="Right" VerticalAlignment="Center"  Grid.Row="1" Grid.Column="1" ></TextBlock>

                                    <TextBox Margin="4" x:Name="txtServiceTaxPercentage" TextAlignment="Right"  Width="50" Grid.Row="1" IsEnabled="False" Grid.Column="2"   Text="{Binding ServiceTaxPercent,Mode=TwoWay,StringFormat=0.00}" LostFocus="txtServiceTaxPercentage_LostFocus" TextChanged="txtServiceTaxPercentage_TextChanged" KeyDown="txtServiceTaxPercentage_KeyDown" MaxLength="6"></TextBox>
                                    <TextBlock Text="Amount" Grid.Row="1" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="4"></TextBlock>
                                    <TextBox Margin="4" TextAlignment="Right"  x:Name="txtServiceTaxAmount" IsEnabled="False" Width="50" Grid.Row="1" Grid.Column="4"   Text="{Binding ServiceTaxAmount,StringFormat=0.00, Mode=TwoWay}" LostFocus="txtServiceTaxAmount_LostFocus" TextChanged="txtServiceTaxAmount_TextChanged" KeyDown="txtServiceTaxAmount_KeyDown" ></TextBox>

                                    <CheckBox x:Name="chkStaffDiscount" Click="chkStaffDiscount_Click" TabIndex="8" Margin="4" Grid.Column="0" Grid.Row="2" IsChecked="{Binding StaffDiscount,Mode=TwoWay}"   HorizontalAlignment="Left" FlowDirection="LeftToRight"  Content="Staff Discount"  ></CheckBox>
                                    <TextBlock Text="%" Margin="4" HorizontalAlignment="Right" VerticalAlignment="Center"  Grid.Row="2" Grid.Column="1"  ></TextBlock>
                                    <TextBox Margin="4" x:Name="txtStaffDiscountPercentage" TextAlignment="Right" Width="50" Grid.Row="2" IsEnabled="False" Grid.Column="2"   Text="{Binding StaffDiscountPercent,Mode=TwoWay,StringFormat=0.00}" LostFocus="txtStaffDiscountPercentage_LostFocus"  TextChanged="txtServiceTaxPercentage_TextChanged" KeyDown="txtServiceTaxPercentage_KeyDown"  MaxLength="6"></TextBox>
                                    <TextBlock Text="Amount" Grid.Row="2" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="4"></TextBlock>
                                    <TextBox Margin="4" TextAlignment="Right" x:Name="txtStaffDiscountAmount" IsEnabled="False" Width="50" Grid.Row="2" Grid.Column="4"   Text="{Binding StaffDiscountAmount, Mode=TwoWay,StringFormat=0.00}" LostFocus="txtStaffDiscountAmount_LostFocus" TextChanged="txtServiceTaxAmount_TextChanged" KeyDown="txtServiceTaxAmount_KeyDown"></TextBox>

                                    <CheckBox x:Name="chkStaffParentDiscount" Click="chkStaffParentDiscount_Click" Margin="4" TabIndex="9" Grid.Column="0" Grid.Row="3" IsChecked="{Binding StaffDependantDiscount,Mode=TwoWay}"  HorizontalAlignment="Left" FlowDirection="LeftToRight"  Content="Staff Parent Discount" ></CheckBox>
                                    <TextBlock Text="%" Margin="4" HorizontalAlignment="Right" VerticalAlignment="Center"  Grid.Row="3" Grid.Column="1" ></TextBlock>
                                    <TextBox Margin="4" x:Name="txtStaffParentPercentage" TextAlignment="Right" Width="50" Grid.Row="3" IsEnabled="False" Grid.Column="2"   Text="{Binding StaffDependantDiscountPercent,Mode=TwoWay,StringFormat=0.00}" LostFocus="txtStaffParentPercentage_LostFocus" TextChanged="txtServiceTaxPercentage_TextChanged" KeyDown="txtServiceTaxPercentage_KeyDown"  MaxLength="6"></TextBox>
                                    <TextBlock Text="Amount" Grid.Row="3" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="4"></TextBlock>
                                    <TextBox Margin="4" TextAlignment="Right" x:Name="txtStaffParentAmount" IsEnabled="False" Width="50" Grid.Row="3" Grid.Column="4"   Text="{Binding StaffDependantDiscountAmount, Mode=TwoWay,StringFormat=0.00}" LostFocus="txtStaffParentAmount_LostFocus" TextChanged="txtServiceTaxAmount_TextChanged" KeyDown="txtServiceTaxAmount_KeyDown" ></TextBox>

                                    <CheckBox x:Name="chkConcession" Click="chkConcession_Click" Margin="4" FlowDirection="LeftToRight" TabIndex="11" IsChecked="{Binding Concession,Mode=TwoWay}" HorizontalAlignment="Left" Content="Concession" Grid.Column="0"  Grid.Row="4" ></CheckBox>
                                    <TextBlock Text="%" Margin="4" HorizontalAlignment="Right" VerticalAlignment="Center"  Grid.Row="4" Grid.Column="1" ></TextBlock>
                                    <TextBox Margin="4" x:Name="txtConcessionPercentage" TextAlignment="Right" Width="50" Grid.Row="4" IsEnabled="False" Grid.Column="2"   Text="{Binding ConcessionPercent,Mode=TwoWay,StringFormat=0.00}" LostFocus="txtConcessionPercentage_LostFocus" TextChanged="txtServiceTaxPercentage_TextChanged" KeyDown="txtServiceTaxPercentage_KeyDown" MaxLength="6" ></TextBox>
                                    <TextBlock Text="Amount" Grid.Row="4" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="4"></TextBlock>
                                    <TextBox Margin="4" TextAlignment="Right" x:Name="txtConcessionAmount" IsEnabled="False" Width="50" Grid.Row="4" Grid.Column="4"   Text="{Binding ConcessionAmount, Mode=TwoWay,StringFormat=0.00}" LostFocus="txtConcessionAmount_LostFocus" TextChanged="txtServiceTaxAmount_TextChanged" KeyDown="txtServiceTaxAmount_KeyDown"></TextBox>

                                    <CheckBox x:Name="chkApplicableToAllDoctors" FlowDirection="LeftToRight" TabIndex="15" IsChecked="{Binding DoctorShare,Mode=TwoWay}"  Margin="4"  HorizontalAlignment="Left" Content="Doctor Share" Grid.Column="0" Grid.Row="5"  Click="chkApplicableToAllDoctors_Click" ></CheckBox>
                                    <TextBlock Text="%" Margin="4" HorizontalAlignment="Right" VerticalAlignment="Center"  Grid.Row="5" Grid.Column="1" ></TextBlock>
                                    <TextBox Margin="4" x:Name="txtDoctorApplicablePercent" TextAlignment="Right" Width="50" Grid.Row="5" Grid.Column="2" IsEnabled="False"   Text="{Binding DoctorSharePercentage,Mode=TwoWay,StringFormat=0.00}"  LostFocus="txtDoctorApplicablePercent_LostFocus" TextChanged="txtServiceTaxPercentage_TextChanged" KeyDown="txtServiceTaxPercentage_KeyDown" MaxLength="6"></TextBox>
                                    <TextBlock Text="Amount" Grid.Row="5" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="4"></TextBlock>
                                    <TextBox Margin="4" TextAlignment="Right" x:Name="txtDoctorApplicableAmount" Width="50"  Grid.Row="5" Grid.Column="4" IsEnabled="False"  Text="{Binding DoctorShareAmount, Mode=TwoWay,StringFormat=0.00}"  LostFocus="txtDoctorApplicableAmount_LostFocus" TextChanged="txtServiceTaxAmount_TextChanged" KeyDown="txtServiceTaxAmount_KeyDown"></TextBox>

                                    <CheckBox x:Name="chkRateEditable" Margin="4" IsChecked="{Binding RateEditable,Mode=TwoWay}" TabIndex="16" HorizontalAlignment="Left" FlowDirection="LeftToRight"  Grid.Column="0" Grid.Row="6" Content="Rate Editable" Click="chkRateEditable_Click" ></CheckBox>
                                    <TextBlock x:Name="MinRate" HorizontalAlignment="Right" Grid.Row="6" Grid.Column="1"  VerticalAlignment="Center" Text="Min" Margin="4"  ></TextBlock>
                                    <TextBox x:Name="txtMinRate" Grid.Row="6" Grid.Column="2" IsEnabled="False" TextAlignment="Right" Text="{Binding MinRate,Mode=TwoWay,StringFormat=0.00}" TabIndex="19"    Margin="4" Width="50"  HorizontalAlignment="Stretch" TextChanged="txtServiceTaxAmount_TextChanged" KeyDown="txtServiceTaxAmount_KeyDown"></TextBox>
                                    <TextBlock x:Name="MaxRate" VerticalAlignment="Center" Text="Max" Grid.Column="3" HorizontalAlignment="Right" Grid.Row="6" Margin="4" ></TextBlock>
                                    <TextBox x:Name="txtMaxRate" TextAlignment="Right" Text="{Binding MaxRate,Mode=TwoWay,StringFormat=0.00}" Grid.Column="4" Grid.Row="6"  Margin="4" TabIndex="20" Width="50" IsEnabled="False"  HorizontalAlignment="Stretch" TextChanged="txtServiceTaxAmount_TextChanged" KeyDown="txtServiceTaxAmount_KeyDown" LostFocus="txtMaxRate_LostFocus"></TextBox>

                                    <CheckBox x:Name="chkSeniorCitizen" Margin="4" IsChecked="{Binding SeniorCitizen,Mode=TwoWay}" TabIndex="16" HorizontalAlignment="Left" FlowDirection="LeftToRight"  Grid.Column="0" Grid.Row="7" Content="Senior Citizen Concession" Click="chkSeniorCitizen_Click" ></CheckBox>

                                    <TextBlock HorizontalAlignment="Right" Grid.Row="7" Grid.Column="1"  VerticalAlignment="Center" Text="%" Margin="4" ></TextBlock>
                                    <TextBox x:Name="txtSeniorCitizenPer" Grid.Row="7" Grid.Column="2" IsEnabled="False" TextAlignment="Right" Text="{Binding SeniorCitizenConPercent,Mode=TwoWay,StringFormat=0.00}" TabIndex="19"    Margin="4" Width="50"  HorizontalAlignment="Stretch" LostFocus="txtSeniorCitizenPer_LostFocus" TextChanged="txtServiceTaxPercentage_TextChanged" KeyDown="txtServiceTaxPercentage_KeyDown" MaxLength="6" ></TextBox>

                                    <TextBlock  VerticalAlignment="Center" Text="Amount" Grid.Column="3" HorizontalAlignment="Right" Grid.Row="7" Margin="4" ></TextBlock>
                                    <TextBox x:Name="txtSeniorCitizenPerAmount" TextAlignment="Right" Text="{Binding SeniorCitizenConAmount,Mode=TwoWay,StringFormat=0.00}" Grid.Column="4" Grid.Row="7"  Margin="4" TabIndex="20" Width="50" IsEnabled="False"  HorizontalAlignment="Stretch" LostFocus="txtSeniorCitizenPerAmount_LostFocus" TextChanged="txtServiceTaxAmount_TextChanged" KeyDown="txtServiceTaxAmount_KeyDown"></TextBox>

                                    <TextBlock  VerticalAlignment="Center" Text="Age" Grid.Column="6" HorizontalAlignment="Right" Grid.Row="7" Margin="4" ></TextBlock>
                                    <TextBox x:Name="txtSeniorCitizenAge" TextAlignment="Right" Text="{Binding SeniorCitizenAge,Mode=TwoWay}" Grid.Column="7" Grid.Row="7"  Margin="4" TabIndex="20" Width="50" IsEnabled="False" MaxLength="3"  HorizontalAlignment="Stretch" TextChanged="txtServiceCode_TextChanged" KeyDown="txtServiceCode_KeyDown" LostFocus="txtSeniorCitizenAge_LostFocus"></TextBox>

                                    <CheckBox x:Name="chkLuxuryTax" Margin="4" IsChecked="{Binding LuxuryTax,Mode=TwoWay}" TabIndex="16" HorizontalAlignment="Left" FlowDirection="LeftToRight" Grid.Column="0" Grid.Row="8" Content="Luxury Tax" Click="chkLuxuryTax_Click"></CheckBox>
                                    <TextBlock HorizontalAlignment="Right" Grid.Row="8" Grid.Column="1"  VerticalAlignment="Center" Text="%" Margin="4" ></TextBlock>
                                    <TextBox x:Name="txtLuxuryTaxPercentage" Grid.Row="8" Grid.Column="2" IsEnabled="False" TextAlignment="Right" Text="{Binding LuxuryTaxPercent,Mode=TwoWay,StringFormat=0.00}" TabIndex="19"    Margin="4" Width="50"  HorizontalAlignment="Stretch" LostFocus="txtLuxuryTaxPercentage_LostFocus" TextChanged="txtLuxuryTaxPercentage_TextChanged" KeyDown="txtLuxuryTaxPercentage_KeyDown" MaxLength="6"></TextBox>
                                    <TextBlock Text="Amount" Grid.Row="8" Grid.Column="3" HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="4"></TextBlock>
                                    <TextBox Margin="4" TextAlignment="Right" x:Name="txtLuxuryTaxAmount" IsEnabled="False" Width="50" Grid.Row="8" Grid.Column="4"   Text="{Binding LuxuryTaxAmount,StringFormat=0.00, Mode=TwoWay}" LostFocus="txtLuxuryTaxAmount_LostFocus" TextChanged="txtServiceTaxAmount_TextChanged" KeyDown="txtServiceTaxAmount_KeyDown"></TextBox>

                                </Grid>
                                <Grp:GroupBox Header="Apply To All Class" Grid.Row="1" Grid.Column="1" Margin="4" HorizontalAlignment="Stretch" Height="Auto" Width="Auto">
                                    <Grid Grid.Column="1"  Margin="4" >
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                            <RowDefinition Height="Auto"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"></ColumnDefinition>
                                            <ColumnDefinition Width="auto"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <CheckBox x:Name="chkApplyToAllClass" FlowDirection="LeftToRight"   Margin="4" TabIndex="14" IsChecked="{Binding IsApplyToAllClass,Mode=TwoWay}" HorizontalAlignment="Left" Content="Apply To All Class" Grid.Column="0"  Grid.Row="0" Click="chkApplyToAllClass_Click"></CheckBox>
                                   
                                        <sdk:DataGrid  x:Name="grdClass" VerticalAlignment="Stretch" Grid.Row="1" Visibility="Visible" Grid.Column="0" ItemsSource="{Binding}" AutoGenerateColumns="False" IsReadOnly="True">
                                            <sdk:DataGrid.Columns>
                                                <sdk:DataGridTemplateColumn Header="Select" >
                                                    <sdk:DataGridTemplateColumn.CellTemplate >
                                                        <DataTemplate >
                                                            <CheckBox Margin="10,2,10,2"  x:Name="chkSelectClass" IsEnabled="{Binding IsEnabled,Mode=TwoWay}"  IsTabStop="True" Click="chkSelectClass_Click" IsChecked="{Binding IsSelected,Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" ></CheckBox >
                                                        </DataTemplate>
                                                    </sdk:DataGridTemplateColumn.CellTemplate>
                                                </sdk:DataGridTemplateColumn>
                                                <sdk:DataGridTextColumn IsReadOnly="True"  Header="Class Name"  Binding="{Binding ClassName}" Width="200"/>
                                                <sdk:DataGridTemplateColumn Header="Rate" Width="150">
                                                    <sdk:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBox Margin="4" x:Name="txtServiceClassRate" TextChanged="txtServiceClassRate_TextChanged" KeyDown="txtServiceClassRate_KeyDown"  Text="{Binding Rate,StringFormat=0.00,Mode=TwoWay}" IsTabStop="True" Width="130" VerticalAlignment="Center" HorizontalAlignment="Center" IsEnabled="{Binding IsClassRateReadonly,Mode=TwoWay}"></TextBox>
                                                        </DataTemplate>
                                                    </sdk:DataGridTemplateColumn.CellTemplate>
                                                </sdk:DataGridTemplateColumn>
                                            </sdk:DataGrid.Columns>
                                        </sdk:DataGrid>
                                    </Grid>
                                </Grp:GroupBox>
                            </Grid>
                        </Grp:GroupBox>
                    </Grid>
                </Grid>
            </Grid>
        </toolkit:DockPanel>
    </Grid>
</UserControl>
 