<controls:ChildWindow x:Class="PalashDynamics.Administration.DoctorPaymentModeWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:input="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"
           xmlns:Converter="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters"
            Width="868" Height="578" 
           xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"  
           HasCloseButton="False" Margin="0" Padding="0">
    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Converter:DateTimeToAgePart x:Key="DateTimeToAgePart"></Converter:DateTimeToAgePart>
            <Converter:DateTimeConverter x:Key="DateConverter"></Converter:DateTimeConverter>
        </ResourceDictionary>
    </controls:ChildWindow.Resources>
    <Grid x:Name="Root" Background="Black">
        <Border  Margin="0" Padding="0" BorderThickness="1" BorderBrush="#FF885A2C" CornerRadius="3,3,3,3" Opacity="1" Background="White">
            <Grid x:Name="PaymentDetail">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Border BorderBrush="#FF37210B" BorderThickness="1" Background="#FF2D355C" />
                <TextBlock x:Name="SampleHeader" Margin="2" Text="Doctor Payment Details" VerticalAlignment="Center" HorizontalAlignment="Stretch" Foreground="White" FontWeight="Bold" FontSize="12" />
                <Border BorderBrush="PaleGreen" Grid.Row="1" BorderThickness="0" Background="Transparent">
                    <controlsToolkit:DockPanel LastChildFill="True" Margin="4,2,4,2">
                        <!--<Border BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" controlsToolkit:DockPanel.Dock="Bottom" BorderThickness="0" CornerRadius="3,3,3,3" Background="Transparent">-->


                        <!--<Grid Grid.Row="3">-->
                        <!--<Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition ></ColumnDefinition>
                                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                    <ColumnDefinition ></ColumnDefinition>
                                </Grid.ColumnDefinitions>-->

                        <!--<TextBlock Grid.Column="0" HorizontalAlignment="Right" VerticalAlignment="Center" Text="Received Amount" Grid.Row="0" Margin="4" />
                                <TextBox Grid.Column="1" TextAlignment="Right"  x:Name="txtReceivedAmt"  VerticalAlignment="Center" Grid.Row="0" Margin="4" TextChanged="txtNumber_TextChanged"  KeyDown="txtNumber_KeyDown" LostFocus="txtReceivedAmt_LostFocus" Text="{Binding StringFormat='N'}"/>
                                <TextBlock Grid.Column="2" HorizontalAlignment="Right" VerticalAlignment="Center" Text="Amount to be Return" Grid.Row="0" Margin="4" />
                                <TextBox Grid.Column="3" x:Name="txtAmtToBeReturn"  VerticalAlignment="Center" Grid.Row="0" Margin="4" IsReadOnly="True" TextAlignment="Right" Text="{Binding StringFormat='N'}" />-->

                        <!--<input:AutoCompleteComboBox x:Name="cmbCreditAuthBy" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID"  Grid.Row="0" Grid.Column="1" Margin="4,6,4,2"  VerticalAlignment="Center" HorizontalAlignment="Stretch"/>-->

                        <!--<StackPanel Grid.Column="4" x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                                    <StackPanel Grid.Column="4" x:Name="SaveCommandPanel" Orientation="Horizontal"  Margin="0,0,0,0" HorizontalAlignment="Right">
                                        <ToggleButton x:Name="OkButton"  Grid.Row="4" Content="Ok" MinWidth="50"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="OKButton_Click" />
                                        <ToggleButton x:Name="CancelButton"  Grid.Row="4" Content="Cancel" MinWidth="50" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="CancelButton_Click" />
                                    </StackPanel>
                                </StackPanel>-->
                        <!--</Grid>-->

                        <!--</Border>-->
                        <Border BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="2" controlsToolkit:DockPanel.Dock="Bottom" BorderThickness="1" CornerRadius="3,3,3,3" Background="Transparent">


                            <Grid Grid.Row="3">
                                <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                                    <Grid.RowDefinitions>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        <ColumnDefinition  ></ColumnDefinition>
                                        <ColumnDefinition  Width="Auto" ></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition ></ColumnDefinition>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>

                                    </Grid.ColumnDefinitions>

                                    <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="Payment Authorized By" Grid.Row="0" Grid.Column="0" Margin="4" />
                                    <input:AutoCompleteComboBox x:Name="cmbCreditAuthBy" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID"  Grid.Row="0" Grid.Column="1" Margin="4,0,0,0"  VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                                    <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="Total" Grid.Row="0" Margin="4" Grid.Column="2" />
                                    <TextBox x:Name="TxtTotal" Grid.Column="3" Margin="4,0,0,0" VerticalAlignment="Center" TextAlignment="Right" HorizontalAlignment="Left" TextChanged="TxtTotal_TextChanged"  KeyDown="TxtTotal_KeyDown" Width="131" />

                                    <StackPanel Grid.Column="5" x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   HorizontalAlignment="Stretch" Background="Transparent">
                                        <!--<StackPanel Grid.Column="5" x:Name="SaveCommandPanel" Orientation="Horizontal"  Margin="0,0,0,0" HorizontalAlignment="Right">-->
                                        <ToggleButton x:Name="OkButton"  Grid.Row="0" Content="Ok" MinWidth="50"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="OKButton_Click" />
                                        <ToggleButton x:Name="CancelButton"  Grid.Row="0" Content="Cancel" MinWidth="50" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="CancelButton_Click" />
                                        <!--</StackPanel>-->
                                    </StackPanel>
                                </Grid>

                            </Grid>


                        </Border>


                        <StackPanel Margin="2" controlsToolkit:DockPanel.Dock="Top" x:Name="PanelBillDetails">
                            <!--<Border Margin="0" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                                <ContentControl  FontSize="12" Content="Bill Details" Margin="-1" Style="{StaticResource Header}"/>
                            </Border>-->
                            <Border BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="0,-1,0,0" BorderThickness="1" CornerRadius="0,0,3,3" Background="Transparent">
                                <!--<Grid HorizontalAlignment="Stretch">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition />
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition/>

                                    </Grid.ColumnDefinitions>

                                    <TextBlock x:Name="lblPayTotalAmount" HorizontalAlignment="Right" VerticalAlignment="Center" Text="Total Amount" Grid.Row="0" Margin="4" />
                                    <TextBox x:Name="txtPayTotalAmount" IsReadOnly="True" Text="{Binding BillTotalAmount,StringFormat='N'}" Grid.Row="0" Grid.Column="1" Margin="4" TextAlignment="Right" HorizontalAlignment="Stretch"/>

                                    <TextBlock x:Name="lblDiscAmt" HorizontalAlignment="Right" VerticalAlignment="Center" Text="Discount" Grid.Row="0" Margin="4" Grid.Column="2"/>
                                    <TextBox x:Name="txtDiscAmt"  IsReadOnly="True" Text="{Binding ConcessionAmount,StringFormat='N'}" Grid.Row="0" Grid.Column="3" Margin="4" TextAlignment="Right" HorizontalAlignment="Stretch"  />

                                    <TextBlock x:Name="lblPayableAmt" HorizontalAlignment="Right" VerticalAlignment="Center" Text="Payable Amount" Grid.Column="4" Grid.Row="0" Margin="4"/>
                                    <TextBox x:Name="txtPayableAmt" IsReadOnly="True"  Text="{Binding StringFormat='N'}" Grid.Row="0" Grid.Column="5" Margin="4" TextAlignment="Right" HorizontalAlignment="Stretch"/>


                                </Grid>-->
                            </Border>
                        </StackPanel>





                        <controlsToolkit:DockPanel LastChildFill="True" Margin="1" Grid.Row="1">
                            <Border Margin="0" controlsToolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                                <ContentControl  FontSize="11" Content="Payment Detail" Margin="-1" Style="{StaticResource Header}"/>
                            </Border>
                            <Border BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="0,-1,0,0" BorderThickness="1" CornerRadius="0,0,3,3" Background="Transparent">
                                <controlsToolkit:DockPanel LastChildFill="True" >

                                    <Grid controlsToolkit:DockPanel.Dock="Bottom">
                                        <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" >
                                            <Border BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" controlsToolkit:DockPanel.Dock="Bottom" BorderThickness="1" Visibility="Visible"  CornerRadius="3,3,3,3" Background="Transparent">
                                                <Grid controlsToolkit:DockPanel.Dock="Bottom">

                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition Width="Auto"/>
                                                        <ColumnDefinition />
                                                        <ColumnDefinition Width="Auto"/>
                                                    </Grid.ColumnDefinitions>
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"/>
                                                        <RowDefinition Height="Auto"/>
                                                    </Grid.RowDefinitions>

                                                    <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center"  Text="Payment Mode" Grid.Row="0" Margin="2" Grid.Column="0"/>
                                                    <input:AutoCompleteComboBox x:Name="cmbPayMode" SelectedValuePath="ID" SelectionChanged="cmbPayMode_SelectionChanged"  Margin="2,8,0,8" Grid.Row="0" Grid.Column="1"  VerticalAlignment="Center" HorizontalAlignment="Stretch" />
                                                    <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center"  Text="Amount" Grid.Row="0" Margin="2" Grid.Column="2"/>
                                                    <TextBox x:Name="TxtpaidAmt"   Grid.Row="0" Grid.Column="3" Margin="1,8,0,8" TextAlignment="Right" HorizontalAlignment="Stretch" TextChanged="txtNumber_TextChanged"  KeyDown="txtNumber_KeyDown" />
                                                    <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center"  Text="A/c Number" Grid.Row="1" Margin="0,10,13,14" />
                                                    <TextBox x:Name="txtNumber"  Grid.Row="1" Grid.Column="1" Margin="2,8,0,8" TextAlignment="Right" HorizontalAlignment="Stretch" MaxLength="50" TextChanged="txtNumber_TextChanged"  KeyDown="txtNumber_KeyDown" LostFocus="txtNumber_LostFocus"/>

                                                    <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center"  Text="Bank" Margin="0,12,5,12" Grid.Column="4"/>
                                                    <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center"  Text="Date" Grid.Row="1" Margin="2" Grid.Column="2"/>
                                                    <controls:DatePicker x:Name="dtpDate" Grid.Row="1" Grid.Column="3" Margin="0,8,0,8"  />




                                                    <ToggleButton x:Name="cmdAddPayment"  Content="Add"    Background="#000000"  Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Margin="0,10,3,10" Grid.Row="1" Grid.Column="5" MaxWidth="80" MinWidth="80"  HorizontalAlignment="Right"  Click="cmdAddPayment_Click" />
                                                    <input:AutoCompleteComboBox x:Name="cmbBank" SelectedValuePath="ID" Margin="1,8,-1,8" Grid.Column="5" Grid.ColumnSpan="2" />
                                                </Grid>
                                            </Border>
                                        </Grid>

                                    </Grid>


                                    <Grid HorizontalAlignment="Stretch">
                                        <data:DataGrid  x:Name="dgPayment" ItemsSource="{Binding}"  AutoGenerateColumns="False" Margin="2,0,2,2"  controlsToolkit:DockPanel.Dock="Top" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" CanUserSortColumns="False" Height="377">
                                            <data:DataGrid.Columns>
                                                <data:DataGridTextColumn Binding="{Binding PayMode}" IsReadOnly="True" Width="120" Header="Pay Mode"/>
                                                <data:DataGridTextColumn IsReadOnly="True"  Binding="{Binding Amount, StringFormat=0.00}" Width="125" Header="Amount">
                                                    <data:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>
                                                <data:DataGridTextColumn Binding="{Binding Number}" IsReadOnly="True"  Width="130" Header="Number" />
                                                <data:DataGridTextColumn Binding="{Binding BankName}" IsReadOnly="True" Width="150" Header="Bank" />
                                                <data:DataGridTextColumn Binding="{Binding Date,Converter={StaticResource DateConverter},ConverterParameter='dd-MMM-yyyy'}"  IsReadOnly="True" Width="90" Header="Date" />

                                                <data:DataGridTemplateColumn>
                                                    <data:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <HyperlinkButton VerticalAlignment="Center" FontFamily="Webdings" Content="r"  Padding="5,0,5,0" IsTabStop="False" Click="cmdDelete_Click"  x:Name="cmdDelete" ToolTipService.ToolTip="Delete"></HyperlinkButton>
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                </data:DataGridTemplateColumn>

                                            </data:DataGrid.Columns>
                                        </data:DataGrid>
                                    </Grid>
                                </controlsToolkit:DockPanel>
                            </Border>
                        </controlsToolkit:DockPanel>

                    </controlsToolkit:DockPanel>
                </Border>
            </Grid>
        </Border>
    </Grid>
</controls:ChildWindow>