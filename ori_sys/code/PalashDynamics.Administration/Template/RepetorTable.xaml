<UserControl x:Class="PalashDynamics.Administration.Template.RepetorTable"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    >
    <UserControl.Resources>
        <Style x:Key="ListBoxItemStyle" TargetType="ListBoxItem">
            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        </Style>

        <DataTemplate x:Key="ListItemDataTemplate">
            <Grid  Margin="0" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <ComboBox  Grid.Column="0" Margin="0,0,5,0" />
                <TextBlock Grid.Column="1" VerticalAlignment="Center" Text="Dose:" Margin="0,0,5,0" ToolTipService.ToolTip="From repetor xaml"></TextBlock>
                <ComboBox Grid.Column="2"  Margin="0,0,5,0" />
                <TextBlock Grid.Column="3" VerticalAlignment="Center" Text="Route:" Margin="0,0,5,0" ToolTipService.ToolTip="From repetor xaml"></TextBlock>
                <ComboBox Grid.Column="4"  Margin="0,0,5,0"/>
                <TextBlock Grid.Column="5" VerticalAlignment="Center" Text="Frequency:" Margin="0,0,5,0"></TextBlock>
                <ComboBox  Grid.Column="6" Margin="0,0,5,0"/>
                <HyperlinkButton Width="50" Grid.Column="7"  TargetName="{Binding Command}" VerticalAlignment="Center" Margin="2" Click="HyperlinkButton_Click" >
                    <TextBlock TextAlignment="Left" Text="{Binding Command}"/>
                </HyperlinkButton>
            </Grid>
        </DataTemplate>

    </UserControl.Resources>
    <Grid x:Name="LayoutRoot" Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <ListBox ItemTemplate="{StaticResource ListItemDataTemplate}" ItemContainerStyle="{StaticResource ListBoxItemStyle}" HorizontalContentAlignment="Stretch" x:Name="ExpBuilder" Margin="2" Padding="0">

        </ListBox>
    </Grid>
</UserControl>
