<UserControl x:Class="PalashDynamics.Administration.PatientCaseRecord"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d" Width="800" Height="Auto" 
    >

    <Grid x:Name="LayoutRoot" Background="White" >
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Height="Auto">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <Image Grid.Column="0"  Source="../Icons/BlankImage.png" Height="60" Width="100" Margin="5,5,5,5"/>
            <TextBlock Grid.Column="1" Text="Patient Case Record" Margin="5,5,5,5" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="16" Foreground="#BD4B91"></TextBlock>
            <Image Grid.Column="2"  Source="../Icons/razi logo.png" Height="60" Width="100" Margin="5,5,5,5"/>
        </Grid>

        <Grid Grid.Row="1" Margin="10,5,10,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition />
                <ColumnDefinition Width="50"/>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>

            <TextBlock Grid.RowSpan="4" Text="Particulars" HorizontalAlignment="Left" VerticalAlignment="Center">                
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <!--<ScaleTransform ScaleY="0.994"/>-->
                        <!--<SkewTransform AngleX="-20"/>-->
                        <RotateTransform Angle="-90"/>
                        <TranslateTransform X="10" Y="30"/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>

            <TextBlock Grid.Column="0" Text="Name" Margin="50,2,2,2"></TextBlock>
            <TextBox Grid.Column="1" x:Name="TxtName" Grid.ColumnSpan="3" Margin="2,2,2,2"></TextBox>
            <TextBlock Grid.Column="4" Text="Date" Margin="2,2,2,2"></TextBlock>
            <TextBox Grid.Column="5" x:Name="TxtDate" Margin="2,2,2,2"></TextBox>

            <TextBlock Grid.Column="0" Grid.Row="1" Text="Age" Margin="50,2,2,2"></TextBlock>
            <TextBox Grid.Column="1" Grid.Row="1" x:Name="TxtAge" Margin="2,2,2,2"></TextBox>
            <TextBlock Grid.Column="2" Grid.Row="1" Text="Gender" Margin="2,2,2,2"></TextBlock>
            <TextBox Grid.Column="3" Grid.Row="1" x:Name="TxtGender" Margin="2,2,2,2"></TextBox>
            <TextBlock Grid.Column="4" Grid.Row="1"  Text="Clinic Ref No." Margin="2,2,2,2"></TextBlock>
            <TextBox Grid.Column="5" Grid.Row="1" x:Name="TxtClinicRefNo" Margin="2,2,2,2"></TextBox>

            <TextBlock Grid.Column="0" Grid.Row="2" Text="Address" Margin="50,2,2,2"></TextBlock>
            <TextBox Grid.Column="1" Grid.ColumnSpan="3" Grid.Row="2" x:Name="TxtAdd" Margin="2,2,2,2"></TextBox>
            <TextBlock Grid.Column="4" Grid.Row="2"  Text="Doctor" Margin="2,2,2,2"></TextBlock>
            <TextBox Grid.Column="5" Grid.Row="2" x:Name="TxtDoctor" Margin="2,2,2,2"></TextBox>
            <TextBlock Grid.Column="0" Grid.Row="3" Text="Occupation" Margin="50,2,2,2"></TextBlock>
            <TextBox Grid.Column="1" Grid.Row="3" x:Name="TxtOccupation" Grid.ColumnSpan="3" Margin="2,2,2,2"></TextBox>
            <TextBlock Grid.Column="4" Grid.Row="3" Text="Phone" Margin="2,2,2,2"></TextBlock>
            <TextBox Grid.Column="5" Grid.Row="3" x:Name="TxtPhone" Margin="2,2,2,2"></TextBox>
        </Grid>

        <Grid Grid.Row="2" Margin="10,5,10,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.RowSpan="5" Text="Illness Summary" HorizontalAlignment="Left" VerticalAlignment="Center" >
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <!--<ScaleTransform ScaleY="0.994"/>-->
                        <!--<SkewTransform AngleX="-20"/>-->
                        <RotateTransform Angle="-90"/>
                        <TranslateTransform X="10" Y="50"/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
            <TextBlock Grid.Column="0" Grid.RowSpan="5" Text="Present Complaints" Width="80" TextWrapping="Wrap" VerticalAlignment="Center" Margin="50,2,2,2"></TextBlock>


            <TextBlock Grid.Column="1" Text="Complaint Reported" Margin="2,2,2,2"></TextBlock>
            <TextBox Grid.Column="2" x:Name="TxtComplaintReported" TextWrapping="Wrap" AcceptsReturn="True" Margin="2,2,2,2"></TextBox>

            <TextBlock Grid.Column="1" Grid.Row="1" Text="Chief Complaints" Margin="2,2,2,2"></TextBlock>
            <TextBox Grid.Column="2" Grid.Row="1" x:Name="TxtChiefComplaints" TextWrapping="Wrap" AcceptsReturn="True" Margin="2,2,2,2"></TextBox>

            <TextBlock Grid.Column="1" Grid.Row="2" Text="Past History" Margin="2,2,2,2"></TextBlock>
            <TextBox Grid.Column="2" Grid.Row="2" x:Name="TxtPastHistory" TextWrapping="Wrap" AcceptsReturn="True" Margin="2,2,2,2"></TextBox>

            <TextBlock Grid.Column="1" Grid.Row="3" Text="Drug History" Margin="2,2,2,2"></TextBlock>
            <TextBox Grid.Column="2" Grid.Row="3" x:Name="TxtDrugHistory" AcceptsReturn="True" MinHeight="30" TextWrapping="Wrap" Margin="2,2,2,2"></TextBox>

            <TextBlock Grid.Column="1" Grid.Row="4" Text="Allergies" Margin="2,2,2,2"></TextBlock>
            <TextBox Grid.Column="2" Grid.Row="4" x:Name="TxtAllergies" TextWrapping="Wrap" AcceptsReturn="True" Margin="2,2,2,2"></TextBox>
        </Grid>

        <Grid Grid.Row="3" Margin="10,5,10,5">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.RowSpan="5" Text="Observation" HorizontalAlignment="Left" VerticalAlignment="Center" >
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <!--<ScaleTransform ScaleY="0.994"/>-->
                        <!--<SkewTransform AngleX="-20"/>-->
                        <RotateTransform Angle="-90"/>
                        <TranslateTransform X="10" Y="40"/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
            <TextBlock Grid.Column="0" Grid.RowSpan="4" Text="Investigation Radiology and Lab" Width="80" TextWrapping="Wrap" VerticalAlignment="Center" Margin="50,2,2,2"></TextBlock>

            <TextBox Grid.Column="1" Grid.ColumnSpan="3" Grid.RowSpan="4" MinHeight="40" TextWrapping="Wrap" AcceptsReturn="True"  x:Name="TxtInvestigations" Margin="2,2,2,2"></TextBox>

            <TextBlock Grid.Column="0" Grid.Row="4" Text="Provisional Dignosis " Margin="50,2,2,2" ></TextBlock>
            <TextBox Grid.Column="1"  Grid.Row="4" x:Name="TxtProDiag" Margin="2" TextWrapping="Wrap" AcceptsReturn="True" Foreground="Blue" ></TextBox>
            <TextBlock Grid.Column="2" Grid.Row="4" Text="Final Diagnosis " Margin="2" ></TextBlock>
            <TextBox Grid.Column="3" Grid.Row="4" x:Name="TxtFinalDiag" TextWrapping="Wrap" AcceptsReturn="True" Margin="2" Foreground="Blue" ></TextBox>

        </Grid>
        <!--<Grid Grid.Row="3" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Provisional Dignosis " Margin="50,2,2,2" ></TextBlock>
            <TextBox Grid.Column="1" x:Name="TxtProDiag" Margin="2" Foreground="Blue" ></TextBox>
            <TextBlock Grid.Column="2" Text="Chief Complaints " Margin="2" ></TextBlock>
            <TextBox Grid.Column="3" x:Name="TxtChiefComp" Margin="2" Foreground="Blue" ></TextBox>
        </Grid>-->

        <Grid Grid.Row="4" Margin="10,5,10,5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Therapy" HorizontalAlignment="Left" VerticalAlignment="Center" >
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <!--<ScaleTransform ScaleY="0.994"/>-->
                        <!--<SkewTransform AngleX="-20"/>-->
                        <RotateTransform Angle="-90"/>
                        <TranslateTransform X="10" Y="30"/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>

            <Border Grid.Column="0" Grid.ColumnSpan="2" Margin="40,2,2,2" x:Name="BorderMedication" MinHeight="100"></Border>
        </Grid>

        <Grid Grid.Row="5" Margin="10,5,10,5" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Education" HorizontalAlignment="Left" VerticalAlignment="Center" >
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <!--<ScaleTransform ScaleY="0.994"/>-->
                        <!--<SkewTransform AngleX="-20"/>-->
                        <RotateTransform Angle="-90"/>
                        <TranslateTransform X="10" Y="60"/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
            <TextBlock Grid.Column="0" Text="Advisory Attached" VerticalAlignment="Center" Margin="50,2,2,2"></TextBlock>
            <TextBox Grid.Column="1" x:Name="TxtAdvisoryAttached" Margin="2" AcceptsReturn="True"></TextBox>

            <TextBlock Grid.Column="0" Grid.Row="1" Text="When to visit Hospital/Clinic" TextWrapping="Wrap" Width="80" VerticalAlignment="Center" Margin="50,2,2,2"></TextBlock>
            <TextBox Grid.Column="1" Grid.Row="1" x:Name="TxtWhenToVisitHospital" TextWrapping="Wrap" AcceptsReturn="True" Margin="2,2,2,2"></TextBox>

            <TextBlock Grid.Column="0" Grid.Row="2" Text="Specific Instructions" VerticalAlignment="Center" Margin="50,2,2,2"></TextBlock>
            <TextBox Grid.Column="1" Grid.Row="2" x:Name="TxtSpecificInstructions" TextWrapping="Wrap" AcceptsReturn="True" Margin="2,2,2,2"></TextBox>

        </Grid>

        <Grid Grid.Row="6" Margin="10,5,10,5" >
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <TextBlock Grid.RowSpan="2" Text="Others" HorizontalAlignment="Left" VerticalAlignment="Center" >
                <TextBlock.RenderTransform>
                    <TransformGroup>
                        <!--<ScaleTransform ScaleY="0.994"/>-->
                        <!--<SkewTransform AngleX="-20"/>-->
                        <RotateTransform Angle="-90"/>
                        <TranslateTransform X="10" Y="30"/>
                    </TransformGroup>
                </TextBlock.RenderTransform>
            </TextBlock>
            <TextBlock Grid.Column="0" Text="Follow Up Date" Width="85" VerticalAlignment="Center" Margin="40,2,2,2"></TextBlock>
            <TextBox Grid.Column="1"  x:Name="TxtFollowUpDate" Margin="2,2,2,2"></TextBox>

            <TextBlock Grid.Column="2"  Text="Referral To" Margin="2,2,2,2" ></TextBlock>
            <TextBox Grid.Column="3" Grid.RowSpan="2" x:Name="TxtReferralTo" Margin="2" AcceptsReturn="True" TextWrapping="Wrap"></TextBox>
            <TextBlock Grid.Column="0" Grid.Row="4" Text="Follow Up At" Margin="40,2,2,2" ></TextBlock>
            <TextBox Grid.Column="1" Grid.Row="4" x:Name="TxtFollowUpAt" Margin="2" AcceptsReturn="True" TextWrapping="Wrap"></TextBox>

        </Grid>
        <TextBlock Grid.Row="7" Text="Signature of the Doctor:" Margin="0,10,150,0" HorizontalAlignment="Right"></TextBlock>
    </Grid>
</UserControl>
