<UserControl x:Class="PalashDynamics.Administration.frmProfileMaster"
              xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"  
    xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit" 
    xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"   
     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
    xmlns:dataInput="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data.Input"
    xmlns:input="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input"
    xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    xmlns:inputToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit"
    xmlns:Converter="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters"
     Height="Auto" Width="Auto" Loaded="UserControl_Loaded" >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>

            </ResourceDictionary.MergedDictionaries>
            <Converter:DateTimeConverter x:Key="DateConverter"></Converter:DateTimeConverter>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid Height="auto" Width="auto">
        <controlsToolkit:DockPanel LastChildFill="True">
            <Border BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" controlsToolkit:DockPanel.Dock="Bottom" BorderThickness="1" CornerRadius="3,3,3,3" Background="Transparent">
                <StackPanel x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                    <StackPanel Orientation="Horizontal"  Margin="1" HorizontalAlignment="Right"  >
                        <ToggleButton x:Name="cmdNew" Content="New" TabIndex="3"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="cmdNew_Click"  ToolTipService.ToolTip="New"></ToggleButton>
                        <ToggleButton x:Name="cmdSave" Content="Save" TabIndex="4" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}"  Click="cmdSave_Click"  ToolTipService.ToolTip="Save"></ToggleButton>
                        <ToggleButton Content="Modify" x:Name="cmdModify" TabIndex="5" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Click="cmdModify_Click"  ToolTipService.ToolTip="Modify"></ToggleButton>
                        <ToggleButton Content="Cancel" x:Name="cmdCancel" TabIndex="6" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Click="cmdCancel_Click"  ToolTipService.ToolTip="Cancel"></ToggleButton>
                    </StackPanel>
                </StackPanel>
            </Border>
            <Grid x:Name="PageContainer" Height="auto" Width="auto">
                <Grid Height="AUTO" Visibility="Visible" Width="auto" x:Name="FrontPanel" Grid.Row="0" >
                    
                    <toolkit:DockPanel x:Name="FrontPanelDock" LastChildFill="true" >
                        <!--<sdk:DataPager x:Name="dataGrid2Pager" toolkit:DockPanel.Dock="Bottom" DisplayMode="FirstLastPreviousNext"  IsEnabled="True"                       
                                                        Source="{Binding}"   NumericButtonCount="10" AutoEllipsis="False" IsTotalItemCountFixed="True"  />-->
                        <toolkit:DockPanel x:Name="DockContent" toolkit:DockPanel.Dock="Top" >
                            <!--<sdk:DataPager x:Name="dataGrid2Pager" toolkit:DockPanel.Dock="Bottom" DisplayMode="FirstLastPreviousNext"  IsEnabled="True"                       
                                                        Source="{Binding}"   NumericButtonCount="10" AutoEllipsis="False" IsTotalItemCountFixed="True"  />-->
                            <Border BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Margin="4,4,4,4"  Background="Transparent" >
                                <toolkit:DockPanel x:Name="DockMain" toolkit:DockPanel.Dock="Top" LastChildFill="true">
<sdk:DataPager x:Name="dataGrid2Pager" toolkit:DockPanel.Dock="Bottom" DisplayMode="FirstLastPreviousNext"  IsEnabled="True"                       
                                                        Source="{Binding}"   NumericButtonCount="10" AutoEllipsis="False" IsTotalItemCountFixed="True"  />
                                    <toolkit:DockPanel x:Name="DockTop" toolkit:DockPanel.Dock="Top" HorizontalAlignment="Stretch">
                                        <Grid x:Name="LayoutRoot1"  Background="White" Width="Auto"  Margin="4" HorizontalAlignment="Stretch">
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="40"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>                                          
                                            </Grid.ColumnDefinitions>
                                            
                                            <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="4" Text="Code"  Grid.Row="0" Grid.Column="0"/>
                                            <TextBox x:Name="txtCode" Grid.Column="1"   Grid.Row="0" Margin="4,4,2,4" MaxLength="45" TabIndex="0" KeyDown="cmdtext_keyDown"  ToolTipService.ToolTip="Please Enter Code"></TextBox>
                                            <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center"  Margin="4" Text="Description" Grid.Row="0" Grid.Column="2"/>
                                            <TextBox Grid.Column="3" Grid.Row="0"  x:Name="txtdescription" Margin="4,4,2,4" MaxLength="45" TabIndex="1"  KeyDown="cmdtext_keyDown"  ToolTipService.ToolTip="Please Enter Description"></TextBox>
                                            <Button x:Name="cmdSearch" Margin="4,4,26,4" ToolTipService.ToolTip="Search Priffix Master Record" TabIndex="3" Width="auto" Grid.Row="0" Click="cmdSearch_Click" Grid.Column="4">
                                                <Image Source="/PalashDynamics;component/Icons/xmag.png" Margin="2" ></Image>
                                            </Button>
                                        </Grid>
                                    </toolkit:DockPanel>
                                    <Border Grid.Row="0"  toolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0"  Background="Transparent">
                                        <ContentControl VerticalAlignment="Center" FontSize="12" Content="" Margin="-1" Style="{StaticResource Header}"     HorizontalAlignment="Stretch" />
                                    </Border>
                                    
                                    <toolkit:DockPanel x:Name="DockMiddle" HorizontalAlignment="Stretch" Width="Auto">                                        
                                        <data:DataGrid x:Name="dgPreffixMaster" AutoGenerateColumns="False" ItemsSource="{Binding}" VerticalScrollBarVisibility="Visible" IsReadOnly="True" Margin="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" TabIndex="3">
                                            <data:DataGrid.Columns >
                                                <data:DataGridTemplateColumn Header="View">
                                                    <data:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <HyperlinkButton VerticalAlignment="Center"  Content="View"  Padding="5,0,5,0" Click="cmdView_Click" x:Name="hlbViewSchedule"></HyperlinkButton>
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                </data:DataGridTemplateColumn>
                                                <data:DataGridTextColumn Binding="{Binding Code}" Header="Code" />
                                                <data:DataGridTextColumn Binding="{Binding Description}" Header="Description" />
                                                <data:DataGridTextColumn Binding="{Binding GetApplicableGender}" Header="Applicable Gender" />
                                                <data:DataGridTemplateColumn Header="Status">
                                                    <data:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <CheckBox HorizontalAlignment="Center" Margin="4" IsChecked="{Binding Status}" Click="CheckBox_Checked"></CheckBox>
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                </data:DataGridTemplateColumn>
                                            </data:DataGrid.Columns>
                                        </data:DataGrid>
                                    </toolkit:DockPanel>
                                </toolkit:DockPanel>
                            </Border>
                        </toolkit:DockPanel>
                    </toolkit:DockPanel>
                </Grid>

                <Grid Width="auto" x:Name="BackPanel" Visibility="Collapsed" Grid.Row="1">
                    <toolkit:DockPanel  x:Name="BackPanelMainDock" LastChildFill="True" >
                        <toolkit:DockPanel x:Name="DockContent1" toolkit:DockPanel.Dock="Top" >
                            <Border BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Margin="4,4,4,4"  Background="Transparent" >
                                <toolkit:DockPanel x:Name="DockMain1" toolkit:DockPanel.Dock="Top" LastChildFill="true">

                                    <controlsToolkit:DockPanel x:Name="DocMain1" controlsToolkit:DockPanel.Dock="Top" LastChildFill="True">

                                        <controlsToolkit:DockPanel x:Name="docContet2" controlsToolkit:DockPanel.Dock="Top" LastChildFill="True">

                                            <toolkit:DockPanel x:Name="DockTop1" toolkit:DockPanel.Dock="Top" HorizontalAlignment="Stretch">
                                                <Grid x:Name="LayoutRoot2" Background="White" Margin="4" HorizontalAlignment="Stretch"  >
                                                    <Grid.RowDefinitions>
                                                        <RowDefinition Height="Auto"></RowDefinition>
                                                        <RowDefinition Height="Auto"></RowDefinition>
                                                        <RowDefinition Height="Auto"></RowDefinition>
                                                      
                                                    </Grid.RowDefinitions>
                                                    <Grid.ColumnDefinitions>
                                                        <ColumnDefinition   Width="Auto"></ColumnDefinition>
                                                        <ColumnDefinition></ColumnDefinition>
                                                        <ColumnDefinition   Width="Auto"></ColumnDefinition>
                                                        <ColumnDefinition></ColumnDefinition>
                                                        <ColumnDefinition   Width="Auto"></ColumnDefinition>
                                                        <ColumnDefinition></ColumnDefinition>
                                                    </Grid.ColumnDefinitions>

                                                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center"   Text="Code" Margin="4" Grid.Column="0" Grid.Row="0" />
                                                    <TextBox x:Name="txtCodeBackpnl" Grid.Column="1" Grid.Row="0" Margin="4"  HorizontalAlignment="Stretch" TabIndex="0"  ToolTipService.ToolTip="Please Enter Code"></TextBox>
                                                    <TextBox x:Name="txtDescriptionBackpnl" Grid.Column="3" Grid.Row="0" Margin="4" HorizontalAlignment="Stretch" TabIndex="1"  ToolTipService.ToolTip="Please Enter Description"></TextBox>
                                                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center"  Text="Description" Grid.Column="2" Grid.Row="0" Margin="4" />
                                                    <inputcombo:AutoCompleteComboBox  x:Name="cmbApplicableGenderBackpnl" Margin="4" Grid.Row="0" Grid.Column="5"  VerticalAlignment="Center" TabIndex="2" ItemsSource="{Binding}" HorizontalAlignment="Stretch" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID"  ToolTipService.ToolTip="Please Select Applicable Gender"></inputcombo:AutoCompleteComboBox>
                                                    <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center"  Text="Applicable Gender"  Grid.Row="0" Grid.Column="4" Margin="4" />
                                                </Grid>
                                            </toolkit:DockPanel>                                        
                                        </controlsToolkit:DockPanel>

                                    </controlsToolkit:DockPanel>

                                </toolkit:DockPanel>
                            </Border>
                        </toolkit:DockPanel>
                    </toolkit:DockPanel>
                </Grid>
            </Grid>
        </controlsToolkit:DockPanel>

    </Grid>
</UserControl>