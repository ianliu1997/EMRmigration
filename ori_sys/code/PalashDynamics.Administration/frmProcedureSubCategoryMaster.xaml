<UserControl x:Class="PalashDynamics.Administration.frmProcedureSubCategoryMaster"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
mc:Ignorable="d"
xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
xmlns:Localization="clr-namespace:PalashDynamic.Localization;assembly=PalashDynamic.Localization"
Height="Auto" Width="Auto" Loaded="UserControl_Loaded">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Localization:Localized x:Key="locResource"></Localization:Localized>
        </ResourceDictionary>
    </UserControl.Resources>

    <Grid x:Name="LayoutRoot" Background="White">

        <toolkit:DockPanel LastChildFill="True">
            <Border  BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" toolkit:DockPanel.Dock="Bottom" BorderThickness="1" CornerRadius="3,3,3,3" Background="Transparent" >
                <StackPanel x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                    <StackPanel Orientation="Horizontal"  Margin="1" HorizontalAlignment="Right"  >
                        <ToggleButton  Margin="4"  Content="{Binding btnNew,Source={StaticResource locResource}}" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdNew" Click="cmdNew_Click"></ToggleButton>
                        <ToggleButton   Margin="4" Content="{Binding btnSave,Source={StaticResource locResource}}" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdSave" Click="cmdSave_Click"></ToggleButton>
                        <ToggleButton   Margin="4"  Content="{Binding btnModify,Source={StaticResource locResource}}" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdModify" Click="cmdModify_Click"></ToggleButton>
                        <ToggleButton  Margin="4" Content="{Binding btnCancel,Source={StaticResource locResource}}" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdCancel" Click="cmdCancel_Click"></ToggleButton>
                    </StackPanel>
                </StackPanel>
            </Border>

            <Grid>

                <Grid x:Name="NewProcedureSubCategoryLayoutRoot" Background="White">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                        <RowDefinition Height="Auto"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>

                    <TextBlock  VerticalAlignment="Center" Text="{Binding lblCategory,Source={StaticResource locResource}}" Margin="4" Grid.Row="2" Grid.Column="0" HorizontalAlignment="Right"></TextBlock>
                    <inputcombo:AutoCompleteComboBox  VerticalAlignment="Top" Margin="4" x:Name="CmbCategory" SelectedValuePath="ID" SelectedItemBinding="{Binding MasterListItem, Mode=TwoWay}" Grid.Row="2" Grid.Column="1" SelectionChanged="CmbCategory_SelectionChanged" ></inputcombo:AutoCompleteComboBox >

                    <TextBlock  VerticalAlignment="Center" Text="{Binding lblCode,Source={StaticResource locResource}}" Margin="4" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right"></TextBlock>
                    <TextBox x:Name="txtCode" Text="{Binding Code, Mode=TwoWay}" Grid.Row="0" Grid.Column="1" Margin="4" MaxLength="10" HorizontalAlignment="Stretch" LostFocus="txtCode_LostFocus" KeyDown="txtCode_KeyDown" TabIndex="0" Height="25" ></TextBox>

                    <TextBlock  VerticalAlignment="Center" Text="{Binding lblDescription,Source={StaticResource locResource}}" Margin="4" Grid.Row="1" Grid.Column="0" HorizontalAlignment="Right"></TextBlock>
                    <TextBox x:Name="txtDescription" Text="{Binding Description, Mode=TwoWay}" Grid.Row="1" Grid.Column="1" Margin="4" MaxLength="45" HorizontalAlignment="Stretch" TabIndex="1" Height="25" LostFocus="txtDescription_LostFocus" KeyDown="txtDescription_KeyDown" ></TextBox>

                </Grid>

                <Grid x:Name="ProcedureSubCategoryListLayout" Background="White">
                    <Grid Height="AUTO" Visibility="Visible" Width="auto" x:Name="FrontPanel" Grid.Row="0">
                        <toolkit:DockPanel x:Name="InstructionList">

                            <toolkit:DockPanel x:Name="DockTop" toolkit:DockPanel.Dock="Top" HorizontalAlignment="Stretch">
                                <Grid x:Name="LayoutRoot2" Background="White" Margin="4" HorizontalAlignment="Stretch"  >
                                    <Grid.RowDefinitions>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        <ColumnDefinition ></ColumnDefinition>
                                        <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        <ColumnDefinition ></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                </Grid>
                            </toolkit:DockPanel>

                            <toolkit:DockPanel LastChildFill="True" toolkit:DockPanel.Dock="Top">
                                <Grid toolkit:DockPanel.Dock="Top">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto" MinWidth="150" MaxWidth="150"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock x:Name="txtSearchCriteria" Grid.Column="0" Text="{Binding lblDescription,Source={StaticResource locResource}}" Margin="4,10,4,4" Width="75"/>
                                    <TextBox Grid.Column="1" x:Name="txtSearch" Margin="4" Width="200" MaxLength="45" KeyDown="txtSearch_KeyDown" ></TextBox>

                                    <Button Grid.Column="2" x:Name="cmdSearch" ToolTipService.ToolTip="{Binding ttpSearch,Source={StaticResource locResource}}"   HorizontalAlignment="Left" Click="cmdSearch_Click">
                                        <Image Source="/PalashDynamics;component/Icons/Search_b.JPG" Margin="4,0,4,0" Width="20" ></Image>
                                    </Button>
                                </Grid>

                                <StackPanel toolkit:DockPanel.Dock="Top" Margin="0,4,0,0">
                                    <Border  BorderBrush="{StaticResource TabControlDarkerBorder}" BorderThickness="1" CornerRadius="3,3,0,0"  Background="Transparent">
                                        <ContentControl VerticalAlignment="Center" FontSize="12" Content="{Binding lblListofProcedureSubCategory,Source={StaticResource locResource}}" Margin="-1" Style="{StaticResource Header}"     HorizontalAlignment="Stretch" />
                                    </Border>
                                </StackPanel>
                            </toolkit:DockPanel>

                            <toolkit:DockPanel LastChildFill="True">
                                <sdk:DataPager x:Name="dpProcedureSubCategory" toolkit:DockPanel.Dock="Bottom" 
                                                        DisplayMode="FirstLastPreviousNext"  IsEnabled="True"                       
                                                        Source="{Binding}" 
                                                        AutoEllipsis="False" IsTotalItemCountFixed="False"  />
                                <sdk:DataGrid  x:Name="grdProcedureSubCategory" VerticalAlignment="Stretch" ItemsSource="{Binding}" AutoGenerateColumns="False" IsReadOnly="True" >
                                    <sdk:DataGrid.Columns>
                                        <sdk:DataGridTemplateColumn Localization:DataGridColumnHelper.HeaderBinding="{Binding lblView,Source={StaticResource locResource}}">
                                            <sdk:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <HyperlinkButton Margin="4" x:Name="cmdView" Content="{Binding Path=lblView,Source={StaticResource locResource}}"  Cursor="Hand"  Click="cmdView_Click"></HyperlinkButton>
                                                </DataTemplate>
                                            </sdk:DataGridTemplateColumn.CellTemplate>
                                        </sdk:DataGridTemplateColumn>
                                        <sdk:DataGridTextColumn IsReadOnly="True" Localization:DataGridColumnHelper.HeaderBinding="{Binding Path=lblCode,Source={StaticResource locResource}}" Binding="{Binding Code}"  />
                                        <sdk:DataGridTextColumn IsReadOnly="True"  Localization:DataGridColumnHelper.HeaderBinding="{Binding Path=lblDescription,Source={StaticResource locResource}}" Binding="{Binding Description}"/>
                                        <sdk:DataGridTextColumn IsReadOnly="True"  Localization:DataGridColumnHelper.HeaderBinding="{Binding Path=lblCategory,Source={StaticResource locResource}}"  Binding="{Binding Category}" />

                                        <sdk:DataGridTemplateColumn Localization:DataGridColumnHelper.HeaderBinding="{Binding lblStatus,Source={StaticResource locResource}}">
                                            <sdk:DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <CheckBox Margin="4" x:Name="chkStatus"  IsChecked="{Binding Status}" VerticalAlignment="Center" HorizontalAlignment="Center" IsEnabled="True" Checked="StatusCheckBox_Checked" Unchecked="StatusCheckBox_UnChecked"  ></CheckBox>
                                                </DataTemplate>
                                            </sdk:DataGridTemplateColumn.CellTemplate>
                                        </sdk:DataGridTemplateColumn>

                                    </sdk:DataGrid.Columns>
                                </sdk:DataGrid>
                            </toolkit:DockPanel>

                        </toolkit:DockPanel>
                    </Grid>
                </Grid>
            </Grid>
        </toolkit:DockPanel>
    </Grid>
</UserControl>