<controls:ChildWindow xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"  x:Class="CIMS.Forms.frmFirstChangePassword"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           Width="400" Height="300" 
           Title="Change Password" Background="White">
    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        
    </controls:ChildWindow.Resources>
    <Grid x:Name="LayoutRoot" Margin="2" Background="White">

        <toolkit:DockPanel LastChildFill="True" toolkit:DockPanel.Dock="Top" Margin="4">
            <Border BorderBrush="{StaticResource TabControlDarkerBorder}" BorderThickness="1" CornerRadius="0,0,3,3" Background="Transparent">
                <Border  Height="auto" Width="auto" Margin="4" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="0,0,3,3" Background="Transparent">
                    <Border  Height="auto" VerticalAlignment="Center"   Width="auto" BorderBrush="{StaticResource TabControlDarkerBorder}"  BorderThickness="1" CornerRadius="0,0,3,3" Background="Transparent">
                        <Grid Margin="4">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition />
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <TextBlock   VerticalAlignment="Center" Text="Login Name" Grid.Row="0" Grid.Column="0"  Margin="4" />
                            <TextBox  x:Name="txtLoginName" Text="{Binding LoginName,Mode=TwoWay,ValidatesOnExceptions=True, NotifyOnValidationError=True}" Style="{StaticResource RequiredField}"  Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"  Margin="4"/>
                            <!--IsReadOnly="True"-->

                            <TextBlock   VerticalAlignment="Center" Text="Password" Grid.Row="1" Grid.Column="0"  Margin="4" />
                            <PasswordBox  x:Name="txtOldPassword" Password="{Binding OldPassword,Mode=TwoWay,ValidatesOnExceptions=true, NotifyOnValidationError=true}" Style="{StaticResource PswRequiredField}" Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"  Margin="4"/>

                            <TextBlock   VerticalAlignment="Center" Text="New Password" Grid.Row="2" Grid.Column="0"  Margin="4" />
                            <PasswordBox x:Name="txtNewPassword" Password="{Binding Password,Mode=TwoWay,ValidatesOnExceptions=true, NotifyOnValidationError=true}"  Style="{StaticResource PswRequiredField}" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"  Margin="4"/>

                            <TextBlock   VerticalAlignment="Center" Text="Confirm New Password"  Grid.Row="3" Grid.Column="0"  Margin="4" />
                            <PasswordBox x:Name="txtConfirmNewPassword" Password="{Binding ConfirmPassword,Mode=TwoWay,ValidatesOnExceptions=true, NotifyOnValidationError=true}" Style="{StaticResource PswRequiredField}"  Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"  Margin="4"/>

                            <TextBlock   VerticalAlignment="Center" Text="Secrete Question" Grid.Row="4" Grid.Column="0"  Margin="4" />
                            <TextBox  x:Name="txtSecreteQuestion" Text="{Binding SecreteQuestion,Mode=TwoWay,ValidatesOnExceptions=True, NotifyOnValidationError=True}" Style="{StaticResource RequiredField}"  Grid.Row="4" Grid.Column="1" Grid.ColumnSpan="2"  Margin="4"/>
                            
                            <TextBlock   VerticalAlignment="Center" Text="Secrete Answer"  Grid.Row="5" Grid.Column="0"  Margin="4" />
                            <PasswordBox x:Name="txtSecreteAnswer" Password="{Binding SecreteAnswer,Mode=TwoWay,ValidatesOnExceptions=true, NotifyOnValidationError=true}" Style="{StaticResource PswRequiredField}"  Grid.Row="5" Grid.Column="1" Grid.ColumnSpan="2"  Margin="4"/>

                            <StackPanel Orientation="Horizontal" Grid.Row="7" Grid.Column="2">
                                <Button Content="OK" Width="70" Height="25" Click="OKButton_Click"  Margin="2,4,4,4" ></Button>
                                <Button Content="Cancel" Width="70" Height="25" Margin="2,4,4,4" Click="CancelButton_Click"></Button>
                            </StackPanel>

                        </Grid>
                    </Border>
                </Border>
            </Border>
        </toolkit:DockPanel>
    </Grid>
</controls:ChildWindow>