<UserControl x:Class="PalashDynamics.Administration.frmDoctorServiceRateCategory"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters"
    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit"
    xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"  
    xmlns:Grp="clr-namespace:Groupbox;assembly=Groupbox"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"  
    xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"  
    xmlns:layoutToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Layout.Toolkit"
    xmlns:input="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input"         
          Loaded="UserControl_Loaded"         >

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <local:DateTimeConverter x:Key="DateConverter" />
        </ResourceDictionary>
        <Style x:Key="DataGridColumnHeaderStyle" TargetType="sdk:DataGridColumnHeader">
            <Setter Property="Foreground" Value="#FF000000"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="IsTabStop" Value="False"/>
            <Setter Property="SeparatorBrush" Value="#FFC9CACA"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="sdk:DataGridColumnHeader">
                        <Grid x:Name="Root">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <ColorAnimation Duration="0" Storyboard.TargetName="BackgroundRectangle" Storyboard.TargetProperty="(Fill).Color" To="#FF448DCA"/>
                                            <ColorAnimation Duration="0" Storyboard.TargetName="BackgroundGradient" Storyboard.TargetProperty="(Fill).(GradientStops)[3].Color" To="#7FFFFFFF"/>
                                            <ColorAnimation Duration="0" Storyboard.TargetName="BackgroundGradient" Storyboard.TargetProperty="(Fill).(GradientStops)[2].Color" To="#CCFFFFFF"/>
                                            <ColorAnimation Duration="0" Storyboard.TargetName="BackgroundGradient" Storyboard.TargetProperty="(Fill).(GradientStops)[1].Color" To="#F2FFFFFF"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Pressed">
                                        <Storyboard>
                                            <ColorAnimation Duration="0" Storyboard.TargetName="BackgroundRectangle" Storyboard.TargetProperty="(Fill).Color" To="#FF448DCA"/>
                                            <ColorAnimation Duration="0" Storyboard.TargetName="BackgroundGradient" Storyboard.TargetProperty="(Fill).(GradientStops)[0].Color" To="#D8FFFFFF"/>
                                            <ColorAnimation Duration="0" Storyboard.TargetName="BackgroundGradient" Storyboard.TargetProperty="(Fill).(GradientStops)[1].Color" To="#C6FFFFFF"/>
                                            <ColorAnimation Duration="0" Storyboard.TargetName="BackgroundGradient" Storyboard.TargetProperty="(Fill).(GradientStops)[2].Color" To="#8CFFFFFF"/>
                                            <ColorAnimation Duration="0" Storyboard.TargetName="BackgroundGradient" Storyboard.TargetProperty="(Fill).(GradientStops)[3].Color" To="#3FFFFFFF"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                                <VisualStateGroup x:Name="SortStates">
                                    <VisualState x:Name="Unsorted"/>
                                    <VisualState x:Name="SortAscending"/>
                                    <VisualState x:Name="SortDescending"/>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                            <Rectangle x:Name="BackgroundRectangle" Fill="#FF1F3B53" Stretch="Fill" Grid.ColumnSpan="2"/>
                            <Rectangle x:Name="BackgroundGradient" Stretch="Fill" Grid.ColumnSpan="2">
                                <Rectangle.Fill>
                                    <LinearGradientBrush EndPoint=".7,1" StartPoint=".7,0">
                                        <GradientStop Color="#FCFFFFFF" Offset="0.015"/>
                                        <GradientStop Color="#F7FFFFFF" Offset="0.375"/>
                                        <GradientStop Color="#E5FFFFFF" Offset="0.6"/>
                                        <GradientStop Color="#D1FFFFFF" Offset="1"/>
                                    </LinearGradientBrush>
                                </Rectangle.Fill>
                            </Rectangle>
                            <Rectangle x:Name="VerticalSeparator" Fill="{TemplateBinding SeparatorBrush}" VerticalAlignment="Stretch" Width="1" Visibility="{TemplateBinding SeparatorVisibility}" Grid.Column="1"/>
                            <CheckBox x:Name="chkSelectAll" Click="chk_Click"  Margin="2,0,0,0" Content="Select All"  VerticalAlignment="Center" HorizontalAlignment="Left"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>



    </UserControl.Resources>
    <Grid x:Name="LayoutRoot" Background="White" HorizontalAlignment="Stretch">
        <toolkit:DockPanel x:Name="MainDockPanel11" LastChildFill="True"  >
            <Border  BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" toolkit:DockPanel.Dock="Bottom" BorderThickness="1" CornerRadius="3,3,3,3" Background="Transparent" >
                <toolkit:DockPanel toolkit:DockPanel.Dock="Bottom">
                    <StackPanel x:Name="Footer" Orientation="Horizontal"    Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                        <ToggleButton x:Name="CmdNew"  Content="New"   Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="CmdNew_Click"/>
                        <ToggleButton x:Name="CmdSave"  Content="Save"   Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="CmdSave_Click"/>
                        <ToggleButton x:Name="CmdModify"  Content="Modify"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="CmdModify_Click"/>
                        <ToggleButton x:Name="CmdCancel"   Content="Cancel"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="CmdCancel_Click"/>
                    </StackPanel>
                </toolkit:DockPanel>
            </Border>
            <Grid x:Name="PageContainer" >
                <Grid  x:Name="FrontPanel" Height="AUTO" Grid.Row="0" Visibility="Visible">
                    <toolkit:DockPanel x:Name="DockContent" Margin="4" toolkit:DockPanel.Dock="Top">
                        <Border  toolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition ></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grp:GroupBox Name="grpSearch"  Header="Search Criteria" Margin="4">
                                    <toolkit:DockPanel  toolkit:DockPanel.Dock="Top" Grid.Row="0" >
                                        <Grid toolkit:DockPanel.Dock="Top">
                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition  Width="Auto"/>
                                                <ColumnDefinition />
                                                <ColumnDefinition  Width="Auto"/>
                                                <ColumnDefinition  />
                                                <ColumnDefinition Width="Auto" />
                                                <ColumnDefinition />
                                                <ColumnDefinition />
                                            </Grid.ColumnDefinitions>

                                            <TextBlock Text="Doctor Category" Grid.Column="0" Grid.Row="0"   Margin="4" VerticalAlignment="Center"></TextBlock>
                                            <inputcombo:AutoCompleteComboBox TabIndex="0" x:Name="cmbDocCategory" Grid.Row="0" Grid.Column="1" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID"  Margin="4"  VerticalAlignment="Center" HorizontalAlignment="Stretch"></inputcombo:AutoCompleteComboBox>
                                            <TextBlock Text="Service Name" Grid.Column="2" Grid.Row="0"   Margin="4" VerticalAlignment="Center"></TextBlock>
                                            <TextBox x:Name="txtServiceName" TabIndex="1" Grid.Column="3" Grid.Row="0" Text="" Margin="4" KeyDown="txtServiceName_KeyDown"/>
                                            <TextBlock Text="Class Name" Grid.Column="4" Grid.Row="0"   Margin="4" VerticalAlignment="Center"></TextBlock>
                                            <inputcombo:AutoCompleteComboBox TabIndex="2" x:Name="cmbClassNameFP" Grid.Row="0" Grid.Column="5" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID"  Margin="4"  VerticalAlignment="Center" HorizontalAlignment="Stretch"></inputcombo:AutoCompleteComboBox>
                                            <!--<TextBlock Text="Specialization" Grid.Column="2" Grid.Row="0"   Margin="4" VerticalAlignment="Center"></TextBlock>
                                            <inputcombo:AutoCompleteComboBox TabIndex="2" x:Name="cmbSpecialization" Grid.Row="0" Grid.Column="3" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID"  Margin="4"  VerticalAlignment="Center" HorizontalAlignment="Stretch" SelectionChanged="cmbSpecialization_SelectionChanged"></inputcombo:AutoCompleteComboBox> -->
                                            <!--<TextBlock Text="Sub Specialization" Grid.Column="2" Grid.Row="1"   Margin="4" VerticalAlignment="Center"></TextBlock>
                                            <inputcombo:AutoCompleteComboBox TabIndex="2" x:Name="cmbSubSpecialization" Grid.Row="1" Grid.Column="3" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID"  Margin="4"  VerticalAlignment="Center" HorizontalAlignment="Stretch"></inputcombo:AutoCompleteComboBox>-->
                                            <Button Grid.Column="6" x:Name="cmdSearch" Grid.Row="0" Click="cmdSearch_Click"   ToolTipService.ToolTip="Search Service"  HorizontalAlignment="Left" >
                                                <Image Source="/PalashDynamics;component/Icons/xmag.png" Margin="2" Width="20" ></Image>
                                            </Button>
                                        </Grid>
                                    </toolkit:DockPanel>
                                </Grp:GroupBox>
                                <toolkit:DockPanel toolkit:DockPanel.Dock="top" Grid.Row="1">
                                    <Border  Grid.Column="0" toolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                                        <ContentControl VerticalAlignment="Center" Content="List of Services" Margin="-1" Style="{StaticResource Header}"     HorizontalAlignment="Stretch" />
                                    </Border>
                                    <!--<data:DataPager x:Name="DataPagerDocFrontPannel" toolkit:DockPanel.Dock="Bottom" 
                                                        DisplayMode="FirstLastPreviousNext"  IsEnabled="True"                       
                                                        Source="{Binding}" 
                                                        AutoEllipsis="False" IsTotalItemCountFixed="False" />-->
                                    <data:DataPager x:Name="DataPagerDocFrontPannel" toolkit:DockPanel.Dock="Bottom" Margin="4,-0,4,0" 
                                                      Source="{Binding}" NumericButtonCount="2" AutoEllipsis="False" IsTotalItemCountFixed="True"/>
                                    <sdk:DataGrid  x:Name="dgDocCategoryFrontP" VerticalAlignment="Stretch" ItemsSource="{Binding}" AutoGenerateColumns="False" VerticalScrollBarVisibility="Visible" >
                                        <data:DataGrid.RowGroupHeaderStyles  >
                                            <!-- Style for groups at top level -->
                                            <Style TargetType="data:DataGridRowGroupHeader" >
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="data:DataGridRowGroupHeader" >
                                                            <StackPanel Orientation="Horizontal" Background="LightGray" >
                                                                <HyperlinkButton Margin="4" x:Name="hlkView" Content="View" Click="hlkView_Click"  VerticalAlignment="Center" HorizontalAlignment="Right" Cursor="Hand" Grid.Column="0"></HyperlinkButton>
                                                                <TextBlock Text="{Binding Name}" Margin="4" FontWeight="SemiBold"  VerticalAlignment="Center" Grid.Column="1"/>
                                                            </StackPanel>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Setter Property="Background" Value="#44225566" />
                                                <Setter Property="Height" Value="20" />
                                            </Style>
                                        </data:DataGrid.RowGroupHeaderStyles>
                                        <sdk:DataGrid.Columns>
                                            <sdk:DataGridTemplateColumn Header="View" Visibility="Collapsed">
                                                <sdk:DataGridTemplateColumn.CellTemplate>
                                                    <DataTemplate>
                                                        <HyperlinkButton Margin="4" x:Name="hlkView" Content="View" Click="hlkView_Click" Cursor="Hand"></HyperlinkButton>
                                                    </DataTemplate>
                                                </sdk:DataGridTemplateColumn.CellTemplate>
                                            </sdk:DataGridTemplateColumn>
                                            <sdk:DataGridTextColumn IsReadOnly="True" Header="Service Name" Binding="{Binding ServiceName}" />
                                            <sdk:DataGridTextColumn IsReadOnly="True" Header="Class Name" Binding="{Binding ClassName}" />
                                            <sdk:DataGridTextColumn IsReadOnly="True" Header="Service Rate" Binding="{Binding Rate}" />
                                            <sdk:DataGridTextColumn IsReadOnly="True" Header="Specialization"  Binding="{Binding SpecializationString}" Visibility="Collapsed" />
                                            <sdk:DataGridTextColumn IsReadOnly="True" Header="SubSpecialization" Binding="{Binding SubSpecializationString}" Visibility="Collapsed" />
                                        </sdk:DataGrid.Columns>
                                    </sdk:DataGrid>
                                </toolkit:DockPanel>
                            </Grid>
                        </Border>
                    </toolkit:DockPanel>
                </Grid>
                <Grid x:Name="BackPanel"  Visibility="Collapsed" Grid.Row="1" >
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" ></RowDefinition>
                        <RowDefinition  ></RowDefinition>

                    </Grid.RowDefinitions>

                    <toolkit:DockPanel  toolkit:DockPanel.Dock="Top" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" >
                        <Border  BorderBrush="{StaticResource TabControlDarkerBorder}"    BorderThickness="1" CornerRadius="3,3,0,0" Margin="4,4,4,4"  Background="Transparent">
                            <Grid toolkit:DockPanel.Dock="Top">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="auto"></RowDefinition>
                                    <RowDefinition Height="auto"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition  Width="Auto"/>
                                    <ColumnDefinition />
                                    <ColumnDefinition  Width="Auto"/>
                                    <ColumnDefinition  />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Doctor Category" Grid.Column="0" Grid.Row="0"   Margin="4" VerticalAlignment="Center"></TextBlock>
                                <inputcombo:AutoCompleteComboBox TabIndex="0" Width="230" SelectionChanged="cmbDocCategoryBP_SelectionChanged"  x:Name="cmbDocCategoryBP" Grid.Column="1" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID"  Margin="4,3,0,5"  VerticalAlignment="Center" HorizontalAlignment="Left"></inputcombo:AutoCompleteComboBox>
                                <!-- <TextBlock Text="Service Name" Grid.Column="2" Grid.Row="0"   Margin="4" VerticalAlignment="Center" ></TextBlock>
                                <TextBox x:Name="txtServiceNameBP" TabIndex="1" Grid.Column="3" Grid.Row="0" Text="" Margin="4" KeyDown="txtServiceNameBP_KeyDown"/>
                                <TextBlock Text="Specialization" Grid.Column="2" Grid.Row="0"   Margin="4" VerticalAlignment="Center"></TextBlock>
                                <inputcombo:AutoCompleteComboBox TabIndex="2" x:Name="cmbSpecializationBP" Grid.Row="0" Grid.Column="3" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID"  Margin="4"  VerticalAlignment="Center" HorizontalAlignment="Stretch" SelectionChanged="cmbSpecializationBP_SelectionChanged"></inputcombo:AutoCompleteComboBox>
                                <TextBlock Text="Sub Specialization" Grid.Column="2" Grid.Row="1"   Margin="4" VerticalAlignment="Center"></TextBlock>
                                <inputcombo:AutoCompleteComboBox TabIndex="2" x:Name="cmbSubSpecializationBP" Grid.Row="1" Grid.Column="3" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID"  Margin="4"  VerticalAlignment="Center" HorizontalAlignment="Stretch"></inputcombo:AutoCompleteComboBox>
                                <Button Grid.Column="4" x:Name="cmdSearchBP" Grid.Row="0" Click="cmdSearchBP_Click"   ToolTipService.ToolTip="Search Service"  HorizontalAlignment="Left" >
                                    <Image Source="/PalashDynamics;component/Icons/xmag.png" Margin="2" Width="20" ></Image>
                                </Button>-->
                            </Grid>
                        </Border>
                    </toolkit:DockPanel>


                    <toolkit:DockPanel toolkit:DockPanel.Dock="Top" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Grid.Row="1" Grid.ColumnSpan="3">
                        <Border  BorderBrush="{StaticResource TabControlDarkerBorder}"    BorderThickness="1" CornerRadius="3,3,0,0" Margin="4,4,4,4"  Background="Transparent">

                            <Grid Name="grdX" Height="auto">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition ></ColumnDefinition>
                                    <ColumnDefinition></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Border  Grid.Column="0" toolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                                    <toolkit:DockPanel toolkit:DockPanel.Dock="Bottom" Grid.Column="0" Margin="2" >
                                        <Grid >
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="auto"/>
                                                <RowDefinition Height="auto"/>
                                                <RowDefinition/>
                                                <RowDefinition Height="auto"/>
                                            </Grid.RowDefinitions>
                                            <Border  Grid.Column="0" toolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                                                <ContentControl VerticalAlignment="Center" Content="List of Services" Margin="-1" Style="{StaticResource Header}"     HorizontalAlignment="Stretch" />
                                            </Border>

                                            <layoutToolkit:Accordion Grid.Row="1" x:Name="acc" SelectionMode="ZeroOrOne" HorizontalAlignment="Stretch">
                                                <layoutToolkit:AccordionItem IsSelected="True"  Header="Advance Filter" HorizontalAlignment="Stretch">
                                                    <Grid Margin="2">
                                                        <Grid.RowDefinitions>
                                                            <RowDefinition ></RowDefinition>
                                                        </Grid.RowDefinitions>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="auto"></ColumnDefinition>
                                                            <ColumnDefinition Width="auto"></ColumnDefinition>
                                                            <ColumnDefinition Width="auto"></ColumnDefinition>
                                                            <ColumnDefinition Width="auto"></ColumnDefinition>
                                                            <ColumnDefinition></ColumnDefinition>
                                                        </Grid.ColumnDefinitions>

                                                        <TextBlock  Grid.Column="0" Grid.Row="0" Text="Service Name " Margin="4" VerticalAlignment="Center"></TextBlock>
                                                        <input:AutoCompleteBox Height="25" TabIndex="0" Margin="4" Grid.Column="1" Grid.Row="0" HorizontalAlignment="Stretch" Width="235" x:Name="txtServiceNameBP" KeyUp="txtServiceNameBP_KeyDown"></input:AutoCompleteBox>

                                                        <TextBlock Margin="4" Grid.Column="2" Grid.Row="0" Text="Class Name" VerticalAlignment="Center"></TextBlock>
                                                        <inputcombo:AutoCompleteComboBox Height="25" Margin="4" TabIndex="1" Width="230" Grid.Row="0" x:Name="cmbClassName" Grid.Column="3" HorizontalAlignment="Stretch" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" ></inputcombo:AutoCompleteComboBox>

                                                        <Button x:Name="cmdSearchBP" TabIndex="2" Click="cmdSearchBP_Click" Margin="4" HorizontalAlignment="Right" ToolTipService.ToolTip="Search Service"  Grid.Row="0" Grid.Column="4">
                                                            <Image Source="/PalashDynamics;component/Icons/Search_b.JPG" Margin="4,0,4,4" Width="18" ></Image>
                                                        </Button>

                                                    </Grid>
                                                </layoutToolkit:AccordionItem>
                                            </layoutToolkit:Accordion>

                                            <!--<data:DataPager Grid.Row="3" x:Name="DataPagerServices" toolkit:DockPanel.Dock="Bottom" 
                                                        DisplayMode="FirstLastPreviousNext"  IsEnabled="True"                       
                                                        Source="{Binding}" 
                                                        AutoEllipsis="False" IsTotalItemCountFixed="False" />-->
                                            <data:DataPager Grid.Row="3" x:Name="DataPagerServices" toolkit:DockPanel.Dock="Bottom"  
                                                      Source="{Binding}" NumericButtonCount="2" AutoEllipsis="False" IsTotalItemCountFixed="True"/>
                                            
                                            <sdk:DataGrid Grid.Row="2" x:Name="dgServices" LoadingRow="dgServices_LoadingRow" VerticalAlignment="Stretch" ItemsSource="{Binding}" AutoGenerateColumns="False"  VerticalScrollBarVisibility="Visible" >
                                                <sdk:DataGrid.Columns>
                                                    <data:DataGridTemplateColumn Width="80" HeaderStyle="{StaticResource DataGridColumnHeaderStyle}" Visibility="Collapsed">
                                                        <data:DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <CheckBox x:Name="chkServices" IsChecked="{Binding SelectService, Mode=TwoWay}" Click="chkServices_Click" VerticalAlignment="Center"  HorizontalAlignment="Center" HorizontalContentAlignment="Center"/>
                                                            </DataTemplate>
                                                        </data:DataGridTemplateColumn.CellTemplate>
                                                    </data:DataGridTemplateColumn>

                                                    <sdk:DataGridTemplateColumn Header="Select" Visibility="Visible">
                                                        <sdk:DataGridTemplateColumn.CellTemplate>
                                                            <DataTemplate>
                                                                <CheckBox x:Name="chkServices" IsChecked="{Binding SelectService, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" IsEnabled="{Binding IsSelectedService, Mode=TwoWay}" Click="chkServices_Click"></CheckBox>
                                                            </DataTemplate>
                                                        </sdk:DataGridTemplateColumn.CellTemplate>
                                                    </sdk:DataGridTemplateColumn>
                                                    <sdk:DataGridTextColumn IsReadOnly="True" Header="Service Name" Binding="{Binding ServiceName}" />
                                                    <sdk:DataGridTextColumn IsReadOnly="True" Header="Class Name" Binding="{Binding ClassName}" />
                                                    <sdk:DataGridTextColumn IsReadOnly="True" Header="Service Rate"  Binding="{Binding Rate}" />
                                                </sdk:DataGrid.Columns>
                                            </sdk:DataGrid>
                                        </Grid>
                                    </toolkit:DockPanel>
                                </Border>
                                <Border Grid.Column="1" toolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                                    <toolkit:DockPanel toolkit:DockPanel.Dock="top" Grid.Column="1" Margin="2">
                                        <Border Grid.Column="1" toolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"   BorderThickness="1" CornerRadius="3,3,0,0" Background="Transparent">
                                            <ContentControl VerticalAlignment="Center" Content="List of Selected Services" Margin="-1" Style="{StaticResource Header}"     HorizontalAlignment="Stretch" />
                                        </Border>

                                        <!--<data:DataPager x:Name="DataPagerDocCategoryBP" toolkit:DockPanel.Dock="Bottom" 
                                                        DisplayMode="FirstLastPreviousNext"  IsEnabled="True"                       
                                                        Source="{Binding}" 
                                                        AutoEllipsis="False" IsTotalItemCountFixed="False" />-->
                                        <sdk:DataGrid  x:Name="dgDocCategoryBP" VerticalAlignment="Stretch" ItemsSource="{Binding}" AutoGenerateColumns="False"  VerticalScrollBarVisibility="Visible" >
                                            <sdk:DataGrid.Columns>
                                                <sdk:DataGridTemplateColumn Header="Select" Visibility="Collapsed">
                                                    <sdk:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <CheckBox x:Name="chkServices" IsChecked="{Binding SelectService, Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" IsEnabled="{Binding IsSelectedDoctor, Mode=TwoWay}" Click="chkServices_Click"></CheckBox>
                                                        </DataTemplate>
                                                    </sdk:DataGridTemplateColumn.CellTemplate>
                                                </sdk:DataGridTemplateColumn>
                                                <sdk:DataGridTextColumn IsReadOnly="True" Header="Service Name" Binding="{Binding ServiceName}" />
                                                <sdk:DataGridTextColumn IsReadOnly="True" Header="Class Name" Binding="{Binding ClassName}" />
                                                <data:DataGridTemplateColumn Header="New Service Rate" IsReadOnly="False">
                                                    <data:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <TextBlock Text="{Binding Rate, StringFormat=0.00, ValidatesOnExceptions=True,ValidatesOnDataErrors=True}" Margin="4" VerticalAlignment="Center" HorizontalAlignment="Center" TextAlignment="Right" />
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                    <data:DataGridTemplateColumn.CellEditingTemplate>
                                                        <DataTemplate>
                                                            <TextBox x:Name="txtRate" TextChanged="txtRate_TextChanged" KeyDown="txtRate_KeyDown" MaxLength="20" Text="{Binding Rate, StringFormat=0.00, Mode=TwoWay, ValidatesOnExceptions=True,ValidatesOnDataErrors=True}" VerticalAlignment="Center" IsEnabled="True" TextAlignment="Right"/>
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellEditingTemplate>
                                                </data:DataGridTemplateColumn>
                                                <data:DataGridTemplateColumn Header="Delete">
                                                    <data:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <HyperlinkButton VerticalAlignment="Center" Foreground="Red" HorizontalAlignment="Center" FontFamily="Webdings" Content="r"  Padding="5,0,5,0" IsTabStop="False" Click="cmdDeleteService_Click"  x:Name="cmdDeleteService" ToolTipService.ToolTip="Delete Selected Service"></HyperlinkButton>
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                </data:DataGridTemplateColumn>
                                            </sdk:DataGrid.Columns>
                                        </sdk:DataGrid>
                                    </toolkit:DockPanel>
                                </Border>
                            </Grid>
                        </Border>
                    </toolkit:DockPanel>
                </Grid>
            </Grid>
        </toolkit:DockPanel>
    </Grid>
</UserControl>
