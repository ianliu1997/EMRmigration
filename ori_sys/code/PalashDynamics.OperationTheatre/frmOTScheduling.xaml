                                   <data:DataGridTextColumn IsReadOnly="True" Header="Anesthetist Name" Binding="{Binding AnesthetistName}" Width="Auto"/>
                                </data:DataGrid.Columns>
                            </data:DataGrid>
                        </controlsToolkit:DockPanel>
                    </controlsToolkit:DockPanel>
                </Grid>


