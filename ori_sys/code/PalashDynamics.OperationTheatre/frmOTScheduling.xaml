                                    <data:DataGridTemplateColumn Localization:DataGridColumnHelper.HeaderBinding="{Binding lblView, Source={StaticResource locResource}}">
                                        <data:DataGridTemplateColumn.CellTemplate>
                                            <DataTemplate>
                                                <HyperlinkButton Margin="4" x:Name="cmdView" Content="{Binding lblView,Source={StaticResource locResource}}" Cursor="Hand" Click="cmdView_Click"></HyperlinkButton>
                                            </DataTemplate>
                                        </data:DataGridTemplateColumn.CellTemplate>
                                    </data:DataGridTemplateColumn>
                                    <data:DataGridTextColumn IsReadOnly="True"  Localization:DataGridColumnHelper.HeaderBinding="{Binding lblDate,Source={StaticResource locResource}}"  Binding="{Binding Date, Mode=TwoWay,Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}" Width="100"/>
                                    <data:DataGridTextColumn IsReadOnly="True"  Localization:DataGridColumnHelper.HeaderBinding="{Binding lblStartTime,Source={StaticResource locResource}}"  Binding="{Binding StartTime,Converter={StaticResource DateConverter},ConverterParameter='hh:mm tt'}" Width="100"/>
                                    <data:DataGridTextColumn IsReadOnly="True"  Localization:DataGridColumnHelper.HeaderBinding="{Binding lblEndTime,Source={StaticResource locResource}}"  Binding="{Binding EndTime,Converter={StaticResource DateConverter},ConverterParameter='hh:mm tt'}" Width="100"/>

                                    <data:DataGridTextColumn IsReadOnly="True"  Localization:DataGridColumnHelper.HeaderBinding="{Binding lblMRNo,Source={StaticResource locResource}}"  Binding="{Binding MRNO}" Width="Auto"/>
                                    <data:DataGridTextColumn IsReadOnly="True"  Localization:DataGridColumnHelper.HeaderBinding="{Binding lblPatientName,Source={StaticResource locResource}}"  Binding="{Binding PatientName}" Width="Auto"/>

                                    <!--<data:DataGridTextColumn IsReadOnly="True" Localization:DataGridColumnHelper.HeaderBinding="{Binding lblOTTheatre,Source={StaticResource locResource}}"  Binding="{Binding OT}" Width="Auto"/>-->
                                    <data:DataGridTextColumn IsReadOnly="True" Localization:DataGridColumnHelper.HeaderBinding="Operation Theatre"  Binding="{Binding OT}" Width="Auto"/>
