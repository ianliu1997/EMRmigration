<controls:ChildWindow x:Class="PalashDynamics.OperationTheatre.BillClearance"
             xmlns:my="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"  
             xmlns:input="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input"  
             xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"  
             xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"  
             xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"
             xmlns:CustomCombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox" 
             xmlns:Converter="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters"              
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
             xmlns:Localization="clr-namespace:PalashDynamic.Localization;assembly=PalashDynamic.Localization"
                        xmlns:local="clr-namespace:PalashDynamics.Converters;assembly=PalashDynamics.Converters"        
                      xmlns:Grp="clr-namespace:Groupbox;assembly=Groupbox" 
                      Loaded="UserControl_Loaded"
            Width ="1150" Height="400"
            Background="White"         
           Title="Bill Clearance"  HasCloseButton="False">

    <controls:ChildWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Localization:Localized x:Key="locResource"></Localization:Localized>
            <local:DateTimeConverter x:Key="DateConverter" />
            <Converter:VisiblilityConverter x:Key="VisiblilityConverter"/>
        </ResourceDictionary>
    </controls:ChildWindow.Resources>


    <Grid x:Name="Root">
        <my:DockPanel LastChildFill="True" Margin="4">

            <Grid Width="Auto"  Margin="0" my:DockPanel.Dock="Top" DataContext="{Binding BizActionObject}">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition />
                    <ColumnDefinition  Width="Auto"/>
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>

                </Grid.RowDefinitions>

                <TextBlock Text="From Date" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right"></TextBlock>
                <controls:DatePicker TabIndex="2" x:Name="dtpFromDate" SelectedDate="{Binding}"  Grid.Row="0" Grid.Column="1" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></controls:DatePicker>

                <TextBlock Text="To Date" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" Margin="4" HorizontalAlignment="Right"></TextBlock>
                <controls:DatePicker TabIndex="3" x:Name="dtpToDate" Grid.Row="0" SelectedDate="{Binding}" Grid.Column="3" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" ></controls:DatePicker>

                <TextBlock Text="Bill No" Grid.Row="0" Grid.Column="4" VerticalAlignment="Center" Margin="4,4,0,4" HorizontalAlignment="Right" ></TextBlock>
                <TextBox x:Name="txtBillNO" TabIndex="8" Grid.Row="0" Grid.Column="5" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Center" KeyDown="txtBillNO_KeyDown"></TextBox>

                <TextBlock Text="Bill Type" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="4,4,0,4" HorizontalAlignment="Right" ></TextBlock>
                <CustomCombo:AutoCompleteComboBox   x:Name="cmbBillTypeClPh" SelectedValuePath="ID" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" Grid.Row="1" Grid.Column="1"  Margin="4"   HorizontalAlignment="Stretch"   Height="25"/>

                <StackPanel Grid.Row="1" Grid.Column="4" Grid.ColumnSpan="1"  my:DockPanel.Dock="Top" x:Name="ItemFooter" Orientation="Horizontal" VerticalAlignment="Bottom"   Margin="10,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                    <StackPanel x:Name="SearchCommandPanel" Orientation="Horizontal"  Margin="1" HorizontalAlignment="Stretch">
                        <ToggleButton TabIndex="5" x:Name="SearchButton"   Content="{Binding btnSearch,Source={StaticResource locResource}}" MinWidth="50"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="ItemSearchButton_Click"  />

                    </StackPanel>
                </StackPanel>
            </Grid >



            <Border BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" controlsToolkit:DockPanel.Dock="Bottom" BorderThickness="0" CornerRadius="3,3,3,3" Background="Transparent">

                <StackPanel Grid.Row="3" x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Left" Background="Transparent">
                    <TextBlock Text="Balance Advance"  VerticalAlignment="Center" Margin="4,4,0,4" HorizontalAlignment="Left" ></TextBlock>
                    <TextBox x:Name="txtBalanceAdvance" Text="{Binding BalanceAdvance, Mode=OneWay}" IsReadOnly="True"  Margin="4" Width="150" HorizontalAlignment="Stretch" VerticalAlignment="Center"></TextBox>
                    <StackPanel x:Name="SaveCommandPanel" Orientation="Horizontal"  Margin="600,0,0,0">                                               
                        <TextBlock Text="Freeze"  VerticalAlignment="Center" Margin="4,4,0,4" HorizontalAlignment="Right"></TextBlock>
                        <CheckBox Margin="10,2,10,2"  x:Name="chkFreezeStatus" IsTabStop="True"  IsChecked="{Binding Status,Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" ></CheckBox >
                        <ToggleButton TabIndex="11" x:Name="OkSave"  Grid.Row="4" Content="Save" MinWidth="50"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="SaveButton_Click" />
                        <ToggleButton TabIndex="12" x:Name="cmdCancelButton"  Grid.Row="4" Content="{Binding btnCancel,Source={StaticResource locResource}}" MinWidth="50" Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="CancelButton_Click" />
                    </StackPanel>                    
                </StackPanel>              

            </Border>


            <my:DockPanel LastChildFill="True"  >

                <my:DockPanel LastChildFill="True" my:DockPanel.Dock="Top" >

                    <my:DockPanel LastChildFill="True" >
                    </my:DockPanel>
                    <my:DockPanel LastChildFill="True" >
                        <Grp:GroupBox x:Name="gbBillList" TabIndex="7" Height="250" Width="560" Header="Bill List" Margin="2" my:DockPanel.Dock="Top" >
                            <my:DockPanel LastChildFill="True"  >
                                <Grid Height="auto" Width="Auto" x:Name="BillContainer" >
                                    <my:DockPanel LastChildFill="True">                
                                        <data:DataPager x:Name="dgDataPager" controlsToolkit:DockPanel.Dock="Bottom" 
                                                        DisplayMode="FirstLastPreviousNext"  IsEnabled="True"                       
                                                        Source="{Binding}" 
                                                        AutoEllipsis="False" IsTotalItemCountFixed="False"  />
                                        <data:DataGrid TabIndex="8" Height="Auto" Width="Auto" Grid.Row="0" ItemsSource="{Binding BillList}"  x:Name="dgBillList"  AutoGenerateColumns="False" CanUserSortColumns="False"  LostFocus="dgBillList_GotFocus" GotFocus="dgBillList_GotFocus" KeyUp="dgBillList_KeyUp">
                                            <data:DataGrid.Columns>
                                                <data:DataGridTemplateColumn >
                                                    <data:DataGridTemplateColumn.CellTemplate >
                                                        <DataTemplate >
                                                            <CheckBox Margin="10,2,10,2"  x:Name="chkBillStatus" IsTabStop="True" Click="AddBill_Click" IsChecked="{Binding Status,Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" ></CheckBox >
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                </data:DataGridTemplateColumn>
                                                <data:DataGridTextColumn IsReadOnly="True" Header="Date" Binding="{Binding Date,Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}" />
                                                <data:DataGridTextColumn Binding="{Binding BillNo, Mode=OneWay}" Header="Bill No." IsReadOnly="True"/>
                                                <data:DataGridTextColumn Binding="{Binding MRNO, Mode=OneWay}" Header="MR No." IsReadOnly="True"/>
                                                <data:DataGridTextColumn Binding="{Binding Opd_Ipd_External_No,Mode=OneWay}"  Header="OPD No" IsReadOnly="True" />
                                                <data:DataGridTemplateColumn IsReadOnly="True" Header="Name" Width="150" SortMemberPath="FirstName">
                                                    <data:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                                                <TextBlock VerticalAlignment="Center" Text="{Binding FirstName}" Margin="4,0,4,0"></TextBlock>
                                                                <TextBlock VerticalAlignment="Center" Text="{Binding MiddleName}" Margin="0,0,4,0"></TextBlock>
                                                                <TextBlock VerticalAlignment="Center" Text="{Binding LastName}"></TextBlock>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                </data:DataGridTemplateColumn>
                                                <data:DataGridTextColumn Binding="{Binding TotalBillAmount, StringFormat=0.00,Mode=OneWay}"  Header="Total Amount" IsReadOnly="True">
                                                    <data:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>

                                                <data:DataGridTextColumn Binding="{Binding TotalConcessionAmount, StringFormat=0.00,Mode=OneWay}"  Header="Total Concession" IsReadOnly="True">
                                                    <data:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>
                                                <data:DataGridTextColumn Binding="{Binding NetBillAmount, StringFormat=0.00,Mode=OneWay}"  Header="Net Amount" IsReadOnly="True" >
                                                    <data:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>
                                                <data:DataGridTextColumn Binding="{Binding PaidAmountSelf, StringFormat=0.00,Mode=OneWay}"  Header="Paid Amount" IsReadOnly="True" >
                                                    <data:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>

                                                <data:DataGridTextColumn Binding="{Binding BalanceAmountSelf, StringFormat=0.00,Mode=OneWay}"  Header="Balance Amount" IsReadOnly="True" >
                                                    <data:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>

                                                <data:DataGridTextColumn Binding="{Binding PatientAdvance, StringFormat=0.00,Mode=OneWay}"  Header="Patient Advance" IsReadOnly="True" >
                                                    <data:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>

                                                <data:DataGridTextColumn Binding="{Binding PackageAdvance, StringFormat=0.00,Mode=OneWay}"  Header="Package Advance" IsReadOnly="True" >
                                                    <data:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>
                                                <data:DataGridTextColumn Binding="{Binding PacBilledCount, Mode=OneWay}" Header="PAC Service" IsReadOnly="True"/>
                                                <data:DataGridTextColumn Binding="{Binding SemenfreezingCount, Mode=OneWay}" Header="Semen Freezing Service" IsReadOnly="True"/>
                                            </data:DataGrid.Columns>
                                        </data:DataGrid>
                                    </my:DockPanel>
                                </Grid>
                            </my:DockPanel>
                        </Grp:GroupBox>
                    </my:DockPanel>
                    <my:DockPanel LastChildFill="True" >
                        <Grp:GroupBox x:Name="gbSelectedBill" TabIndex="7" Height="250" Width="560" Header="Selected Bill List" Margin="2" my:DockPanel.Dock="Top">
                            <my:DockPanel LastChildFill="True"  >
                                <Grid Height="auto" Width="Auto" x:Name="Container" >
                                    <my:DockPanel LastChildFill="True">
                                        <data:DataPager TabIndex="14" x:Name="SectedBillDataPager" my:DockPanel.Dock="Bottom"
                        Grid.Row="1"
                        PageSize="{Binding BatchPageSize}"
                        DisplayMode="FirstLastPreviousNext"
                        IsEnabled="True"
                        IsTotalItemCountFixed="True"
                        Source="{Binding BatchList}"  />
                                        <data:DataGrid TabIndex="8" Height="Auto" Width="Auto" Grid.Row="0" ItemsSource="{Binding BatchList}"  x:Name="dgSelectedBill"  AutoGenerateColumns="False" CanUserSortColumns="False" LostFocus="dgSelectedBill_LostFocus" GotFocus="dgSelectedBill_GotFocus" >
                                            <data:DataGrid.Columns>
                                                <data:DataGridTemplateColumn >
                                                    <data:DataGridTemplateColumn.CellTemplate >
                                                        <DataTemplate >
                                                            <CheckBox Margin="10,2,10,2"  x:Name="chkRemoveBillStatus" IsTabStop="True" Click="RemoveBill_Click" IsChecked="{Binding Status,Mode=TwoWay}" VerticalAlignment="Center" HorizontalAlignment="Center" ></CheckBox >
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                </data:DataGridTemplateColumn>
                                                <data:DataGridTextColumn IsReadOnly="True" Header="Date" Binding="{Binding Date,Converter={StaticResource DateConverter},ConverterParameter={StaticResource GridDateDisplayFormat}}" />
                                                <data:DataGridTextColumn Binding="{Binding BillNo, Mode=OneWay}" Header="Bill No." IsReadOnly="True"/>
                                                <data:DataGridTextColumn Binding="{Binding MRNO, Mode=OneWay}" Header="MR No." IsReadOnly="True"/>
                                                <data:DataGridTextColumn Binding="{Binding Opd_Ipd_External_No,Mode=OneWay}"  Header="OPD No" IsReadOnly="True" />
                                                <data:DataGridTemplateColumn IsReadOnly="True" Header="Name" Width="150" SortMemberPath="FirstName">
                                                    <data:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                                                <TextBlock VerticalAlignment="Center" Text="{Binding FirstName}" Margin="4,0,4,0"></TextBlock>
                                                                <TextBlock VerticalAlignment="Center" Text="{Binding MiddleName}" Margin="0,0,4,0"></TextBlock>
                                                                <TextBlock VerticalAlignment="Center" Text="{Binding LastName}"></TextBlock>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                </data:DataGridTemplateColumn>
                                                <data:DataGridTextColumn Binding="{Binding TotalBillAmount, StringFormat=0.00,Mode=OneWay}"  Header="Total Amount" IsReadOnly="True">
                                                    <data:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>

                                                <data:DataGridTextColumn Binding="{Binding TotalConcessionAmount, StringFormat=0.00,Mode=OneWay}"  Header="Total Concession" IsReadOnly="True">
                                                    <data:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>
                                                <data:DataGridTextColumn Binding="{Binding NetBillAmount, StringFormat=0.00,Mode=OneWay}"  Header="Net Amount" IsReadOnly="True" >
                                                    <data:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>
                                                <data:DataGridTextColumn Binding="{Binding PaidAmount, StringFormat=0.00,Mode=OneWay}"  Header="Paid Amount" IsReadOnly="True" >
                                                    <data:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>
                                                <data:DataGridTextColumn Binding="{Binding BalanceAmountSelf, StringFormat=0.00,Mode=OneWay}"  Header="Balance Amount" IsReadOnly="True" >
                                                    <data:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>

                                                <data:DataGridTextColumn Binding="{Binding PatientAdvance, StringFormat=0.00,Mode=OneWay}"  Header="Patient Advance" IsReadOnly="True" >
                                                    <data:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>

                                                <data:DataGridTextColumn Binding="{Binding PackageAdvance, StringFormat=0.00,Mode=OneWay}"  Header="Package Advance" IsReadOnly="True" >
                                                    <data:DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="TextBlock">
                                                            <Setter Property="TextAlignment" Value="Right"/>
                                                        </Style>
                                                    </data:DataGridTextColumn.ElementStyle>
                                                </data:DataGridTextColumn>

                                                <data:DataGridTemplateColumn>
                                                    <data:DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <HyperlinkButton Background="White"  VerticalAlignment="Center" Padding="5,0,5,0" IsTabStop="False" Click="btnPrint_Click"   x:Name="btnPrint">
                                                                <Image  Height="16" Stretch="Fill" Source="/PalashDynamics;component/Icons/Print_32.png"  Visibility="{Binding IsFreezed, Converter={StaticResource VisiblilityConverter}}"/>
                                                            </HyperlinkButton>
                                                        </DataTemplate>
                                                    </data:DataGridTemplateColumn.CellTemplate>
                                                </data:DataGridTemplateColumn>
                                                <data:DataGridTextColumn Binding="{Binding PacBilledCount, Mode=OneWay}" Header="PAC Service" IsReadOnly="True"/>
                                                <data:DataGridTextColumn Binding="{Binding SemenfreezingCount, Mode=OneWay}" Header="Semen Freezing Service" IsReadOnly="True"/>

                                            </data:DataGrid.Columns>

                                        </data:DataGrid>
                                    </my:DockPanel>
                                </Grid>
                            </my:DockPanel>
                        </Grp:GroupBox>
                    </my:DockPanel>
                </my:DockPanel>

                <!--<my:DockPanel LastChildFill="True" >
                    <StackPanel Grid.Row="3" x:Name="CenterF" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                        <StackPanel x:Name="AddCommandPanel" Orientation="Horizontal"  Margin="0,0,0,0">
                            <ToggleButton TabIndex="11" x:Name="OkButton"  Grid.Row="4" Content="{Binding btnOK,Source={StaticResource locResource}}" MinWidth="50"  Background="#000000" Margin="5,0,0,0" HorizontalAlignment="Stretch" Style="{StaticResource ToggleButtonStyle}" Visibility="Visible" Click="OKButton_Click" />
                            
                        </StackPanel>
                    </StackPanel>
                </my:DockPanel>-->
            </my:DockPanel>
        </my:DockPanel>
    </Grid>
</controls:ChildWindow>