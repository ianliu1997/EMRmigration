<UserControl x:Class="PalashDynamics.OperationTheatre.frmOTDetailsService"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
    xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data" 
    xmlns:Localization="clr-namespace:PalashDynamic.Localization;assembly=PalashDynamic.Localization" 
    xmlns:controlsToolkit="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit"  
    xmlns:CustomCombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"    
    Height="auto" Width="auto">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <Localization:Localized x:Key="locResource"></Localization:Localized>
            <ControlTemplate x:Key="FilledContentControlTemplate" TargetType="ContentControl">
                <Grid>
                    <ContentPresenter />
                </Grid>
            </ControlTemplate>
        </ResourceDictionary>
    </UserControl.Resources>
    
    
    <Grid>
        <controlsToolkit:DockPanel LastChildFill="True">

            <Border  BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" controlsToolkit:DockPanel.Dock="Top" BorderThickness="1" CornerRadius="3,3,3,3" Background="Transparent" >
                <StackPanel x:Name="Top" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Left" Background="Transparent">
                    <StackPanel Orientation="Horizontal"  Margin="1" HorizontalAlignment="Left"  >
                        <ToggleButton Grid.Column="0" Grid.Row="0"   Margin="5" Content="{Binding btnLab,Source={StaticResource locResource}}" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdLab" Click="cmdLab_Click" Width="auto" ></ToggleButton>
                        <ToggleButton Grid.Column="1" Grid.Row="0"  Margin="5" Content="{Binding btnRadiology,Source={StaticResource locResource}}" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdRadiology" Click="cmdRadiology_Click"  Width="auto" ></ToggleButton>
                        <!--<ToggleButton Grid.Column="2" Grid.Row="0"  Margin="5" Content="{Binding btnDiagnostik,Source={StaticResource locResource}}" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdDiagnostik" Click="cmdDiagnostik_Click"  Width="auto" ></ToggleButton>-->
                    </StackPanel>
                </StackPanel>
            </Border>
            <Border  BorderBrush="{StaticResource TabControlDarkerBorder}"  Margin="4" controlsToolkit:DockPanel.Dock="Bottom" BorderThickness="1" CornerRadius="3,3,3,3" Background="Transparent" >
                <StackPanel x:Name="Footer" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                    <StackPanel Orientation="Horizontal"  Margin="1" HorizontalAlignment="Right"  >
                        <ToggleButton   Margin="4" Content="{Binding btnModify,Source={StaticResource locResource}}" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdModify"  IsEnabled="False" Click="cmdModify_Click"></ToggleButton>
                        <ToggleButton   Margin="4" Content="{Binding btnSave,Source={StaticResource locResource}}" Style="{StaticResource ToggleButtonStyle}" x:Name="cmdSave" Click="cmdSave_Click" ></ToggleButton>
                        <!--<ToggleButton  Margin="4" Content="{Binding btnCancel,Source={StaticResource locResource}}"  Style="{StaticResource ToggleButtonStyle}" x:Name="cmdCancel" Click="cmdCancel_Click" ></ToggleButton>-->
                    </StackPanel>
                </StackPanel>
            </Border>
    
    
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>

                <data:DataGrid HorizontalAlignment="Stretch" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Grid.Row="1" Margin="4" Width="Auto" Grid.ColumnSpan="4" x:Name="dgService" AutoGenerateColumns="False" ItemsSource="{Binding}" IsReadOnly="True"  TabIndex="2"  CanUserSortColumns="True"  >
                    <!--<data:DataGrid.RowGroupHeaderStyles>
                        <Style TargetType="data:DataGridRowGroupHeader">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="data:DataGridRowGroupHeader">
                                        <StackPanel Orientation="Horizontal" Background="LightGray" >
                                            <TextBlock Text="{Binding Name}" Margin="4" FontWeight="Bold" x:Name="lblPriority" />
                                            <TextBlock Text="{Binding lblPriority, Source={StaticResource locResource}}" Margin="4"  VerticalAlignment="Center" x:Name="lblGrpPriority"  />
                                            <inputcombo:AutoCompleteComboBox MinWidth="100" x:Name="cmbPriorityGrp" SelectedValue="{Binding SelectedPriority.ID}" SelectedItem="{Binding SelectedPriority,Mode=TwoWay}" ItemsSource="{Binding Priority}" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Loaded="cmbPriorityGrp_Loaded" SelectionChanged="cmbPriorityGrp_SelectionChanged" >
                                            </inputcombo:AutoCompleteComboBox>                                            
                                            <TextBlock Text="{Binding lblQuantity, Source={StaticResource locResource}}" Margin="4"  VerticalAlignment="Center" x:Name="lblGrpQuantity"  />
                                            <TextBox  x:Name="txtQuntity" Text="{Binding Quantity,Mode=TwoWay}" Margin="4" MinWidth="100"  HorizontalAlignment="Stretch"  TextChanged="txtQuntity_TextChanged"></TextBox>
                                        </StackPanel>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Background" Value="#44225566" />
                            <Setter Property="Height" Value="30" />
                        </Style>
                    </data:DataGrid.RowGroupHeaderStyles>-->
                    <data:DataGrid.Columns>
                        <data:DataGridTextColumn Localization:DataGridColumnHelper.HeaderBinding="{Binding lblServiceCode,Source={StaticResource locResource}}" Binding="{Binding ServiceCode}" CanUserResize="False"></data:DataGridTextColumn>
                        <data:DataGridTextColumn Localization:DataGridColumnHelper.HeaderBinding="{Binding lblServiceName,Source={StaticResource locResource}}" Width="350" Binding="{Binding ServiceName}" ></data:DataGridTextColumn>
                        <data:DataGridTemplateColumn Localization:DataGridColumnHelper.HeaderBinding="{Binding lblPriority,Source={StaticResource locResource}}" MinWidth="100" >
                            <data:DataGridTemplateColumn.CellEditingTemplate>
                                <DataTemplate>                                    
                                    <inputcombo:AutoCompleteComboBox x:Name="cmbPriority" SelectedValue="{Binding SelectedPriority.ID}" SelectedItem="{Binding SelectedPriority,Mode=TwoWay}" ItemsSource="{Binding Priority}" Margin="4" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
                                    </inputcombo:AutoCompleteComboBox>
                                </DataTemplate>
                            </data:DataGridTemplateColumn.CellEditingTemplate>
                        </data:DataGridTemplateColumn>
                        <data:DataGridTemplateColumn Localization:DataGridColumnHelper.HeaderBinding="{Binding lblQuantity,Source={StaticResource locResource}}" IsReadOnly="False" MinWidth="100">
                            <data:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBox Text="{Binding Quantity, Mode=TwoWay}" Margin="4" MaxLength="3" ></TextBox>
                                </DataTemplate>
                            </data:DataGridTemplateColumn.CellTemplate>
                        </data:DataGridTemplateColumn>
                        <data:DataGridTemplateColumn>
                            <data:DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <HyperlinkButton VerticalAlignment="Center" FontFamily="Webdings" Content="r"  Padding="5,0,5,0" IsTabStop="False" x:Name="cmdDeleteService" ToolTipService.ToolTip="Delete" Click="cmdDeleteService_Click"  ></HyperlinkButton>
                                </DataTemplate>
                            </data:DataGridTemplateColumn.CellTemplate>
                        </data:DataGridTemplateColumn>
                    </data:DataGrid.Columns>
                </data:DataGrid>
    </Grid>
        </controlsToolkit:DockPanel>
    </Grid>
</UserControl>
