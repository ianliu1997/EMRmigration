                                        <ColumnDefinition/>

                                    </Grid.ColumnDefinitions>

                                    <TextBlock x:Name="lblPayTotalAmount" HorizontalAlignment="Right" VerticalAlignment="Center" Text="Total Amount" Grid.Row="0" Margin="4" />
                                    <TextBox x:Name="txtPayTotalAmount" IsReadOnly="True" Text="{Binding BillTotalAmount,StringFormat='N'}" Grid.Row="0" Grid.Column="1" Margin="4" TextAlignment="Right" HorizontalAlignment="Stretch"/>

                                    <TextBlock x:Name="lblDiscAmt" HorizontalAlignment="Right" VerticalAlignment="Center" Text="Discount" Grid.Row="0" Margin="4" Grid.Column="2"/>
                                    <TextBox x:Name="txtDiscAmt"  IsReadOnly="True" Text="{Binding ConcessionAmount,StringFormat='N'}" Grid.Row="0" Grid.Column="3" Margin="4" TextAlignment="Right" HorizontalAlignment="Stretch"  />

                                    <TextBlock x:Name="lblPayableAmt" HorizontalAlignment="Right" VerticalAlignment="Center" Text="Payable Amount" Grid.Column="4" Grid.Row="0" Margin="4"/>
                                    <TextBox x:Name="txtPayableAmt" IsReadOnly="True"  Text="{Binding StringFormat='N'}" Grid.Row="0" Grid.Column="5" Margin="4" TextAlignment="Right" HorizontalAlignment="Stretch"/>


                                </Grid>
                            </Border>
                        </StackPanel>
                        <!--<Grid controlsToolkit:DockPanel.Dock="Top">-->
                        <!--<Grid.RowDefinitions>
                                <RowDefinition Height="auto"></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>-->


                        <controls:TabControl  Padding="0" controlsToolkit:DockPanel.Dock="Top" BorderBrush="{StaticResource TabControlDarkerBorder}"  x:Name="tabControl1" Margin="2,-4,2,2" Height="170" >
                            <controls:TabItem x:Name="tabPatientAdvance" Padding="0" Margin="0" Header="Patient Advance Details"  Style="{StaticResource TabItemStyle}">
                                <controlsToolkit:DockPanel LastChildFill="True" >
                                    <Grid controlsToolkit:DockPanel.Dock="Top" Margin="2,1,2,1">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="95"/>
                                            <ColumnDefinition />
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock x:Name="lblTotalAmt" HorizontalAlignment="Right" VerticalAlignment="Center" Text="Total Amount" Grid.Row="0" Margin="2" Grid.Column="0"/>
                                        <TextBox x:Name="txtPatTotalAmt" IsReadOnly="True"  Text="{Binding StringFormat='N'}" Grid.Row="0" Grid.Column="1" Margin="2" TextAlignment="Right" HorizontalAlignment="Stretch" />
                                        <TextBlock x:Name="lblBalanceAmt" HorizontalAlignment="Right"  VerticalAlignment="Center" Text="Balance Amount" Grid.Row="0" Margin="2" Grid.Column="2"/>
                                        <TextBox x:Name="txtPatBalanceAmt" Text="{Binding StringFormat='N'}" IsReadOnly="True"   Grid.Row="0" Grid.Column="3" Margin="2" TextAlignment="Right" HorizontalAlignment="Stretch" />
                                        <TextBlock x:Name="lblConsumedAmt" HorizontalAlignment="Right" VerticalAlignment="Center" Text="Consumed Amount" Grid.Row="0" Margin="2" Grid.Column="4"/>
                                        <TextBox x:Name="txtPatConsumedAmt" Text="{Binding StringFormat='N'}" IsReadOnly="True"   Grid.Row="0" Grid.Column="5" Margin="2" TextAlignment="Right" HorizontalAlignment="Stretch"  />
                                    </Grid>
