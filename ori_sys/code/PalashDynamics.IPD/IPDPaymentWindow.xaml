                                <TextBox x:Name="txtBalAmtNonSelf" IsReadOnly="True"   Grid.Row="1" Grid.Column="5" Margin="4" TextAlignment="Right" HorizontalAlignment="Stretch"/>
                            </Grid>
                        </Border>-->
