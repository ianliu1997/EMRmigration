                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Text="Credit Authorized By" Grid.Row="0" Grid.Column="0" Margin="4" />
