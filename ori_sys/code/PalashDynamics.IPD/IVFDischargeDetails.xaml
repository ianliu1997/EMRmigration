                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                            <ColumnDefinition Width="Auto"></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <!--<TextBlock VerticalAlignment="Center" Grid.Column="0" TextAlignment="Left"    Text="{Binding Weight}" Margin="4"></TextBlock>
                                                            <TextBlock  VerticalAlignment="Center" Grid.Column="1" Text="(" Margin="0" ></TextBlock>-->
