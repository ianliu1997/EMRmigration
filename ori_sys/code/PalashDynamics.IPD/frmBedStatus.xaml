    xmlns:toolkit="http://schemas.microsoft.com/winfx/2006/xaml/presentation/toolkit" 
    xmlns:inputcombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
    xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"  
   xmlns:Controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Toolkit" 
   xmlns:data="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data"
    xmlns:input="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input"
    xmlns:GroupBox="clr-namespace:Groupbox;assembly=Groupbox"  
    xmlns:CustomCombo="clr-namespace:PalashDynamics.Controls;assembly=PalashDynamics.Controls.AutoCompleteComboBox"
   
    xmlns:my="clr-namespace:PalashDynamics;assembly=PalashDynamics.WaterMarkTextBox"
    xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
    Height="Auto" Width="Auto">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/PalashDynamics;component/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <DataTemplate x:Key="tmpForBedStatus">
            </DataTemplate>

        </ResourceDictionary>

    </UserControl.Resources>



    <Grid x:Name="LayoutRoot" Background="White">

        <Border Grid.Column="1" BorderBrush="{StaticResource TabControlDarkerBorder}" Margin="4" BorderThickness="2" CornerRadius="3,3,3,3" Background="Transparent">
            <controlsToolkit:DockPanel LastChildFill="True" Margin="4">

                <StackPanel Grid.Row="2" x:Name="Footer" controlsToolkit:DockPanel.Dock="Bottom" Grid.ColumnSpan="4" Orientation="Horizontal" VerticalAlignment="Center"   Margin="0,3,5,3" HorizontalAlignment="Right" Background="Transparent">
                    <StackPanel x:Name="SaveCommandPanel" Orientation="Horizontal"  Margin="0,0,0,0">
                        <ToggleButton x:Name="btnDetails" MinHeight="23" MinWidth="100" Content="View Details" Margin="4" HorizontalAlignment="Right" Style="{StaticResource ToggleButtonStyle}" Click="btnDetails_Click" ></ToggleButton>
                        <ToggleButton x:Name="btnAdmission" MinHeight="23" MinWidth="100" Content="Add" Margin="4" HorizontalAlignment="Right" Style="{StaticResource ToggleButtonStyle}" Click="btnAdmission_Click" ></ToggleButton>
                        <ToggleButton x:Name="btnTransferBed" MinHeight="23" MinWidth="100" Content="Transfer Bed" Margin="4" HorizontalAlignment="Right" Style="{StaticResource ToggleButtonStyle}" Click="btnTransferBed_Click" Visibility="Collapsed"></ToggleButton>
                        <ToggleButton x:Name="btnReleaseBed" MinHeight="23" MinWidth="100" Content="Release Bed" Margin="4" HorizontalAlignment="Right" Style="{StaticResource ToggleButtonStyle}" Click="btnReleaseBed_Click" Visibility="Collapsed"></ToggleButton>
                    </StackPanel>
                </StackPanel>

                <Grid controlsToolkit:DockPanel.Dock="Top" HorizontalAlignment="Stretch" >
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grp:GroupBox Grid.Row="0" IsTabStop="False" x:Name="grpPatientInfo" Header="Bed Status Criteria" HorizontalAlignment="Stretch" Height="Auto" Margin="4" >
                        <Grid x:Name="grdPatientInfo" Background="White" HorizontalAlignment="Stretch" Visibility="Visible" >
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="150"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="150"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="150"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>
                                <ColumnDefinition Width="Auto"></ColumnDefinition>

                            </Grid.ColumnDefinitions>

                            <TextBlock VerticalAlignment="Center" Grid.Column="0" HorizontalAlignment="Right" Text="Class Name" Margin="4"  ></TextBlock>
                            <CustomCombo:AutoCompleteComboBox x:Name="cmbClassName" Grid.Column="1" Margin="4" VerticalAlignment="Center" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" SelectionChanged="cmbClassName_SelectionChanged" ></CustomCombo:AutoCompleteComboBox>

                            <TextBlock VerticalAlignment="Center"  Grid.Column="2" HorizontalAlignment="Right" Text="Floor" Margin="4"  ></TextBlock>
                            <CustomCombo:AutoCompleteComboBox x:Name="cmbFloor" Grid.Column="3" Margin="4" VerticalAlignment="Center" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" SelectionChanged="cmbFloor_SelectionChanged" ></CustomCombo:AutoCompleteComboBox>

                            <TextBlock VerticalAlignment="Center"  Grid.Column="4" HorizontalAlignment="Right" Text="Ward" Margin="4"  ></TextBlock>
                            <CustomCombo:AutoCompleteComboBox x:Name="cmbWard" Grid.Column="5" Margin="4" VerticalAlignment="Center" SelectedItemBinding="{Binding MasterListItem, Mode=OneWay}" SelectedValuePath="ID" ></CustomCombo:AutoCompleteComboBox>

                            <StackPanel Grid.Column="6" Orientation="Horizontal" HorizontalAlignment="Center">
                                <RadioButton x:Name="rbAll"  Content="All" Margin="4" VerticalAlignment="Center" GroupName="g" IsChecked="True"   ></RadioButton>
                                <RadioButton x:Name="rbCensus"  Content="Census" Margin="4" VerticalAlignment="Center" GroupName="g" ></RadioButton>
                                <RadioButton x:Name="rbNonCensus" Content="Non Census" Margin="4" VerticalAlignment="Center" GroupName="g" Visibility="Collapsed"></RadioButton>
                            </StackPanel>

                            <Button x:Name="btnSearch" Margin="4" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="7" ToolTipService.ToolTip="Search" Click="btnSearch_Click" >
                                <Button.Content>
                                    <Image Source="/PalashDynamics;component/Icons/Search_b.JPG" Width="20" ></Image>
                                </Button.Content>
                            </Button>


                        </Grid>
                    </Grp:GroupBox>
                    <!--<Grp:GroupBox Grid.Row="0" IsTabStop="False" x:Name="grpPatientInfo" Header="Bed Status Criteria" HorizontalAlignment="Stretch" Height="Auto" Margin="4" >
