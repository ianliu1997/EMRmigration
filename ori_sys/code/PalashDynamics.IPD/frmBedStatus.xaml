                                </Button.Content>
                            </Button>


                        </Grid>
                    </Grp:GroupBox>-->



                </Grid>

                <Border BorderBrush="{StaticResource TabControlDarkerBorder}" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Row="1" BorderThickness="1" Margin="4"  CornerRadius="3,3,3,3" Background="Transparent">
                    <ItemsControl x:Name="lstBedStatus" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="4" Width="Auto" Height="Auto" >
                        <!--Width="900" Height="550"-->
                    </ItemsControl>
                </Border>
            </controlsToolkit:DockPanel>
        </Border>

    </Grid>
